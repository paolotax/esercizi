<%# locals: (esercizio:) %>
<% case esercizio.status %>
<% when "draft" %>
  <span class="px-3 py-1 text-sm font-medium text-gray-600 bg-gray-100 rounded">Bozza</span>
<% when "private_status" %>
  <span class="px-3 py-1 text-sm font-medium text-yellow-800 bg-yellow-100 rounded">Privato</span>
<% when "shared" %>
  <span class="px-3 py-1 text-sm font-medium text-blue-800 bg-blue-100 rounded">Condiviso</span>
<% when "published" %>
  <span class="px-3 py-1 text-sm font-medium text-green-800 bg-green-100 rounded">Pubblicato</span>
<% end %>
