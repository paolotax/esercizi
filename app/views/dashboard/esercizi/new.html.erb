<div class="min-h-screen bg-gradient-to-b from-cream to-white dark:from-gray-900 dark:to-gray-800">
  <!-- Header compatto -->
  <div class="bg-white/80 dark:bg-gray-800/80 backdrop-blur-xl border-b border-gray-200/50 dark:border-gray-700/50 sticky top-0 z-10">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-4">
          <%= link_to dashboard_esercizi_path, class: "btn-press p-2 text-gray-400 hover:text-coral dark:hover:text-coral hover:bg-coral/10 dark:hover:bg-coral/20 rounded-xl transition" do %>
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
          <% end %>
          <div>
            <h1 class="text-2xl font-display font-bold text-gray-900 dark:text-white">Nuovo Esercizio</h1>
            <p class="text-sm text-gray-500 dark:text-gray-400">Crea un esercizio con domande di matematica</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <%= form_with model: @esercizio, url: dashboard_esercizi_path, class: "space-y-8", data: { controller: "esercizio-form", turbo: false } do |form| %>

      <!-- Sezione Info Base -->
      <div class="bg-white/80 dark:bg-gray-800/80 backdrop-blur-xl rounded-3xl shadow-lg shadow-gray-900/5 border border-gray-200/50 dark:border-gray-700/50 overflow-hidden fade-in-up">
        <div class="bg-gradient-to-r from-coral/20 to-gold/20 dark:from-coral/10 dark:to-gold/10 backdrop-blur-sm px-6 py-4 border-b border-coral/20 dark:border-coral/10">
          <h2 class="text-lg font-display font-bold text-gray-800 dark:text-white flex items-center gap-2">
            <svg class="w-5 h-5 text-coral dark:text-coral" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            Informazioni Esercizio
          </h2>
        </div>

        <div class="p-6 space-y-6">
          <!-- Titolo -->
          <div>
            <%= form.label :title, "Titolo *", class: "block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2" %>
            <%= form.text_field :title,
                placeholder: "Es: Addizioni entro il 100",
                required: true,
                autofocus: true,
                class: "input-glow w-full px-4 py-3 text-lg border-2 border-gray-200 dark:border-gray-600 rounded-2xl bg-gray-50 dark:bg-gray-700/50 text-gray-900 dark:text-white focus:outline-none focus:border-transparent transition placeholder-gray-400" %>
          </div>

          <!-- Descrizione -->
          <div>
            <%= form.label :description, "Descrizione (opzionale)", class: "block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2" %>
            <%= form.text_area :description,
                rows: 2,
                placeholder: "Breve descrizione dell'esercizio...",
                class: "input-glow w-full px-4 py-3 border-2 border-gray-200 dark:border-gray-600 rounded-2xl bg-gray-50 dark:bg-gray-700/50 text-gray-900 dark:text-white focus:outline-none focus:border-transparent transition placeholder-gray-400 resize-none" %>
          </div>

          <!-- Categoria e Difficolta -->
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <div>
              <%= form.label :category, "Categoria", class: "block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2" %>
              <%= form.select :category,
                  options_for_select([
                    ['Matematica', 'matematica'],
                    ['Italiano', 'italiano'],
                    ['Geometria', 'geometria']
                  ]),
                  { include_blank: "Seleziona categoria..." },
                  class: "input-glow w-full px-4 py-3 border-2 border-gray-200 dark:border-gray-600 rounded-2xl bg-gray-50 dark:bg-gray-700/50 text-gray-900 dark:text-white focus:outline-none focus:border-transparent transition" %>
            </div>

            <div>
              <%= form.label :difficulty, "Difficolta", class: "block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2" %>
              <%= form.select :difficulty,
                  options_for_select([
                    ['Facile', 'facile'],
                    ['Medio', 'medio'],
                    ['Difficile', 'difficile']
                  ]),
                  { include_blank: "Seleziona difficolta..." },
                  class: "input-glow w-full px-4 py-3 border-2 border-gray-200 dark:border-gray-600 rounded-2xl bg-gray-50 dark:bg-gray-700/50 text-gray-900 dark:text-white focus:outline-none focus:border-transparent transition" %>
            </div>
          </div>
        </div>
      </div>

      <!-- Azioni -->
      <div class="flex flex-col sm:flex-row justify-between items-center gap-4 pt-4 fade-in-up delay-200">
        <%= link_to "Annulla", dashboard_esercizi_path,
            class: "btn-press w-full sm:w-auto text-center px-6 py-3 text-gray-600 dark:text-gray-300 bg-white/80 dark:bg-gray-700/80 backdrop-blur-xl border border-gray-200 dark:border-gray-600 font-semibold rounded-2xl hover:bg-gray-50 dark:hover:bg-gray-600 transition" %>

        <%= form.submit "Crea Esercizio",
            class: "btn-press w-full sm:w-auto px-8 py-3 bg-coral hover:bg-coral-dark text-white font-bold text-lg rounded-2xl shadow-lg hover:shadow-xl hover:scale-[1.02] transition-all duration-200 cursor-pointer" %>
      </div>

      <p class="text-center text-sm text-gray-500 dark:text-gray-400">
        Dopo la creazione potrai aggiungere le domande nella pagina di modifica.
      </p>
    <% end %>
  </div>
</div>
