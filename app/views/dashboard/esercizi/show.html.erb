<div class="min-h-screen bg-gradient-to-b from-orange-50/50 to-white dark:from-gray-900 dark:to-gray-800">
  <!-- Header Hero -->
  <div class="relative bg-gradient-to-br from-orange-100 via-rose-100 to-pink-100 dark:from-orange-900/30 dark:via-rose-900/30 dark:to-pink-900/30">
    <div class="absolute inset-0 opacity-30">
      <svg class="w-full h-full" xmlns="http://www.w3.org/2000/svg">
        <defs>
          <pattern id="dots" width="20" height="20" patternUnits="userSpaceOnUse">
            <circle cx="2" cy="2" r="1" fill="currentColor" class="text-orange-300" opacity="0.5"/>
          </pattern>
        </defs>
        <rect width="100%" height="100%" fill="url(#dots)" />
      </svg>
    </div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <!-- Breadcrumb -->
      <nav class="mb-4">
        <%= link_to dashboard_esercizi_path, class: "inline-flex items-center gap-2 text-gray-600 dark:text-gray-300 hover:text-orange-600 dark:hover:text-orange-400 transition" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          <span>Torna alla lista</span>
        <% end %>
      </nav>

      <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-6">
        <div class="flex-1">
          <div class="flex items-center gap-3 mb-2">
            <h1 class="text-3xl md:text-4xl font-display font-bold text-gray-800 dark:text-white">
              <%= @esercizio.title %>
            </h1>
            <span class="px-3 py-1 text-sm font-bold rounded-full <%= @esercizio.published? ? 'bg-emerald-200 text-emerald-700 dark:bg-emerald-900/50 dark:text-emerald-300' : 'bg-amber-200 text-amber-700 dark:bg-amber-900/50 dark:text-amber-300' %>">
              <%= @esercizio.published? ? 'Pubblicato' : 'Bozza' %>
            </span>
          </div>

          <div class="flex flex-wrap items-center gap-4 text-gray-600 dark:text-gray-300">
            <span class="flex items-center gap-1">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              <%= @esercizio.created_at.strftime("%d/%m/%Y") %>
            </span>
            <% if @esercizio.category.present? %>
              <span class="flex items-center gap-1">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A2 2 0 013 12V7a4 4 0 014-4z"></path>
                </svg>
                <%= @esercizio.category.capitalize %>
              </span>
            <% end %>
            <span class="flex items-center gap-1">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
              </svg>
              <%= @esercizio.views_count %> visualizzazioni
            </span>
          </div>
        </div>

        <!-- Actions -->
        <div class="flex flex-wrap gap-3">
          <%= link_to edit_dashboard_esercizio_path(@esercizio),
              class: "inline-flex items-center gap-2 px-5 py-2.5 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 text-gray-700 dark:text-gray-300 font-semibold rounded-xl hover:bg-gray-50 dark:hover:bg-gray-700 transition" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            Modifica
          <% end %>

          <%= link_to dashboard_esercizio_preview_path(@esercizio), target: "_blank",
              class: "inline-flex items-center gap-2 px-5 py-2.5 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 text-gray-700 dark:text-gray-300 font-semibold rounded-xl hover:bg-gray-50 dark:hover:bg-gray-700 transition" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
            </svg>
            Anteprima
          <% end %>

          <%= button_to duplicate_dashboard_esercizio_path(@esercizio), method: :post,
              class: "inline-flex items-center gap-2 px-5 py-2.5 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 text-gray-700 dark:text-gray-300 font-semibold rounded-xl hover:bg-gray-50 dark:hover:bg-gray-700 transition" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
            </svg>
            Duplica
          <% end %>

          <% if @esercizio.published? %>
            <%= button_to dashboard_esercizio_publish_path(@esercizio), method: :delete,
                class: "inline-flex items-center gap-2 px-5 py-2.5 bg-amber-500 text-white font-semibold rounded-xl hover:bg-amber-600 transition" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"></path>
              </svg>
              Ritira
            <% end %>
          <% else %>
            <%= button_to dashboard_esercizio_publish_path(@esercizio), method: :post,
                class: "inline-flex items-center gap-2 px-5 py-2.5 bg-emerald-500 text-white font-semibold rounded-xl hover:bg-emerald-600 transition" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              Pubblica
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Main Content -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Descrizione -->
        <% if @esercizio.description.present? %>
          <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-sm border border-gray-200 dark:border-gray-700 p-6">
            <h3 class="text-lg font-display font-bold text-gray-900 dark:text-white mb-3">Descrizione</h3>
            <p class="text-gray-600 dark:text-gray-400"><%= @esercizio.description %></p>
          </div>
        <% end %>

        <!-- Domande -->
        <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-sm border border-gray-200 dark:border-gray-700 overflow-hidden">
          <div class="px-6 py-4 border-b border-gray-100 dark:border-gray-700 flex items-center justify-between">
            <h3 class="text-lg font-display font-bold text-gray-900 dark:text-white">
              Domande (<%= @esercizio.questions.count %>)
            </h3>
            <%= link_to edit_dashboard_esercizio_path(@esercizio),
                class: "text-orange-600 dark:text-orange-400 hover:text-orange-700 font-medium text-sm" do %>
              Gestisci domande
            <% end %>
          </div>

          <% if @esercizio.questions.any? %>
            <div class="divide-y divide-gray-100 dark:divide-gray-700">
              <% @esercizio.questions.order(:position).each_with_index do |question, index| %>
                <div class="p-4 hover:bg-gray-50 dark:hover:bg-gray-700/50 transition">
                  <div class="flex items-center gap-4">
                    <span class="flex-shrink-0 w-8 h-8 flex items-center justify-center bg-orange-100 dark:bg-orange-900/30 text-orange-600 dark:text-orange-400 text-sm font-bold rounded-lg">
                      <%= index + 1 %>
                    </span>

                    <% type = question.questionable_type.downcase %>
                    <% colors = { "addizione" => "blue", "sottrazione" => "red", "moltiplicazione" => "green", "divisione" => "orange", "abaco" => "purple" } %>
                    <% color = colors[type] || "gray" %>

                    <span class="px-2.5 py-1 text-xs font-bold rounded-full bg-<%= color %>-100 dark:bg-<%= color %>-900/30 text-<%= color %>-700 dark:text-<%= color %>-300">
                      <%= question.questionable_type %>
                    </span>

                    <span class="text-gray-600 dark:text-gray-400">
                      <% data = question.questionable.data.with_indifferent_access rescue {} %>
                      <% case type %>
                      <% when "addizione" %>
                        <%= (data[:addends] || []).join(" + ") %> = ?
                      <% when "sottrazione" %>
                        <%= data[:minuend] %> − <%= data[:subtrahend] %> = ?
                      <% when "moltiplicazione" %>
                        <%= data[:multiplicand] %> × <%= data[:multiplier] %> = ?
                      <% when "divisione" %>
                        <%= data[:dividend] %> ÷ <%= data[:divisor] %> = ?
                      <% when "abaco" %>
                        Valore: <%= data[:value] %>
                      <% end %>
                    </span>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="p-12 text-center">
              <div class="w-16 h-16 bg-orange-100 dark:bg-orange-900/30 rounded-2xl flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <p class="text-gray-500 dark:text-gray-400 mb-4">Nessuna domanda aggiunta</p>
              <%= link_to edit_dashboard_esercizio_path(@esercizio),
                  class: "inline-flex items-center gap-2 px-4 py-2 bg-orange-500 text-white font-semibold rounded-xl hover:bg-orange-600 transition" do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                Aggiungi domande
              <% end %>
            </div>
          <% end %>
        </div>

        <!-- Tentativi recenti -->
        <% if @attempts && @attempts.any? %>
          <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-sm border border-gray-200 dark:border-gray-700 overflow-hidden">
            <div class="px-6 py-4 border-b border-gray-100 dark:border-gray-700">
              <h3 class="text-lg font-display font-bold text-gray-900 dark:text-white">Ultimi Tentativi</h3>
            </div>

            <div class="overflow-x-auto">
              <table class="w-full">
                <thead class="bg-gray-50 dark:bg-gray-700/50">
                  <tr>
                    <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase">Studente</th>
                    <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase">Data</th>
                    <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase">Punteggio</th>
                    <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase">Tempo</th>
                  </tr>
                </thead>
                <tbody class="divide-y divide-gray-100 dark:divide-gray-700">
                  <% @attempts.each do |attempt| %>
                    <tr class="hover:bg-gray-50 dark:hover:bg-gray-700/50">
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-white">
                        <%= attempt.student_display_name || "Anonimo" %>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
                        <%= attempt.created_at.strftime("%d/%m %H:%M") %>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap">
                        <% score = attempt.score rescue nil %>
                        <% if score %>
                          <span class="px-2.5 py-1 text-sm font-bold rounded-full <%= score >= 70 ? 'bg-emerald-100 text-emerald-700 dark:bg-emerald-900/30 dark:text-emerald-300' : score >= 50 ? 'bg-amber-100 text-amber-700 dark:bg-amber-900/30 dark:text-amber-300' : 'bg-red-100 text-red-700 dark:bg-red-900/30 dark:text-red-300' %>">
                              <%= score %>%
                            </span>
                        <% else %>
                          <span class="text-gray-400">-</span>
                        <% end %>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
                        <%= attempt.formatted_duration rescue "-" %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Sidebar -->
      <div class="space-y-6">
        <!-- Link Condivisione -->
        <% if @esercizio.share_token.present? %>
          <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-sm border border-gray-200 dark:border-gray-700 p-6">
            <h3 class="text-lg font-display font-bold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
              <svg class="w-5 h-5 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"></path>
              </svg>
              Condivisione
            </h3>

            <div class="space-y-4">
              <div>
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Link pubblico</label>
                <div class="flex gap-2">
                  <input type="text" readonly
                         value="<%= public_esercizio_url(share_token: @esercizio.share_token) %>"
                         id="share-link"
                         class="flex-1 px-3 py-2 text-sm bg-gray-50 dark:bg-gray-700 border border-gray-200 dark:border-gray-600 rounded-xl text-gray-600 dark:text-gray-400"
                         onclick="this.select()">
                  <button onclick="navigator.clipboard.writeText(document.getElementById('share-link').value); this.querySelector('span').textContent='Copiato!'; setTimeout(() => this.querySelector('span').textContent='Copia', 2000)"
                          class="px-4 py-2 bg-orange-500 text-white font-semibold rounded-xl hover:bg-orange-600 transition">
                    <span>Copia</span>
                  </button>
                </div>
              </div>

              <%= link_to public_esercizio_path(share_token: @esercizio.share_token), target: "_blank",
                  class: "block w-full text-center px-4 py-2.5 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 font-semibold rounded-xl hover:bg-gray-200 dark:hover:bg-gray-600 transition" do %>
                Apri Link Pubblico
              <% end %>
            </div>
          </div>
        <% end %>

        <!-- Statistiche -->
        <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-sm border border-gray-200 dark:border-gray-700 p-6">
          <h3 class="text-lg font-display font-bold text-gray-900 dark:text-white mb-4">Statistiche</h3>

          <div class="space-y-4">
            <div class="p-4 bg-blue-50 dark:bg-blue-900/20 rounded-xl">
              <div class="text-2xl font-display font-bold text-blue-600 dark:text-blue-400"><%= @esercizio.questions.count %></div>
              <div class="text-sm text-gray-600 dark:text-gray-400">Domande</div>
            </div>

            <div class="p-4 bg-purple-50 dark:bg-purple-900/20 rounded-xl">
              <div class="text-2xl font-display font-bold text-purple-600 dark:text-purple-400"><%= @esercizio.views_count %></div>
              <div class="text-sm text-gray-600 dark:text-gray-400">Visualizzazioni</div>
            </div>

            <div class="p-4 bg-emerald-50 dark:bg-emerald-900/20 rounded-xl">
              <div class="text-2xl font-display font-bold text-emerald-600 dark:text-emerald-400"><%= @esercizio.esercizio_attempts.count %></div>
              <div class="text-sm text-gray-600 dark:text-gray-400">Tentativi totali</div>
            </div>
          </div>
        </div>

        <!-- Dettagli -->
        <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-sm border border-gray-200 dark:border-gray-700 p-6">
          <h3 class="text-lg font-display font-bold text-gray-900 dark:text-white mb-4">Dettagli</h3>

          <dl class="space-y-3 text-sm">
            <div class="flex justify-between">
              <dt class="text-gray-500 dark:text-gray-400">ID</dt>
              <dd class="text-gray-900 dark:text-white font-mono"><%= @esercizio.id %></dd>
            </div>
            <div class="flex justify-between">
              <dt class="text-gray-500 dark:text-gray-400">Slug</dt>
              <dd class="text-gray-900 dark:text-white font-mono text-xs"><%= @esercizio.slug %></dd>
            </div>
            <% if @esercizio.difficulty.present? %>
              <div class="flex justify-between">
                <dt class="text-gray-500 dark:text-gray-400">Difficolta</dt>
                <dd class="text-gray-900 dark:text-white"><%= @esercizio.difficulty.capitalize %></dd>
              </div>
            <% end %>
            <% if @esercizio.tags.present? && @esercizio.tags.any? %>
              <div>
                <dt class="text-gray-500 dark:text-gray-400 mb-2">Tags</dt>
                <dd class="flex flex-wrap gap-1">
                  <% @esercizio.tags.each do |tag| %>
                    <span class="px-2 py-0.5 text-xs font-medium bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-full">
                      <%= tag %>
                    </span>
                  <% end %>
                </dd>
              </div>
            <% end %>
          </dl>
        </div>
      </div>
    </div>
  </div>
</div>
