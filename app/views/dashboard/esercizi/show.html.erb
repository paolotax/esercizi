<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <div class="bg-white shadow">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="py-6">
        <div class="flex items-center justify-between">
          <div class="flex-1 min-w-0">
            <h1 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate">
              <%= @esercizio.title %>
            </h1>
            <div class="mt-1 flex flex-col sm:flex-row sm:flex-wrap sm:mt-0 sm:space-x-6">
              <div class="mt-2 flex items-center text-sm text-gray-500">
                <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
                </svg>
                Creato <%= @esercizio.created_at.strftime("%d/%m/%Y") %>
              </div>
              <% if @esercizio.category.present? %>
                <div class="mt-2 flex items-center text-sm text-gray-500">
                  <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M7 3a1 1 0 000 2h6a1 1 0 100-2H7zM4 7a1 1 0 011-1h10a1 1 0 110 2H5a1 1 0 01-1-1zM2 11a2 2 0 012-2h12a2 2 0 012 2v4a2 2 0 01-2 2H4a2 2 0 01-2-2v-4z" />
                  </svg>
                  <%= @esercizio.category.capitalize %>
                </div>
              <% end %>
              <div class="mt-2 flex items-center text-sm text-gray-500">
                <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M10 12a2 2 0 100-4 2 2 0 000 4z" />
                  <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd" />
                </svg>
                <%= @esercizio.views_count %> visualizzazioni
              </div>
              <% if @esercizio.published? %>
                <div class="mt-2 flex items-center text-sm text-green-600">
                  <svg class="flex-shrink-0 mr-1.5 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  Pubblicato
                </div>
              <% else %>
                <div class="mt-2 flex items-center text-sm text-yellow-600">
                  <svg class="flex-shrink-0 mr-1.5 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                  </svg>
                  Bozza
                </div>
              <% end %>
            </div>
          </div>
          <div class="mt-5 flex lg:mt-0 lg:ml-4 space-x-3">
            <%= link_to "Modifica", edit_dashboard_esercizio_path(@esercizio),
                        class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>

            <%= link_to "Anteprima", preview_dashboard_esercizio_path(@esercizio), target: "_blank",
                        class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>

            <%= link_to "Duplica", duplicate_dashboard_esercizio_path(@esercizio), method: :post,
                        class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>

            <% if @esercizio.published? %>
              <%= button_to "Ritira", dashboard_esercizio_path(@esercizio), method: :patch,
                          params: { esercizio: { published_at: nil } },
                          class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-yellow-600 hover:bg-yellow-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500" %>
            <% else %>
              <%= button_to "Pubblica", dashboard_esercizio_path(@esercizio), method: :patch,
                          params: { esercizio: { published_at: Time.current } },
                          class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Main Content -->
      <div class="lg:col-span-2">
        <!-- Descrizione -->
        <% if @esercizio.description.present? %>
          <div class="bg-white shadow overflow-hidden rounded-lg mb-6">
            <div class="px-4 py-5 sm:p-6">
              <h3 class="text-lg leading-6 font-medium text-gray-900 mb-2">
                Descrizione
              </h3>
              <p class="text-gray-600"><%= @esercizio.description %></p>
            </div>
          </div>
        <% end %>

        <!-- Operazioni -->
        <div class="bg-white shadow overflow-hidden rounded-lg">
          <div class="px-4 py-5 sm:p-6">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-lg leading-6 font-medium text-gray-900">
                Operazioni (<%= @esercizio.operations.count %>)
              </h3>
              <%= link_to "Gestisci Operazioni", edit_dashboard_esercizio_path(@esercizio),
                          class: "text-sm text-indigo-600 hover:text-indigo-500" %>
            </div>

            <% if @esercizio.operations.any? %>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <% @esercizio.operations.each_with_index do |operation, index| %>
                  <div class="border border-gray-200 rounded-lg p-4">
                    <div class="flex justify-between items-start mb-2">
                      <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-gray-100 text-gray-800">
                        #<%= index + 1 %> - <%= operation['type'].capitalize %>
                      </span>
                    </div>
                    <div class="operation-preview text-sm">
                      <%= EsercizioRenderer.new(@esercizio, self).render_operation(operation).html_safe %>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <p class="text-gray-500 text-center py-8">
                Nessuna operazione aggiunta.
                <%= link_to "Aggiungi operazioni", edit_dashboard_esercizio_path(@esercizio), class: "text-indigo-600 hover:text-indigo-500" %>
              </p>
            <% end %>
          </div>
        </div>

        <!-- Statistiche Tentativi -->
        <% if @attempts.any? %>
          <div class="bg-white shadow overflow-hidden rounded-lg mt-6">
            <div class="px-4 py-5 sm:p-6">
              <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">
                Ultimi Tentativi
              </h3>
              <div class="overflow-hidden">
                <table class="min-w-full divide-y divide-gray-200">
                  <thead class="bg-gray-50">
                    <tr>
                      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Studente
                      </th>
                      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Data
                      </th>
                      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Punteggio
                      </th>
                      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Tempo
                      </th>
                    </tr>
                  </thead>
                  <tbody class="bg-white divide-y divide-gray-200">
                    <% @attempts.each do |attempt| %>
                      <tr>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                          <%= attempt.student_display_name || "Anonimo" %>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                          <%= attempt.created_at.strftime("%d/%m %H:%M") %>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                          <%= attempt.score || "-" %>%
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                          <%= attempt.formatted_duration || "-" %>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Sidebar -->
      <div class="lg:col-span-1">
        <!-- Link Condivisione -->
        <div class="bg-white shadow overflow-hidden rounded-lg mb-6">
          <div class="px-4 py-5 sm:p-6">
            <h3 class="text-lg leading-6 font-medium text-gray-900 mb-3">
              Condivisione
            </h3>
            <div class="space-y-3">
              <div>
                <label class="block text-sm font-medium text-gray-700">Link pubblico</label>
                <div class="mt-1 flex rounded-md shadow-sm">
                  <input type="text" readonly value="<%= public_esercizio_url(share_token: @esercizio.share_token) %>"
                         class="flex-1 min-w-0 block w-full px-3 py-2 rounded-none rounded-l-md text-sm border-gray-300 bg-gray-50">
                  <button onclick="copyLink()"
                          class="inline-flex items-center px-3 rounded-r-md border border-l-0 border-gray-300 bg-gray-50 text-gray-500 sm:text-sm hover:bg-gray-100">
                    <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                      <path d="M8 3a1 1 0 011-1h2a1 1 0 110 2H9a1 1 0 01-1-1z" />
                      <path d="M6 3a2 2 0 00-2 2v11a2 2 0 002 2h8a2 2 0 002-2V5a2 2 0 00-2-2 3 3 0 01-3 3H9a3 3 0 01-3-3z" />
                    </svg>
                  </button>
                </div>
              </div>
              <%= link_to "Apri Link Pubblico", public_esercizio_path(share_token: @esercizio.share_token),
                          target: "_blank", class: "block w-full text-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
            </div>
          </div>
        </div>

        <!-- Metadata -->
        <div class="bg-white shadow overflow-hidden rounded-lg">
          <div class="px-4 py-5 sm:p-6">
            <h3 class="text-lg leading-6 font-medium text-gray-900 mb-3">
              Dettagli
            </h3>
            <dl class="space-y-3">
              <div>
                <dt class="text-sm font-medium text-gray-500">ID</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @esercizio.id %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Slug</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @esercizio.slug %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Token condivisione</dt>
                <dd class="mt-1 text-sm text-gray-900 font-mono text-xs"><%= @esercizio.share_token %></dd>
              </div>
              <% if @esercizio.tags.any? %>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Tags</dt>
                  <dd class="mt-1">
                    <% @esercizio.tags.each do |tag| %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 mr-1">
                        <%= tag %>
                      </span>
                    <% end %>
                  </dd>
                </div>
              <% end %>
              <div>
                <dt class="text-sm font-medium text-gray-500">Difficolt√†</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @esercizio.difficulty || "Non specificata" %></dd>
              </div>
            </dl>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
function copyLink() {
  const url = '<%= public_esercizio_url(share_token: @esercizio.share_token) %>';
  navigator.clipboard.writeText(url).then(function() {
    alert('Link copiato negli appunti!');
  });
}
</script>
