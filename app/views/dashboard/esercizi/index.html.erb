<div class="min-h-screen bg-gradient-to-b from-cream to-white dark:from-gray-900 dark:to-gray-800">
  <!-- Header luminoso -->
  <div class="relative overflow-hidden bg-gradient-to-br from-coral/20 via-rose-100 to-gold/30 dark:from-coral/10 dark:via-rose-900/30 dark:to-gold/10 backdrop-blur-sm">
    <div class="absolute inset-0 opacity-30">
      <svg class="w-full h-full" xmlns="http://www.w3.org/2000/svg">
        <defs>
          <pattern id="circles" width="30" height="30" patternUnits="userSpaceOnUse">
            <circle cx="15" cy="15" r="2" fill="currentColor" class="text-orange-300" opacity="0.5"/>
          </pattern>
        </defs>
        <rect width="100%" height="100%" fill="url(#circles)" />
      </svg>
    </div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
      <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-6">
        <div>
          <h1 class="text-3xl md:text-4xl font-display font-bold text-gray-800 dark:text-white tracking-tight">
            I Miei Esercizi
          </h1>
          <p class="mt-2 text-base text-gray-600 dark:text-gray-300">
            Crea, gestisci e condividi esercizi di matematica
          </p>
        </div>

        <%= link_to new_dashboard_esercizio_path,
            class: "btn-press group inline-flex items-center gap-3 px-6 py-3 bg-white/80 dark:bg-gray-800/80 backdrop-blur-xl text-coral dark:text-coral font-bold rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105 border border-coral/30 dark:border-coral/20" do %>
          <span class="flex items-center justify-center w-9 h-9 bg-coral/20 dark:bg-coral/30 rounded-xl group-hover:rotate-90 transition-transform duration-300">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 4v16m8-8H4"></path>
            </svg>
          </span>
          <span>Nuovo Esercizio</span>
        <% end %>
      </div>

      <!-- Stats rapide -->
      <div class="mt-8 grid grid-cols-2 md:grid-cols-4 gap-4">
        <div class="bg-white/80 dark:bg-gray-800/80 backdrop-blur-xl rounded-2xl p-4 border border-coral/20 dark:border-gray-700">
          <div class="text-2xl font-display font-bold text-gray-800 dark:text-white"><%= @esercizi.total_count rescue @esercizi.count %></div>
          <div class="text-sm text-gray-500 dark:text-gray-400">Totale esercizi</div>
        </div>
        <div class="bg-white/80 dark:bg-gray-800/80 backdrop-blur-xl rounded-2xl p-4 border border-coral/20 dark:border-gray-700">
          <div class="text-2xl font-display font-bold text-gray-800 dark:text-white"><%= @esercizi.select(&:published?).count rescue 0 %></div>
          <div class="text-sm text-gray-500 dark:text-gray-400">Pubblicati</div>
        </div>
        <div class="bg-white/80 dark:bg-gray-800/80 backdrop-blur-xl rounded-2xl p-4 border border-coral/20 dark:border-gray-700">
          <div class="text-2xl font-display font-bold text-gray-800 dark:text-white"><%= @esercizi.sum { |e| e.questions.count rescue 0 } %></div>
          <div class="text-sm text-gray-500 dark:text-gray-400">Domande totali</div>
        </div>
        <div class="bg-white/80 dark:bg-gray-800/80 backdrop-blur-xl rounded-2xl p-4 border border-coral/20 dark:border-gray-700">
          <div class="text-2xl font-display font-bold text-gray-800 dark:text-white"><%= @esercizi.sum { |e| e.views_count.to_i } %></div>
          <div class="text-sm text-gray-500 dark:text-gray-400">Visualizzazioni</div>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Filtri -->
    <div class="mb-8 flex flex-wrap gap-3">
      <%= form_with url: dashboard_esercizi_path, method: :get, local: true, class: "contents" do %>
        <div class="flex-1 min-w-[200px]">
          <%= text_field_tag :search, params[:search],
              placeholder: "Cerca esercizi...",
              class: "input-glow w-full px-4 py-3 bg-white/80 dark:bg-gray-800/80 backdrop-blur-xl border-2 border-gray-200 dark:border-gray-600 rounded-2xl focus:outline-none focus:border-transparent transition text-gray-900 dark:text-gray-100" %>
        </div>

        <%= select_tag :category,
            options_for_select([
              ['Tutte le categorie', ''],
              ['Matematica', 'matematica'],
              ['Italiano', 'italiano'],
              ['Geometria', 'geometria']
            ], params[:category]),
            onchange: "this.form.submit()",
            class: "px-4 py-3 bg-white/80 dark:bg-gray-800/80 backdrop-blur-xl border-2 border-gray-200 dark:border-gray-600 rounded-2xl focus:ring-2 focus:ring-coral/30 text-gray-900 dark:text-gray-100" %>

        <%= select_tag :status,
            options_for_select([
              ['Tutti gli stati', ''],
              ['Pubblicati', 'published'],
              ['Bozze', 'draft']
            ], params[:status]),
            onchange: "this.form.submit()",
            class: "px-4 py-3 bg-white/80 dark:bg-gray-800/80 backdrop-blur-xl border-2 border-gray-200 dark:border-gray-600 rounded-2xl focus:ring-2 focus:ring-coral/30 text-gray-900 dark:text-gray-100" %>
      <% end %>
    </div>

    <!-- Lista Esercizi -->
    <% if @esercizi.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">
        <% @esercizi.each do |esercizio| %>
          <div class="card-lift group">
            <div class="bg-white/80 dark:bg-gray-800/80 backdrop-blur-xl rounded-3xl shadow-lg shadow-gray-900/5 border border-gray-200/50 dark:border-gray-700/50 overflow-hidden hover:shadow-xl hover:border-coral/30 dark:hover:border-coral/20 transition-all">
              <!-- Card Header colorato -->
              <div class="relative h-20 bg-gradient-to-br <%= esercizio.published? ? 'from-emerald-100 to-teal-100 dark:from-emerald-900/30 dark:to-teal-900/30' : 'from-amber-100 to-orange-100 dark:from-amber-900/30 dark:to-orange-900/30' %> p-4">
                <div class="absolute top-3 right-3">
                  <span class="px-3 py-1 text-xs font-bold rounded-full <%= esercizio.published? ? 'bg-emerald-200 text-emerald-700 dark:bg-emerald-900/50 dark:text-emerald-300' : 'bg-amber-200 text-amber-700 dark:bg-amber-900/50 dark:text-amber-300' %>">
                    <%= esercizio.published? ? 'PUBBLICATO' : 'BOZZA' %>
                  </span>
                </div>
                <div class="absolute bottom-3 left-4">
                  <span class="text-gray-600 dark:text-gray-300 text-sm font-medium">
                    <%= esercizio.category&.capitalize || 'Senza categoria' %>
                  </span>
                </div>
              </div>

              <!-- Card Body -->
              <div class="p-5">
                <h3 class="text-lg font-display font-bold text-gray-900 dark:text-white mb-2 line-clamp-1">
                  <%= link_to esercizio.title, dashboard_esercizio_path(esercizio),
                      class: "hover:text-orange-600 dark:hover:text-orange-400 transition" %>
                </h3>

                <% if esercizio.description.present? %>
                  <p class="text-gray-600 dark:text-gray-400 text-sm mb-4 line-clamp-2">
                    <%= esercizio.description %>
                  </p>
                <% end %>

                <!-- Stats inline -->
                <div class="flex items-center gap-4 text-sm text-gray-500 dark:text-gray-400 mb-4">
                  <span class="flex items-center gap-1">
                    <svg class="w-4 h-4 text-coral" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <%= esercizio.questions.count %> domande
                  </span>
                  <span class="flex items-center gap-1">
                    <svg class="w-4 h-4 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                    </svg>
                    <%= esercizio.views_count %>
                  </span>
                </div>

                <!-- Actions -->
                <div class="flex items-center gap-2 pt-4 border-t border-gray-100 dark:border-gray-700">
                  <%= link_to edit_dashboard_esercizio_path(esercizio),
                      class: "flex-1 text-center px-4 py-2.5 bg-sky-50 dark:bg-sky-900/30 text-sky-700 dark:text-sky-300 font-semibold rounded-xl hover:bg-sky-100 dark:hover:bg-sky-900/50 transition" do %>
                    Modifica
                  <% end %>

                  <% if esercizio.share_token.present? %>
                    <%= link_to public_esercizio_path(share_token: esercizio.share_token),
                        target: "_blank",
                        class: "p-2.5 bg-emerald-50 dark:bg-emerald-900/30 text-emerald-600 dark:text-emerald-400 rounded-xl hover:bg-emerald-100 dark:hover:bg-emerald-900/50 transition",
                        title: "Visualizza" do %>
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                      </svg>
                    <% end %>
                  <% end %>

                  <%= button_to duplicate_dashboard_esercizio_path(esercizio),
                      method: :post,
                      class: "p-2.5 bg-purple-50 dark:bg-purple-900/30 text-purple-600 dark:text-purple-400 rounded-xl hover:bg-purple-100 dark:hover:bg-purple-900/50 transition",
                      title: "Duplica" do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                    </svg>
                  <% end %>
                </div>
              </div>

              <!-- Share link footer -->
              <% if esercizio.share_token.present? && esercizio.published? %>
                <div class="px-5 py-3 bg-gray-50 dark:bg-gray-900 border-t border-gray-100 dark:border-gray-700">
                  <div class="flex items-center gap-2">
                    <input type="text"
                           value="<%= public_esercizio_url(share_token: esercizio.share_token) %>"
                           readonly
                           class="flex-1 px-3 py-1.5 text-xs bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-xl text-gray-600 dark:text-gray-400"
                           onclick="this.select()">
                    <button onclick="navigator.clipboard.writeText(this.previousElementSibling.value); this.innerHTML='<svg class=\'w-4 h-4 text-emerald-500\' fill=\'none\' stroke=\'currentColor\' viewBox=\'0 0 24 24\'><path stroke-linecap=\'round\' stroke-linejoin=\'round\' stroke-width=\'2\' d=\'M5 13l4 4L19 7\'></path></svg>'; setTimeout(() => this.innerHTML='<svg class=\'w-4 h-4\' fill=\'none\' stroke=\'currentColor\' viewBox=\'0 0 24 24\'><path stroke-linecap=\'round\' stroke-linejoin=\'round\' stroke-width=\'2\' d=\'M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z\'></path></svg>', 2000)"
                            class="p-1.5 text-gray-500 hover:text-orange-600 transition">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                      </svg>
                    </button>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Paginazione -->
      <% if @pagy && @pagy.pages > 1 %>
        <div class="mt-12 flex justify-center">
          <nav class="flex items-center gap-2">
            <% if @pagy.prev %>
              <%= link_to dashboard_esercizi_path(page: @pagy.prev),
                  class: "px-4 py-2 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-xl text-gray-700 dark:text-gray-300 hover:border-orange-300 transition" do %>
                &larr; Prec
              <% end %>
            <% end %>

            <span class="px-4 py-2 bg-orange-500 text-white font-bold rounded-xl">
              <%= @pagy.page %> / <%= @pagy.pages %>
            </span>

            <% if @pagy.next %>
              <%= link_to dashboard_esercizi_path(page: @pagy.next),
                  class: "px-4 py-2 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-xl text-gray-700 dark:text-gray-300 hover:border-orange-300 transition" do %>
                Succ &rarr;
              <% end %>
            <% end %>
          </nav>
        </div>
      <% end %>

    <% else %>
      <!-- Empty State -->
      <div class="text-center py-20">
        <div class="relative inline-block">
          <div class="w-28 h-28 bg-gradient-to-br from-orange-200 to-rose-200 dark:from-orange-900/50 dark:to-rose-900/50 rounded-3xl flex items-center justify-center mx-auto mb-6 shadow-md">
            <svg class="w-14 h-14 text-orange-600 dark:text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
          </div>
        </div>
        <h3 class="text-2xl font-display font-bold text-gray-900 dark:text-white mb-2">Nessun esercizio ancora</h3>
        <p class="text-gray-600 dark:text-gray-400 mb-8 max-w-md mx-auto">
          Inizia creando il tuo primo esercizio con domande di matematica.
        </p>
        <%= link_to new_dashboard_esercizio_path,
            class: "btn-press inline-flex items-center gap-3 px-8 py-4 bg-coral hover:bg-coral-dark text-white font-bold text-lg rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105" do %>
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 4v16m8-8H4"></path>
          </svg>
          Crea il primo esercizio
        <% end %>
      </div>
    <% end %>
  </div>
</div>
