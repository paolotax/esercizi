<%
  # Helper method per i colori
  bg_color = case operation['type']
    when 'addizione' then 'bg-blue-50'
    when 'sottrazione' then 'bg-red-50'
    when 'moltiplicazione' then 'bg-green-50'
    when 'abaco' then 'bg-purple-50'
    else 'bg-gray-50'
  end
%>
<div class="operation-item <%= bg_color %> p-4 rounded-lg border-2 border-dashed border-gray-300 cursor-pointer hover:shadow-lg transition-shadow"
     data-operation-id="<%= operation['id'] %>"
     data-operation-type="<%= operation['type'] %>"
     draggable="true">

  <div class="flex justify-between items-start mb-3">
    <div class="flex items-center gap-2">
      <!-- Icona per tipo operazione -->
      <% case operation['type'] %>
      <% when 'addizione' %>
        <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
        </svg>
      <% when 'sottrazione' %>
        <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"></path>
        </svg>
      <% when 'moltiplicazione' %>
        <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      <% when 'abaco' %>
        <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
        </svg>
      <% end %>
      <span class="font-semibold text-gray-700"><%= operation['type'].capitalize %></span>
    </div>

    <!-- Pulsante elimina -->
    <button class="text-red-500 hover:text-red-700 transition"
            data-action="click->esercizio-builder#removeOperation"
            data-operation-id="<%= operation['id'] %>">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
      </svg>
    </button>
  </div>

  <!-- Contenuto dell'operazione -->
  <div class="space-y-2">
    <% config = operation['config'] || {} %>

    <!-- Titolo se presente -->
    <% if config['title'].present? %>
      <div class="text-sm font-medium text-gray-800">
        ğŸ“ <%= config['title'] %>
      </div>
    <% end %>

    <!-- Operazione -->
    <% if config['operation_text'].present? %>
      <div class="font-mono text-lg text-gray-700 bg-white px-3 py-2 rounded border border-gray-200">
        <%= config['operation_text'] %>
      </div>
    <% elsif config['values'].present? && config['values'].any? %>
      <div class="font-mono text-lg text-gray-700">
        <% case operation['type'] %>
        <% when 'addizione' %>
          <%= config['values'].join(' + ') %>
        <% when 'sottrazione' %>
          <%= config['values'].join(' - ') %>
        <% when 'moltiplicazione' %>
          <%= "#{config['multiplicand']} Ã— #{config['multiplier']}" if config['multiplicand'] && config['multiplier'] %>
        <% when 'abaco' %>
          <%= config['value'] || config['values']&.first %>
        <% end %>
      </div>
    <% else %>
      <div class="text-sm text-gray-500 italic">
        Operazione vuota - clicca per configurare
      </div>
    <% end %>

    <!-- Opzioni attive -->
    <div class="flex flex-wrap gap-1 mt-2">
      <% if config['show_toolbar'] == true %>
        <span class="inline-flex items-center px-2 py-1 text-xs bg-gray-200 text-gray-600 rounded">
          ğŸ› ï¸ Toolbar
        </span>
      <% end %>

      <% if config['show_solution'] == true %>
        <span class="inline-flex items-center px-2 py-1 text-xs bg-green-200 text-green-700 rounded">
          âœ“ Risultato
        </span>
      <% end %>

      <% if config['show_carry'] == true || config['show_borrow'] == true %>
        <span class="inline-flex items-center px-2 py-1 text-xs bg-blue-200 text-blue-700 rounded">
          â†—ï¸ Riporti
        </span>
      <% end %>

      <% if config['show_addends'] == true %>
        <span class="inline-flex items-center px-2 py-1 text-xs bg-yellow-200 text-yellow-700 rounded">
          ğŸ“Š Valori
        </span>
      <% end %>

      <% if config['show_partial_products'] == true %>
        <span class="inline-flex items-center px-2 py-1 text-xs bg-purple-200 text-purple-700 rounded">
          ğŸ“‹ Parziali
        </span>
      <% end %>
    </div>
  </div>

  <!-- Click hint -->
  <div class="text-xs text-gray-400 text-center mt-3 pt-2 border-t border-gray-200">
    Clicca per modificare â€¢ Trascina per riordinare
  </div>
</div>