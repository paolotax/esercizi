<%# locals: (question:, esercizio:) %>
<%= turbo_frame_tag dom_id(question) do %>
  <div class="p-4 bg-orange-50 dark:bg-orange-900/20 border-l-4 border-orange-500">
    <%= form_with model: question, url: dashboard_esercizio_question_path(esercizio, question), method: :patch, class: "space-y-4" do |form| %>
      <div class="flex items-center justify-between">
        <h4 class="font-display font-bold text-gray-900 dark:text-white">Modifica <%= question.questionable_type %></h4>
        <%= link_to edit_dashboard_esercizio_path(esercizio),
            class: "text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-200",
            data: { turbo_frame: "_top" } do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        <% end %>
      </div>

      <% type = question.questionable_type.downcase %>
      <% data = question.questionable.data.with_indifferent_access %>

      <% case type %>
      <% when "addizione" %>
        <div class="grid grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-1">Primo addendo</label>
            <input type="text" name="data[addends][]" value="<%= data[:addends]&.first %>"
                   class="w-full px-3 py-2 border border-gray-200 dark:border-gray-600 rounded-2xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-orange-300 focus:border-transparent transition">
          </div>
          <div>
            <label class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-1">Secondo addendo</label>
            <input type="text" name="data[addends][]" value="<%= data[:addends]&.second %>"
                   class="w-full px-3 py-2 border border-gray-200 dark:border-gray-600 rounded-2xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-orange-300 focus:border-transparent transition">
          </div>
        </div>

      <% when "sottrazione" %>
        <div class="grid grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-1">Minuendo</label>
            <input type="text" name="data[minuend]" value="<%= data[:minuend] %>"
                   class="w-full px-3 py-2 border border-gray-200 dark:border-gray-600 rounded-2xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-orange-300 focus:border-transparent transition">
          </div>
          <div>
            <label class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-1">Sottraendo</label>
            <input type="text" name="data[subtrahend]" value="<%= data[:subtrahend] %>"
                   class="w-full px-3 py-2 border border-gray-200 dark:border-gray-600 rounded-2xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-orange-300 focus:border-transparent transition">
          </div>
        </div>

      <% when "moltiplicazione" %>
        <div class="grid grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-1">Moltiplicando</label>
            <input type="text" name="data[multiplicand]" value="<%= data[:multiplicand] %>"
                   class="w-full px-3 py-2 border border-gray-200 dark:border-gray-600 rounded-2xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-orange-300 focus:border-transparent transition">
          </div>
          <div>
            <label class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-1">Moltiplicatore</label>
            <input type="text" name="data[multiplier]" value="<%= data[:multiplier] %>"
                   class="w-full px-3 py-2 border border-gray-200 dark:border-gray-600 rounded-2xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-orange-300 focus:border-transparent transition">
          </div>
        </div>

      <% when "divisione" %>
        <div class="grid grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-1">Dividendo</label>
            <input type="text" name="data[dividend]" value="<%= data[:dividend] %>"
                   class="w-full px-3 py-2 border border-gray-200 dark:border-gray-600 rounded-2xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-orange-300 focus:border-transparent transition">
          </div>
          <div>
            <label class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-1">Divisore</label>
            <input type="text" name="data[divisor]" value="<%= data[:divisor] %>"
                   class="w-full px-3 py-2 border border-gray-200 dark:border-gray-600 rounded-2xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-orange-300 focus:border-transparent transition">
          </div>
        </div>

      <% when "abaco" %>
        <div>
          <label class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-1">Valore</label>
          <input type="number" name="data[value]" value="<%= data[:value] %>"
                 class="w-full px-3 py-2 border border-gray-200 dark:border-gray-600 rounded-2xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-orange-300 focus:border-transparent transition">
        </div>
      <% end %>

      <% unless type == "abaco" %>
        <!-- Layout -->
        <div>
          <label class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-1">Layout</label>
          <select name="data[grid_style]"
                  class="w-full px-3 py-2 border border-gray-200 dark:border-gray-600 rounded-2xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-orange-300 focus:border-transparent transition text-sm">
            <option value="quaderno" <%= 'selected' if data[:grid_style].to_s != 'column' %>>Quaderno</option>
            <option value="column" <%= 'selected' if data[:grid_style].to_s == 'column' %>>Colonna</option>
          </select>
        </div>

        <!-- Opzioni di visualizzazione -->
        <div class="space-y-2">
          <p class="text-sm font-semibold text-gray-700 dark:text-gray-300">Opzioni visualizzazione</p>

          <% # Determina i nomi corretti delle opzioni per ogni tipo %>
          <% show_operands_key = case type
               when "addizione" then :show_addends
               when "sottrazione" then :show_minuend_subtrahend
               when "moltiplicazione" then :show_multiplicand_multiplier
               when "divisione" then :show_dividend_divisor
             end %>
          <% show_carry_key = type == "sottrazione" ? :show_borrow : :show_carry %>
          <% show_steps_key = type == "moltiplicazione" ? :show_partial_products : :show_steps %>

          <label class="flex items-center gap-2 cursor-pointer">
            <input type="hidden" name="data[<%= show_operands_key %>]" value="false">
            <input type="checkbox" name="data[<%= show_operands_key %>]" value="true"
                   <%= 'checked' if data[show_operands_key] == true || data[show_operands_key] == "true" %>
                   class="w-4 h-4 text-orange-500 rounded focus:ring-orange-300 dark:bg-gray-700 dark:border-gray-600">
            <span class="text-sm text-gray-700 dark:text-gray-300">Mostra operandi</span>
          </label>

          <label class="flex items-center gap-2 cursor-pointer">
            <input type="hidden" name="data[show_solution]" value="false">
            <input type="checkbox" name="data[show_solution]" value="true"
                   <%= 'checked' if data[:show_solution] == true || data[:show_solution] == "true" %>
                   class="w-4 h-4 text-orange-500 rounded focus:ring-orange-300 dark:bg-gray-700 dark:border-gray-600">
            <span class="text-sm text-gray-700 dark:text-gray-300">Mostra risultato</span>
          </label>

          <label class="flex items-center gap-2 cursor-pointer">
            <input type="hidden" name="data[show_toolbar]" value="false">
            <input type="checkbox" name="data[show_toolbar]" value="true"
                   <%= 'checked' if data[:show_toolbar] == true || data[:show_toolbar] == "true" %>
                   class="w-4 h-4 text-orange-500 rounded focus:ring-orange-300 dark:bg-gray-700 dark:border-gray-600">
            <span class="text-sm text-gray-700 dark:text-gray-300">Mostra barra strumenti</span>
          </label>

          <label class="flex items-center gap-2 cursor-pointer">
            <input type="hidden" name="data[show_labels]" value="false">
            <input type="checkbox" name="data[show_labels]" value="true"
                   <%= 'checked' if data[:show_labels] == true || data[:show_labels] == "true" %>
                   class="w-4 h-4 text-orange-500 rounded focus:ring-orange-300 dark:bg-gray-700 dark:border-gray-600">
            <span class="text-sm text-gray-700 dark:text-gray-300">Mostra etichette (u, da, h...)</span>
          </label>

          <% if %w[addizione sottrazione moltiplicazione].include?(type) %>
            <label class="flex items-center gap-2 cursor-pointer">
              <input type="hidden" name="data[<%= show_carry_key %>]" value="false">
              <input type="checkbox" name="data[<%= show_carry_key %>]" value="true"
                     <%= 'checked' if data[show_carry_key] == true || data[show_carry_key] == "true" %>
                     class="w-4 h-4 text-orange-500 rounded focus:ring-orange-300 dark:bg-gray-700 dark:border-gray-600">
              <span class="text-sm text-gray-700 dark:text-gray-300">Mostra riporti/prestiti</span>
            </label>
          <% end %>

          <% if %w[moltiplicazione divisione].include?(type) %>
            <label class="flex items-center gap-2 cursor-pointer">
              <input type="hidden" name="data[<%= show_steps_key %>]" value="false">
              <input type="checkbox" name="data[<%= show_steps_key %>]" value="true"
                     <%= 'checked' if data[show_steps_key] == true || data[show_steps_key] == "true" %>
                     class="w-4 h-4 text-orange-500 rounded focus:ring-orange-300 dark:bg-gray-700 dark:border-gray-600">
              <span class="text-sm text-gray-700 dark:text-gray-300">Mostra passaggi</span>
            </label>
          <% end %>
        </div>
      <% end %>

      <div class="flex justify-end gap-2">
        <%= link_to "Annulla", edit_dashboard_esercizio_path(esercizio),
            class: "px-4 py-2 text-gray-600 dark:text-gray-300 bg-white dark:bg-gray-700 border border-gray-200 dark:border-gray-600 rounded-2xl hover:bg-gray-50 dark:hover:bg-gray-600 transition font-semibold",
            data: { turbo_frame: "_top" } %>
        <%= form.submit "Salva", class: "px-4 py-2 bg-orange-500 text-white rounded-2xl hover:bg-orange-600 transition cursor-pointer font-semibold" %>
      </div>
    <% end %>
  </div>
<% end %>
