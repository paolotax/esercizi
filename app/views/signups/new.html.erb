<div class="w-full max-w-md">
  <!-- Card container -->
  <div class="fade-in-up bg-white/80 dark:bg-gray-800/80 backdrop-blur-xl rounded-3xl shadow-2xl shadow-gray-900/10 dark:shadow-black/30 p-8 md:p-10">
    <!-- Icon header -->
    <div class="fade-in-up delay-100 flex justify-center mb-6">
      <div class="relative">
        <div class="w-20 h-20 rounded-3xl flex items-center justify-center shadow-lg" style="background: linear-gradient(135deg, var(--color-gold), #d4a853);">
          <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 21v-8.25M15.75 21v-8.25M8.25 21v-8.25M3 9l9-6 9 6m-1.5 12V10.332A48.36 48.36 0 0012 9.75c-2.551 0-5.056.2-7.5.582V21M3 21h18M12 6.75h.008v.008H12V6.75z" />
          </svg>
        </div>
        <!-- Plus decoration -->
        <div class="absolute -bottom-1 -right-1 w-8 h-8 rounded-full flex items-center justify-center shadow-md" style="background: linear-gradient(135deg, var(--color-sage), #5a9a7a);">
          <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15"/>
          </svg>
        </div>
      </div>
    </div>

    <!-- Title -->
    <div class="fade-in-up delay-200 text-center mb-8">
      <h1 class="font-display text-3xl font-bold text-gray-800 dark:text-white mb-2">
        Nuova Scuola
      </h1>
      <p class="text-gray-500 dark:text-gray-400 font-medium">
        Configura la tua scuola per iniziare
      </p>
    </div>

    <!-- Alert -->
    <% if flash[:alert] %>
      <div class="fade-in-up mb-6 p-4 rounded-2xl bg-red-50 dark:bg-red-900/30 border border-red-200 dark:border-red-800">
        <div class="flex items-center gap-3">
          <svg class="w-5 h-5 text-red-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <p class="text-sm text-red-700 dark:text-red-300 font-medium"><%= flash[:alert] %></p>
        </div>
      </div>
    <% end %>

    <!-- Form -->
    <%= form_with url: signup_path, method: :post, class: "fade-in-up delay-300 space-y-5" do |form| %>
      <!-- School name -->
      <div>
        <%= form.label :account_name, "Nome della scuola", class: "block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2" %>
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
          </div>
          <%= form.text_field :account_name,
              required: true,
              autofocus: true,
              placeholder: "Scuola Primaria Esempio",
              class: "input-glow w-full pl-12 pr-4 py-4 text-base font-medium bg-gray-50 dark:bg-gray-700/50 border-2 border-gray-200 dark:border-gray-600 rounded-2xl focus:outline-none focus:border-transparent placeholder-gray-400 dark:placeholder-gray-500 text-gray-800 dark:text-white transition-all" %>
        </div>
      </div>

      <!-- User name -->
      <div>
        <%= form.label :user_name, "Il tuo nome", class: "block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2" %>
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
          </div>
          <%= form.text_field :user_name,
              required: true,
              placeholder: "Mario Rossi",
              class: "input-glow w-full pl-12 pr-4 py-4 text-base font-medium bg-gray-50 dark:bg-gray-700/50 border-2 border-gray-200 dark:border-gray-600 rounded-2xl focus:outline-none focus:border-transparent placeholder-gray-400 dark:placeholder-gray-500 text-gray-800 dark:text-white transition-all" %>
        </div>
      </div>

      <!-- Info box -->
      <div class="p-4 rounded-2xl bg-amber-50 dark:bg-amber-900/20 border border-amber-200 dark:border-amber-800/50">
        <div class="flex gap-3">
          <svg class="w-5 h-5 text-amber-600 dark:text-amber-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <p class="text-sm text-amber-700 dark:text-amber-300">
            Sarai il <strong>proprietario</strong> della scuola e potrai invitare insegnanti e studenti.
          </p>
        </div>
      </div>

      <!-- Submit -->
      <div class="pt-2">
        <%= form.submit "Crea la mia scuola â†’",
            class: "btn-press w-full py-4 px-6 text-base font-bold text-white rounded-2xl shadow-lg hover:shadow-xl transition-all cursor-pointer",
            style: "background: linear-gradient(135deg, var(--color-gold), #d4a853);" %>
      </div>
    <% end %>

    <!-- Back link -->
    <div class="fade-in-up delay-400 text-center mt-6">
      <%= link_to session_menu_path(script_name: nil),
          class: "inline-flex items-center gap-2 text-sm font-semibold text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 transition-colors" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16l-4-4m0 0l4-4m-4 4h18" />
        </svg>
        Torna indietro
      <% end %>
    </div>
  </div>

  <!-- Help text -->
  <p class="fade-in-up delay-400 text-center mt-6 text-sm text-gray-500 dark:text-gray-400">
    Potrai modificare questi dati in seguito
  </p>
</div>
