<header class="print-hidden bg-gradient-to-r from-purple-600 via-pink-500 to-orange-500 shadow-lg sticky top-0 z-40">
  <div class="mx-auto px-4 py-4 flex items-center justify-between">
    <!-- Left side buttons -->
    <div class="flex items-center gap-3">
      <!-- Home button -->
      <%= link_to root_path,
          data: { turbo_frame: "_top" },
          class: "flex items-center gap-2 bg-white hover:bg-gray-100 text-black font-bold py-3 px-4 rounded-full shadow-lg transition transform hover:scale-105" do %>
        <%= image_tag "giunti_scuola.svg", alt: "Giunti Scuola", class: "h-6 w-auto" %>
      <% end %>

      <!-- Menu button -->
      <button class="flex items-center gap-2 bg-white hover:bg-gray-100 text-purple-600 font-bold py-3 px-6 rounded-full shadow-lg transition transform hover:scale-105"
              data-action="click->sidebar#toggle">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
        <span>Indice</span>
      </button>
    </div>

    <!-- Title (center) -->
    <h1 class="text-2xl md:text-3xl font-bold text-white drop-shadow-lg">
      <%= @page_title || yield(:titolo) %>
    </h1>

    <!-- Back button (right) -->
    <button onclick="window.print()"
            class="flex items-center gap-2 bg-white hover:bg-gray-100 text-purple-600 font-bold py-3 px-6 rounded-full shadow-lg transition transform hover:scale-105">
      <span class="md:inline">Stampa</span>
    </button>
  </div>
</header>
