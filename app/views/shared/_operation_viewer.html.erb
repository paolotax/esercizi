<%#
  Partial unificato per visualizzare operazioni in colonna
  Supporta sia modalita' sidebar (default) che modal

  Parametri:
  - display: :sidebar (default) o :modal
  - title: titolo iniziale (default: "Operazione in colonna")
  - color: colore del titolo per modal - blue (default), green, cyan, orange
  - show_save: mostra pulsante Salva (default: true)
%>
<% display = local_assigns.fetch(:display, :sidebar).to_sym %>
<% title ||= "Operazione in colonna" %>
<% color ||= "blue" %>
<% show_save = local_assigns.fetch(:show_save, true) %>
<%
  color_classes = {
    "blue" => "text-blue-600 dark:text-blue-400",
    "green" => "text-green-600 dark:text-green-400",
    "cyan" => "text-cyan-600 dark:text-cyan-400",
    "orange" => "text-orange-600 dark:text-orange-400",
    "red" => "text-red-600 dark:text-red-400"
  }
  title_color = color_classes[color] || color_classes["blue"]
%>

<% if display == :modal %>
  <%# ========================================= %>
  <%# MODALITA' MODAL (centrata) %>
  <%# ========================================= %>
  <div data-operation-viewer-target="modal"
       class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50"
       data-action="click->operation-viewer#closeOnBackdrop keydown.escape@window->operation-viewer#close">

    <div class="bg-white dark:bg-gray-800 rounded-lg p-6 md:p-8 max-w-7xl w-full mx-4 max-h-[90vh] overflow-y-auto">

      <div class="flex justify-between items-center mb-6">
        <h3 class="text-2xl font-bold <%= title_color %>"
            data-operation-viewer-target="title"><%= title %></h3>
        <button class="text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200 text-3xl"
                data-action="click->operation-viewer#close">&times;</button>
      </div>

      <!-- Contenitore dinamico per le griglie -->
      <div data-operation-viewer-target="content" class="mb-6 flex flex-wrap">
        <!-- Il contenuto viene caricato dinamicamente -->
      </div>

      <div class="flex gap-4 justify-center">
        <% if show_save %>
          <button class="bg-green-600 text-white px-8 py-3 rounded-lg hover:bg-green-700 transition font-bold text-lg"
                  data-action="click->operation-viewer#save">Salva</button>
        <% end %>
        <button class="bg-gray-300 dark:bg-gray-600 text-gray-700 dark:text-gray-200 px-8 py-3 rounded-lg hover:bg-gray-400 dark:hover:bg-gray-500 transition font-bold text-lg"
                data-action="click->operation-viewer#close">Chiudi</button>
      </div>
    </div>
  </div>

<% else %>
  <%# ========================================= %>
  <%# MODALITA' SIDEBAR (default, slide laterale) %>
  <%# ========================================= %>

  <!-- Backdrop -->
  <div data-operation-viewer-target="backdrop"
       class="fixed inset-0 bg-black/50 hidden z-40 transition-opacity duration-300"
       data-action="click->operation-viewer#close">
  </div>

  <!-- Sidebar -->
  <div data-operation-viewer-target="sidebar"
       class="fixed inset-y-0 right-0 w-full sm:w-[28rem] md:w-[36rem] lg:w-[42rem] bg-white dark:bg-gray-900 shadow-2xl transform translate-x-full transition-transform duration-300 ease-out z-50 flex flex-col">

    <!-- Header -->
    <div class="flex items-center justify-between px-4 py-3 border-b border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-800">
      <h3 class="text-lg font-bold text-gray-800 dark:text-gray-100"
          data-operation-viewer-target="title">
        <%= title %>
      </h3>
      <button type="button"
              class="p-1 text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200 rounded-full hover:bg-gray-200 dark:hover:bg-gray-700 transition"
              data-action="click->operation-viewer#close"
              title="Chiudi (Esc)">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>

    <!-- Content -->
    <div class="flex-1 overflow-x-auto flex flex-wrap items-start justify-start"
         data-operation-viewer-target="content">
      <!-- Il quaderno viene caricato qui dinamicamente -->
    </div>

    <!-- Footer -->
    <div class="flex gap-3 px-4 py-3 border-t border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-800">
      <% if show_save %>
        <button type="button"
                class="flex-1 bg-green-600 text-white px-4 py-2.5 rounded-lg hover:bg-green-700 active:bg-green-800 transition font-bold shadow-sm flex items-center justify-center gap-2"
                data-action="click->operation-viewer#save">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          Salva
        </button>
      <% end %>
      <button type="button"
              class="flex-1 bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-200 px-4 py-2.5 rounded-lg hover:bg-gray-300 dark:hover:bg-gray-600 active:bg-gray-400 transition font-bold"
              data-action="click->operation-viewer#close">
        Chiudi
      </button>
    </div>
  </div>
<% end %>
