<% if Current.user %>
  <% discipline_accessibili = Disciplina.accessible_by(Current.user).includes(volume: :corso) %>
  <% if discipline_accessibili.any? %>
    <%= collapsible_nav_section "I miei libri" do %>
      <% discipline_accessibili.each do |disciplina| %>
        <%= filter_place_menu_item disciplina_path(disciplina), "#{disciplina.volume.nome} - #{disciplina.nome}", "book" %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
