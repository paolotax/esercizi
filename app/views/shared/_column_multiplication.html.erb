<style>
  [data-column-multiplication-target="multiplicandInput"]::placeholder,
  [data-column-multiplication-target="multiplierInput"]::placeholder,
  [data-column-multiplication-target="partialInput"]::placeholder,
  [data-column-multiplication-target="resultInput"]::placeholder {
    color: #d1d5db;
  }
</style>

<div class="text-center"
     data-controller="column-multiplication"
     data-multiplicand="<%= moltiplicazione.multiplicand %>"
     data-multiplier="<%= moltiplicazione.multiplier %>">

  <!-- Toolbar (opzionale) -->
  <% if moltiplicazione.show_toolbar %>
    <div class="flex gap-2 justify-center mb-4">
      <button type="button"
              data-action="click->column-multiplication#clearGrid"
              class="px-4 py-2 bg-gray-500 text-white rounded hover:bg-gray-600 transition-colors">
        Cancella
      </button>
      <button type="button"
              data-action="click->column-multiplication#checkResults"
              class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 transition-colors">
        Verifica
      </button>
      <button type="button"
              data-action="click->column-multiplication#showSolution"
              class="px-4 py-2 bg-green-500 text-white rounded hover:bg-green-600 transition-colors">
        Soluzione
      </button>
    </div>
  <% end %>

  <!-- Griglia moltiplicazione -->
  <div class="inline-block border-4 border-purple-400 rounded-lg p-4 bg-white shadow-lg">

    <!-- Moltiplicando -->
    <% if moltiplicazione.show_multiplicand_multiplier %>
      <div class="flex justify-end gap-1 mb-2">
        <% moltiplicazione.multiplicand_digits.each do |digit| %>
          <div class="w-12 text-center text-2xl font-bold text-gray-700">
            <%= digit %>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="flex justify-end gap-1 mb-2">
        <% moltiplicazione.multiplicand_length.times do |i| %>
          <input type="text"
                 class="w-12 text-center text-2xl font-bold border-2 border-gray-300 rounded focus:border-purple-500 focus:outline-none"
                 data-column-multiplication-target="multiplicandInput"
                 maxlength="1"
                 placeholder="·"
                 <%= moltiplicazione.editable ? '' : 'disabled' %>>
        <% end %>
      </div>
    <% end %>

    <!-- Simbolo × e Moltiplicatore -->
    <div class="flex justify-end gap-1 mb-2 border-b-2 border-gray-800 pb-2">
      <div class="w-12 text-center text-2xl font-bold text-purple-600">×</div>
      <% if moltiplicazione.show_multiplicand_multiplier %>
        <% moltiplicazione.multiplier_digits.each do |digit| %>
          <div class="w-12 text-center text-2xl font-bold text-gray-700">
            <%= digit %>
          </div>
        <% end %>
      <% else %>
        <% moltiplicazione.multiplier_length.times do |i| %>
          <input type="text"
                 class="w-12 text-center text-2xl font-bold border-2 border-gray-300 rounded focus:border-purple-500 focus:outline-none"
                 data-column-multiplication-target="multiplierInput"
                 maxlength="1"
                 placeholder="·"
                 <%= moltiplicazione.editable ? '' : 'disabled' %>>
        <% end %>
      <% end %>
    </div>

    <!-- Prodotti parziali (se richiesto) -->
    <% if moltiplicazione.show_partial_products && moltiplicazione.multiplier_length > 1 %>
      <% moltiplicazione.multiplier_length.times do |row_index| %>
        <!-- Riporti del prodotto parziale -->
        <div class="flex justify-end gap-1 mb-1">
          <% row_index.times do %>
            <div class="w-12"></div>
          <% end %>
          <% (moltiplicazione.multiplicand_length + 1).times do |i| %>
            <input type="text"
                   class="w-12 h-6 text-center text-xs text-gray-500 border border-dashed border-gray-300 rounded focus:border-purple-400 focus:outline-none"
                   data-column-multiplication-target="carryPartial"
                   maxlength="1"
                   <%= moltiplicazione.editable ? '' : 'disabled' %>>
          <% end %>
        </div>

        <!-- Cifre del prodotto parziale -->
        <div class="flex justify-end gap-1 mb-3">
          <!-- Zeri a destra per lo shift posizionale -->
          <% row_index.times do %>
            <div class="w-12 text-center text-2xl font-bold text-gray-400">0</div>
          <% end %>

          <!-- Input per il prodotto parziale -->
          <% (moltiplicazione.multiplicand_length + 1).times do |i| %>
            <input type="text"
                   class="w-12 text-center text-2xl font-bold border-2 border-gray-300 rounded focus:border-purple-500 focus:outline-none"
                   data-column-multiplication-target="partialInput"
                   maxlength="1"
                   placeholder="·"
                   <%= moltiplicazione.editable ? '' : 'disabled' %>>
          <% end %>
        </div>
      <% end %>

      <!-- Linea di somma -->
      <div class="border-t-2 border-gray-800 pt-2 mt-2"></div>
    <% end %>

    <!-- Riporti risultato finale -->
    <div class="flex justify-end gap-1 mb-1">
      <% (moltiplicazione.product_length + 1).times do |i| %>
        <input type="text"
               class="w-12 h-6 text-center text-xs text-gray-500 border border-dashed border-gray-300 rounded focus:border-purple-400 focus:outline-none"
               data-column-multiplication-target="carryResult"
               maxlength="1"
               <%= moltiplicazione.editable ? '' : 'disabled' %>>
      <% end %>
    </div>

    <!-- Risultato finale -->
    <div class="flex justify-end gap-1">
      <% moltiplicazione.product_length.times do |i| %>
        <input type="text"
               class="w-12 text-center text-2xl font-bold border-2 border-purple-300 rounded focus:border-purple-600 focus:outline-none bg-purple-50"
               data-column-multiplication-target="resultInput"
               maxlength="1"
               placeholder="·"
               <%= moltiplicazione.editable ? '' : 'disabled' %>>
      <% end %>
    </div>

    <!-- Mostra esercizio -->
    <% if moltiplicazione.show_exercise %>
      <div class="mt-4 text-lg font-bold text-purple-600">
        <%= moltiplicazione.multiplicand %> × <%= moltiplicazione.multiplier %> = ?
      </div>
    <% end %>

  </div>
</div>
