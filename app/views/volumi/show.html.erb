<% content_for :titolo, @volume.nome %>

<% content_for :header do %>
  <%= back_link_to "#{@volume.corso.nome}", corso_path(@volume.corso, script_name: Current.account.slug), "keydown.left@document->hotkey#click keydown.esc@document->hotkey#click" %>
<% end %>

<!-- Header with breadcrumb -->
<div class="bg-gradient-to-br from-white/80 to-blue-50/50 dark:from-gray-800/80 dark:to-gray-900/50 border-b border-blue-100 dark:border-gray-700">
  <div class="max-w-5xl mx-auto px-6 py-8">
    <div class="flex items-start gap-6">
      <!-- Volume icon -->
      <div class="w-20 h-20 rounded-3xl bg-gradient-to-br from-blue-400 to-indigo-500 flex items-center justify-center shadow-xl flex-shrink-0">
        <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.042A8.967 8.967 0 006 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 016 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 016-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0018 18a8.967 8.967 0 00-6 2.292m0-14.25v14.25"/>
        </svg>
      </div>

      <div class="flex-1">
        <h1 class="text-3xl md:text-4xl font-bold text-gray-800 dark:text-white mb-2">
          <%= @volume.nome %>
        </h1>

        <% if @volume.classe.present? %>
          <span class="inline-flex items-center px-4 py-1.5 rounded-full text-sm font-semibold bg-blue-100 dark:bg-blue-900/50 text-blue-700 dark:text-blue-300">
            <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
            </svg>
            Classe <%= @volume.classe %>
          </span>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Disciplines Grid -->
<div class="max-w-7xl mx-auto px-6 py-10">
  <div class="flex items-center justify-between mb-8">
    <h2 class="text-2xl font-bold text-gray-800 dark:text-white">
      Discipline
    </h2>
    <span class="text-sm font-medium text-gray-500 dark:text-gray-400">
      <%= @discipline.count %> <%= @discipline.count == 1 ? 'disciplina' : 'discipline' %>
    </span>
  </div>

  <% if @discipline.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @discipline.each do |disciplina| %>
        <% # Use discipline color or fallback to a default gradient
           discipline_color = disciplina.colore.presence || '#6366F1'
           # Generate a darker shade for gradient
           darker_color = discipline_color
        %>

        <%= link_to disciplina_path(disciplina),
            class: "group block bg-white dark:bg-gray-800 rounded-3xl border-2 border-gray-100 dark:border-gray-700 overflow-hidden hover:shadow-xl hover:scale-[1.02] transition-all duration-300",
            data: { turbo_frame: "main-content" } do %>

          <!-- Color accent bar -->
          <div class="h-2" style="background: linear-gradient(90deg, <%= discipline_color %>, <%= discipline_color %>dd);"></div>

          <div class="p-6">
            <!-- Icon -->
            <div class="w-14 h-14 rounded-2xl flex items-center justify-center shadow-lg mb-4 group-hover:scale-110 transition-transform"
                 style="background: linear-gradient(135deg, <%= discipline_color %>, <%= discipline_color %>cc);">
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M4.26 10.147a60.438 60.438 0 00-.491 6.347A48.62 48.62 0 0112 20.904a48.62 48.62 0 018.232-4.41 60.46 60.46 0 00-.491-6.347m-15.482 0a50.636 50.636 0 00-2.658-.813A59.906 59.906 0 0112 3.493a59.903 59.903 0 0110.399 5.84c-.896.248-1.783.52-2.658.814m-15.482 0A50.717 50.717 0 0112 13.489a50.702 50.702 0 017.74-3.342M6.75 15a.75.75 0 100-1.5.75.75 0 000 1.5zm0 0v-3.675A55.378 55.378 0 0112 8.443m-7.007 11.55A5.981 5.981 0 006.75 15.75v-1.5"/>
              </svg>
            </div>

            <!-- Title -->
            <h3 class="text-xl font-bold text-gray-800 dark:text-white mb-3 group-hover:text-gray-900 dark:group-hover:text-gray-100">
              <%= disciplina.nome %>
            </h3>

            <!-- Stats -->
            <div class="flex items-center justify-between pt-4 border-t border-gray-100 dark:border-gray-700">
              <span class="text-sm font-medium text-gray-500 dark:text-gray-400">
                <%= pluralize(disciplina.pagine.count, "pagina", "pagine") %>
              </span>
              <div class="flex items-center gap-1 text-sm font-semibold group-hover:translate-x-1 transition-transform"
                   style="color: <%= discipline_color %>;">
                Apri
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <!-- Empty state -->
    <div class="text-center py-16">
      <div class="w-20 h-20 mx-auto mb-6 rounded-3xl bg-gray-100 dark:bg-gray-700 flex items-center justify-center">
        <svg class="w-10 h-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4.26 10.147a60.438 60.438 0 00-.491 6.347A48.62 48.62 0 0112 20.904a48.62 48.62 0 018.232-4.41 60.46 60.46 0 00-.491-6.347m-15.482 0a50.636 50.636 0 00-2.658-.813A59.906 59.906 0 0112 3.493a59.903 59.903 0 0110.399 5.84c-.896.248-1.783.52-2.658.814m-15.482 0A50.717 50.717 0 0112 13.489a50.702 50.702 0 017.74-3.342"/>
        </svg>
      </div>
      <h3 class="text-xl font-bold text-gray-800 dark:text-white mb-2">Nessuna disciplina</h3>
      <p class="text-gray-500 dark:text-gray-400">Le discipline appariranno qui quando saranno aggiunte.</p>
    </div>
  <% end %>
</div>
