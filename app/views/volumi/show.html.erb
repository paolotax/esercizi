<% content_for :titolo, @volume.nome %>

<div class="max-w-7xl mx-auto p-6">
  <div class="mb-6">
    <%= link_to "← #{@volume.corso.nome}", corso_path(@volume.corso), class: "text-blue-500 hover:text-blue-700" %>
  </div>

  <h1 class="text-4xl font-bold text-blue-600 mb-2"><%= @volume.nome %></h1>
  <% if @volume.classe.present? %>
    <p class="text-xl text-gray-600 mb-8">Classe <%= @volume.classe %></p>
  <% end %>

  <h2 class="text-2xl font-bold text-gray-800 mb-6">Discipline</h2>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @discipline.each do |disciplina| %>
      <div class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl transition" style="<%= "border-left: 4px solid #{disciplina.colore};" if disciplina.colore.present? %>">
        <%= link_to disciplina_path(disciplina), class: "block" do %>
          <h3 class="text-xl font-bold text-gray-800 mb-3"><%= disciplina.nome %></h3>
          <div class="text-blue-500 font-semibold">
            <%= pluralize(disciplina.pagine.count, "pagina", "pagine") %> →
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <% if @discipline.empty? %>
    <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-6 text-center">
      <p class="text-gray-600">Nessuna disciplina disponibile per questo volume.</p>
    </div>
  <% end %>
</div>
