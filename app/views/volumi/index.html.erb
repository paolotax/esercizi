<% content_for :titolo, "Libri di Testo" %>

<% unless Current.user %>
  <div class="bg-orange-50 dark:bg-orange-900/20 border-b border-orange-200 dark:border-orange-800/30">
    <div class="max-w-5xl mx-auto px-6 py-3 flex items-center justify-between">
      <span class="text-sm text-orange-700 dark:text-orange-300">
        Accedi per vedere i tuoi libri
      </span>
      <%= link_to "Accedi", new_session_path,
          class: "inline-flex items-center px-4 py-1.5 bg-orange-500 hover:bg-orange-600 text-white font-semibold text-sm rounded-lg transition" %>
    </div>
  </div>
<% end %>

<!-- Hero Section -->
<div class="bg-gradient-to-br from-white/80 to-orange-50/50 dark:from-gray-800/80 dark:to-gray-900/50 border-b border-orange-100 dark:border-gray-700">
  <div class="max-w-5xl mx-auto px-6 py-12 md:py-16">
    <!-- Badge -->
    <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-orange-100 dark:bg-orange-900/30 text-orange-700 dark:text-orange-300 text-sm font-semibold mb-6">
      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
      </svg>
      Prototipo Interattivo
    </div>

    <h1 class="text-4xl md:text-5xl font-bold text-gray-800 dark:text-white mb-6 leading-tight">
      Libri di Testo
      <span class="block text-transparent bg-clip-text bg-gradient-to-r from-orange-500 to-rose-500">Interattivi</span>
    </h1>

    <p class="text-lg md:text-xl text-gray-600 dark:text-gray-300 leading-relaxed max-w-3xl mb-8">
      Trasformiamo le pagine dei libri in <strong class="text-gray-800 dark:text-white">esercizi digitali</strong>
      con feedback immediato. Ogni attività è stata creata in pochi minuti partendo dalle immagini originali.
    </p>

    <!-- Feature cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <div class="flex items-start gap-3 p-4 rounded-2xl bg-white/60 dark:bg-gray-700/40 border border-gray-100 dark:border-gray-600">
        <div class="w-10 h-10 rounded-xl bg-green-100 dark:bg-green-900/50 flex items-center justify-center flex-shrink-0">
          <svg class="w-5 h-5 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
          </svg>
        </div>
        <div>
          <h3 class="font-bold text-gray-800 dark:text-white text-sm">Velocità</h3>
          <p class="text-gray-500 dark:text-gray-400 text-sm">Da pagina statica a esercizio in ore</p>
        </div>
      </div>

      <div class="flex items-start gap-3 p-4 rounded-2xl bg-white/60 dark:bg-gray-700/40 border border-gray-100 dark:border-gray-600">
        <div class="w-10 h-10 rounded-xl bg-blue-100 dark:bg-blue-900/50 flex items-center justify-center flex-shrink-0">
          <svg class="w-5 h-5 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <div>
          <h3 class="font-bold text-gray-800 dark:text-white text-sm">Feedback</h3>
          <p class="text-gray-500 dark:text-gray-400 text-sm">Correzione immediata per lo studente</p>
        </div>
      </div>

      <div class="flex items-start gap-3 p-4 rounded-2xl bg-white/60 dark:bg-gray-700/40 border border-gray-100 dark:border-gray-600">
        <div class="w-10 h-10 rounded-xl bg-purple-100 dark:bg-purple-900/50 flex items-center justify-center flex-shrink-0">
          <svg class="w-5 h-5 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
          </svg>
        </div>
        <div>
          <h3 class="font-bold text-gray-800 dark:text-white text-sm">Riutilizzabile</h3>
          <p class="text-gray-500 dark:text-gray-400 text-sm">Componenti per centinaia di pagine</p>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Volumes Grid -->
<div class="max-w-7xl mx-auto px-6 py-10">
  <div class="flex items-center justify-between mb-8">
    <h2 class="text-2xl font-bold text-gray-800 dark:text-white">
      Esplora i Volumi
    </h2>
    <span class="text-sm font-medium text-gray-500 dark:text-gray-400">
      <%= @volumi.count %> <%= @volumi.count == 1 ? 'volume' : 'volumi' %> disponibili
    </span>
  </div>

  <% if @volumi.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @volumi.each_with_index do |volume, index| %>
        <% colors = [
          { bg: 'from-orange-400 to-rose-500', light: 'orange-50', dark: 'orange-900/20', border: 'orange-200', border_dark: 'orange-800/30' },
          { bg: 'from-emerald-400 to-teal-500', light: 'emerald-50', dark: 'emerald-900/20', border: 'emerald-200', border_dark: 'emerald-800/30' },
          { bg: 'from-blue-400 to-indigo-500', light: 'blue-50', dark: 'blue-900/20', border: 'blue-200', border_dark: 'blue-800/30' },
          { bg: 'from-purple-400 to-pink-500', light: 'purple-50', dark: 'purple-900/20', border: 'purple-200', border_dark: 'purple-800/30' },
          { bg: 'from-amber-400 to-orange-500', light: 'amber-50', dark: 'amber-900/20', border: 'amber-200', border_dark: 'amber-800/30' },
          { bg: 'from-cyan-400 to-blue-500', light: 'cyan-50', dark: 'cyan-900/20', border: 'cyan-200', border_dark: 'cyan-800/30' }
        ] %>
        <% color = colors[index % colors.length] %>

        <%= link_to volume_path(volume),
            class: "group block bg-gradient-to-br from-#{color[:light]} to-white dark:from-#{color[:dark]} dark:to-gray-800 rounded-3xl border-2 border-#{color[:border]} dark:border-#{color[:border_dark]} p-6 hover:shadow-xl hover:scale-[1.02] transition-all duration-300",
            data: { turbo_frame: "main-content" } do %>

          <!-- Volume icon -->
          <div class="w-14 h-14 rounded-2xl bg-gradient-to-br <%= color[:bg] %> flex items-center justify-center shadow-lg mb-4 group-hover:scale-110 transition-transform">
            <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.042A8.967 8.967 0 006 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 016 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 016-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0018 18a8.967 8.967 0 00-6 2.292m0-14.25v14.25"/>
            </svg>
          </div>

          <!-- Course name -->
          <p class="text-sm font-semibold text-gray-500 dark:text-gray-400 mb-1">
            <%= volume.corso.nome %>
          </p>

          <!-- Volume title -->
          <h3 class="text-xl font-bold text-gray-800 dark:text-white mb-2 group-hover:text-gray-900 dark:group-hover:text-gray-100">
            <%= volume.nome %>
          </h3>

          <!-- Class badge -->
          <% if volume.classe.present? %>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-semibold bg-white/80 dark:bg-gray-700/80 text-gray-600 dark:text-gray-300 mb-4">
              Classe <%= volume.classe %>
            </span>
          <% end %>

          <!-- Stats -->
          <div class="flex items-center justify-between pt-4 border-t border-gray-200/50 dark:border-gray-600/50">
            <span class="text-sm font-medium text-gray-500 dark:text-gray-400">
              <%= pluralize(volume.discipline.count, "disciplina", "discipline") %>
            </span>
            <div class="flex items-center gap-1 text-sm font-semibold text-gray-700 dark:text-gray-300 group-hover:translate-x-1 transition-transform">
              Esplora
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <!-- Empty state -->
    <div class="text-center py-16">
      <div class="w-20 h-20 mx-auto mb-6 rounded-3xl bg-gray-100 dark:bg-gray-700 flex items-center justify-center">
        <svg class="w-10 h-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6.042A8.967 8.967 0 006 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 016 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 016-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0018 18a8.967 8.967 0 00-6 2.292m0-14.25v14.25"/>
        </svg>
      </div>
      <h3 class="text-xl font-bold text-gray-800 dark:text-white mb-2">Nessun volume disponibile</h3>
      <p class="text-gray-500 dark:text-gray-400">I volumi appariranno qui quando saranno aggiunti.</p>
    </div>
  <% end %>
</div>
