<% content_for :titolo, "Libri di Testo" %>

<div class="max-w-7xl mx-auto p-6">
  <h1 class="text-4xl font-bold text-blue-600 mb-8">Libri di Testo</h1>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @volumi.each do |volume| %>
      <div class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl transition">
        <%= link_to volume_path(volume), class: "block" do %>
          <div class="text-sm text-gray-500 mb-1"><%= volume.corso.nome %></div>
          <h2 class="text-2xl font-bold text-gray-800 mb-3"><%= volume.nome %></h2>
          <% if volume.classe.present? %>
            <p class="text-gray-600 mb-3">Classe <%= volume.classe %></p>
          <% end %>
          <div class="text-blue-500 font-semibold">
            <%= pluralize(volume.discipline.count, "disciplina", "discipline") %> â†’
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <% if @volumi.empty? %>
    <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-6 text-center">
      <p class="text-gray-600">Nessun volume disponibile al momento.</p>
    </div>
  <% end %>
</div>
