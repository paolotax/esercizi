<% content_for :titolo, "Divisioni in Colonna - Strumenti" %>

<div class="max-w-6xl mx-auto px-2 md:px-6 py-8">
  <!-- Header -->
  <div class="bg-white dark:bg-gray-800 print:hidden rounded-lg shadow-lg p-8 mb-8">
    <h1 class="text-3xl font-bold text-gray-800 dark:text-gray-100">Divisioni in Colonna</h1>
    <p class="text-gray-600 dark:text-gray-300 text-lg mt-2">
      Divisioni in colonna (metodo italiano). Supporta numeri decimali con virgola.
    </p>
  </div>

  <!-- Layout a 2 colonne -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8 print:hidden items-start">

    <!-- Colonna Sinistra: Esempio con Opzioni -->
    <div class="rounded-lg shadow-lg p-8 transition-all duration-500
                <%= @options[:example_type] == 'interi' ? 'bg-gradient-to-br from-green-50 to-emerald-50 dark:from-green-900/30 dark:to-emerald-900/30' : 'bg-gradient-to-br from-amber-50 to-orange-50 dark:from-amber-900/30 dark:to-orange-900/30' %>">

      <%= turbo_frame_tag "esempio-preview" do %>
        <div class="transition-all duration-300 ease-in-out">
          <h2 class="text-2xl font-bold text-gray-800 dark:text-gray-100 mb-4">
            <%= @options[:example_type] == 'interi' ? 'Esempio con Numeri Interi' : 'Esempio con Decimali' %>
          </h2>
          <p class="text-gray-700 dark:text-gray-300 text-lg mb-6">
            <%= @options[:example_type] == 'interi' ? 'Prova a calcolare questa divisione con numeri interi!' : 'Prova a calcolare questa divisione con numeri decimali!' %>
          </p>
          <div class="flex justify-center">
            <% esempio_operands = @options[:example_type] == 'interi' ? [144, 12] : ["12,5", "2,5"] %>
            <%= render "strumenti/quaderno_grid",
                       grid: Divisione::Renderer.new(dividend: esempio_operands[0],
                                             divisor: esempio_operands[1],
                                             title: @options[:title],
                                             show_dividend_divisor: @options[:show_dividend_divisor],
                                             show_toolbar: @options[:show_toolbar],
                                             show_solution: @options[:show_solution],
                                             show_steps: @options[:show_steps]).to_grid_matrix %>
          </div>
        </div>
      <% end %>

      <!-- Opzioni Preview (aggiornano l'esempio in tempo reale) -->
      <div class="mt-6 p-4 bg-white/50 dark:bg-gray-800/50 rounded-lg">
        <p class="text-sm font-semibold text-gray-700 dark:text-gray-200 mb-3">Opzioni:</p>
        <%= form_with url: preview_strumenti_divisioni_path, method: :get,
                      data: { turbo_frame: "esempio-preview" },
                      id: "preview-options-form" do |pf| %>

          <!-- Toggle Decimali/Interi -->
          <div class="mb-4 flex items-center justify-center gap-3">
            <span class="text-sm font-medium <%= @options[:example_type] != 'interi' ? 'text-amber-600 dark:text-amber-400' : 'text-gray-400 dark:text-gray-500' %>">Decimali</span>
            <label class="relative inline-flex items-center cursor-pointer">
              <%= pf.check_box :example_type,
                               { checked: @options[:example_type] == 'interi',
                                 class: "sr-only peer",
                                 onchange: "this.form.requestSubmit()" },
                               "interi", "decimali" %>
              <div class="w-11 h-6 bg-amber-500 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-amber-300 dark:peer-focus:ring-amber-800 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-green-500"></div>
            </label>
            <span class="text-sm font-medium <%= @options[:example_type] == 'interi' ? 'text-green-600 dark:text-green-400' : 'text-gray-400 dark:text-gray-500' %>">Interi</span>
          </div>

          <div class="mb-3">
            <%= pf.text_field :title,
                              value: @options[:title],
                              placeholder: "Titolo (opzionale)",
                              class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:border-amber-500 focus:outline-none text-sm bg-white dark:bg-gray-700 dark:text-white",
                              onchange: "this.form.requestSubmit()" %>
          </div>

          <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
            <label class="flex items-center gap-2 cursor-pointer">
              <%= pf.check_box :show_dividend_divisor, { checked: @options[:show_dividend_divisor], class: "w-4 h-4 text-amber-600 rounded focus:ring-amber-500", onchange: "this.form.requestSubmit()" }, "true", "false" %>
              <span class="text-sm text-gray-700 dark:text-gray-300">Mostra operandi</span>
            </label>

            <label class="flex items-center gap-2 cursor-pointer">
              <%= pf.check_box :show_solution, { checked: @options[:show_solution], class: "w-4 h-4 text-amber-600 rounded focus:ring-amber-500", onchange: "this.form.requestSubmit()" }, "true", "false" %>
              <span class="text-sm text-gray-700 dark:text-gray-300">Mostra risultato</span>
            </label>

            <label class="flex items-center gap-2 cursor-pointer">
              <%= pf.check_box :show_steps, { checked: @options[:show_steps], class: "w-4 h-4 text-amber-600 rounded focus:ring-amber-500", onchange: "this.form.requestSubmit()" }, "true", "false" %>
              <span class="text-sm text-gray-700 dark:text-gray-300">Mostra passaggi</span>
            </label>

            <label class="flex items-center gap-2 cursor-pointer">
              <%= pf.check_box :show_toolbar, { checked: @options[:show_toolbar], class: "w-4 h-4 text-amber-600 rounded focus:ring-amber-500", onchange: "this.form.requestSubmit()" }, "true", "false" %>
              <span class="text-sm text-gray-700 dark:text-gray-300">Mostra barra strumenti</span>
            </label>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Generatore -->
    <div class="bg-white dark:bg-gray-800 print:hidden rounded-lg shadow-lg p-8">
      <h2 class="text-2xl font-bold text-gray-800 dark:text-gray-100 mb-4">Generatore</h2>

      <%= form_with url: strumenti_divisioni_path, method: :post, local: true,
                    data: { turbo: false } do |f| %>
        <div class="mb-4">
          <%= f.text_area :divisions,
                          value: @divisions_string,
                          placeholder: "Inserisci le divisioni qui...\nEsempio: 12,5 : 2,5\nOppure: 144 : 12",
                          rows: 4,
                          class: "w-full px-4 py-3 border-2 border-gray-300 dark:border-gray-600 rounded-lg focus:border-amber-500 focus:outline-none font-mono text-sm bg-white dark:bg-gray-700 dark:text-white" %>
        </div>

        <!-- Hidden fields per il generatore -->
        <div class="hidden">
          <%= f.hidden_field :show_toolbar, value: @options[:show_toolbar], id: "gen_show_toolbar" %>
          <%= f.hidden_field :show_steps, value: @options[:show_steps], id: "gen_show_steps" %>
          <%= f.hidden_field :show_dividend_divisor, value: @options[:show_dividend_divisor], id: "gen_show_dividend_divisor" %>
          <%= f.hidden_field :show_solution, value: @options[:show_solution], id: "gen_show_solution" %>
        </div>

        <div class="flex gap-4">
          <%= f.submit "Genera",
                      class: "bg-orange-600 hover:bg-orange-700 text-white font-bold py-3 px-6 rounded-lg shadow-lg transition transform hover:scale-105 cursor-pointer" %>

          <% if @divisions_string.present? %>
            <%= link_to "Cancella", strumenti_divisioni_path,
                        class: "bg-gray-500 hover:bg-gray-600 text-white font-bold py-3 px-6 rounded-lg shadow-lg transition transform hover:scale-105" %>
          <% end %>
        </div>
      <% end %>

      <% if @divisions_string.present? && @divisions.blank? %>
        <div class="bg-yellow-50 dark:bg-yellow-900/30 border-l-4 border-yellow-500 p-4 mt-4">
          <p class="text-yellow-900 dark:text-yellow-200 text-sm">
            <strong>Attenzione:</strong> Non sono state trovate operazioni valide.
            Usa il formato: 12,5 : 2,5 oppure 144 : 12
          </p>
        </div>
      <% end %>
    </div>

  </div>
  <!-- Fine Layout a 2 colonne -->

  <!-- Divisioni Generate -->
  <% if @divisions && @divisions.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 print:grid-cols-2 gap-8 print:gap-12">
      <% @divisions.each_with_index do |divisione, index| %>
        <div class="flex flex-col items-center print:break-inside-avoid bg-white dark:bg-gray-800 rounded-lg shadow p-6">
          <% unless divisione.show_dividend_divisor %>
            <h3 class="text-xl font-semibold text-gray-700 dark:text-gray-200 mb-6">
              Esercizio <%= index + 1 %>: <%= divisione.raw_dividend.gsub(".", ",") %> : <%= divisione.raw_divisor.gsub(".", ",") %>
            </h3>
          <% end %>

          <%= render "strumenti/quaderno_grid", grid: divisione.to_grid_matrix %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
