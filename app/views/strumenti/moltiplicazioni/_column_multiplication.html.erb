<style>
  [data-column-multiplication-target="multiplicandInput"]::placeholder,
  [data-column-multiplication-target="multiplierInput"]::placeholder,
  [data-column-multiplication-target="partialInput"]::placeholder,
  [data-column-multiplication-target="resultInput"]::placeholder {
    color: #d1d5db;
  }
</style>

<div class="text-center" data-controller="column-multiplication">


  <!-- Griglia moltiplicazione -->
  <div class="inline-block border-4 border-purple-400 rounded-lg p-4 bg-white shadow-lg">

    <!-- Moltiplicando -->
    <% if moltiplicazione.show_multiplicand_multiplier %>
      <div class="flex justify-end gap-1 mb-2">
        <% moltiplicazione.multiplicand_digits.each do |digit| %>
          <div class="w-12 text-center text-2xl font-bold text-gray-700">
            <%= digit %>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="flex justify-end gap-1 mb-2">
        <% moltiplicazione.multiplicand_digits.each do |digit| %>
          <input type="text"
                 class="w-12 text-center text-2xl font-bold border-2 border-gray-300 rounded focus:border-purple-500 focus:outline-none"
                 data-column-multiplication-target="multiplicandInput"
                 data-correct-answer="<%= digit %>"
                 maxlength="1"
                 placeholder="·"
                 <%= moltiplicazione.editable ? '' : 'disabled' %>>
        <% end %>
      </div>
    <% end %>

    <!-- Simbolo × e Moltiplicatore -->
    <div class="flex justify-end gap-1 mb-2 border-b-2 border-gray-800 pb-2">
      <div class="w-12 text-center text-2xl font-bold text-purple-600">×</div>
      <% if moltiplicazione.show_multiplicand_multiplier %>
        <% moltiplicazione.multiplier_digits.each do |digit| %>
          <div class="w-12 text-center text-2xl font-bold text-gray-700">
            <%= digit %>
          </div>
        <% end %>
      <% else %>
        <% moltiplicazione.multiplier_digits.each do |digit| %>
          <input type="text"
                 class="w-12 text-center text-2xl font-bold border-2 border-gray-300 rounded focus:border-purple-500 focus:outline-none"
                 data-column-multiplication-target="multiplierInput"
                 data-correct-answer="<%= digit %>"
                 maxlength="1"
                 placeholder="·"
                 <%= moltiplicazione.editable ? '' : 'disabled' %>>
        <% end %>
      <% end %>
    </div>

    <!-- Prodotti parziali (per moltiplicatori con più di 1 cifra) -->
    <% if moltiplicazione.multiplier_length > 1 %>
      <% moltiplicazione.partial_products_data.each do |partial_data| %>
        <!-- Riporti del prodotto parziale -->
        <div class="flex justify-end gap-1 mb-1">
          <% partial_data[:carries].each_with_index do |carry, i| %>
            <% col = partial_data[:num_carries] - i + partial_data[:row_index] %>
            <input type="text"
                   class="w-12 h-6 text-center text-xs text-gray-500 border border-dashed border-gray-300 rounded focus:border-purple-400 focus:outline-none"
                   data-column-multiplication-target="carryPartial"
                   data-correct-answer="<%= carry %>"
                   data-column="<%= col %>"
                   data-row="<%= partial_data[:row_index] * 2 %>"
                   <% if moltiplicazione.show_partial_products && carry %>value="<%= carry %>"<% end %>
                   maxlength="1"
                   <%= moltiplicazione.editable ? '' : 'disabled' %>>
          <% end %>
          <!-- Spazio vuoto per allineare con le unità del prodotto parziale -->
          <div class="w-12"></div>
          <!-- Spazio sopra gli zeri segnaposto -->
          <% partial_data[:row_index].times do %>
            <div class="w-12"></div>
          <% end %>
        </div>

        <!-- Cifre del prodotto parziale -->
        <div class="flex justify-end gap-1 mb-3">
          <% partial_data[:digits].each_with_index do |digit, i| %>
            <% col = partial_data[:num_inputs] - 1 - i + partial_data[:row_index] %>
            <input type="text"
                   class="w-12 text-center text-2xl font-bold border-2 border-gray-300 rounded focus:border-purple-500 focus:outline-none"
                   data-column-multiplication-target="partialInput"
                   data-correct-answer="<%= digit %>"
                   data-column="<%= col %>"
                   data-row="<%= partial_data[:row_index] * 2 + 1 %>"
                   <% if moltiplicazione.show_partial_products && digit %>value="<%= digit %>"<% end %>
                   maxlength="1"
                   placeholder="·"
                   <%= moltiplicazione.editable ? '' : 'disabled' %>>
          <% end %>
          <!-- Zeri segnaposto a destra -->
          <% partial_data[:row_index].times do %>
            <div class="w-12 text-center text-2xl font-bold text-gray-400">0</div>
          <% end %>
        </div>
      <% end %>

      <!-- Linea di somma -->
      <div class="border-t-2 border-gray-800 pt-2 mt-2"></div>
    <% end %>

    <!-- Riporti risultato finale (product_length - 1 elementi, allineati a sinistra) -->
    <% result_row = moltiplicazione.multiplier_length > 1 ? moltiplicazione.multiplier_length * 2 : 0 %>
    <div class="flex justify-end gap-1 mb-1">
      <% moltiplicazione.result_carries.each_with_index do |carry, i| %>
        <% col = moltiplicazione.result_carries.length - i %>
        <input type="text"
               class="w-12 h-6 text-center text-xs text-gray-500 border border-dashed border-gray-300 rounded focus:border-purple-400 focus:outline-none"
               data-column-multiplication-target="carryResult"
               data-correct-answer="<%= carry %>"
               data-column="<%= col %>"
               data-row="<%= result_row %>"
               <% if moltiplicazione.show_exercise && carry %>value="<%= carry %>"<% end %>
               maxlength="1"
               <%= moltiplicazione.editable ? '' : 'disabled' %>>
      <% end %>
      <!-- Spazio vuoto per allineare con le unità del risultato -->
      <div class="w-12 h-6"></div>
    </div>

    <!-- Risultato finale -->
    <div class="flex justify-end gap-1">
      <% moltiplicazione.result_digits_array.each_with_index do |digit, i| %>
        <% col = moltiplicazione.result_digits_array.length - 1 - i %>
        <input type="text"
               class="w-12 text-center text-2xl font-bold border-2 border-purple-300 rounded focus:border-purple-600 focus:outline-none bg-purple-50"
               data-column-multiplication-target="resultInput"
               data-correct-answer="<%= digit %>"
               data-column="<%= col %>"
               data-row="<%= result_row + 1 %>"
               <% if moltiplicazione.show_exercise %>value="<%= digit %>"<% end %>
               maxlength="1"
               placeholder="·"
               <%= moltiplicazione.editable ? '' : 'disabled' %>>
      <% end %>
    </div>

    <!-- Mostra esercizio -->
    <% if moltiplicazione.show_exercise %>
      <div class="mt-4 text-lg font-bold text-purple-600">
        <%= moltiplicazione.multiplicand %> × <%= moltiplicazione.multiplier %> = ?
      </div>
    <% end %>

  </div>

  <!-- Toolbar (opzionale) -->
  <% if moltiplicazione.show_toolbar %>
    <div class="flex gap-4 justify-center mt-4">
      <!-- Cancella -->
      <button type="button"
              data-action="click->column-multiplication#clearGrid"
              class="w-14 h-14 rounded-full bg-gray-500 hover:bg-gray-600 text-white shadow-lg hover:shadow-xl transition-all transform hover:scale-110 flex items-center justify-center"
              title="Cancella">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
        </svg>
      </button>

      <!-- Mostra Prodotti Parziali -->
      <button type="button"
              data-action="click->column-multiplication#showPartials"
              class="w-14 h-14 rounded-full bg-blue-500 hover:bg-blue-600 text-white shadow-lg hover:shadow-xl transition-all transform hover:scale-110 flex items-center justify-center"
              title="Mostra Prodotti Parziali">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7" />
        </svg>
      </button>

      <!-- Mostra Soluzione -->
      <button type="button"
              data-action="click->column-multiplication#showSolution"
              class="w-14 h-14 rounded-full bg-green-500 hover:bg-green-600 text-white shadow-lg hover:shadow-xl transition-all transform hover:scale-110 flex items-center justify-center"
              title="Mostra Soluzione">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </button>

      <!-- Verifica -->
      <button type="button"
              data-action="click->column-multiplication#checkResults"
              class="w-14 h-14 rounded-full bg-purple-500 hover:bg-purple-600 text-white shadow-lg hover:shadow-xl transition-all transform hover:scale-110 flex items-center justify-center"
              title="Verifica">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
        </svg>
      </button>
    </div>
  <% end %>
</div>
