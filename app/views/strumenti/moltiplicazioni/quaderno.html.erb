<% content_for :titolo, "Quaderno Moltiplicazioni - Strumenti" %>

<div class="max-w-6xl mx-auto px-2 md:px-6 py-8">
  <!-- Header -->
  <div class="bg-white dark:bg-gray-800 print:hidden rounded-lg shadow-lg p-8 mb-8">
    <h1 class="text-3xl font-bold text-gray-800 dark:text-gray-100">Quaderno Moltiplicazioni</h1>
    <p class="text-gray-600 dark:text-gray-300 text-lg mt-2">
      Moltiplicazioni in colonna stile quaderno a quadretti. Supporta numeri decimali con virgola.
    </p>
  </div>

  <!-- Layout a 2 colonne -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8 print:hidden items-start">

    <!-- Colonna Sinistra: Esempio -->
    <div class="bg-gradient-to-br from-purple-50 to-pink-50 dark:from-purple-900/30 dark:to-pink-900/30 rounded-lg shadow-lg p-8">
      <h2 class="text-2xl font-bold text-gray-800 dark:text-gray-100 mb-4">Esempio con Decimali</h2>
      <p class="text-gray-700 dark:text-gray-300 text-lg mb-6">
        Prova a calcolare questa moltiplicazione con numeri decimali!
      </p>
      <div class="flex justify-center">
        <%= render "strumenti/quaderno_grid",
                   grid: Moltiplicazione.new(multiplicand: "12,3", multiplier: "4,5",
                                               show_multiplicand_multiplier: true,
                                               show_toolbar: true,
                                               show_labels: true,
                                               show_solution: true).to_grid_matrix %>
      </div>
    </div>

    <!-- Generatore -->
    <div class="bg-white dark:bg-gray-800 print:hidden rounded-lg shadow-lg p-8">
      <h2 class="text-2xl font-bold text-gray-800 dark:text-gray-100 mb-4">Generatore</h2>

      <%= form_with url: strumenti_moltiplicazioni_quaderno_generate_path, method: :post, local: true,
                    data: { turbo: false } do |f| %>
        <div class="mb-4">
          <%= f.text_area :multiplications,
                          value: @multiplications_string,
                          placeholder: "Inserisci le moltiplicazioni qui...\nEsempio: 12,3 x 4,5\nOppure: 123 x 45",
                          rows: 4,
                          class: "w-full px-4 py-3 border-2 border-gray-300 dark:border-gray-600 rounded-lg focus:border-purple-500 focus:outline-none font-mono text-sm bg-white dark:bg-gray-700 dark:text-white" %>
        </div>

        <!-- Opzioni -->
        <div class="mb-6 p-4 bg-gray-50 dark:bg-gray-700 rounded-lg">
          <p class="text-sm font-semibold text-gray-700 dark:text-gray-200 mb-3">Opzioni:</p>
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
            <label class="flex items-center gap-2 cursor-pointer">
              <%= f.check_box :show_toolbar, { checked: @options[:show_toolbar] != false, class: "w-4 h-4 text-purple-600 rounded focus:ring-purple-500" }, "true", "false" %>
              <span class="text-sm text-gray-700 dark:text-gray-300">Mostra barra strumenti</span>
            </label>

            <label class="flex items-center gap-2 cursor-pointer">
              <%= f.check_box :show_partial_products, { checked: @options[:show_partial_products] == true, class: "w-4 h-4 text-purple-600 rounded focus:ring-purple-500" }, "true", "false" %>
              <span class="text-sm text-gray-700 dark:text-gray-300">Mostra prodotti parziali</span>
            </label>

            <label class="flex items-center gap-2 cursor-pointer">
              <%= f.check_box :show_multiplicand_multiplier, { checked: @options[:show_multiplicand_multiplier] == true, class: "w-4 h-4 text-purple-600 rounded focus:ring-purple-500" }, "true", "false" %>
              <span class="text-sm text-gray-700 dark:text-gray-300">Mostra moltiplicando e moltiplicatore</span>
            </label>

            <label class="flex items-center gap-2 cursor-pointer">
              <%= f.check_box :show_solution, { checked: @options[:show_solution] == true, class: "w-4 h-4 text-purple-600 rounded focus:ring-purple-500" }, "true", "false" %>
              <span class="text-sm text-gray-700 dark:text-gray-300">Mostra risultato</span>
            </label>

            <label class="flex items-center gap-2 cursor-pointer">
              <%= f.check_box :show_labels, { checked: @options[:show_labels] == true, class: "w-4 h-4 text-purple-600 rounded focus:ring-purple-500" }, "true", "false" %>
              <span class="text-sm text-gray-700 dark:text-gray-300">Mostra etichette</span>
            </label>
          </div>
        </div>

        <div class="flex gap-4">
          <%= f.submit "Genera",
                      class: "bg-purple-600 hover:bg-purple-700 text-white font-bold py-3 px-6 rounded-lg shadow-lg transition transform hover:scale-105 cursor-pointer" %>

          <% if @multiplications_string.present? %>
            <%= link_to "Cancella", strumenti_moltiplicazioni_quaderno_path,
                        class: "bg-gray-500 hover:bg-gray-600 text-white font-bold py-3 px-6 rounded-lg shadow-lg transition transform hover:scale-105" %>
          <% end %>
        </div>
      <% end %>

      <% if @multiplications_string.present? && @multiplications.blank? %>
        <div class="bg-yellow-50 dark:bg-yellow-900/30 border-l-4 border-yellow-500 p-4 mt-4">
          <p class="text-yellow-900 dark:text-yellow-200 text-sm">
            <strong>Attenzione:</strong> Non sono state trovate operazioni valide.
            Usa il formato: 12,3 x 4,5 oppure 123 x 45
          </p>
        </div>
      <% end %>
    </div>

  </div>
  <!-- Fine Layout a 2 colonne -->

  <!-- Esempio con numeri interi -->
  <div class="bg-gradient-to-br from-green-50 to-emerald-50 dark:from-green-900/30 dark:to-emerald-900/30 rounded-lg shadow-lg p-8 mb-8 print:hidden">
    <h2 class="text-2xl font-bold text-gray-800 dark:text-gray-100 mb-4">Esempio con Numeri Interi</h2>
    <div class="flex justify-center">
      <%= render "strumenti/quaderno_grid",
                 grid: Moltiplicazione.new(multiplicand: 123, multiplier: 45,
                                             show_multiplicand_multiplier: true,
                                             show_toolbar: true).to_grid_matrix %>
    </div>
  </div>

  <!-- Moltiplicazioni Generate -->
  <% if @multiplications && @multiplications.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 print:grid-cols-2 gap-8 print:gap-12">
      <% @multiplications.each_with_index do |moltiplicazione, index| %>
        <div class="flex flex-col items-center print:break-inside-avoid bg-white dark:bg-gray-800 rounded-lg shadow p-6">
          <% unless moltiplicazione.show_multiplicand_multiplier %>
            <h3 class="text-xl font-semibold text-gray-700 dark:text-gray-200 mb-6">
              Esercizio <%= index + 1 %>: <%= moltiplicazione.raw_multiplicand %> Ã— <%= moltiplicazione.raw_multiplier %>
            </h3>
          <% end %>

          <%= render "strumenti/quaderno_grid", grid: moltiplicazione.to_grid_matrix %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
