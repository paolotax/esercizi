<% content_for :titolo, "Moltiplicazioni in Colonna - Strumenti" %>

<div class="max-w-6xl mx-auto px-2 md:px-6 py-8">
  <!-- Header -->
  <div class="bg-white print:hidden rounded-lg shadow-lg p-8 mb-8">
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 mb-4">
      <h1 class="text-3xl font-bold text-gray-800">Moltiplicazioni in Colonna</h1>
      <%= link_to strumenti_moltiplicazioni_examples_path, class: "inline-flex items-center gap-2 px-4 py-2 bg-purple-500 text-white rounded-lg hover:bg-purple-600 transition-colors shadow-lg w-fit" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        </svg>
        Vedi Esempi
      <% end %>
    </div>
    <p class="text-gray-600 text-lg">
      Strumento per esercitarsi con le moltiplicazioni in colonna.
      Supporta moltiplicatori con pi√π cifre e prodotti parziali.
    </p>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8 print:hidden items-start">

    <!-- Colonna Sinistra: Moltiplicazioni Libere -->
    <div class="bg-gradient-to-br from-orange-50 to-yellow-50 rounded-lg shadow-lg p-8">
      <h2 class="text-2xl font-bold text-gray-800 mb-4">Moltiplicazioni Libere</h2>
      <p class="text-gray-700 text-lg mb-6">
        Prova a calcolare una moltiplicazione interattiva. Usa i pulsanti per aiutarti!
      </p>
      <div class="flex justify-center">
        <%= render 'strumenti/moltiplicazioni/column_multiplication', **Moltiplicazione::Renderer.new(multiplicand: 25, multiplier: 12, editable: true, show_toolbar: true).to_partial_params %>
      </div>
    </div>

    <!-- Generatore -->
    <div class="bg-white print:hidden rounded-lg shadow-lg p-8 mb-8">
      <h2 class="text-2xl font-bold text-gray-800 mb-4">Generatore di Moltiplicazioni</h2>

      <%= form_with url: strumenti_moltiplicazioni_generate_path, method: :post, local: true,
                    data: { turbo: false } do |f| %>
        <div class="mb-4">
          <%= f.text_area :multiplications,
                          value: @multiplications_string,
                          placeholder: "Inserisci le moltiplicazioni qui...\nEsempio: 23x4 125x12 34x56",
                          rows: 4,
                          class: "w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:border-purple-500 focus:outline-none font-mono text-sm" %>
        </div>

        <!-- Opzioni -->
        <div class="mb-6 p-4 bg-gray-50 rounded-lg">
          <p class="text-sm font-semibold text-gray-700 mb-3">Opzioni:</p>
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
            <label class="flex items-center gap-2 cursor-pointer">
              <%= f.check_box :show_toolbar, { checked: @options[:show_toolbar] != false, class: "w-4 h-4 text-purple-600 rounded focus:ring-purple-500" }, "true", "false" %>
              <span class="text-sm text-gray-700">Mostra barra strumenti</span>
            </label>

            <label class="flex items-center gap-2 cursor-pointer">
              <%= f.check_box :show_partial_products, { checked: @options[:show_partial_products] == true, class: "w-4 h-4 text-purple-600 rounded focus:ring-purple-500" }, "true", "false" %>
              <span class="text-sm text-gray-700">Mostra prodotti parziali</span>
            </label>

            <label class="flex items-center gap-2 cursor-pointer">
              <%= f.check_box :editable, { checked: @options[:editable] != false, class: "w-4 h-4 text-purple-600 rounded focus:ring-purple-500" }, "true", "false" %>
              <span class="text-sm text-gray-700">Campi modificabili</span>
            </label>

            <label class="flex items-center gap-2 cursor-pointer">
              <%= f.check_box :show_exercise, { checked: @options[:show_exercise] == true, class: "w-4 h-4 text-purple-600 rounded focus:ring-purple-500" }, "true", "false" %>
              <span class="text-sm text-gray-700">Mostra risultato</span>
            </label>
          </div>
        </div>

        <div class="flex gap-4">
          <%= f.submit "Genera",
                      class: "bg-purple-600 hover:bg-purple-700 text-white font-bold py-3 px-6 rounded-lg shadow-lg transition transform hover:scale-105 cursor-pointer" %>

          <% if @multiplications_string.present? %>
            <%= link_to "Cancella", strumenti_moltiplicazioni_path,
                        class: "bg-gray-500 hover:bg-gray-600 text-white font-bold py-3 px-6 rounded-lg shadow-lg transition transform hover:scale-105" %>
          <% end %>
        </div>
      <% end %>

      <% if @multiplications_string.present? && @multiplications.blank? %>
        <div class="bg-yellow-50 border-l-4 border-yellow-500 p-4 mt-4">
          <p class="text-yellow-900 text-sm">
            <strong>Attenzione:</strong> Non sono state trovate moltiplicazioni valide.
            Usa il formato: 123x45 o 123*45
          </p>
        </div>
      <% end %>
    </div>

  </div>

  <!-- Moltiplicazioni Generate -->
  <% if @multiplications && @multiplications.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 print:grid-cols-2 gap-8 print:gap-12">
      <% @multiplications.each do |moltiplicazione| %>
        <div class="flex flex-col items-center print:break-inside-avoid">
          <%= render 'strumenti/moltiplicazioni/column_multiplication', **moltiplicazione.to_partial_params %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
