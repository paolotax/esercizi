<div class="inline-block"
     data-controller="abaco"
     data-abaco-migliaia-value="<%= abaco.migliaia_value %>"
     data-abaco-centinaia-value="<%= abaco.centinaia_value %>"
     data-abaco-decine-value="<%= abaco.decine_value %>"
     data-abaco-unita-value="<%= abaco.unita_value %>"
     data-abaco-show-h-value="<%= abaco.show_h? %>"
     data-abaco-show-k-value="<%= abaco.show_k? %>"
     data-abaco-show-da-value="<%= abaco.show_da? %>"
     data-abaco-show-u-value="<%= abaco.show_u? %>"
     data-abaco-max-value="<%= abaco.max_per_column %>"
     data-abaco-editable-value="<%= abaco.editable %>"
     data-abaco-correct-value="<%= abaco.correct_value %>">

  <!-- Container abaco -->
  <div class="flex gap-4 justify-center items-end" data-controller="auto-advance">

    <% if abaco.show_k? %>
      <%= render 'strumenti/abaco/abaco_column',
                 label: 'k',
                 color: 'purple',
                 value: abaco.migliaia_value,
                 max_per_column: abaco.max_per_column,
                 editable: abaco.editable,
                 input_value: abaco.input_k %>
    <% end %>

    <% if abaco.show_h? %>
      <%= render 'strumenti/abaco/abaco_column',
                 label: 'h',
                 color: 'green',
                 value: abaco.centinaia_value,
                 max_per_column: abaco.max_per_column,
                 editable: abaco.editable,
                 input_value: abaco.input_h %>
    <% end %>

    <% if abaco.show_da? %>
      <%= render 'strumenti/abaco/abaco_column',
                 label: 'da',
                 color: 'red',
                 value: abaco.decine_value,
                 max_per_column: abaco.max_per_column,
                 editable: abaco.editable,
                 input_value: abaco.input_da %>
    <% end %>

    <% if abaco.show_u? %>
      <%= render 'strumenti/abaco/abaco_column',
                 label: 'u',
                 color: 'blue',
                 value: abaco.unita_value,
                 max_per_column: abaco.max_per_column,
                 editable: abaco.editable,
                 input_value: abaco.input_u %>
    <% end %>
  </div>

  <!-- Valore totale (opzionale) -->
  <% if abaco.show_value %>
    <div class="mt-4 text-center">
      <!-- Pulsanti globali +/- -->

      <% if abaco.editable %>
        <div class="flex items-center justify-center gap-3 mt-4">
          <button type="button"
                  data-action="click->abaco#decrementGlobal"
                  class="w-10 h-10 flex items-center justify-center text-white bg-orange-500 hover:bg-orange-600 rounded-full transition-colors shadow-lg">
            <span class="text-2xl font-bold">âˆ’</span>
          </button>
          <button type="button"
                  data-action="click->abaco#incrementGlobal"
                  class="w-10 h-10 flex items-center justify-center text-white bg-cyan-500 hover:bg-cyan-600 rounded-full transition-colors shadow-lg">
            <span class="text-2xl font-bold">+</span>
          </button>
        </div>

        <!-- Valore totale -->
        <div class="flex items-center justify-center mt-3 mb-3 gap-3">
          <span class="text-lg font-bold text-gray-700">Valore: </span>
          <span class="text-3xl font-bold text-cyan-600" data-abaco-target="totalValue"><%= abaco.total_value %></span>
        </div>
      <% end %>

      <!-- Feedback correttezza (se specificato correct_value) -->
      <% if abaco.correct_value %>
        <div class="mt-2" data-abaco-target="feedback"></div>
      <% end %>
    </div>
  <% end %>
</div>
