<%= turbo_frame_tag "esempio-preview" do %>
  <div class="transition-all duration-300 ease-in-out">
    <div class="flex items-center gap-3 mb-4">
      <div class="w-10 h-10 flex items-center justify-center bg-gradient-to-br from-amber-400 to-yellow-500 rounded-xl shadow-md">
        <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
      <h2 class="text-xl font-bold text-gray-800 dark:text-gray-200">Esempio Abaco</h2>
    </div>
    <p class="text-gray-600 dark:text-gray-400 mb-6">
      <% case @options[:mode] %>
      <% when :balls %>
        Conta le palline e scrivi il numero!
      <% when :input %>
        Rappresenta il numero con le palline!
      <% else %>
        Prova a usare l'abaco in modo libero!
      <% end %>
    </p>
    <div class="flex justify-center bg-white/50 dark:bg-gray-800/50 rounded-2xl p-4">
      <% # In modalitÃ  libera (mode nil), non passare correct_value per disabilitare la validazione
         # ma passa i valori k/h/da/u per mostrare le palline
         esempio_correct_value = @options[:mode].present? ? @options[:example_value] : nil
         ev = @options[:example_value].to_i
         esempio_abaco = Abaco::Renderer.new(
           columns: @options[:columns],
           k: (ev / 1000) % 10,
           h: (ev / 100) % 10,
           da: (ev / 10) % 10,
           u: ev % 10,
           correct_value: esempio_correct_value,
           editable: @options[:editable],
           show_value: @options[:show_value],
           mode: @options[:mode]
         ) %>
      <%= render 'strumenti/abaco/abaco', **esempio_abaco.to_partial_params %>
    </div>
  </div>
<% end %>
