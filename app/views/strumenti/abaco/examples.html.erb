<% content_for :titolo, "Esempi Abaco - Strumenti" %>

<div class="max-w-6xl mx-auto px-4 md:px-6 py-8 bg-white dark:bg-gray-900 text-black dark:text-white transition-colors duration-300">
  <!-- Header -->
  <div class="relative overflow-hidden bg-gradient-to-br from-purple-50 to-violet-50 dark:from-purple-900/20 dark:to-violet-900/20 rounded-3xl border-2 border-purple-200/50 dark:border-purple-800/30 p-6 md:p-8 mb-8">
    <!-- Decorazioni sfondo -->
    <div class="absolute top-0 right-0 w-40 h-40 bg-gradient-to-br from-purple-200/30 to-violet-300/20 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2"></div>
    <div class="absolute bottom-0 left-0 w-32 h-32 bg-gradient-to-tr from-violet-200/30 to-purple-300/20 rounded-full blur-2xl translate-y-1/2 -translate-x-1/2"></div>

    <div class="relative flex flex-col md:flex-row md:items-center md:justify-between gap-4">
      <div class="flex items-center gap-4">
        <!-- Icona -->
        <div class="flex-shrink-0 w-16 h-16 flex items-center justify-center bg-gradient-to-br from-purple-400 to-violet-500 rounded-2xl shadow-lg">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
        </div>
        <div>
          <h1 class="text-2xl md:text-3xl font-bold bg-gradient-to-r from-purple-600 to-violet-600 dark:from-purple-400 dark:to-violet-400 bg-clip-text text-transparent">
            Esempi di Utilizzo
          </h1>
          <p class="text-gray-600 dark:text-gray-300 mt-1">
            Esplora diversi modi di utilizzare il componente abaco interattivo
          </p>
        </div>
      </div>

      <%= link_to strumenti_abaco_path,
          data: { turbo_frame: "main-content" },
          class: "group inline-flex items-center gap-2 px-5 py-3 bg-white dark:bg-gray-800 text-purple-600 dark:text-purple-400 font-bold rounded-2xl border-2 border-purple-200 dark:border-purple-700 hover:border-purple-400 hover:shadow-lg hover:scale-105 transition-all duration-200" do %>
        <svg class="w-5 h-5 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M11 17l-5-5m0 0l5-5m-5 5h12"/>
        </svg>
        <span>Torna all'Abaco</span>
      <% end %>
    </div>
  </div>

  <!-- Esempi -->
  <%= render 'strumenti/abaco/abaco_examples' %>

</div>
