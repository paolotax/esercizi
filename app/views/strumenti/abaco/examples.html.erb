<% content_for :titolo, "Esempi Abaco - Strumenti" %>

<div class="max-w-6xl mx-auto px-6 py-8">
  <!-- Header -->
  <div class="bg-white rounded-lg shadow-lg p-8 mb-8">
    <div class="flex items-center justify-between mb-4">
      <h1 class="text-3xl font-bold text-gray-800">Esempi di Utilizzo dell'Abaco</h1>
      <%= link_to strumenti_abaco_path, class: "inline-flex items-center gap-2 px-4 py-2 bg-cyan-500 text-white rounded-lg hover:bg-cyan-600 transition-colors" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Torna all'Abaco
      <% end %>
    </div>
    <p class="text-gray-600 text-lg">
      Esplora diversi modi di utilizzare il componente abaco interattivo nelle tue pagine.
    </p>
  </div>

  <!-- Esempi -->
  <%= render 'shared/abaco_examples' %>

</div>
