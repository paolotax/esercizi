<% content_for :titolo, "Abaco Interattivo - Strumenti" %>

<div class="max-w-6xl mx-auto px-4 md:px-6 py-8 bg-white dark:bg-gray-900 text-black dark:text-white transition-colors duration-300">
  <!-- Header -->
  <div class="relative overflow-hidden bg-gradient-to-br from-orange-50 to-amber-50 dark:from-orange-900/20 dark:to-amber-900/20 rounded-3xl border-2 border-orange-200/50 dark:border-orange-800/30 p-6 md:p-8 mb-8 print:hidden">
    <!-- Decorazioni sfondo -->
    <div class="absolute top-0 right-0 w-40 h-40 bg-gradient-to-br from-orange-200/30 to-amber-300/20 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2"></div>
    <div class="absolute bottom-0 left-0 w-32 h-32 bg-gradient-to-tr from-amber-200/30 to-orange-300/20 rounded-full blur-2xl translate-y-1/2 -translate-x-1/2"></div>

    <div class="relative flex flex-col md:flex-row md:items-center md:justify-between gap-4">
      <div class="flex items-center gap-4">
        <!-- Icona -->
        <div class="flex-shrink-0 w-16 h-16 flex items-center justify-center bg-gradient-to-br from-orange-400 to-amber-500 rounded-2xl shadow-lg">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
          </svg>
        </div>
        <div>
          <h1 class="text-2xl md:text-3xl font-bold bg-gradient-to-r from-orange-600 to-amber-600 dark:from-orange-400 dark:to-amber-400 bg-clip-text text-transparent">
            Abaco Interattivo
          </h1>
          <p class="text-gray-600 dark:text-gray-300 mt-1">
            Impara il sistema posizionale con migliaia, centinaia, decine e unit√†
          </p>
        </div>
      </div>

      <%= link_to strumenti_abaco_examples_path,
          data: { turbo_frame: "main-content" },
          class: "group inline-flex items-center gap-2 px-5 py-3 bg-gradient-to-r from-orange-500 to-amber-500 hover:from-orange-600 hover:to-amber-600 text-white font-bold rounded-2xl shadow-lg hover:shadow-xl hover:scale-105 transition-all duration-200" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        </svg>
        <span>Vedi Esempi</span>
        <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
        </svg>
      <% end %>
    </div>
  </div>

  <!-- Layout a 2 colonne -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8 print:hidden items-start">

    <!-- Colonna Sinistra: Abaco Libero -->
    <div class="relative overflow-hidden bg-gradient-to-br from-amber-50 to-yellow-50 dark:from-amber-900/20 dark:to-yellow-900/20 rounded-3xl border-2 border-amber-200/50 dark:border-amber-800/30 p-6 md:p-8">
      <div class="absolute top-0 right-0 w-24 h-24 bg-gradient-to-br from-yellow-200/40 to-amber-300/30 rounded-full blur-2xl -translate-y-1/2 translate-x-1/2"></div>

      <div class="relative">
        <div class="flex items-center gap-3 mb-4">
          <div class="w-10 h-10 flex items-center justify-center bg-gradient-to-br from-amber-400 to-yellow-500 rounded-xl shadow-md">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h2 class="text-xl font-bold text-gray-800 dark:text-gray-200">Abaco Libero</h2>
        </div>
        <p class="text-gray-600 dark:text-gray-400 mb-6">
          Clicca sulle colonne per formare qualsiasi numero. Le palline si aggiungono dal basso verso l'alto.
        </p>
        <div class="flex justify-center bg-white/50 dark:bg-gray-800/50 rounded-2xl p-4">
          <%= render 'strumenti/abaco/abaco', **Abaco::Renderer.new(columns: 4, show_value: true).to_partial_params %>
        </div>
      </div>
    </div>

    <!-- Generatore -->
    <div class="relative overflow-hidden bg-gradient-to-br from-slate-50 to-gray-50 dark:from-slate-900/30 dark:to-gray-900/30 rounded-3xl border-2 border-slate-200/50 dark:border-slate-800/30 p-6 md:p-8">
      <div class="absolute bottom-0 right-0 w-28 h-28 bg-gradient-to-tl from-slate-200/40 to-gray-300/30 rounded-full blur-2xl translate-y-1/2 translate-x-1/2"></div>

      <div class="relative">
        <div class="flex items-center gap-3 mb-4">
          <div class="w-10 h-10 flex items-center justify-center bg-gradient-to-br from-slate-400 to-gray-500 rounded-xl shadow-md">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
            </svg>
          </div>
          <h2 class="text-xl font-bold text-gray-800 dark:text-gray-200">Generatore di Abachi</h2>
        </div>

        <%= form_with url: strumenti_abaco_generate_path, method: :post, local: true,
                      data: { turbo: false } do |f| %>
          <div class="mb-4">
            <%= f.text_area :numbers,
                            value: @numbers,
                            placeholder: "Inserisci i numeri qui...\nEsempio: 125 573 1234",
                            rows: 4,
                            class: "w-full px-4 py-3 border-2 border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800 rounded-2xl focus:border-orange-400 focus:ring-2 focus:ring-orange-200 dark:focus:ring-orange-900/50 focus:outline-none font-mono text-sm dark:text-white transition-all" %>
          </div>

          <!-- Opzioni -->
          <div class="mb-6 p-4 bg-white/70 dark:bg-gray-800/70 rounded-2xl border border-gray-100 dark:border-gray-700">
            <p class="text-sm font-bold text-gray-700 dark:text-gray-300 mb-3">Opzioni:</p>
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
              <label class="flex items-center gap-3 cursor-pointer group">
                <%= f.check_box :editable, { checked: @options[:editable] != false, class: "w-5 h-5 text-orange-500 rounded-lg border-2 border-gray-300 focus:ring-orange-400 focus:ring-offset-0" }, "true", "false" %>
                <span class="text-sm text-gray-700 dark:text-gray-300 group-hover:text-orange-600 dark:group-hover:text-orange-400 transition-colors">Campi modificabili</span>
              </label>

              <label class="flex items-center gap-3 cursor-pointer group">
                <%= f.check_box :show_value, { checked: @options[:show_value] == true, class: "w-5 h-5 text-orange-500 rounded-lg border-2 border-gray-300 focus:ring-orange-400 focus:ring-offset-0" }, "true", "false" %>
                <span class="text-sm text-gray-700 dark:text-gray-300 group-hover:text-orange-600 dark:group-hover:text-orange-400 transition-colors">Mostra valore numerico</span>
              </label>
            </div>
          </div>

          <div class="flex flex-wrap gap-3">
            <%= f.submit "Genera",
                        class: "group inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-orange-500 to-amber-500 hover:from-orange-600 hover:to-amber-600 text-white font-bold rounded-2xl shadow-lg hover:shadow-xl hover:scale-105 transition-all duration-200 cursor-pointer" %>

            <% if @numbers.present? %>
              <%= link_to strumenti_abaco_path,
                  class: "inline-flex items-center gap-2 px-6 py-3 bg-white dark:bg-gray-800 text-gray-600 dark:text-gray-400 font-semibold rounded-2xl border-2 border-gray-200 dark:border-gray-700 hover:border-gray-400 hover:shadow-lg hover:scale-105 transition-all duration-200" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                </svg>
                Cancella
              <% end %>
            <% end %>
          </div>
        <% end %>

        <% if @numbers.present? && @abachi.blank? %>
          <div class="mt-4 p-4 bg-gradient-to-r from-yellow-50 to-amber-50 dark:from-yellow-900/20 dark:to-amber-900/20 border-2 border-yellow-200/50 dark:border-yellow-800/30 rounded-2xl">
            <div class="flex items-start gap-3">
              <div class="flex-shrink-0 w-8 h-8 flex items-center justify-center bg-yellow-400 rounded-xl">
                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                </svg>
              </div>
              <p class="text-yellow-800 dark:text-yellow-200 text-sm">
                <strong>Attenzione:</strong> Non sono stati trovati numeri validi. Inserisci numeri da 0 a 9999.
              </p>
            </div>
          </div>
        <% end %>
      </div>
    </div>

  </div>

  <!-- Abachi Generati -->
  <% if @abachi && @abachi.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 print:grid-cols-2 gap-6 print:gap-12">
      <% @abachi.each do |abaco| %>
        <div class="relative overflow-hidden bg-gradient-to-br from-orange-50 to-amber-50 dark:from-orange-900/20 dark:to-amber-900/20 rounded-3xl border-2 border-orange-200/50 dark:border-orange-800/30 p-6 print:break-inside-avoid">
          <div class="absolute top-0 left-0 w-20 h-20 bg-gradient-to-br from-orange-200/30 to-amber-300/20 rounded-full blur-2xl -translate-y-1/2 -translate-x-1/2"></div>

          <div class="relative text-center">
            <h3 class="text-lg font-bold text-gray-700 dark:text-gray-200 mb-4">
              Forma il numero <span class="text-orange-600 dark:text-orange-400"><%= abaco.correct_value %></span>
            </h3>
            <div class="bg-white/50 dark:bg-gray-800/50 rounded-2xl p-4">
              <%= render 'strumenti/abaco/abaco', **abaco.to_partial_params %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
