<% content_for :titolo, "Abaco Interattivo - Strumenti" %>

<div class="max-w-6xl mx-auto px-6 py-8">
  <!-- Header -->
  <div class="bg-white rounded-lg shadow-lg p-8 mb-8">
    <div class="flex items-center justify-between mb-4">
      <h1 class="text-3xl font-bold text-gray-800">Abaco Interattivo</h1>
      <%= link_to strumenti_abaco_examples_path, class: "inline-flex items-center gap-2 px-4 py-2 bg-cyan-500 text-white rounded-lg hover:bg-cyan-600 transition-colors shadow-lg" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        </svg>
        Vedi Esempi
      <% end %>
    </div>
    <p class="text-gray-600 text-lg">
      Strumento didattico per imparare il sistema posizionale con migliaia, centinaia, decine e unità.
      Clicca sulle colonne dell'abaco per aggiungere o rimuovere palline.
    </p>
  </div>

  <!-- Abaco Libero -->
  <div class="bg-gradient-to-br from-orange-50 to-yellow-50 rounded-lg shadow-lg p-8 mb-8">
    <h2 class="text-2xl font-bold text-gray-800 mb-4">Abaco Libero</h2>
    <p class="text-gray-700 text-lg mb-6">
      Clicca sulle colonne per formare qualsiasi numero. Le palline si aggiungono dal basso verso l'alto.
    </p>
    <div class="flex justify-center">
      <%= render 'shared/abaco', migliaia: 0, centinaia: 0, decine: 0, unita: 0 %>
    </div>
  </div>

  <!-- Generatore di Abachi -->
  <div class="print-hidden bg-white rounded-lg shadow-lg p-8 mb-8">
    <h2 class="text-2xl font-bold text-gray-800 mb-6">Generatore di Abachi</h2>

    <p class="text-gray-600 mb-8">
      Inserisci uno o più numeri separati da virgola, punto e virgola o nuova riga.
      <br>
      <strong>Esempi da copiare e incollare:</strong>
    </p>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-8">
      <div class="bg-gray-50 p-4 rounded-lg">
        <p class="text-sm font-semibold text-gray-700 mb-2">Solo unità (0-9):</p>
        <code class="bg-white px-3 py-2 rounded border block font-mono text-sm">5, 8, 3, 9</code>
      </div>

      <div class="bg-gray-50 p-4 rounded-lg">
        <p class="text-sm font-semibold text-gray-700 mb-2">Decine e unità (10-99):</p>
        <code class="bg-white px-3 py-2 rounded border block font-mono text-sm">23, 56, 89, 41</code>
      </div>

      <div class="bg-gray-50 p-4 rounded-lg">
        <p class="text-sm font-semibold text-gray-700 mb-2">Centinaia, decine e unità (100-999):</p>
        <code class="bg-white px-3 py-2 rounded border block font-mono text-sm">125, 300, 573, 999</code>
      </div>

      <div class="bg-gray-50 p-4 rounded-lg">
        <p class="text-sm font-semibold text-gray-700 mb-2">Con migliaia (1000-9999):</p>
        <code class="bg-white px-3 py-2 rounded border block font-mono text-sm">1234, 5000, 8765</code>
      </div>
    </div>

    <%= form_with url: strumenti_abaco_path, method: :get, local: true,
                  data: { turbo: false },
                  class: "mb-8" do |f| %>
      <div class="mb-4">
        <%= f.text_area :numbers,
                        value: @numbers,
                        placeholder: "125\n36\n573\n1234",
                        rows: 6,
                        class: "w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:border-orange-500 focus:outline-none font-mono text-lg" %>
      </div>

      <div class="flex gap-4">
        <%= f.submit "Genera Abachi",
                    class: "bg-orange-600 hover:bg-orange-700 text-white font-bold py-3 px-6 rounded-lg shadow-lg transition transform hover:scale-105" %>

        <% if @numbers.present? %>
          <%= link_to "Cancella", strumenti_abaco_path,
                      class: "bg-gray-500 hover:bg-gray-600 text-white font-bold py-3 px-6 rounded-lg shadow-lg transition transform hover:scale-105" %>
        <% end %>
      </div>
    <% end %>

    <% if @numbers.present? && @numbers_array.blank? %>
      <div class="bg-yellow-50 border-l-4 border-yellow-500 p-4 mt-8">
        <p class="text-yellow-900">
          <strong>Attenzione:</strong> Non sono stati trovati numeri validi.
          Inserisci numeri da 0 a 9999.
        </p>
      </div>
    <% end %>
  </div>

  <!-- Abachi Generati -->
  <% if @numbers_array && @numbers_array.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 print:grid-cols-3 gap-8 print:gap-12">
      <% @numbers_array.each_with_index do |number, index| %>
        <%
          # Determina quali colonne mostrare in base al numero
          h = (number / 1000) % 10
          k = (number / 100) % 10
          da = (number / 10) % 10
          u = number % 10

          # Parametri per il partial
          abaco_params = {}
          abaco_params[:migliaia] = h if number >= 1000
          abaco_params[:centinaia] = k if number >= 100
          abaco_params[:decine] = da if number >= 10
          abaco_params[:unita] = u
          abaco_params[:editable] = true
          abaco_params[:correct_value] = number
        %>

        <div class="flex flex-col items-center print:break-inside-avoid bg-gradient-to-br from-orange-50 to-yellow-50 rounded-lg p-6">
          <h3 class="text-xl font-semibold text-gray-700 mb-6">
            Forma il numero <%= number %>
          </h3>

          <%= render 'shared/abaco', **abaco_params %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
