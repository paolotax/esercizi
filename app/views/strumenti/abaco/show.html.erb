<% content_for :titolo, "Abaco Interattivo - Strumenti" %>

<div class="max-w-6xl mx-auto px-6 py-8">
  <!-- Header -->
  <div class="bg-white print:hidden rounded-lg shadow-lg p-8 mb-8">
    <div class="flex items-center justify-between mb-4">
      <h1 class="text-3xl font-bold text-gray-800">Abaco Interattivo</h1>
      <%= link_to strumenti_abaco_examples_path, class: "inline-flex items-center gap-2 px-4 py-2 bg-cyan-500 text-white rounded-lg hover:bg-cyan-600 transition-colors shadow-lg" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        </svg>
        Vedi Esempi
      <% end %>
    </div>
    <p class="text-gray-600 text-lg">
      Strumento didattico per imparare il sistema posizionale con migliaia, centinaia, decine e unit√†.
      Clicca sulle colonne dell'abaco per aggiungere o rimuovere palline.
    </p>
  </div>

  <!-- Layout a 2 colonne -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8 print:hidden items-start">

    <!-- Colonna Sinistra: Abaco Libero -->
    <div class="bg-gradient-to-br from-orange-50 to-yellow-50 rounded-lg shadow-lg p-8">
      <h2 class="text-2xl font-bold text-gray-800 mb-4">Abaco Libero</h2>
      <p class="text-gray-700 text-lg mb-6">
        Clicca sulle colonne per formare qualsiasi numero. Le palline si aggiungono dal basso verso l'alto.
      </p>
      <div class="flex justify-center">
        <%= render 'shared/abaco', **Abaco.new(number: 9999, k: 0, h: 0, da: 0, u: 0).to_partial_params %>
      </div>
    </div>

    <!-- Colonna Destra: Esempi e Form -->
    <div class="flex flex-col gap-8">

      <!-- Box Esempi -->
      <div class="bg-white rounded-lg shadow-lg p-8">
        <h2 class="text-2xl font-bold text-gray-800 mb-4">Esempi da Copiare</h2>

        <p class="text-gray-600 mb-4 text-sm">
          <strong>Formato base:</strong> <code class="bg-gray-100 px-2 py-1 rounded">numero</code> (tutto da completare)
          <br>
          <strong>Con parametri:</strong> <code class="bg-gray-100 px-2 py-1 rounded">numero:param=valore,param=valore</code>
        </p>

        <!-- Esempi da copiare -->
        <div class="grid grid-cols-1 gap-2" data-controller="copy-to-clipboard">
          <div class="bg-gray-50 p-3 rounded-lg">
            <div class="flex items-center justify-between mb-1">
              <p class="text-xs font-semibold text-gray-700">Numeri semplici:</p>
              <button type="button"
                      data-action="click->copy-to-clipboard#copy"
                      data-copy-to-clipboard-text-param="125&#x0A;573&#x0A;1234"
                      class="text-xs px-2 py-1 bg-cyan-500 text-white rounded hover:bg-cyan-600 transition-colors">
                Copia
              </button>
            </div>
            <code class="bg-white px-2 py-1 rounded border block font-mono text-xs">125 573 1234</code>
          </div>

          <div class="bg-gray-50 p-3 rounded-lg">
            <div class="flex items-center justify-between mb-1">
              <p class="text-xs font-semibold text-gray-700">Centinaia precompilate:</p>
              <button type="button"
                      data-action="click->copy-to-clipboard#copy"
                      data-copy-to-clipboard-text-param="125:k=1,da=nil,u=nil 300:k=3,da=nil,u=nil"
                      class="text-xs px-2 py-1 bg-cyan-500 text-white rounded hover:bg-cyan-600 transition-colors">
                Copia
              </button>
            </div>
            <code class="bg-white px-2 py-1 rounded border block font-mono text-xs">125:k=1,da=nil,u=nil 300:k=3,da=nil,u=nil</code>
          </div>

          <div class="bg-gray-50 p-3 rounded-lg">
            <div class="flex items-center justify-between mb-1">
              <p class="text-xs font-semibold text-gray-700">Con show_value:</p>
              <button type="button"
                      data-action="click->copy-to-clipboard#copy"
                      data-copy-to-clipboard-text-param="573:show_value=true 999:show_value=true"
                      class="text-xs px-2 py-1 bg-cyan-500 text-white rounded hover:bg-cyan-600 transition-colors">
                Copia
              </button>
            </div>
            <code class="bg-white px-2 py-1 rounded border block font-mono text-xs">573:show_value=true 999:show_value=true</code>
          </div>

          <div class="bg-gray-50 p-3 rounded-lg">
            <div class="flex items-center justify-between mb-1">
              <p class="text-xs font-semibold text-gray-700">Misti:</p>
              <button type="button"
                      data-action="click->copy-to-clipboard#copy"
                      data-copy-to-clipboard-text-param="1234:h=1,k=2,da=nil,u=nil 5678:h=5,k=nil,da=nil,u=8"
                      class="text-xs px-2 py-1 bg-cyan-500 text-white rounded hover:bg-cyan-600 transition-colors">
                Copia
              </button>
            </div>
            <code class="bg-white px-2 py-1 rounded border block font-mono text-xs">1234:h=1,k=2,da=nil,u=nil 5678:h=5,k=nil,da=nil,u=8</code>
          </div>
        </div>
      </div>

      <!-- Box Generatore -->
      <div class="bg-white rounded-lg shadow-lg p-8">
        <h2 class="text-2xl font-bold text-gray-800 mb-4">Generatore di Abachi</h2>

        <p class="text-sm text-gray-600 mb-4">
          <strong>Parametri disponibili:</strong>
          h, k, da, u (valori iniziali: numero o nil per da completare),
          editable (true/false),
          show_value (true/false),
          correct_value (numero corretto)
        </p>

        <%= form_with url: strumenti_abaco_generate_path, method: :post, local: true,
                      data: { turbo: false } do |f| %>
          <div class="mb-4">
            <%= f.text_area :numbers,
                            value: @numbers,
                            placeholder: "Incolla qui i tuoi numeri...",
                            rows: 6,
                            class: "w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:border-orange-500 focus:outline-none font-mono text-sm" %>
          </div>

          <div class="flex gap-4">
            <%= f.submit "Genera Abachi",
                        class: "bg-orange-600 hover:bg-orange-700 text-white font-bold py-3 px-6 rounded-lg shadow-lg transition transform hover:scale-105" %>

            <% if @numbers.present? %>
              <%= link_to "Cancella", strumenti_abaco_path,
                          class: "bg-gray-500 hover:bg-gray-600 text-white font-bold py-3 px-6 rounded-lg shadow-lg transition transform hover:scale-105" %>
            <% end %>
          </div>
        <% end %>

        <% if @numbers.present? && @abachi.blank? %>
          <div class="bg-yellow-50 border-l-4 border-yellow-500 p-4 mt-4">
            <p class="text-yellow-900 text-sm">
              <strong>Attenzione:</strong> Non sono stati trovati numeri validi.
              Inserisci numeri da 0 a 9999.
            </p>
          </div>
        <% end %>
      </div>
    </div>
    <!-- Fine Colonna Destra -->

  </div>
  <!-- Fine Layout a 2 colonne -->

  <!-- Abachi Generati -->
  <% if @abachi && @abachi.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 print:grid-cols-2 gap-8 print:gap-12 print:divide-x print:divide-gray-300">
      <% @abachi.each do |abaco| %>
        <div class="flex flex-col items-center print:break-inside-avoid bg-gradient-to-br from-orange-50 to-yellow-50 rounded-lg p-6">
          <h3 class="text-xl font-semibold text-gray-700 mb-6">
            Forma il numero <%= abaco.number %>
          </h3>

          <%= render 'shared/abaco', **abaco.to_partial_params %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
