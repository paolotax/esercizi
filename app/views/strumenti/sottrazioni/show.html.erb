<% content_for :titolo, "Sottrazioni in Colonna - Strumenti" %>

<div class="max-w-6xl mx-auto px-4 md:px-6 py-8 bg-white dark:bg-gray-900 text-black dark:text-white transition-colors duration-300">
  <!-- Header -->
  <div class="relative overflow-hidden bg-gradient-to-br from-red-50 to-rose-50 dark:from-red-900/20 dark:to-rose-900/20 rounded-3xl border-2 border-red-200/50 dark:border-red-800/30 p-6 md:p-8 mb-8 print:hidden">
    <!-- Decorazioni sfondo -->
    <div class="absolute top-0 right-0 w-40 h-40 bg-gradient-to-br from-red-200/30 to-rose-300/20 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2"></div>
    <div class="absolute bottom-0 left-0 w-32 h-32 bg-gradient-to-tr from-rose-200/30 to-red-300/20 rounded-full blur-2xl translate-y-1/2 -translate-x-1/2"></div>

    <div class="relative flex flex-col md:flex-row md:items-center md:justify-between gap-4">
      <div class="flex items-center gap-4">
        <!-- Icona -->
        <div class="flex-shrink-0 w-16 h-16 flex items-center justify-center bg-gradient-to-br from-red-400 to-rose-500 rounded-2xl shadow-lg">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M20 12H4" />
          </svg>
        </div>
        <div>
          <h1 class="text-2xl md:text-3xl font-bold bg-gradient-to-r from-red-600 to-rose-600 dark:from-red-400 dark:to-rose-400 bg-clip-text text-transparent">
            Sottrazioni in Colonna
          </h1>
          <p class="text-gray-600 dark:text-gray-300 mt-1">
            Sottrazioni in colonna con prestiti interattivi. Supporta numeri decimali.
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- Layout a 2 colonne: Esempio a sinistra, Opzioni a destra -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8 print:hidden items-start">

    <!-- Colonna Sinistra: Esempio -->
    <div class="relative overflow-hidden bg-gradient-to-br from-rose-50 to-red-50 dark:from-rose-900/20 dark:to-red-900/20 rounded-3xl border-2 border-rose-200/50 dark:border-rose-800/30 p-6 md:p-8">
      <div class="absolute top-0 right-0 w-24 h-24 bg-gradient-to-br from-red-200/40 to-rose-300/30 rounded-full blur-2xl -translate-y-1/2 translate-x-1/2"></div>

      <div class="relative">
        <%= turbo_frame_tag "esempio-preview" do %>
          <div class="transition-all duration-300 ease-in-out">
            <div class="flex items-center gap-3 mb-4">
              <div class="w-10 h-10 flex items-center justify-center bg-gradient-to-br from-rose-400 to-red-500 rounded-xl shadow-md">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <h2 class="text-xl font-bold text-gray-800 dark:text-gray-200">
                <%= @options[:example_type] == 'interi' ? 'Esempio con Numeri Interi' : 'Esempio con Decimali' %>
              </h2>
            </div>
            <p class="text-gray-600 dark:text-gray-400 mb-6">
              <%= @options[:example_type] == 'interi' ? 'Prova a calcolare questa sottrazione con numeri interi!' : 'Prova a calcolare questa sottrazione con numeri decimali!' %>
            </p>
            <div class="flex justify-center bg-white/50 dark:bg-gray-800/50 rounded-2xl p-4">
              <% esempio_operands = @options[:example_type] == 'interi' ? [487, 258] : ["12,34", "5,67"] %>
              <%= render "strumenti/quaderno_grid",
                         grid: Sottrazione::Renderer.new(minuend: esempio_operands[0],
                                                 subtrahend: esempio_operands[1],
                                                 title: @options[:title],
                                                 show_minuend_subtrahend: @options[:show_minuend_subtrahend],
                                                 show_toolbar: @options[:show_toolbar],
                                                 show_labels: @options[:show_labels],
                                                 show_solution: @options[:show_solution],
                                                 show_borrow: @options[:show_borrow],
                                                 grid_style: @options[:grid_style]&.to_sym || :quaderno).to_grid_matrix %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Colonna Destra: Opzioni -->
    <div class="relative overflow-hidden bg-gradient-to-br from-slate-50 to-gray-50 dark:from-slate-900/30 dark:to-gray-900/30 rounded-3xl border-2 border-slate-200/50 dark:border-slate-800/30 p-6 md:p-8">
      <div class="absolute bottom-0 right-0 w-28 h-28 bg-gradient-to-tl from-slate-200/40 to-gray-300/30 rounded-full blur-2xl translate-y-1/2 translate-x-1/2"></div>

      <div class="relative">
        <div class="flex items-center gap-3 mb-4">
          <div class="w-10 h-10 flex items-center justify-center bg-gradient-to-br from-slate-400 to-gray-500 rounded-xl shadow-md">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
          </div>
          <h2 class="text-xl font-bold text-gray-800 dark:text-gray-200">Opzioni</h2>
        </div>

        <%= form_with url: preview_strumenti_sottrazioni_path, method: :get,
                      data: { turbo_frame: "esempio-preview" },
                      id: "preview-options-form" do |pf| %>

          <!-- Toggle Decimali/Interi e Stile -->
          <div class="mb-4 flex flex-wrap items-center justify-between gap-4">
            <!-- Toggle Decimali/Interi -->
            <div class="flex items-center gap-2">
              <span class="text-sm font-medium <%= @options[:example_type] != 'interi' ? 'text-rose-600 dark:text-rose-400' : 'text-gray-400 dark:text-gray-500' %>">Decimali</span>
              <label class="relative inline-flex items-center cursor-pointer">
                <%= pf.check_box :example_type,
                                 { checked: @options[:example_type] == 'interi',
                                   class: "sr-only peer",
                                   onchange: "this.form.requestSubmit()" },
                                 "interi", "decimali" %>
                <div class="w-11 h-6 bg-rose-500 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-red-300 dark:peer-focus:ring-red-800 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-red-500"></div>
              </label>
              <span class="text-sm font-medium <%= @options[:example_type] == 'interi' ? 'text-red-600 dark:text-red-400' : 'text-gray-400 dark:text-gray-500' %>">Interi</span>
            </div>

            <!-- Toggle Stile Quaderno/Colonna -->
            <div class="flex items-center gap-2">
              <span class="text-sm font-medium <%= @options[:grid_style] != 'column' ? 'text-gray-600 dark:text-gray-300' : 'text-gray-400 dark:text-gray-500' %>">Quaderno</span>
              <label class="relative inline-flex items-center cursor-pointer">
                <%= pf.check_box :grid_style,
                                 { checked: @options[:grid_style] == 'column',
                                   class: "sr-only peer",
                                   onchange: "this.form.requestSubmit()" },
                                 "column", "quaderno" %>
                <div class="w-11 h-6 bg-gray-400 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-red-300 dark:peer-focus:ring-red-800 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-red-500"></div>
              </label>
              <span class="text-sm font-medium <%= @options[:grid_style] == 'column' ? 'text-red-600 dark:text-red-400' : 'text-gray-400 dark:text-gray-500' %>">Colonna</span>
            </div>
          </div>

          <!-- Titolo -->
          <div class="mb-4">
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Titolo (opzionale):</label>
            <%= pf.text_field :title,
                              value: @options[:title],
                              placeholder: "Titolo personalizzato",
                              class: "w-full px-3 py-2 border-2 border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800 rounded-xl focus:border-red-400 focus:ring-2 focus:ring-red-200 dark:focus:ring-red-900/50 focus:outline-none text-sm dark:text-white transition-all",
                              onchange: "this.form.requestSubmit()" %>
          </div>

          <!-- Opzioni checkbox -->
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
            <label class="flex items-center gap-3 cursor-pointer group">
              <%= pf.check_box :show_minuend_subtrahend, { checked: @options[:show_minuend_subtrahend], class: "w-5 h-5 text-red-500 rounded-lg border-2 border-gray-300 focus:ring-red-400 focus:ring-offset-0", onchange: "this.form.requestSubmit()" }, "true", "false" %>
              <span class="text-sm text-gray-700 dark:text-gray-300 group-hover:text-red-600 dark:group-hover:text-red-400 transition-colors">Mostra operandi</span>
            </label>

            <label class="flex items-center gap-3 cursor-pointer group">
              <%= pf.check_box :show_solution, { checked: @options[:show_solution], class: "w-5 h-5 text-red-500 rounded-lg border-2 border-gray-300 focus:ring-red-400 focus:ring-offset-0", onchange: "this.form.requestSubmit()" }, "true", "false" %>
              <span class="text-sm text-gray-700 dark:text-gray-300 group-hover:text-red-600 dark:group-hover:text-red-400 transition-colors">Mostra risultato</span>
            </label>

            <label class="flex items-center gap-3 cursor-pointer group">
              <%= pf.check_box :show_borrow, { checked: @options[:show_borrow], class: "w-5 h-5 text-red-500 rounded-lg border-2 border-gray-300 focus:ring-red-400 focus:ring-offset-0", onchange: "this.form.requestSubmit()" }, "true", "false" %>
              <span class="text-sm text-gray-700 dark:text-gray-300 group-hover:text-red-600 dark:group-hover:text-red-400 transition-colors">Mostra prestiti</span>
            </label>

            <label class="flex items-center gap-3 cursor-pointer group">
              <%= pf.check_box :show_labels, { checked: @options[:show_labels], class: "w-5 h-5 text-red-500 rounded-lg border-2 border-gray-300 focus:ring-red-400 focus:ring-offset-0", onchange: "this.form.requestSubmit()" }, "true", "false" %>
              <span class="text-sm text-gray-700 dark:text-gray-300 group-hover:text-red-600 dark:group-hover:text-red-400 transition-colors">Mostra etichette</span>
            </label>

            <label class="flex items-center gap-3 cursor-pointer group sm:col-span-2">
              <%= pf.check_box :show_toolbar, { checked: @options[:show_toolbar], class: "w-5 h-5 text-red-500 rounded-lg border-2 border-gray-300 focus:ring-red-400 focus:ring-offset-0", onchange: "this.form.requestSubmit()" }, "true", "false" %>
              <span class="text-sm text-gray-700 dark:text-gray-300 group-hover:text-red-600 dark:group-hover:text-red-400 transition-colors">Mostra barra strumenti</span>
            </label>
          </div>
        <% end %>
      </div>
    </div>

  </div>

  <!-- Generatore (sotto, a tutta larghezza) -->
  <div class="relative overflow-hidden bg-gradient-to-br from-red-50 to-rose-50 dark:from-red-900/20 dark:to-rose-900/20 rounded-3xl border-2 border-red-200/50 dark:border-red-800/30 p-6 md:p-8 mb-8 print:hidden">
    <div class="absolute top-0 right-0 w-32 h-32 bg-gradient-to-br from-red-200/30 to-rose-300/20 rounded-full blur-2xl -translate-y-1/2 translate-x-1/2"></div>

    <div class="relative">
      <div class="flex items-center gap-3 mb-4">
        <div class="w-10 h-10 flex items-center justify-center bg-gradient-to-br from-red-400 to-rose-500 rounded-xl shadow-md">
          <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
          </svg>
        </div>
        <h2 class="text-xl font-bold text-gray-800 dark:text-gray-200">Generatore di Sottrazioni</h2>
      </div>

      <%= form_with url: strumenti_sottrazioni_path, method: :post, local: true,
                    data: { turbo: false } do |f| %>
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-4 items-end">
          <div class="lg:col-span-2">
            <%= f.text_area :operations,
                            value: @operations,
                            placeholder: "Inserisci le sottrazioni qui... Esempio: 12,34 - 5,67 oppure 487 - 258 (una per riga)",
                            rows: 2,
                            class: "w-full px-4 py-3 border-2 border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800 rounded-2xl focus:border-red-400 focus:ring-2 focus:ring-red-200 dark:focus:ring-red-900/50 focus:outline-none font-mono text-sm dark:text-white transition-all" %>
          </div>

          <!-- Hidden fields per il generatore (copia le opzioni correnti) -->
          <div class="hidden">
            <%= f.hidden_field :show_toolbar, value: @options[:show_toolbar], id: "gen_show_toolbar" %>
            <%= f.hidden_field :show_borrow, value: @options[:show_borrow], id: "gen_show_borrow" %>
            <%= f.hidden_field :show_minuend_subtrahend, value: @options[:show_minuend_subtrahend], id: "gen_show_minuend_subtrahend" %>
            <%= f.hidden_field :show_solution, value: @options[:show_solution], id: "gen_show_solution" %>
            <%= f.hidden_field :show_labels, value: @options[:show_labels], id: "gen_show_labels" %>
            <%= f.hidden_field :grid_style, value: @options[:grid_style], id: "gen_grid_style" %>
          </div>

          <div class="flex flex-wrap gap-3">
            <%= f.submit "Genera",
                        class: "group inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-red-500 to-rose-500 hover:from-red-600 hover:to-rose-600 text-white font-bold rounded-2xl shadow-lg hover:shadow-xl hover:scale-105 transition-all duration-200 cursor-pointer" %>

            <% if @operations.present? %>
              <%= link_to strumenti_sottrazioni_path,
                  class: "inline-flex items-center gap-2 px-6 py-3 bg-white dark:bg-gray-800 text-gray-600 dark:text-gray-400 font-semibold rounded-2xl border-2 border-gray-200 dark:border-gray-700 hover:border-gray-400 hover:shadow-lg hover:scale-105 transition-all duration-200" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                </svg>
                Cancella
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>

      <% if @operations.present? && @sottrazioni.blank? %>
        <div class="mt-4 p-4 bg-gradient-to-r from-yellow-50 to-amber-50 dark:from-yellow-900/20 dark:to-amber-900/20 border-2 border-yellow-200/50 dark:border-yellow-800/30 rounded-2xl">
          <div class="flex items-start gap-3">
            <div class="flex-shrink-0 w-8 h-8 flex items-center justify-center bg-yellow-400 rounded-xl">
              <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
              </svg>
            </div>
            <p class="text-yellow-800 dark:text-yellow-200 text-sm">
              <strong>Attenzione:</strong> Non sono state trovate operazioni valide. Usa il formato: 12,34 - 5,67 oppure 487 - 258
            </p>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Sottrazioni Generate -->
  <% if @sottrazioni && @sottrazioni.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 print:grid-cols-2 gap-6 print:gap-12">
      <% @sottrazioni.each_with_index do |sottrazione, index| %>
        <div class="relative overflow-hidden bg-gradient-to-br from-red-50 to-rose-50 dark:from-red-900/20 dark:to-rose-900/20 rounded-3xl border-2 border-red-200/50 dark:border-red-800/30 p-6 print:break-inside-avoid">
          <div class="absolute top-0 left-0 w-20 h-20 bg-gradient-to-br from-red-200/30 to-rose-300/20 rounded-full blur-2xl -translate-y-1/2 -translate-x-1/2"></div>

          <div class="relative text-center">
            <% unless sottrazione.show_minuend_subtrahend %>
              <h3 class="text-lg font-bold text-gray-700 dark:text-gray-200 mb-4">
                Esercizio <%= index + 1 %>: <%= sottrazione %>
              </h3>
            <% end %>
            <div class="bg-white/50 dark:bg-gray-800/50 rounded-2xl p-4">
              <%= render "strumenti/quaderno_grid", grid: sottrazione.to_grid_matrix %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
