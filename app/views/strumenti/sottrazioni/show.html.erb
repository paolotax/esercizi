<% content_for :titolo, "Sottrazioni in Colonna - Strumenti" %>

<div class="max-w-6xl mx-auto px-6 py-8">
  <!-- Form section - hidden in print -->
  <div class="print-hidden bg-white rounded-lg shadow-lg p-8 mb-8">
    <h1 class="text-3xl font-bold text-gray-800 mb-6">Generatore di Sottrazioni in Colonna</h1>

    <p class="text-gray-600 mb-8">
      Inserisci una o più operazioni separate da virgola, punto e virgola o nuova riga.
      Esempi: <code class="bg-gray-100 px-2 py-1 rounded">487 - 258</code>,
      <code class="bg-gray-100 px-2 py-1 rounded">3570 - 1895</code>,
      <code class="bg-gray-100 px-2 py-1 rounded">526 - 364</code>,
      <code class="bg-gray-100 px-2 py-1 rounded">618 - 240</code>
    </p>

    <%= form_with url: strumenti_sottrazioni_path, method: :get, local: true,
                  data: { turbo: false },
                  class: "mb-8" do |f| %>
      <div class="mb-4">
        <%= f.text_area :operations,
                        value: @operations,
                        placeholder: "487 - 258\n526 - 364\n618 - 240",
                        rows: 6,
                        class: "w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:border-cyan-500 focus:outline-none font-mono text-lg" %>
      </div>

      <div class="mb-4">
        <label class="flex items-center gap-2 text-gray-700">
          <%= f.check_box :show_minuend_subtrahend, {}, "true", "false" %>
          <span class="font-semibold">Mostra minuendo e sottraendo già compilati (solo risultato da scrivere)</span>
        </label>
      </div>

      <div class="flex gap-4">
        <%= f.submit "Genera Griglie",
                    class: "bg-cyan-600 hover:bg-cyan-700 text-white font-bold py-3 px-6 rounded-lg shadow-lg transition transform hover:scale-105" %>

        <% if @operations.present? %>
          <%= link_to "Cancella", strumenti_sottrazioni_path,
                      class: "bg-gray-500 hover:bg-gray-600 text-white font-bold py-3 px-6 rounded-lg shadow-lg transition transform hover:scale-105" %>
        <% end %>
      </div>
    <% end %>

    <% if @operations.present? && @operations_array.blank? %>
      <div class="bg-yellow-50 border-l-4 border-yellow-500 p-4 mt-8">
        <p class="text-yellow-900">
          <strong>Attenzione:</strong> Non sono state trovate operazioni valide.
          Assicurati di inserire operazioni nel formato corretto (es: "487 - 258").
        </p>
      </div>
    <% end %>
  </div>

  <!-- Exercises section - printable -->
  <% if @operations_array && @operations_array.any? %>
    <div class="grid grid-cols-1 print:grid-cols-2 gap-8 print:gap-12">
      <% @operations_array.each_with_index do |operation, index| %>
        <div class="flex flex-col items-center print:break-inside-avoid">
          <% unless @show_minuend_subtrahend %>
            <h3 class="text-xl font-semibold text-gray-700 mb-6">
              Esercizio <%= index + 1 %>: <%= operation %>
            </h3>
          <% end %>

          <%= render partial: "shared/column_subtraction",
                    locals: {
                      operation: operation,
                      show_exercise: !@show_minuend_subtrahend,
                      show_minuend_subtrahend: @show_minuend_subtrahend,
                      show_toolbar: true,
                      show_borrow: true
                    } %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
