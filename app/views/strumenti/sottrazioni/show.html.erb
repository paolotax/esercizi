<% content_for :titolo, "Sottrazioni in Colonna - Strumenti" %>

<div class="max-w-6xl mx-auto px-6 py-8">
  <!-- Header -->
  <div class="bg-white print:hidden rounded-lg shadow-lg p-8 mb-8">
    <h1 class="text-3xl font-bold text-gray-800">Sottrazioni in Colonna</h1>
    <p class="text-gray-600 text-lg mt-2">
      Strumento didattico per creare esercizi di sottrazioni in colonna con prestiti interattivi.
    </p>
  </div>

  <!-- Layout a 2 colonne -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8 print:hidden items-start">

    <!-- Colonna Sinistra: Sottrazione Libera -->
    <div class="bg-gradient-to-br from-cyan-50 to-teal-50 rounded-lg shadow-lg p-8">
      <h2 class="text-2xl font-bold text-gray-800 mb-4">Sottrazione Libera</h2>
      <p class="text-gray-700 text-lg mb-6">
        Prova a calcolare una sottrazione interattiva. Usa i pulsanti per aiutarti!
      </p>
      <div class="flex justify-center">
        <%= render partial: "shared/column_subtraction",
                   locals: Sottrazione.new(minuend: 487, subtrahend: 258,
                                           show_toolbar: true,
                                           show_borrow: true).to_partial_params %>
      </div>
    </div>

    <!-- Colonna Destra: Esempi e Form -->
    <div class="flex flex-col gap-8">

      <!-- Box Esempi -->
      <div class="bg-white rounded-lg shadow-lg p-8">
        <h2 class="text-2xl font-bold text-gray-800 mb-4">Esempi da Copiare</h2>

        <p class="text-gray-600 mb-4 text-sm">
          Inserisci operazioni separate da virgola, punto e virgola o nuova riga.
        </p>

        <!-- Esempi da copiare -->
        <div class="grid grid-cols-1 gap-2" data-controller="copy-to-clipboard">
          <div class="bg-gray-50 p-3 rounded-lg">
            <div class="flex items-center justify-between mb-1">
              <p class="text-xs font-semibold text-gray-700">Sottrazioni semplici:</p>
              <button type="button"
                      data-action="click->copy-to-clipboard#copy"
                      data-copy-to-clipboard-text-param="487 - 258&#x0A;526 - 364&#x0A;618 - 240"
                      class="text-xs px-2 py-1 bg-cyan-500 text-white rounded hover:bg-cyan-600 transition-colors">
                Copia
              </button>
            </div>
            <code class="bg-white px-2 py-1 rounded border block font-mono text-xs">487 - 258, 526 - 364, 618 - 240</code>
          </div>

          <div class="bg-gray-50 p-3 rounded-lg">
            <div class="flex items-center justify-between mb-1">
              <p class="text-xs font-semibold text-gray-700">Con prestiti:</p>
              <button type="button"
                      data-action="click->copy-to-clipboard#copy"
                      data-copy-to-clipboard-text-param="734 - 567&#x0A;821 - 478&#x0A;956 - 689"
                      class="text-xs px-2 py-1 bg-cyan-500 text-white rounded hover:bg-cyan-600 transition-colors">
                Copia
              </button>
            </div>
            <code class="bg-white px-2 py-1 rounded border block font-mono text-xs">734 - 567, 821 - 478, 956 - 689</code>
          </div>

          <div class="bg-gray-50 p-3 rounded-lg">
            <div class="flex items-center justify-between mb-1">
              <p class="text-xs font-semibold text-gray-700">Numeri grandi:</p>
              <button type="button"
                      data-action="click->copy-to-clipboard#copy"
                      data-copy-to-clipboard-text-param="3570 - 1895&#x0A;5234 - 2876&#x0A;7856 - 4329"
                      class="text-xs px-2 py-1 bg-cyan-500 text-white rounded hover:bg-cyan-600 transition-colors">
                Copia
              </button>
            </div>
            <code class="bg-white px-2 py-1 rounded border block font-mono text-xs">3570 - 1895, 5234 - 2876, 7856 - 4329</code>
          </div>

          <div class="bg-gray-50 p-3 rounded-lg">
            <div class="flex items-center justify-between mb-1">
              <p class="text-xs font-semibold text-gray-700">Prestiti multipli:</p>
              <button type="button"
                      data-action="click->copy-to-clipboard#copy"
                      data-copy-to-clipboard-text-param="1000 - 567&#x0A;2000 - 1234&#x0A;5000 - 3456"
                      class="text-xs px-2 py-1 bg-cyan-500 text-white rounded hover:bg-cyan-600 transition-colors">
                Copia
              </button>
            </div>
            <code class="bg-white px-2 py-1 rounded border block font-mono text-xs">1000 - 567, 2000 - 1234, 5000 - 3456</code>
          </div>
        </div>
      </div>

      <!-- Box Generatore -->
      <div class="bg-white rounded-lg shadow-lg p-8">
        <h2 class="text-2xl font-bold text-gray-800 mb-4">Generatore di Sottrazioni</h2>

        <%= form_with url: strumenti_sottrazioni_generate_path, method: :post, local: true,
                      data: { turbo: false } do |f| %>
          <div class="mb-4">
            <%= f.text_area :operations,
                            value: @operations,
                            placeholder: "Incolla qui le tue sottrazioni...\n487 - 258\n526 - 364\n618 - 240",
                            rows: 6,
                            class: "w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:border-cyan-500 focus:outline-none font-mono text-sm" %>
          </div>

          <div class="mb-4">
            <label class="flex items-center gap-2 text-gray-700">
              <%= f.check_box :show_minuend_subtrahend, {}, "true", "false" %>
              <span class="font-semibold text-sm">Mostra minuendo e sottraendo gi√† compilati (solo risultato da scrivere)</span>
            </label>
          </div>

          <div class="flex gap-4">
            <%= f.submit "Genera Griglie",
                        class: "bg-cyan-600 hover:bg-cyan-700 text-white font-bold py-3 px-6 rounded-lg shadow-lg transition transform hover:scale-105" %>

            <% if @operations.present? %>
              <%= link_to "Cancella", strumenti_sottrazioni_path,
                          class: "bg-gray-500 hover:bg-gray-600 text-white font-bold py-3 px-6 rounded-lg shadow-lg transition transform hover:scale-105" %>
            <% end %>
          </div>
        <% end %>

        <% if @operations.present? && @sottrazioni.blank? %>
          <div class="bg-yellow-50 border-l-4 border-yellow-500 p-4 mt-4">
            <p class="text-yellow-900 text-sm">
              <strong>Attenzione:</strong> Non sono state trovate operazioni valide.
              Assicurati di inserire operazioni nel formato corretto (es: "487 - 258").
            </p>
          </div>
        <% end %>
      </div>
    </div>
    <!-- Fine Colonna Destra -->

  </div>
  <!-- Fine Layout a 2 colonne -->

  <!-- Sottrazioni Generate -->
  <% if @sottrazioni && @sottrazioni.any? %>
    <div class="grid grid-cols-1 print:grid-cols-2 gap-8 print:gap-12">
      <% @sottrazioni.each_with_index do |sottrazione, index| %>
        <div class="flex flex-col items-center print:break-inside-avoid">
          <% unless sottrazione.show_minuend_subtrahend %>
            <h3 class="text-xl font-semibold text-gray-700 mb-6">
              Esercizio <%= index + 1 %>: <%= sottrazione %>
            </h3>
          <% end %>

          <%= render partial: "shared/column_subtraction", locals: sottrazione.to_partial_params %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
