<% content_for :titolo, "Sottrazioni in Colonna - Strumenti" %>

<div class="max-w-6xl mx-auto px-2 md:px-6 py-8">
  <!-- Header -->
  <div class="bg-white print:hidden rounded-lg shadow-lg p-8 mb-8">
    <h1 class="text-3xl font-bold text-gray-800">Sottrazioni in Colonna</h1>
    <p class="text-gray-600 text-lg mt-2">
      Strumento didattico per creare esercizi di sottrazioni in colonna con prestiti interattivi.
    </p>
  </div>

  <!-- Layout a 2 colonne -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8 print:hidden items-start">

    <!-- Colonna Sinistra: Sottrazione Libera -->
    <div class="bg-gradient-to-br from-cyan-50 to-teal-50 rounded-lg shadow-lg p-8">
      <h2 class="text-2xl font-bold text-gray-800 mb-4">Sottrazione Libera</h2>
      <p class="text-gray-700 text-lg mb-6">
        Prova a calcolare una sottrazione interattiva. Usa i pulsanti per aiutarti!
      </p>
      <div class="flex justify-center">
        <%= render partial: "strumenti/sottrazioni/column_subtraction",
                   locals: Sottrazione.new(minuend: 487, subtrahend: 258,
                                           show_minuend_subtrahend: true,
                                           show_toolbar: true,
                                           show_borrow: true).to_partial_params %>
      </div>
    </div>

    <!-- Generatore -->
    <div class="bg-white print:hidden rounded-lg shadow-lg p-8">
      <h2 class="text-2xl font-bold text-gray-800 mb-4">Generatore di Sottrazioni</h2>

      <%= form_with url: strumenti_sottrazioni_generate_path, method: :post, local: true,
                    data: { turbo: false } do |f| %>
        <div class="mb-4">
          <%= f.text_area :operations,
                          value: @operations,
                          placeholder: "Inserisci le sottrazioni qui...\nEsempio: 487 - 258, 526 - 364, 618 - 240",
                          rows: 4,
                          class: "w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:border-cyan-500 focus:outline-none font-mono text-sm" %>
        </div>

        <!-- Opzioni -->
        <div class="mb-6 p-4 bg-gray-50 rounded-lg">
          <p class="text-sm font-semibold text-gray-700 mb-3">Opzioni:</p>
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
            <label class="flex items-center gap-2 cursor-pointer">
              <%= f.check_box :show_toolbar, { checked: @options[:show_toolbar] != false, class: "w-4 h-4 text-cyan-600 rounded focus:ring-cyan-500" }, "true", "false" %>
              <span class="text-sm text-gray-700">Mostra barra strumenti</span>
            </label>

            <label class="flex items-center gap-2 cursor-pointer">
              <%= f.check_box :show_borrow, { checked: @options[:show_borrow] != false, class: "w-4 h-4 text-cyan-600 rounded focus:ring-cyan-500" }, "true", "false" %>
              <span class="text-sm text-gray-700">Mostra celle prestiti</span>
            </label>

            <label class="flex items-center gap-2 cursor-pointer">
              <%= f.check_box :show_minuend_subtrahend, { checked: @options[:show_minuend_subtrahend] == true, class: "w-4 h-4 text-cyan-600 rounded focus:ring-cyan-500" }, "true", "false" %>
              <span class="text-sm text-gray-700">Mostra minuendo e sottraendo</span>
            </label>

            <label class="flex items-center gap-2 cursor-pointer">
              <%= f.check_box :show_solution, { checked: @options[:show_solution] == true, class: "w-4 h-4 text-cyan-600 rounded focus:ring-cyan-500" }, "true", "false" %>
              <span class="text-sm text-gray-700">Mostra risultato</span>
            </label>
          </div>
        </div>

        <div class="flex gap-4">
          <%= f.submit "Genera",
                      class: "bg-cyan-600 hover:bg-cyan-700 text-white font-bold py-3 px-6 rounded-lg shadow-lg transition transform hover:scale-105 cursor-pointer" %>

          <% if @operations.present? %>
            <%= link_to "Cancella", strumenti_sottrazioni_path,
                        class: "bg-gray-500 hover:bg-gray-600 text-white font-bold py-3 px-6 rounded-lg shadow-lg transition transform hover:scale-105" %>
          <% end %>
        </div>
      <% end %>

      <% if @operations.present? && @sottrazioni.blank? %>
        <div class="bg-yellow-50 border-l-4 border-yellow-500 p-4 mt-4">
          <p class="text-yellow-900 text-sm">
            <strong>Attenzione:</strong> Non sono state trovate operazioni valide.
            Usa il formato: 487 - 258
          </p>
        </div>
      <% end %>
    </div>

  </div>
  <!-- Fine Layout a 2 colonne -->

  <!-- Sottrazioni Generate -->
  <% if @sottrazioni && @sottrazioni.any? %>
    <div class="grid grid-cols-1 print:grid-cols-2 gap-8 print:gap-12">
      <% @sottrazioni.each_with_index do |sottrazione, index| %>
        <div class="flex flex-col items-center print:break-inside-avoid">
          <% unless sottrazione.show_minuend_subtrahend %>
            <h3 class="text-xl font-semibold text-gray-700 mb-6">
              Esercizio <%= index + 1 %>: <%= sottrazione %>
            </h3>
          <% end %>

          <%= render partial: "strumenti/sottrazioni/column_subtraction", locals: sottrazione.to_partial_params %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
