<% content_for :titolo, "Addizioni in Colonna - Strumenti" %>

<div class="max-w-6xl mx-auto px-6 py-8">
  <div class="bg-white rounded-lg shadow-lg p-8">
    <h1 class="text-3xl font-bold text-gray-800 mb-6">Generatore di Addizioni in Colonna</h1>
    
    <p class="text-gray-600 mb-8">
      Inserisci una o pi√π operazioni separate da virgola, punto e virgola o nuova riga.
      Esempi: <code class="bg-gray-100 px-2 py-1 rounded">234 + 1234</code> o <code class="bg-gray-100 px-2 py-1 rounded">234 + 1234, 45 + 67</code>
    </p>

    <%= form_with url: strumenti_addizioni_path, method: :get, local: true, 
                  data: { turbo: false },
                  class: "mb-8" do |f| %>
      <div class="mb-4">
        <%= f.text_area :operations, 
                        value: @operations,
                        placeholder: "234 + 1234\n45 + 67\n123 + 456 + 789",
                        rows: 6,
                        class: "w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:border-blue-500 focus:outline-none font-mono text-lg" %>
      </div>
      
      <div class="flex gap-4">
        <%= f.submit "Genera Griglie", 
                    class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg shadow-lg transition transform hover:scale-105" %>
        
        <% if @operations.present? %>
          <%= link_to "Cancella", strumenti_addizioni_path, 
                      class: "bg-gray-500 hover:bg-gray-600 text-white font-bold py-3 px-6 rounded-lg shadow-lg transition transform hover:scale-105" %>
        <% end %>
      </div>
    <% end %>

    <% if @operations_array && @operations_array.any? %>
      <div class="space-y-12 mt-12">
        <% @operations_array.each_with_index do |operation, index| %>
          <div class="border-t-2 border-gray-200 pt-8">
            <h3 class="text-xl font-semibold text-gray-700 mb-6">
              Esercizio <%= index + 1 %>: <%= operation %>
            </h3>
            
            <div class="flex justify-center">
              <%= render partial: "shared/column_addition", 
                        locals: { 
                          operation: operation,
                          show_exercise: true,
                          show_toolbar: true,
                          show_carry: true
                        } %>
            </div>
          </div>
        <% end %>
      </div>
    <% elsif @operations.present? && @operations_array.blank? %>
      <div class="bg-yellow-50 border-l-4 border-yellow-500 p-4 mt-8">
        <p class="text-yellow-900">
          <strong>Attenzione:</strong> Non sono state trovate operazioni valide. 
          Assicurati di inserire operazioni nel formato corretto (es: "234 + 1234").
        </p>
      </div>
    <% end %>
  </div>
</div>

