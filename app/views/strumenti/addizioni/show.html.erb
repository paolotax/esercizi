<% content_for :titolo, "Addizioni in Colonna - Strumenti" %>

<div class="max-w-6xl mx-auto px-2 md:px-6 py-8">
  <!-- Header -->
  <div class="bg-white print:hidden rounded-lg shadow-lg p-8 mb-8">
    <h1 class="text-3xl font-bold text-gray-800">Addizioni in Colonna</h1>
    <p class="text-gray-600 text-lg mt-2">
      Strumento didattico per creare esercizi di addizioni in colonna con riporti interattivi.
    </p>
  </div>

  <!-- Layout a 2 colonne -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8 print:hidden items-start">

    <!-- Colonna Sinistra: Addizione Libera -->
    <div class="bg-gradient-to-br from-blue-50 to-cyan-50 rounded-lg shadow-lg p-8">
      <h2 class="text-2xl font-bold text-gray-800 mb-4">Addizione Libera</h2>
      <p class="text-gray-700 text-lg mb-6">
        Prova a calcolare un'addizione interattiva. Usa i pulsanti per aiutarti!
      </p>
      <div class="flex justify-center">
        <%= render "strumenti/quaderno_grid",
                   grid: Addizione::Renderer.new(addends: [234, 567],
                                                  show_addends: true,
                                                  show_toolbar: true,
                                                  show_carry: true,
                                                  show_labels: true,
                                                  grid_style: :column).to_grid_matrix %>
      </div>
    </div>

    <!-- Generatore -->
    <div class="bg-white print:hidden rounded-lg shadow-lg p-8">
      <h2 class="text-2xl font-bold text-gray-800 mb-4">Generatore di Addizioni</h2>

      <%= form_with url: strumenti_addizioni_generate_path, method: :post, local: true,
                    data: { turbo: false } do |f| %>
        <div class="mb-4">
          <%= f.text_area :operations,
                          value: @operations,
                          placeholder: "Inserisci le addizioni qui...\nEsempio: 234 + 567, 45 + 89, 123 + 456 + 789",
                          rows: 4,
                          class: "w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:border-blue-500 focus:outline-none font-mono text-sm" %>
        </div>

        <!-- Opzioni -->
        <div class="mb-6 p-4 bg-gray-50 rounded-lg">
          <p class="text-sm font-semibold text-gray-700 mb-3">Opzioni:</p>
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
            <label class="flex items-center gap-2 cursor-pointer">
              <%= f.check_box :show_toolbar, { checked: @options[:show_toolbar] != false, class: "w-4 h-4 text-blue-600 rounded focus:ring-blue-500" }, "true", "false" %>
              <span class="text-sm text-gray-700">Mostra barra strumenti</span>
            </label>

            <label class="flex items-center gap-2 cursor-pointer">
              <%= f.check_box :show_carry, { checked: @options[:show_carry] != false, class: "w-4 h-4 text-blue-600 rounded focus:ring-blue-500" }, "true", "false" %>
              <span class="text-sm text-gray-700">Mostra celle riporti</span>
            </label>

            <label class="flex items-center gap-2 cursor-pointer">
              <%= f.check_box :show_addends, { checked: @options[:show_addends] == true, class: "w-4 h-4 text-blue-600 rounded focus:ring-blue-500" }, "true", "false" %>
              <span class="text-sm text-gray-700">Mostra addendi</span>
            </label>

            <label class="flex items-center gap-2 cursor-pointer">
              <%= f.check_box :show_solution, { checked: @options[:show_solution] == true, class: "w-4 h-4 text-blue-600 rounded focus:ring-blue-500" }, "true", "false" %>
              <span class="text-sm text-gray-700">Mostra risultato</span>
            </label>

            <label class="flex items-center gap-2 cursor-pointer">
              <%= f.check_box :show_labels, { checked: @options[:show_labels] != false, class: "w-4 h-4 text-blue-600 rounded focus:ring-blue-500" }, "true", "false" %>
              <span class="text-sm text-gray-700">Mostra etichette (u, da, h)</span>
            </label>
          </div>
        </div>

        <div class="flex gap-4">
          <%= f.submit "Genera",
                      class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg shadow-lg transition transform hover:scale-105 cursor-pointer" %>

          <% if @operations.present? %>
            <%= link_to "Cancella", strumenti_addizioni_path,
                        class: "bg-gray-500 hover:bg-gray-600 text-white font-bold py-3 px-6 rounded-lg shadow-lg transition transform hover:scale-105" %>
          <% end %>
        </div>
      <% end %>

      <% if @operations.present? && @addizioni.blank? %>
        <div class="bg-yellow-50 border-l-4 border-yellow-500 p-4 mt-4">
          <p class="text-yellow-900 text-sm">
            <strong>Attenzione:</strong> Non sono state trovate operazioni valide.
            Usa il formato: 234 + 567
          </p>
        </div>
      <% end %>
    </div>

  </div>
  <!-- Fine Layout a 2 colonne -->

  <!-- Addizioni Generate -->
  <% if @addizioni && @addizioni.any? %>
    <div class="grid grid-cols-1 print:grid-cols-2 gap-8 print:gap-12">
      <% @addizioni.each_with_index do |addizione, index| %>
        <div class="flex flex-col items-center print:break-inside-avoid">
          <% unless addizione.show_addends %>
            <h3 class="text-xl font-semibold text-gray-700 mb-6">
              Esercizio <%= index + 1 %>: <%= addizione %>
            </h3>
          <% end %>

          <%= render "strumenti/quaderno_grid", grid: addizione.to_grid_matrix %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

