<% content_for :titolo, "Libri di Testo" %>

<div class="max-w-7xl mx-auto p-6">
  <h1 class="text-4xl font-bold text-blue-600 mb-8">Libri di Testo</h1>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @corsi.each do |corso| %>
      <div class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl transition">
        <%= link_to corso_path(corso), class: "block" do %>
          <h2 class="text-2xl font-bold text-gray-800 mb-3"><%= corso.nome %></h2>
          <% if corso.descrizione.present? %>
            <p class="text-gray-600 mb-4"><%= corso.descrizione %></p>
          <% end %>
          <div class="text-blue-500 font-semibold">
            <%= pluralize(corso.volumi.count, "volume", "volumi") %> â†’
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <% if @corsi.empty? %>
    <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-6 text-center">
      <p class="text-gray-600">Nessun corso disponibile al momento.</p>
    </div>
  <% end %>
</div>
