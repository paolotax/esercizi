<% content_for :titolo, "Corsi" %>

<!-- Header -->
<div class="bg-gradient-to-br from-white/80 to-purple-50/50 dark:from-gray-800/80 dark:to-gray-900/50 border-b border-purple-100 dark:border-gray-700">
  <div class="max-w-5xl mx-auto px-6 py-12">
    <div class="flex items-center gap-6">
      <!-- Icon -->
      <div class="w-20 h-20 rounded-3xl bg-gradient-to-br from-purple-400 to-pink-500 flex items-center justify-center shadow-xl flex-shrink-0">
        <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M4.26 10.147a60.438 60.438 0 00-.491 6.347A48.62 48.62 0 0112 20.904a48.62 48.62 0 018.232-4.41 60.46 60.46 0 00-.491-6.347m-15.482 0a50.636 50.636 0 00-2.658-.813A59.906 59.906 0 0112 3.493a59.903 59.903 0 0110.399 5.84c-.896.248-1.783.52-2.658.814m-15.482 0A50.717 50.717 0 0112 13.489a50.702 50.702 0 017.74-3.342M6.75 15a.75.75 0 100-1.5.75.75 0 000 1.5zm0 0v-3.675A55.378 55.378 0 0112 8.443m-7.007 11.55A5.981 5.981 0 006.75 15.75v-1.5"/>
        </svg>
      </div>

      <div>
        <h1 class="text-3xl md:text-4xl font-bold text-gray-800 dark:text-white mb-2">
          Corsi Disponibili
        </h1>
        <p class="text-lg text-gray-500 dark:text-gray-400">
          Esplora i nostri percorsi didattici interattivi
        </p>
      </div>
    </div>
  </div>
</div>

<!-- Courses Grid -->
<div class="max-w-7xl mx-auto px-6 py-10">
  <% if @corsi.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @corsi.each_with_index do |corso, index| %>
        <% colors = [
          { bg: 'from-violet-400 to-purple-500', light: 'violet-50', dark: 'violet-900/20', border: 'violet-200', border_dark: 'violet-800/30' },
          { bg: 'from-rose-400 to-pink-500', light: 'rose-50', dark: 'rose-900/20', border: 'rose-200', border_dark: 'rose-800/30' },
          { bg: 'from-teal-400 to-emerald-500', light: 'teal-50', dark: 'teal-900/20', border: 'teal-200', border_dark: 'teal-800/30' },
          { bg: 'from-sky-400 to-blue-500', light: 'sky-50', dark: 'sky-900/20', border: 'sky-200', border_dark: 'sky-800/30' },
          { bg: 'from-amber-400 to-orange-500', light: 'amber-50', dark: 'amber-900/20', border: 'amber-200', border_dark: 'amber-800/30' }
        ] %>
        <% color = colors[index % colors.length] %>

        <%= link_to corso_path(corso),
            class: "group block bg-gradient-to-br from-#{color[:light]} to-white dark:from-#{color[:dark]} dark:to-gray-800 rounded-3xl border-2 border-#{color[:border]} dark:border-#{color[:border_dark]} p-6 hover:shadow-xl hover:scale-[1.02] transition-all duration-300",
            data: { turbo_frame: "main-content" } do %>

          <!-- Course icon -->
          <div class="w-16 h-16 rounded-2xl bg-gradient-to-br <%= color[:bg] %> flex items-center justify-center shadow-lg mb-5 group-hover:scale-110 transition-transform">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.042A8.967 8.967 0 006 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 016 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 016-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0018 18a8.967 8.967 0 00-6 2.292m0-14.25v14.25"/>
            </svg>
          </div>

          <!-- Course title -->
          <h3 class="text-2xl font-bold text-gray-800 dark:text-white mb-3 group-hover:text-gray-900 dark:group-hover:text-gray-100">
            <%= corso.nome %>
          </h3>

          <!-- Description -->
          <% if corso.descrizione.present? %>
            <p class="text-gray-600 dark:text-gray-400 mb-4 line-clamp-2">
              <%= corso.descrizione %>
            </p>
          <% end %>

          <!-- Stats -->
          <div class="flex items-center justify-between pt-4 border-t border-gray-200/50 dark:border-gray-600/50">
            <span class="text-sm font-medium text-gray-500 dark:text-gray-400">
              <%= pluralize(corso.volumi.count, "volume", "volumi") %>
            </span>
            <div class="flex items-center gap-1 text-sm font-semibold text-gray-700 dark:text-gray-300 group-hover:translate-x-1 transition-transform">
              Esplora
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <!-- Empty state -->
    <div class="text-center py-16">
      <div class="w-20 h-20 mx-auto mb-6 rounded-3xl bg-gray-100 dark:bg-gray-700 flex items-center justify-center">
        <svg class="w-10 h-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4.26 10.147a60.438 60.438 0 00-.491 6.347A48.62 48.62 0 0112 20.904a48.62 48.62 0 018.232-4.41 60.46 60.46 0 00-.491-6.347m-15.482 0a50.636 50.636 0 00-2.658-.813A59.906 59.906 0 0112 3.493a59.903 59.903 0 0110.399 5.84c-.896.248-1.783.52-2.658.814m-15.482 0A50.717 50.717 0 0112 13.489a50.702 50.702 0 017.74-3.342"/>
        </svg>
      </div>
      <h3 class="text-xl font-bold text-gray-800 dark:text-white mb-2">Nessun corso disponibile</h3>
      <p class="text-gray-500 dark:text-gray-400">I corsi appariranno qui quando saranno aggiunti.</p>
    </div>
  <% end %>
</div>
