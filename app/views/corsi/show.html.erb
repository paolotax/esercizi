<% content_for :titolo, @corso.nome %>

<% content_for :header do %>
  <%= back_link_to "Tutti i corsi", corsi_path, "keydown.left@document->hotkey#click keydown.esc@document->hotkey#click" %>
<% end %>

<div class="max-w-7xl mx-auto p-6">
  <div class="flex items-center justify-between mb-4">
    <h1 class="text-4xl font-bold text-blue-600"><%= @corso.nome %></h1>
    <% if admin? %>
      <%= link_to new_admin_share_path(shareable_type: "Corso", shareable_id: @corso.id),
          class: "inline-flex items-center gap-2 px-3 py-1.5 text-sm font-medium text-gray-600 dark:text-gray-300 bg-gray-100 dark:bg-gray-700 hover:bg-gray-200 dark:hover:bg-gray-600 rounded-lg transition" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"/>
        </svg>
        Condividi
      <% end %>
    <% end %>
  </div>
  <% if @corso.descrizione.present? %>
    <p class="text-xl text-gray-600 mb-8"><%= @corso.descrizione %></p>
  <% end %>

  <h2 class="text-2xl font-bold text-gray-800 mb-6">Volumi</h2>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @volumi.each do |volume| %>
      <div class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl transition">
        <%= link_to volume_path(volume), class: "block" do %>
          <h3 class="text-xl font-bold text-gray-800 mb-2"><%= volume.nome %></h3>
          <% if volume.classe.present? %>
            <p class="text-gray-600 mb-3">Classe <%= volume.classe %></p>
          <% end %>
          <div class="text-blue-500 font-semibold">
            <%= pluralize(volume.discipline.count, "disciplina", "discipline") %> â†’
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <% if @volumi.empty? %>
    <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-6 text-center">
      <p class="text-gray-600">Nessun volume disponibile per questo corso.</p>
    </div>
  <% end %>
</div>
