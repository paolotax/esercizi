<div class="w-full max-w-md">
  <!-- Card container -->
  <div class="fade-in-up bg-white/80 dark:bg-gray-800/80 backdrop-blur-xl rounded-3xl shadow-2xl shadow-gray-900/10 dark:shadow-black/30 p-8 md:p-10">
    <!-- Icon header with sparkle animation -->
    <div class="fade-in-up delay-100 flex justify-center mb-6">
      <div class="relative">
        <div class="w-20 h-20 rounded-3xl flex items-center justify-center shadow-lg" style="background: linear-gradient(135deg, var(--color-sage), #5a9a7a);">
          <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z" />
          </svg>
        </div>
        <!-- Sparkle decoration -->
        <div class="absolute -top-1 -right-1 w-6 h-6 text-yellow-400 animate-pulse">
          <svg viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 0l2.5 9.5L24 12l-9.5 2.5L12 24l-2.5-9.5L0 12l9.5-2.5z"/>
          </svg>
        </div>
      </div>
    </div>

    <!-- Title -->
    <div class="fade-in-up delay-200 text-center mb-6">
      <h1 class="font-display text-3xl font-bold text-gray-800 dark:text-white mb-2">
        Codice magico
      </h1>
      <p class="text-gray-500 dark:text-gray-400 font-medium">
        <% if email_address_pending_authentication %>
          Inviato a <span class="font-semibold text-gray-700 dark:text-gray-300"><%= email_address_pending_authentication %></span>
        <% else %>
          Inserisci il codice ricevuto via email
        <% end %>
      </p>
    </div>

    <!-- Alert -->
    <% if flash[:alert] %>
      <div class="fade-in-up mb-6 p-4 rounded-2xl bg-red-50 dark:bg-red-900/30 border border-red-200 dark:border-red-800">
        <div class="flex items-center gap-3">
          <svg class="w-5 h-5 text-red-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <p class="text-sm text-red-700 dark:text-red-300 font-medium"><%= flash[:alert] %></p>
        </div>
      </div>
    <% end %>

    <!-- Dev mode code display -->
    <% if Rails.env.development? && flash[:magic_link_code] %>
      <div class="fade-in-up mb-6 p-4 rounded-2xl bg-amber-50 dark:bg-amber-900/30 border-2 border-amber-300 dark:border-amber-700">
        <div class="flex items-center gap-3">
          <span class="text-2xl">ðŸ”‘</span>
          <div>
            <p class="text-xs font-semibold text-amber-600 dark:text-amber-400 uppercase tracking-wide">Dev mode</p>
            <code class="font-mono text-2xl font-bold text-amber-800 dark:text-amber-200 tracking-[0.3em]"><%= flash[:magic_link_code] %></code>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Form -->
    <%= form_with url: session_magic_link_path, method: :patch, class: "fade-in-up delay-300 space-y-6" do |form| %>
      <div>
        <%= form.label :code, "Il tuo codice", class: "block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2 text-center" %>
        <div class="relative">
          <%= form.text_field :code,
              required: true,
              autofocus: true,
              autocomplete: "one-time-code",
              placeholder: "ABC123",
              maxlength: 6,
              class: "input-glow w-full px-4 py-5 text-center text-3xl font-mono font-bold tracking-[0.4em] uppercase bg-gray-50 dark:bg-gray-700/50 border-2 border-gray-200 dark:border-gray-600 rounded-2xl focus:outline-none focus:border-transparent placeholder-gray-300 dark:placeholder-gray-600 text-gray-800 dark:text-white transition-all" %>
        </div>
      </div>

      <div>
        <%= form.submit "Verifica codice â†’",
            class: "btn-press w-full py-4 px-6 text-base font-bold text-white rounded-2xl shadow-lg hover:shadow-xl transition-all cursor-pointer",
            style: "background: linear-gradient(135deg, var(--color-sage), #5a9a7a);" %>
      </div>
    <% end %>

    <!-- Back link -->
    <div class="fade-in-up delay-400 text-center mt-6">
      <%= link_to new_session_path(script_name: nil),
          class: "inline-flex items-center gap-2 text-sm font-semibold text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 transition-colors" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16l-4-4m0 0l4-4m-4 4h18" />
        </svg>
        Usa un'altra email
      <% end %>
    </div>
  </div>

  <!-- Help text -->
  <p class="fade-in-up delay-400 text-center mt-6 text-sm text-gray-500 dark:text-gray-400">
    Il codice scade tra 15 minuti
  </p>
</div>
