<div class="w-full max-w-lg">
  <!-- Card container -->
  <div class="fade-in-up bg-white/80 dark:bg-gray-800/80 backdrop-blur-xl rounded-3xl shadow-2xl shadow-gray-900/10 dark:shadow-black/30 p-8 md:p-10">
    <!-- Icon header -->
    <div class="fade-in-up delay-100 flex justify-center mb-6">
      <div class="w-20 h-20 rounded-3xl flex items-center justify-center shadow-lg" style="background: linear-gradient(135deg, var(--color-navy), #2d2f45);">
        <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 21v-8.25M15.75 21v-8.25M8.25 21v-8.25M3 9l9-6 9 6m-1.5 12V10.332A48.36 48.36 0 0012 9.75c-2.551 0-5.056.2-7.5.582V21M3 21h18M12 6.75h.008v.008H12V6.75z" />
        </svg>
      </div>
    </div>

    <!-- Title -->
    <div class="fade-in-up delay-200 text-center mb-8">
      <h1 class="font-display text-3xl font-bold text-gray-800 dark:text-white mb-2">
        Le tue scuole
      </h1>
      <p class="text-gray-500 dark:text-gray-400 font-medium">
        Scegli dove vuoi lavorare oggi
      </p>
    </div>

    <!-- Account list -->
    <% if @accounts.any? %>
      <div class="fade-in-up delay-300 space-y-3">
        <% @accounts.each_with_index do |account, index| %>
          <%= link_to root_url(script_name: account.slug),
              class: "card-lift block w-full p-5 bg-white dark:bg-gray-700/50 border-2 border-gray-100 dark:border-gray-600 rounded-2xl shadow-sm hover:shadow-lg hover:border-gray-200 dark:hover:border-gray-500 transition-all",
              style: "animation-delay: #{0.3 + (index * 0.1)}s;" do %>
            <div class="flex items-center gap-4">
              <!-- School icon with unique color -->
              <% colors = ['#E07A5F', '#81B29A', '#F2CC8F', '#3D405B', '#8B5CF6'] %>
              <div class="w-14 h-14 rounded-2xl flex items-center justify-center flex-shrink-0 shadow-md"
                   style="background: linear-gradient(135deg, <%= colors[index % colors.length] %>, <%= colors[(index + 1) % colors.length] %>);">
                <span class="text-2xl font-display font-bold text-white"><%= account.name[0].upcase %></span>
              </div>

              <div class="flex-1 min-w-0">
                <h3 class="font-display text-lg font-bold text-gray-800 dark:text-white truncate">
                  <%= account.name %>
                </h3>
                <% user = Current.identity.users.find_by(account: account) %>
                <% if user %>
                  <p class="text-sm font-medium text-gray-500 dark:text-gray-400 flex items-center gap-2">
                    <% case user.role %>
                    <% when 'owner' %>
                      <span class="inline-flex items-center gap-1 px-2 py-0.5 rounded-full text-xs font-semibold bg-amber-100 dark:bg-amber-900/50 text-amber-700 dark:text-amber-300">
                        <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                        </svg>
                        Proprietario
                      </span>
                    <% when 'teacher' %>
                      <span class="inline-flex items-center gap-1 px-2 py-0.5 rounded-full text-xs font-semibold bg-blue-100 dark:bg-blue-900/50 text-blue-700 dark:text-blue-300">
                        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                        </svg>
                        Insegnante
                      </span>
                    <% else %>
                      <span class="inline-flex items-center gap-1 px-2 py-0.5 rounded-full text-xs font-semibold bg-green-100 dark:bg-green-900/50 text-green-700 dark:text-green-300">
                        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                        </svg>
                        Studente
                      </span>
                    <% end %>
                  </p>
                <% end %>
              </div>

              <svg class="w-5 h-5 text-gray-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <!-- Empty state -->
      <div class="fade-in-up delay-300 text-center py-8">
        <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-gray-100 dark:bg-gray-700 flex items-center justify-center">
          <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <p class="text-gray-500 dark:text-gray-400 font-medium">
          Non sei ancora membro di nessuna scuola
        </p>
      </div>
    <% end %>

    <!-- Divider -->
    <div class="fade-in-up delay-400 relative my-8">
      <div class="absolute inset-0 flex items-center">
        <div class="w-full border-t border-gray-200 dark:border-gray-700"></div>
      </div>
      <div class="relative flex justify-center">
        <span class="px-4 text-sm font-medium text-gray-400 dark:text-gray-500 bg-white dark:bg-gray-800">oppure</span>
      </div>
    </div>

    <!-- Actions -->
    <div class="fade-in-up delay-400 space-y-3">
      <%= link_to new_signup_path(script_name: nil),
          class: "btn-press flex items-center justify-center gap-3 w-full py-4 px-6 text-base font-bold rounded-2xl border-2 transition-all",
          style: "border-color: var(--color-coral); color: var(--color-coral);" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
        </svg>
        Crea una nuova scuola
      <% end %>

      <%= button_to session_path(script_name: nil), method: :delete,
          class: "btn-press flex items-center justify-center gap-3 w-full py-4 px-6 text-base font-semibold text-gray-500 dark:text-gray-400 bg-gray-100 dark:bg-gray-700/50 hover:bg-gray-200 dark:hover:bg-gray-700 rounded-2xl transition-all" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
        </svg>
        Esci
      <% end %>
    </div>
  </div>
</div>
