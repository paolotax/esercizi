<div class="w-full max-w-md">
  <!-- Card container -->
  <div class="fade-in-up bg-white/80 dark:bg-gray-800/80 backdrop-blur-xl rounded-3xl shadow-2xl shadow-gray-900/10 dark:shadow-black/30 p-8 md:p-10">
    <!-- Icon header -->
    <div class="fade-in-up delay-100 flex justify-center mb-6">
      <div class="w-20 h-20 rounded-3xl flex items-center justify-center shadow-lg" style="background: linear-gradient(135deg, var(--color-coral), var(--color-coral-dark));">
        <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
        </svg>
      </div>
    </div>

    <!-- Title -->
    <div class="fade-in-up delay-200 text-center mb-8">
      <h1 class="font-display text-3xl font-bold text-gray-800 dark:text-white mb-2">
        Bentornato!
      </h1>
      <p class="text-gray-500 dark:text-gray-400 font-medium">
        Inserisci la tua email per accedere
      </p>
    </div>

    <!-- Alert -->
    <% if flash[:alert] %>
      <div class="fade-in-up mb-6 p-4 rounded-2xl bg-red-50 dark:bg-red-900/30 border border-red-200 dark:border-red-800">
        <div class="flex items-center gap-3">
          <svg class="w-5 h-5 text-red-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <p class="text-sm text-red-700 dark:text-red-300 font-medium"><%= flash[:alert] %></p>
        </div>
      </div>
    <% end %>

    <!-- Form -->
    <%= form_with url: session_path, method: :post, class: "fade-in-up delay-300 space-y-6" do |form| %>
      <div>
        <%= form.label :email_address, "Email", class: "block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2" %>
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207" />
            </svg>
          </div>
          <%= form.email_field :email_address,
              required: true,
              autofocus: true,
              autocomplete: "email",
              placeholder: "tu@esempio.com",
              class: "input-glow w-full pl-12 pr-4 py-4 text-base font-medium bg-gray-50 dark:bg-gray-700/50 border-2 border-gray-200 dark:border-gray-600 rounded-2xl focus:outline-none focus:border-transparent placeholder-gray-400 dark:placeholder-gray-500 text-gray-800 dark:text-white transition-all" %>
        </div>
      </div>

      <div>
        <%= form.submit "Invia codice magico âœ¨",
            class: "btn-press w-full py-4 px-6 text-base font-bold text-white rounded-2xl shadow-lg hover:shadow-xl transition-all cursor-pointer",
            style: "background: linear-gradient(135deg, var(--color-coral), var(--color-coral-dark));" %>
      </div>
    <% end %>

    <!-- Divider -->
    <div class="fade-in-up delay-400 relative my-8">
      <div class="absolute inset-0 flex items-center">
        <div class="w-full border-t border-gray-200 dark:border-gray-700"></div>
      </div>
      <div class="relative flex justify-center">
        <span class="px-4 text-sm font-medium text-gray-400 dark:text-gray-500 bg-white dark:bg-gray-800">oppure</span>
      </div>
    </div>

    <!-- Sign up link -->
    <div class="fade-in-up delay-400 text-center">
      <p class="text-gray-500 dark:text-gray-400 font-medium">
        Non hai un account?
      </p>
      <%= link_to new_signup_path(script_name: nil),
          class: "inline-flex items-center gap-2 mt-2 text-base font-bold hover:underline transition-colors",
          style: "color: var(--color-coral);" do %>
        Crea la tua scuola
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      <% end %>
    </div>
  </div>

  <!-- Help text -->
  <p class="fade-in-up delay-400 text-center mt-6 text-sm text-gray-500 dark:text-gray-400">
    Riceverai un codice di 6 caratteri via email
  </p>
</div>
