<div class="min-h-[calc(100vh-200px)] flex items-center justify-center p-6 md:p-8 bg-white dark:bg-gray-900 text-black dark:text-white transition-colors duration-300">
  <!-- Card con stile sidebar -->
  <div class="relative overflow-hidden max-w-2xl w-full bg-gradient-to-br from-cyan-50 to-sky-50 dark:from-cyan-900/20 dark:to-sky-900/20 rounded-3xl border-2 border-cyan-200/50 dark:border-cyan-800/30 p-8 md:p-10">
    <!-- Decorazione sfondo -->
    <div class="absolute top-0 right-0 w-32 h-32 bg-gradient-to-br from-cyan-200/30 to-sky-300/20 rounded-full blur-2xl -translate-y-1/2 translate-x-1/2"></div>
    <div class="absolute bottom-0 left-0 w-24 h-24 bg-gradient-to-tr from-sky-200/30 to-cyan-300/20 rounded-full blur-2xl translate-y-1/2 -translate-x-1/2"></div>

    <div class="relative text-center">
      <!-- Icona libro -->
      <div class="inline-flex items-center justify-center w-20 h-20 mb-6 bg-gradient-to-br from-cyan-400 to-sky-500 rounded-3xl shadow-lg">
        <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
        </svg>
      </div>

      <!-- Titolo -->
      <h1 class="font-bold bg-gradient-to-r from-cyan-600 to-sky-600 dark:from-cyan-400 dark:to-sky-400 bg-clip-text text-transparent mb-4">
        Pagine 20-21 Affiancate
      </h1>

      <!-- Descrizione -->
      <p class="text-gray-600 dark:text-gray-300 mb-8 leading-relaxed">
        Le pagine 20 e 21 sono visualizzate affiancate<br class="hidden md:inline">
        come un libro aperto.
      </p>

      <!-- Bottoni navigazione -->
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <%= link_to "bus3_mat_p020",
            class: "group inline-flex items-center gap-3 px-8 py-4 bg-gradient-to-r from-cyan-500 to-sky-500 hover:from-cyan-600 hover:to-sky-600 text-white font-bold rounded-2xl shadow-lg hover:shadow-xl hover:scale-105 transition-all duration-200" do %>
          <svg class="w-5 h-5 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M11 17l-5-5m0 0l5-5m-5 5h12" />
          </svg>
          <span>Vai alle pagine 20-21</span>
        <% end %>

        <%= link_to "bus3_mat_p022",
            class: "group inline-flex items-center gap-3 px-6 py-3 bg-white dark:bg-gray-800 text-cyan-600 dark:text-cyan-400 font-semibold rounded-2xl border-2 border-cyan-200 dark:border-cyan-700 hover:border-cyan-400 hover:shadow-lg hover:scale-105 transition-all duration-200" do %>
          <span>Pagina successiva</span>
          <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        <% end %>
      </div>
    </div>
  </div>
</div>
