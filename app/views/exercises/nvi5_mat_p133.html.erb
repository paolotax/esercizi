<div class="max-w-6xl mx-auto bg-white p-3 md:p-6"
     data-controller="exercise-checker text-toggle font-controls"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <%= render 'shared/page_header', pagina: @pagina %>

  <div class="space-y-6">
    <!-- CIRCONFERENZA -->
    <div class="p-4 bg-white rounded-2xl">
      <div class="flex justify-center mb-4">
        <span class="px-6 py-2 bg-blue-600 text-white font-bold rounded-full">CIRCONFERENZA</span>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Che cos'è -->
        <div>
          <div class="flex justify-center mb-2">
            <span class="px-4 py-1 bg-cyan-500 text-white font-bold rounded-full w-fit">CHE COS'È</span>
          </div>
          <div class="p-4 border-2 border-cyan-400 rounded-lg w-fit mx-auto">
            <ul class="list-disc pl-5 space-y-1 text-gray-700">
              <li>È una linea curva chiusa i cui punti sono tutti alla stessa distanza dal <span class="font-bold text-red-500">CENTRO</span>.</li>
            </ul>
            <div class="flex justify-center mt-3">
              <%= image_tag "nvi5_mat/p133/p133_01.jpg", class: "max-w-[120px]", alt: "Circonferenza" %>
            </div>
          </div>
        </div>

        <!-- Come si calcola -->
        <div>
          <div class="flex justify-center mb-2">
            <span class="px-4 py-1 bg-cyan-500 text-white font-bold rounded-full w-fit">COME SI CALCOLA LA SUA MISURA</span>
          </div>
          <div class="p-4 border-2 border-cyan-400 rounded-lg w-fit mx-auto">
            <ul class="list-disc pl-5 space-y-2 text-gray-700">
              <li>Circonferenza = diametro × 3,14<br>
                <span class="font-bold">C = d × 3,14</span>
              </li>
              <li>Circonferenza = raggio × 6,28<br>
                <span class="font-bold">C = r × 6,28</span>
              </li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Gli elementi -->
      <div class="mt-4">
        <div class="flex justify-center mb-2">
          <span class="px-4 py-1 bg-cyan-500 text-white font-bold rounded-full w-fit">GLI ELEMENTI</span>
        </div>
        <div class="p-4 border-2 border-cyan-400 rounded-lg w-fit mx-auto">
          <div class="flex flex-wrap justify-center gap-4">
            <%= image_tag "nvi5_mat/p133/p133_02.jpg", class: "max-w-full md:max-w-[500px]", alt: "Elementi della circonferenza: raggio, corda, diametro, semicirconferenza, arco" %>
          </div>
        </div>
      </div>
    </div>

    <!-- CERCHIO -->
    <div class="p-4 bg-white rounded-2xl">
      <div class="flex justify-center mb-4">
        <span class="px-6 py-2 bg-blue-600 text-white font-bold rounded-full">CERCHIO</span>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Che cos'è -->
        <div>
          <div class="flex justify-center mb-2">
            <span class="px-4 py-1 bg-cyan-500 text-white font-bold rounded-full w-fit">CHE COS'È</span>
          </div>
          <div class="p-4 border-2 border-cyan-400 rounded-lg w-fit mx-auto">
            <ul class="list-disc pl-5 space-y-1 text-gray-700">
              <li>È la figura piana delimitata da una <span class="font-bold text-custom-pink">CIRCONFERENZA</span>.</li>
            </ul>
            <div class="flex justify-center mt-3">
              <div class="w-24 h-24 bg-pink-200 rounded-full flex items-center justify-center">
                <span class="text-pink-600 font-bold">CERCHIO</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Come si calcola l'area -->
        <div>
          <div class="flex justify-center mb-2">
            <span class="px-4 py-1 bg-cyan-500 text-white font-bold rounded-full w-fit">COME SI CALCOLA L'AREA</span>
          </div>
          <div class="p-4 border-2 border-cyan-400 rounded-lg w-fit mx-auto">
            <ul class="list-disc pl-5 space-y-2 text-gray-700">
              <li>Area = (circonferenza × raggio) : 2<br>
                <span class="font-bold">A = (C × r) : 2</span>
              </li>
              <li>Area = raggio × raggio × 3,14<br>
                <span class="font-bold">A = r × r × 3,14</span> &nbsp;&nbsp; <span class="font-bold">A = r² × π</span>
              </li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Gli elementi -->
      <div class="mt-4">
        <div class="flex justify-center mb-2">
          <span class="px-4 py-1 bg-cyan-500 text-white font-bold rounded-full w-fit">GLI ELEMENTI</span>
        </div>
        <div class="p-4 border-2 border-cyan-400 rounded-lg w-fit mx-auto">
          <div class="flex flex-wrap justify-center gap-4">
            <%= image_tag "nvi5_mat/p133/p133_03.jpg", class: "max-w-full md:max-w-[500px]", alt: "Elementi del cerchio: semicerchio, settore circolare, segmento circolare, corona circolare" %>
          </div>
        </div>
      </div>
    </div>

    <%= render 'shared/exercise_controls' %>
  </div>
</div>
