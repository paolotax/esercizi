<div class="max-w-6xl mx-auto bg-white dark:bg-gray-900 p-3 md:p-6 transition-colors duration-300"
     data-controller="exercise-checker text-toggle font-controls"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <%= render 'shared/page_header', pagina: @pagina %>

  <div class="space-y-6">

    <!-- Esercizio 1 -->
    <div class="space-y-4">
      <p class="font-bold text-gray-700 dark:text-gray-200">Questa è una figura disegnata sul quaderno a quadretti:</p>

      <div class="flex justify-center">
        <%= image_tag "nvi4_mat/p148/output-1715932804148_454_242_355_271.png", class: "h-auto dark:bg-white dark:rounded-lg dark:p-2", alt: "Figura sul quaderno a quadretti" %>
      </div>

      <div class="p-4 md:p-6 bg-orange-100 dark:bg-orange-900/30 rounded-2xl space-y-4">
        <p class="text-gray-700 dark:text-gray-200">Colora di rosso il contorno della figura e di giallo la regione interna.</p>

        <div class="space-y-3 text-gray-700 dark:text-gray-200">
          <div class="flex flex-col md:flex-row md:items-center gap-2">
            <span>Il contorno è formato da</span>
            <input type="text" class="flex-1 md:max-w-md border-b-2 border-dotted border-gray-400 dark:border-gray-500 bg-transparent dark:text-white p-1" placeholder="...">
          </div>
          <div class="flex flex-col md:flex-row md:items-center gap-2">
            <span>La regione interna è formata da</span>
            <input type="text" class="flex-1 md:max-w-md border-b-2 border-dotted border-gray-400 dark:border-gray-500 bg-transparent dark:text-white p-1" placeholder="...">
          </div>
        </div>
      </div>
    </div>

    <!-- Esercizio 2 -->
    <div class="space-y-4">
      <p class="font-bold text-gray-700 dark:text-gray-200">Anche su questa figura colora di rosso il contorno e di giallo la regione interna.</p>

      <div class="flex justify-center">
        <%= image_tag "nvi4_mat/p148/output-1715932804148_474_688_312_274.png", class: "h-auto dark:bg-white dark:rounded-lg dark:p-2", alt: "Seconda figura sul quaderno a quadretti" %>
      </div>

      <div class="p-4 md:p-6 bg-orange-100 dark:bg-orange-900/30 rounded-2xl space-y-4">
        <div class="space-y-3 text-gray-700 dark:text-gray-200">
          <div class="flex flex-col md:flex-row md:items-center gap-2">
            <span>Il contorno è formato da</span>
            <input type="text" class="flex-1 md:max-w-md border-b-2 border-dotted border-gray-400 dark:border-gray-500 bg-transparent dark:text-white p-1" placeholder="...">
          </div>
          <div class="flex flex-col md:flex-row md:items-center gap-2">
            <span>La regione interna è formata da</span>
            <input type="text" class="flex-1 md:max-w-md border-b-2 border-dotted border-gray-400 dark:border-gray-500 bg-transparent dark:text-white p-1" placeholder="...">
          </div>
          <div class="flex flex-col md:flex-row md:items-center gap-2">
            <span>Che cosa osservi?</span>
            <input type="text" class="flex-1 border-b-2 border-dotted border-gray-400 dark:border-gray-500 bg-transparent dark:text-white p-1" placeholder="...">
          </div>
        </div>
      </div>
    </div>

    <%= render 'shared/exercise_controls' %>
  </div>
</div>
