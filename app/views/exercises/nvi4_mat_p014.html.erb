<div class="max-w-6xl mx-auto bg-white dark:bg-gray-900 p-3 md:p-6 transition-colors duration-300"
     data-controller="exercise-checker text-toggle font-controls"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <%= render 'shared/page_header', pagina: @pagina %>

  <div class="space-y-6">

    <!-- Container ESERCIZI -->
    <div class="p-4 md:p-6 bg-orange-100 dark:bg-orange-900/30 rounded-2xl">

      <!-- Esercizio 1: IMPARARE TUTTI - Cifra 1 con più valore -->
      <div class="p-4 bg-white dark:bg-gray-800 rounded-2xl -mx-4 md:-mx-6 -mt-4 md:-mt-6 mb-6 border-3 border-blue-500">
        <p class="font-bold text-gray-700 dark:text-gray-200 mb-4">
          <%= imparare_tutti_badge(1) %>
          In ogni gruppo di numeri colora la casella in cui la cifra 1 ha più valore. Segui l'esempio.
        </p>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Primo gruppo -->
          <div class="flex items-center justify-center gap-3">
            <label class="relative flex items-center justify-center px-4 py-2 bg-white dark:bg-gray-700 dark:text-gray-200 border-2 border-<%= @pagina.base_color %>-400 rounded cursor-pointer hover:bg-<%= @pagina.base_color %>-100 dark:hover:bg-<%= @pagina.base_color %>-900/30 has-checked:bg-<%= @pagina.base_color %>-300">
              <input type="radio" name="gruppo1" class="absolute inset-0 opacity-0 cursor-pointer" data-correct-answer="true">
              <span class="font-bold">122</span>
            </label>
            <label class="relative flex items-center justify-center px-4 py-2 bg-white dark:bg-gray-700 dark:text-gray-200 border-2 border-<%= @pagina.base_color %>-400 rounded cursor-pointer hover:bg-<%= @pagina.base_color %>-100 dark:hover:bg-<%= @pagina.base_color %>-900/30 has-checked:bg-<%= @pagina.base_color %>-300">
              <input type="radio" name="gruppo1" class="absolute inset-0 opacity-0 cursor-pointer" data-correct-answer="false">
              <span>321</span>
            </label>
            <label class="relative flex items-center justify-center px-4 py-2 bg-white dark:bg-gray-700 dark:text-gray-200 border-2 border-<%= @pagina.base_color %>-400 rounded cursor-pointer hover:bg-<%= @pagina.base_color %>-100 dark:hover:bg-<%= @pagina.base_color %>-900/30 has-checked:bg-<%= @pagina.base_color %>-300">
              <input type="radio" name="gruppo1" class="absolute inset-0 opacity-0 cursor-pointer" data-correct-answer="false">
              <span>714</span>
            </label>
          </div>

          <!-- Secondo gruppo -->
          <div class="flex items-center justify-center gap-3">
            <label class="relative flex items-center justify-center px-4 py-2 bg-white dark:bg-gray-700 dark:text-gray-200 border-2 border-<%= @pagina.base_color %>-400 rounded cursor-pointer hover:bg-<%= @pagina.base_color %>-100 dark:hover:bg-<%= @pagina.base_color %>-900/30 has-checked:bg-<%= @pagina.base_color %>-300">
              <input type="radio" name="gruppo2" class="absolute inset-0 opacity-0 cursor-pointer" data-correct-answer="false">
              <span>312</span>
            </label>
            <label class="relative flex items-center justify-center px-4 py-2 bg-white dark:bg-gray-700 dark:text-gray-200 border-2 border-<%= @pagina.base_color %>-400 rounded cursor-pointer hover:bg-<%= @pagina.base_color %>-100 dark:hover:bg-<%= @pagina.base_color %>-900/30 has-checked:bg-<%= @pagina.base_color %>-300">
              <input type="radio" name="gruppo2" class="absolute inset-0 opacity-0 cursor-pointer" data-correct-answer="false">
              <span>241</span>
            </label>
            <label class="relative flex items-center justify-center px-4 py-2 bg-white dark:bg-gray-700 dark:text-gray-200 border-2 border-<%= @pagina.base_color %>-400 rounded cursor-pointer hover:bg-<%= @pagina.base_color %>-100 dark:hover:bg-<%= @pagina.base_color %>-900/30 has-checked:bg-<%= @pagina.base_color %>-300">
              <input type="radio" name="gruppo2" class="absolute inset-0 opacity-0 cursor-pointer" data-correct-answer="true">
              <span>187</span>
            </label>
          </div>

          <!-- Terzo gruppo -->
          <div class="flex items-center justify-center gap-3">
            <label class="relative flex items-center justify-center px-4 py-2 bg-white dark:bg-gray-700 dark:text-gray-200 border-2 border-<%= @pagina.base_color %>-400 rounded cursor-pointer hover:bg-<%= @pagina.base_color %>-100 dark:hover:bg-<%= @pagina.base_color %>-900/30 has-checked:bg-<%= @pagina.base_color %>-300">
              <input type="radio" name="gruppo3" class="absolute inset-0 opacity-0 cursor-pointer" data-correct-answer="false">
              <span>818</span>
            </label>
            <label class="relative flex items-center justify-center px-4 py-2 bg-white dark:bg-gray-700 dark:text-gray-200 border-2 border-<%= @pagina.base_color %>-400 rounded cursor-pointer hover:bg-<%= @pagina.base_color %>-100 dark:hover:bg-<%= @pagina.base_color %>-900/30 has-checked:bg-<%= @pagina.base_color %>-300">
              <input type="radio" name="gruppo3" class="absolute inset-0 opacity-0 cursor-pointer" data-correct-answer="false">
              <span>201</span>
            </label>
            <label class="relative flex items-center justify-center px-4 py-2 bg-white dark:bg-gray-700 dark:text-gray-200 border-2 border-<%= @pagina.base_color %>-400 rounded cursor-pointer hover:bg-<%= @pagina.base_color %>-100 dark:hover:bg-<%= @pagina.base_color %>-900/30 has-checked:bg-<%= @pagina.base_color %>-300">
              <input type="radio" name="gruppo3" class="absolute inset-0 opacity-0 cursor-pointer" data-correct-answer="true">
              <span>106</span>
            </label>
          </div>

          <!-- Quarto gruppo -->
          <div class="flex items-center justify-center gap-3">
            <label class="relative flex items-center justify-center px-4 py-2 bg-white dark:bg-gray-700 dark:text-gray-200 border-2 border-<%= @pagina.base_color %>-400 rounded cursor-pointer hover:bg-<%= @pagina.base_color %>-100 dark:hover:bg-<%= @pagina.base_color %>-900/30 has-checked:bg-<%= @pagina.base_color %>-300">
              <input type="radio" name="gruppo4" class="absolute inset-0 opacity-0 cursor-pointer" data-correct-answer="true">
              <span>199</span>
            </label>
            <label class="relative flex items-center justify-center px-4 py-2 bg-white dark:bg-gray-700 dark:text-gray-200 border-2 border-<%= @pagina.base_color %>-400 rounded cursor-pointer hover:bg-<%= @pagina.base_color %>-100 dark:hover:bg-<%= @pagina.base_color %>-900/30 has-checked:bg-<%= @pagina.base_color %>-300">
              <input type="radio" name="gruppo4" class="absolute inset-0 opacity-0 cursor-pointer" data-correct-answer="false">
              <span>218</span>
            </label>
            <label class="relative flex items-center justify-center px-4 py-2 bg-white dark:bg-gray-700 dark:text-gray-200 border-2 border-<%= @pagina.base_color %>-400 rounded cursor-pointer hover:bg-<%= @pagina.base_color %>-100 dark:hover:bg-<%= @pagina.base_color %>-900/30 has-checked:bg-<%= @pagina.base_color %>-300">
              <input type="radio" name="gruppo4" class="absolute inset-0 opacity-0 cursor-pointer" data-correct-answer="false">
              <span>671</span>
            </label>
          </div>
        </div>
      </div>

      <!-- Esercizio 2: Scrivi il significato dei numeri -->
      <div class="mb-8">
        <p class="font-bold text-gray-700 dark:text-gray-200 mb-4">
          <%= numero_esercizio_badge(2) %>
          Scrivi il significato dei seguenti numeri.
        </p>

        <!-- 425 -->
        <div class="p-4 mb-4" data-controller="fill-blanks">
          <p class="font-bold text-<%= @pagina.base_color %>-600 mb-3">425</p>
          <div class="space-y-2 text-gray-700 dark:text-gray-200">
            <%= render 'shared/fill_item', color: @pagina.base_color, segments: ["significa:", { answer: "4" }, "volte cento +", { answer: "2" }, "volte dieci +", { answer: "5" }, "volte uno"] %>
            <%= render 'shared/fill_item', color: @pagina.base_color, segments: ["si può scrivere:", { answer: "4" }, "× 100 +", { answer: "2" }, "× 10 +", { answer: "5" }, "× 1"] %>
            <%= render 'shared/fill_item', color: @pagina.base_color, segments: ["si può scrivere anche:", { answer: "4" }, "h +", { answer: "2" }, "da +", { answer: "5" }, "u"] %>
            <%= render 'shared/fill_item', color: @pagina.base_color, segments: ["si può scrivere anche: 400 +", { answer: "20" }, "+", { answer: "5" }] %>
          </div>
        </div>

        <!-- 604 -->
        <div class="p-4" data-controller="fill-blanks">
          <p class="font-bold text-<%= @pagina.base_color %>-600 mb-3">604</p>
          <div class="space-y-2 text-gray-700 dark:text-gray-200">
            <%= render 'shared/fill_item', color: @pagina.base_color, segments: ["significa:", { answer: "6" }, "volte cento +", { answer: "0" }, "volte dieci +", { answer: "4" }, "volte uno"] %>
            <%= render 'shared/fill_item', color: @pagina.base_color, segments: ["si può scrivere:", { answer: "6" }, "× 100 +", { answer: "0" }, "× 10 +", { answer: "4" }, "× 1"] %>
            <%= render 'shared/fill_item', color: @pagina.base_color, segments: ["si può scrivere anche:", { answer: "6" }, "h +", { answer: "0" }, "da +", { answer: "4" }, "u"] %>
            <%= render 'shared/fill_item', color: @pagina.base_color, segments: ["si può scrivere anche:", { answer: "600" }, "+", { answer: "0" }, "+", { answer: "4" }] %>
          </div>
        </div>
      </div>

      <!-- Esercizio 3: Luigi sta pensando -->
      <div class="mb-8">
        <p class="font-bold text-gray-700 dark:text-gray-200 mb-4">
          <%= numero_esercizio_badge(3) %>
          Luigi sta pensando a un numero formato da 16 u e 3 da. Che numero ha in mente?
        </p>

        <div class="p-4 text-gray-700 dark:text-gray-200" data-controller="fill-blanks">
          <%= render 'shared/fill_item', color: @pagina.base_color, segments: [
            "16 u + 3 da",
            { html: "<span class='text-#{@pagina.base_color}-500'>→</span>" },
            { answer: "16" }, "volte uno +", { answer: "3" }, "volte dieci",
            { html: "<span class='text-#{@pagina.base_color}-500'>→</span>" },
            { answer: "16" }, "+", { answer: "30" }, "=", { answer: "46" }
          ] %>
        </div>
      </div>

      <!-- Esercizio 4: Quale numero corrisponde -->
      <div class="mb-8">
        <p class="font-bold text-gray-700 dark:text-gray-200 mb-4">
          <%= numero_esercizio_badge(4) %>
          Quale numero corrisponde a...?
        </p>

        <%= render 'shared/fill_list',
            color: @pagina.base_color,
            arrow: true,
            container_class: "grid grid-cols-1 md:grid-cols-3 gap-4 text-gray-700 dark:text-gray-200",
            items: [
              { prefix: "7 da e 0 u", answer: "70" },
              { prefix: "5 da e 4 u", answer: "54" },
              { prefix: "1 h e 7 u", answer: "107" },
              { prefix: "4 da e 24 u", answer: "64" },
              { prefix: "12 da e 12 u", answer: "132" },
              { prefix: "3 h e 12 u", answer: "312" }
            ] %>
      </div>

      <!-- Esercizio 5 + AllenaMente affiancati -->
      <div class="flex flex-col md:flex-row gap-6">
        <!-- Esercizio 5: Rispondi -->
        <div class="flex-1" data-controller="fill-blanks">
          <p class="font-bold text-gray-700 dark:text-gray-200 mb-4">
            <%= numero_esercizio_badge(5) %>
            Rispondi.
          </p>

          <div class="space-y-4 text-gray-700 dark:text-gray-200">
            <div class="p-4 space-y-2">
              <%= render 'shared/fill_item', color: @pagina.base_color, bullet: "•", segments: ["Quante unità ci sono nel numero 32?", { answer: "32" }] %>
              <%= render 'shared/fill_item', color: @pagina.base_color, segments: ["Quante decine?", { answer: "3" }] %>
            </div>

            <div class="p-4 space-y-2">
              <%= render 'shared/fill_item', color: @pagina.base_color, bullet: "•", segments: ["Quante unità ci sono nel numero 234?", { answer: "234" }] %>
              <%= render 'shared/fill_item', color: @pagina.base_color, segments: ["Quante decine?", { answer: "23" }] %>
            </div>

            <div class="p-4 space-y-2">
              <%= render 'shared/fill_item', color: @pagina.base_color, bullet: "•", segments: [{ html: "Quante unità ci sono nel numero <span class='whitespace-nowrap'>1 708</span>?" }, { answer: "1708" }] %>
              <%= render 'shared/fill_item', color: @pagina.base_color, segments: ["Quante decine?", { answer: "170" }] %>
              <%= render 'shared/fill_item', color: @pagina.base_color, segments: ["Quante migliaia?", { answer: "1" }] %>
            </div>
          </div>
        </div>

        <!-- Box AllenaMente -->
        <div class="md:w-80 p-4 bg-white dark:bg-blue-900/40 rounded-2xl border-3 border-blue-400 dark:border-blue-600 self-end">
          <p class="font-bold text-gray-800 dark:text-blue-300 mb-2">
            <span class="bg-yellow-400 text-gray-800 px-2 py-1 rounded">AllenaMente!</span>
          </p>
          <p class="text-gray-700 dark:text-gray-200 mb-4">
            Serena pensa a un numero di 4 cifre composto da 17 centinaia e 50 unità. A quale numero pensa? Colora la casella giusta.
          </p>

          <div class="grid grid-cols-2 gap-3">
            <label class="relative flex items-center justify-center px-4 py-2 bg-white dark:bg-gray-700 dark:text-gray-200 border-2 border-<%= @pagina.base_color %>-400 rounded cursor-pointer hover:bg-<%= @pagina.base_color %>-100 dark:hover:bg-<%= @pagina.base_color %>-900/30 has-checked:bg-<%= @pagina.base_color %>-300">
              <input type="radio" name="allenamente" class="absolute inset-0 opacity-0 cursor-pointer" data-correct-answer="false">
              <span class="font-bold whitespace-nowrap">1 500</span>
            </label>
            <label class="relative flex items-center justify-center px-4 py-2 bg-white dark:bg-gray-700 dark:text-gray-200 border-2 border-<%= @pagina.base_color %>-400 rounded cursor-pointer hover:bg-<%= @pagina.base_color %>-100 dark:hover:bg-<%= @pagina.base_color %>-900/30 has-checked:bg-<%= @pagina.base_color %>-300">
              <input type="radio" name="allenamente" class="absolute inset-0 opacity-0 cursor-pointer" data-correct-answer="false">
              <span class="font-bold">175</span>
            </label>
            <label class="relative flex items-center justify-center px-4 py-2 bg-white dark:bg-gray-700 dark:text-gray-200 border-2 border-<%= @pagina.base_color %>-400 rounded cursor-pointer hover:bg-<%= @pagina.base_color %>-100 dark:hover:bg-<%= @pagina.base_color %>-900/30 has-checked:bg-<%= @pagina.base_color %>-300">
              <input type="radio" name="allenamente" class="absolute inset-0 opacity-0 cursor-pointer" data-correct-answer="false">
              <span class="font-bold whitespace-nowrap">1 705</span>
            </label>
            <label class="relative flex items-center justify-center px-4 py-2 bg-white dark:bg-gray-700 dark:text-gray-200 border-2 border-<%= @pagina.base_color %>-400 rounded cursor-pointer hover:bg-<%= @pagina.base_color %>-100 dark:hover:bg-<%= @pagina.base_color %>-900/30 has-checked:bg-<%= @pagina.base_color %>-300">
              <input type="radio" name="allenamente" class="absolute inset-0 opacity-0 cursor-pointer" data-correct-answer="true">
              <span class="font-bold whitespace-nowrap">1 750</span>
            </label>
          </div>
        </div>
      </div>

    </div>

    <%= render 'shared/exercise_controls' %>
  </div>
</div>
