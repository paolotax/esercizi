<div class="max-w-7xl mx-auto p-3 md:p-6" data-controller="exercise-checker">

  <!-- Header -->
  <%= render 'shared/page_header', pagina: @pagina %>

  <div class="space-y-8">
    
    <!-- Exercise 1: Osserva come si calcola -->
    <div class="bg-[#C7EAFB] -ml-3 md:-ml-0 -mr-3 md:mr-0 p-6 mb-6">
      <div class="flex items-center gap-3 mb-6">
        <div class="bg-red-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0">
          1
        </div>
        <h2 class="text-gray-800">Osserva come si calcola 146 + 177.</h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 items-start">
        
        <!-- Passo 1: Somma le unità -->
        <div class="space-y-2">
          <div class="p-4">
            <p class="text-sm mb-2">
              Somma le <span class="text-blue-600 font-bold">unità</span>: 6 + 7 = 13.
            </p>
            <p class="text-sm mb-2">
              Scrivi 3 nella colonna delle <span class="text-blue-600 font-bold">unità</span>
              e scrivi <span class="text-red-600 font-bold">+1</span> in alto nella colonna delle
              <span class="text-red-600 font-bold">decine</span>.
            </p>
          </div>
          <%= render partial: "strumenti/addizioni/column_addition",
                     locals: Addizione.new(addends: [146, 177],
                                           show_exercise: false,
                                           show_addends: true,
                                           show_solution: false,
                                           show_toolbar: false,
                                           show_carry: true).to_partial_params %>
        </div>

        <!-- Passo 2: Somma le decine -->
        <div class="space-y-4">
          <div class="p-4">
            <p class="text-sm mb-2">
              Somma le <span class="text-red-600 font-bold">decine</span>: 4 + 7 + 1 = 12.
            </p>
            <p class="text-sm mb-2">
              Scrivi 2 nella colonna delle <span class="text-red-600 font-bold">decine</span>
              e scrivi <span class="text-red-600 font-bold">+1</span> in alto nella colonna delle
              <span class="text-green-600 font-bold">centinaia</span>.
            </p>
          </div>
          <%= render partial: "strumenti/addizioni/column_addition",
                     locals: Addizione.new(addends: [146, 177],
                                           show_exercise: false,
                                           show_addends: true,
                                           show_solution: false,
                                           show_toolbar: false,
                                           show_carry: true).to_partial_params %>
        </div>

        <!-- Passo 3: Somma le centinaia -->
        <div class="space-y-4">
          <div class="p-4">
            <p class="text-sm mb-2">
              Somma le <span class="text-green-600 font-bold">centinaia</span>: 1 + 1 + 1 = 3.
            </p>
          </div>
          <%= render partial: "strumenti/addizioni/column_addition",
                     locals: Addizione.new(addends: [146, 177],
                                           show_exercise: false,
                                           show_addends: true,
                                           show_solution: true,
                                           show_toolbar: false,
                                           show_carry: true).to_partial_params %>
        </div>

      </div>
    </div>

    <!-- Exercise 2: Metti in colonna e calcola -->
    <div class="p-6 mb-6">
      <div class="flex items-start gap-3 mb-6">
        <div class="bg-red-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0">
          2
        </div>
        <h2 class="text-xl font-bold text-gray-800">Metti in colonna e calcola.</h2>
      </div>

      <div class="flex flex-wrap gap-8 justify-center items-start">
        
        <%= render partial: "strumenti/addizioni/column_addition",
                   locals: Addizione.new(addends: [205, 348],
                                         title: "205 + 348 =",
                                         show_addends: true,
                                         show_toolbar: false,
                                         show_carry: true).to_partial_params %>

        <%= render partial: "strumenti/addizioni/column_addition",
                   locals: Addizione.new(addends: [738, 56],
                                         title: "738 + 56 =",
                                         show_exercise: true,
                                         show_toolbar: false,
                                         show_carry: true).to_partial_params %>

        <%= render partial: "strumenti/addizioni/column_addition",
                   locals: Addizione.new(addends: [81, 250],
                                         title: "81 + 250 =",
                                         show_exercise: false,
                                         show_toolbar: false,
                                         show_carry: true).to_partial_params %>

      </div>
    </div>

    <!-- Exercise 3: Calcola in colonna sul quaderno (con modal) -->
    <div class="bg-white p-6 mb-6" data-controller="column-modal" data-action="keydown@window->column-modal#handleEscape">
      <div class="flex items-start gap-3 mb-6">
        <div class="bg-red-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0">
          3
        </div>
        <h2 class="text-xl font-bold text-gray-800">Calcola in colonna sul quaderno, oppure clicca sulle operazioni e svolgile nella griglia.</h2>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        <!-- Column a -->
        <button class="bg-blue-50 p-4 rounded-lg hover:bg-blue-100 transition cursor-pointer text-left border-2 border-transparent hover:border-blue-400"
                data-action="click->column-modal#openGroup"
                data-group="a"
                data-operations="58+23,67+35,58+19"
                data-show-carry="true"
                data-column-modal-target="groupButton">
          <div class="font-bold text-red-500 mb-3">a.</div>
          <div class="space-y-2" data-column-modal-target="operationsList" data-group="a">
            <div class="text-lg operation-item" data-index="0">58 + 23 =</div>
            <div class="text-lg operation-item" data-index="1">67 + 35 =</div>
            <div class="text-lg operation-item" data-index="2">58 + 19 =</div>
          </div>
        </button>

        <!-- Column b -->
        <button class="bg-green-50 p-4 rounded-lg hover:bg-green-100 transition cursor-pointer text-left border-2 border-transparent hover:border-green-400"
                data-action="click->column-modal#openGroup"
                data-group="b"
                data-operations="296+14,718+89,246+29"
                data-show-carry="true"
                data-column-modal-target="groupButton">
          <div class="font-bold text-red-500 mb-3">b.</div>
          <div class="space-y-2" data-column-modal-target="operationsList" data-group="b">
            <div class="text-lg operation-item" data-index="0">296 + 14 =</div>
            <div class="text-lg operation-item" data-index="1">718 + 89 =</div>
            <div class="text-lg operation-item" data-index="2">246 + 29 =</div>
          </div>
        </button>

        <!-- Column c -->
        <button class="bg-purple-50 p-4 rounded-lg hover:bg-purple-100 transition cursor-pointer text-left border-2 border-transparent hover:border-purple-400"
                data-action="click->column-modal#openGroup"
                data-group="c"
                data-operations="53+117,87+228,89+718"
                data-show-carry="true"
                data-column-modal-target="groupButton">
          <div class="font-bold text-red-500 mb-3">c.</div>
          <div class="space-y-2" data-column-modal-target="operationsList" data-group="c">
            <div class="text-lg operation-item" data-index="0">53 + 117 =</div>
            <div class="text-lg operation-item" data-index="1">87 + 228 =</div>
            <div class="text-lg operation-item" data-index="2">89 + 718 =</div>
          </div>
        </button>

        <!-- Column d -->
        <button class="bg-pink-50 p-4 rounded-lg hover:bg-pink-100 transition cursor-pointer text-left border-2 border-transparent hover:border-pink-400"
                data-action="click->column-modal#openGroup"
                data-group="d"
                data-operations="189+363,436+257,640+365"
                data-show-carry="true"
                data-column-modal-target="groupButton">
          <div class="font-bold text-red-500 mb-3">d.</div>
          <div class="space-y-2" data-column-modal-target="operationsList" data-group="d">
            <div class="text-lg operation-item" data-index="0">189 + 363 =</div>
            <div class="text-lg operation-item" data-index="1">436 + 257 =</div>
            <div class="text-lg operation-item" data-index="2">640 + 365 =</div>
          </div>
        </button>
      </div>

      <!-- Modal -->
      <div data-column-modal-target="modal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50" data-action="click->column-modal#closeOnBackdrop">
        <div class="bg-white rounded-lg p-6 md:p-8 max-w-7xl w-full mx-4 max-h-[90vh] overflow-y-auto">
          <div class="flex justify-between items-center mb-6">
            <h3 class="text-2xl font-bold text-blue-600" data-column-modal-target="title">Gruppo di operazioni</h3>
            <button class="text-gray-500 hover:text-gray-700 text-3xl" data-action="click->column-modal#close">&times;</button>
          </div>

          <!-- Contenitore dinamico per le griglie -->
          <div data-column-modal-target="grid" class="mb-6">
            <!-- Il contenuto verrà caricato dinamicamente -->
          </div>

          <div class="flex gap-4 justify-center">
            <button class="bg-green-600 text-white px-8 py-3 rounded-lg hover:bg-green-700 transition font-bold text-lg" data-action="click->column-modal#saveGroup">Salva risultati</button>
            <button class="bg-gray-300 text-gray-700 px-8 py-3 rounded-lg hover:bg-gray-400 transition font-bold text-lg" data-action="click->column-modal#close">Chiudi</button>
          </div>
        </div>
      </div>
    </div>

    <!-- Exercise Controls -->
    <%= render 'shared/exercise_controls' %>
  </div>
</div>

