<div class="max-w-7xl mx-auto p-6" data-controller="exercise-checker">

  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-start sm:items-center justify-between gap-4 mb-4">
      <div class="flex flex-col-reverse sm:flex-row items-start sm:items-center gap-2 sm:gap-4">
        <div class="bg-blue-500 text-white text-md sm:text-xl px-2 sm:px-4 py-1.5 sm:py-2 rounded-lg font-bold">
          ADDIZIONE
        </div>      <div class="flex-shrink-0 bg-red-600 text-white rounded-full w-10 h-10 sm:w-12 sm:h-12 flex items-center justify-center font-bold text-lg sm:text-xl">
        144
      </div>
        <h1 class="text-2xl sm:text-3xl font-bold text-blue-600">ADDIZIONI CON IL CAMBIO</h1>
      </div>
      <div class="flex-shrink-0 bg-red-600 text-white rounded-full w-10 h-10 sm:w-12 sm:h-12 flex items-center justify-center font-bold text-lg sm:text-xl">
        26
      </div>
    </div>
  </div>

  <div class="space-y-8">
    
    <!-- Exercise 1: Osserva come si calcola -->
    <div class="bg-white rounded-lg shadow-lg p-6 mb-6">
      <div class="flex items-start gap-3 mb-6">
        <div class="bg-red-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0">
          1
        </div>
        <h2 class="text-xl font-bold text-gray-800">Osserva come si calcola 146 + 177.</h2>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 items-start">
        
        <!-- Passo 1: Somma le unità -->
        <div class="space-y-4">
          <div class="bg-blue-50 p-4 rounded-lg">
            <p class="text-sm mb-2">
              Somma le <span class="text-blue-600 font-bold">unità</span>: 6 + 7 = 13.
            </p>
            <p class="text-sm mb-2">
              Scrivi 3 nella colonna delle <span class="text-blue-600 font-bold">unità</span> 
              e scrivi <span class="text-red-600 font-bold">+1</span> in alto nella colonna delle 
              <span class="text-red-600 font-bold">decine</span>.
            </p>
          </div>
          <%= render partial: "shared/column_addition", locals: {
               operation: "146 + 177",
               show_exercise: false,
               show_addends: true,
               show_solution: false,
               show_toolbar: false,
               show_carry: true
          } %>
        </div>

        <!-- Passo 2: Somma le decine -->
        <div class="space-y-4">
          <div class="bg-blue-50 p-4 rounded-lg">
            <p class="text-sm mb-2">
              Somma le <span class="text-red-600 font-bold">decine</span>: 4 + 7 + 1 = 12.
            </p>
            <p class="text-sm mb-2">
              Scrivi 2 nella colonna delle <span class="text-red-600 font-bold">decine</span> 
              e scrivi <span class="text-red-600 font-bold">+1</span> in alto nella colonna delle 
              <span class="text-green-600 font-bold">centinaia</span>.
            </p>
          </div>
          <%= render partial: "shared/column_addition", locals: {
               operation: "146 + 177",
               show_exercise: false,
               show_addends: true,
               show_solution: false,
               show_toolbar: false,
               show_carry: true
          } %>
        </div>

        <!-- Passo 3: Somma le centinaia -->
        <div class="space-y-4">
          <div class="bg-blue-50 p-4 rounded-lg">
            <p class="text-sm mb-2">
              Somma le <span class="text-green-600 font-bold">centinaia</span>: 1 + 1 + 1 = 3.
            </p>
          </div>
          <%= render partial: "shared/column_addition", locals: {
               operation: "146 + 177",
               show_exercise: false,
               show_addends: true,
               show_solution: true,
               show_toolbar: false,
               show_carry: true
          } %>
        </div>

      </div>
    </div>

    <!-- Exercise 2: Metti in colonna e calcola -->
    <div class="bg-white rounded-lg shadow-lg p-6 mb-6">
      <div class="flex items-start gap-3 mb-6">
        <div class="bg-red-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0">
          2
        </div>
        <h2 class="text-xl font-bold text-gray-800">Metti in colonna e calcola.</h2>
      </div>

      <div class="flex flex-wrap gap-8 justify-center items-start">
        
        <%= render partial: "shared/column_addition", locals: {
             operation: "205 + 348",
             title: "205 + 348 =",
             show_addends: true,
             show_toolbar: false,
             show_carry: true
        } %>

        <%= render partial: "shared/column_addition", locals: {
             operation: "738 + 56",
             title: "738 + 56 =",
             show_exercise: true,
             show_toolbar: false,
             show_carry: true
        } %>

        <%= render partial: "shared/column_addition", locals: {
             operation: "81 + 250",
             title: "81 + 250 =",
             show_exercise: false,
             show_toolbar: false,
             show_carry: true
        } %>

      </div>
    </div>

    <!-- Exercise 3: Calcola in colonna sul quaderno (con modal) -->
    <div class="bg-white rounded-lg shadow-lg p-6 mb-6" data-controller="column-modal" data-action="keydown@window->column-modal#handleEscape">
      <div class="flex items-start gap-3 mb-6">
        <div class="bg-red-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0">
          3
        </div>
        <h2 class="text-xl font-bold text-gray-800">Calcola in colonna sul quaderno, oppure clicca sulle operazioni e svolgile nella griglia.</h2>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        <!-- Column a -->
        <div class="bg-blue-50 p-4 rounded-lg">
          <div class="font-bold text-red-500 mb-3">a.</div>
          <div class="space-y-2">
            <button class="text-lg hover:bg-blue-200 px-2 py-1 rounded w-full text-left transition" data-action="click->column-modal#open" data-num1="58" data-num2="23">58 + 23 =</button>
            <button class="text-lg hover:bg-blue-200 px-2 py-1 rounded w-full text-left transition" data-action="click->column-modal#open" data-num1="67" data-num2="35">67 + 35 =</button>
            <button class="text-lg hover:bg-blue-200 px-2 py-1 rounded w-full text-left transition" data-action="click->column-modal#open" data-num1="58" data-num2="19">58 + 19 =</button>
          </div>
        </div>

        <!-- Column b -->
        <div class="bg-blue-50 p-4 rounded-lg">
          <div class="font-bold text-red-500 mb-3">b.</div>
          <div class="space-y-2">
            <button class="text-lg hover:bg-blue-200 px-2 py-1 rounded w-full text-left transition" data-action="click->column-modal#open" data-num1="296" data-num2="14">296 + 14 =</button>
            <button class="text-lg hover:bg-blue-200 px-2 py-1 rounded w-full text-left transition" data-action="click->column-modal#open" data-num1="718" data-num2="89">718 + 89 =</button>
            <button class="text-lg hover:bg-blue-200 px-2 py-1 rounded w-full text-left transition" data-action="click->column-modal#open" data-num1="246" data-num2="29">246 + 29 =</button>
          </div>
        </div>

        <!-- Column c -->
        <div class="bg-blue-50 p-4 rounded-lg">
          <div class="font-bold text-red-500 mb-3">c.</div>
          <div class="space-y-2">
            <button class="text-lg hover:bg-blue-200 px-2 py-1 rounded w-full text-left transition" data-action="click->column-modal#open" data-num1="53" data-num2="117">53 + 117 =</button>
            <button class="text-lg hover:bg-blue-200 px-2 py-1 rounded w-full text-left transition" data-action="click->column-modal#open" data-num1="87" data-num2="228">87 + 228 =</button>
            <button class="text-lg hover:bg-blue-200 px-2 py-1 rounded w-full text-left transition" data-action="click->column-modal#open" data-num1="89" data-num2="718">89 + 718 =</button>
          </div>
        </div>

        <!-- Column d -->
        <div class="bg-blue-50 p-4 rounded-lg">
          <div class="font-bold text-red-500 mb-3">d.</div>
          <div class="space-y-2">
            <button class="text-lg hover:bg-blue-200 px-2 py-1 rounded w-full text-left transition" data-action="click->column-modal#open" data-num1="189" data-num2="363">189 + 363 =</button>
            <button class="text-lg hover:bg-blue-200 px-2 py-1 rounded w-full text-left transition" data-action="click->column-modal#open" data-num1="436" data-num2="257">436 + 257 =</button>
            <button class="text-lg hover:bg-blue-200 px-2 py-1 rounded w-full text-left transition" data-action="click->column-modal#open" data-num1="640" data-num2="365">640 + 365 =</button>
          </div>
        </div>
      </div>

      <!-- Modal per la griglia di calcolo -->
      <div data-column-modal-target="modal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50" data-action="click->column-modal#closeOnBackdrop">
        <div class="bg-white rounded-lg p-8 max-w-4xl w-full mx-4 max-h-[90vh] overflow-y-auto">
          <div class="flex justify-between items-center mb-6">
            <h3 class="text-2xl font-bold text-blue-600" data-column-modal-target="title">Addizione in colonna</h3>
            <button class="text-gray-500 hover:text-gray-700 text-3xl" data-action="click->column-modal#close">&times;</button>
          </div>
          
          <!-- Contenitore dinamico per la griglia -->
          <div data-column-modal-target="grid">
            <!-- Il contenuto verrà caricato dinamicamente -->
          </div>

          <div class="mt-6 flex gap-4">
            <button class="flex-1 bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 transition font-bold" data-action="click->column-modal#save">Salva</button>
            <button class="flex-1 bg-gray-300 text-gray-700 px-4 py-2 rounded-lg hover:bg-gray-400 transition font-bold" data-action="click->column-modal#close">Chiudi</button>
          </div>
        </div>
      </div>
    </div>

    <!-- Exercise Controls -->
    <%= render 'shared/exercise_controls', color: 'blue', current_page: 'bus3_mat_p026' %>
  </div>
</div>

