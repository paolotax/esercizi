<div class="max-w-7xl mx-auto p-3 md:p-6 bg-white dark:bg-gray-900 text-black dark:text-white transition-colors duration-300"
     data-controller="exercise-checker text-toggle font-controls"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <!-- Header -->
  <%= render 'shared/page_header', pagina: @pagina %>

  <div class="space-y-8">
    
    <!-- Exercise 1: Osserva come si calcola -->
    <div class="bg-[#C7EAFB] dark:bg-cyan-900/40 -ml-3 md:-ml-0 -mr-3 md:mr-0 p-6 mb-6">
      <div class="flex items-center gap-3 mb-6">
        <div class="bg-red-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0">
          1
        </div>
        <h2 class="text-gray-800 dark:text-gray-200">Osserva come si calcola 146 + 177.</h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 items-start">
        
        <!-- Passo 1: Somma le unità -->
        <div class="space-y-2">
          <div class="p-4">
            <p class="mb-2 dark:text-white">
              Somma le <span class="text-blue-600 dark:text-blue-400 font-bold">unità</span>: 6 + 7 = 13.
            </p>
            <p class="mb-2 dark:text-white">
              Scrivi 3 nella colonna delle <span class="text-blue-600 dark:text-blue-400 font-bold">unità</span>
              e scrivi <span class="text-red-600 dark:text-red-400 font-bold">+1</span> in alto nella colonna delle
              <span class="text-red-600 dark:text-red-400 font-bold">decine</span>.
            </p>
          </div>
          <%= addizione_grid [146, 177], show_addends: true, show_carry: true, style: :column %>
        </div>

        <!-- Passo 2: Somma le decine -->
        <div class="space-y-4">
          <div class="p-4">
            <p class="mb-2 dark:text-white">
              Somma le <span class="text-red-600 dark:text-red-400 font-bold">decine</span>: 4 + 7 + 1 = 12.
            </p>
            <p class="mb-2 dark:text-white">
              Scrivi 2 nella colonna delle <span class="text-red-600 dark:text-red-400 font-bold">decine</span>
              e scrivi <span class="text-red-600 dark:text-red-400 font-bold">+1</span> in alto nella colonna delle
              <span class="text-green-600 dark:text-green-400 font-bold">centinaia</span>.
            </p>
          </div>
          <%= addizione_grid [146, 177], show_addends: true, show_carry: true, style: :column %>
        </div>

        <!-- Passo 3: Somma le centinaia -->
        <div class="space-y-4">
          <div class="p-4">
            <p class="mb-2 dark:text-white">
              Somma le <span class="text-green-600 dark:text-green-400 font-bold">centinaia</span>: 1 + 1 + 1 = 3.
            </p>
          </div>
          <%= addizione_grid [146, 177], show_addends: true, show_solution: true, show_carry: true, style: :column %>
        </div>

      </div>
    </div>

    <!-- Exercise 2: Metti in colonna e calcola -->
    <div class="p-6 mb-6">
      <div class="flex items-start gap-3 mb-6">
        <div class="bg-red-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0">
          2
        </div>
        <h2 class="font-bold text-gray-800 dark:text-gray-200">Metti in colonna e calcola.</h2>
      </div>

      <div class="flex flex-wrap gap-8 justify-center items-start">
        <%= addizione_grid [205, 348], title: "205 + 348 =", show_addends: true, show_carry: true, style: :column %>
        <%= addizione_grid [738, 56], title: "738 + 56 =", show_addends: true, show_carry: true, style: :column %>
        <%= addizione_grid [81, 250], title: "81 + 250 =", show_carry: true, style: :column %>
      </div>
    </div>

    <!-- Exercise 3: Calcola in colonna sul quaderno (con modal) -->
    <div class="bg-white dark:bg-gray-800 p-6 mb-6 rounded-lg" data-controller="operation-viewer">
      <div class="flex items-start gap-3 mb-6">
        <div class="bg-red-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0">
          3
        </div>
        <h2 class="font-bold text-gray-800 dark:text-gray-200">Calcola in colonna sul quaderno, oppure clicca sulle operazioni e svolgile nella griglia.</h2>
      </div>

      <%
        es3_gruppi = [
          { lettera: "a", colore: "blue", operazioni: [
            { op: "58+23", answer: "81" },
            { op: "67+35", answer: "102" },
            { op: "58+19", answer: "77" }
          ]},
          { lettera: "b", colore: "green", operazioni: [
            { op: "296+14", answer: "310" },
            { op: "718+89", answer: "807" },
            { op: "246+29", answer: "275" }
          ]},
          { lettera: "c", colore: "purple", operazioni: [
            { op: "53+117", answer: "170" },
            { op: "87+228", answer: "315" },
            { op: "89+718", answer: "807" }
          ]},
          { lettera: "d", colore: "pink", operazioni: [
            { op: "189+363", answer: "552" },
            { op: "436+257", answer: "693" },
            { op: "640+365", answer: "1005" }
          ]}
        ]
      %>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        <% es3_gruppi.each do |gruppo| %>
          <%
            operations_data = gruppo[:operazioni].each_with_index.map { |item, idx|
              { operation: item[:op], targetId: "es3-#{gruppo[:lettera]}-#{idx}" }
            }
          %>
          <div class="bg-<%= gruppo[:colore] %>-50 dark:bg-<%= gruppo[:colore] %>-900/30 p-4 rounded-lg border-2 border-transparent hover:border-<%= gruppo[:colore] %>-400 transition">
            <p class="font-bold text-red-500 dark:text-red-400 mb-3 flex items-center gap-2">
              <%= gruppo[:lettera] %>.
              <button type="button"
                      data-action="click->operation-viewer#openGroup"
                      data-operations='<%= operations_data.to_json %>'
                      data-type="addizione"
                      data-layout="column"
                      data-display="modal"
                      data-group="<%= gruppo[:lettera] %>"
                      class="p-1 text-gray-400 hover:text-<%= gruppo[:colore] %>-600 dark:hover:text-<%= gruppo[:colore] %>-400 transition print-hidden"
                      title="Apri gruppo <%= gruppo[:lettera] %> nella calcolatrice">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
                </svg>
              </button>
            </p>
            <ul class="space-y-2">
              <% gruppo[:operazioni].each_with_index do |item, idx| %>
                <li class="flex items-center gap-2 flex-wrap dark:text-white">
                  <span><%= item[:op].gsub('+', ' + ') %> =</span>
                  <input type="text"
                         data-operation-id="es3-<%= gruppo[:lettera] %>-<%= idx %>"
                         data-correct-answer="<%= item[:answer] %>"
                         class="w-16 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent">
                </li>
              <% end %>
            </ul>
          </div>
        <% end %>
      </div>

      <!-- Modal -->
      <%= render 'shared/operation_viewer', display: :modal, title: "Addizioni in colonna", color: "blue" %>
    </div>

    <!-- Exercise Controls -->
    <%= render 'shared/exercise_controls' %>
  </div>
</div>

