<div class="max-w-6xl mx-auto bg-white p-3 md:p-6"
     data-controller="exercise-checker text-toggle font-controls"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <%= render 'shared/page_header', pagina: @pagina %>

  <div class="space-y-6">
    <!-- Box teoria -->
    <div class="p-4 bg-cyan-50 rounded-lg">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <p class="font-bold text-cyan-600 mb-2">Volume del parallelepipedo</p>
          <%= image_tag "nvi5_mat/p257/p257_01.jpg", class: "max-w-[200px] h-auto mb-3", alt: "Parallelepipedo" %>
          <p class="text-gray-700">V = area di base × h</p>
        </div>
        <div>
          <p class="font-bold text-cyan-600 mb-2">Volume del cubo</p>
          <%= image_tag "nvi5_mat/p257/p257_02.jpg", class: "max-w-[150px] h-auto mb-3", alt: "Cubo" %>
          <p class="text-gray-700">V = ℓ × ℓ × ℓ</p>
        </div>
      </div>
    </div>

    <!-- Esercizio 1 -->
    <div>
      <p class="font-bold text-gray-700 mb-4">
        <%= numero_esercizio_badge(1) %>
        Calcola il volume dei due solidi.
      </p>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="p-3 border border-gray-200 rounded-lg text-center">
          <%= image_tag "nvi5_mat/p257/p257_03.jpg", class: "max-w-[300px] h-auto mx-auto mb-3", alt: "Parallelepipedo" %>
          <div class="flex items-center justify-center gap-2">
            <span class="text-gray-700">V =</span>
            <input type="text" data-correct-answer="3600 cm³" class="w-28 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
          </div>
        </div>

        <div class="p-3 border border-gray-200 rounded-lg text-center">
          <%= image_tag "nvi5_mat/p257/p257_04.jpg", class: "max-w-[150px] h-auto mx-auto mb-3", alt: "Cubo" %>
          <div class="flex items-center justify-center gap-2">
            <span class="text-gray-700">V =</span>
            <input type="text" data-correct-answer="125 cm³" class="w-28 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
          </div>
        </div>
      </div>
    </div>

    <!-- Esercizio 2 -->
    <div>
      <p class="font-bold text-gray-700 mb-4">
        <%= numero_esercizio_badge(2) %>
        Completa la tabella come nell'esempio.
      </p>

      <div class="overflow-x-auto">
        <table class="w-full border-collapse border border-cyan-400">
          <thead>
            <tr>
              <th class="p-2 border border-cyan-400 bg-cyan-100 text-center text-gray-800">Figura</th>
              <th class="p-2 border border-cyan-400 bg-cyan-100 text-center text-gray-800">Spigolo di un cubo</th>
              <th class="p-2 border border-cyan-400 bg-cyan-100 text-center text-gray-800">Volume di un cubo</th>
              <th class="p-2 border border-cyan-400 bg-cyan-100 text-center text-gray-800">Numero dei cubi</th>
              <th class="p-2 border border-cyan-400 bg-cyan-100 text-center text-gray-800">Volume del solido</th>
            </tr>
          </thead>
          <tbody>
            <!-- Esempio -->
            <tr>
              <td class="p-2 border border-cyan-400 text-center bg-cyan-50">
                <%= image_tag "nvi5_mat/p257/output-1715938802257_218_720_90_97.png", class: "max-w-[60px] h-auto mx-auto", alt: "Figura 1" %>
              </td>
              <td class="p-2 border border-cyan-400 text-center bg-cyan-50 font-bold">5 cm</td>
              <td class="p-2 border border-cyan-400 text-center bg-cyan-50 font-bold">125 cm³</td>
              <td class="p-2 border border-cyan-400 text-center bg-cyan-50 font-bold">6</td>
              <td class="p-2 border border-cyan-400 text-center bg-cyan-50 font-bold">750 cm³</td>
            </tr>
            <tr>
              <td class="p-2 border border-cyan-400 text-center bg-white">
                <%= image_tag "nvi5_mat/p257/output-1715938802257_216_835_89_98.png", class: "max-w-[60px] h-auto mx-auto", alt: "Figura 2" %>
              </td>
              <td class="p-2 border border-cyan-400 text-center bg-white">3 cm</td>
              <td class="p-2 border border-cyan-400 text-center bg-white">
                <input type="text" data-correct-answer="27 cm³" class="w-20 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
              </td>
              <td class="p-2 border border-cyan-400 text-center bg-white">
                <input type="text" data-correct-answer="5" class="w-12 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
              </td>
              <td class="p-2 border border-cyan-400 text-center bg-white">
                <input type="text" data-correct-answer="135 cm³" class="w-24 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
              </td>
            </tr>
            <tr>
              <td class="p-2 border border-cyan-400 text-center bg-white">
                <%= image_tag "nvi5_mat/p257/output-1715938802257_219_953_87_97.png", class: "max-w-[60px] h-auto mx-auto", alt: "Figura 3" %>
              </td>
              <td class="p-2 border border-cyan-400 text-center bg-white">4 cm</td>
              <td class="p-2 border border-cyan-400 text-center bg-white">
                <input type="text" data-correct-answer="64 cm³" class="w-20 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
              </td>
              <td class="p-2 border border-cyan-400 text-center bg-white">
                <input type="text" data-correct-answer="7" class="w-12 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
              </td>
              <td class="p-2 border border-cyan-400 text-center bg-white">
                <input type="text" data-correct-answer="448 cm³" class="w-24 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
              </td>
            </tr>
            <tr>
              <td class="p-2 border border-cyan-400 text-center bg-white">
                <%= image_tag "nvi5_mat/p257/output-1715938802257_215_1076_91_85.png", class: "max-w-[60px] h-auto mx-auto", alt: "Figura 4" %>
              </td>
              <td class="p-2 border border-cyan-400 text-center bg-white">2 cm</td>
              <td class="p-2 border border-cyan-400 text-center bg-white">
                <input type="text" data-correct-answer="8 cm³" class="w-20 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
              </td>
              <td class="p-2 border border-cyan-400 text-center bg-white">
                <input type="text" data-correct-answer="8" class="w-12 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
              </td>
              <td class="p-2 border border-cyan-400 text-center bg-white">
                <input type="text" data-correct-answer="64 cm³" class="w-24 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <%= render 'shared/exercise_controls' %>
  </div>
</div>
