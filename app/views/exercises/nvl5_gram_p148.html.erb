<div class="max-w-6xl mx-auto p-3 md:p-8 bg-gradient-to-br from-cyan-50 via-white to-blue-50 rounded-3xl shadow-xl" data-controller="exercise-checker">

  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-start sm:items-center justify-between gap-4 mb-4">
      <div class="flex flex-col-reverse sm:flex-row items-start sm:items-center gap-2 sm:gap-4">
        <div class="bg-cyan-500 text-white text-md sm:text-xl px-2 sm:px-4 py-1.5 sm:py-2 rounded-lg font-bold">
          MORFOLOGIA
        </div>
        <h1 class="text-2xl sm:text-3xl font-bold text-cyan-600">Difettivi, sovrabbondanti, invariabili</h1>
      </div>
      <div class="flex-shrink-0 bg-cyan-600 text-white rounded-full w-10 h-10 sm:w-12 sm:h-12 flex items-center justify-center font-bold text-lg sm:text-xl">
        148
      </div>
    </div>
  </div>

  <!-- Exercise 1: Defective nouns -->
  <div class="mb-6 bg-white rounded-2xl border-4 border-yellow-200 shadow-2xl p-4 md:p-6" data-controller="word-highlighter fill-blanks" data-word-highlighter-multi-color-value="false">
    <h2 class="text-lg md:text-xl font-bold text-yellow-700 mb-3">
      <div class="flex items-center gap-2 flex-wrap">
        <div class="flex items-center gap-2">
          <span class="bg-yellow-600 text-white rounded-full w-8 h-8 md:w-10 md:h-10 inline-flex items-center justify-center flex-shrink-0">1</span>
          <span class="bg-yellow-400 text-blue-800 px-2 py-1 rounded text-sm md:text-base font-bold whitespace-nowrap">IMPARARE TUTTI</span>
        </div>
        <span>Sottolinea i <span class="text-yellow-600 font-bold underline">nomi difettivi<span class="inline-block w-6 h-6 bg-yellow-300 rounded ml-1 align-middle cursor-pointer transition transform hover:scale-110" data-word-highlighter-target="colorBox" data-color="yellow" data-action="click->word-highlighter#selectColor"></span></span>, poi scrivili al posto giusto nella tabella.</span>
      </div>
    </h2>

    <div class="bg-yellow-50 border-2 border-yellow-200 rounded-xl px-4 py-4 mb-4 text-base md:text-lg text-gray-700 leading-relaxed">
      <p>
        <span data-word-highlighter-target="word" data-correct="true" data-action="click->word-highlighter#toggleHighlight" class="px-1 rounded">sangue</span> • giochi • strade • festa • <span data-word-highlighter-target="word" data-correct="true" data-action="click->word-highlighter#toggleHighlight" class="px-1 rounded">nozze</span> • <span data-word-highlighter-target="word" data-correct="true" data-action="click->word-highlighter#toggleHighlight" class="px-1 rounded">burro</span> • dita • <span data-word-highlighter-target="word" data-correct="true" data-action="click->word-highlighter#toggleHighlight" class="px-1 rounded">fame</span> • <span data-word-highlighter-target="word" data-correct="true" data-action="click->word-highlighter#toggleHighlight" class="px-1 rounded">miele</span> • corse • <span data-word-highlighter-target="word" data-correct="true" data-action="click->word-highlighter#toggleHighlight" class="px-1 rounded">grandine</span> • piede • <span data-word-highlighter-target="word" data-correct="true" data-action="click->word-highlighter#toggleHighlight" class="px-1 rounded">pepe</span> • mirtillo • torre • <span data-word-highlighter-target="word" data-correct="true" data-action="click->word-highlighter#toggleHighlight" class="px-1 rounded">sete</span> • <span data-word-highlighter-target="word" data-correct="true" data-action="click->word-highlighter#toggleHighlight" class="px-1 rounded">congratulazioni</span> • <span data-word-highlighter-target="word" data-correct="true" data-action="click->word-highlighter#toggleHighlight" class="px-1 rounded">stoviglie</span> • finestre • <span data-word-highlighter-target="word" data-correct="true" data-action="click->word-highlighter#toggleHighlight" class="px-1 rounded">ferie</span>
      </p>
    </div>

    <div class="overflow-x-auto mb-4">
      <table class="w-full border-collapse text-sm md:text-base">
        <thead>
          <tr class="bg-cyan-100">
            <th class="border-2 border-cyan-300 px-4 py-3 text-cyan-700 font-bold">Hanno solo il singolare</th>
            <th class="border-2 border-cyan-300 px-4 py-3 text-cyan-700 font-bold">Hanno solo il plurale</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td class="border-2 border-cyan-200 px-4 py-3 bg-cyan-50 align-top">
              <input type="text" class="w-full bg-transparent border-b border-gray-300 focus:outline-none focus:border-cyan-500 mb-2" data-fill-blanks-target="input" data-answer="sangue" placeholder="......................................."><br>
              <input type="text" class="w-full bg-transparent border-b border-gray-300 focus:outline-none focus:border-cyan-500 mb-2" data-fill-blanks-target="input" data-answer="burro" placeholder="......................................."><br>
              <input type="text" class="w-full bg-transparent border-b border-gray-300 focus:outline-none focus:border-cyan-500 mb-2" data-fill-blanks-target="input" data-answer="fame" placeholder="......................................."><br>
              <input type="text" class="w-full bg-transparent border-b border-gray-300 focus:outline-none focus:border-cyan-500 mb-2" data-fill-blanks-target="input" data-answer="miele" placeholder="......................................."><br>
              <input type="text" class="w-full bg-transparent border-b border-gray-300 focus:outline-none focus:border-cyan-500 mb-2" data-fill-blanks-target="input" data-answer="grandine" placeholder="......................................."><br>
              <input type="text" class="w-full bg-transparent border-b border-gray-300 focus:outline-none focus:border-cyan-500 mb-2" data-fill-blanks-target="input" data-answer="pepe" placeholder="......................................."><br>
              <input type="text" class="w-full bg-transparent border-b border-gray-300 focus:outline-none focus:border-cyan-500" data-fill-blanks-target="input" data-answer="sete" placeholder=".......................................">
            </td>
            <td class="border-2 border-cyan-200 px-4 py-3 bg-white align-top">
              <input type="text" class="w-full bg-transparent border-b border-gray-300 focus:outline-none focus:border-cyan-500 mb-2" data-fill-blanks-target="input" data-answer="nozze" placeholder="......................................."><br>
              <input type="text" class="w-full bg-transparent border-b border-gray-300 focus:outline-none focus:border-cyan-500 mb-2" data-fill-blanks-target="input" data-answer="congratulazioni" placeholder="......................................."><br>
              <input type="text" class="w-full bg-transparent border-b border-gray-300 focus:outline-none focus:border-cyan-500 mb-2" data-fill-blanks-target="input" data-answer="stoviglie" placeholder="......................................."><br>
              <input type="text" class="w-full bg-transparent border-b border-gray-300 focus:outline-none focus:border-cyan-500" data-fill-blanks-target="input" data-answer="ferie" placeholder=".......................................">
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Exercise 2: Overabundant plurals -->
  <div class="mb-6 bg-white rounded-2xl border-4 border-purple-200 shadow-2xl p-4 md:p-6" data-controller="word-choice">
    <h2 class="text-lg md:text-xl font-bold text-purple-700 mb-3 flex items-start gap-2">
      <span class="bg-purple-600 text-white rounded-full w-8 h-8 md:w-10 md:h-10 inline-flex items-center justify-center flex-shrink-0">2</span>
      <span>Cancella in ciascuna frase il <span class="text-purple-600 font-bold underline">plurale sovrabbondante</span> non corretto.</span>
    </h2>

    <% sentences = [
      { text: "I nemici erano arrivati di notte sotto", options: ["i muri", "le mura"], correct: "le mura" },
      { text: "Eleonora mi ha fatto capire a", options: ["gesti", "gesta"], correct: "gesti" },
      { text: "Al mio cane piace rosicchiare", options: ["gli ossi", "le ossa"], correct: "le ossa" },
      { text: "Tutti", options: ["i membri", "le membra"], correct: "i membri", suffix: "del gruppo devono esprimere il proprio parere." },
      { text: "Sui", options: ["cigli", "ciglia"], correct: "cigli", suffix: "dei fossi c'erano dei piccoli fiori azzurri." }
    ] %>

    <div class="space-y-4 text-base md:text-lg">
      <% sentences.each do |sentence| %>
        <div class="bg-purple-50 border-2 border-purple-200 rounded-xl px-4 py-3">
          <p class="text-gray-700">
            • <%= sentence[:text] %>
            <% sentence[:options].each do |option| %>
              <span class="inline-block mx-1 px-2 py-1 border-2 rounded cursor-pointer transition-all"
                    data-word-choice-target="word"
                    data-correct="<%= option == sentence[:correct] %>"
                    data-action="click->word-choice#toggle">
                <strong><%= option %></strong>
              </span>
              <% if option != sentence[:options].last %>
                <span class="text-purple-500 font-bold">/</span>
              <% end %>
            <% end %>
            <%= sentence[:suffix] if sentence[:suffix] %>
            <% unless sentence[:suffix] %>
              della città.
            <% end %>
          </p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Exercise 3: Invariable nouns -->
  <div class="mb-6 bg-white rounded-2xl border-4 border-green-200 shadow-2xl p-4 md:p-6" data-controller="fill-blanks word-highlighter" data-word-highlighter-multi-color-value="false">
    <h2 class="text-lg md:text-xl font-bold text-green-700 mb-3 flex items-start gap-2">
      <span class="bg-green-600 text-white rounded-full w-8 h-8 md:w-10 md:h-10 inline-flex items-center justify-center flex-shrink-0">3</span>
      <span>Volgi al <span class="text-green-600 font-bold underline">plurale</span> solo i nomi che cambiano passando al plurale e sottolinea i nomi che restano: sono <span class="text-green-600 font-bold underline">nomi invariabili<span class="inline-block w-6 h-6 bg-green-300 rounded ml-1 align-middle cursor-pointer transition transform hover:scale-110" data-word-highlighter-target="colorBox" data-color="green" data-action="click->word-highlighter#selectColor"></span></span>.</span>
    </h2>

    <% nouns = [
      { singular: "la penna", plural: "le penne", invariable: false },
      { singular: "il cinema", plural: "i cinema", invariable: true },
      { singular: "l'album", plural: "gli album", invariable: true },
      { singular: "l'inganno", plural: "gli inganni", invariable: false },
      { singular: "il pesce", plural: "i pesci", invariable: false },
      { singular: "la foto", plural: "le foto", invariable: true },
      { singular: "la virtù", plural: "le virtù", invariable: true },
      { singular: "il film", plural: "i film", invariable: true },
      { singular: "il martedì", plural: "i martedì", invariable: true },
      { singular: "l'analisi", plural: "le analisi", invariable: true },
      { singular: "la serie", plural: "le serie", invariable: true },
      { singular: "la spiaggia", plural: "le spiagge", invariable: false },
      { singular: "l'angolo", plural: "gli angoli", invariable: false },
      { singular: "la radio", plural: "le radio", invariable: true },
      { singular: "la goccia", plural: "le gocce", invariable: false },
      { singular: "la metropoli", plural: "le metropoli", invariable: true }
    ] %>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-3 text-base md:text-lg">
      <% nouns.each do |item| %>
        <div class="bg-green-50 border-2 border-green-200 rounded-xl px-3 py-3">
          <div class="flex items-center gap-2">
            <span class="text-gray-700 font-semibold"
                  <% if item[:invariable] %>
                  data-word-highlighter-target="word"
                  data-correct="true"
                  data-action="click->word-highlighter#toggleHighlight"
                  <% end %>>• <%= item[:singular] %></span>
            <span class="text-xl text-green-500">→</span>
            <input type="text"
                   class="border-b-2 border-green-500 bg-transparent px-2 py-1 focus:outline-none focus:border-green-700 flex-1 min-w-[120px]"
                   data-fill-blanks-target="input"
                   data-answer="<%= item[:plural] %>"
                   data-correct-answer="<%= item[:plural] %>"
                   placeholder="...............">
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="text-right text-sm text-gray-500 mb-6">
    Grammatica pp. <%= link_to "44", pagina_path("nvl5_gram_p044"), class: "text-red-600 hover:text-red-800 underline font-bold" %>, <%= link_to "45", pagina_path("nvl5_gram_p045"), class: "text-red-600 hover:text-red-800 underline font-bold" %>
  </div>

  <!-- Exercise Controls -->
  <div class="mt-6">
    <%= render 'shared/exercise_controls', color: 'cyan', current_page: 'nvl5_gram_p148' %>
  </div>
</div>
