<div class="max-w-6xl mx-auto bg-white p-3 md:p-6"
     data-controller="exercise-checker text-toggle font-controls"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <%= render 'shared/page_header', pagina: @pagina %>

  <div class="space-y-6">
    <!-- Box teoria -->
    <div class="p-4 bg-custom-blue-light rounded-2xl w-fit mx-auto">
      <p class="font-bold text-cyan-600 mb-3">Cilindro</p>
      <div class="flex flex-wrap items-start gap-6">
        <%= image_tag "nvi5_mat/p255/p255_01.jpg", class: "max-w-[300px] h-auto", alt: "Cilindro" %>
        <div>
          <p class="text-gray-700"><span class="font-bold text-cyan-600">Superficie laterale (Sℓ)</span><br>Sℓ = circonferenza di base × h</p>
          <p class="text-gray-700 mt-3"><span class="font-bold text-cyan-600">Superficie totale (St)</span><br>St = Sℓ + (area di base × 2)</p>
        </div>
      </div>
    </div>

    <!-- Esercizio 1 -->
    <div>
      <p class="font-bold text-gray-700 mb-4">
        <%= numero_esercizio_badge(1) %>
        Disegna lo sviluppo della seguente figura.
      </p>

      <div class="text-center">
        <%= image_tag "nvi5_mat/p255/output-1715938802255_151_522_577_323.png", class: "max-w-full h-auto mx-auto", alt: "Sviluppo cilindro" %>
      </div>
    </div>

    <!-- Esercizio 2 -->
    <div>
      <p class="font-bold text-gray-700 mb-4">
        <%= numero_esercizio_badge(2) %>
        Calcola la superficie totale di questi cilindri.
      </p>

      <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 xl:divide-x-2 divide-<%= @pagina.base_color %>-300">
        <!-- Cilindro 1 -->
        <div class="p-3">
          <%= image_tag "nvi5_mat/p255/p255_02.jpg", class: "max-w-[150px] h-auto mx-auto mb-3", alt: "Cilindro 1" %>
          <p class="text-gray-700 mb-2">AO = 12 cm</p>
          <p class="text-gray-700 mb-2">OO' = 18,5 cm</p>
          <div class="flex items-center justify-end gap-1">
            <span class="text-gray-700">St =</span>
            <input type="text" data-correct-answer="2299,68" class="w-20 border-b-2 border-dotted border-gray-400 text-right font-bold bg-transparent"> cm²
          </div>
        </div>

        <!-- Cilindro 2 -->
        <div class="p-3">
          <%= image_tag "nvi5_mat/p255/p255_03.jpg", class: "max-w-[150px] h-auto mx-auto mb-3", alt: "Cilindro 2" %>
          <p class="text-gray-700 mb-2">BC = 45 cm</p>
          <p class="text-gray-700 mb-2">AB = 30,2 cm</p>
          <div class="flex items-center justify-end gap-1">
            <span class="text-gray-700">St =</span>
            <input type="text" data-correct-answer="7450,74" class="w-20 border-b-2 border-dotted border-gray-400 text-right font-bold bg-transparent"> cm²
          </div>
        </div>

        <!-- Cilindro 3 -->
        <div class="p-3">
          <%= image_tag "nvi5_mat/p255/p255_06.jpg", class: "max-w-[150px] h-auto mx-auto mb-3", alt: "Cilindro 3" %>
          <p class="text-gray-700 mb-2">AB = BO' = 27 cm</p>
          <div class="flex items-center justify-end gap-1">
            <span class="text-gray-700">St =</span>
            <input type="text" data-correct-answer="9156,24" class="w-20 border-b-2 border-dotted border-gray-400 text-right font-bold bg-transparent"> cm²
          </div>
        </div>

        <!-- Cilindro 4 -->
        <div class="p-3">
          <%= image_tag "nvi5_mat/p255/p255_05.jpg", class: "max-w-[150px] h-auto mx-auto mb-3", alt: "Cilindro 4" %>
          <p class="text-gray-700 mb-2">BC = 46,8 cm</p>
          <p class="text-gray-700 mb-2">OO' = 16,9 cm</p>
          <div class="flex items-center justify-end gap-1">
            <span class="text-gray-700">St =</span>
            <input type="text" data-correct-answer="5930,39" class="w-20 border-b-2 border-dotted border-gray-400 text-right font-bold bg-transparent"> cm²
          </div>
        </div>
      </div>
    </div>

    <%= render 'shared/exercise_controls' %>
  </div>
</div>
