<div class="max-w-6xl mx-auto bg-white p-3 md:p-6"
     data-controller="exercise-checker text-toggle font-controls"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <%= render 'shared/page_header', pagina: @pagina %>

  <div class="space-y-6">
    <!-- Box teoria: Formule del trapezio -->
    <div class="p-4 bg-custom-blue-light rounded-2xl w-fit mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 items-center">
        <!-- Immagine trapezio -->
        <div class="flex justify-center">
          <%= image_tag "nvi5_mat/p246/p246_01.jpg", alt: "Trapezio", class: "max-w-sm" %>
        </div>

        <!-- Formule -->
        <div class="md:col-span-2">
          <div class="grid grid-cols-2 gap-4">
            <div>
              <p class="font-bold text-cyan-600 mb-1">Perimetro</p>
              <p class="text-gray-700">P = B + b + ℓ<sub>1</sub> + ℓ<sub>2</sub></p>
            </div>
            <div>
              <p class="font-bold text-cyan-600 mb-1">Area</p>
              <p class="text-gray-700">A = [(B + b) × h] : 2</p>
              <p class="text-gray-700 mt-2">Formule inverse:</p>
              <p class="text-gray-700">h = (A × 2) : (B + b)</p>
              <p class="text-gray-700">B = [(A × 2) : h] – b</p>
              <p class="text-gray-700">b = [(A × 2) : h] – B</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Esercizio 1 -->
    <div>
      <p class="font-bold text-gray-700 mb-4">
        <%= numero_esercizio_badge(1) %>
        Utilizza le formule dirette e inverse e completa.
      </p>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <!-- Trapezio isoscele 1 -->
        <div class="text-center space-y-2 p-3">
          <%= image_tag "nvi5_mat/p246/p246_02.jpg", alt: "Trapezio isoscele", class: "mx-auto max-w-[120px]" %>
          <div class="space-y-1">
            <p class="text-gray-700">AD = BC = 63,7 cm</p>
            <p class="text-gray-700">AB = 88,5 cm</p>
            <p class="text-gray-700">CD = 49,3 cm</p>
            <div class="flex items-center justify-center gap-1">
              <span class="text-gray-700">P =</span>
              <input type="text" data-correct-answer="265,2" class="w-20 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
              <span class="text-gray-700">cm</span>
            </div>
          </div>
        </div>

        <!-- Trapezio scaleno -->
        <div class="text-center space-y-2 p-3">
          <%= image_tag "nvi5_mat/p246/p246_03.jpg", alt: "Trapezio scaleno", class: "mx-auto max-w-[100px]" %>
          <div class="space-y-1">
            <p class="text-gray-700">AB = 25,8 dam</p>
            <p class="text-gray-700">CD = 18,6 dam</p>
            <p class="text-gray-700">BC = 24,1 dam</p>
            <p class="text-gray-700">AD = 29,6 dam</p>
            <div class="flex items-center justify-center gap-1">
              <span class="text-gray-700">P =</span>
              <input type="text" data-correct-answer="98,1" class="w-20 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
              <span class="text-gray-700">dam</span>
            </div>
          </div>
        </div>

        <!-- Trapezio scaleno 2 -->
        <div class="text-center space-y-2 p-3">
          <%= image_tag "nvi5_mat/p246/p246_04.jpg", alt: "Trapezio scaleno", class: "mx-auto max-w-[100px]" %>
          <div class="space-y-1">
            <p class="text-gray-700">AB = 30,5 m</p>
            <p class="text-gray-700">CD = 20,6 m</p>
            <p class="text-gray-700">BC = 34,2 m</p>
            <p class="text-gray-700">AD = 27,8 m</p>
            <div class="flex items-center justify-center gap-1">
              <span class="text-gray-700">P =</span>
              <input type="text" data-correct-answer="113,1" class="w-20 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
              <span class="text-gray-700">m</span>
            </div>
          </div>
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-4">
        <!-- Trapezio con area -->
        <div class="text-center space-y-2 p-3">
          <%= image_tag "nvi5_mat/p246/p246_05.jpg", alt: "Trapezio", class: "mx-auto max-w-[100px]" %>
          <div class="space-y-1">
            <p class="text-gray-700">A = 436,46 dam²</p>
            <p class="text-gray-700">AB = 35,4 dam</p>
            <p class="text-gray-700">CD = 20,2 dam</p>
            <div class="flex items-center justify-center gap-1">
              <span class="text-gray-700">h =</span>
              <input type="text" data-correct-answer="15,7" class="w-16 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
              <span class="text-gray-700">dam</span>
            </div>
          </div>
        </div>

        <!-- Trapezio rettangolo -->
        <div class="text-center space-y-2 p-3">
          <%= image_tag "nvi5_mat/p246/p246_06.jpg", alt: "Trapezio rettangolo", class: "mx-auto max-w-[100px]" %>
          <div class="space-y-1">
            <p class="text-gray-700">AB = 45,8 cm</p>
            <p class="text-gray-700">CD = 30,6 cm</p>
            <p class="text-gray-700">BC = 27,4 cm</p>
            <div class="flex items-center justify-center gap-1">
              <span class="text-gray-700">A =</span>
              <input type="text" data-correct-answer="1046,68" class="w-24 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
              <span class="text-gray-700">cm²</span>
            </div>
          </div>
        </div>

        <!-- Trapezio formula inversa -->
        <div class="text-center space-y-2 p-3">
          <%= image_tag "nvi5_mat/p246/p246_07.jpg", alt: "Trapezio", class: "mx-auto max-w-[100px]" %>
          <div class="space-y-1">
            <p class="text-gray-700">A = 653,055 dm²</p>
            <p class="text-gray-700">CD = 26,5 dm</p>
            <p class="text-gray-700">h = 19,7 dm</p>
            <div class="flex items-center justify-center gap-1">
              <span class="text-gray-700">AB =</span>
              <input type="text" data-correct-answer="39,8" class="w-16 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
              <span class="text-gray-700">dm</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Esercizio 2 -->
    <div>
      <p class="font-bold text-gray-700 mb-4">
        <%= numero_esercizio_badge(2) %>
        Completa la tabella. Utilizza anche le formule inverse.
      </p>

      <div class="overflow-x-auto flex justify-center">
        <table class="border-collapse border border-cyan-400">
          <thead>
            <tr>
              <th class="p-2 border border-cyan-400 bg-custom-blue-light text-center text-gray-800 font-bold">Base maggiore</th>
              <th class="p-2 border border-cyan-400 bg-custom-blue-light text-center text-gray-800 font-bold">Base minore</th>
              <th class="p-2 border border-cyan-400 bg-custom-blue-light text-center text-gray-800 font-bold">Altezza</th>
              <th class="p-2 border border-cyan-400 bg-custom-blue-light text-center text-gray-800 font-bold">Lati</th>
              <th class="p-2 border border-cyan-400 bg-custom-blue-light text-center text-gray-800 font-bold">Perimetro</th>
              <th class="p-2 border border-cyan-400 bg-custom-blue-light text-center text-gray-800 font-bold">Area</th>
            </tr>
          </thead>
          <tbody>
            <!-- Riga 1 -->
            <tr>
              <td class="p-2 border border-cyan-400 bg-white text-center">36,5 cm</td>
              <td class="p-2 border border-cyan-400 bg-white text-center">27 cm</td>
              <td class="p-2 border border-cyan-400 bg-white text-center">31,2 cm</td>
              <td class="p-2 border border-cyan-400 bg-white text-center">33 cm</td>
              <td class="p-2 border border-cyan-400 bg-white text-center">
                <input type="text" data-correct-answer="129,5" class="w-16 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent"> cm
              </td>
              <td class="p-2 border border-cyan-400 bg-white text-center">
                <input type="text" data-correct-answer="990,6" class="w-16 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent"> cm²
              </td>
            </tr>
            <!-- Riga 2 -->
            <tr>
              <td class="p-2 border border-cyan-400 bg-white text-center">68 dm</td>
              <td class="p-2 border border-cyan-400 bg-white text-center">54,9 dm</td>
              <td class="p-2 border border-cyan-400 bg-white text-center">
                <input type="text" data-correct-answer="45" class="w-16 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent"> dm
              </td>
              <td class="p-2 border border-cyan-400 bg-white text-center">50,7 dm<br>60,8 dm</td>
              <td class="p-2 border border-cyan-400 bg-white text-center">
                <input type="text" data-correct-answer="234,4" class="w-16 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent"> dm
              </td>
              <td class="p-2 border border-cyan-400 bg-white text-center font-bold text-cyan-600"><span class="whitespace-nowrap">2 765,25</span> dm²</td>
            </tr>
            <!-- Riga 3 -->
            <tr>
              <td class="p-2 border border-cyan-400 bg-white text-center">23 m</td>
              <td class="p-2 border border-cyan-400 bg-white text-center">17,6 m</td>
              <td class="p-2 border border-cyan-400 bg-white text-center">2,05 m</td>
              <td class="p-2 border border-cyan-400 bg-white text-center">3,1 m<br>2,88 m</td>
              <td class="p-2 border border-cyan-400 bg-white text-center">
                <input type="text" data-correct-answer="46,58" class="w-16 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent"> m
              </td>
              <td class="p-2 border border-cyan-400 bg-white text-center">
                <input type="text" data-correct-answer="41,615" class="w-16 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent"> m²
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <%= render 'shared/exercise_controls' %>
  </div>
</div>
