<div class="max-w-6xl mx-auto bg-white dark:bg-gray-900 p-3 md:p-6 transition-colors duration-300"
     data-controller="exercise-checker text-toggle font-controls"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <%= render 'shared/page_header', pagina: @pagina %>

  <div class="space-y-6">

    <!-- Box formule area -->
    <div class="p-4 bg-custom-blue dark:bg-cyan-900 rounded-2xl">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <!-- Colonna sinistra: unità di misura -->
        <div class="space-y-1 text-gray-700 dark:text-gray-200">
          <p>unità di misura di superficie = <span class="font-bold">m²</span></p>
          <p>1 m² = 100 dm²</p>
          <p>= 10 000 cm²</p>
          <p>= 1 000 000 mm²</p>
        </div>

        <!-- Colonna destra: formule -->
        <div class="space-y-1 text-gray-700 dark:text-gray-200">
          <p><span class="font-bold text-cyan-600 dark:text-cyan-400">Rombo</span> A = (D × d) : 2</p>
          <p><span class="font-bold text-cyan-600 dark:text-cyan-400">Trapezio</span> A = [(B + b) × h] : 2</p>
          <p><span class="font-bold text-cyan-600 dark:text-cyan-400">Quadrato</span> A = <span class="italic">ℓ</span> × <span class="italic">ℓ</span></p>
          <p><span class="font-bold text-cyan-600 dark:text-cyan-400">Triangolo</span> A = (b × h) : 2</p>
          <p><span class="font-bold text-cyan-600 dark:text-cyan-400">Rettangolo</span> e <span class="font-bold text-cyan-600 dark:text-cyan-400">Parallelogramma</span> A = b × h</p>
        </div>
      </div>
    </div>

    <!-- Esercizio 1 IMPARARE TUTTI -->
    <div class="p-5 bg-white dark:bg-gray-800 rounded-2xl border-3 border-yellow-400 dark:border-yellow-500 space-y-4">
      <p class="font-bold text-gray-700 dark:text-gray-200">
        <%= imparare_tutti_badge(1) %>
        Calcola l'area delle seguenti figure, poi colora quella con la superficie maggiore.
      </p>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <!-- Parallelogramma -->
        <div class="text-center space-y-2">
          <%= image_tag "nvi4_mat/p258/p258_01.jpg", class: "max-w-full h-auto mx-auto dark:bg-white dark:rounded-lg dark:p-1", alt: "Parallelogramma h=2m, b=4,6m" %>
          <div class="flex items-center justify-center gap-1 text-gray-700 dark:text-gray-200">
            <span>A =</span>
            <input type="text" class="w-16 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white" placeholder="...">
            <span>m²</span>
          </div>
        </div>

        <!-- Rombo -->
        <div class="text-center space-y-2">
          <%= image_tag "nvi4_mat/p258/p258_02.jpg", class: "max-w-full h-auto mx-auto dark:bg-white dark:rounded-lg dark:p-1", alt: "Rombo l=3,9m" %>
          <div class="flex items-center justify-center gap-1 text-gray-700 dark:text-gray-200">
            <span>A =</span>
            <input type="text" class="w-16 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white" placeholder="...">
            <span>m²</span>
          </div>
        </div>

        <!-- Trapezio -->
        <div class="text-center space-y-2">
          <%= image_tag "nvi4_mat/p258/p258_03.jpg", class: "max-w-full h-auto mx-auto dark:bg-white dark:rounded-lg dark:p-1", alt: "Trapezio b=3,3m, h=2m, B=5,5m" %>
          <div class="flex items-center justify-center gap-1 text-gray-700 dark:text-gray-200">
            <span>A =</span>
            <input type="text" class="w-16 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white" placeholder="...">
            <span>m²</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Esercizio 2 -->
    <div class="space-y-4">
      <p class="font-bold text-gray-700 dark:text-gray-200">
        <%= numero_esercizio_badge(2) %>
        Esegui le equivalenze.
      </p>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div class="space-y-2 text-gray-700 dark:text-gray-200">
          <div class="flex items-center gap-2">
            <span>74 dam² =</span>
            <input type="text" class="w-20 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white" placeholder="...">
            <span>m²</span>
          </div>
          <div class="flex items-center gap-2">
            <span>300 m² =</span>
            <input type="text" class="w-20 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white" placeholder="...">
            <span>hm²</span>
          </div>
          <div class="flex items-center gap-2">
            <span>800 hm² =</span>
            <input type="text" class="w-20 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white" placeholder="...">
            <span>km²</span>
          </div>
        </div>

        <div class="space-y-2 text-gray-700 dark:text-gray-200">
          <div class="flex items-center gap-2">
            <span>2 000 mm² =</span>
            <input type="text" class="w-20 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white" placeholder="...">
            <span>cm²</span>
          </div>
          <div class="flex items-center gap-2">
            <span>0,0140 m² =</span>
            <input type="text" class="w-20 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white" placeholder="...">
            <span>cm²</span>
          </div>
          <div class="flex items-center gap-2">
            <span>0,50 dm² =</span>
            <input type="text" class="w-20 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white" placeholder="...">
            <span>cm²</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Esercizio 3 -->
    <div class="space-y-4">
      <p class="font-bold text-gray-700 dark:text-gray-200">
        <%= numero_esercizio_badge(3) %>
        Calcola e completa.
      </p>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <!-- Parallelogramma -->
        <div class="overflow-x-auto">
          <p class="font-bold text-cyan-600 dark:text-cyan-400 text-center mb-2">Parallelogramma</p>
          <table class="w-full border-collapse border border-cyan-400 dark:border-cyan-600">
            <thead>
              <tr>
                <th class="p-2 border border-cyan-400 dark:border-cyan-600 bg-cyan-100 dark:bg-cyan-800 text-gray-800 dark:text-gray-200">b</th>
                <th class="p-2 border border-cyan-400 dark:border-cyan-600 bg-cyan-100 dark:bg-cyan-800 text-gray-800 dark:text-gray-200">h</th>
                <th class="p-2 border border-cyan-400 dark:border-cyan-600 bg-cyan-100 dark:bg-cyan-800 text-gray-800 dark:text-gray-200">A</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td class="p-2 border border-cyan-400 dark:border-cyan-600 text-center bg-white dark:bg-gray-700 text-gray-700 dark:text-gray-200">6,5 cm</td>
