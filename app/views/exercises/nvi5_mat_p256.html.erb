<div class="max-w-6xl mx-auto bg-white p-3 md:p-6"
     data-controller="exercise-checker text-toggle font-controls"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <%= render 'shared/page_header', pagina: @pagina %>

  <div class="space-y-6">
    <!-- Tabella misure di volume -->
    <div class="p-4 md:p-6 bg-custom-blue-light rounded-3xl">
      <div class="overflow-x-auto">
        <table class="w-full border-collapse border border-cyan-400">
          <thead>
            <tr>
              <th colspan="9" class="p-2 border border-cyan-400 bg-white text-center text-cyan-600 font-bold">MULTIPLI</th>
              <th colspan="3" class="p-2 border border-cyan-400 bg-gray-200 text-center text-cyan-600 font-bold">UNITÀ FONDAMENTALE</th>
              <th colspan="9" class="p-2 border border-cyan-400 bg-white text-center text-cyan-600 font-bold">SOTTOMULTIPLI</th>
            </tr>
            <tr>
              <td colspan="3" class="p-1 border border-cyan-400 bg-white text-center">chilometro cubo<br><span class="font-bold">km³</span></td>
              <td colspan="3" class="p-1 border border-cyan-400 bg-white text-center">ettometro cubo<br><span class="font-bold">hm³</span></td>
              <td colspan="3" class="p-1 border border-cyan-400 bg-white text-center">decametro cubo<br><span class="font-bold">dam³</span></td>
              <td colspan="3" class="p-1 border border-cyan-400 bg-gray-200 text-center"><span class="font-bold">metro cubo</span><br><span class="font-bold text-cyan-600">m³</span></td>
              <td colspan="3" class="p-1 border border-cyan-400 bg-white text-center">decimetro cubo<br><span class="font-bold">dm³</span></td>
              <td colspan="3" class="p-1 border border-cyan-400 bg-white text-center">centimetro cubo<br><span class="font-bold">cm³</span></td>
              <td colspan="3" class="p-1 border border-cyan-400 bg-white text-center">millimetro cubo<br><span class="font-bold">mm³</span></td>
            </tr>
            <tr>
              <td class="p-1 border border-cyan-400 bg-white text-center">h</td>
              <td class="p-1 border border-cyan-400 bg-white text-center">da</td>
              <td class="p-1 border border-cyan-400 bg-white text-center">u</td>
              <td class="p-1 border border-cyan-400 bg-white text-center">h</td>
              <td class="p-1 border border-cyan-400 bg-white text-center">da</td>
              <td class="p-1 border border-cyan-400 bg-white text-center">u</td>
              <td class="p-1 border border-cyan-400 bg-white text-center">h</td>
              <td class="p-1 border border-cyan-400 bg-white text-center">da</td>
              <td class="p-1 border border-cyan-400 bg-white text-center">u</td>
              <td class="p-1 border border-cyan-400 bg-gray-200 text-center font-bold">h</td>
              <td class="p-1 border border-cyan-400 bg-gray-200 text-center font-bold">da</td>
              <td class="p-1 border border-cyan-400 bg-gray-200 text-center font-bold">u</td>
              <td class="p-1 border border-cyan-400 bg-white text-center">h</td>
              <td class="p-1 border border-cyan-400 bg-white text-center">da</td>
              <td class="p-1 border border-cyan-400 bg-white text-center">u</td>
              <td class="p-1 border border-cyan-400 bg-white text-center">h</td>
              <td class="p-1 border border-cyan-400 bg-white text-center">da</td>
              <td class="p-1 border border-cyan-400 bg-white text-center">u</td>
              <td class="p-1 border border-cyan-400 bg-white text-center">h</td>
              <td class="p-1 border border-cyan-400 bg-white text-center">da</td>
              <td class="p-1 border border-cyan-400 bg-white text-center">u</td>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td colspan="3" class="p-1 border border-cyan-400 bg-white text-center"><span class="whitespace-nowrap">1 000 000 000</span> m³</td>
              <td colspan="3" class="p-1 border border-cyan-400 bg-white text-center"><span class="whitespace-nowrap">1 000 000</span> m³</td>
              <td colspan="3" class="p-1 border border-cyan-400 bg-white text-center"><span class="whitespace-nowrap">1 000</span> m³</td>
              <td colspan="3" class="p-1 border border-cyan-400 bg-gray-200 text-center font-bold text-cyan-600">1 m³</td>
              <td colspan="3" class="p-1 border border-cyan-400 bg-white text-center">0,001 m³</td>
              <td colspan="3" class="p-1 border border-cyan-400 bg-white text-center">0,000001 m³</td>
              <td colspan="3" class="p-1 border border-cyan-400 bg-white text-center">0,000000001 m³</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Esercizio 1: IMPARARE TUTTI -->
    <div class="p-4 bg-white rounded-2xl border-3 border-yellow-400">
      <p class="font-bold text-gray-700 mb-4">
        <%= imparare_tutti_badge(1) %>
        Completa.
      </p>

      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-3 text-gray-700">
        <p>1 m³ = <span class="whitespace-nowrap">1 000</span> dm³</p>
        <div class="flex items-center gap-2">
          <span>1 hm³ = <span class="whitespace-nowrap">1 000 000</span></span>
          <input type="text" data-correct-answer="m³" class="w-16 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
        </div>
        <div class="flex items-center gap-2">
          <span>2 dm³ = <span class="whitespace-nowrap">2 000</span></span>
          <input type="text" data-correct-answer="cm³" class="w-16 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
        </div>
        <div class="flex items-center gap-2">
          <span>1 cm³ =</span>
          <input type="text" data-correct-answer="1000" class="w-16 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
          <span>mm³</span>
        </div>
        <div class="flex items-center gap-2">
          <span><span class="whitespace-nowrap">1 000 000</span> cm³ =</span>
          <input type="text" data-correct-answer="1" class="w-12 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
          <span>m³</span>
        </div>
        <div class="flex items-center gap-2">
          <span>1 km³ =</span>
          <input type="text" data-correct-answer="1000" class="w-16 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
          <span>hm³</span>
        </div>
        <div class="flex items-center gap-2">
          <span>1 dm³ =</span>
          <input type="text" data-correct-answer="0,001" class="w-16 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
          <span>m³</span>
        </div>
        <div class="flex items-center gap-2">
          <span><span class="whitespace-nowrap">1 000</span> dam³ =</span>
          <input type="text" data-correct-answer="1" class="w-12 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
          <span>hm³</span>
        </div>
        <div class="flex items-center gap-2">
          <span><span class="whitespace-nowrap">3 000</span> cm³ =</span>
          <input type="text" data-correct-answer="3" class="w-12 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
          <span>dm³</span>
        </div>
      </div>
    </div>

    <!-- Esercizio 2 -->
    <div>
      <p class="font-bold text-gray-700 mb-4">
        <%= numero_esercizio_badge(2) %>
        Conta da quanti cubetti sono formati i seguenti solidi. Il numero totale dei cubetti corrisponde al volume del solido considerato.
      </p>

      <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 xl:divide-x-2 divide-<%= @pagina.base_color %>-300">
        <div class="p-3 text-center">
          <%= image_tag "nvi5_mat/p256/p256_01.jpg", class: "max-w-full h-auto mx-auto mb-3", alt: "Solido 1" %>
          <div class="flex items-center justify-center gap-2">
            <span class="text-gray-700">Volume =</span>
            <input type="text" data-correct-answer="8" class="w-12 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
            <span class="text-gray-700">cubetti</span>
          </div>
        </div>

        <div class="p-3 text-center">
          <%= image_tag "nvi5_mat/p256/p256_02.jpg", class: "max-w-full h-auto mx-auto mb-3", alt: "Solido 2" %>
          <div class="flex items-center justify-center gap-2">
            <span class="text-gray-700">Volume =</span>
            <input type="text" data-correct-answer="12" class="w-12 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
            <span class="text-gray-700">cubetti</span>
          </div>
        </div>

        <div class="p-3 text-center">
          <%= image_tag "nvi5_mat/p256/p256_03.jpg", class: "max-w-full h-auto mx-auto mb-3", alt: "Solido 3" %>
          <div class="flex items-center justify-center gap-2">
            <span class="text-gray-700">Volume =</span>
            <input type="text" data-correct-answer="27" class="w-12 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
            <span class="text-gray-700">cubetti</span>
          </div>
        </div>

        <div class="p-3 text-center">
          <%= image_tag "nvi5_mat/p256/p256_04.jpg", class: "max-w-full h-auto mx-auto mb-3", alt: "Solido 4" %>
          <div class="flex items-center justify-center gap-2">
            <span class="text-gray-700">Volume =</span>
            <input type="text" data-correct-answer="24" class="w-12 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
            <span class="text-gray-700">cubetti</span>
          </div>
        </div>
      </div>
    </div>

    <%= render 'shared/exercise_controls' %>
  </div>
</div>
