<div class="max-w-6xl mx-auto bg-white p-3 md:p-6"
     data-controller="exercise-checker text-toggle font-controls"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <%= render 'shared/page_header', pagina: @pagina %>

  <div class="space-y-6">
    <!-- Tabella misure di volume -->
    <div class="overflow-x-auto">
      <table class="w-full border-collapse border border-cyan-400">
        <thead>
          <tr>
            <th colspan="9" class="p-2 border border-cyan-400 bg-custom-blue-light text-center text-gray-800">MULTIPLI</th>
            <th colspan="3" class="p-2 border border-cyan-400 bg-cyan-200 text-center text-gray-800 font-bold">UNITÀ FONDAMENTALE</th>
            <th colspan="9" class="p-2 border border-cyan-400 bg-custom-blue-light text-center text-gray-800">SOTTOMULTIPLI</th>
          </tr>
          <tr>
            <th colspan="3" class="p-1 border border-cyan-400 bg-custom-blue-light text-center text-gray-700">chilometro cubo<br><strong>km³</strong></th>
            <th colspan="3" class="p-1 border border-cyan-400 bg-custom-blue-light text-center text-gray-700">ettometro cubo<br><strong>hm³</strong></th>
            <th colspan="3" class="p-1 border border-cyan-400 bg-custom-blue-light text-center text-gray-700">decametro cubo<br><strong>dam³</strong></th>
            <th colspan="3" class="p-1 border border-cyan-400 bg-custom-blue-light text-center text-gray-800 font-bold">metro cubo<br><strong>m³</strong></th>
            <th colspan="3" class="p-1 border border-cyan-400 bg-custom-blue-light text-center text-gray-700">decimetro cubo<br><strong>dm³</strong></th>
            <th colspan="3" class="p-1 border border-cyan-400 bg-custom-blue-light text-center text-gray-700">centimetro cubo<br><strong>cm³</strong></th>
            <th colspan="3" class="p-1 border border-cyan-400 bg-custom-blue-light text-center text-gray-700">millimetro cubo<br><strong>mm³</strong></th>
          </tr>
          <tr>
            <th class="p-1 border border-cyan-400 bg-white text-center text-gray-600">h</th>
            <th class="p-1 border border-cyan-400 bg-white text-center text-gray-600">da</th>
            <th class="p-1 border border-cyan-400 bg-white text-center text-gray-600">u</th>
            <th class="p-1 border border-cyan-400 bg-white text-center text-gray-600">h</th>
            <th class="p-1 border border-cyan-400 bg-white text-center text-gray-600">da</th>
            <th class="p-1 border border-cyan-400 bg-white text-center text-gray-600">u</th>
            <th class="p-1 border border-cyan-400 bg-white text-center text-gray-600">h</th>
            <th class="p-1 border border-cyan-400 bg-white text-center text-gray-600">da</th>
            <th class="p-1 border border-cyan-400 bg-white text-center text-gray-600">u</th>
            <th class="p-1 border border-cyan-400 bg-custom-blue-light text-center text-gray-800 font-bold">h</th>
            <th class="p-1 border border-cyan-400 bg-custom-blue-light text-center text-gray-800 font-bold">da</th>
            <th class="p-1 border border-cyan-400 bg-custom-blue-light text-center text-gray-800 font-bold">u</th>
            <th class="p-1 border border-cyan-400 bg-white text-center text-gray-600">h</th>
            <th class="p-1 border border-cyan-400 bg-white text-center text-gray-600">da</th>
            <th class="p-1 border border-cyan-400 bg-white text-center text-gray-600">u</th>
            <th class="p-1 border border-cyan-400 bg-white text-center text-gray-600">h</th>
            <th class="p-1 border border-cyan-400 bg-white text-center text-gray-600">da</th>
            <th class="p-1 border border-cyan-400 bg-white text-center text-gray-600">u</th>
            <th class="p-1 border border-cyan-400 bg-white text-center text-gray-600">h</th>
            <th class="p-1 border border-cyan-400 bg-white text-center text-gray-600">da</th>
            <th class="p-1 border border-cyan-400 bg-white text-center text-gray-600">u</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td colspan="3" class="p-1 border border-cyan-400 bg-white text-center text-gray-600">1 000 000 000 m³</td>
            <td colspan="3" class="p-1 border border-cyan-400 bg-white text-center text-gray-600">1 000 000 m³</td>
            <td colspan="3" class="p-1 border border-cyan-400 bg-white text-center text-gray-600">1 000 m³</td>
            <td colspan="3" class="p-1 border border-cyan-400 bg-custom-blue-light text-center text-gray-800 font-bold">1 m³</td>
            <td colspan="3" class="p-1 border border-cyan-400 bg-white text-center text-gray-600">0,001 m³</td>
            <td colspan="3" class="p-1 border border-cyan-400 bg-white text-center text-gray-600">0,000001 m³</td>
            <td colspan="3" class="p-1 border border-cyan-400 bg-white text-center text-gray-600">0,000000001 m³</td>
          </tr>
        </tbody>
      </table>
    </div>

    <!-- Esercizio 1: IMPARARE TUTTI -->
    <div class="p-4 bg-white rounded-2xl border-3 border-yellow-400">
      <p class="font-bold text-gray-700 mb-4">
        <%= imparare_tutti_badge(1) %>
        Completa.
      </p>

      <div class="space-y-3 text-gray-700">
        <p>1 m³ = 1 000 dm³</p>
        <div class="flex items-center gap-2 flex-wrap">
          <span>1 hm³ = 1 000 000</span>
          <input type="text" data-correct-answer="m³" class="w-16 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
        </div>
        <div class="flex items-center gap-2 flex-wrap">
          <span>2 dm³ = 2 000</span>
          <input type="text" data-correct-answer="cm³" class="w-16 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
        </div>
        <div class="flex items-center gap-2 flex-wrap">
          <span>1 cm³ =</span>
          <input type="text" data-correct-answer="1000" class="w-16 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
          <span>mm³</span>
        </div>
        <div class="flex items-center gap-2 flex-wrap">
          <span>1 000 000 cm³ =</span>
          <input type="text" data-correct-answer="1" class="w-12 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
          <span>m³</span>
        </div>
        <div class="flex items-center gap-2 flex-wrap">
          <span>1 km³ =</span>
          <input type="text" data-correct-answer="1000" class="w-16 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
          <span>hm³</span>
        </div>
        <div class="flex items-center gap-2 flex-wrap">
          <span>1 dm³ =</span>
          <input type="text" data-correct-answer="0,001" class="w-16 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
          <span>m³</span>
        </div>
        <div class="flex items-center gap-2 flex-wrap">
          <span>1 000 dam³ =</span>
          <input type="text" data-correct-answer="1" class="w-12 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
          <span>hm³</span>
        </div>
        <div class="flex items-center gap-2 flex-wrap">
          <span>3 000 cm³ =</span>
          <input type="text" data-correct-answer="3" class="w-12 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
          <span>dm³</span>
        </div>
      </div>
    </div>

    <!-- Esercizio 2 -->
    <div>
      <p class="font-bold text-gray-700 mb-4">
        <%= numero_esercizio_badge(2) %>
        Conta da quanti cubetti sono formati i seguenti solidi. Il numero totale dei cubetti corrisponde al volume del solido considerato.
      </p>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="p-3 border border-gray-200 rounded-lg text-center">
          <%= image_tag "nvi5_mat/p256/p256_01.jpg", class: "max-w-full h-auto mx-auto mb-3", alt: "Solido 1" %>
          <div class="flex items-center justify-center gap-2">
            <span class="text-gray-700">Volume =</span>
            <input type="text" data-correct-answer="8" class="w-12 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
            <span class="text-gray-700">cubetti</span>
          </div>
        </div>

        <div class="p-3 border border-gray-200 rounded-lg text-center">
          <%= image_tag "nvi5_mat/p256/p256_02.jpg", class: "max-w-full h-auto mx-auto mb-3", alt: "Solido 2" %>
          <div class="flex items-center justify-center gap-2">
            <span class="text-gray-700">Volume =</span>
            <input type="text" data-correct-answer="12" class="w-12 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
            <span class="text-gray-700">cubetti</span>
          </div>
        </div>

        <div class="p-3 border border-gray-200 rounded-lg text-center">
          <%= image_tag "nvi5_mat/p256/p256_03.jpg", class: "max-w-full h-auto mx-auto mb-3", alt: "Solido 3" %>
          <div class="flex items-center justify-center gap-2">
            <span class="text-gray-700">Volume =</span>
            <input type="text" data-correct-answer="27" class="w-12 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
            <span class="text-gray-700">cubetti</span>
          </div>
        </div>

        <div class="p-3 border border-gray-200 rounded-lg text-center">
          <%= image_tag "nvi5_mat/p256/p256_04.jpg", class: "max-w-full h-auto mx-auto mb-3", alt: "Solido 4" %>
          <div class="flex items-center justify-center gap-2">
            <span class="text-gray-700">Volume =</span>
            <input type="text" data-correct-answer="24" class="w-12 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
            <span class="text-gray-700">cubetti</span>
          </div>
        </div>
      </div>
    </div>

    <%= render 'shared/exercise_controls' %>
  </div>
</div>
