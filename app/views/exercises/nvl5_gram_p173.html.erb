<div class="max-w-6xl mx-auto bg-white dark:bg-gray-900 text-black dark:text-white p-3 md:p-6 transition-colors duration-300"
     data-controller="exercise-checker text-toggle font-controls"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <%= render 'shared/page_header', pagina: @pagina %>

  <!-- Esercizio 1: Coniuga alla forma riflessiva -->
  <div class="mb-6 bg-white dark:bg-gray-800 rounded-2xl border-4 border-yellow-200 dark:border-yellow-700 shadow-2xl p-4 md:p-6" data-controller="fill-blanks">
    <h2 class="font-bold text-gray-700 dark:text-gray-200 mb-4">
      <span class="bg-yellow-600 text-white rounded-full w-8 h-8 md:w-10 md:h-10 inline-flex items-center justify-center mr-2">1</span>
      <span class="bg-yellow-400 dark:bg-yellow-500 text-blue-800 dark:text-blue-900 px-2 py-1 rounded font-bold mr-2">IMPARARE TUTTI</span>
      Coniuga alla <strong class="underline text-blue-600 dark:text-blue-400">forma riflessiva</strong>, come nell'esempio.
    </h2>

    <div class="space-y-3">
      <!-- Esempio completato -->
      <div class="bg-blue-50 dark:bg-blue-900/30 border-2 border-blue-300 dark:border-blue-700 rounded-xl p-3">
        <span class="text-gray-700 dark:text-gray-200">• Io <span class="bg-blue-200 dark:bg-blue-800 px-2 py-1 rounded font-bold">mi</span> lavo.</span>
      </div>

      <!-- Esercizio 1 -->
      <div class="bg-gray-50 dark:bg-gray-800 border-2 border-gray-200 dark:border-gray-700 rounded-xl p-3">
        <span class="text-gray-700 dark:text-gray-200">• Tu</span>
        <input type="text" class="border-b-2 border-yellow-400 dark:border-yellow-600 bg-transparent dark:text-white px-2 py-1 focus:outline-none focus:border-yellow-600 dark:focus:border-yellow-400 w-32" data-fill-blanks-target="input" data-correct-answer="ti" placeholder="">
        <span class="text-gray-700 dark:text-gray-200">lavi.</span>
      </div>

      <!-- Esercizio 2 -->
      <div class="bg-gray-50 dark:bg-gray-800 border-2 border-gray-200 dark:border-gray-700 rounded-xl p-3">
        <span class="text-gray-700 dark:text-gray-200">• Egli</span>
        <input type="text" class="border-b-2 border-yellow-400 dark:border-yellow-600 bg-transparent dark:text-white px-2 py-1 focus:outline-none focus:border-yellow-600 dark:focus:border-yellow-400 w-32" data-fill-blanks-target="input" data-correct-answer="si" placeholder="">
        <span class="text-gray-700 dark:text-gray-200">lava.</span>
      </div>

      <!-- Esercizio 3 -->
      <div class="bg-gray-50 dark:bg-gray-800 border-2 border-gray-200 dark:border-gray-700 rounded-xl p-3">
        <span class="text-gray-700 dark:text-gray-200">• Noi</span>
        <input type="text" class="border-b-2 border-yellow-400 dark:border-yellow-600 bg-transparent dark:text-white px-2 py-1 focus:outline-none focus:border-yellow-600 dark:focus:border-yellow-400 w-32" data-fill-blanks-target="input" data-correct-answer="ci" placeholder="">
        <span class="text-gray-700 dark:text-gray-200">laviamo.</span>
      </div>

      <!-- Esercizio 4 -->
      <div class="bg-gray-50 dark:bg-gray-800 border-2 border-gray-200 dark:border-gray-700 rounded-xl p-3">
        <span class="text-gray-700 dark:text-gray-200">• Voi</span>
        <input type="text" class="border-b-2 border-yellow-400 dark:border-yellow-600 bg-transparent dark:text-white px-2 py-1 focus:outline-none focus:border-yellow-600 dark:focus:border-yellow-400 w-32" data-fill-blanks-target="input" data-correct-answer="vi" placeholder="">
        <span class="text-gray-700 dark:text-gray-200">lavate.</span>
      </div>

      <!-- Esercizio 5 -->
      <div class="bg-gray-50 dark:bg-gray-800 border-2 border-gray-200 dark:border-gray-700 rounded-xl p-3">
        <span class="text-gray-700 dark:text-gray-200">• Essi</span>
        <input type="text" class="border-b-2 border-yellow-400 dark:border-yellow-600 bg-transparent dark:text-white px-2 py-1 focus:outline-none focus:border-yellow-600 dark:focus:border-yellow-400 w-32" data-fill-blanks-target="input" data-correct-answer="si" placeholder="">
        <span class="text-gray-700 dark:text-gray-200">lavano.</span>
      </div>
    </div>
  </div>

  <!-- Esercizio 2: Completa le frasi -->
  <div class="mb-6 bg-white dark:bg-gray-800 rounded-2xl border-4 border-blue-200 dark:border-blue-700 shadow-2xl p-4 md:p-6" data-controller="fill-blanks">
    <h2 class="font-bold text-gray-700 dark:text-gray-200 mb-4">
      <span class="bg-blue-600 text-white rounded-full w-8 h-8 md:w-10 md:h-10 inline-flex items-center justify-center mr-2">2</span>
      Completa le frasi coniugando i seguenti verbi alla <strong class="underline text-blue-600 dark:text-blue-400">forma riflessiva</strong>.
    </h2>

    <div class="mb-4">
      <span class="text-gray-700 dark:text-gray-200 font-semibold">specchiarsi • vestirsi • ferirsi • iscriversi • tuffarsi • credersi • asciugarsi • nascondersi</span>
    </div>

    <div class="space-y-3">
      <div class="bg-gray-50 dark:bg-gray-800 border-2 border-gray-200 dark:border-gray-700 rounded-xl p-3">
        <span class="text-gray-700 dark:text-gray-200">• Giorgio</span>
        <input type="text" class="border-b-2 border-blue-400 dark:border-blue-600 bg-transparent dark:text-white px-2 py-1 focus:outline-none focus:border-blue-600 dark:focus:border-blue-400 w-48" data-fill-blanks-target="input" data-correct-answer="si è ferito" placeholder="">
        <span class="text-gray-700 dark:text-gray-200">con un coltello.</span>
      </div>

      <div class="bg-gray-50 dark:bg-gray-800 border-2 border-gray-200 dark:border-gray-700 rounded-xl p-3">
        <span class="text-gray-700 dark:text-gray-200">• Voi</span>
        <input type="text" class="border-b-2 border-blue-400 dark:border-blue-600 bg-transparent dark:text-white px-2 py-1 focus:outline-none focus:border-blue-600 dark:focus:border-blue-400 w-48" data-fill-blanks-target="input" data-correct-answer="vi credete" placeholder="">
        <span class="text-gray-700 dark:text-gray-200">imbattibili, ma non è vero.</span>
      </div>

      <div class="bg-gray-50 dark:bg-gray-800 border-2 border-gray-200 dark:border-gray-700 rounded-xl p-3">
        <span class="text-gray-700 dark:text-gray-200">• Gli alberi</span>
        <input type="text" class="border-b-2 border-blue-400 dark:border-blue-600 bg-transparent dark:text-white px-2 py-1 focus:outline-none focus:border-blue-600 dark:focus:border-blue-400 w-48" data-fill-blanks-target="input" data-correct-answer="si riflettono" placeholder="">
        <span class="text-gray-700 dark:text-gray-200">nel fiume.</span>
      </div>

      <div class="bg-gray-50 dark:bg-gray-800 border-2 border-gray-200 dark:border-gray-700 rounded-xl p-3">
        <span class="text-gray-700 dark:text-gray-200">• I miei cugini</span>
        <input type="text" class="border-b-2 border-blue-400 dark:border-blue-600 bg-transparent dark:text-white px-2 py-1 focus:outline-none focus:border-blue-600 dark:focus:border-blue-400 w-48" data-fill-blanks-target="input" data-correct-answer="si sono iscritti" placeholder="">
        <span class="text-gray-700 dark:text-gray-200">all'università di Milano.</span>
      </div>

      <div class="bg-gray-50 dark:bg-gray-800 border-2 border-gray-200 dark:border-gray-700 rounded-xl p-3">
        <span class="text-gray-700 dark:text-gray-200">• Io</span>
        <input type="text" class="border-b-2 border-blue-400 dark:border-blue-600 bg-transparent dark:text-white px-2 py-1 focus:outline-none focus:border-blue-600 dark:focus:border-blue-400 w-48" data-fill-blanks-target="input" data-correct-answer="mi vesto" placeholder="">
        <span class="text-gray-700 dark:text-gray-200">leggero perché fa caldo.</span>
      </div>

      <div class="bg-gray-50 dark:bg-gray-800 border-2 border-gray-200 dark:border-gray-700 rounded-xl p-3">
        <span class="text-gray-700 dark:text-gray-200">• Fra poco noi</span>
        <input type="text" class="border-b-2 border-blue-400 dark:border-blue-600 bg-transparent dark:text-white px-2 py-1 focus:outline-none focus:border-blue-600 dark:focus:border-blue-400 w-48" data-fill-blanks-target="input" data-correct-answer="ci tufferemo" placeholder="">
        <span class="text-gray-700 dark:text-gray-200">da quello scoglio.</span>
      </div>

      <div class="bg-gray-50 dark:bg-gray-800 border-2 border-gray-200 dark:border-gray-700 rounded-xl p-3">
        <span class="text-gray-700 dark:text-gray-200">• La lepre</span>
        <input type="text" class="border-b-2 border-blue-400 dark:border-blue-600 bg-transparent dark:text-white px-2 py-1 focus:outline-none focus:border-blue-600 dark:focus:border-blue-400 w-48" data-fill-blanks-target="input" data-correct-answer="si nasconde" placeholder="">
        <span class="text-gray-700 dark:text-gray-200">dietro la siepe.</span>
      </div>

      <div class="bg-gray-50 dark:bg-gray-800 border-2 border-gray-200 dark:border-gray-700 rounded-xl p-3">
        <span class="text-gray-700 dark:text-gray-200">• Ora devo</span>
        <input type="text" class="border-b-2 border-blue-400 dark:border-blue-600 bg-transparent dark:text-white px-2 py-1 focus:outline-none focus:border-blue-600 dark:focus:border-blue-400 w-48" data-fill-blanks-target="input" data-correct-answer="asciugarmi" placeholder="">
        <span class="text-gray-700 dark:text-gray-200">per non prendere il raffreddore.</span>
      </div>
    </div>
  </div>

  <!-- Esercizio 3: Sottolinea i verbi riflessivi -->
  <div class="mb-6 bg-white dark:bg-gray-800 rounded-2xl border-4 border-green-200 dark:border-green-700 shadow-2xl p-4 md:p-6" data-controller="word-highlighter">
    <h2 class="font-bold text-gray-700 dark:text-gray-200 mb-4">
      <span class="bg-green-600 text-white rounded-full w-8 h-8 md:w-10 md:h-10 inline-flex items-center justify-center mr-2">3</span>
      Sottolinea i verbi alla <strong class="underline text-blue-600 dark:text-blue-400">forma riflessiva</strong>.
    </h2>

    <div class="mb-4 bg-green-50 dark:bg-green-900/30 border-2 border-green-300 dark:border-green-700 rounded-xl p-3">
      <p class="text-gray-700 dark:text-gray-200"><span class="font-bold text-green-700 dark:text-green-400">Nota:</span> Il verbo è di forma riflessiva se il pronome personale <strong>mi, ti, si, ci, vi</strong> ha funzione di <strong>complemento oggetto</strong> e coincide con il <strong>soggetto</strong>.</p>
    </div>

    <div class="space-y-3">
      <div class="bg-gray-50 dark:bg-gray-800 border-2 border-gray-200 dark:border-gray-700 rounded-xl p-3">
        <span class="text-gray-700 dark:text-gray-200">• Non <span data-word-highlighter-target="word" data-correct="green" data-action="click->word-highlighter#toggleHighlight" class="px-1 rounded cursor-pointer">mi sposto</span> da qui.</span>
      </div>

      <div class="bg-gray-50 dark:bg-gray-800 border-2 border-gray-200 dark:border-gray-700 rounded-xl p-3">
        <span class="text-gray-700 dark:text-gray-200">• Ti preparo un tè caldo. <span class="text-red-500 dark:text-red-400">(non riflessivo)</span></span>
      </div>

      <div class="bg-gray-50 dark:bg-gray-800 border-2 border-gray-200 dark:border-gray-700 rounded-xl p-3">
        <span class="text-gray-700 dark:text-gray-200">• <span data-word-highlighter-target="word" data-correct="green" data-action="click->word-highlighter#toggleHighlight" class="px-1 rounded cursor-pointer">Vi siete fermati</span> un po' a casa?</span>
      </div>

      <div class="bg-gray-50 dark:bg-gray-800 border-2 border-gray-200 dark:border-gray-700 rounded-xl p-3">
        <span class="text-gray-700 dark:text-gray-200">• Mi presti una matita? <span class="text-red-500 dark:text-red-400">(non riflessivo)</span></span>
      </div>

      <div class="bg-gray-50 dark:bg-gray-800 border-2 border-gray-200 dark:border-gray-700 rounded-xl p-3">
        <span class="text-gray-700 dark:text-gray-200">• Quel ciclista <span data-word-highlighter-target="word" data-correct="green" data-action="click->word-highlighter#toggleHighlight" class="px-1 rounded cursor-pointer">si allena</span> ogni giorno.</span>
      </div>

      <div class="bg-gray-50 dark:bg-gray-800 border-2 border-gray-200 dark:border-gray-700 rounded-xl p-3">
        <span class="text-gray-700 dark:text-gray-200">• <span data-word-highlighter-target="word" data-correct="green" data-action="click->word-highlighter#toggleHighlight" class="px-1 rounded cursor-pointer">Ci siamo vestiti</span> in fretta e furia.</span>
      </div>
    </div>
  </div>

  <!-- Esercizio 4: Trasforma da attivo a riflessivo -->
  <div class="mb-6 bg-white dark:bg-gray-800 rounded-2xl border-4 border-purple-200 dark:border-purple-700 shadow-2xl p-4 md:p-6" data-controller="fill-blanks">
    <h2 class="font-bold text-gray-700 dark:text-gray-200 mb-4">
      <span class="bg-purple-600 text-white rounded-full w-8 h-8 md:w-10 md:h-10 inline-flex items-center justify-center mr-2">4</span>
      Trasforma le seguenti forme verbali da <strong class="underline text-blue-600 dark:text-blue-400">attive</strong> in <strong class="underline text-red-600 dark:text-red-400">riflessive</strong>. Osserva l'esempio.
    </h2>

    <div class="mb-4 bg-purple-50 dark:bg-purple-900/30 border-2 border-purple-300 dark:border-purple-700 rounded-xl p-3">
      <p class="text-gray-700 dark:text-gray-200"><span class="font-bold text-purple-700 dark:text-purple-400">Nota:</span> I verbi riflessivi hanno l'ausiliare <strong>essere</strong>.</p>
    </div>

    <div class="space-y-3">
      <div class="bg-blue-50 dark:bg-blue-900/30 border-2 border-blue-300 dark:border-blue-700 rounded-xl p-3">
        <span class="text-gray-700 dark:text-gray-200">• Tu hai lavato → <span class="bg-blue-200 dark:bg-blue-800 px-2 py-1 rounded font-bold">Tu ti sei lavato</span></span>
      </div>

      <div class="bg-gray-50 dark:bg-gray-800 border-2 border-gray-200 dark:border-gray-700 rounded-xl p-3">
        <span class="text-gray-700 dark:text-gray-200">• Lei ha alzato →</span>
        <input type="text" class="border-b-2 border-purple-400 dark:border-purple-600 bg-transparent dark:text-white px-2 py-1 focus:outline-none focus:border-purple-600 dark:focus:border-purple-400 w-56" data-fill-blanks-target="input" data-correct-answer="Lei si è alzata" placeholder="">
      </div>

      <div class="bg-gray-50 dark:bg-gray-800 border-2 border-gray-200 dark:border-gray-700 rounded-xl p-3">
        <span class="text-gray-700 dark:text-gray-200">• Noi abbiamo preparato →</span>
        <input type="text" class="border-b-2 border-purple-400 dark:border-purple-600 bg-transparent dark:text-white px-2 py-1 focus:outline-none focus:border-purple-600 dark:focus:border-purple-400 w-56" data-fill-blanks-target="input" data-correct-answer="Noi ci siamo preparati" placeholder="">
      </div>

      <div class="bg-gray-50 dark:bg-gray-800 border-2 border-gray-200 dark:border-gray-700 rounded-xl p-3">
        <span class="text-gray-700 dark:text-gray-200">• Sposta! →</span>
        <input type="text" class="border-b-2 border-purple-400 dark:border-purple-600 bg-transparent dark:text-white px-2 py-1 focus:outline-none focus:border-purple-600 dark:focus:border-purple-400 w-56" data-fill-blanks-target="input" data-correct-answer="Spostati!" placeholder="">
      </div>
    </div>
  </div>

  <!-- Footer with reference -->
  <div class="mt-8 text-center">
    <p class="text-red-600 dark:text-red-400 font-bold">Grammatica p. <%= link_to "82", pagina_path("nvl5_gram_p082"), class: "text-red-600 dark:text-red-400 hover:text-red-800 dark:hover:text-red-300 underline font-bold" %></p>
  </div>

  <!-- Exercise controls -->
  <%= render 'shared/exercise_controls' %>
</div>
