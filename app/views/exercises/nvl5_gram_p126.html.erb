      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Tempi Semplici -->
        <div>
          <h4 class="font-bold text-center text-blue-600 mb-4 pb-2 border-b-2 border-blue-300">TEMPI SEMPLICI</h4>

          <!-- Presente -->
          <div class="bg-white rounded-lg p-4 mb-4">
            <h5 class="font-bold text-blue-700 mb-2">PRESENTE</h5>
            <div class="space-y-1 text-gray-700">
              <p><strong>io</strong> sono</p>
              <p><strong>tu</strong> sei</p>
              <p><strong>lui/lei</strong> è</p>
              <p><strong>noi</strong> siamo</p>
              <p><strong>voi</strong> siete</p>
              <p><strong>loro</strong> sono</p>
            </div>
          </div>

          <!-- Imperfetto -->
          <div class="bg-white rounded-lg p-4 mb-4">
            <h5 class="font-bold text-blue-700 mb-2">IMPERFETTO</h5>
            <div class="space-y-1 text-gray-700">
              <p><strong>io</strong> ero</p>
              <p><strong>tu</strong> eri</p>
              <p><strong>lui/lei</strong> era</p>
              <p><strong>noi</strong> eravamo</p>
              <p><strong>voi</strong> eravate</p>
              <p><strong>loro</strong> erano</p>
            </div>
          </div>

          <!-- Passato Remoto -->
          <div class="bg-white rounded-lg p-4 mb-4">
            <h5 class="font-bold text-blue-700 mb-2">PASSATO REMOTO</h5>
            <div class="space-y-1 text-gray-700">
              <p><strong>io</strong> fui</p>
              <p><strong>tu</strong> fosti</p>
              <p><strong>lui/lei</strong> fu</p>
              <p><strong>noi</strong> fummo</p>
              <p><strong>voi</strong> foste</p>
              <p><strong>loro</strong> furono</p>
            </div>
          </div>

          <!-- Futuro Semplice -->
          <div class="bg-white rounded-lg p-4">
            <h5 class="font-bold text-blue-700 mb-2">FUTURO SEMPLICE</h5>
            <div class="space-y-1 text-gray-700">
              <p><strong>io</strong> sarò</p>
              <p><strong>tu</strong> sarai</p>
              <p><strong>lui/lei</strong> sarà</p>
              <p><strong>noi</strong> saremo</p>
              <p><strong>voi</strong> sarete</p>
              <p><strong>loro</strong> saranno</p>
            </div>
          </div>
        </div>

        <!-- Tempi Composti -->
        <div>
          <h4 class="font-bold text-center text-orange-600 mb-4 pb-2 border-b-2 border-orange-300">TEMPI COMPOSTI</h4>

          <!-- Passato Prossimo -->
          <div class="bg-white rounded-lg p-4 mb-4">
            <h5 class="font-bold text-orange-700 mb-2">PASSATO PROSSIMO</h5>
            <div class="space-y-1 text-gray-700">
              <p><strong>io</strong> sono stato</p>
              <p><strong>tu</strong> sei stato</p>
              <p><strong>lui/lei</strong> è stato/a</p>
              <p><strong>noi</strong> siamo stati</p>
              <p><strong>voi</strong> siete stati</p>
              <p><strong>loro</strong> sono stati/e</p>
            </div>
          </div>

          <!-- Trapassato Prossimo -->
          <div class="bg-white rounded-lg p-4 mb-4">
            <h5 class="font-bold text-orange-700 mb-2">TRAPASSATO PROSSIMO</h5>
            <div class="space-y-1 text-gray-700">
              <p><strong>io</strong> ero stato</p>
              <p><strong>tu</strong> eri stato</p>
              <p><strong>lui/lei</strong> era stato/a</p>
              <p><strong>noi</strong> eravamo stati</p>
              <p><strong>voi</strong> eravate stati</p>
              <p><strong>loro</strong> erano stati/e</p>
            </div>
          </div>

          <!-- Trapassato Remoto -->
          <div class="bg-white rounded-lg p-4 mb-4">
            <h5 class="font-bold text-orange-700 mb-2">TRAPASSATO REMOTO</h5>
            <div class="space-y-1 text-gray-700">
              <p><strong>io</strong> fui stato</p>
              <p><strong>tu</strong> fosti stato</p>
              <p><strong>lui/lei</strong> fu stato/a</p>
              <p><strong>noi</strong> fummo stati</p>
              <p><strong>voi</strong> foste stati</p>
              <p><strong>loro</strong> furono stati/e</p>
            </div>
          </div>

          <!-- Futuro Anteriore -->
          <div class="bg-white rounded-lg p-4">
            <h5 class="font-bold text-orange-700 mb-2">FUTURO ANTERIORE</h5>
            <div class="space-y-1 text-gray-700">
              <p><strong>io</strong> sarò stato</p>
              <p><strong>tu</strong> sarai stato</p>
              <p><strong>lui/lei</strong> sarà stato/a</p>
              <p><strong>noi</strong> saremo stati</p>
              <p><strong>voi</strong> sarete stati</p>
              <p><strong>loro</strong> saranno stati/e</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Modo Congiuntivo -->
  <div class="bg-<%= @pagina.base_color %>-100 p-4 md:p-6 pb-8 rounded-lg mb-6">
    <h3 class="font-bold text-center text-<%= @pagina.base_color %>-700 mb-4">MODO CONGIUNTIVO</h3>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <!-- Tempi Semplici -->
      <div>
        <h4 class="font-bold text-center text-blue-600 mb-4 pb-2 border-b-2 border-blue-300">TEMPI SEMPLICI</h4>

        <!-- Presente -->
        <div class="bg-white rounded-lg p-4 mb-4">
          <h5 class="font-bold text-blue-700 mb-2">PRESENTE</h5>
          <div class="space-y-1 text-gray-700">
            <p>(che) <strong>io</strong> sia</p>
            <p>(che) <strong>tu</strong> sia</p>
            <p>(che) <strong>lui/lei</strong> sia</p>
            <p>(che) <strong>noi</strong> siamo</p>
            <p>(che) <strong>voi</strong> siate</p>
            <p>(che) <strong>loro</strong> siano</p>
          </div>
        </div>

        <!-- Imperfetto -->
        <div class="bg-white rounded-lg p-4">
          <h5 class="font-bold text-blue-700 mb-2">IMPERFETTO</h5>
          <div class="space-y-1 text-gray-700">
            <p>(che) <strong>io</strong> fossi</p>
            <p>(che) <strong>tu</strong> fossi</p>
            <p>(che) <strong>lui/lei</strong> fosse</p>
            <p>(che) <strong>noi</strong> fossimo</p>
            <p>(che) <strong>voi</strong> foste</p>
            <p>(che) <strong>loro</strong> fossero</p>
          </div>
        </div>
      </div>

      <!-- Tempi Composti -->
      <div>
        <h4 class="font-bold text-center text-orange-600 mb-4 pb-2 border-b-2 border-orange-300">TEMPI COMPOSTI</h4>

        <!-- Passato -->
        <div class="bg-white rounded-lg p-4 mb-4">
          <h5 class="font-bold text-orange-700 mb-2">PASSATO</h5>
          <div class="space-y-1 text-gray-700">
            <p>(che) <strong>io</strong> sia stato</p>
            <p>(che) <strong>tu</strong> sia stato</p>
            <p>(che) <strong>lui/lei</strong> sia stato/a</p>
            <p>(che) <strong>noi</strong> siamo stati</p>
            <p>(che) <strong>voi</strong> siate stati</p>
            <p>(che) <strong>loro</strong> siano stati/e</p>
          </div>
        </div>

        <!-- Trapassato -->
        <div class="bg-white rounded-lg p-4">
          <h5 class="font-bold text-orange-700 mb-2">TRAPASSATO</h5>
          <div class="space-y-1 text-gray-700">
            <p>(che) <strong>io</strong> fossi stato</p>
            <p>(che) <strong>tu</strong> fossi stato</p>
            <p>(che) <strong>lui/lei</strong> fosse stato/a</p>
            <p>(che) <strong>noi</strong> fossimo stati</p>
            <p>(che) <strong>voi</strong> foste stati</p>
            <p>(che) <strong>loro</strong> fossero stati/e</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Modo Condizionale -->
  <div class="bg-<%= @pagina.base_color %>-50 p-4 md:p-6 pb-8 rounded-lg mb-6">
    <h3 class="font-bold text-center text-<%= @pagina.base_color %>-700 mb-4">MODO CONDIZIONALE</h3>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <!-- Tempo Semplice -->
      <div class="bg-white rounded-lg p-4">
        <h5 class="font-bold text-purple-700 mb-2">PRESENTE</h5>
        <div class="space-y-1 text-gray-700">
          <p><strong>io</strong> sarei</p>
          <p><strong>tu</strong> saresti</p>
          <p><strong>lui/lei</strong> sarebbe</p>
          <p><strong>noi</strong> saremmo</p>
          <p><strong>voi</strong> sareste</p>
          <p><strong>loro</strong> sarebbero</p>
        </div>
      </div>

      <!-- Tempo Composto -->
      <div class="bg-white rounded-lg p-4">
        <h5 class="font-bold text-purple-700 mb-2">PASSATO</h5>
        <div class="space-y-1 text-gray-700">
          <p><strong>io</strong> sarei stato</p>
          <p><strong>tu</strong> saresti stato</p>
          <p><strong>lui/lei</strong> sarebbe stato/a</p>
          <p><strong>noi</strong> saremmo stati</p>
          <p><strong>voi</strong> sareste stati</p>
          <p><strong>loro</strong> sarebbero stati/e</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Altri Modi -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
    <!-- Modo Imperativo -->
    <div class="bg-<%= @pagina.base_color %>-50 rounded-lg p-4 md:p-6">
      <h3 class="font-bold text-center text-<%= @pagina.base_color %>-700 mb-4">MODO IMPERATIVO</h3>
      <div class="bg-white rounded-lg p-4">
        <h5 class="font-bold text-red-700 mb-2">PRESENTE</h5>
        <div class="space-y-1 text-gray-700 text-center">
          <p>sii (<strong>tu</strong>)</p>
          <p>siate (<strong>voi</strong>)</p>
        </div>
      </div>
    </div>

    <!-- Infinito, Participio, Gerundio -->
    <div class="col-span-2 bg-<%= @pagina.base_color %>-50 rounded-lg p-4 md:p-6">
      <div class="grid grid-cols-3 gap-4">
        <!-- Infinito -->
        <div>
          <h4 class="font-bold text-center text-<%= @pagina.base_color %>-700 mb-4">INFINITO</h4>
          <div class="bg-white rounded-lg p-4">
            <p class="font-bold text-blue-600 mb-1">PRESENTE</p>
            <p class="text-gray-700">essere</p>
            <p class="font-bold text-blue-600 mb-1 mt-3">PASSATO</p>
            <p class="text-gray-700">essere stato</p>
          </div>
        </div>

        <!-- Participio -->
        <div>
          <h4 class="font-bold text-center text-<%= @pagina.base_color %>-700 mb-4">PARTICIPIO</h4>
          <div class="bg-white rounded-lg p-4">
            <p class="font-bold text-blue-600 mb-1">PRESENTE</p>
            <p class="text-gray-700">---</p>
            <p class="font-bold text-blue-600 mb-1 mt-3">PASSATO</p>
            <p class="text-gray-700">stato</p>
          </div>
        </div>

        <!-- Gerundio -->
        <div>
          <h4 class="font-bold text-center text-<%= @pagina.base_color %>-700 mb-4">GERUNDIO</h4>
          <div class="bg-white rounded-lg p-4">
            <p class="font-bold text-blue-600 mb-1">PRESENTE</p>
            <p class="text-gray-700">essendo</p>
            <p class="font-bold text-blue-600 mb-1 mt-3">PASSATO</p>
            <p class="text-gray-700">essendo stato</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%= render 'shared/exercise_controls' %>
</div>
