<div class="max-w-6xl mx-auto p-3 md:p-8 bg-white" data-controller="exercise-checker">

  <%= render 'shared/page_header', pagina: @pagina %>

  <!-- Titolo ESSERE -->
  <div class="bg-<%= @pagina.base_color %>-50 p-4 md:p-6 pb-8 rounded-lg mb-6">
    <h2 class="font-bold text-center text-<%= @pagina.base_color %>-700 mb-6">ESSERE</h2>

    <!-- Modo Indicativo -->
    <div class="mb-6">
