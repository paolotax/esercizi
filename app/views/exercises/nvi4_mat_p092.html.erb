<div class="max-w-6xl mx-auto bg-white dark:bg-gray-900 p-3 md:p-6 transition-colors duration-300"
     data-controller="exercise-checker text-toggle font-controls"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <%= render 'shared/page_header', pagina: @pagina %>

  <div class="space-y-6">

    <!-- Immagine principale - Schema MISURA con MULTIPLI -->
    <div class="flex justify-center">
      <%= image_tag "nvi4_mat/p092/p092_01.jpg", class: "max-w-full h-auto dark:bg-white dark:rounded-lg dark:p-1" %>
    </div>

    <!-- Container esercizi -->
    <div class="p-4 md:p-6 bg-orange-100 dark:bg-orange-900/30 rounded-2xl">

      <!-- Esercizio Collega -->
      <div class="mb-8">
        <p class="font-bold text-gray-700 dark:text-gray-200 mb-4">
          <span class="text-<%= @pagina.base_color %>-500">•</span>
          Collega.
        </p>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <!-- Colonna sinistra -->
          <div class="space-y-3">
            <div class="flex items-center gap-2">
              <span class="text-<%= @pagina.base_color %>-500">•</span>
              <span class="text-gray-700 dark:text-gray-200">Il <strong class="text-<%= @pagina.base_color %>-600 dark:text-<%= @pagina.base_color %>-400">METRO</strong></span>
            </div>
            <div class="flex items-center gap-2">
              <span class="text-<%= @pagina.base_color %>-500">•</span>
              <span class="text-gray-700 dark:text-gray-200">Il <strong class="text-<%= @pagina.base_color %>-600 dark:text-<%= @pagina.base_color %>-400">LITRO</strong></span>
            </div>
            <div class="flex items-center gap-2">
              <span class="text-<%= @pagina.base_color %>-500">•</span>
              <span class="text-gray-700 dark:text-gray-200">Il <strong class="text-<%= @pagina.base_color %>-600 dark:text-<%= @pagina.base_color %>-400">CHILOGRAMMO</strong></span>
            </div>
            <div class="flex items-center gap-2">
              <span class="text-<%= @pagina.base_color %>-500">•</span>
              <span class="text-gray-700 dark:text-gray-200"><strong class="text-<%= @pagina.base_color %>-600 dark:text-<%= @pagina.base_color %>-400">LUNGHEZZA</strong>, <strong class="text-cyan-600 dark:text-cyan-400">MASSA</strong> e <strong class="text-green-600 dark:text-green-400">CAPACITÀ</strong></span>
            </div>
          </div>

          <!-- Colonna destra -->
          <div class="space-y-3">
            <div class="p-2 bg-yellow-100 dark:bg-yellow-900/30 rounded w-fit">
              <span class="text-gray-700 dark:text-gray-200">è l'unità di misura della <strong class="text-cyan-600 dark:text-cyan-400">MASSA</strong>.</span>
            </div>
            <div class="p-2 bg-yellow-100 dark:bg-yellow-900/30 rounded w-fit">
              <span class="text-gray-700 dark:text-gray-200">sono i nomi delle misure.</span>
            </div>
            <div class="p-2 bg-yellow-100 dark:bg-yellow-900/30 rounded w-fit">
              <span class="text-gray-700 dark:text-gray-200">è l'unità di misura della <strong class="text-green-600 dark:text-green-400">CAPACITÀ</strong>.</span>
            </div>
            <div class="p-2 bg-yellow-100 dark:bg-yellow-900/30 rounded w-fit">
              <span class="text-gray-700 dark:text-gray-200">è l'unità di misura della <strong class="text-<%= @pagina.base_color %>-600 dark:text-<%= @pagina.base_color %>-400">LUNGHEZZA</strong>.</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Esercizio Scegli -->
      <div>
        <p class="font-bold text-gray-700 dark:text-gray-200 mb-4">
          <span class="text-<%= @pagina.base_color %>-500">▼</span>
          Scegli.
        </p>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- I MULTIPLI sono -->
          <div class="space-y-3">
            <p class="text-gray-700 dark:text-gray-200">
              <span class="text-<%= @pagina.base_color %>-500">•</span>
              I <strong class="text-<%= @pagina.base_color %>-600 dark:text-<%= @pagina.base_color %>-400">MULTIPLI</strong> sono:
            </p>
            <label class="flex items-center gap-2 cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-700 p-2 rounded border border-gray-200 dark:border-gray-600 text-gray-700 dark:text-gray-200">
              <input type="radio" name="multipli" class="w-5 h-5" data-correct-answer="true">
              <span>più grandi dell'unità di misura.</span>
            </label>
            <label class="flex items-center gap-2 cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-700 p-2 rounded border border-gray-200 dark:border-gray-600 text-gray-700 dark:text-gray-200">
              <input type="radio" name="multipli" class="w-5 h-5" data-correct-answer="false">
              <span>più piccoli dell'unità di misura.</span>
            </label>
          </div>

          <!-- I SOTTOMULTIPLI sono -->
          <div class="space-y-3">
            <p class="text-gray-700 dark:text-gray-200">
              <span class="text-<%= @pagina.base_color %>-500">•</span>
              I <strong class="text-<%= @pagina.base_color %>-600 dark:text-<%= @pagina.base_color %>-400">SOTTOMULTIPLI</strong> sono:
            </p>
            <label class="flex items-center gap-2 cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-700 p-2 rounded border border-gray-200 dark:border-gray-600 text-gray-700 dark:text-gray-200">
              <input type="radio" name="sottomultipli" class="w-5 h-5" data-correct-answer="false">
              <span>più grandi dell'unità di misura.</span>
            </label>
            <label class="flex items-center gap-2 cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-700 p-2 rounded border border-gray-200 dark:border-gray-600 text-gray-700 dark:text-gray-200">
              <input type="radio" name="sottomultipli" class="w-5 h-5" data-correct-answer="true">
              <span>più piccoli dell'unità di misura.</span>
            </label>
          </div>
        </div>
      </div>

    </div>

    <%= render 'shared/exercise_controls' %>
  </div>
</div>
