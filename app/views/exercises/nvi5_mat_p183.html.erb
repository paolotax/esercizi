            <label class="flex items-center gap-1 cursor-pointer hover:bg-gray-50 px-2 py-1 rounded border border-gray-200">
              <input type="radio" name="pot1" class="w-4 h-4" data-correct-answer="true">
              <span>3 × 3</span>
            </label>
          </div>

          <!-- 4³ -->
          <div class="flex items-center gap-2 flex-wrap">
            <span class="text-gray-700 shrink-0">4<sup>3</sup> =</span>
            <label class="flex items-center gap-1 cursor-pointer hover:bg-gray-50 px-2 py-1 rounded border border-gray-200">
              <input type="radio" name="pot2" class="w-4 h-4" data-correct-answer="false">
              <span>4 × 3</span>
            </label>
            <label class="flex items-center gap-1 cursor-pointer hover:bg-gray-50 px-2 py-1 rounded border border-gray-200">
              <input type="radio" name="pot2" class="w-4 h-4" data-correct-answer="true">
