              <option value="8 000 000">8 000 000</option>
              <option value="8 000">8 000</option>
              <option value="800 000">800 000</option>
              <option value="80 000 000">80 000 000</option>
              <option value="8 000 000 000">8 000 000 000</option>
            </select>
          </div>
          <div class="flex items-center gap-2">
            <select class="flex-1 p-2 border border-gray-300 rounded bg-white" data-correct-answer="80 000 000">
              <option value="">Seleziona...</option>
              <option value="8 000 000">8 000 000</option>
              <option value="8 000">8 000</option>
              <option value="800 000">800 000</option>
              <option value="80 000 000">80 000 000</option>
              <option value="8 000 000 000">8 000 000 000</option>
