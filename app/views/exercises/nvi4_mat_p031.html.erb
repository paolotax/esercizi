<div class="max-w-6xl mx-auto bg-white p-3 md:p-6"
     data-controller="exercise-checker text-toggle font-controls"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <%= render 'shared/page_header', pagina: @pagina %>

  <div class="space-y-6">

    <!-- Leggi e osserva -->
    <div class="p-4 bg-custom-blue rounded-2xl">
      <p class="font-bold text-gray-700 mb-4">
        <span class="text-<%= @pagina.base_color %>-500">•</span> Leggi e osserva.
      </p>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- IN RIGA -->
        <div>
          <h2 class="font-bold text-<%= @pagina.base_color %>-600 mb-2">IN RIGA</h2>
          <p class="text-gray-700 mb-4">
            Sottrai le unità alle unità, le decine alle decine, le centinaia alle centinaia...
          </p>
          <div class="flex justify-center">
            <%= image_tag "nvi4_mat/p031/p031_01.jpg", alt: "379 - 54 = 325", class: "max-h-16" %>
          </div>
        </div>

        <!-- IN COLONNA -->
        <div>
          <h2 class="font-bold text-<%= @pagina.base_color %>-600 mb-2">IN COLONNA</h2>
          <p class="text-gray-700 mb-2">
            Quando esegui la sottrazione è necessario mettere in colonna rispettando il <span class="font-bold">valore posizionale</span> delle cifre.
          </p>
          <p class="text-gray-700 mb-2">
            Poi si calcola a partire dalle unità.
          </p>
          <p class="text-gray-700">
            Quando la cifra del minuendo è minore della cifra corrispondente del sottraendo, si deve fare un <span class="font-bold">cambio</span>.
          </p>
        </div>
      </div>

      <!-- Tabella Senza cambio / Con il cambio -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-6">
        <div class="text-center">
          <p class="font-bold text-<%= @pagina.base_color %>-600 mb-2">Senza cambio</p>
          <div class="flex justify-center">
            <%= image_tag "nvi4_mat/p031/p031_02.jpg", alt: "Sottrazione senza cambio", class: "max-h-24" %>
          </div>
        </div>
        <div class="text-center">
          <p class="font-bold text-<%= @pagina.base_color %>-600 mb-2">Con il cambio</p>
          <div class="flex justify-center">
            <%= image_tag "nvi4_mat/p031/p031_03.jpg", alt: "Sottrazione con cambio", class: "max-h-24" %>
          </div>
        </div>
      </div>
    </div>

    <!-- ESERCIZI -->
    <div class="p-4 md:p-6 bg-orange-100 rounded-2xl">

      <!-- Esercizio 1 - IMPARARE TUTTI -->
      <div class="p-4 bg-white rounded-2xl -mx-4 md:-mx-6 -mt-4 md:-mt-6 mb-6 border-3 border-blue-500">
        <p class="font-bold text-gray-700 mb-4">
          <%= imparare_tutti_badge(1) %>
          Calcola in riga. Fai attenzione agli eventuali cambi.
        </p>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
          <div class="flex items-center gap-2">
            <span class="shrink-0">974 − 520 =</span>
            <input type="text" data-correct-answer="454" class="w-20 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
          </div>
