            <input type="text" data-correct-answer="1841" class="w-16 px-2 py-1 border-2 border-<%= @pagina.base_color %>-400 rounded text-center font-bold bg-white">
            <span class="text-<%= @pagina.base_color %>-500">→</span>
            <input type="text" data-correct-answer="1839" class="w-16 px-2 py-1 border-2 border-<%= @pagina.base_color %>-400 rounded text-center font-bold bg-white">
            <span class="text-<%= @pagina.base_color %>-500">→</span>
            <input type="text" data-correct-answer="1837" class="w-16 px-2 py-1 border-2 border-<%= @pagina.base_color %>-400 rounded text-center font-bold bg-white">
            <span class="text-<%= @pagina.base_color %>-500">→</span>
            <span class="px-3 py-1 border-2 border-<%= @pagina.base_color %>-400 rounded font-bold">1835</span>
          </div>
        </div>
      </div>

      <!-- Esercizio 3 e AllenaMente -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Esercizio 3 -->
        <div>
          <p class="font-bold text-gray-700 mb-4">
            <%= numero_esercizio_badge(3) %>
            Calcola in colonna sul quaderno.
          </p>

          <div class="grid grid-cols-2 gap-3">
            <div class="flex items-center gap-2">
              <span class="shrink-0">865 − 651 =</span>
              <input type="text" data-correct-answer="214" class="w-16 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
            </div>
            <div class="flex items-center gap-2">
              <span class="shrink-0 whitespace-nowrap">2 578 − 368 =</span>
              <input type="text" data-correct-answer="2210" class="w-16 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
            </div>
            <div class="flex items-center gap-2">
              <span class="shrink-0">940 − 574 =</span>
              <input type="text" data-correct-answer="366" class="w-16 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
            </div>
            <div class="flex items-center gap-2">
              <span class="shrink-0 whitespace-nowrap">1 358 − 239 =</span>
              <input type="text" data-correct-answer="1119" class="w-16 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
            </div>
            <div class="flex items-center gap-2">
              <span class="shrink-0 whitespace-nowrap">3 051 − 984 =</span>
              <input type="text" data-correct-answer="2067" class="w-16 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
            </div>
            <div class="flex items-center gap-2">
              <span class="shrink-0 whitespace-nowrap">2 589 − 904 =</span>
              <input type="text" data-correct-answer="1685" class="w-16 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
            </div>
            <div class="flex items-center gap-2">
              <span class="shrink-0 whitespace-nowrap">4 072 − 2 364 =</span>
              <input type="text" data-correct-answer="1708" class="w-16 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
