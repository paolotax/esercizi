            <span class="px-3 py-1 border-2 border-<%= @pagina.base_color %>-400 rounded font-bold">1847</span>
            <span class="text-<%= @pagina.base_color %>-500">→</span>
            <span class="px-3 py-1 border-2 border-<%= @pagina.base_color %>-400 rounded font-bold">1845</span>
            <span class="text-<%= @pagina.base_color %>-500">→</span>
            <input type="text" data-correct-answer="1843" class="w-16 px-2 py-1 border-2 border-<%= @pagina.base_color %>-400 rounded text-center font-bold bg-white">
