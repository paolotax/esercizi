<div class="max-w-6xl mx-auto p-3 md:p-8 bg-white" data-controller="exercise-checker">

  <%= render 'shared/page_header', pagina: @pagina %>

  <!-- Exercise 1: Primitive nouns from derived -->
  <div class="mb-6 bg-<%= @pagina.base_color %>-100 rounded-lg p-4 md:p-6" data-controller="fill-blanks">
    <h2 class="font-bold text-<%= @pagina.base_color %>-700 mb-4 flex items-center flex-wrap gap-2">
      <span class="bg-<%= @pagina.base_color %>-500 text-white rounded-full w-8 h-8 md:w-10 md:h-10 inline-flex items-center justify-center font-bold">1</span>
      <span class="bg-yellow-400 text-<%= @pagina.base_color %>-900 px-3 py-1 rounded-lg font-bold">IMPARARE TUTTI</span>
      <span>Per ciascuno dei seguenti <span class="text-<%= @pagina.base_color %>-600 font-bold">nomi derivati</span>, scrivi il nome primitivo.</span>
    </h2>

    <% derived_nouns = [
      { derived: "insalatiera", primitive: "insalata" },
      { derived: "vetrata", primitive: "vetro" },
      { derived: "occhiata", primitive: "occhio" },
      { derived: "cicaleccio", primitive: "cicala" },
      { derived: "osteria", primitive: "oste" },
      { derived: "limonaia", primitive: "limone" },
      { derived: "collana", primitive: "collo" },
      { derived: "maniglia", primitive: "mano" },
      { derived: "fratellanza", primitive: "fratello" },
      { derived: "argenteria", primitive: "argento" }
    ] %>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
      <% derived_nouns.each do |item| %>
        <div class="flex items-center gap-3 bg-white rounded-lg p-3">
          <span class="text-<%= @pagina.base_color %>-600 font-bold">•</span>
          <span class="text-gray-700 font-semibold w-28"><%= item[:derived] %></span>
          <span class="text-gray-400">→</span>
          <input type="text"
                 class="border-b-2 border-dotted border-gray-400 bg-transparent px-2 py-1 focus:outline-none focus:border-<%= @pagina.base_color %>-500 flex-grow"
                 data-fill-blanks-target="input"
                 data-answer="<%= item[:primitive] %>"
                 data-correct-answer="<%= item[:primitive] %>">
        </div>
      <% end %>
    </div>
  </div>

  <!-- Exercise 2: Altered nouns -->
  <div class="mb-6 bg-<%= @pagina.base_color %>-50 rounded-lg p-4 md:p-6" data-controller="fill-blanks">
    <h2 class="font-bold text-<%= @pagina.base_color %>-700 mb-4 flex items-center gap-2">
      <span class="bg-<%= @pagina.base_color %>-500 text-white rounded-full w-8 h-8 md:w-10 md:h-10 inline-flex items-center justify-center font-bold">2</span>
      <span>Scrivi il significato dei seguenti <span class="text-<%= @pagina.base_color %>-600 font-bold">nomi alterati</span>, come nell'esempio. Poi inseriscili al posto giusto nella tabella.</span>
    </h2>

    <% altered_nouns = [
      { noun: "stradaccia", meaning: "brutta strada", type: "dispregiativo", example: true },
      { noun: "cameretta", meaning: "piccola camera", type: "diminutivo", example: false },
      { noun: "vestitino", meaning: "piccolo vestito", type: "diminutivo", example: false },
      { noun: "orticello", meaning: "piccolo orto", type: "diminutivo", example: false },
      { noun: "mostriciattolo", meaning: "piccolo mostro", type: "diminutivo", example: false },
      { noun: "anellino", meaning: "piccolo anello", type: "diminutivo", example: false },
      { noun: "cagnaccio", meaning: "brutto cane", type: "dispregiativo", example: false },
      { noun: "castelluzzo", meaning: "piccolo castello", type: "vezzeggiativo", example: false },
      { noun: "nasone", meaning: "grande naso", type: "accrescitivo", example: false },
      { noun: "finestrona", meaning: "grande finestra", type: "accrescitivo", example: false },
      { noun: "porticciolo", meaning: "piccolo porto", type: "vezzeggiativo", example: false },
      { noun: "zampaccia", meaning: "brutta zampa", type: "dispregiativo", example: false },
      { noun: "vasetto", meaning: "piccolo vaso", type: "diminutivo", example: false },
      { noun: "patatina", meaning: "piccola patata", type: "diminutivo", example: false },
      { noun: "casuccia", meaning: "piccola casa", type: "vezzeggiativo", example: false },
      { noun: "omone", meaning: "grande uomo", type: "accrescitivo", example: false },
      { noun: "poetastro", meaning: "cattivo poeta", type: "dispregiativo", example: false },
      { noun: "volpacchiotto", meaning: "piccola volpe", type: "vezzeggiativo", example: false }
    ] %>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-3 mb-6">
      <% altered_nouns.each do |item| %>
        <div class="flex items-center gap-3 bg-white rounded-lg p-3">
          <span class="text-<%= @pagina.base_color %>-600 font-bold">•</span>
          <span class="text-gray-700 font-semibold w-32"><%= item[:noun] %></span>
          <span class="text-gray-400">→</span>
          <% if item[:example] %>
            <span class="font-bold text-<%= @pagina.base_color %>-700"><%= item[:meaning] %></span>
          <% else %>
            <input type="text"
                   class="border-b-2 border-dotted border-gray-400 bg-transparent px-2 py-1 focus:outline-none focus:border-<%= @pagina.base_color %>-500 flex-grow"
                   data-fill-blanks-target="input"
                   data-answer="<%= item[:meaning] %>"
                   data-correct-answer="<%= item[:meaning] %>">
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="overflow-x-auto">
      <table class="w-full">
        <thead>
          <tr class="bg-<%= @pagina.base_color %>-200">
            <th class="border border-gray-300 px-4 py-3 text-<%= @pagina.base_color %>-700 font-bold">Accrescitivo</th>
            <th class="border border-gray-300 px-4 py-3 text-<%= @pagina.base_color %>-700 font-bold">Diminutivo</th>
            <th class="border border-gray-300 px-4 py-3 text-<%= @pagina.base_color %>-700 font-bold">Vezzeggiativo</th>
            <th class="border border-gray-300 px-4 py-3 text-<%= @pagina.base_color %>-700 font-bold">Dispregiativo</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td class="border border-gray-300 px-4 py-3 bg-white align-top">
              <input type="text" class="w-full bg-transparent border-b border-dotted border-gray-400 focus:outline-none focus:border-<%= @pagina.base_color %>-500 mb-2" data-fill-blanks-target="input" data-answer="nasone"><br>
              <input type="text" class="w-full bg-transparent border-b border-dotted border-gray-400 focus:outline-none focus:border-<%= @pagina.base_color %>-500 mb-2" data-fill-blanks-target="input" data-answer="finestrona"><br>
              <input type="text" class="w-full bg-transparent border-b border-dotted border-gray-400 focus:outline-none focus:border-<%= @pagina.base_color %>-500" data-fill-blanks-target="input" data-answer="omone">
            </td>
            <td class="border border-gray-300 px-4 py-3 bg-<%= @pagina.base_color %>-50 align-top">
              <input type="text" class="w-full bg-transparent border-b border-dotted border-gray-400 focus:outline-none focus:border-<%= @pagina.base_color %>-500 mb-2" data-fill-blanks-target="input" data-answer="cameretta"><br>
              <input type="text" class="w-full bg-transparent border-b border-dotted border-gray-400 focus:outline-none focus:border-<%= @pagina.base_color %>-500 mb-2" data-fill-blanks-target="input" data-answer="vestitino"><br>
              <input type="text" class="w-full bg-transparent border-b border-dotted border-gray-400 focus:outline-none focus:border-<%= @pagina.base_color %>-500 mb-2" data-fill-blanks-target="input" data-answer="orticello"><br>
              <input type="text" class="w-full bg-transparent border-b border-dotted border-gray-400 focus:outline-none focus:border-<%= @pagina.base_color %>-500 mb-2" data-fill-blanks-target="input" data-answer="mostriciattolo"><br>
              <input type="text" class="w-full bg-transparent border-b border-dotted border-gray-400 focus:outline-none focus:border-<%= @pagina.base_color %>-500 mb-2" data-fill-blanks-target="input" data-answer="anellino"><br>
              <input type="text" class="w-full bg-transparent border-b border-dotted border-gray-400 focus:outline-none focus:border-<%= @pagina.base_color %>-500 mb-2" data-fill-blanks-target="input" data-answer="vasetto"><br>
              <input type="text" class="w-full bg-transparent border-b border-dotted border-gray-400 focus:outline-none focus:border-<%= @pagina.base_color %>-500" data-fill-blanks-target="input" data-answer="patatina">
            </td>
            <td class="border border-gray-300 px-4 py-3 bg-white align-top">
              <input type="text" class="w-full bg-transparent border-b border-dotted border-gray-400 focus:outline-none focus:border-<%= @pagina.base_color %>-500 mb-2" data-fill-blanks-target="input" data-answer="castelluzzo"><br>
              <input type="text" class="w-full bg-transparent border-b border-dotted border-gray-400 focus:outline-none focus:border-<%= @pagina.base_color %>-500 mb-2" data-fill-blanks-target="input" data-answer="porticciolo"><br>
              <input type="text" class="w-full bg-transparent border-b border-dotted border-gray-400 focus:outline-none focus:border-<%= @pagina.base_color %>-500 mb-2" data-fill-blanks-target="input" data-answer="casuccia"><br>
              <input type="text" class="w-full bg-transparent border-b border-dotted border-gray-400 focus:outline-none focus:border-<%= @pagina.base_color %>-500" data-fill-blanks-target="input" data-answer="volpacchiotto">
            </td>
            <td class="border border-gray-300 px-4 py-3 bg-<%= @pagina.base_color %>-50 align-top">
              <input type="text" class="w-full bg-transparent border-b border-dotted border-gray-400 focus:outline-none focus:border-<%= @pagina.base_color %>-500 mb-2" data-fill-blanks-target="input" data-answer="stradaccia"><br>
              <input type="text" class="w-full bg-transparent border-b border-dotted border-gray-400 focus:outline-none focus:border-<%= @pagina.base_color %>-500 mb-2" data-fill-blanks-target="input" data-answer="cagnaccio"><br>
              <input type="text" class="w-full bg-transparent border-b border-dotted border-gray-400 focus:outline-none focus:border-<%= @pagina.base_color %>-500 mb-2" data-fill-blanks-target="input" data-answer="zampaccia"><br>
              <input type="text" class="w-full bg-transparent border-b border-dotted border-gray-400 focus:outline-none focus:border-<%= @pagina.base_color %>-500" data-fill-blanks-target="input" data-answer="poetastro">
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <%= render 'shared/exercise_controls' %>

</div>
