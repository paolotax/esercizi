<div class="max-w-6xl mx-auto bg-white p-3 md:p-6"
     data-controller="exercise-checker text-toggle font-controls"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <%= render 'shared/page_header', pagina: @pagina %>

  <div class="space-y-6">
    <!-- SEZIONE 1: IL NOSTRO SISTEMA DI NUMERAZIONE -->
    <div class="p-4 md:p-6 bg-white border-3 border-blue-500 rounded-3xl">
      <h1 class="font-bold text-center text-blue-700 mb-6">IL NOSTRO SISTEMA DI NUMERAZIONE</h1>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Colonna 1: CARATTERISTICHE -->
        <div class="p-4 bg-cyan-50 rounded-lg">
          <h3 class="font-bold text-center text-cyan-700 mb-4">CARATTERISTICHE</h3>

          <div class="space-y-4">
            <div>
              <p class="font-bold text-pink-600 mb-2">&#8226; È POSIZIONALE:</p>
              <p class="text-gray-700 mb-2">ogni cifra ha un valore diverso a seconda della posizione che occupa nel numero.</p>
              <div class="ml-4 space-y-1">
                <p class="font-semibold"><span class="text-cyan-500">1 703</span> <span class="text-pink-600">→</span> 3 u</p>
                <p class="font-semibold"><span class="text-cyan-500">1 370</span> <span class="text-pink-600">→</span> 3 h = 300 u</p>
              </div>
            </div>

            <div>
              <p class="font-bold text-pink-600 mb-2">&#8226; È DECIMALE:</p>
              <p class="text-gray-700 mb-2">per contare si raggruppano le quantità di 10 in 10, cioè in base 10.</p>
              <div class="ml-4 space-y-1">
                <p class="font-semibold">10 u = 1 <span class="text-red-600">da</span></p>
                <p class="font-semibold">10 <span class="text-red-600">da</span> = 1 h</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Colonna 2: CIFRE e NUMERI GRANDI -->
        <div class="space-y-6">
          <!-- Box CIFRE -->
          <div class="p-4 bg-blue-50 rounded-lg">
            <h3 class="font-bold text-center text-blue-700 mb-4">CIFRE</h3>
            <div class="grid grid-cols-5 gap-2 text-center">
              <% (0..9).each do |n| %>
                <div class="px-2 py-2 bg-white rounded shadow font-bold text-blue-600"><%= n %></div>
              <% end %>
            </div>
          </div>

          <!-- Box NUMERI GRANDI -->
          <div class="p-4 bg-green-50 rounded-lg">
            <h3 class="font-bold text-center text-green-700 mb-4">NUMERI GRANDI</h3>
            <p class="text-gray-700 mb-4">I numeri sono organizzati in <span class="font-bold">classi</span>, ciascuna con tre <span class="font-bold">ordini</span> (u, da, h):</p>

            <!-- Tabella delle classi -->
            <div class="overflow-x-auto mb-4">
              <table class="w-full border-collapse">
                <thead>
                  <tr>
                    <th class="bg-orange-400 text-white border border-white px-2 py-1 text-center">classe dei<br>miliardi (G)</th>
                    <th class="bg-green-500 text-white border border-white px-2 py-1 text-center">classe dei<br>milioni (M)</th>
                    <th class="bg-blue-500 text-white border border-white px-2 py-1 text-center">classe delle<br>migliaia (k)</th>
                    <th class="bg-cyan-500 text-white border border-white px-2 py-1 text-center">classe delle<br>unità semplici</th>
                  </tr>
                </thead>
                <tbody>
                  <tr class="bg-white">
                    <td class="border border-gray-300 px-2 py-1 text-center font-mono">hG daG uG</td>
                    <td class="border border-gray-300 px-2 py-1 text-center font-mono">hM daM uM</td>
                    <td class="border border-gray-300 px-2 py-1 text-center font-mono">hk dak uk</td>
                    <td class="border border-gray-300 px-2 py-1 text-center font-mono">h da u</td>
                  </tr>
                  <tr class="bg-yellow-100 font-bold">
                    <td class="border border-gray-300 px-2 py-1 text-center"></td>
                    <td class="border border-gray-300 px-2 py-1 text-center">1</td>
                    <td class="border border-gray-300 px-2 py-1 text-center">0 3 6</td>
                    <td class="border border-gray-300 px-2 py-1 text-center">0 0 0</td>
                  </tr>
                </tbody>
              </table>
            </div>
            <p class="text-gray-600 italic">
              <span class="text-pink-600">&#8226;</span> Si legge: un <span class="font-bold">milione</span> trentasei <span class="font-bold">mila</span>
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- SEZIONE 2: I NUMERI RELATIVI -->
    <div class="p-4 md:p-6 bg-white border-3 border-blue-500 rounded-3xl">
      <h1 class="font-bold text-center text-blue-700 mb-6">I NUMERI RELATIVI</h1>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
        <!-- Colonna 1: CHE COSA SONO -->
        <div class="p-4 bg-pink-50 rounded-lg">
          <h3 class="font-bold text-center text-pink-700 mb-4">CHE COSA SONO</h3>
          <div class="space-y-3">
            <p><span class="font-bold text-pink-600">&#8226;</span> Numeri preceduti dal segno +:<br>
              numeri <span class="font-bold text-blue-600">POSITIVI</span>.</p>
            <p><span class="font-bold text-pink-600">&#8226;</span> Numeri preceduti dal segno –:<br>
              numeri <span class="font-bold text-red-600">NEGATIVI</span>.</p>
          </div>
        </div>

        <!-- Colonna 2: COME SI SCRIVONO E SI LEGGONO -->
        <div class="p-4 bg-purple-50 rounded-lg">
          <h3 class="font-bold text-center text-purple-700 mb-4">COME SI SCRIVONO E SI LEGGONO</h3>
          <div class="space-y-4">
            <div class="p-3 bg-white rounded shadow text-center">
              <p class="font-bold"><span class="text-blue-600">+ 2</span> <span class="text-pink-600">→</span> <span class="text-gray-700">più due</span></p>
            </div>
            <div class="p-3 bg-white rounded shadow text-center">
              <p class="font-bold"><span class="text-red-600">– 2</span> <span class="text-pink-600">→</span> <span class="text-gray-700">meno due</span></p>
            </div>
          </div>
        </div>
      </div>

      <!-- COME SI ORDINANO -->
      <div class="p-4 bg-yellow-50 rounded-lg">
        <h3 class="font-bold text-center text-yellow-700 mb-4">COME SI ORDINANO</h3>

        <div class="relative pt-8 pb-4">
          <!-- Etichette sopra -->
          <div class="flex justify-between font-bold px-4 mb-4">
            <span class="text-red-600">← NUMERI NEGATIVI</span>
            <span class="text-blue-600">NUMERI POSITIVI →</span>
          </div>

          <!-- Linea dei numeri -->
          <div class="flex justify-between items-center font-semibold px-2 py-3 bg-white rounded border-2 border-gray-300 overflow-x-auto">
            <span class="text-gray-500">←</span>
            <% (-9..9).each do |n| %>
              <% if n < 0 %>
                <span class="text-red-600 px-1"><%= "– #{n.abs}" %></span>
              <% elsif n == 0 %>
                <span class="bg-gray-700 text-white px-2 py-1 rounded font-bold">0</span>
              <% else %>
                <span class="text-blue-600 px-1"><%= "+#{n}" %></span>
              <% end %>
            <% end %>
            <span class="text-gray-500">→</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Exercise Controls -->
    <%= render 'shared/exercise_controls', color: 'blue' %>
  </div>
</div>
