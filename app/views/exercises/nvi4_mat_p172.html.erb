<div class="max-w-6xl mx-auto bg-white p-3 md:p-6"
     data-controller="exercise-checker text-toggle font-controls"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <%= render 'shared/page_header', pagina: @pagina %>

  <div class="space-y-6">

    <!-- Box schema valori -->
    <div class="p-4 bg-cyan-50 rounded-lg">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 items-center">
        <table class="border-collapse border border-cyan-400">
          <thead>
            <tr>
              <th class="p-2 border border-cyan-400 bg-cyan-100 text-center">uk</th>
              <th class="p-2 border border-cyan-400 bg-cyan-100 text-center">h</th>
              <th class="p-2 border border-cyan-400 bg-cyan-100 text-center">da</th>
              <th class="p-2 border border-cyan-400 bg-cyan-100 text-center">u</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td class="p-2 border border-cyan-400 text-center bg-white font-bold"><span class="whitespace-nowrap">1 000</span> u</td>
              <td class="p-2 border border-cyan-400 text-center bg-white font-bold">100 u</td>
              <td class="p-2 border border-cyan-400 text-center bg-white font-bold">10 u</td>
              <td class="p-2 border border-cyan-400 text-center bg-white font-bold">1 u</td>
            </tr>
          </tbody>
        </table>
        <div class="space-y-1">
          <p class="text-gray-700"><span class="font-bold">1</span> da = <span class="font-bold text-cyan-600">10</span> u</p>
          <p class="text-gray-700"><span class="font-bold">1</span> h = <span class="font-bold text-cyan-600">10</span> da = <span class="font-bold text-cyan-600">100</span> u</p>
          <p class="text-gray-700"><span class="font-bold">1</span> uk = <span class="font-bold text-cyan-600">10</span> h = <span class="font-bold text-cyan-600">100</span> da = <span class="font-bold text-cyan-600 whitespace-nowrap">1 000</span> u</p>
        </div>
      </div>
    </div>

    <!-- Esercizio 1: IMPARARE TUTTI -->
    <div class="p-4 bg-white rounded-2xl border-3 border-yellow-400">
      <p class="font-bold text-gray-700 mb-4">
        <%= imparare_tutti_badge(1) %>
        Scrivi i numeri in lettere o in cifre. Poi trascrivili in ordine decrescente.
      </p>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Colonna sinistra: numeri -> lettere -->
        <div class="space-y-3">
          <div class="flex items-center gap-2 p-2 bg-cyan-50 rounded">
            <span class="font-bold whitespace-nowrap">4 692</span>
            <span class="font-bold text-cyan-600">quattromilaseicentonovantadue</span>
          </div>
          <div class="flex items-center gap-2">
            <span class="font-bold whitespace-nowrap">3 081</span>
            <input type="text" data-correct-answer="tremilazeroottantuno" class="min-w-0 flex-1 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent" placeholder="...">
          </div>
          <div class="flex items-center gap-2">
            <span class="font-bold whitespace-nowrap">7 803</span>
            <input type="text" data-correct-answer="settemilaottocentotre" class="min-w-0 flex-1 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent" placeholder="...">
          </div>
          <div class="flex items-center gap-2">
            <span class="font-bold whitespace-nowrap">9 201</span>
            <input type="text" data-correct-answer="novemiladuecentouno" class="min-w-0 flex-1 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent" placeholder="...">
          </div>
        </div>

        <!-- Colonna destra: lettere -> numeri -->
        <div class="space-y-3">
          <div class="flex items-center gap-2 p-2 bg-cyan-50 rounded">
            <span>seimilasettecentonove</span>
            <span class="text-cyan-500">→</span>
            <span class="font-bold text-cyan-600 whitespace-nowrap">6 709</span>
          </div>
          <div class="flex items-center gap-2">
            <span>duemiladuecentosessanta</span>
            <span class="text-cyan-500">→</span>
            <input type="text" data-correct-answer="2260" class="w-16 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
          </div>
          <div class="flex items-center gap-2">
            <span>ottomilaottantasette</span>
            <span class="text-cyan-500">→</span>
            <input type="text" data-correct-answer="8087" class="w-16 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
          </div>
          <div class="flex items-center gap-2">
            <span>cinquemilanovecento</span>
            <span class="text-cyan-500">→</span>
            <input type="text" data-correct-answer="5900" class="w-16 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
          </div>
        </div>
      </div>

      <!-- Ordine decrescente -->
      <div class="mt-6">
        <p class="text-gray-600 mb-2">Ordine decrescente:</p>
        <div class="flex flex-wrap items-center gap-2">
          <span class="font-bold text-cyan-600 whitespace-nowrap">9 201</span>
          <span class="text-cyan-500">></span>
          <input type="text" data-correct-answer="8087" class="w-16 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
          <span class="text-cyan-500">></span>
          <input type="text" data-correct-answer="7803" class="w-16 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
          <span class="text-cyan-500">></span>
          <input type="text" data-correct-answer="6709" class="w-16 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
          <span class="text-cyan-500">></span>
          <input type="text" data-correct-answer="5900" class="w-16 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
          <span class="text-cyan-500">></span>
          <input type="text" data-correct-answer="4692" class="w-16 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
          <span class="text-cyan-500">></span>
          <input type="text" data-correct-answer="3081" class="w-16 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
          <span class="text-cyan-500">></span>
          <input type="text" data-correct-answer="2260" class="w-16 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
        </div>
      </div>
    </div>

    <!-- Esercizio 2: Vero o Falso -->
    <div>
      <p class="font-bold text-gray-700 mb-4">
        <%= numero_esercizio_badge(2) %>
        Vero (V) o falso (F)? Segna con una X.
      </p>

      <div class="space-y-3">
        <% [
          { num: "5 936", op: ">", scomp: "5 uk + 9 da + 3 h + 6 u", correct: false, name: "vf1" },
          { num: "8 094", op: "<", scomp: "8 uk + 0 da + 4 u + 9 h", correct: true, name: "vf2" },
          { num: "7 412", op: "=", scomp: "2 u + 4 h + 1 da + 7 uk", correct: true, name: "vf3" },
          { num: "6 765", op: ">", scomp: "6 uk + 7 da + 6 h + 5 u", correct: false, name: "vf4" }
        ].each do |item| %>
          <div class="flex items-center justify-between gap-4 flex-wrap bg-white p-3 rounded border border-gray-200">
            <span class="text-gray-700">
              <span class="font-bold whitespace-nowrap"><%= item[:num] %></span>
              <span class="font-bold text-cyan-600 px-2"><%= item[:op] %></span>
              <span><%= item[:scomp] %></span>
            </span>
            <div class="flex gap-2">
              <label class="relative flex items-center justify-center w-8 h-8 bg-white border-2 border-cyan-500 rounded cursor-pointer hover:bg-cyan-100 has-checked:bg-cyan-300">
                <input type="radio" name="<%= item[:name] %>" class="absolute inset-0 opacity-0 cursor-pointer" data-correct-answer="<%= !item[:correct] %>">
                <span>V</span>
              </label>
              <label class="relative flex items-center justify-center w-8 h-8 bg-white border-2 border-cyan-500 rounded cursor-pointer hover:bg-cyan-100 has-checked:bg-cyan-300">
                <input type="radio" name="<%= item[:name] %>" class="absolute inset-0 opacity-0 cursor-pointer" data-correct-answer="<%= item[:correct] %>">
                <span>F</span>
              </label>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Esercizio 3: Calcola -->
    <div>
      <p class="font-bold text-gray-700 mb-4">
        <%= numero_esercizio_badge(3) %>
        Calcola in colonna sul quaderno, poi trascrivi i risultati.
      </p>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div class="flex items-center gap-2 bg-white p-3 rounded border border-gray-200">
          <span>948 + 2 075 =</span>
          <input type="text" data-correct-answer="3023" class="w-20 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
        </div>
        <div class="flex items-center gap-2 bg-white p-3 rounded border border-gray-200">
          <span>6 315 – 1 206 =</span>
          <input type="text" data-correct-answer="5109" class="w-20 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
        </div>
        <div class="flex items-center gap-2 bg-white p-3 rounded border border-gray-200">
          <span>56 × 28 =</span>
          <input type="text" data-correct-answer="1568" class="w-20 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
        </div>
        <div class="flex items-center gap-2 bg-white p-3 rounded border border-gray-200">
          <span>4 767 : 7 =</span>
          <input type="text" data-correct-answer="681" class="w-20 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
        </div>
      </div>
    </div>

    <!-- Esercizio 4: Problemi -->
    <div>
      <p class="font-bold text-gray-700 mb-4">
        <%= numero_esercizio_badge(4) %>
        Per ciascun problema colora la casella con l'operazione che lo risolve e calcola.
      </p>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Problema a -->
        <div class="bg-white p-4 rounded-lg border border-gray-200">
          <p class="text-gray-700 mb-3">
            <span class="font-bold text-cyan-600">a.</span> Un falegname ha comprato 8 scatole di viti. Ogni scatola ne contiene 64. Quante viti ha comprato il falegname?
          </p>
          <div class="flex gap-4">
            <label class="flex-1 relative flex items-center justify-center p-3 bg-white border-2 border-cyan-400 rounded cursor-pointer hover:bg-cyan-100 has-checked:bg-cyan-300">
              <input type="radio" name="prob_a" class="absolute inset-0 opacity-0 cursor-pointer" data-correct-answer="true">
              <span>64 × 8 = <input type="text" data-correct-answer="512" class="w-14 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent"></span>
            </label>
            <label class="flex-1 relative flex items-center justify-center p-3 bg-white border-2 border-cyan-400 rounded cursor-pointer hover:bg-cyan-100 has-checked:bg-cyan-300">
              <input type="radio" name="prob_a" class="absolute inset-0 opacity-0 cursor-pointer" data-correct-answer="false">
              <span>64 : 8 = ...</span>
            </label>
          </div>
        </div>

        <!-- Problema b -->
        <div class="bg-white p-4 rounded-lg border border-gray-200">
          <p class="text-gray-700 mb-3">
            <span class="font-bold text-cyan-600">b.</span> Mattia ha 12 anni, 6 in meno di suo cugino Lorenzo. Quanti anni ha Lorenzo?
          </p>
          <div class="flex gap-4">
            <label class="flex-1 relative flex items-center justify-center p-3 bg-white border-2 border-cyan-400 rounded cursor-pointer hover:bg-cyan-100 has-checked:bg-cyan-300">
              <input type="radio" name="prob_b" class="absolute inset-0 opacity-0 cursor-pointer" data-correct-answer="false">
              <span>12 – 6 = ...</span>
            </label>
            <label class="flex-1 relative flex items-center justify-center p-3 bg-white border-2 border-cyan-400 rounded cursor-pointer hover:bg-cyan-100 has-checked:bg-cyan-300">
              <input type="radio" name="prob_b" class="absolute inset-0 opacity-0 cursor-pointer" data-correct-answer="true">
              <span>12 + 6 = <input type="text" data-correct-answer="18" class="w-10 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent"></span>
            </label>
          </div>
        </div>

        <!-- Problema c -->
        <div class="bg-white p-4 rounded-lg border border-gray-200">
          <p class="text-gray-700 mb-3">
            <span class="font-bold text-cyan-600">c.</span> Un contadino ha raccolto 57 kg di ciliegie. Ne butta via 12 kg perché sono marce. Quanti chilogrammi ha ora il contadino?
          </p>
          <div class="flex gap-4">
            <label class="flex-1 relative flex items-center justify-center p-3 bg-white border-2 border-cyan-400 rounded cursor-pointer hover:bg-cyan-100 has-checked:bg-cyan-300">
              <input type="radio" name="prob_c" class="absolute inset-0 opacity-0 cursor-pointer" data-correct-answer="false">
              <span>57 + 12 = ...</span>
            </label>
            <label class="flex-1 relative flex items-center justify-center p-3 bg-white border-2 border-cyan-400 rounded cursor-pointer hover:bg-cyan-100 has-checked:bg-cyan-300">
              <input type="radio" name="prob_c" class="absolute inset-0 opacity-0 cursor-pointer" data-correct-answer="true">
              <span>57 – 12 = <input type="text" data-correct-answer="45" class="w-10 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent"></span>
            </label>
          </div>
        </div>

        <!-- Problema d -->
        <div class="bg-white p-4 rounded-lg border border-gray-200">
          <p class="text-gray-700 mb-3">
            <span class="font-bold text-cyan-600">d.</span> Sara deve leggere un libro di 128 pagine. Se legge 8 pagine al giorno, in quanti giorni termina la lettura?
          </p>
          <div class="flex gap-4">
            <label class="flex-1 relative flex items-center justify-center p-3 bg-white border-2 border-cyan-400 rounded cursor-pointer hover:bg-cyan-100 has-checked:bg-cyan-300">
              <input type="radio" name="prob_d" class="absolute inset-0 opacity-0 cursor-pointer" data-correct-answer="false">
              <span>128 × 8 = ...</span>
            </label>
            <label class="flex-1 relative flex items-center justify-center p-3 bg-white border-2 border-cyan-400 rounded cursor-pointer hover:bg-cyan-100 has-checked:bg-cyan-300">
              <input type="radio" name="prob_d" class="absolute inset-0 opacity-0 cursor-pointer" data-correct-answer="true">
              <span>128 : 8 = <input type="text" data-correct-answer="16" class="w-10 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent"></span>
            </label>
          </div>
        </div>
      </div>
    </div>

    <%= render 'shared/exercise_controls' %>
  </div>
</div>
