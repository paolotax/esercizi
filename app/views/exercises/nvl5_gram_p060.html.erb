<div class="max-w-6xl mx-auto p-3 md:p-8 bg-white" data-controller="exercise-checker">

  <%= render 'shared/page_header', pagina: @pagina %>

  <!-- Info Box -->
  <div class="bg-<%= @pagina.base_color %>-50 p-4 md:p-6 pb-8 rounded-lg">
    <p class="text-base md:text-lg text-gray-700 mb-3">
      <span class="text-<%= @pagina.base_color %>-500">•</span> Gli <strong>interrogativi/esclamativi</strong> si usano in domande ed esclamazioni.
    </p>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-base md:text-lg">
      <div>
        <p class="font-bold text-red-600 mb-2">Aggettivi:</p>
        <p class="text-gray-700">quale?, quanto?, che? / quale!, quanto!, che!</p>
      </div>
      <div>
        <p class="font-bold text-blue-600 mb-2">Pronomi:</p>
        <p class="text-gray-700">chi?, che (che cosa)?, quale?, quanto? / chi!, che!, quale!, quanto!</p>
      </div>
    </div>
  </div>

  <!-- Exercise 1: IMPARARE TUTTI -->
  <div class="bg-white p-4 md:p-6 pb-8" data-controller="multiple-choice">
    <h2 class="text-lg md:text-xl font-bold mb-4 flex items-center gap-2">
      <span class="flex-shrink-0 bg-<%= @pagina.base_color %>-500 text-white rounded-full w-8 h-8 md:w-10 md:h-10 inline-flex items-center justify-center">1</span>
      Indica se l'aggettivo evidenziato è interrogativo (I) o esclamativo (E).
    </h2>

    <% ie_sentences = [
      { text: "<strong>Quale</strong> film ti piace di più?", correct: "I" },
      { text: "<strong>Che</strong> bell'idea!", correct: "E" },
      { text: "<strong>Quanta</strong> gente c'è in spiaggia!", correct: "E" },
      { text: "<strong>Quanti</strong> anni hai?", correct: "I" }
    ] %>

    <div class="space-y-3 text-base md:text-lg">
      <% ie_sentences.each_with_index do |item, index| %>
        <div class="rounded-lg p-3">
          <div class="flex flex-col md:flex-row md:items-center justify-between gap-3">
            <p class="text-gray-700"><span class="text-<%= @pagina.base_color %>-500">•</span> <%= raw item[:text] %></p>
            <div class="flex gap-2">
              <label class="inline-flex items-center gap-1 cursor-pointer">
                <input type="radio" name="ie_<%= index %>" value="I" class="w-4 h-4" data-multiple-choice-target="input" data-answer="<%= item[:correct] %>">
                <span class="bg-blue-200 text-blue-700 font-bold px-3 py-1 rounded">I</span>
              </label>
              <label class="inline-flex items-center gap-1 cursor-pointer">
                <input type="radio" name="ie_<%= index %>" value="E" class="w-4 h-4" data-multiple-choice-target="input" data-answer="<%= item[:correct] %>">
                <span class="bg-orange-200 text-orange-700 font-bold px-3 py-1 rounded">E</span>
              </label>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Exercise 2: Complete sentences -->
  <div class="bg-white p-4 md:p-6 pb-8" data-controller="fill-blanks">
    <h2 class="text-lg md:text-xl font-bold mb-4 flex items-center gap-2">
      <span class="flex-shrink-0 bg-<%= @pagina.base_color %>-500 text-white rounded-full w-8 h-8 md:w-10 md:h-10 inline-flex items-center justify-center">2</span>
      Completa le frasi con interrogativi o esclamativi adatti.
    </h2>

    <% interr_sentences = [
      { answer: "Che", continuation: "cosa stai guardando?" },
      { answer: "Quale", continuation: "macchina preferisci?" },
      { answer: "Quanto", continuation: "tempo ci vuole per arrivare?" }
    ] %>

    <div class="space-y-3 text-base md:text-lg">
      <% interr_sentences.each do |item| %>
        <div class="rounded-lg p-3 flex flex-wrap items-center gap-2">
          <span class="text-<%= @pagina.base_color %>-500">•</span>
          <input type="text"
                 class="w-28 border-b-2 border-dotted border-<%= @pagina.base_color %>-500 bg-white text-right px-2 focus:outline-none focus:border-<%= @pagina.base_color %>-700"
                 data-fill-blanks-target="input"
                 data-answer="<%= item[:answer] %>"
                 data-correct-answer="<%= item[:answer] %>">
          <span class="text-gray-700"><%= item[:continuation] %></span>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Divider -->
  <div class="my-8 border-t-2 border-<%= @pagina.base_color %>-200"></div>

  <!-- Second section: Numerali -->
  <div class="mb-4">
    <h1 class="text-2xl sm:text-3xl font-bold text-<%= @pagina.base_color %>-600">Aggettivi e pronomi numerali</h1>
  </div>

  <!-- Info Box Numerali -->
  <div class="bg-<%= @pagina.base_color %>-50 p-4 md:p-6 pb-8 rounded-lg">
    <p class="text-base md:text-lg text-gray-700 mb-3">
      <span class="text-<%= @pagina.base_color %>-500">•</span> I <strong>numerali</strong> esprimono quantità o posizione (cardinali, ordinali, moltiplicativi).
    </p>
    <div class="space-y-2 text-base md:text-lg text-gray-700 ml-6">
      <p><span class="text-red-500">•</span> Gli <strong class="text-red-600">aggettivi numerali</strong> accompagnano il nome → due quaderni.</p>
      <p><span class="text-blue-500">•</span> I <strong class="text-blue-600">pronomi numerali</strong> lo sostituiscono → uno è a quadretti, il primo della fila...</p>
    </div>
  </div>

  <!-- Illustration -->
  <div class="bg-white p-4 md:p-6 pb-8">
    <%= image_tag "nvl5_gram/p060/p060_01.jpg", alt: "Illustrazione numerali", class: "w-full max-w-md mx-auto rounded-lg" %>
  </div>

  <!-- Exercise 1 Numerali: Underline -->
  <div class="bg-white p-4 md:p-6 pb-8" data-controller="word-highlighter" data-word-highlighter-multi-color-value="true">
    <h2 class="text-lg md:text-xl font-bold mb-4 flex items-center gap-2">
      <span class="flex-shrink-0 bg-<%= @pagina.base_color %>-500 text-white rounded-full w-8 h-8 md:w-10 md:h-10 inline-flex items-center justify-center">1</span>
      Clicca sugli aggettivi numerali<span class="inline-block w-5 h-5 bg-red-300 rounded ml-1 cursor-pointer" data-word-highlighter-target="colorBox" data-color="red" data-action="click->word-highlighter#selectColor"></span> e sui pronomi numerali<span class="inline-block w-5 h-5 bg-blue-300 rounded ml-1 cursor-pointer" data-word-highlighter-target="colorBox" data-color="blue" data-action="click->word-highlighter#selectColor"></span>.
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-base md:text-lg cursor-pointer">
      <div class="bg-<%= @pagina.base_color %>-50 rounded-lg p-4 space-y-3">
        <p class="text-gray-700"><span class="text-<%= @pagina.base_color %>-500">•</span> Il <span class="transition" data-word-highlighter-target="word" data-action="click->word-highlighter#toggleHighlight" data-correct="blue">primo</span> e l'<span class="transition" data-word-highlighter-target="word" data-action="click->word-highlighter#toggleHighlight" data-correct="blue">ultimo</span> della fila devono portare la bandiera.</p>
        <p class="text-gray-700"><span class="text-<%= @pagina.base_color %>-500">•</span> Ho <span class="transition" data-word-highlighter-target="word" data-action="click->word-highlighter#toggleHighlight" data-correct="red">venti</span> figurine doppie, tu ne hai <span class="transition" data-word-highlighter-target="word" data-action="click->word-highlighter#toggleHighlight" data-correct="blue">diciotto</span>.</p>
      </div>
      <div class="bg-<%= @pagina.base_color %>-50 rounded-lg p-4 space-y-3">
        <p class="text-gray-700"><span class="text-<%= @pagina.base_color %>-500">•</span> Ho mangiato <span class="transition" data-word-highlighter-target="word" data-action="click->word-highlighter#toggleHighlight" data-correct="red">quattro</span> biscotti, il <span class="transition" data-word-highlighter-target="word" data-action="click->word-highlighter#toggleHighlight" data-correct="red">doppio</span> di te.</p>
        <p class="text-gray-700"><span class="text-<%= @pagina.base_color %>-500">•</span> Ci sono <span class="transition" data-word-highlighter-target="word" data-action="click->word-highlighter#toggleHighlight" data-correct="red">milioni</span> di stelle nell'universo.</p>
      </div>
    </div>
  </div>

  <!-- Exercise 2 Numerali: Complete table -->
  <div class="bg-white p-4 md:p-6 pb-8" data-controller="fill-blanks">
    <h2 class="text-lg md:text-xl font-bold mb-4 flex items-center gap-2">
      <span class="flex-shrink-0 bg-<%= @pagina.base_color %>-500 text-white rounded-full w-8 h-8 md:w-10 md:h-10 inline-flex items-center justify-center">2</span>
      Completa con numerali e indica se sono cardinali (C), ordinali (O) o moltiplicativi (M).
    </h2>

    <% num_sentences = [
      { text: "Ho pagato il", answer: "doppio", continuation: "di te." },
      { text: "Il", answer: "primo", continuation: "giorno di scuola è sempre emozionante." },
      { text: "Abbiamo percorso", answer: "ventiquattro", continuation: "chilometri." }
    ] %>

    <div class="space-y-3 text-base md:text-lg">
      <% num_sentences.each_with_index do |item, index| %>
        <div class="rounded-lg p-3">
          <div class="flex flex-col md:flex-row md:items-center justify-between gap-3">
            <div class="flex-1 flex flex-wrap items-center gap-2">
              <span class="text-<%= @pagina.base_color %>-500">•</span>
              <span class="text-gray-700"><%= item[:text] %></span>
              <input type="text"
                     class="w-32 border-b-2 border-dotted border-<%= @pagina.base_color %>-500 bg-white text-right px-2 focus:outline-none focus:border-<%= @pagina.base_color %>-700"
                     data-fill-blanks-target="input"
                     data-answer="<%= item[:answer] %>"
                     data-correct-answer="<%= item[:answer] %>">
              <span class="text-gray-700"><%= item[:continuation] %></span>
            </div>
            <div class="flex gap-2">
              <label class="inline-flex items-center gap-1">
                <input type="radio" name="num<%= index %>" value="C" class="w-4 h-4">
                <span class="font-bold">C</span>
              </label>
              <label class="inline-flex items-center gap-1">
                <input type="radio" name="num<%= index %>" value="O" class="w-4 h-4">
                <span class="font-bold">O</span>
              </label>
              <label class="inline-flex items-center gap-1">
                <input type="radio" name="num<%= index %>" value="M" class="w-4 h-4">
                <span class="font-bold">M</span>
              </label>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Exercise 3: Write sentences -->
  <div class="bg-white p-4 md:p-6 pb-8">
    <h2 class="text-lg md:text-xl font-bold mb-4 flex items-center gap-2">
      <span class="flex-shrink-0 bg-<%= @pagina.base_color %>-500 text-white rounded-full w-8 h-8 md:w-10 md:h-10 inline-flex items-center justify-center">3</span>
      Scrivi una frase con: doppio, primo, ventiquattro.
    </h2>

    <div class="space-y-4 text-base md:text-lg">
      <% ['doppio', 'primo', 'ventiquattro'].each do |word| %>
        <div class="rounded-lg p-3">
          <p class="font-semibold text-gray-700 mb-2"><%= word %>:</p>
          <textarea class="w-full border-2 border-<%= @pagina.base_color %>-200 rounded-lg px-3 py-2 focus:outline-none focus:border-<%= @pagina.base_color %>-500"
                    rows="2"
                    placeholder="Scrivi qui la tua frase..."></textarea>
        </div>
      <% end %>
    </div>
  </div>

  <div class="text-right text-sm text-gray-500 mb-6">
    Esercizi p. <%= link_to "160", pagina_path("nvl5_gram_p160"), class: "text-gray-600 hover:text-gray-800 underline" %>
  </div>

  <%= render 'shared/exercise_controls' %>
</div>
