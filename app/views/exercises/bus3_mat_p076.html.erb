<% content_for :titolo, "#{@pagina.titolo} - #{@pagina.numero}" %>

<div class="max-w-7xl mx-auto p-3 md:p-6 bg-white dark:bg-gray-900 text-black dark:text-white transition-colors duration-300 font-mono"
     data-controller="exercise-checker fill-blanks auto-advance page-viewer text-toggle font-controls"
     data-page-viewer-image-url-value="<%= asset_path('bus3_mat/p076/page.png') %>"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <!-- Header -->
  <%= render 'shared/page_header', pagina: @pagina %>

  <!-- Esercizio 1 - Osserva i disegni e completa -->
  <div class="p-4 md:p-6 mb-8">
    <div class="flex items-start gap-3 mb-6">
      <div class="bg-red-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0">
        1
      </div>
      <p class="text-gray-700 dark:text-gray-200">
        <strong>Osserva i disegni e completa, come nell'esempio.</strong>
      </p>
    </div>

    <!-- Immagine esercizio 1 -->
    <div class="mb-6">
      <div class="dark:bg-white rounded-xl p-1">
        <%= image_tag "p76_01.jpg",
            alt: "Esercizio 1: Figure geometriche divise in parti uguali",
            class: "w-full h-auto rounded-lg" %>
      </div>
    </div>

    <!-- Inputs per le frazioni -->
    <div class="grid grid-cols-2 md:grid-cols-5 gap-4 mb-6">
      <!-- 1/4 già mostrato nell'immagine -->
      <div class="flex flex-col items-center">
        <div class="h-16"></div> <!-- Spazio vuoto per la prima già compilata -->
      </div>

      <!-- Stella - 1/5 -->
      <div class="flex flex-col items-center gap-2">
        <input type="text"
               data-correct-answer="1/5"
               class="w-20 px-2 py-2 border-2 border-blue-300 dark:border-blue-500 rounded text-center font-bold bg-white dark:bg-gray-700 dark:text-white"
               placeholder="..." />
        <input type="text"
               data-correct-answer="un quinto"
               class="w-full px-2 py-1 border-2 border-blue-300 dark:border-blue-500 rounded text-center bg-white dark:bg-gray-700 dark:text-white"
               placeholder="..." />
      </div>

      <!-- Esagono - 1/6 -->
      <div class="flex flex-col items-center gap-2">
        <input type="text"
               data-correct-answer="1/6"
               class="w-20 px-2 py-2 border-2 border-blue-300 dark:border-blue-500 rounded text-center font-bold bg-white dark:bg-gray-700 dark:text-white"
               placeholder="..." />
        <input type="text"
               data-correct-answer="un sesto"
               class="w-full px-2 py-1 border-2 border-blue-300 dark:border-blue-500 rounded text-center bg-white dark:bg-gray-700 dark:text-white"
               placeholder="..." />
      </div>

      <!-- Cerchio - 1/8 -->
      <div class="flex flex-col items-center gap-2">
        <input type="text"
               data-correct-answer="1/8"
               class="w-20 px-2 py-2 border-2 border-blue-300 dark:border-blue-500 rounded text-center font-bold bg-white dark:bg-gray-700 dark:text-white"
               placeholder="..." />
        <input type="text"
               data-correct-answer="un ottavo"
               class="w-full px-2 py-1 border-2 border-blue-300 dark:border-blue-500 rounded text-center bg-white dark:bg-gray-700 dark:text-white"
               placeholder="..." />
      </div>

      <!-- Griglia - 1/12 -->
      <div class="flex flex-col items-center gap-2">
        <input type="text"
               data-correct-answer="1/12"
               class="w-20 px-2 py-2 border-2 border-blue-300 dark:border-blue-500 rounded text-center font-bold bg-white dark:bg-gray-700 dark:text-white"
               placeholder="..." />
        <input type="text"
               data-correct-answer="un dodicesimo"
               class="w-full px-2 py-1 border-2 border-blue-300 dark:border-blue-500 rounded text-center bg-white dark:bg-gray-700 dark:text-white"
               placeholder="..." />
      </div>
    </div>

    <!-- Frase da completare -->
    <div class="bg-gray-50 dark:bg-gray-800 rounded p-4 mb-6">
      <p class="text-gray-700 dark:text-gray-200 leading-relaxed">
        • Tutte queste figure sono divise in parti
        <input type="text"
               data-correct-answer="uguali"
               class="inline-block w-32 px-3 py-2 border-2 border-blue-300 dark:border-blue-500 rounded text-center font-bold mx-1 bg-white dark:bg-gray-700 dark:text-white"
               placeholder="..." />
        e solo
        <input type="text"
               data-correct-answer="una"
               class="inline-block w-24 px-3 py-2 border-2 border-blue-300 dark:border-blue-500 rounded text-center font-bold mx-1 bg-white dark:bg-gray-700 dark:text-white"
               placeholder="..." />
        parte è colorata.
      </p>
    </div>

    <!-- Box informativo -->
    <div class="p-4 bg-[#FFF9E6] dark:bg-yellow-900/30 border-l-4 border-yellow-400 dark:border-yellow-500">
      <p class="font-semibold text-gray-800 dark:text-gray-100">
        Tutte le frazioni che hanno <span class="text-cyan-600 dark:text-cyan-400 font-bold">1 al numeratore</span> si chiamano <span class="text-cyan-600 dark:text-cyan-400 font-bold">unità frazionarie</span>.
      </p>
    </div>
  </div>

  <!-- Esercizio 2 - Collega l'unità frazionaria -->
  <div class="p-4 md:p-6 mb-8">
    <div class="flex items-start gap-3 mb-6">
      <div class="bg-red-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0">
        2
      </div>
      <p class="text-gray-700 dark:text-gray-200">
        <strong>Collega l'unità frazionaria alla sua rappresentazione.</strong>
      </p>
    </div>

    <!-- Immagine esercizio 2 -->
    <div class="mb-6 flex justify-center">
      <div class="dark:bg-white rounded-xl p-1">
        <%= image_tag "p76_02.jpg",
            alt: "Esercizio 2: Collega le frazioni ai cerchi",
            class: "w-full h-auto max-w-md rounded-lg" %>
      </div>
    </div>

    <!-- Dropdowns per collegare -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-3xl mx-auto">
      <div class="bg-gray-50 dark:bg-gray-800 rounded p-4">
        <p class="text-center font-bold text-cyan-600 dark:text-cyan-400 mb-3">1/7</p>
        <p class="text-center text-gray-600 dark:text-gray-400 mb-3">Quale cerchio?</p>
        <select class="w-full px-4 py-2 border-2 border-gray-300 dark:border-gray-500 rounded font-bold bg-white dark:bg-gray-700 dark:text-white" data-correct-answer="primo">
          <option value="">Scegli...</option>
          <option value="primo">Primo cerchio</option>
          <option value="secondo">Secondo cerchio</option>
          <option value="terzo">Terzo cerchio</option>
        </select>
      </div>

      <div class="bg-gray-50 dark:bg-gray-800 rounded p-4">
        <p class="text-center font-bold text-cyan-600 dark:text-cyan-400 mb-3">1/10</p>
        <p class="text-center text-gray-600 dark:text-gray-400 mb-3">Quale cerchio?</p>
        <select class="w-full px-4 py-2 border-2 border-gray-300 dark:border-gray-500 rounded font-bold bg-white dark:bg-gray-700 dark:text-white" data-correct-answer="secondo">
          <option value="">Scegli...</option>
          <option value="primo">Primo cerchio</option>
          <option value="secondo">Secondo cerchio</option>
          <option value="terzo">Terzo cerchio</option>
        </select>
      </div>

      <div class="bg-gray-50 dark:bg-gray-800 rounded p-4">
        <p class="text-center font-bold text-cyan-600 dark:text-cyan-400 mb-3">1/5</p>
        <p class="text-center text-gray-600 dark:text-gray-400 mb-3">Quale cerchio?</p>
        <select class="w-full px-4 py-2 border-2 border-gray-300 dark:border-gray-500 rounded font-bold bg-white dark:bg-gray-700 dark:text-white" data-correct-answer="terzo">
          <option value="">Scegli...</option>
          <option value="primo">Primo cerchio</option>
          <option value="secondo">Secondo cerchio</option>
          <option value="terzo">Terzo cerchio</option>
        </select>
      </div>
    </div>
  </div>

  <!-- Esercizio 3 - Colora l'unità frazionaria -->
  <div class="p-4 md:p-6 mb-8">
    <div class="flex items-start gap-3 mb-6">
      <div class="bg-red-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0">
        3
      </div>
      <p class="text-gray-700 dark:text-gray-200">
        <strong>Colora l'unità frazionaria e scrivila in cifre e in lettere.</strong>
      </p>
    </div>

    <!-- Immagine esercizio 3 -->
    <div class="mb-6 flex justify-center">
      <div class="dark:bg-white rounded-xl p-1">
        <%= image_tag "p76_03.jpg",
            alt: "Esercizio 3: Triangolo e esagono da colorare",
            class: "w-full h-auto max-w-lg rounded-lg" %>
      </div>
    </div>

    <!-- Inputs per le risposte -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-3xl mx-auto">
      <!-- Triangolo -->
      <div class="bg-gray-50 dark:bg-gray-800 rounded p-4">
        <h3 class="text-center font-bold text-gray-700 dark:text-gray-200 mb-4">Triangolo</h3>
        <div class="space-y-3">
          <div class="flex items-center gap-2">
            <span class="font-semibold text-gray-700 dark:text-gray-300 min-w-[100px]">In cifre:</span>
            <input type="text"
                   data-correct-answer="1/9"
                   class="flex-1 px-3 py-2 border-2 border-gray-300 dark:border-gray-500 rounded text-center font-bold bg-white dark:bg-gray-700 dark:text-white"
                   placeholder="Es: 1/9" />
          </div>
          <div class="flex items-center gap-2">
            <span class="font-semibold text-gray-700 dark:text-gray-300 min-w-[100px]">In lettere:</span>
            <input type="text"
                   data-correct-answer="un nono"
                   class="flex-1 px-3 py-2 border-2 border-gray-300 dark:border-gray-500 rounded text-center bg-white dark:bg-gray-700 dark:text-white"
                   placeholder="Es: un nono" />
          </div>
        </div>
      </div>

      <!-- Esagono -->
      <div class="bg-gray-50 dark:bg-gray-800 rounded p-4">
        <h3 class="text-center font-bold text-gray-700 dark:text-gray-200 mb-4">Esagono</h3>
        <div class="space-y-3">
          <div class="flex items-center gap-2">
            <span class="font-semibold text-gray-700 dark:text-gray-300 min-w-[100px]">In cifre:</span>
            <input type="text"
                   data-correct-answer="1/8"
                   class="flex-1 px-3 py-2 border-2 border-gray-300 dark:border-gray-500 rounded text-center font-bold bg-white dark:bg-gray-700 dark:text-white"
                   placeholder="Es: 1/8" />
          </div>
          <div class="flex items-center gap-2">
            <span class="font-semibold text-gray-700 dark:text-gray-300 min-w-[100px]">In lettere:</span>
            <input type="text"
                   data-correct-answer="un ottavo"
                   class="flex-1 px-3 py-2 border-2 border-gray-300 dark:border-gray-500 rounded text-center bg-white dark:bg-gray-700 dark:text-white"
                   placeholder="Es: un ottavo" />
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Esercizio 4 GIOCO - Indica la costruzione -->
  <div class="bg-[#C7EAFB] dark:bg-cyan-900/40 p-4 md:p-6 -ml-3 md:-ml-0 -mr-3 md:mr-0 mb-8">
    <div class="flex items-start gap-3 mb-6">
      <div class="bg-red-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0">
        4
      </div>
      <div>
        <p class="text-gray-700 dark:text-gray-200">
          <strong>Osserva le tre costruzioni e indica con una <span class="text-red-600 dark:text-red-400 font-bold">X</span> in quale costruzione l'unità frazionaria</strong> <%= image_tag "p76_04.png", alt: "cubetto", class: "inline-block h-6 w-auto align-middle" %> <strong>è <span class="font-bold text-cyan-600 dark:text-cyan-400">un quindicesimo</span>.</strong>
        </p>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Costruzione A -->
      <div class="bg-white dark:bg-gray-700 rounded p-4">
        <div class="flex justify-center mb-4">
          <div class="dark:bg-white rounded-xl p-1">
            <%= image_tag "p76_05.png",
                alt: "Costruzione A",
                class: "w-48 h-auto rounded-lg" %>
          </div>
        </div>
        <div class="text-center">
          <label class="flex items-center justify-center gap-3 cursor-pointer">
            <input type="radio"
                   name="costruzione"
                   value="A"
                   data-correct-answer="false"
                   class="w-6 h-6" />
            <span class="font-bold text-gray-700 dark:text-gray-200">Costruzione A</span>
          </label>
        </div>
      </div>

      <!-- Costruzione B -->
      <div class="bg-white dark:bg-gray-700 rounded p-4">
        <div class="flex justify-center mb-4">
          <div class="dark:bg-white rounded-xl p-1">
            <%= image_tag "p76_06.png",
                alt: "Costruzione B",
                class: "w-48 h-auto rounded-lg" %>
          </div>
        </div>
        <div class="text-center">
          <label class="flex items-center justify-center gap-3 cursor-pointer">
            <input type="radio"
                   name="costruzione"
                   value="B"
                   data-correct-answer="false"
                   class="w-6 h-6" />
            <span class="font-bold text-gray-700 dark:text-gray-200">Costruzione B</span>
          </label>
        </div>
      </div>

      <!-- Costruzione C (CORRETTA - 15 blocchi) -->
      <div class="bg-white dark:bg-gray-700 rounded p-4">
        <div class="flex justify-center mb-4">
          <div class="dark:bg-white rounded-xl p-1">
            <%= image_tag "p76_07.png",
                alt: "Costruzione C",
                class: "w-48 h-auto rounded-lg" %>
          </div>
        </div>
        <div class="text-center">
          <label class="flex items-center justify-center gap-3 cursor-pointer">
            <input type="radio"
                   name="costruzione"
                   value="C"
                   data-correct-answer="true"
                   class="w-6 h-6" />
            <span class="font-bold text-gray-700 dark:text-gray-200">Costruzione C</span>
          </label>
        </div>
      </div>
    </div>

    <!-- Spiegazione sotto -->
    <div class="mt-6 p-4 bg-[#FFF9E6] dark:bg-yellow-900/30 border-l-4 border-yellow-400 dark:border-yellow-500">
      <p class="text-gray-700 dark:text-gray-200">
        <span class="font-semibold">Ricorda:</span> L'unità frazionaria 1/15 significa che il totale è diviso in 15 parti uguali e ne consideriamo 1.
      </p>
    </div>
  </div>

  <!-- Footer con controlli -->
  <%= render 'shared/exercise_controls', color: 'blue' %>
</div>
