<% content_for :titolo, "#{@pagina.titolo} - #{@pagina.numero}" %>

<div class="max-w-7xl mx-auto p-3 md:p-6 bg-white dark:bg-gray-900 text-black dark:text-white font-mono transition-colors duration-300"
     data-controller="exercise-checker page-viewer text-toggle font-controls"
     data-page-viewer-image-url-value="<%= asset_path('bus3_mat/p150/page.png') %>"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <!-- Header -->
  <%= render 'shared/page_header', pagina: @pagina %>

  <!-- Esercizio 1: Calcola in riga -->
  <div class="mb-8" data-controller="fill-blanks auto-advance">
    <div class="flex items-start gap-3 mb-4">
      <div class="flex items-center">
        <div class="bg-cyan-700 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0 z-10 relative">
          1
        </div>
        <span class="bg-yellow-300 text-cyan-700 font-bold pl-5 pr-4 py-1 rounded-r-full -ml-3">IMPARARE TUTTI</span>
      </div>
      <p class="text-gray-700 dark:text-gray-200"><strong>Calcola in riga.</strong></p>
    </div>

    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
      <!-- × 10 -->
      <div class="bg-cyan-50 dark:bg-cyan-900/30 border-2 border-cyan-300 dark:border-cyan-600 rounded-lg p-3">
        <div class="space-y-2">
          <div class="flex items-center gap-2">
            <span>8 × 10 =</span>
            <input type="text" data-fill-blanks-target="input" data-correct-answer="80"
                   class="w-14 px-2 py-1 border-b-2 border-dotted border-gray-400 dark:border-gray-500 bg-transparent dark:text-white text-center" inputmode="numeric">
          </div>
          <div class="flex items-center gap-2">
            <span>31 × 10 =</span>
            <input type="text" data-fill-blanks-target="input" data-correct-answer="310"
                   class="w-14 px-2 py-1 border-b-2 border-dotted border-gray-400 dark:border-gray-500 bg-transparent dark:text-white text-center" inputmode="numeric">
          </div>
          <div class="flex items-center gap-2">
            <span>59 × 10 =</span>
            <input type="text" data-fill-blanks-target="input" data-correct-answer="590"
                   class="w-14 px-2 py-1 border-b-2 border-dotted border-gray-400 dark:border-gray-500 bg-transparent dark:text-white text-center" inputmode="numeric">
          </div>
        </div>
      </div>

      <!-- × 100 -->
      <div class="bg-cyan-50 dark:bg-cyan-900/30 border-2 border-cyan-300 dark:border-cyan-600 rounded-lg p-3">
        <div class="space-y-2">
          <div class="flex items-center gap-2">
            <span>23 × 100 =</span>
            <input type="text" data-fill-blanks-target="input" data-correct-answer="2300"
                   class="w-16 px-2 py-1 border-b-2 border-dotted border-gray-400 dark:border-gray-500 bg-transparent dark:text-white text-center" inputmode="numeric">
          </div>
          <div class="flex items-center gap-2">
            <span>17 × 100 =</span>
            <input type="text" data-fill-blanks-target="input" data-correct-answer="1700"
                   class="w-16 px-2 py-1 border-b-2 border-dotted border-gray-400 dark:border-gray-500 bg-transparent dark:text-white text-center" inputmode="numeric">
          </div>
          <div class="flex items-center gap-2">
            <span>99 × 100 =</span>
            <input type="text" data-fill-blanks-target="input" data-correct-answer="9900"
                   class="w-16 px-2 py-1 border-b-2 border-dotted border-gray-400 dark:border-gray-500 bg-transparent dark:text-white text-center" inputmode="numeric">
          </div>
        </div>
      </div>

      <!-- × 1000 -->
      <div class="bg-cyan-50 dark:bg-cyan-900/30 border-2 border-cyan-300 dark:border-cyan-600 rounded-lg p-3">
        <div class="space-y-2">
          <div class="flex items-center gap-2">
            <span>6 × 1000 =</span>
            <input type="text" data-fill-blanks-target="input" data-correct-answer="6000"
                   class="w-16 px-2 py-1 border-b-2 border-dotted border-gray-400 dark:border-gray-500 bg-transparent dark:text-white text-center" inputmode="numeric">
          </div>
          <div class="flex items-center gap-2">
            <span>3 × 1000 =</span>
            <input type="text" data-fill-blanks-target="input" data-correct-answer="3000"
                   class="w-16 px-2 py-1 border-b-2 border-dotted border-gray-400 dark:border-gray-500 bg-transparent dark:text-white text-center" inputmode="numeric">
          </div>
          <div class="flex items-center gap-2">
            <span>5 × 1000 =</span>
            <input type="text" data-fill-blanks-target="input" data-correct-answer="5000"
                   class="w-16 px-2 py-1 border-b-2 border-dotted border-gray-400 dark:border-gray-500 bg-transparent dark:text-white text-center" inputmode="numeric">
          </div>
        </div>
      </div>

      <!-- × 10 con numeri grandi -->
      <div class="bg-cyan-50 dark:bg-cyan-900/30 border-2 border-cyan-300 dark:border-cyan-600 rounded-lg p-3">
        <div class="space-y-2">
          <div class="flex items-center gap-2">
            <span>463 × 10 =</span>
            <input type="text" data-fill-blanks-target="input" data-correct-answer="4630"
                   class="w-16 px-2 py-1 border-b-2 border-dotted border-gray-400 dark:border-gray-500 bg-transparent dark:text-white text-center" inputmode="numeric">
          </div>
          <div class="flex items-center gap-2">
            <span>760 × 10 =</span>
            <input type="text" data-fill-blanks-target="input" data-correct-answer="7600"
                   class="w-16 px-2 py-1 border-b-2 border-dotted border-gray-400 dark:border-gray-500 bg-transparent dark:text-white text-center" inputmode="numeric">
          </div>
          <div class="flex items-center gap-2">
            <span>1 × 1000 =</span>
            <input type="text" data-fill-blanks-target="input" data-correct-answer="1000"
                   class="w-16 px-2 py-1 border-b-2 border-dotted border-gray-400 dark:border-gray-500 bg-transparent dark:text-white text-center" inputmode="numeric">
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Esercizio 2: Calcola in colonna -->
  <div class="mb-8">
    <div class="flex items-start gap-3 mb-4">
      <div class="bg-red-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0">
        2
      </div>
      <p class="text-gray-700 dark:text-gray-200">
        <strong>Calcola in colonna. Fai attenzione ai cambi!</strong>
      </p>
    </div>

    <!-- Prima riga: moltiplicazioni 2 cifre × 1 cifra -->
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-4 mb-6">
      <%= moltiplicazione_grid 14, 2, show_multiplicand_multiplier: true %>
      <%= moltiplicazione_grid 16, 3, show_multiplicand_multiplier: true %>
      <%= moltiplicazione_grid 12, 5, show_multiplicand_multiplier: true %>
      <%= moltiplicazione_grid 17, 2, show_multiplicand_multiplier: true %>
      <%= moltiplicazione_grid 11, 7, show_multiplicand_multiplier: true %>
    </div>

    <!-- Seconda riga: moltiplicazioni 3 cifre × 1 cifra -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
      <%= moltiplicazione_grid 123, 3, show_multiplicand_multiplier: true %>
      <%= moltiplicazione_grid 135, 5, show_multiplicand_multiplier: true %>
      <%= moltiplicazione_grid 133, 6, show_multiplicand_multiplier: true %>
      <%= moltiplicazione_grid 206, 4, show_multiplicand_multiplier: true %>
    </div>

    <!-- Terza riga: moltiplicazioni 4 cifre × 1 cifra -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <%= moltiplicazione_grid 1232, 4, show_multiplicand_multiplier: true %>
      <%= moltiplicazione_grid 530, 3, show_multiplicand_multiplier: true %>
      <%= moltiplicazione_grid 1072, 5, show_multiplicand_multiplier: true %>
    </div>
  </div>

  <!-- Footer con controlli -->
  <%= render 'shared/exercise_controls' %>
</div>
