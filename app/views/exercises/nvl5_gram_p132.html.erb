<div class="max-w-6xl mx-auto bg-white dark:bg-gray-900 text-black dark:text-white p-3 md:p-6 transition-colors duration-300"
     data-controller="exercise-checker text-toggle font-controls"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <%= render 'shared/page_header', pagina: @pagina %>

  <!-- POTERE -->
  <div class="bg-<%= @pagina.base_color %>-50 dark:bg-<%= @pagina.base_color %>-900/30 p-4 md:p-6 pb-8 rounded-lg mb-6">
    <h2 class="font-bold text-center text-purple-700 dark:text-purple-400 mb-6 pb-2 border-b-2 border-purple-300 dark:border-purple-600">POTERE - 2ª coniugazione</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="space-y-4">
        <div class="bg-white dark:bg-gray-800 rounded-lg p-4">
          <h3 class="font-bold text-purple-600 dark:text-purple-400 mb-4">INDICATIVO</h3>
          <div class="mb-3">
            <h4 class="font-bold text-gray-700 dark:text-gray-200 mb-2">Presente</h4>
            <p class="text-gray-600 dark:text-gray-400">io posso - tu puoi - lui/lei può - noi possiamo - voi potete - loro possono</p>
          </div>
          <div>
            <h4 class="font-bold text-gray-700 dark:text-gray-200 mb-2">Futuro semplice</h4>
            <p class="text-gray-600 dark:text-gray-400">io potrò - tu potrai - lui/lei potrà - noi potremo - voi potrete - loro potranno</p>
          </div>
        </div>
      </div>
      <div class="bg-white dark:bg-gray-800 rounded-lg p-4">
        <h3 class="font-bold text-purple-600 dark:text-purple-400 mb-3">CONGIUNTIVO</h3>
        <h4 class="font-bold text-gray-700 dark:text-gray-200 mb-2">Presente</h4>
        <p class="text-gray-600 dark:text-gray-400">(che) io possa - tu possa - lui/lei possa - noi possiamo - voi possiate - loro possano</p>
      </div>
    </div>
  </div>

  <!-- SAPERE -->
  <div class="bg-<%= @pagina.base_color %>-100 dark:bg-<%= @pagina.base_color %>-900/40 p-4 md:p-6 pb-8 rounded-lg mb-6">
    <h2 class="font-bold text-center text-blue-700 dark:text-blue-400 mb-6 pb-2 border-b-2 border-blue-300 dark:border-blue-600">SAPERE - 2ª coniugazione</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="bg-white dark:bg-gray-800 rounded-lg p-4">
        <h3 class="font-bold text-blue-600 dark:text-blue-400 mb-4">INDICATIVO</h3>
        <div class="mb-3">
          <h4 class="font-bold text-gray-700 dark:text-gray-200 mb-2">Presente</h4>
          <p class="text-gray-600 dark:text-gray-400">io so - tu sai - lui/lei sa - noi sappiamo - voi sapete - loro sanno</p>
        </div>
        <div class="mb-3">
          <h4 class="font-bold text-gray-700 dark:text-gray-200 mb-2">Passato remoto</h4>
          <p class="text-gray-600 dark:text-gray-400">io seppi - tu sapesti - lui/lei seppe - noi sapemmo - voi sapeste - loro seppero</p>
        </div>
        <div>
          <h4 class="font-bold text-gray-700 dark:text-gray-200 mb-2">Futuro semplice</h4>
          <p class="text-gray-600 dark:text-gray-400">io saprò - tu saprai - lui/lei saprà - noi sapremo - voi saprete - loro sapranno</p>
        </div>
      </div>
      <div class="space-y-4">
        <div class="bg-white dark:bg-gray-800 rounded-lg p-4">
          <h3 class="font-bold text-blue-600 dark:text-blue-400 mb-3">CONGIUNTIVO</h3>
          <h4 class="font-bold text-gray-700 dark:text-gray-200 mb-2">Presente</h4>
          <p class="text-gray-600 dark:text-gray-400">(che) io sappia - tu sappia - lui/lei sappia - noi sappiamo - voi sappiate - loro sappiano</p>
        </div>
        <div class="bg-white dark:bg-gray-800 rounded-lg p-4">
          <h3 class="font-bold text-blue-600 dark:text-blue-400 mb-3">CONDIZIONALE</h3>
          <h4 class="font-bold text-gray-700 dark:text-gray-200 mb-2">Presente</h4>
          <p class="text-gray-600 dark:text-gray-400">io saprei - tu sapresti - lui/lei saprebbe - noi sapremmo - voi sapreste - loro saprebbero</p>
        </div>
      </div>
    </div>
  </div>

  <!-- VOLERE -->
  <div class="bg-<%= @pagina.base_color %>-50 dark:bg-<%= @pagina.base_color %>-900/30 p-4 md:p-6 pb-8 rounded-lg mb-6">
    <h2 class="font-bold text-center text-green-700 dark:text-green-400 mb-6 pb-2 border-b-2 border-green-300 dark:border-green-600">VOLERE - 2ª coniugazione</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="bg-white dark:bg-gray-800 rounded-lg p-4">
        <h3 class="font-bold text-green-600 dark:text-green-400 mb-4">INDICATIVO</h3>
        <div class="mb-3">
          <h4 class="font-bold text-gray-700 dark:text-gray-200 mb-2">Presente</h4>
          <p class="text-gray-600 dark:text-gray-400">io voglio - tu vuoi - lui/lei vuole - noi vogliamo - voi volete - loro vogliono</p>
        </div>
        <div class="mb-3">
          <h4 class="font-bold text-gray-700 dark:text-gray-200 mb-2">Passato remoto</h4>
          <p class="text-gray-600 dark:text-gray-400">io volli - tu volesti - lui/lei volle - noi volemmo - voi voleste - loro vollero</p>
        </div>
        <div>
          <h4 class="font-bold text-gray-700 dark:text-gray-200 mb-2">Futuro semplice</h4>
          <p class="text-gray-600 dark:text-gray-400">io vorrò - tu vorrai - lui/lei vorrà - noi vorremo - voi vorrete - loro vorranno</p>
        </div>
      </div>
      <div class="space-y-4">
        <div class="bg-white dark:bg-gray-800 rounded-lg p-4">
          <h3 class="font-bold text-green-600 dark:text-green-400 mb-3">CONGIUNTIVO</h3>
          <h4 class="font-bold text-gray-700 dark:text-gray-200 mb-2">Presente</h4>
          <p class="text-gray-600 dark:text-gray-400">(che) io voglia - tu voglia - lui/lei voglia - noi vogliamo - voi vogliate - loro vogliano</p>
        </div>
        <div class="bg-white dark:bg-gray-800 rounded-lg p-4">
          <h3 class="font-bold text-green-600 dark:text-green-400 mb-3">CONDIZIONALE</h3>
          <h4 class="font-bold text-gray-700 dark:text-gray-200 mb-2">Presente</h4>
          <p class="text-gray-600 dark:text-gray-400">io vorrei - tu vorresti - lui/lei vorrebbe - noi vorremmo - voi vorreste - loro vorrebbero</p>
        </div>
        <div class="bg-white dark:bg-gray-800 rounded-lg p-4 text-center">
          <h3 class="font-bold text-green-600 dark:text-green-400 mb-2">PARTICIPIO - Passato</h3>
          <p class="text-gray-700 dark:text-gray-200 font-semibold">voluto</p>
        </div>
      </div>
    </div>
  </div>

  <%= render 'shared/exercise_controls' %>
</div>
