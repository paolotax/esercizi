<div class="max-w-6xl mx-auto p-3 md:p-8 bg-white" data-controller="exercise-checker">

  <%= render 'shared/page_header', pagina: @pagina %>

  <!-- POTERE -->
  <div class="bg-<%= @pagina.base_color %>-50 p-4 md:p-6 pb-8 rounded-lg mb-6">
    <h2 class="text-xl md:text-2xl font-bold text-center text-purple-700 mb-6 pb-2 border-b-2 border-purple-300">POTERE - 2ª coniugazione</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="space-y-4">
        <div class="bg-white rounded-lg p-4">
          <h3 class="text-lg font-bold text-purple-600 mb-4">INDICATIVO</h3>
          <div class="mb-3">
            <h4 class="font-bold text-gray-700 mb-2">Presente</h4>
            <p class="text-gray-600 text-sm">io posso - tu puoi - lui/lei può - noi possiamo - voi potete - loro possono</p>
          </div>
          <div>
            <h4 class="font-bold text-gray-700 mb-2">Futuro semplice</h4>
            <p class="text-gray-600 text-sm">io potrò - tu potrai - lui/lei potrà - noi potremo - voi potrete - loro potranno</p>
          </div>
        </div>
      </div>
      <div class="bg-white rounded-lg p-4">
        <h3 class="text-lg font-bold text-purple-600 mb-3">CONGIUNTIVO</h3>
        <h4 class="font-bold text-gray-700 mb-2">Presente</h4>
        <p class="text-gray-600 text-sm">(che) io possa - tu possa - lui/lei possa - noi possiamo - voi possiate - loro possano</p>
      </div>
    </div>
  </div>

  <!-- SAPERE -->
  <div class="bg-<%= @pagina.base_color %>-100 p-4 md:p-6 pb-8 rounded-lg mb-6">
    <h2 class="text-xl md:text-2xl font-bold text-center text-blue-700 mb-6 pb-2 border-b-2 border-blue-300">SAPERE - 2ª coniugazione</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="bg-white rounded-lg p-4">
        <h3 class="text-lg font-bold text-blue-600 mb-4">INDICATIVO</h3>
        <div class="mb-3">
          <h4 class="font-bold text-gray-700 mb-2">Presente</h4>
          <p class="text-gray-600 text-sm">io so - tu sai - lui/lei sa - noi sappiamo - voi sapete - loro sanno</p>
        </div>
        <div class="mb-3">
          <h4 class="font-bold text-gray-700 mb-2">Passato remoto</h4>
          <p class="text-gray-600 text-sm">io seppi - tu sapesti - lui/lei seppe - noi sapemmo - voi sapeste - loro seppero</p>
        </div>
        <div>
          <h4 class="font-bold text-gray-700 mb-2">Futuro semplice</h4>
          <p class="text-gray-600 text-sm">io saprò - tu saprai - lui/lei saprà - noi sapremo - voi saprete - loro sapranno</p>
        </div>
      </div>
      <div class="space-y-4">
        <div class="bg-white rounded-lg p-4">
          <h3 class="text-lg font-bold text-blue-600 mb-3">CONGIUNTIVO</h3>
          <h4 class="font-bold text-gray-700 mb-2">Presente</h4>
          <p class="text-gray-600 text-sm">(che) io sappia - tu sappia - lui/lei sappia - noi sappiamo - voi sappiate - loro sappiano</p>
        </div>
        <div class="bg-white rounded-lg p-4">
          <h3 class="text-lg font-bold text-blue-600 mb-3">CONDIZIONALE</h3>
          <h4 class="font-bold text-gray-700 mb-2">Presente</h4>
          <p class="text-gray-600 text-sm">io saprei - tu sapresti - lui/lei saprebbe - noi sapremmo - voi sapreste - loro saprebbero</p>
        </div>
      </div>
    </div>
  </div>

  <!-- VOLERE -->
  <div class="bg-<%= @pagina.base_color %>-50 p-4 md:p-6 pb-8 rounded-lg mb-6">
    <h2 class="text-xl md:text-2xl font-bold text-center text-green-700 mb-6 pb-2 border-b-2 border-green-300">VOLERE - 2ª coniugazione</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="bg-white rounded-lg p-4">
        <h3 class="text-lg font-bold text-green-600 mb-4">INDICATIVO</h3>
        <div class="mb-3">
          <h4 class="font-bold text-gray-700 mb-2">Presente</h4>
          <p class="text-gray-600 text-sm">io voglio - tu vuoi - lui/lei vuole - noi vogliamo - voi volete - loro vogliono</p>
        </div>
        <div class="mb-3">
          <h4 class="font-bold text-gray-700 mb-2">Passato remoto</h4>
          <p class="text-gray-600 text-sm">io volli - tu volesti - lui/lei volle - noi volemmo - voi voleste - loro vollero</p>
        </div>
        <div>
          <h4 class="font-bold text-gray-700 mb-2">Futuro semplice</h4>
          <p class="text-gray-600 text-sm">io vorrò - tu vorrai - lui/lei vorrà - noi vorremo - voi vorrete - loro vorranno</p>
        </div>
      </div>
      <div class="space-y-4">
        <div class="bg-white rounded-lg p-4">
          <h3 class="text-lg font-bold text-green-600 mb-3">CONGIUNTIVO</h3>
          <h4 class="font-bold text-gray-700 mb-2">Presente</h4>
          <p class="text-gray-600 text-sm">(che) io voglia - tu voglia - lui/lei voglia - noi vogliamo - voi vogliate - loro vogliano</p>
        </div>
        <div class="bg-white rounded-lg p-4">
          <h3 class="text-lg font-bold text-green-600 mb-3">CONDIZIONALE</h3>
          <h4 class="font-bold text-gray-700 mb-2">Presente</h4>
          <p class="text-gray-600 text-sm">io vorrei - tu vorresti - lui/lei vorrebbe - noi vorremmo - voi vorreste - loro vorrebbero</p>
        </div>
        <div class="bg-white rounded-lg p-4 text-center">
          <h3 class="text-base font-bold text-green-600 mb-2">PARTICIPIO - Passato</h3>
          <p class="text-gray-700 font-semibold">voluto</p>
        </div>
      </div>
    </div>
  </div>

  <%= render 'shared/exercise_controls' %>
</div>
