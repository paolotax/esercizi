<div class="max-w-6xl mx-auto bg-white p-3 md:p-6"
     data-controller="exercise-checker text-toggle font-controls"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <%= render 'shared/page_header', pagina: @pagina %>

  <div class="space-y-6">
    <!-- Box teoria: Formule circonferenza e cerchio -->
    <div class="p-4 bg-custom-blue-light rounded-2xl w-fit mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-2 md:divide-x-2 divide-cyan-300 gap-6">
        <!-- Misura della circonferenza -->
        <div>
          <p class="font-bold text-cyan-600 mb-2">Misura della circonferenza</p>
          <p class="text-gray-700">C = d × 3,14</p>
          <p class="text-gray-700">oppure:</p>
          <p class="text-gray-700">C = r × 6,28</p>
          <p class="text-gray-700 mt-2">Formule inverse:</p>
          <p class="text-gray-700">d = C : 3,14</p>
          <p class="text-gray-700">r = C : 6,28</p>
        </div>

        <!-- Area del cerchio -->
        <div class="md:pl-6">
          <p class="font-bold text-cyan-600 mb-2">Area del cerchio</p>
          <p class="text-gray-700">A = (C × r) : 2</p>
          <p class="text-gray-700">oppure:</p>
          <p class="text-gray-700">A = r² × 3,14</p>
        </div>
      </div>
    </div>

    <!-- Esercizio 1 -->
    <div>
      <p class="font-bold text-gray-700 mb-4">
        <%= numero_esercizio_badge(1) %>
        Utilizza le formule dirette e inverse e completa.
      </p>

