            arrow: true,
            container_class: "space-y-3",
            items: [
              { prefix: "3 × 10 000 + 6 × 1 000 + 4 × 100 + 1 × 10 + 2 × 1", answer: "36412", width: "w-24" },
              { prefix: "2 × 100 000 + 1 × 10 000 + 5 × 1 000 + 0 × 100 + 0 × 10 + 3 × 1", answer: "215003", width: "w-24" },
              { prefix: "8 × 10 000 + 7 × 1 000 + 0 × 100 + 0 × 10 + 1 × 1", answer: "87001", width: "w-24" },
              { prefix: "1 × 100 000 + 8 × 10 000 + 0 × 1 000 + 4 × 100 + 7 × 10 + 8 × 1", answer: "180478", width: "w-24" },
