<div class="max-w-6xl mx-auto bg-white dark:bg-gray-900 p-3 md:p-6 transition-colors duration-300"
     data-controller="exercise-checker text-toggle font-controls"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <%= render 'shared/page_header', pagina: @pagina %>

  <div class="space-y-6">

    <!-- Box Ricorda! -->
    <div class="p-4 md:p-6 bg-custom-blue dark:bg-cyan-900/50 rounded-2xl">
      <h3 class="font-bold text-<%= @pagina.base_color %>-600 dark:text-<%= @pagina.base_color %>-400 italic mb-4">Ricorda!</h3>

      <div class="flex flex-col md:flex-row md:items-stretch">
        <!-- Box Moltiplicazione -->
        <div class="flex-1 pb-4 md:pb-0 md:pr-4">
          <p class="text-gray-700 dark:text-gray-200 mb-3">I termini della <span class="font-bold">moltiplicazione</span>:</p>
          <div class="flex flex-col items-center gap-1 dark:text-white">
            <div class="text-center">
              <span class="font-bold text-cyan-600 dark:text-cyan-400">moltiplicando</span>
              <span class="text-cyan-600 dark:text-cyan-400 mx-2">↓</span>
              <span class="font-bold text-cyan-600 dark:text-cyan-400">4</span>
            </div>
            <span class="font-bold">×</span>
            <div class="text-center">
              <span class="font-bold text-red-500 dark:text-red-400">moltiplicatore</span>
              <span class="text-red-500 dark:text-red-400 mx-2">↓</span>
              <span class="font-bold text-red-500 dark:text-red-400">6</span>
            </div>
            <span class="font-bold">=</span>
            <div class="text-center">
              <span class="font-bold text-green-600 dark:text-green-400">prodotto</span>
              <span class="text-green-600 dark:text-green-400 mx-2">↓</span>
              <span class="font-bold text-green-600 dark:text-green-400">24</span>
            </div>
          </div>
        </div>

        <!-- Divider -->
        <div class="border-b-2 md:border-b-0 md:border-r-2 border-blue-400 dark:border-blue-500"></div>

        <!-- Box Divisione -->
        <div class="flex-1 pt-4 md:pt-0 md:pl-4">
          <p class="text-gray-700 dark:text-gray-200 mb-3">I termini della <span class="font-bold">divisione</span>:</p>
          <div class="flex flex-col items-center gap-1 dark:text-white">
            <div class="text-center">
              <span class="font-bold text-cyan-600 dark:text-cyan-400">dividendo</span>
              <span class="text-cyan-600 dark:text-cyan-400 mx-2">↓</span>
              <span class="font-bold text-cyan-600 dark:text-cyan-400">6</span>
            </div>
            <span class="font-bold">:</span>
            <div class="text-center">
              <span class="font-bold text-red-500 dark:text-red-400">divisore</span>
              <span class="text-red-500 dark:text-red-400 mx-2">↓</span>
              <span class="font-bold text-red-500 dark:text-red-400">3</span>
            </div>
            <span class="font-bold">=</span>
            <div class="text-center">
              <span class="font-bold text-green-600 dark:text-green-400">quoziente</span>
              <span class="text-green-600 dark:text-green-400 mx-2">↓</span>
              <span class="font-bold text-green-600 dark:text-green-400">2</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Container ESERCIZI -->
    <div class="p-4 md:p-6">

      <!-- Esercizio 1: Calcola in colonna (moltiplicazioni) -->
      <div class="mb-8">
        <p class="font-bold text-gray-700 dark:text-gray-200 mb-4">
          <%= numero_esercizio_badge(1) %>
          Calcola in colonna.
        </p>

        <div class="flex flex-wrap justify-center">
          <%= moltiplicazione_grid 231, 3, show_multiplicand_multiplier: true, show_solution: true %>
          <%= moltiplicazione_grid 134, 2, show_multiplicand_multiplier: true %>
          <%= moltiplicazione_grid 267, 4, show_multiplicand_multiplier: true %>
          <%= moltiplicazione_grid 321, 4, show_multiplicand_multiplier: true %>
          <%= moltiplicazione_grid 42, 12, show_multiplicand_multiplier: true %>
          <%= moltiplicazione_grid 65, 15, show_multiplicand_multiplier: true %>
          <%= moltiplicazione_grid 102, 21, show_multiplicand_multiplier: true %>
          <%= moltiplicazione_grid 213, 23, show_multiplicand_multiplier: true %>
        </div>
      </div>

      <!-- Esercizio 2: Calcola in riga (divisioni con resto) -->
      <div class="mb-8">
        <p class="font-bold text-gray-700 dark:text-gray-200 mb-4">
          <%= numero_esercizio_badge(2) %>
          Calcola in riga.
        </p>

        <div class="grid grid-cols-1 md:grid-cols-5 gap-4 dark:text-white">
          <!-- 23 : 5 = 4 resto 3 -->
          <div class="p-3">
            <div class="flex items-center gap-1 mb-2">
              <span>23 : 5 =</span>
              <input type="text" data-correct-answer="4" class="w-10 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white">
            </div>
            <div class="flex items-center gap-1">
              <span>resto</span>
              <input type="text" data-correct-answer="3" class="w-10 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white">
            </div>
          </div>

          <!-- 49 : 5 = 9 resto 4 -->
          <div class="p-3">
            <div class="flex items-center gap-1 mb-2">
              <span>49 : 5 =</span>
              <input type="text" data-correct-answer="9" class="w-10 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white">
            </div>
            <div class="flex items-center gap-1">
              <span>resto</span>
              <input type="text" data-correct-answer="4" class="w-10 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white">
            </div>
          </div>

          <!-- 39 : 4 = 9 resto 3 -->
          <div class="p-3">
            <div class="flex items-center gap-1 mb-2">
              <span>39 : 4 =</span>
              <input type="text" data-correct-answer="9" class="w-10 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white">
            </div>
            <div class="flex items-center gap-1">
              <span>resto</span>
              <input type="text" data-correct-answer="3" class="w-10 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white">
            </div>
          </div>

          <!-- 61 : 7 = 8 resto 5 -->
          <div class="p-3">
            <div class="flex items-center gap-1 mb-2">
              <span>61 : 7 =</span>
              <input type="text" data-correct-answer="8" class="w-10 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white">
            </div>
            <div class="flex items-center gap-1">
              <span>resto</span>
              <input type="text" data-correct-answer="5" class="w-10 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white">
            </div>
          </div>

          <!-- 101 : 4 = 25 resto 1 -->
          <div class="p-3">
            <div class="flex items-center gap-1 mb-2">
              <span>101 : 4 =</span>
              <input type="text" data-correct-answer="25" class="w-10 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white">
            </div>
            <div class="flex items-center gap-1">
              <span>resto</span>
              <input type="text" data-correct-answer="1" class="w-10 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white">
            </div>
          </div>
        </div>
      </div>

      <!-- Esercizio 3: Calcola in colonna (divisioni) -->
      <div>
        <p class="font-bold text-gray-700 dark:text-gray-200 mb-4">
          <%= numero_esercizio_badge(3) %>
          Calcola in colonna.
        </p>

        <div class="flex flex-wrap justify-center">
          <%= divisione_grid 725, 5, show_dividend_divisor: true, show_solution: true, show_steps: true %>
          <%= divisione_grid 1048, 8, show_dividend_divisor: true %>
          <%= divisione_grid 475, 5, show_dividend_divisor: true, show_solution: true, show_steps: true %>
          <%= divisione_grid 376, 5, show_dividend_divisor: true, show_solution: true, show_steps: true %>
          <%= divisione_grid 227, 4, show_dividend_divisor: true, show_solution: true, show_steps: true %>
          <%= divisione_grid 64, 3, show_dividend_divisor: true, show_solution: true, show_steps: true %>
        </div>
      </div>

    </div>

    <%= render 'shared/exercise_controls' %>
  </div>
</div>
