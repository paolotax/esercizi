<div class="max-w-6xl mx-auto bg-white p-3 md:p-6"
     data-controller="exercise-checker text-toggle font-controls"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <%= render 'shared/page_header', pagina: @pagina %>

  <div class="space-y-6">

    <!-- Box Ricorda! -->
    <div class="p-4 md:p-6 bg-custom-blue rounded-2xl">
      <h3 class="font-bold text-<%= @pagina.base_color %>-600 italic mb-4">Ricorda!</h3>

      <div class="flex flex-col md:flex-row md:items-stretch">
        <!-- Box Moltiplicazione -->
        <div class="flex-1 pb-4 md:pb-0 md:pr-4">
          <p class="text-gray-700 mb-3">I termini della <span class="font-bold">moltiplicazione</span>:</p>
          <div class="flex items-end justify-center gap-4">
            <div class="text-center">
              <span class="font-bold text-cyan-600">moltiplicando</span><br>
              <span class="text-cyan-600">↓</span><br>
              <span class="font-bold text-cyan-600">4</span>
            </div>
            <span class="font-bold">×</span>
            <div class="text-center">
              <span class="font-bold text-red-500">moltiplicatore</span><br>
              <span class="text-red-500">↓</span><br>
              <span class="font-bold text-red-500">6</span>
            </div>
            <span class="font-bold">=</span>
            <div class="text-center">
              <span class="font-bold text-green-600">prodotto</span><br>
              <span class="text-green-600">↓</span><br>
              <span class="font-bold text-green-600">24</span>
            </div>
          </div>
        </div>

        <!-- Divider -->
        <div class="border-b-2 md:border-b-0 md:border-r-2 border-blue-400"></div>

        <!-- Box Divisione -->
        <div class="flex-1 pt-4 md:pt-0 md:pl-4">
          <p class="text-gray-700 mb-3">I termini della <span class="font-bold">divisione</span>:</p>
          <div class="flex items-end justify-center gap-4">
            <div class="text-center">
              <span class="font-bold text-cyan-600">dividendo</span><br>
              <span class="text-cyan-600">↓</span><br>
              <span class="font-bold text-cyan-600">6</span>
            </div>
            <span class="font-bold">:</span>
            <div class="text-center">
              <span class="font-bold text-red-500">divisore</span><br>
              <span class="text-red-500">↓</span><br>
              <span class="font-bold text-red-500">3</span>
            </div>
            <span class="font-bold">=</span>
            <div class="text-center">
              <span class="font-bold text-green-600">quoziente</span><br>
              <span class="text-green-600">↓</span><br>
              <span class="font-bold text-green-600">2</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Container ESERCIZI -->
    <div class="p-4 md:p-6">

      <!-- Esercizio 1: Calcola in colonna (moltiplicazioni) -->
      <div class="mb-8">
        <p class="font-bold text-gray-700 mb-4">
          <%= numero_esercizio_badge(1) %>
          Calcola in colonna.
        </p>

        <div class="flex flex-wrap gap-4 justify-center">
          <%= render 'strumenti/moltiplicazioni/column_multiplication',
              moltiplicazione: Moltiplicazione.new(multiplicand: 231, multiplier: 3, show_multiplicand_multiplier: true, show_solution: true, show_toolbar: false) %>
          <%= render 'strumenti/moltiplicazioni/column_multiplication',
              moltiplicazione: Moltiplicazione.new(multiplicand: 134, multiplier: 2, show_multiplicand_multiplier: true, show_toolbar: false) %>
          <%= render 'strumenti/moltiplicazioni/column_multiplication',
              moltiplicazione: Moltiplicazione.new(multiplicand: 267, multiplier: 4, show_multiplicand_multiplier: true, show_toolbar: false) %>
          <%= render 'strumenti/moltiplicazioni/column_multiplication',
              moltiplicazione: Moltiplicazione.new(multiplicand: 321, multiplier: 4, show_multiplicand_multiplier: true, show_toolbar: false) %>
          <%= render 'strumenti/moltiplicazioni/column_multiplication',
              moltiplicazione: Moltiplicazione.new(multiplicand: 42, multiplier: 12, show_multiplicand_multiplier: true, show_toolbar: false) %>
          <%= render 'strumenti/moltiplicazioni/column_multiplication',
              moltiplicazione: Moltiplicazione.new(multiplicand: 65, multiplier: 15, show_multiplicand_multiplier: true, show_toolbar: false) %>
          <%= render 'strumenti/moltiplicazioni/column_multiplication',
              moltiplicazione: Moltiplicazione.new(multiplicand: 102, multiplier: 21, show_multiplicand_multiplier: true, show_toolbar: false) %>
          <%= render 'strumenti/moltiplicazioni/column_multiplication',
              moltiplicazione: Moltiplicazione.new(multiplicand: 213, multiplier: 23, show_multiplicand_multiplier: true, show_toolbar: false) %>
        </div>
      </div>

      <!-- Esercizio 2: Calcola in riga (divisioni con resto) -->
      <div class="mb-8">
        <p class="font-bold text-gray-700 mb-4">
          <%= numero_esercizio_badge(2) %>
          Calcola in riga.
        </p>

        <div class="grid grid-cols-1 md:grid-cols-5 gap-4">
          <!-- 23 : 5 = 4 resto 3 -->
          <div class="p-3">
            <div class="flex items-center gap-1 mb-2">
              <span>23 : 5 =</span>
              <input type="text" data-correct-answer="4" class="w-10 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
            </div>
            <div class="flex items-center gap-1">
              <span>resto</span>
              <input type="text" data-correct-answer="3" class="w-10 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
            </div>
          </div>

          <!-- 49 : 5 = 9 resto 4 -->
          <div class="p-3">
            <div class="flex items-center gap-1 mb-2">
              <span>49 : 5 =</span>
              <input type="text" data-correct-answer="9" class="w-10 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
            </div>
            <div class="flex items-center gap-1">
              <span>resto</span>
              <input type="text" data-correct-answer="4" class="w-10 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
            </div>
          </div>

          <!-- 39 : 4 = 9 resto 3 -->
          <div class="p-3">
            <div class="flex items-center gap-1 mb-2">
              <span>39 : 4 =</span>
              <input type="text" data-correct-answer="9" class="w-10 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
            </div>
            <div class="flex items-center gap-1">
              <span>resto</span>
              <input type="text" data-correct-answer="3" class="w-10 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
            </div>
          </div>

          <!-- 61 : 7 = 8 resto 5 -->
          <div class="p-3">
            <div class="flex items-center gap-1 mb-2">
              <span>61 : 7 =</span>
              <input type="text" data-correct-answer="8" class="w-10 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
            </div>
            <div class="flex items-center gap-1">
              <span>resto</span>
              <input type="text" data-correct-answer="5" class="w-10 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
            </div>
          </div>

          <!-- 101 : 4 = 25 resto 1 -->
          <div class="p-3">
            <div class="flex items-center gap-1 mb-2">
              <span>101 : 4 =</span>
              <input type="text" data-correct-answer="25" class="w-10 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
            </div>
            <div class="flex items-center gap-1">
              <span>resto</span>
              <input type="text" data-correct-answer="1" class="w-10 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
            </div>
          </div>
        </div>
      </div>

      <!-- Esercizio 3: Calcola in colonna (divisioni) -->
      <div>
        <p class="font-bold text-gray-700 mb-4">
          <%= numero_esercizio_badge(3) %>
          Calcola in colonna.
        </p>

        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          <!-- 725 : 5 = 145 -->
          <div class="p-3">
            <div class="flex items-center gap-2">
              <span class="font-mono">725 : 5 =</span>
              <input type="text" data-correct-answer="145" class="w-16 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
            </div>
          </div>

          <!-- 1048 : 8 = 131 -->
          <div class="p-3">
            <div class="flex items-center gap-2">
              <span class="font-mono">1048 : 8 =</span>
              <input type="text" data-correct-answer="131" class="w-16 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
            </div>
          </div>

          <!-- 800 : 2 = 400 -->
          <div class="p-3">
            <div class="flex items-center gap-2">
              <span class="font-mono">800 : 2 =</span>
              <input type="text" data-correct-answer="400" class="w-16 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
            </div>
          </div>

          <!-- 475 : 5 = 95 -->
          <div class="p-3">
            <div class="flex items-center gap-2">
              <span class="font-mono">475 : 5 =</span>
              <input type="text" data-correct-answer="95" class="w-16 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
            </div>
          </div>

          <!-- 376 : 5 = 75 resto 1 -->
          <div class="p-3">
            <div class="flex items-center gap-2 mb-2">
              <span class="font-mono">376 : 5 =</span>
              <input type="text" data-correct-answer="75" class="w-14 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
            </div>
            <div class="flex items-center gap-1">
              <span>resto</span>
              <input type="text" data-correct-answer="1" class="w-10 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
            </div>
          </div>

          <!-- 227 : 4 = 56 resto 3 -->
          <div class="p-3">
            <div class="flex items-center gap-2 mb-2">
              <span class="font-mono">227 : 4 =</span>
              <input type="text" data-correct-answer="56" class="w-14 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
            </div>
            <div class="flex items-center gap-1">
              <span>resto</span>
              <input type="text" data-correct-answer="3" class="w-10 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
            </div>
          </div>

          <!-- 64 : 3 = 21 resto 1 -->
          <div class="p-3">
            <div class="flex items-center gap-2 mb-2">
              <span class="font-mono">64 : 3 =</span>
              <input type="text" data-correct-answer="21" class="w-14 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
            </div>
            <div class="flex items-center gap-1">
              <span>resto</span>
              <input type="text" data-correct-answer="1" class="w-10 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
            </div>
          </div>
        </div>
      </div>

    </div>

    <%= render 'shared/exercise_controls' %>
  </div>
</div>
