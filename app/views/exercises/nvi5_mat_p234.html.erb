<div class="max-w-6xl mx-auto bg-white p-3 md:p-6"
     data-controller="exercise-checker text-toggle font-controls"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <%= render 'shared/page_header', pagina: @pagina %>

  <div class="space-y-6">
    <!-- Esercizio 1 -->
    <div>
      <p class="font-bold text-gray-700 mb-4">
        <%= numero_esercizio_badge(1) %>
        Copia sul quaderno e disegna la figura simmetrica rispetto all'asse indicato.
      </p>

      <div class="p-4 bg-gray-50 rounded-lg">
        <%= image_tag "nvi5_mat/p234/output-1715938802234_138_288_811_132.png", alt: "Figure per simmetria", class: "w-full max-w-3xl mx-auto" %>
        <p class="text-gray-600 italic mt-2 text-center">Disegna la figura simmetrica rispetto all'asse blu</p>
      </div>
    </div>

    <!-- Esercizio 2 -->
    <div>
      <p class="font-bold text-gray-700 mb-4">
        <%= numero_esercizio_badge(2) %>
        Esegui la traslazione di ciascuna figura secondo il vettore indicato.
      </p>

      <div class="p-4 bg-gray-50 rounded-lg">
        <%= image_tag "nvi5_mat/p234/output-1715938802234_144_479_812_260.png", alt: "Figure per traslazione", class: "w-full max-w-3xl mx-auto" %>
        <p class="text-gray-600 italic mt-2 text-center">Trasla le figure seguendo il vettore indicato</p>
      </div>
    </div>

    <!-- Esercizio 3 -->
    <div>
      <p class="font-bold text-gray-700 mb-4">
        <%= numero_esercizio_badge(3) %>
        Disegna la rotazione di ciascuna figura in base alle indicazioni.
      </p>

      <div class="p-4 bg-gray-50 rounded-lg">
        <%= image_tag "nvi5_mat/p234/p234_01.jpg", alt: "Figure per rotazione", class: "w-full max-w-3xl mx-auto" %>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-4 text-center">
          <div class="p-2 bg-cyan-50 rounded">
            <p class="text-cyan-500">•</p>
            <p class="font-bold text-cyan-600">90° (<%= render 'shared/frazione', num: 1, den: 4 %> di giro)</p>
            <p class="text-cyan-500">•</p>
            <p class="font-bold text-cyan-600">senso orario</p>
          </div>
          <div class="p-2 bg-cyan-50 rounded">
            <p class="text-cyan-500">•</p>
            <p class="font-bold text-cyan-600">180° (<%= render 'shared/frazione', num: 1, den: 2 %> giro)</p>
            <p class="text-cyan-500">•</p>
            <p class="font-bold text-cyan-600">senso antiorario</p>
          </div>
          <div class="p-2 bg-cyan-50 rounded">
            <p class="text-cyan-500">•</p>
            <p class="font-bold text-cyan-600">270° (<%= render 'shared/frazione', num: 3, den: 4 %> di giro)</p>
            <p class="text-cyan-500">•</p>
            <p class="font-bold text-cyan-600">senso orario</p>
          </div>
        </div>
      </div>
    </div>

    <%= render 'shared/exercise_controls' %>
  </div>
</div>
