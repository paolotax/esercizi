<div class="max-w-6xl mx-auto p-3 md:p-8 bg-gradient-to-br from-purple-50 via-white to-fuchsia-50 rounded-3xl shadow-xl" data-controller="exercise-checker">

  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-start sm:items-center justify-between gap-4 mb-4">
      <div class="flex flex-col-reverse sm:flex-row items-start sm:items-center gap-2 sm:gap-4">
        <div class="bg-purple-500 text-white text-md sm:text-xl px-2 sm:px-4 py-1.5 sm:py-2 rounded-lg font-bold">
          MORFOLOGIA
        </div>
        <h1 class="text-2xl sm:text-3xl font-bold text-purple-600">Parole al centro</h1>
      </div>
      <div class="flex-shrink-0 bg-purple-600 text-white rounded-full w-10 h-10 sm:w-12 sm:h-12 flex items-center justify-center font-bold text-lg sm:text-xl">
        41
      </div>
    </div>
  </div>

  <!-- Introduction -->
  <div class="mb-6 bg-white rounded-2xl border-4 border-purple-200 shadow-2xl p-4 md:p-6">
    <p class="text-base md:text-lg text-gray-700 font-semibold">
      La morfologia studia la struttura delle parole e le regole per formarne di nuove.
    </p>
  </div>

  <!-- Exercise 1: Complete with articles -->
  <div class="mb-6 bg-white rounded-2xl border-4 border-blue-200 shadow-2xl p-4 md:p-6" data-controller="fill-blanks">
    <h2 class="text-lg md:text-xl font-bold text-blue-700 mb-3">
      • Completa con l'articolo determinativo corretto (il, la, i, le, il, la):
    </h2>

    <% article_exercises = [
      { word: "spalliera", article: "la" },
      { word: "muri", article: "i" },
      { word: "canestro", article: "il" },
      { word: "clavette", article: "le" },
      { word: "tabellone", article: "il" },
      { word: "corda", article: "la" }
    ] %>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-3 text-base md:text-lg">
      <% article_exercises.each do |exercise| %>
        <div class="bg-blue-50 border-2 border-blue-200 rounded-xl px-3 py-3 flex items-center gap-2">
          <input type="text"
                 class="border-b-2 border-blue-500 bg-transparent px-2 py-1 text-center focus:outline-none focus:border-blue-700 w-16"
                 data-fill-blanks-target="input"
                 data-answer="<%= exercise[:article] %>"
                 data-correct-answer="<%= exercise[:article] %>"
                 placeholder="......."
                 maxlength="5">
          <span class="text-gray-700 font-semibold"><%= exercise[:word] %></span>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Exercise 2: Match definitions -->
  <div class="mb-6 bg-white rounded-2xl border-4 border-fuchsia-200 shadow-2xl p-4 md:p-6" data-controller="fill-blanks">
    <h2 class="text-lg md:text-xl font-bold text-fuchsia-700 mb-3">
      • Collega ogni parola alla sua definizione.
    </h2>

    <% mattress_words = [
      { word: "MATERASSINO", definition: "materasso piccolo e sottile" },
      { word: "MATERASSACCIO", definition: "materasso brutto e scomodo" },
      { word: "MATERASSONE", definition: "materasso grande e spesso" }
    ] %>

    <div class="space-y-3 text-base md:text-lg">
      <% mattress_words.each do |item| %>
        <div class="bg-fuchsia-50 border-2 border-fuchsia-200 rounded-xl px-3 py-3 flex flex-wrap items-center gap-2">
          <span class="text-fuchsia-700 font-bold w-40"><%= item[:word] %></span>
          <span class="text-gray-700">→</span>
          <input type="text"
                 class="flex-1 min-w-[200px] border-b-2 border-fuchsia-500 bg-transparent px-2 py-1 focus:outline-none focus:border-fuchsia-700"
                 data-fill-blanks-target="input"
                 data-answer="<%= item[:definition] %>"
                 data-correct-answer="<%= item[:definition] %>"
                 placeholder="........................................."
                 maxlength="50">
        </div>
      <% end %>
    </div>

    <div class="mt-4 bg-fuchsia-100 border-2 border-fuchsia-300 rounded-xl px-4 py-3">
      <div class="flex flex-wrap items-center gap-2 text-base md:text-lg">
        <span class="text-gray-700">Il nome da cui derivano tutte queste parole è</span>
        <input type="text"
               class="border-b-2 border-fuchsia-500 bg-transparent px-2 py-1 text-center focus:outline-none focus:border-fuchsia-700 w-40"
               data-fill-blanks-target="input"
               data-answer="materasso"
               data-correct-answer="materasso"
               placeholder="........................................."
               maxlength="20">
      </div>
    </div>
  </div>

  <!-- CLIL Section -->
  <div class="mb-6 bg-gradient-to-r from-green-100 to-blue-100 rounded-2xl border-4 border-green-300 shadow-2xl p-4 md:p-6">
    <div class="mb-3 inline-block bg-green-500 text-white px-4 py-2 rounded-full text-sm md:text-base font-bold shadow-lg">
      CLIL – Leggi e scopri
    </div>

    <% clil_terms = [
      { italian: "Canestro", english: "Basket" },
      { italian: "Materassino", english: "Gym mat" },
      { italian: "Tuta da ginnastica", english: "Gym suit" },
      { italian: "Pallone", english: "Ball" }
    ] %>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-3 text-base md:text-lg">
      <% clil_terms.each do |term| %>
        <div class="bg-white border-2 border-green-200 rounded-xl px-4 py-3 flex items-center justify-between">
          <span class="text-gray-700 font-semibold"><%= term[:italian] %></span>
          <span class="text-green-700 font-bold">→ <%= term[:english] %></span>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Exercise Controls -->
  <div class="mt-6">
    <%= render 'shared/exercise_controls', color: 'purple', current_page: 'nvl5_gram_p041' %>
  </div>
</div>
