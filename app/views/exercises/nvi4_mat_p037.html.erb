<div class="page-viewer bg-white"
     data-controller="exercise-checker text-toggle font-controls"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <%= render 'shared/page_header', pagina: @pagina %>

  <div class="space-y-8">

    <!-- L'ADDIZIONE -->
    <div class="space-y-4">
      <!-- Titolo principale -->
      <div class="flex justify-center">
        <div class="bg-blue-500 text-white font-bold text-xl px-8 py-3 rounded-2xl shadow">
          L'ADDIZIONE
        </div>
      </div>

      <!-- Freccia -->
      <div class="flex justify-center">
        <span class="text-cyan-500 text-2xl">&#8595;</span>
      </div>

      <!-- Riga livello 2: STRUTTURA e PROPRIETÀ -->
      <div class="flex flex-row justify-center gap-8">
        <!-- STRUTTURA DELL'OPERAZIONE -->
        <div class="flex flex-col items-center gap-3">
          <div class="bg-cyan-500 text-white font-bold px-6 py-2 rounded-2xl text-center">
            STRUTTURA<br>DELL'OPERAZIONE
          </div>
          <span class="text-cyan-500 text-xl">&#8595;</span>
          <div class="bg-white rounded-2xl p-3 shadow border border-cyan-500">
            <%= image_tag "nvi4_mat/p037/p037_01.jpg", class: "max-w-full h-auto" %>
          </div>
        </div>

        <!-- PROPRIETÀ -->
        <div class="flex flex-col items-center gap-3">
          <div class="bg-cyan-500 text-white font-bold px-6 py-2 rounded-2xl">
            PROPRIETÀ
          </div>
          <span class="text-cyan-500 text-xl">&#8595;</span>

          <!-- Riga livello 3: COMMUTATIVA e ASSOCIATIVA -->
          <div class="flex flex-row gap-6">
            <!-- COMMUTATIVA -->
            <div class="flex flex-col items-center gap-2">
              <div class="bg-custom-blue-light border border-cyan-600 text-cyan-600 font-bold px-4 py-2 rounded-2xl">
                COMMUTATIVA
              </div>
              <span class="text-cyan-500 text-lg">&#8595;</span>
              <div class="bg-white rounded-2xl p-3 shadow border border-cyan-500 text-sm text-gray-700 text-left">
                Se cambi l'ordine degli<br>addendi il risultato<br>non cambia.
              </div>
              <span class="text-cyan-500 text-lg">&#8595;</span>
              <div class="bg-white rounded-2xl p-3 shadow border border-cyan-500 text-left">
                <p><span class="text-orange-500 font-bold">5</span> + <span class="text-cyan-500 font-bold">6</span> = 11</p>
                <p><span class="text-cyan-500 font-bold">6</span> + <span class="text-orange-500 font-bold">5</span> = 11</p>
              </div>
            </div>

            <!-- ASSOCIATIVA -->
            <div class="flex flex-col items-center gap-2">
              <div class="bg-custom-blue-light border border-cyan-600 text-cyan-600 font-bold px-4 py-2 rounded-2xl">
                ASSOCIATIVA
              </div>
              <span class="text-cyan-500 text-lg">&#8595;</span>
              <div class="bg-white rounded-2xl p-3 shadow border border-cyan-500 text-sm text-gray-700 text-left">
                Se sostituisci a due o più<br>addendi la loro somma il<br>risultato non cambia.
              </div>
              <span class="text-cyan-500 text-lg">&#8595;</span>
              <div class="bg-white rounded-2xl p-3 shadow border border-cyan-500">
                <%= image_tag "nvi4_mat/p037/p037_02.jpg", class: "max-w-full h-auto" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- LA SOTTRAZIONE -->
    <div class="space-y-4">
      <!-- Titolo principale -->
      <div class="flex justify-center">
        <div class="bg-blue-500 text-white font-bold text-xl px-8 py-3 rounded-2xl shadow">
          LA SOTTRAZIONE
        </div>
      </div>

      <!-- Freccia -->
      <div class="flex justify-center">
        <span class="text-cyan-500 text-2xl">&#8595;</span>
      </div>

      <!-- Riga livello 2: STRUTTURA e PROPRIETÀ -->
      <div class="flex flex-row justify-center gap-8">
        <!-- STRUTTURA DELL'OPERAZIONE -->
        <div class="flex flex-col items-center gap-3">
          <div class="bg-cyan-500 text-white font-bold px-6 py-2 rounded-2xl text-center">
            STRUTTURA<br>DELL'OPERAZIONE
          </div>
          <span class="text-cyan-500 text-xl">&#8595;</span>
          <div class="bg-white rounded-2xl p-3 shadow border border-cyan-500">
            <%= image_tag "nvi4_mat/p037/p037_03.jpg", class: "w-[212px] h-auto" %>
          </div>
        </div>

        <!-- PROPRIETÀ -->
        <div class="flex flex-col items-center gap-3">
          <div class="bg-cyan-500 text-white font-bold px-6 py-2 rounded-2xl">
            PROPRIETÀ
          </div>
          <span class="text-cyan-500 text-xl">&#8595;</span>

          <!-- INVARIANTIVA -->
          <div class="flex flex-col items-center gap-2">
            <div class="bg-custom-blue-light border border-cyan-600 text-cyan-600 font-bold px-4 py-2 rounded-2xl">
              INVARIANTIVA
            </div>
            <span class="text-cyan-500 text-lg">&#8595;</span>
            <div class="bg-white rounded-2xl p-3 shadow border border-cyan-500 text-sm text-gray-700 text-left">
              Se aggiungi o togli uno stesso numero al minuendo<br>e al sottraendo il risultato non cambia.
            </div>
            <span class="text-cyan-500 text-lg">&#8595;</span>
            <div class="bg-white rounded-2xl p-3 shadow border border-cyan-500">
              <%= image_tag "nvi4_mat/p037/p037_04.jpg", class: "w-[280px] h-auto" %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%= render 'shared/exercise_controls' %>
  </div>
</div>
