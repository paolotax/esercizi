<div class="max-w-6xl mx-auto bg-white p-3 md:p-6"
     data-controller="exercise-checker text-toggle font-controls"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <%= render 'shared/page_header', pagina: @pagina %>

  <div class="space-y-6">

    <!-- L'ADDIZIONE -->
    <div class="p-4 md:p-6 bg-yellow-50 rounded-lg">
      <h2 class="font-bold text-center text-<%= @pagina.base_color %>-600 mb-6 p-3 bg-<%= @pagina.base_color %>-200 rounded-lg">L'ADDIZIONE</h2>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

        <!-- STRUTTURA DELL'OPERAZIONE -->
        <div class="space-y-4">
          <div class="bg-cyan-100 p-3 rounded-lg text-center">
            <p class="font-bold text-gray-800">STRUTTURA DELL'OPERAZIONE</p>
          </div>
          <div class="text-center text-<%= @pagina.base_color %>-500">&#8595;</div>
          <div class="flex justify-center">
            <%= image_tag "nvi4_mat/p037/p037_01.jpg", class: "max-w-full h-auto" %>
          </div>
        </div>

        <!-- PROPRIETA' -->
        <div class="space-y-4">
          <div class="bg-cyan-100 p-3 rounded-lg text-center">
            <p class="font-bold text-gray-800">PROPRIET&Agrave;</p>
          </div>
          <div class="text-center text-<%= @pagina.base_color %>-500">&#8595;</div>

          <div class="grid grid-cols-2 gap-4">
            <!-- COMMUTATIVA -->
            <div class="space-y-2">
              <div class="bg-orange-200 p-2 rounded text-center">
                <p class="font-bold text-gray-800">COMMUTATIVA</p>
              </div>
              <div class="text-center text-<%= @pagina.base_color %>-500">&#8595;</div>
              <div class="p-3 bg-white rounded border border-gray-200">
                <p class="text-gray-700">Se cambi l'ordine degli addendi il risultato non cambia.</p>
              </div>
              <div class="text-center text-<%= @pagina.base_color %>-500">&#8595;</div>
              <div class="p-3 bg-white rounded border border-gray-200 text-center">
                <p class="text-gray-700"><span class="text-orange-500 font-bold">5</span> + <span class="text-cyan-500 font-bold">6</span> = 11</p>
                <p class="text-gray-700"><span class="text-cyan-500 font-bold">6</span> + <span class="text-orange-500 font-bold">5</span> = 11</p>
              </div>
            </div>

            <!-- ASSOCIATIVA -->
            <div class="space-y-2">
              <div class="bg-orange-200 p-2 rounded text-center">
                <p class="font-bold text-gray-800">ASSOCIATIVA</p>
              </div>
              <div class="text-center text-<%= @pagina.base_color %>-500">&#8595;</div>
              <div class="p-3 bg-white rounded border border-gray-200">
                <p class="text-gray-700">Se sostituisci a due o pi&ugrave; addendi la loro somma il risultato non cambia.</p>
              </div>
              <div class="text-center text-<%= @pagina.base_color %>-500">&#8595;</div>
              <div class="p-3 bg-white rounded border border-gray-200 text-center">
                <p class="text-gray-700"><span class="text-orange-500 font-bold">3</span> + <span class="text-cyan-500 font-bold">17</span> + 2 = 22</p>
                <p class="text-gray-700"><span class="text-orange-500 font-bold underline decoration-2">20</span> + 2 = 22</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- LA SOTTRAZIONE -->
    <div class="p-4 md:p-6 bg-yellow-50 rounded-lg">
      <h2 class="font-bold text-center text-<%= @pagina.base_color %>-600 mb-6 p-3 bg-<%= @pagina.base_color %>-200 rounded-lg">LA SOTTRAZIONE</h2>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

        <!-- STRUTTURA DELL'OPERAZIONE -->
        <div class="space-y-4">
          <div class="bg-cyan-100 p-3 rounded-lg text-center">
            <p class="font-bold text-gray-800">STRUTTURA DELL'OPERAZIONE</p>
          </div>
          <div class="text-center text-<%= @pagina.base_color %>-500">&#8595;</div>
          <div class="flex justify-center">
            <%= image_tag "nvi4_mat/p037/p037_03.jpg", class: "max-w-full h-auto" %>
          </div>
        </div>

        <!-- PROPRIETA' -->
        <div class="space-y-4">
          <div class="bg-cyan-100 p-3 rounded-lg text-center">
            <p class="font-bold text-gray-800">PROPRIET&Agrave;</p>
          </div>
          <div class="text-center text-<%= @pagina.base_color %>-500">&#8595;</div>

          <!-- INVARIANTIVA -->
          <div class="space-y-2">
            <div class="bg-orange-200 p-2 rounded text-center">
              <p class="font-bold text-gray-800">INVARIANTIVA</p>
            </div>
            <div class="text-center text-<%= @pagina.base_color %>-500">&#8595;</div>
            <div class="p-3 bg-white rounded border border-gray-200">
              <p class="text-gray-700">Se aggiungi o togli uno stesso numero al minuendo e al sottraendo il risultato non cambia.</p>
            </div>
            <div class="text-center text-<%= @pagina.base_color %>-500">&#8595;</div>
            <div class="p-3 bg-white rounded border border-gray-200">
              <div class="flex justify-around">
                <div class="text-center">
                  <p class="text-gray-700"><span class="text-orange-500 font-bold">53</span> − <span class="text-cyan-500 font-bold">19</span> = 34</p>
                  <p class="text-gray-500">&#8595; +1 &nbsp; &#8595; +1</p>
                  <p class="text-gray-700"><span class="text-orange-500 font-bold">54</span> − <span class="text-cyan-500 font-bold">20</span> = 34</p>
                </div>
                <div class="text-center">
                  <p class="text-gray-700"><span class="text-orange-500 font-bold">53</span> − <span class="text-cyan-500 font-bold">19</span> = 34</p>
                  <p class="text-gray-500">&#8595; −3 &nbsp; &#8595; −3</p>
                  <p class="text-gray-700"><span class="text-orange-500 font-bold">50</span> − <span class="text-cyan-500 font-bold">16</span> = 34</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%= render 'shared/exercise_controls' %>
  </div>
</div>
