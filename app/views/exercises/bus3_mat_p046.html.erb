<% content_for :titolo, "#{@pagina.titolo} - #{@pagina.numero}" %>

<div class="max-w-7xl mx-auto p-3 md:p-6 bg-white dark:bg-gray-900 text-black dark:text-white transition-colors duration-300"
     data-controller="exercise-checker fill-blanks auto-advance page-viewer text-toggle font-controls"
     data-page-viewer-image-url-value="<%= asset_path('bus3_mat/p046/page.png') %>"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <!-- Header -->
  <%= render 'shared/page_header', pagina: @pagina %>

  <!-- Esercizio 1: Completa la tabella della moltiplicazione -->
  <div class="p-4 md:p-6 mb-8">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 items-start">
      <!-- Domande a sinistra -->
      <div>
        <div class="flex items-center gap-3 mb-6">
          <div class="bg-red-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0">
            1
          </div>
          <p class="text-gray-700 dark:text-gray-200">
            <strong>Completa la tabella della moltiplicazione, poi rispondi.</strong>
          </p>
        </div>

        <div class="space-y-4">
          <div class="flex items-center gap-3 flex-wrap">
            <span><span class="text-red-500 font-bold">•</span> Hai completato tutta la tabella?</span>
            <label class="inline-flex items-center gap-1">
              <input type="radio" name="q1" value="si" data-correct-answer="true" class="w-4 h-4">
              <span class="font-bold dark:text-white">Sì</span>
            </label>
            <label class="inline-flex items-center gap-1">
              <input type="radio" name="q1" value="no" class="w-4 h-4">
              <span class="font-bold dark:text-white">No</span>
            </label>
          </div>

          <div class="flex items-center gap-3 flex-wrap">
            <span><span class="text-red-500 font-bold">•</span> La moltiplicazione è un'operazione che si può sempre eseguire?</span>
            <label class="inline-flex items-center gap-1">
              <input type="radio" name="q2" value="si" data-correct-answer="true" class="w-4 h-4">
              <span class="font-bold dark:text-white">Sì</span>
            </label>
            <label class="inline-flex items-center gap-1">
              <input type="radio" name="q2" value="no" class="w-4 h-4">
              <span class="font-bold dark:text-white">No</span>
            </label>
          </div>
        </div>
      </div>

      <!-- Tabella della moltiplicazione a destra -->
      <div class="md:col-span-2 overflow-x-auto">
        <div class="border-3 border-yellow-400 dark:border-yellow-500 rounded-2xl overflow-hidden inline-block">
          <table class="border-collapse lg: ">
            <tbody>
              <!-- Header row -->
              <tr>
                <td class="border-2 border-yellow-400 dark:border-yellow-500 px-2 py-1 text-center font-bold bg-yellow-100 dark:bg-yellow-900/50 w-10">×</td>
                <td class="border-2 border-yellow-400 dark:border-yellow-500 px-2 py-1 text-center font-bold bg-pink-100 dark:bg-pink-900/50 w-10">0</td>
                <td class="border-2 border-yellow-400 dark:border-yellow-500 px-2 py-1 text-center font-bold bg-cyan-100 dark:bg-cyan-900/50 w-10">1</td>
                <% (2..10).each do |n| %>
                  <td class="border-2 border-yellow-400 dark:border-yellow-500 px-2 py-1 text-center font-bold bg-yellow-100 dark:bg-yellow-900/50 w-10"><%= n %></td>
                <% end %>
              </tr>

              <!-- Row 0 -->
              <tr>
                <td class="border-2 border-yellow-400 dark:border-yellow-500 px-2 py-1 text-center font-bold bg-pink-100 dark:bg-pink-900/50">0</td>
                <td class="border-2 border-yellow-400 dark:border-yellow-500 px-2 py-1 text-center font-bold bg-white dark:bg-gray-800">0</td>
                <td class="border-2 border-yellow-400 dark:border-yellow-500 px-2 py-1 text-center font-bold bg-white dark:bg-gray-800">0</td>
                <% (2..10).each do %>
                  <td class="border-2 border-yellow-400 dark:border-yellow-500 px-2 py-1 bg-white dark:bg-gray-800">
                    <input type="text" data-fill-blanks-target="input" data-correct-answer="0"
                           class="w-full text-center font-bold border-0 focus:ring-1 focus:ring-cyan-400 p-0 bg-transparent dark:text-white"
                           maxlength="2" inputmode="numeric">
                  </td>
                <% end %>
              </tr>

              <!-- Row 1 -->
              <tr>
                <td class="border-2 border-yellow-400 dark:border-yellow-500 px-2 py-1 text-center font-bold bg-cyan-100 dark:bg-cyan-900/50">1</td>
                <td class="border-2 border-yellow-400 dark:border-yellow-500 px-2 py-1 text-center font-bold bg-white dark:bg-gray-800">0</td>
                <% (1..10).each do |col| %>
                  <td class="border-2 border-yellow-400 dark:border-yellow-500 px-2 py-1 bg-white dark:bg-gray-800">
                    <input type="text" data-fill-blanks-target="input" data-correct-answer="<%= col %>"
                           class="w-full text-center font-bold border-0 focus:ring-1 focus:ring-cyan-400 p-0 bg-transparent dark:text-white"
                           maxlength="2" inputmode="numeric">
                  </td>
                <% end %>
              </tr>

              <!-- Rows 2-10 -->
              <% (2..10).each do |row| %>
                <tr>
                  <td class="border-2 border-yellow-400 dark:border-yellow-500 px-2 py-1 text-center font-bold bg-yellow-100 dark:bg-yellow-900/50"><%= row %></td>
                  <% (0..10).each do |col| %>
                    <td class="border-2 border-yellow-400 dark:border-yellow-500 px-2 py-1 bg-white dark:bg-gray-800">
                      <input type="text" data-fill-blanks-target="input" data-correct-answer="<%= row * col %>"
                             class="w-full text-center font-bold border-0 focus:ring-1 focus:ring-cyan-400 p-0 bg-transparent dark:text-white"
                             maxlength="3" inputmode="numeric">
                    </td>
                  <% end %>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <!-- Esercizi 2 e 3 affiancati -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
    <!-- Esercizio 2: L'1 nella moltiplicazione -->
    <div class="p-4 md:p-6">
      <div class="flex items-center gap-3 mb-4">
        <div class="bg-red-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0">
          2
        </div>
        <p class="text-gray-700 dark:text-gray-200">
          <strong>Osserva i risultati nella riga e nella colonna azzurra e completa. Poi scrivi i numeri mancanti.</strong>
        </p>
      </div>

      <div class="bg-cyan-50 dark:bg-cyan-900/40 border-2 border-cyan-300 dark:border-cyan-500 rounded-lg p-4 mb-4">
        <h3 class="font-bold mb-2">L'<span class="text-cyan-600 dark:text-cyan-400">1</span> nella moltiplicazione</h3>
        <p class="mb-3">
          Qualsiasi numero moltiplicato per
          <input type="text" data-fill-blanks-target="input" data-correct-answer="1"
                 class="w-10 px-1 py-1 border-b-2 border-dotted border-gray-400 dark:border-gray-500 bg-transparent dark:text-white text-center font-bold"
                 maxlength="1" inputmode="numeric">
          ha come risultato il numero stesso.
        </p>
      </div>

      <div class="grid grid-cols-2 gap-3">
        <div class="flex items-center gap-1">
          <span>8 × 1 =</span>
          <input type="text" data-fill-blanks-target="input" data-correct-answer="8"
                 class="w-12 px-1 py-1 border-b-2 border-dotted border-gray-400 dark:border-gray-500 bg-transparent dark:text-white text-center font-bold"
                 maxlength="2" inputmode="numeric">
        </div>
        <div class="flex items-center gap-1">
          <input type="text" data-fill-blanks-target="input" data-correct-answer="75"
                 class="w-12 px-1 py-1 border-b-2 border-dotted border-gray-400 dark:border-gray-500 bg-transparent dark:text-white text-center font-bold"
                 maxlength="2" inputmode="numeric">
          <span>× 1 = 75</span>
        </div>

        <div class="flex items-center gap-1">
          <span>10 ×</span>
          <input type="text" data-fill-blanks-target="input" data-correct-answer="1"
                 class="w-10 px-1 py-1 border-b-2 border-dotted border-gray-400 dark:border-gray-500 bg-transparent dark:text-white text-center font-bold"
                 maxlength="1" inputmode="numeric">
          <span>= 10</span>
        </div>
        <div class="flex items-center gap-1">
          <span>1 × 3 =</span>
          <input type="text" data-fill-blanks-target="input" data-correct-answer="3"
                 class="w-10 px-1 py-1 border-b-2 border-dotted border-gray-400 dark:border-gray-500 bg-transparent dark:text-white text-center font-bold"
                 maxlength="1" inputmode="numeric">
        </div>

        <div class="flex items-center gap-1">
          <span>107 ×</span>
          <input type="text" data-fill-blanks-target="input" data-correct-answer="1"
                 class="w-10 px-1 py-1 border-b-2 border-dotted border-gray-400 dark:border-gray-500 bg-transparent dark:text-white text-center font-bold"
                 maxlength="1" inputmode="numeric">
          <span>= 107</span>
        </div>
        <div class="flex items-center gap-1">
          <input type="text" data-fill-blanks-target="input" data-correct-answer="1"
                 class="w-10 px-1 py-1 border-b-2 border-dotted border-gray-400 dark:border-gray-500 bg-transparent dark:text-white text-center font-bold"
                 maxlength="1" inputmode="numeric">
          <span>× 28 = 28</span>
        </div>
      </div>
    </div>

    <!-- Esercizio 3: Lo 0 nella moltiplicazione -->
    <div class="p-4 md:p-6">
      <div class="flex items-center gap-3 mb-4">
        <div class="bg-red-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0">
          3
        </div>
        <p class="text-gray-700 dark:text-gray-200">
          <strong>Osserva i risultati nella riga e nella colonna rosa e completa. Poi scrivi i numeri mancanti.</strong>
        </p>
      </div>

      <div class="bg-pink-50 dark:bg-pink-900/30 border-2 border-pink-300 dark:border-pink-500 rounded-lg p-4 mb-4">
        <h3 class="font-bold mb-2">Lo <span class="text-pink-600 dark:text-pink-400">0</span> nella moltiplicazione</h3>
        <p class="mb-3">
          Qualsiasi numero moltiplicato per
          <input type="text" data-fill-blanks-target="input" data-correct-answer="0"
                 class="w-10 px-1 py-1 border-b-2 border-dotted border-gray-400 dark:border-gray-500 bg-transparent dark:text-white text-center font-bold"
                 maxlength="1" inputmode="numeric">
          ha come risultato 0.
        </p>
      </div>

      <div class="grid grid-cols-2 gap-3">
        <div class="flex items-center gap-1">
          <span>4 × 0 =</span>
          <input type="text" data-fill-blanks-target="input" data-correct-answer="0"
                 class="w-10 px-1 py-1 border-b-2 border-dotted border-gray-400 dark:border-gray-500 bg-transparent dark:text-white text-center font-bold"
                 maxlength="1" inputmode="numeric">
        </div>
        <div class="flex items-center gap-1">
          <span>104 ×</span>
          <input type="text" data-fill-blanks-target="input" data-correct-answer="0"
                 class="w-10 px-1 py-1 border-b-2 border-dotted border-gray-400 dark:border-gray-500 bg-transparent dark:text-white text-center font-bold"
                 maxlength="1" inputmode="numeric">
          <span>= 0</span>
        </div>

        <div class="flex items-center gap-1">
          <span>0 × 18 =</span>
          <input type="text" data-fill-blanks-target="input" data-correct-answer="0"
                 class="w-10 px-1 py-1 border-b-2 border-dotted border-gray-400 dark:border-gray-500 bg-transparent dark:text-white text-center font-bold"
                 maxlength="1" inputmode="numeric">
        </div>
        <div class="flex items-center gap-1">
          <input type="text" data-fill-blanks-target="input" data-correct-answer="0"
                 class="w-10 px-1 py-1 border-b-2 border-dotted border-gray-400 dark:border-gray-500 bg-transparent dark:text-white text-center font-bold"
                 maxlength="1" inputmode="numeric">
          <span>× 123 =</span>
          <input type="text" data-fill-blanks-target="input" data-correct-answer="0"
                 class="w-10 px-1 py-1 border-b-2 border-dotted border-gray-400 dark:border-gray-500 bg-transparent dark:text-white text-center font-bold"
                 maxlength="1" inputmode="numeric">
        </div>

        <div class="flex items-center gap-1">
          <input type="text" data-fill-blanks-target="input" data-correct-answer="0"
                 class="w-10 px-1 py-1 border-b-2 border-dotted border-gray-400 dark:border-gray-500 bg-transparent dark:text-white text-center font-bold"
                 maxlength="1" inputmode="numeric">
          <span>× 56 = 0</span>
        </div>
        <div class="flex items-center gap-1">
          <span>0 × 79 =</span>
          <input type="text" data-fill-blanks-target="input" data-correct-answer="0"
                 class="w-10 px-1 py-1 border-b-2 border-dotted border-gray-400 dark:border-gray-500 bg-transparent dark:text-white text-center font-bold"
                 maxlength="1" inputmode="numeric">
        </div>
      </div>
    </div>
  </div>

  <!-- Footer con controlli -->
  <%= render 'shared/exercise_controls' %>
</div>
