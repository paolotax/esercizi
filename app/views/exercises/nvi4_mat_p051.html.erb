<div class="page-viewer bg-white dark:bg-gray-900 transition-colors duration-300"
     data-controller="exercise-checker text-toggle font-controls"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <%= render 'shared/page_header', pagina: @pagina %>

  <div class="space-y-8">

    <!-- LA MOLTIPLICAZIONE -->
    <div class="space-y-4">
      <!-- Titolo principale -->
      <div class="flex justify-center">
        <div class="bg-blue-500 text-white font-bold px-8 py-3 rounded-2xl shadow">
          LA MOLTIPLICAZIONE
        </div>
      </div>

      <!-- Freccia -->
      <div class="flex justify-center">
        <span class="text-cyan-500">&#8595;</span>
      </div>

      <!-- Riga livello 2: STRUTTURA e PROPRIETÀ -->
      <div class="flex flex-row justify-center gap-8 flex-wrap">
        <!-- STRUTTURA DELL'OPERAZIONE -->
        <div class="flex flex-col items-center gap-3">
          <div class="bg-cyan-500 text-white font-bold px-6 py-2 rounded-2xl text-center">
            STRUTTURA<br>DELL'OPERAZIONE
          </div>
          <span class="text-cyan-500">&#8595;</span>
          <div class="bg-white dark:bg-gray-800 rounded-2xl p-3 shadow border border-cyan-500 dark:border-cyan-600">
            <%= image_tag "nvi4_mat/p051/p051_01.jpg", class: "max-w-full h-auto dark:bg-white dark:rounded-lg dark:p-1" %>
          </div>
        </div>

        <!-- PROPRIETÀ -->
        <div class="flex flex-col items-center gap-3">
          <div class="bg-cyan-500 text-white font-bold px-6 py-2 rounded-2xl">
            PROPRIETÀ
          </div>
          <span class="text-cyan-500">&#8595;</span>

          <!-- Riga livello 3: COMMUTATIVA, ASSOCIATIVA, DISTRIBUTIVA -->
          <div class="flex flex-row gap-4 flex-wrap justify-center">
            <!-- COMMUTATIVA -->
            <div class="flex flex-col items-center gap-2">
              <div class="bg-custom-blue-light dark:bg-cyan-900 border border-cyan-600 text-cyan-600 font-bold px-4 py-2 rounded-2xl">
                COMMUTATIVA
              </div>
              <span class="text-cyan-500">&#8595;</span>
              <div class="bg-white dark:bg-gray-800 rounded-2xl p-3 shadow border border-cyan-500 dark:border-cyan-600 text-gray-700 dark:text-gray-200 text-left">
                Se cambi l'ordine dei<br>fattori, il prodotto non<br>cambia.
              </div>
              <span class="text-cyan-500">&#8595;</span>
              <div class="bg-white dark:bg-gray-800 rounded-2xl p-3 shadow border border-cyan-500 dark:border-cyan-600 text-left text-gray-700 dark:text-gray-200">
                <p><span class="text-cyan-600 dark:text-cyan-400 font-bold">18</span> × <span class="text-orange-500 dark:text-orange-400 font-bold">3</span> = 54</p>
                <p><span class="text-orange-500 dark:text-orange-400 font-bold">3</span> × <span class="text-cyan-600 dark:text-cyan-400 font-bold">18</span> = 54</p>
              </div>
            </div>

            <!-- ASSOCIATIVA -->
            <div class="flex flex-col items-center gap-2">
              <div class="bg-custom-blue-light dark:bg-cyan-900 border border-cyan-600 text-cyan-600 font-bold px-4 py-2 rounded-2xl">
                ASSOCIATIVA
              </div>
              <span class="text-cyan-500">&#8595;</span>
              <div class="bg-white dark:bg-gray-800 rounded-2xl p-3 shadow border border-cyan-500 dark:border-cyan-600 text-gray-700 dark:text-gray-200 text-left">
                Se a due o più fattori<br>sostituisci il loro prodotto,<br>il risultato non cambia.
              </div>
              <span class="text-cyan-500">&#8595;</span>
              <div class="bg-white dark:bg-gray-800 rounded-2xl p-3 shadow border border-cyan-500 dark:border-cyan-600">
                <%= image_tag "nvi4_mat/p051/p051_03.jpg", class: "max-w-full h-auto dark:bg-white dark:rounded-lg dark:p-1" %>
              </div>
            </div>

            <!-- DISTRIBUTIVA -->
            <div class="flex flex-col items-center gap-2">
              <div class="bg-custom-blue-light dark:bg-cyan-900 border border-cyan-600 text-cyan-600 font-bold px-4 py-2 rounded-2xl">
                DISTRIBUTIVA
              </div>
              <span class="text-cyan-500">&#8595;</span>
              <div class="bg-white dark:bg-gray-800 rounded-2xl p-3 shadow border border-cyan-500 dark:border-cyan-600 text-gray-700 dark:text-gray-200 text-left">
                Se a un fattore sostituisci<br>due numeri la cui somma<br>è uguale al fattore considerato,<br>il risultato non cambia.
              </div>
              <span class="text-cyan-500">&#8595;</span>
              <div class="bg-white dark:bg-gray-800 rounded-2xl p-3 shadow border border-cyan-500 dark:border-cyan-600">
                <%= image_tag "nvi4_mat/p051/p051_04.jpg", class: "max-w-full h-auto dark:bg-white dark:rounded-lg dark:p-1" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- LA DIVISIONE -->
    <div class="space-y-4">
      <!-- Titolo principale -->
      <div class="flex justify-center">
        <div class="bg-blue-500 text-white font-bold px-8 py-3 rounded-2xl shadow">
          LA DIVISIONE
        </div>
      </div>

      <!-- Freccia -->
      <div class="flex justify-center">
        <span class="text-cyan-500">&#8595;</span>
      </div>

      <!-- Riga livello 2: STRUTTURA e PROPRIETÀ -->
      <div class="flex flex-row justify-center gap-8 flex-wrap">
        <!-- STRUTTURA DELL'OPERAZIONE -->
        <div class="flex flex-col items-center gap-3">
          <div class="bg-cyan-500 text-white font-bold px-6 py-2 rounded-2xl text-center">
            STRUTTURA<br>DELL'OPERAZIONE
          </div>
          <span class="text-cyan-500">&#8595;</span>
          <div class="bg-white dark:bg-gray-800 rounded-2xl p-3 shadow border border-cyan-500 dark:border-cyan-600">
            <%= image_tag "nvi4_mat/p051/p051_02.jpg", class: "max-w-full h-auto dark:bg-white dark:rounded-lg dark:p-1" %>
          </div>
        </div>

        <!-- PROPRIETÀ -->
        <div class="flex flex-col items-center gap-3">
          <div class="bg-cyan-500 text-white font-bold px-6 py-2 rounded-2xl">
            PROPRIETÀ
          </div>
          <span class="text-cyan-500">&#8595;</span>

          <!-- INVARIANTIVA -->
          <div class="flex flex-col items-center gap-2">
            <div class="bg-custom-blue-light dark:bg-cyan-900 border border-cyan-600 text-cyan-600 font-bold px-4 py-2 rounded-2xl">
              INVARIANTIVA
            </div>
            <span class="text-cyan-500">&#8595;</span>
            <div class="bg-white dark:bg-gray-800 rounded-2xl p-3 shadow border border-cyan-500 dark:border-cyan-600 text-gray-700 dark:text-gray-200 text-left">
              Se moltiplichi o dividi per uno stesso<br>numero diverso da zero il dividendo<br>e il divisore, il risultato non cambia.
            </div>
            <span class="text-cyan-500">&#8595;</span>
            <div class="bg-white dark:bg-gray-800 rounded-2xl p-3 shadow border border-cyan-500 dark:border-cyan-600">
              <%= image_tag "nvi4_mat/p051/p051_05.jpg", class: "max-w-full h-auto dark:bg-white dark:rounded-lg dark:p-1" %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%= render 'shared/exercise_controls' %>
  </div>
</div>
