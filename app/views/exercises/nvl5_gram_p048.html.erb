<div class="max-w-6xl mx-auto bg-white dark:bg-gray-900 text-black dark:text-white p-3 md:p-6 transition-colors duration-300"
     data-controller="exercise-checker text-toggle font-controls"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <%= render 'shared/page_header', pagina: @pagina %>

  <!-- Introduction -->
  <div class="p-4 md:p-6 pb-8">
    <p class="text-base md:text-lg text-gray-700 dark:text-gray-200 mb-3">
      <span class="text-<%= @pagina.base_color %>-500">•</span> Gli articoli precedono i nomi e concordano con essi nel genere e nel numero.
    </p>
    <div class="space-y-2 text-base md:text-lg text-gray-700 dark:text-gray-200 ml-6">
      <p><span class="text-<%= @pagina.base_color %>-500">•</span> <strong>determinativi</strong> → il, lo, la, l', i, gli, le</p>
      <p><span class="text-<%= @pagina.base_color %>-500">•</span> <strong>indeterminativi</strong> → un, una, un'</p>
      <p><span class="text-<%= @pagina.base_color %>-500">•</span> <strong>partitivi</strong> → del, dello, della, dell', dei, degli, delle</p>
    </div>
    <p class="text-base md:text-lg text-gray-700 dark:text-gray-200 mt-3 italic ml-6">
      Esempi: Una matita. La matita blu. Delle matite.
    </p>
  </div>

  <!-- Exercise 1: Articoli determinativi -->
  <div class="p-4 md:p-6 pb-8" data-controller="fill-blanks">
    <h2 class="text-lg md:text-xl font-bold mb-4 flex items-center gap-2">
      <span class="flex-shrink-0 bg-<%= @pagina.base_color %>-500 text-white rounded-full w-8 h-8 md:w-10 md:h-10 inline-flex items-center justify-center">1</span>
      Completa con l'articolo determinativo corretto.
    </h2>

    <% determinativi = [
      { article: "il", word: "computer" }, { article: "l'", word: "agenda" }, { article: "la", word: "penna" },
      { article: "le", word: "borse" }, { article: "gli", word: "zaini" }, { article: "l'", word: "astuccio" },
      { article: "le", word: "cuffie" }, { article: "lo", word: "scaffale" }, { article: "il", word: "filo" },
      { article: "lo", word: "zucchero" }, { article: "le", word: "rondini" }, { article: "gli", word: "incendi" }
    ] %>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3 text-base md:text-lg">
      <% determinativi.each do |item| %>
        <div class="rounded-lg p-3 flex items-center justify-between gap-4">
          <span class="text-gray-700 dark:text-gray-200 font-semibold"><span class="text-<%= @pagina.base_color %>-500">•</span> <%= item[:word] %></span>
          <input type="text"
                 class="w-16 border-b-2 border-dotted border-<%= @pagina.base_color %>-500 bg-transparent dark:text-white text-right px-2 focus:outline-none focus:border-<%= @pagina.base_color %>-700"
                 data-fill-blanks-target="input"
                 data-answer="<%= item[:article] %>"
                 data-correct-answer="<%= item[:article] %>"
                 maxlength="5">
        </div>
      <% end %>
    </div>
  </div>

  <!-- Exercise 2: Articoli indeterminativi -->
  <div class="p-4 md:p-6 pb-8" data-controller="fill-blanks">
    <h2 class="text-lg md:text-xl font-bold mb-4 flex items-center gap-2">
      <span class="flex-shrink-0 bg-<%= @pagina.base_color %>-500 text-white rounded-full w-8 h-8 md:w-10 md:h-10 inline-flex items-center justify-center">2</span>
      Completa con l'articolo indeterminativo corretto.
    </h2>

    <% indeterminativi = [
      { article: "un", word: "esempio" }, { article: "un'", word: "antenna" }, { article: "un", word: "armadio" },
      { article: "una", word: "pasticca" }, { article: "uno", word: "scienziato" }, { article: "un'", word: "occhiata" },
      { article: "un", word: "ciondolo" }, { article: "un", word: "ciuffo" }, { article: "un", word: "portaoggetti" },
      { article: "uno", word: "stecco" }, { article: "un'", word: "asticella" }, { article: "uno", word: "spiffero" }
    ] %>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3 text-base md:text-lg">
      <% indeterminativi.each do |item| %>
        <div class="rounded-lg p-3 flex items-center justify-between gap-4">
          <span class="text-gray-700 dark:text-gray-200 font-semibold"><span class="text-<%= @pagina.base_color %>-500">•</span> <%= item[:word] %></span>
          <input type="text"
                 class="w-16 border-b-2 border-dotted border-<%= @pagina.base_color %>-500 bg-transparent dark:text-white text-right px-2 focus:outline-none focus:border-<%= @pagina.base_color %>-700"
                 data-fill-blanks-target="input"
                 data-answer="<%= item[:article] %>"
                 data-correct-answer="<%= item[:article] %>"
                 maxlength="5">
        </div>
      <% end %>
    </div>
  </div>

  <div class="text-right text-sm text-gray-500 dark:text-gray-400 mb-6">
    Esercizi pp. <%= link_to "152", pagina_path("nvl5_gram_p152"), class: "text-gray-600 dark:text-gray-400 hover:text-gray-800 dark:hover:text-gray-200 underline" %>, <%= link_to "153", pagina_path("nvl5_gram_p153"), class: "text-gray-600 dark:text-gray-400 hover:text-gray-800 dark:hover:text-gray-200 underline" %>
  </div>

  <%= render 'shared/exercise_controls' %>
</div>
