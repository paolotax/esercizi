<div class="max-w-6xl mx-auto bg-white p-3 md:p-6"
     data-controller="exercise-checker text-toggle font-controls"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <%= render 'shared/page_header', pagina: @pagina %>

  <div class="space-y-6">
    <!-- Immagine principale con i 4 concetti -->
    <div class="flex justify-center">
      <%= image_tag "nvi5_mat/p094/p094_01.jpg", class: "max-w-full", alt: "Circonferenza, Semicirconferenza, Cerchio, Semicerchio" %>
    </div>

    <!-- Esercizio: Scrivi il nome corretto -->
    <div class="p-4 md:p-6 bg-<%= @pagina.base_color %>-50 rounded-lg">
      <p class="font-bold text-gray-700 mb-4">
        <span class="text-<%= @pagina.base_color %>-500">◆</span> Scrivi il nome corretto.
      </p>

      <div class="space-y-4">
        <!-- Domanda 1 -->
        <div class="flex items-center gap-3 flex-wrap">
          <span class="shrink-0">• La</span>
          <input type="text" data-correct-answer="circonferenza" class="min-w-0 flex-1 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
          <span class="shrink-0">è il contorno del <strong class="text-<%= @pagina.base_color %>-600">CERCHIO</strong>.</span>
          <%= image_tag "nvi5_mat/p094/output-1715938802094_887_906_66_66.png", class: "h-10 shrink-0", alt: "Circonferenza" %>
        </div>

        <!-- Domanda 2 -->
        <div class="flex items-center gap-3 flex-wrap">
          <span class="shrink-0">• Il</span>
          <input type="text" data-correct-answer="cerchio" class="min-w-0 flex-1 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
          <span class="shrink-0">è la parte dentro alla <strong class="text-<%= @pagina.base_color %>-600">CIRCONFERENZA</strong>.</span>
          <%= image_tag "nvi5_mat/p094/output-1715938802094_887_979_66_66.png", class: "h-10 shrink-0", alt: "Cerchio" %>
        </div>

        <!-- Domanda 3 -->
        <div class="flex items-center gap-3 flex-wrap">
          <span class="shrink-0">• La</span>
          <input type="text" data-correct-answer="semicirconferenza" class="min-w-0 flex-1 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
          <span class="shrink-0">è la metà della <strong class="text-<%= @pagina.base_color %>-600">CIRCONFERENZA</strong>.</span>
          <%= image_tag "nvi5_mat/p094/output-1715938802094_887_1051_66_66.png", class: "h-10 shrink-0", alt: "Semicirconferenza" %>
        </div>

        <!-- Domanda 4 -->
        <div class="flex items-center gap-3 flex-wrap">
          <span class="shrink-0">• Il</span>
          <input type="text" data-correct-answer="semicerchio" class="min-w-0 flex-1 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
          <span class="shrink-0">è la metà del <strong class="text-<%= @pagina.base_color %>-600">CERCHIO</strong>.</span>
          <%= image_tag "nvi5_mat/p094/output-1715938802094_887_1125_66_65.png", class: "h-10 shrink-0", alt: "Semicerchio" %>
        </div>
      </div>
    </div>

    <%= render 'shared/exercise_controls' %>
  </div>
</div>
