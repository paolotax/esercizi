<div class="page-viewer bg-white dark:bg-gray-900 p-3 md:p-6 transition-colors duration-300"
     data-controller="exercise-checker text-toggle font-controls"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <%= render 'shared/page_header', pagina: @pagina %>

  <div class="space-y-8">

    <!-- Badge IMPARARE TUTTI con Graf - MAPPA -->
    <div class="flex justify-center">
      <span class="bg-green-500 text-white font-bold px-4 py-2 rounded-2xl">IMPARARE TUTTI con Graf - MAPPA</span>
    </div>

    <!-- SEZIONE INDAGINI STATISTICHE -->
    <div class="space-y-4">
      <!-- Titolo principale -->
      <div class="flex justify-center">
        <div class="bg-blue-500 text-white font-bold px-8 py-3 rounded-2xl shadow">
          INDAGINI STATISTICHE
        </div>
      </div>

      <!-- Due rami -->
      <div class="flex flex-col md:flex-row justify-center gap-8">
        <!-- Ramo: A CHE COSA SERVONO -->
        <div class="flex flex-col items-center gap-3">
          <span class="text-cyan-500 text-2xl">&#8595;</span>
          <div class="bg-cyan-500 text-white font-bold px-6 py-2 rounded-2xl text-center">
            A CHE COSA SERVONO
          </div>
          <span class="text-cyan-500 text-xl">&#8595;</span>
          <div class="bg-white dark:bg-gray-800 rounded-2xl p-3 shadow border border-cyan-500 dark:border-cyan-600 text-gray-700 dark:text-gray-200 text-left max-w-xs">
            Servono a conoscere l'andamento di alcuni fenomeni.
          </div>
        </div>

        <!-- Ramo: COME SI EFFETTUANO -->
        <div class="flex flex-col items-center gap-3">
          <span class="text-cyan-500 text-2xl">&#8595;</span>
          <div class="bg-cyan-500 text-white font-bold px-6 py-2 rounded-2xl text-center">
            COME SI EFFETTUANO
          </div>
          <span class="text-cyan-500 text-xl">&#8595;</span>
          <div class="bg-white dark:bg-gray-800 rounded-2xl p-3 shadow border border-cyan-500 dark:border-cyan-600 text-gray-700 dark:text-gray-200 text-left">
            <ul class="list-disc pl-4 space-y-1">
              <li>Si raccolgono i dati.</li>
              <li>Si organizzano i dati in una tabella.</li>
              <li>Si rappresentano i dati in un grafico:</li>
            </ul>
            <!-- Sottotipi grafici -->
            <div class="flex flex-col md:flex-row gap-4 mt-3">
              <div class="text-center">
                <p class="font-bold text-gray-800 dark:text-gray-200">ISTOGRAMMA</p>
                <%= image_tag "nvi4_mat/p163/p163_01.jpg", class: "h-24 mx-auto mt-1 dark:bg-white dark:rounded dark:p-1", alt: "Istogramma" %>
              </div>
              <div class="text-center">
                <p class="font-bold text-gray-800 dark:text-gray-200">IDEOGRAMMA</p>
                <div class="mt-1 border border-gray-300 dark:border-gray-600 inline-block">
                  <table class="border-collapse">
                    <tr>
                      <td class="p-1 border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-200">cappelli rossi</td>
                      <td class="p-1 border border-gray-300 dark:border-gray-600"><%= image_tag "nvi4_mat/p163/output-1715932804163_794_454_146_48.png", class: "h-6 dark:bg-white dark:rounded", alt: "Cappelli rossi" %></td>
                    </tr>
                    <tr>
                      <td class="p-1 border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-200">cappelli verdi</td>
                      <td class="p-1 border border-gray-300 dark:border-gray-600"><%= image_tag "nvi4_mat/p163/output-1715932804163_794_505_146_62.png", class: "h-8 dark:bg-white dark:rounded", alt: "Cappelli verdi" %></td>
                    </tr>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- SEZIONE CLASSIFICAZIONI -->
    <div class="space-y-4">
      <!-- Titolo principale -->
      <div class="flex justify-center">
        <div class="bg-blue-500 text-white font-bold px-8 py-3 rounded-2xl shadow">
          CLASSIFICAZIONI
        </div>
      </div>

      <!-- Due rami -->
      <div class="flex flex-col md:flex-row justify-center gap-8">
        <!-- Ramo: CHE COSA SONO -->
        <div class="flex flex-col items-center gap-3">
          <span class="text-cyan-500 text-2xl">&#8595;</span>
          <div class="bg-cyan-500 text-white font-bold px-6 py-2 rounded-2xl text-center">
            CHE COSA SONO
          </div>
          <span class="text-cyan-500 text-xl">&#8595;</span>
          <div class="bg-white dark:bg-gray-800 rounded-2xl p-3 shadow border border-cyan-500 dark:border-cyan-600 text-gray-700 dark:text-gray-200 text-left max-w-xs">
            Sono raggruppamenti di elementi secondo una o pi√π caratteristiche.
          </div>
        </div>

        <!-- Ramo: COME SI RAPPRESENTANO -->
        <div class="flex flex-col items-center gap-3">
          <span class="text-cyan-500 text-2xl">&#8595;</span>
          <div class="bg-cyan-500 text-white font-bold px-6 py-2 rounded-2xl text-center">
            COME SI RAPPRESENTANO
          </div>
          <span class="text-cyan-500 text-xl">&#8595;</span>

          <!-- Tre tipi di diagramma -->
          <div class="flex flex-col gap-4">
            <!-- Eulero-Venn -->
            <div class="flex flex-col md:flex-row items-center gap-3">
              <div class="bg-custom-blue-light dark:bg-cyan-900 border border-cyan-600 text-cyan-600 dark:text-cyan-400 font-bold px-4 py-2 rounded-2xl text-center">
                DIAGRAMMA DI<br>EULERO-VENN
              </div>
              <%= image_tag "nvi4_mat/p163/p163_02.jpg", class: "h-24 dark:bg-white dark:rounded-lg dark:p-1", alt: "Diagramma Eulero-Venn" %>
            </div>

            <!-- Carroll -->
            <div class="flex flex-col md:flex-row items-center gap-3">
              <div class="bg-custom-blue-light dark:bg-cyan-900 border border-cyan-600 text-cyan-600 dark:text-cyan-400 font-bold px-4 py-2 rounded-2xl text-center">
                DIAGRAMMA DI<br>CARROLL
              </div>
              <div class="overflow-x-auto">
                <table class="border-collapse border border-gray-300 dark:border-gray-600">
                  <thead>
                    <tr>
                      <th class="p-1 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700"></th>
                      <th class="p-1 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-700 dark:text-gray-200 text-center">al cioccolato</th>
                      <th class="p-1 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-700 dark:text-gray-200 text-center">non al cioccolato</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td class="p-1 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-700 dark:text-gray-200 text-center">rotondi</td>
                      <td class="p-1 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-center"><%= image_tag "nvi4_mat/p163/output-1715932804163_550_1037_77_61.png", class: "h-8 mx-auto dark:bg-white dark:rounded", alt: "Biscotti" %></td>
                      <td class="p-1 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-center"><%= image_tag "nvi4_mat/p163/output-1715932804163_631_1037_78_61.png", class: "h-8 mx-auto dark:bg-white dark:rounded", alt: "Biscotti" %></td>
                    </tr>
                    <tr>
                      <td class="p-1 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-700 dark:text-gray-200 text-center">non rotondi</td>
                      <td class="p-1 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-center"><%= image_tag "nvi4_mat/p163/output-1715932804163_550_1101_77_61.png", class: "h-8 mx-auto dark:bg-white dark:rounded", alt: "Biscotti" %></td>
                      <td class="p-1 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-center"><%= image_tag "nvi4_mat/p163/output-1715932804163_631_1101_78_61.png", class: "h-8 mx-auto dark:bg-white dark:rounded", alt: "Biscotti" %></td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>

            <!-- Ad albero -->
            <div class="flex flex-col md:flex-row items-center gap-3">
              <div class="bg-custom-blue-light dark:bg-cyan-900 border border-cyan-600 text-cyan-600 dark:text-cyan-400 font-bold px-4 py-2 rounded-2xl text-center">
                DIAGRAMMA<br>AD ALBERO
              </div>
              <%= image_tag "nvi4_mat/p163/p163_03.jpg", class: "h-32 dark:bg-white dark:rounded-lg dark:p-1", alt: "Diagramma ad albero" %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%= render 'shared/exercise_controls' %>
  </div>
</div>
