<div class="max-w-6xl mx-auto p-3 md:p-8 bg-white" data-controller="exercise-checker">

  <%= render 'shared/page_header', pagina: @pagina %>

  <!-- Exercise 1: Plurals -->
  <div class="mb-6 bg-<%= @pagina.base_color %>-100 rounded-lg p-4 md:p-6" data-controller="fill-blanks">
    <h2 class="text-lg md:text-xl font-bold text-<%= @pagina.base_color %>-700 mb-4 flex items-center flex-wrap gap-2">
      <span class="bg-<%= @pagina.base_color %>-500 text-white rounded-full w-8 h-8 md:w-10 md:h-10 inline-flex items-center justify-center text-sm font-bold">1</span>
      <span class="bg-yellow-400 text-<%= @pagina.base_color %>-900 px-3 py-1 rounded-lg font-bold text-sm">IMPARARE TUTTI</span>
      <span>Volgi al <span class="text-<%= @pagina.base_color %>-600 font-bold">plurale</span> i seguenti nomi. Se hai dubbi, aiutati con il dizionario.</span>
    </h2>

    <% plurals = [
      { word: "medico", plural: "medici" },
      { word: "fruscio", plural: "fruscii" },
      { word: "addio", plural: "addii" },
      { word: "bue", plural: "buoi" },
      { word: "sindaco", plural: "sindaci" },
      { word: "antologia", plural: "antologie" },
      { word: "abaco", plural: "abachi" },
      { word: "chirurgo", plural: "chirurghi" },
      { word: "uomo", plural: "uomini" },
      { word: "luccichio", plural: "luccichii" },
      { word: "ottico", plural: "ottici" },
      { word: "olio", plural: "oli" },
      { word: "augurio", plural: "auguri" },
      { word: "orologio", plural: "orologi" },
      { word: "uovo", plural: "uova" },
      { word: "traffico", plural: "traffici" },
      { word: "paio", plural: "paia" },
      { word: "dialogo", plural: "dialoghi" }
    ] %>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-3 text-base md:text-lg">
      <% plurals.each do |item| %>
        <div class="flex items-center gap-3 bg-white rounded-lg p-3">
          <span class="text-<%= @pagina.base_color %>-600 font-bold">•</span>
          <span class="text-gray-700 font-semibold w-24"><%= item[:word] %></span>
          <span class="text-gray-400">→</span>
          <input type="text"
                 class="border-b-2 border-dotted border-gray-400 bg-transparent px-2 py-1 focus:outline-none focus:border-<%= @pagina.base_color %>-500 flex-grow"
                 data-fill-blanks-target="input"
                 data-answer="<%= item[:plural] %>"
                 data-correct-answer="<%= item[:plural] %>">
        </div>
      <% end %>
    </div>
  </div>

  <!-- Exercise 2: Singulars -->
  <div class="mb-6 bg-<%= @pagina.base_color %>-50 rounded-lg p-4 md:p-6" data-controller="fill-blanks">
    <h2 class="text-lg md:text-xl font-bold text-<%= @pagina.base_color %>-700 mb-4 flex items-center gap-2">
      <span class="bg-<%= @pagina.base_color %>-500 text-white rounded-full w-8 h-8 md:w-10 md:h-10 inline-flex items-center justify-center text-sm font-bold">2</span>
      <span>Volgi al <span class="text-<%= @pagina.base_color %>-600 font-bold">singolare</span> i seguenti nomi.</span>
    </h2>

    <% singulars = [
      { plural: "camicie", singular: "camicia" },
      { plural: "camici", singular: "camice" },
      { plural: "magie", singular: "magia" },
      { plural: "superfici", singular: "superficie" },
      { plural: "dei", singular: "dio" },
      { plural: "templi", singular: "tempio" },
      { plural: "scie", singular: "scia" },
      { plural: "princìpi", singular: "princìpio" },
      { plural: "asparagi", singular: "asparago" },
      { plural: "prìncipi", singular: "prìncipe" },
      { plural: "effigi", singular: "effigie" },
      { plural: "miglia", singular: "miglio" },
      { plural: "miagolii", singular: "miagolio" },
      { plural: "dee", singular: "dea" },
      { plural: "ronzii", singular: "ronzio" }
    ] %>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-3 text-base md:text-lg">
      <% singulars.each do |item| %>
        <div class="flex items-center gap-3 bg-white rounded-lg p-3">
          <span class="text-<%= @pagina.base_color %>-600 font-bold">•</span>
          <span class="text-gray-700 font-semibold w-28"><%= item[:plural] %></span>
          <span class="text-gray-400">→</span>
          <input type="text"
                 class="border-b-2 border-dotted border-gray-400 bg-transparent px-2 py-1 focus:outline-none focus:border-<%= @pagina.base_color %>-500 flex-grow"
                 data-fill-blanks-target="input"
                 data-answer="<%= item[:singular] %>"
                 data-correct-answer="<%= item[:singular] %>">
        </div>
      <% end %>
    </div>
  </div>

  <!-- Exercise 3: Promiscuous gender animals -->
  <div class="mb-6 bg-<%= @pagina.base_color %>-50 rounded-lg p-4 md:p-6" data-controller="card-selector">
    <h2 class="text-lg md:text-xl font-bold text-<%= @pagina.base_color %>-700 mb-4 flex items-center gap-2">
      <span class="bg-<%= @pagina.base_color %>-500 text-white rounded-full w-8 h-8 md:w-10 md:h-10 inline-flex items-center justify-center text-sm font-bold">3</span>
      <span>Colora i nomi di animale di <span class="text-<%= @pagina.base_color %>-600 font-bold">genere promiscuo</span> ai quali è necessario aggiungere "maschio" o "femmina" per distinguere il genere.</span>
    </h2>

    <% animals = [
      { name: "volpe", promiscuous: false },
      { name: "coniglio", promiscuous: false },
      { name: "leone", promiscuous: false },
      { name: "giraffa", promiscuous: true },
      { name: "cane", promiscuous: false },
      { name: "pantera", promiscuous: true },
      { name: "gatto", promiscuous: false },
      { name: "gazzella", promiscuous: true },
      { name: "piccione", promiscuous: true },
      { name: "cavallo", promiscuous: false },
      { name: "canguro", promiscuous: true },
      { name: "orso", promiscuous: false }
    ] %>

    <div class="grid grid-cols-2 sm:grid-cols-4 gap-3 text-base md:text-lg">
      <% animals.each do |animal| %>
        <div class="relative">
          <div class="border border-gray-300 rounded-lg px-4 py-3 text-center cursor-pointer transition-all hover:bg-<%= @pagina.base_color %>-50 bg-white"
               data-card-selector-target="card"
               data-correct="<%= animal[:promiscuous] %>"
               data-action="click->card-selector#toggle">
            <span class="font-semibold text-gray-700"><%= animal[:name] %></span>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <%= render 'shared/exercise_controls' %>

</div>
