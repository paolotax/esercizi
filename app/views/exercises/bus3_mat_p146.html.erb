<% content_for :titolo, "#{@pagina.titolo} - #{@pagina.numero}" %>

<div class="max-w-7xl mx-auto p-3 md:p-6 bg-white font-mono"
     data-controller="exercise-checker page-viewer text-toggle font-controls"
     data-page-viewer-image-url-value="<%= asset_path('bus3_mat/p146/page.png') %>"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <!-- Header -->
  <%= render 'shared/page_header', pagina: @pagina %>

  <!-- Esercizio 1: Proprietà invariantiva -->
  <div class="mb-8" data-controller="fill-blanks auto-advance">
    <div class="flex items-start gap-3 mb-4">
      <div class="flex items-center">
        <div class="bg-cyan-700 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0 z-10 relative">
          1
        </div>
        <span class="bg-yellow-300 text-cyan-700 font-bold pl-5 pr-4 py-1 rounded-r-full -ml-3">IMPARARE TUTTI</span>
      </div>
      <p class="text-gray-700"><strong>Applica la <span class="text-cyan-600">proprietà invariantiva</span> e calcola.</strong></p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      <!-- 33 - 28 -->
      <div class="bg-cyan-50 border-2 border-cyan-300 rounded-lg p-4">
        <div class="text-center mb-2">
          <span class="font-bold">33 - 28 =</span>
          <input type="text" data-fill-blanks-target="input" data-correct-answer="5"
                 class="w-12 px-2 py-1 border-b-2 border-dotted border-gray-400 text-center" inputmode="numeric">
        </div>
        <div class="text-cyan-600 text-center mb-2">↓+2 &nbsp; ↓+2</div>
        <div class="text-center">
          <input type="text" data-fill-blanks-target="input" data-correct-answer="35"
                 class="w-12 px-2 py-1 border-b-2 border-dotted border-gray-400 text-center" inputmode="numeric">
          <span>-</span>
          <input type="text" data-fill-blanks-target="input" data-correct-answer="30"
                 class="w-12 px-2 py-1 border-b-2 border-dotted border-gray-400 text-center" inputmode="numeric">
          <span>=</span>
          <input type="text" data-fill-blanks-target="input" data-correct-answer="5"
                 class="w-12 px-2 py-1 border-b-2 border-dotted border-gray-400 text-center" inputmode="numeric">
        </div>
      </div>

      <!-- 47 - 13 -->
      <div class="bg-cyan-50 border-2 border-cyan-300 rounded-lg p-4">
        <div class="text-center mb-2">
          <span class="font-bold">47 - 13 =</span>
          <input type="text" data-fill-blanks-target="input" data-correct-answer="34"
                 class="w-12 px-2 py-1 border-b-2 border-dotted border-gray-400 text-center" inputmode="numeric">
        </div>
        <div class="text-cyan-600 text-center mb-2">↓-3 &nbsp; ↓-3</div>
        <div class="text-center">
          <input type="text" data-fill-blanks-target="input" data-correct-answer="44"
                 class="w-12 px-2 py-1 border-b-2 border-dotted border-gray-400 text-center" inputmode="numeric">
          <span>-</span>
          <input type="text" data-fill-blanks-target="input" data-correct-answer="10"
                 class="w-12 px-2 py-1 border-b-2 border-dotted border-gray-400 text-center" inputmode="numeric">
          <span>=</span>
          <input type="text" data-fill-blanks-target="input" data-correct-answer="34"
                 class="w-12 px-2 py-1 border-b-2 border-dotted border-gray-400 text-center" inputmode="numeric">
        </div>
      </div>

      <!-- 54 - 19 -->
      <div class="bg-cyan-50 border-2 border-cyan-300 rounded-lg p-4">
        <div class="text-center mb-2">
          <span class="font-bold">54 - 19 =</span>
          <input type="text" data-fill-blanks-target="input" data-correct-answer="35"
                 class="w-12 px-2 py-1 border-b-2 border-dotted border-gray-400 text-center" inputmode="numeric">
        </div>
        <div class="text-cyan-600 text-center mb-2">↓+1 &nbsp; ↓+1</div>
        <div class="text-center">
          <input type="text" data-fill-blanks-target="input" data-correct-answer="55"
                 class="w-12 px-2 py-1 border-b-2 border-dotted border-gray-400 text-center" inputmode="numeric">
          <span>-</span>
          <input type="text" data-fill-blanks-target="input" data-correct-answer="20"
                 class="w-12 px-2 py-1 border-b-2 border-dotted border-gray-400 text-center" inputmode="numeric">
          <span>=</span>
          <input type="text" data-fill-blanks-target="input" data-correct-answer="35"
                 class="w-12 px-2 py-1 border-b-2 border-dotted border-gray-400 text-center" inputmode="numeric">
        </div>
      </div>

      <!-- 87 - 42 -->
      <div class="bg-cyan-50 border-2 border-cyan-300 rounded-lg p-4">
        <div class="text-center mb-2">
          <span class="font-bold">87 - 42 =</span>
          <input type="text" data-fill-blanks-target="input" data-correct-answer="45"
                 class="w-12 px-2 py-1 border-b-2 border-dotted border-gray-400 text-center" inputmode="numeric">
        </div>
        <div class="text-cyan-600 text-center mb-2">↓-2 &nbsp; ↓-2</div>
        <div class="text-center">
          <input type="text" data-fill-blanks-target="input" data-correct-answer="85"
                 class="w-12 px-2 py-1 border-b-2 border-dotted border-gray-400 text-center" inputmode="numeric">
          <span>-</span>
          <input type="text" data-fill-blanks-target="input" data-correct-answer="40"
                 class="w-12 px-2 py-1 border-b-2 border-dotted border-gray-400 text-center" inputmode="numeric">
          <span>=</span>
          <input type="text" data-fill-blanks-target="input" data-correct-answer="45"
                 class="w-12 px-2 py-1 border-b-2 border-dotted border-gray-400 text-center" inputmode="numeric">
        </div>
      </div>
    </div>
  </div>

  <!-- Esercizio 2: Calcola in colonna -->
  <div class="mb-8">
    <div class="flex items-start gap-3 mb-4">
      <div class="bg-red-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0">
        2
      </div>
      <p class="text-gray-700">
        <strong>Calcola in colonna, poi verifica i risultati con la prova.</strong>
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      <!-- 475 - 53 -->
      <%= render partial: "strumenti/sottrazioni/column_subtraction",
                 locals: Sottrazione.new(minuend: 475, subtrahend: 53,
                                         show_minuend_subtrahend: true,
                                         show_toolbar: false,
                                         show_borrow: true).to_partial_params %>

      <!-- 798 - 167 -->
      <%= render partial: "strumenti/sottrazioni/column_subtraction",
                 locals: Sottrazione.new(minuend: 798, subtrahend: 167,
                                         show_minuend_subtrahend: true,
                                         show_toolbar: false,
                                         show_borrow: true).to_partial_params %>

      <!-- 574 - 439 -->
      <%= render partial: "strumenti/sottrazioni/column_subtraction",
                 locals: Sottrazione.new(minuend: 574, subtrahend: 439,
                                         show_minuend_subtrahend: true,
                                         show_toolbar: false,
                                         show_borrow: true).to_partial_params %>

      <!-- 237 - 187 -->
      <%= render partial: "strumenti/sottrazioni/column_subtraction",
                 locals: Sottrazione.new(minuend: 237, subtrahend: 187,
                                         show_minuend_subtrahend: true,
                                         show_toolbar: false,
                                         show_borrow: true).to_partial_params %>
    </div>
  </div>

  <!-- Esercizio 3: Scopri il sottraendo -->
  <div class="mb-8" data-controller="fill-blanks auto-advance">
    <div class="flex items-start gap-3 mb-4">
      <div class="bg-red-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0">
        3
      </div>
      <p class="text-gray-700">
        <strong>Scopri il sottraendo e calcola.</strong>
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <!-- Primo problema -->
      <div class="bg-cyan-50 border-2 border-cyan-300 rounded-lg p-4">
        <p  class=" text-gray-700 mb-4">
          Le <span class="text-cyan-600 font-bold">u</span> sono il numero pari tra 2 e 5. Le <span class="text-red-500 font-bold">da</span> sono il triplo di 2. Le <span class="text-green-600 font-bold">h</span> sono il doppio di 4 meno 1.
        </p>
        <%= render partial: "strumenti/sottrazioni/column_subtraction",
                   locals: Sottrazione.new(minuend: 952, subtrahend: 764,
                                           show_minuend_subtrahend: true,
                                           show_toolbar: false,
                                           show_borrow: true).to_partial_params %>
      </div>

      <!-- Secondo problema -->
      <div class="bg-cyan-50 border-2 border-cyan-300 rounded-lg p-4">
        <p  class=" text-gray-700 mb-4">
          Le <span class="text-red-500 font-bold">da</span> sono uguali alle <span class="text-cyan-600 font-bold">u</span>. La cifra delle <span class="text-cyan-600 font-bold">u</span> è dispari e maggiore di 7. Le <span class="text-green-600 font-bold">h</span> sono la metà di 2.
        </p>
        <%= render partial: "strumenti/sottrazioni/column_subtraction",
                   locals: Sottrazione.new(minuend: 436, subtrahend: 199,
                                           show_minuend_subtrahend: true,
                                           show_toolbar: false,
                                           show_borrow: true).to_partial_params %>
      </div>
    </div>
  </div>

  <!-- Footer con controlli -->
  <%= render 'shared/exercise_controls', color: 'cyan' %>
</div>
