          <rect x="95" y="80" width="10" height="40" fill="#8B4513"/>
          <ellipse cx="100" cy="60" rx="50" ry="40" fill="#228B22"/>
          <!-- Ciliegie -->
          <% 15.times do |i| %>
            <circle cx="<%= 70 + rand(60) %>" cy="<%= 45 + rand(30) %>" r="4" fill="#DC143C"/>
          <% end %>
        </svg>
      </div>
    </div>

    <div class="space-y-3 cursor-pointer">
      <div class="bg-white p-4 rounded-lg">
        <div class="flex flex-col md:flex-row md:items-center gap-4">
