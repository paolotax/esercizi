            <label class="flex items-center gap-2 cursor-pointer hover:bg-blue-50 px-3 py-2 rounded">
              <input type="radio" name="question_0" data-multiple-choice-target="answer" data-correct-answer="true" class="w-4 h-4">
              <span class="font-bold text-blue-600">PV</span>
            </label>
            <label class="flex items-center gap-2 cursor-pointer hover:bg-purple-50 px-3 py-2 rounded">
              <input type="radio" name="question_0" data-multiple-choice-target="answer" data-correct-answer="false" class="w-4 h-4">
