  <!-- Header con badge VERIFICA -->
  <%= render 'shared/page_header', pagina: @pagina %>

  <!-- Nota introduttiva -->
  <div class="bg-orange-50 border-2 border-orange-300 rounded-lg p-4 mb-8 text-center">
    <p class="font-bold text-orange-700">
      Vai alle pp. 13-15 del <span class="underline">BLOCCO DELLE MAPPE E DEGLI SCHEMI</span>: ti aiuteranno a svolgere le attività.
    </p>
  </div>

  <!-- Esercizio 1 - Indica frasi minime -->
