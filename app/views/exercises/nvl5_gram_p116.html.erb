                 data-multiple-choice-target="answer"
                 data-correct-answer="<%= item[:correct] %>"
                 class="w-5 h-5 text-<%= @pagina.base_color %>-600">
          <span class="flex-1 text-gray-700">
            <span class="text-<%= @pagina.base_color %>-500">•</span> <%= item[:text] %>
          </span>
        </label>
      <% end %>
    </div>
  </div>

