<div class="max-w-6xl mx-auto p-3 md:p-6"
     data-controller="exercise-checker text-toggle font-controls"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <!-- Header -->
  <%= render 'shared/page_header', pagina: @pagina %>
  
  <!-- ESPRESSIONI ARITMETICHE -->
  <div class="mb-8 p-6">     
    <h2 class=" font-bold text-white bg-blue-600  px-6 py-3 mb-6 text-center">
      ESPRESSIONI ARITMETICHE
    </h2>
    <!-- SENZA PARENTESI -->
    <div class="mb-6">  
      <div class="flex items-start gap-4">  
        <div>  
          <div class="text-white font-bold px-6 py-3 ">             SENZA PARENTESI
          </div>
        </div>
        <div class="flex-1">  
          <div class="flex gap-4 items-start">  
            <div class="flex-1 p-4">               
              <h3 class="font-bold text-cyan-700 mb-3">Regola</h3>
              <ul class="space-y-2 text-gray-700">
                <li>• prima si eseguono moltiplicazioni e divisioni</li>
                <li>• poi addizioni e sottrazioni in ordine</li>
              </ul>
            </div>
            <div class=" p-4">               
              <h3 class="font-bold text-cyan-700 mb-3">Esempio</h3>
              <%= image_tag "nvi5_mat/p051/p051_01.jpg", alt: "Esempio espressioni senza parentesi" %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- CON LE PARENTESI -->
    <div>  
      <div class="flex items-start gap-4">  
        <div>  
          <div class="text-white font-bold px-6 py-3 ">             CON LE PARENTESI
          </div>
        </div>
        <div class="flex-1">  
          <div class="flex gap-4 items-start">  
            <div class="flex-1 p-4">               
              <h3 class="font-bold text-cyan-700 mb-3">Regola</h3>
              <ul class="space-y-2 text-gray-700">
                <li><span class="text-red-600">•</span> prima si eseguono le operazioni nelle parentesi tonde <strong class="text-red-600">(...)</strong></li>
                <li><span class="text-blue-600">•</span> poi quelle nelle parentesi quadre <strong class="text-blue-600">[...]</strong></li>
                <li><span class="text-green-600">•</span> infine quelle nelle parentesi graffe <strong class="text-green-600">{...}</strong></li>
              </ul>
            </div>
            <div class=" p-4">               
              <h3 class="font-bold text-cyan-700 mb-3">Esempio</h3>
              <%= image_tag "nvi5_mat/p051/p051_02.jpg", alt: "Esempio espressioni con parentesi" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- MULTIPLI E DIVISORI -->
  <div class="p-6">     
    <h2 class=" font-bold text-white bg-blue-700  px-6 py-3 mb-6 text-center">
      MULTIPLI E DIVISORI
    </h2>
    <!-- MULTIPLI -->
    <div class="mb-6">  
      <div class="flex items-start gap-4">  
        <div>  
          <div class="text-white font-bold px-6 py-3 ">             MULTIPLI
          </div>
        </div>
        <div class="flex-1">  
          <div class="flex gap-4 items-start">  
            <div class="flex-1 p-4">               
              <h3 class="font-bold text-cyan-700 mb-3">Regola</h3>
              <p class="text-gray-700">
                Un numero è <strong>multiplo</strong> di un altro quando lo contiene esattamente una o più volte.
              </p>
            </div>
            <div class=" p-4">               
              <h3 class="font-bold text-cyan-700 mb-3">Esempio</h3>
              <div class="space-y-3">  
                <div class="flex items-center gap-3">                   <span class=" font-bold text-blue-600">•</span>
                  <span><strong>10</strong> è multiplo di <strong class="text-blue-600">5</strong></span>
                  <span class="text-gray-600">→</span>
                  <span class="font-mono text-blue-600 font-bold">5 × 2 = 10</span>
                </div>
                <div class="flex items-center gap-3">                   <span class=" font-bold text-blue-600">•</span>
                  <span><strong>21</strong> è multiplo di <strong class="text-blue-600">7</strong></span>
                  <span class="text-gray-600">→</span>
                  <span class="font-mono text-blue-600 font-bold">7 × 3 = 21</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- DIVISORI -->
    <div>  
      <div class="flex items-start gap-4">  
        <div>  
          <div class="text-white font-bold px-6 py-3 ">             DIVISORI
          </div>
        </div>
        <div class="flex-1">  
          <div class="flex gap-4 items-start">  
            <div class="flex-1 p-4">               
              <h3 class="font-bold text-cyan-700 mb-3">Regola</h3>
              <p class="text-gray-700">
                Un numero è <strong>divisore</strong> di un altro se lo divide esattamente.
              </p>
            </div>
            <div class=" p-4">               
              <h3 class="font-bold text-cyan-700 mb-3">Esempio</h3>
              <div class="space-y-3">  
                <div class="flex items-center gap-3">                   <span class=" font-bold text-red-600">•</span>
                  <span><strong class="text-red-600">5</strong> è divisore di <strong>10</strong></span>
                  <span class="text-gray-600">→</span>
                  <span class="font-mono text-red-600 font-bold">10 : 5 = 2</span>
                </div>
                <div class="flex items-center gap-3">                   <span class=" font-bold text-red-600">•</span>
                  <span><strong class="text-red-600">7</strong> è divisore di <strong>21</strong></span>
                  <span class="text-gray-600">→</span>
                  <span class="font-mono text-red-600 font-bold">21 : 7 = 3</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Exercise Controls -->
  <%= render 'shared/exercise_controls', color: 'blue', current_page: 'nvi5_mat_p051', show_exercise_buttons: false %>
</div>
