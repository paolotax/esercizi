<div class="max-w-7xl mx-auto p-3 md:p-6 bg-white dark:bg-gray-900 text-black dark:text-white transition-colors duration-300"
     data-controller="exercise-checker text-toggle font-controls"
     data-text-toggle-target="content"
     data-font-controls-target="content">
  
  <!-- Header -->
  <%= render 'shared/page_header', pagina: @pagina %>

  <div class="space-y-8">

    <!-- Exercise 1: Visual demonstration -->
    <div class="bg-[#C7EAFB] dark:bg-cyan-900/40 -ml-3 md:-ml-0 -mr-3 md:mr-0 p-6 mb-6">

      <div class="flex items-start gap-3 mb-6">
        <div class="bg-red-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0">
          1
        </div>
        <h2 class="font-bold text-gray-800 dark:text-gray-200">Osserva come si calcola 421 + 163.</h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <!-- First step: Unità -->
        <div class="text-center">
          <div class="text-left mb-3 dark:text-white">
            <div class="font-semibold">Prima somma</div>
            <div class="font-semibold">le <span class="text-blue-600 dark:text-blue-400">unità</span>.</div>
          </div>
          <div class="flex items-start gap-2 justify-center">
            <div class="inline-block border-4 border-blue-400 dark:border-blue-500 rounded-lg p-4 bg-white relative">
              <div class="grid grid-cols-3 gap-2 mb-2">
                <div class="text-center text-green-600 font-bold">h</div>
                <div class="text-center text-red-500 font-bold">da</div>
                <div class="text-center text-blue-600 font-bold">u</div>
              </div>
              <div class="grid grid-cols-3 gap-2 mb-1">
                <div class="bg-white border-2 border-transparent rounded p-2 text-center font-bold">4</div>
                <div class="bg-white border-2 border-transparent rounded p-2 text-center font-bold">2</div>
                <div class="bg-white border-2 border-transparent rounded p-2 text-center font-bold text-blue-600">1</div>
              </div>
              <div class="grid grid-cols-3 gap-2 mb-2">
                <div class="bg-white border-2 border-transparent rounded p-2 text-center font-bold">1</div>
                <div class="bg-white border-2 border-transparent rounded p-2 text-center font-bold">6</div>
                <div class="bg-white border-2 border-transparent rounded p-2 text-center font-bold text-blue-600">3</div>
              </div>
              <div class="border-t-4 border-gray-800">
                <div class="grid grid-cols-3 gap-2 pt-2">
                  <div class="p-2 text-center text-transparent">.</div>
                  <div class="p-2 text-center text-transparent">.</div>
                  <div class="bg-white border-2 border-transparent rounded p-2 text-center font-bold text-blue-600">4</div>
                </div>
              </div>
              <!-- Freccia verticale a fianco della colonna unità -->
              <div class="absolute" style="left: 87%; margin-left: -0.375rem; top: 3rem; height: 6.5rem;">
                <svg class="w-3 h-full text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 130" preserveAspectRatio="xMidYMid meet">
                  <line x1="12" y1="0" x2="12" y2="120" stroke="currentColor" stroke-width="2"/>
                  <polygon points="12,130 7,120 17,120" fill="currentColor"/>
                </svg>
              </div>
            </div>
            <div class="flex flex-col justify-between h-full pt-16">
              <div class="font-bold text-gray-700 dark:text-gray-300">+</div>
              <div class="font-bold text-gray-700 dark:text-gray-300 pb-12">=</div>
            </div>
          </div>
        </div>

        <!-- Second step: Decine -->
        <div class="text-center">
          <div class="text-left mb-3 dark:text-white">
            <div class="font-semibold">Dopo somma</div>
            <div class="font-semibold">le <span class="text-red-500 dark:text-red-400">decine</span>.</div>
          </div>
          <div class="flex items-start gap-2 justify-center">
            <div class="inline-block border-4 border-blue-400 dark:border-blue-500 rounded-lg p-4 bg-white relative">
              <div class="grid grid-cols-3 gap-2 mb-2">
                <div class="text-center text-green-600 font-bold">h</div>
                <div class="text-center text-red-500 font-bold">da</div>
                <div class="text-center text-blue-600 font-bold">u</div>
              </div>
              <div class="grid grid-cols-3 gap-2 mb-1">
                <div class="bg-white border-2 border-transparent rounded p-2 text-center font-bold">4</div>
                <div class="bg-white border-2 border-transparent rounded p-2 text-center font-bold text-red-500">2</div>
                <div class="bg-white border-2 border-transparent rounded p-2 text-center font-bold">1</div>
              </div>
              <div class="grid grid-cols-3 gap-2 mb-2">
                <div class="bg-white border-2 border-transparent rounded p-2 text-center font-bold">1</div>
                <div class="bg-white border-2 border-transparent rounded p-2 text-center font-bold text-red-500">6</div>
                <div class="bg-white border-2 border-transparent rounded p-2 text-center font-bold">3</div>
              </div>
              <div class="border-t-4 border-gray-800">
                <div class="grid grid-cols-3 gap-2 pt-2">
                  <div class="p-2 text-center text-transparent">.</div>
                  <div class="bg-white border-2 border-transparent rounded p-2 text-center font-bold text-red-500">8</div>
                  <div class="bg-white border-2 border-transparent rounded p-2 text-center font-bold">4</div>
                </div>
              </div>
              <!-- Freccia verticale a fianco della colonna decine -->
              <div class="absolute" style="left: 59%; margin-left: -0.375rem; top: 3rem; height: 6.5rem;">
                <svg class="w-3 h-full text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 130" preserveAspectRatio="xMidYMid meet">
                  <line x1="12" y1="0" x2="12" y2="120" stroke="currentColor" stroke-width="2"/>
                  <polygon points="12,130 7,120 17,120" fill="currentColor"/>
                </svg>
              </div>
            </div>
            <div class="flex flex-col justify-between h-full pt-16">
              <div class="font-bold text-gray-700 dark:text-gray-300">+</div>
              <div class="font-bold text-gray-700 dark:text-gray-300 pb-12">=</div>
            </div>
          </div>
        </div>

        <!-- Third step: Centinaia -->
        <div class="text-center">
          <div class="text-left font-semibold mb-3 dark:text-white">
            <div>Infine somma</div>
            <div>le <span class="text-green-600 dark:text-green-400">centinaia</span>.</div>
          </div>
          <div class="flex items-start gap-2 justify-center">
            <div class="inline-block border-4 border-blue-400 dark:border-blue-500 rounded-lg p-4 bg-white relative">
              <div class="grid grid-cols-3 gap-2 mb-2">
                <div class="text-center text-green-600 font-bold">h</div>
                <div class="text-center text-red-500 font-bold">da</div>
                <div class="text-center text-blue-600 font-bold">u</div>
              </div>
              <div class="grid grid-cols-3 gap-2 mb-1">
                <div class="bg-white border-2 border-transparent rounded p-2 text-center font-bold text-green-600">4</div>
                <div class="bg-white border-2 border-transparent rounded p-2 text-center font-bold">2</div>
                <div class="bg-white border-2 border-transparent rounded p-2 text-center font-bold">1</div>
              </div>
              <div class="grid grid-cols-3 gap-2 mb-2">
                <div class="bg-white border-2 border-transparent rounded p-2 text-center font-bold text-green-600">1</div>
                <div class="bg-white border-2 border-transparent rounded p-2 text-center font-bold">6</div>
                <div class="bg-white border-2 border-transparent rounded p-2 text-center font-bold">3</div>
              </div>
              <div class="border-t-4 border-gray-800">
                <div class="grid grid-cols-3 gap-2 pt-2">
                  <div class="bg-white border-2 border-transparent rounded p-2 text-center font-bold text-green-600">5</div>
                  <div class="bg-white border-2 border-transparent rounded p-2 text-center font-bold">8</div>
                  <div class="bg-white border-2 border-transparent rounded p-2 text-center font-bold">4</div>
                </div>
              </div>
              <!-- Freccia verticale a fianco della colonna centinaia -->
              <div class="absolute" style="left: 31%; margin-left: -0.375rem; top: 3rem; height: 6.5rem;">
                <svg class="w-3 h-full text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 130" preserveAspectRatio="xMidYMid meet">
                  <line x1="12" y1="0" x2="12" y2="120" stroke="currentColor" stroke-width="2"/>
                  <polygon points="12,130 7,120 17,120" fill="currentColor"/>
                </svg>
              </div>
            </div>
            <div class="flex flex-col justify-between h-full pt-16">
              <div class="font-bold text-gray-700 dark:text-gray-300">+</div>
              <div class="font-bold text-gray-700 dark:text-gray-300 pb-12">=</div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Exercise 2: Practice problems -->
    <div class="bg-white dark:bg-gray-800 p-6 mb-6 rounded-lg">

      <div class="flex items-start gap-3 mb-6">
        <div class="bg-red-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0">
          2
        </div>
        <h2 class="font-bold text-gray-800 dark:text-gray-200">Metti in colonna e calcola.</h2>
      </div>

      <div class="flex flex-wrap gap-8 justify-center items-start">

        <!-- Esempio 1: Esercizio vuoto - 2 addendi semplici -->
        <%= addizione_grid [345, 253], show_addends: true, show_labels: true, show_carry: false, grid_style: :column %>
        <!-- Esempio 2: Esercizio vuoto - 2 addendi semplici -->
        <%= addizione_grid [382, 216], show_labels: true, show_carry: false, grid_style: :column %>
        <!-- Esempio 3: Soluzione completa - 2 addendi grandi -->
        <%= addizione_grid [617, 370], show_labels: true, show_carry: false, grid_style: :column %>
      </div>
    </div>

    <!-- Exercise 3: Problems in notebook -->
    <div class="bg-white dark:bg-gray-800 p-6 mb-6 rounded-lg"
         data-controller="operation-viewer">
      <div class="flex items-start gap-3 mb-6">
        <div class="bg-red-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0">
          3
        </div>
        <h2 class="font-bold text-gray-800 dark:text-gray-200">Calcola in colonna sul quaderno, oppure clicca sulle operazioni e svolgile nella griglia.</h2>
      </div>

      <%
        es3_gruppi = [
          { lettera: "a", colore: "blue", operazioni: [
            { op: "216+372", answer: "588" },
            { op: "385+414", answer: "799" },
            { op: "721+200", answer: "921" },
            { op: "74+120", answer: "194" },
            { op: "308+290", answer: "598" }
          ]},
          { lettera: "b", colore: "green", operazioni: [
            { op: "527+261", answer: "788" },
            { op: "252+426", answer: "678" },
            { op: "580+17", answer: "597" },
            { op: "834+152", answer: "986" },
            { op: "423+266", answer: "689" }
          ]},
          { lettera: "c", colore: "purple", operazioni: [
            { op: "337+240", answer: "577" },
            { op: "615+384", answer: "999" },
            { op: "290+208", answer: "498" },
            { op: "36+251", answer: "287" },
            { op: "134+562", answer: "696" }
          ]},
          { lettera: "d", colore: "pink", operazioni: [
            { op: "1303+594", answer: "1897" },
            { op: "2438+1131", answer: "3569" },
            { op: "1027+351", answer: "1378" },
            { op: "2571+1307", answer: "3878" },
            { op: "2438+450", answer: "2888" }
          ]}
        ]
      %>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        <% es3_gruppi.each do |gruppo| %>
          <%
            operations_data = gruppo[:operazioni].each_with_index.map { |item, idx|
              { operation: item[:op], targetId: "es3-#{gruppo[:lettera]}-#{idx}" }
            }
          %>
          <div class="bg-<%= gruppo[:colore] %>-50 dark:bg-<%= gruppo[:colore] %>-900/30 p-4 rounded-lg border-2 border-transparent hover:border-<%= gruppo[:colore] %>-400 transition">
            <p class="font-bold text-red-500 dark:text-red-400 mb-3 flex items-center gap-2">
              <%= gruppo[:lettera] %>.
              <button type="button"
                      data-action="click->operation-viewer#openGroup"
                      data-operations='<%= operations_data.to_json %>'
                      data-type="addizione"
                      data-layout="column"
                      data-display="modal"
                      data-group="<%= gruppo[:lettera] %>"
                      class="p-1 text-gray-400 hover:text-<%= gruppo[:colore] %>-600 dark:hover:text-<%= gruppo[:colore] %>-400 transition print-hidden"
                      title="Apri gruppo <%= gruppo[:lettera] %> nella calcolatrice">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
                </svg>
              </button>
            </p>
            <ul class="space-y-2">
              <% gruppo[:operazioni].each_with_index do |item, idx| %>
                <li class="flex items-center gap-2 flex-wrap dark:text-white">
                  <span><%= item[:op].gsub('+', ' + ') %> =</span>
                  <input type="text"
                         data-operation-id="es3-<%= gruppo[:lettera] %>-<%= idx %>"
                         data-correct-answer="<%= item[:answer] %>"
                         class="w-16 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent">
                </li>
              <% end %>
            </ul>
          </div>
        <% end %>
      </div>

      <!-- Modal unificato -->
      <%= render 'shared/operation_viewer', display: :modal, title: "Addizioni in colonna", color: "blue" %>
    </div>

    <!-- Quaderno link allineato a destra -->
    <div class="p-4 mb-8 text-right">
      <span class="text-gray-600 dark:text-gray-400">Quaderno →</span> <%= link_to "p. 144", pagina_path("bus3_mat_p144"), class: "text-cyan-600 dark:text-cyan-400 font-bold hover:underline" %>
    </div>

    <!-- Exercise Controls -->
    <%= render 'shared/exercise_controls' %>
  </div>
</div>
