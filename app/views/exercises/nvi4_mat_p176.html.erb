<div class="max-w-6xl mx-auto bg-white dark:bg-gray-900 p-3 md:p-6 transition-colors duration-300"
     data-controller="exercise-checker text-toggle font-controls"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <%= render 'shared/page_header', pagina: @pagina %>

  <div class="space-y-6">

    <!-- Esercizi IMPARARE TUTTI (1 e 2) -->
    <div class="p-5 bg-white dark:bg-gray-800 rounded-2xl border-3 border-yellow-400 dark:border-yellow-500">
      <div class="grid grid-cols-1 md:grid-cols-2 divide-y-2 md:divide-y-0 md:divide-x-2 divide-<%= @pagina.base_color %>-300 dark:divide-<%= @pagina.base_color %>-600">
        <!-- Esercizio 1: Numeri successivi -->
        <div class="md:pr-6">
          <p class="font-bold text-gray-700 dark:text-gray-200 mb-4">
            <%= imparare_tutti_badge(1) %>
            Scrivi i numeri <span class="text-cyan-600 dark:text-cyan-400">successivi</span> ai numeri dati. Segui l'esempio.
          </p>

          <div class="overflow-x-auto">
            <table class="w-full border-collapse border-2 border-cyan-400 dark:border-cyan-600">
              <tbody>
                <!-- Esempio -->
                <tr>
                  <td class="p-2 border-2 border-cyan-400 dark:border-cyan-600 text-center font-bold whitespace-nowrap dark:text-gray-200">23 709</td>
                  <td class="p-2 border-2 border-cyan-400 dark:border-cyan-600 text-center font-bold text-cyan-600 dark:text-cyan-400 whitespace-nowrap">23 710</td>
                </tr>
                <% [
                  { num: "66 199", answer: "66200" },
                  { num: "88 700", answer: "88701" },
                  { num: "151 999", answer: "152000" },
                  { num: "836 539", answer: "836540" },
                  { num: "300 009", answer: "300010" },
                  { num: "347 921", answer: "347922" },
                  { num: "459 999", answer: "460000" }
                ].each do |row| %>
                  <tr>
                    <td class="p-2 border-2 border-cyan-400 dark:border-cyan-600 text-center font-bold whitespace-nowrap dark:text-gray-200"><%= row[:num] %></td>
                    <td class="p-2 border-2 border-cyan-400 dark:border-cyan-600 text-center bg-white dark:bg-gray-700">
                      <input type="text" data-correct-answer="<%= row[:answer] %>" class="w-full border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white dark:placeholder-gray-400">
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>

        <!-- Esercizio 2: Numeri precedenti -->
        <div class="pt-6 md:pt-0 md:pl-6">
          <p class="font-bold text-gray-700 dark:text-gray-200 mb-4">
            <%= imparare_tutti_badge(2) %>
            Scrivi i numeri <span class="text-cyan-600 dark:text-cyan-400">precedenti</span> ai numeri dati. Segui l'esempio.
          </p>

          <div class="overflow-x-auto">
            <table class="w-full border-collapse border-2 border-cyan-400 dark:border-cyan-600">
              <tbody>
                <!-- Esempio -->
                <tr>
                  <td class="p-2 border-2 border-cyan-400 dark:border-cyan-600 text-center font-bold text-cyan-600 dark:text-cyan-400 whitespace-nowrap">65 349</td>
                  <td class="p-2 border-2 border-cyan-400 dark:border-cyan-600 text-center font-bold whitespace-nowrap dark:text-gray-200">65 350</td>
                </tr>
                <% [
                  { num: "127 819", answer: "127818" },
                  { num: "80 030", answer: "80029" },
                  { num: "581 500", answer: "581499" },
                  { num: "77 000", answer: "76999" },
                  { num: "74 010", answer: "74009" },
                  { num: "270 400", answer: "270399" },
                  { num: "780 000", answer: "779999" }
                ].each do |row| %>
                  <tr>
                    <td class="p-2 border-2 border-cyan-400 dark:border-cyan-600 text-center bg-white dark:bg-gray-700">
                      <input type="text" data-correct-answer="<%= row[:answer] %>" class="w-full border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white dark:placeholder-gray-400">
                    </td>
                    <td class="p-2 border-2 border-cyan-400 dark:border-cyan-600 text-center font-bold whitespace-nowrap dark:text-gray-200"><%= row[:num] %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <!-- Esercizio 3: Completa le tabelle +1 e -1 -->
    <div>
      <p class="font-bold text-gray-700 dark:text-gray-200 mb-4">
        <%= numero_esercizio_badge(3) %>
        Completa le tabelle.
      </p>

      <div class="space-y-4">
        <!-- Tabella +1 -->
        <div class="overflow-x-auto">
          <table class="border-collapse border-2 border-cyan-400 dark:border-cyan-600">
            <tbody>
              <tr>
                <td rowspan="2" class="p-2 border-2 border-cyan-400 dark:border-cyan-600 text-center font-bold bg-custom-blue-light dark:bg-cyan-900 dark:text-gray-200">+ 1</td>
                <td class="p-2 border-2 border-cyan-400 dark:border-cyan-600 text-center font-bold bg-custom-blue-light dark:bg-cyan-900 dark:text-gray-200">199</td>
                <td class="p-2 border-2 border-cyan-400 dark:border-cyan-600 text-center font-bold bg-custom-blue-light dark:bg-cyan-900 dark:text-gray-200">309</td>
                <td class="p-2 border-2 border-cyan-400 dark:border-cyan-600 text-center font-bold bg-custom-blue-light dark:bg-cyan-900 dark:text-gray-200 whitespace-nowrap">4 009</td>
                <td class="p-2 border-2 border-cyan-400 dark:border-cyan-600 text-center font-bold bg-custom-blue-light dark:bg-cyan-900 dark:text-gray-200 whitespace-nowrap">5 099</td>
                <td class="p-2 border-2 border-cyan-400 dark:border-cyan-600 text-center font-bold bg-custom-blue-light dark:bg-cyan-900 dark:text-gray-200 whitespace-nowrap">80 009</td>
                <td class="p-2 border-2 border-cyan-400 dark:border-cyan-600 text-center font-bold bg-custom-blue-light dark:bg-cyan-900 dark:text-gray-200 whitespace-nowrap">70 499</td>
                <td class="p-2 border-2 border-cyan-400 dark:border-cyan-600 text-center font-bold bg-custom-blue-light dark:bg-cyan-900 dark:text-gray-200 whitespace-nowrap">90 999</td>
                <td class="p-2 border-2 border-cyan-400 dark:border-cyan-600 text-center font-bold bg-custom-blue-light dark:bg-cyan-900 dark:text-gray-200 whitespace-nowrap">145 999</td>
                <td class="p-2 border-2 border-cyan-400 dark:border-cyan-600 text-center font-bold bg-custom-blue-light dark:bg-cyan-900 dark:text-gray-200 whitespace-nowrap">600 099</td>
              </tr>
              <tr>
                <% ["200", "310", "4010", "5100", "80010", "70500", "91000", "146000", "600100"].each do |ans| %>
                  <td class="p-4 border-2 border-cyan-400 dark:border-cyan-600 text-center bg-white dark:bg-gray-700">
                    <input type="text" data-correct-answer="<%= ans %>" class="w-20 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white">
                  </td>
                <% end %>
              </tr>
            </tbody>
          </table>
        </div>

        <!-- Tabella -1 -->
        <div class="overflow-x-auto">
          <table class="border-collapse border-2 border-cyan-400 dark:border-cyan-600">
            <tbody>
              <tr>
                <td rowspan="2" class="p-2 border-2 border-cyan-400 dark:border-cyan-600 text-center font-bold bg-custom-blue-light dark:bg-cyan-900 dark:text-gray-200">â€“ 1</td>
                <td class="p-2 border-2 border-cyan-400 dark:border-cyan-600 text-center font-bold bg-custom-blue-light dark:bg-cyan-900 dark:text-gray-200">600</td>
                <td class="p-2 border-2 border-cyan-400 dark:border-cyan-600 text-center font-bold bg-custom-blue-light dark:bg-cyan-900 dark:text-gray-200">701</td>
                <td class="p-2 border-2 border-cyan-400 dark:border-cyan-600 text-center font-bold bg-custom-blue-light dark:bg-cyan-900 dark:text-gray-200 whitespace-nowrap">1 100</td>
                <td class="p-2 border-2 border-cyan-400 dark:border-cyan-600 text-center font-bold bg-custom-blue-light dark:bg-cyan-900 dark:text-gray-200 whitespace-nowrap">1 810</td>
                <td class="p-2 border-2 border-cyan-400 dark:border-cyan-600 text-center font-bold bg-custom-blue-light dark:bg-cyan-900 dark:text-gray-200 whitespace-nowrap">45 110</td>
                <td class="p-2 border-2 border-cyan-400 dark:border-cyan-600 text-center font-bold bg-custom-blue-light dark:bg-cyan-900 dark:text-gray-200 whitespace-nowrap">81 001</td>
                <td class="p-2 border-2 border-cyan-400 dark:border-cyan-600 text-center font-bold bg-custom-blue-light dark:bg-cyan-900 dark:text-gray-200 whitespace-nowrap">12 100</td>
                <td class="p-2 border-2 border-cyan-400 dark:border-cyan-600 text-center font-bold bg-custom-blue-light dark:bg-cyan-900 dark:text-gray-200 whitespace-nowrap">700 010</td>
                <td class="p-2 border-2 border-cyan-400 dark:border-cyan-600 text-center font-bold bg-custom-blue-light dark:bg-cyan-900 dark:text-gray-200 whitespace-nowrap">936 000</td>
              </tr>
              <tr>
                <% ["599", "700", "1099", "1809", "45109", "81000", "12099", "700009", "935999"].each do |ans| %>
                  <td class="p-4 border-2 border-cyan-400 dark:border-cyan-600 text-center bg-white dark:bg-gray-700">
                    <input type="text" data-correct-answer="<%= ans %>" class="w-20 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white">
                  </td>
                <% end %>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- Esercizio 4: Completa la tabella Precedente/NUMERO/Successivo -->
    <div>
      <p class="font-bold text-gray-700 mb-4">
        <%= numero_esercizio_badge(4) %>
        Completa la tabella come nell'esempio. Riempi sempre per prima la colonna del numero.
      </p>

      <div class="overflow-x-auto">
        <table class="w-full border-collapse border-2 border-cyan-400">
          <thead>
            <tr>
              <th class="p-2 border-2 border-cyan-400 bg-custom-blue-light text-center">Precedente che termina con 0</th>
              <th class="p-2 border-2 border-cyan-400 bg-custom-blue-light text-center">Precedente</th>
              <th class="p-2 border-2 border-cyan-400 bg-custom-blue-light text-center">NUMERO</th>
              <th class="p-2 border-2 border-cyan-400 bg-custom-blue-light text-center">Successivo</th>
              <th class="p-2 border-2 border-cyan-400 bg-custom-blue-light text-center">Successivo che termina con 0</th>
            </tr>
          </thead>
          <tbody>
            <!-- Esempio -->
            <tr>
              <td class="p-2 border-2 border-cyan-400 text-center font-bold text-cyan-600 whitespace-nowrap">66 230</td>
              <td class="p-2 border-2 border-cyan-400 text-center font-bold text-cyan-600 whitespace-nowrap">66 236</td>
              <td class="p-2 border-2 border-cyan-400 text-center font-bold whitespace-nowrap">66 237</td>
              <td class="p-2 border-2 border-cyan-400 text-center font-bold text-cyan-600 whitespace-nowrap">66 238</td>
              <td class="p-2 border-2 border-cyan-400 text-center font-bold text-cyan-600 whitespace-nowrap">66 240</td>
            </tr>
            <% [
              { numero: "65 400", prec0: "65400", prec: "65399", succ: "65401", succ0: "65410", given: "numero" },
              { numero: "52 400", prec0: "52390", prec: "52399", succ: "52401", succ0: "52410", given: "prec" },
              { numero: "457 290", prec0: "457280", prec: "457289", succ: "457291", succ0: "457300", given: "succ" },
              { numero: "87 010", prec0: "87010", prec: "87009", succ: "87011", succ0: "87020", given: "numero" },
              { numero: "96 379", prec0: "96370", prec: "96378", succ: "96380", succ0: "96390", given: "prec" },
              { numero: "138 511", prec0: "138510", prec: "138510", succ: "138512", succ0: "138520", given: "numero" }
            ].each do |row| %>
              <tr>
                <td class="p-2 border-2 border-cyan-400 text-center bg-white">
                  <input type="text" data-correct-answer="<%= row[:prec0] %>" class="w-full border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
                </td>
                <td class="p-2 border-2 border-cyan-400 text-center <%= row[:given] == 'prec' ? 'font-bold' : 'bg-white' %>">
                  <% if row[:given] == 'prec' %>
                    <%= row[:prec].to_i.to_s.reverse.gsub(/(\d{3})(?=\d)/, '\\1 ').reverse %>
                  <% else %>
                    <input type="text" data-correct-answer="<%= row[:prec] %>" class="w-full border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
                  <% end %>
                </td>
                <td class="p-2 border-2 border-cyan-400 text-center <%= row[:given] == 'numero' ? 'font-bold' : 'bg-white' %>">
                  <% if row[:given] == 'numero' %>
                    <%= row[:numero] %>
                  <% else %>
                    <input type="text" data-correct-answer="<%= row[:numero].gsub(' ', '') %>" class="w-full border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
                  <% end %>
                </td>
                <td class="p-2 border-2 border-cyan-400 text-center <%= row[:given] == 'succ' ? 'font-bold' : 'bg-white' %>">
                  <% if row[:given] == 'succ' %>
                    <%= row[:succ].to_i.to_s.reverse.gsub(/(\d{3})(?=\d)/, '\\1 ').reverse %>
                  <% else %>
                    <input type="text" data-correct-answer="<%= row[:succ] %>" class="w-full border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
                  <% end %>
                </td>
                <td class="p-2 border-2 border-cyan-400 text-center bg-white">
                  <input type="text" data-correct-answer="<%= row[:succ0] %>" class="w-full border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <%= render 'shared/exercise_controls' %>
  </div>
</div>
