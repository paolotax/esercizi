<% content_for :titolo, "#{@pagina.titolo} - #{@pagina.numero}" %>

<div class="max-w-7xl mx-auto p-3 md:p-6 bg-white dark:bg-gray-900 text-black dark:text-white font-mono transition-colors duration-300"
     data-controller="exercise-checker fill-blanks auto-advance page-viewer text-toggle font-controls"
     data-page-viewer-image-url-value="<%= asset_path('bus3_mat/p081/page.png') %>"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <!-- Header -->
  <%= render 'shared/page_header', pagina: @pagina %>

  <!-- Esercizio 1 -->
  <div class="p-4 md:p-6 mb-8">
    <div class="flex items-center gap-3 mb-6">
      <div class="bg-red-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0">
        1
      </div>
      <p class="text-gray-700 dark:text-gray-200"><strong>Osserva e completa.</strong></p>
    </div>

    <!-- Primo esempio: 0,2 -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
      <div class="flex flex-col items-center">
        <div class="bg-white dark:bg-white rounded-xl p-1 mb-4">
          <%= image_tag "bus3_mat/p081/output-1743504902081_133_277_131_125.png", alt: "Cerchio diviso in decimi - 2 parti colorate", style: "width: 100%; max-width: 120%; height: auto;", class: "rounded-lg" %>
        </div>
        <div class="mt-4 text-center">
          <p class="font-bold text-gray-700 dark:text-gray-200">0,2</p>
          <table class="mx-auto mt-2 border-collapse">
            <tr>
              <td class="px-2 font-bold border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 dark:text-gray-200">u</td>
              <td class="px-2 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800"></td>
              <td class="px-2 font-bold border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 dark:text-gray-200">d</td>
            </tr>
            <tr>
              <td class="px-2 font-bold border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 dark:text-gray-200">0</td>
              <td class="px-2 font-bold border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 dark:text-gray-200">,</td>
              <td class="px-2 font-bold border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 dark:text-gray-200">2</td>
            </tr>
          </table>
        </div>
      </div>
      <div class="text-gray-700 dark:text-gray-200 space-y-2">
        <p>L'intero è diviso in
          <input type="text" data-fill-blanks-target="input" data-correct-answer="10"
                 class="w-12 px-2 py-1 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-white dark:bg-gray-800 dark:text-white"
                 maxlength="2" inputmode="numeric">
          parti uguali.
        </p>
        <p>Ogni parte è <strong>un decimo</strong> dell'intero.</p>
        <p>Le parti colorate sono
          <input type="text" data-fill-blanks-target="input" data-correct-answer="2"
                 class="w-12 px-2 py-1 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-white dark:bg-gray-800 dark:text-white"
                 maxlength="2" inputmode="numeric">.
        </p>
        <p>Sono colorati <strong>0 interi</strong> e <strong>2 decimi</strong>.</p>
        <ul class="list-disc ml-6 mt-2">
          <li>Puoi scrivere <span class="font-bold">²⁄₁₀</span> o <strong>0,2</strong> cioè <strong>0 u</strong>, <strong>2 d</strong>.</li>
          <li>Si legge: <strong>zero virgola due</strong>.</li>
        </ul>
      </div>
    </div>

    <!-- Secondo esempio: 0,7 -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <div class="flex flex-col items-center">
        <div class="bg-white dark:bg-white rounded-xl p-1 mb-4">
          <%= image_tag "bus3_mat/p081/output-1743504902081_576_279_125_124.png", alt: "Cerchio diviso in decimi - 7 parti colorate", style: "width: 100%; max-width: 120%; height: auto;", class: "rounded-lg" %>
        </div>
        <div class="mt-4 text-center">
          <p class="font-bold text-gray-700 dark:text-gray-200">0,7</p>
          <table class="mx-auto mt-2 border-collapse">
            <tr>
              <td class="px-2 font-bold border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 dark:text-gray-200">u</td>
              <td class="px-2 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800"></td>
              <td class="px-2 font-bold border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 dark:text-gray-200">d</td>
            </tr>
            <tr>
              <td class="px-2 font-bold border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 dark:text-gray-200">0</td>
              <td class="px-2 font-bold border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 dark:text-gray-200">,</td>
              <td class="px-2 font-bold border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 dark:text-gray-200">7</td>
            </tr>
          </table>
        </div>
      </div>
      <div class="text-gray-700 dark:text-gray-200 space-y-2">
        <p>L'intero è diviso in
          <input type="text" data-fill-blanks-target="input" data-correct-answer="10"
                 class="w-12 px-2 py-1 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-white dark:bg-gray-800 dark:text-white"
                 maxlength="2" inputmode="numeric">
          parti uguali.
        </p>
        <p>Ogni parte è <strong>un decimo</strong> dell'intero.</p>
        <p>Le parti colorate sono
          <input type="text" data-fill-blanks-target="input" data-correct-answer="7"
                 class="w-12 px-2 py-1 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-white dark:bg-gray-800 dark:text-white"
                 maxlength="2" inputmode="numeric">.
        </p>
        <p>Sono colorati <strong>0 interi</strong> e
          <input type="text" data-fill-blanks-target="input" data-correct-answer="7"
                 class="w-12 px-2 py-1 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-white dark:bg-gray-800 dark:text-white"
                 maxlength="2" inputmode="numeric">
          <strong>decimi</strong>.
        </p>
        <ul class="list-disc ml-6 mt-2">
          <li>Puoi scrivere <span class="font-bold">⁷⁄₁₀</span> o <strong>0,7</strong> cioè
            <input type="text" data-fill-blanks-target="input" data-correct-answer="0"
                   class="w-8 px-1 py-1 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-white dark:bg-gray-800 dark:text-white"
                   maxlength="1" inputmode="numeric"> <strong>u</strong>,
            <input type="text" data-fill-blanks-target="input" data-correct-answer="7"
                   class="w-8 px-1 py-1 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-white dark:bg-gray-800 dark:text-white"
                   maxlength="1" inputmode="numeric"> <strong>d</strong>.
          </li>
          <li>Si legge: <strong>zero virgola sette</strong>.</li>
        </ul>
      </div>
    </div>
  </div>

  <!-- Esercizio 2 -->
  <div class="p-4 md:p-6 mb-8">
    <div class="flex items-center gap-3 mb-6">
      <div class="bg-red-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0">
        2
      </div>
      <p class="text-gray-700 dark:text-gray-200"><strong>Scrivi la frazione e il numero decimale rappresentati dalla parte colorata.</strong></p>
    </div>

    <div class="flex justify-center">
      <div class="bg-white dark:bg-white rounded-xl p-1">
        <%= image_tag "bus3_mat/p081/p81_02.jpg", alt: "Esercizio frazioni decimali", style: "width: 100%; max-width: 120%; height: auto;", class: "rounded-lg" %>
      </div>
    </div>
  </div>

  <!-- Esercizio 3 -->
  <div class="p-4 md:p-6 mb-8">
    <div class="flex items-center gap-3 mb-6">
      <div class="bg-red-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0">
        3
      </div>
      <p class="text-gray-700 dark:text-gray-200"><strong>Osserva la rappresentazione dei decimi sulla linea dei numeri e completa.</strong></p>
    </div>

    <div class="flex justify-center">
      <div class="bg-white dark:bg-white rounded-xl p-1">
        <%= image_tag "bus3_mat/p081/p81_03.jpg", alt: "Linea dei numeri con decimi", style: "width: 100%; max-width: 120%; height: auto;", class: "rounded-lg" %>
      </div>
    </div>
  </div>

  <!-- Quaderno link -->
  <div class="p-4 mb-8 text-right">
    <span class="text-gray-600 dark:text-gray-400">Quaderno →</span> <%= link_to "p. 162", pagina_path("bus3_mat_p162"), class: "text-cyan-600 dark:text-cyan-400 font-bold hover:underline" %>
  </div>

  <!-- Footer con controlli -->
  <%= render 'shared/exercise_controls', color: 'blue' %>
</div>
