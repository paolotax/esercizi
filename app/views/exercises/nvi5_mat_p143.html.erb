<div class="max-w-6xl mx-auto bg-white p-3 md:p-6"
     data-controller="exercise-checker text-toggle font-controls"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <%= render 'shared/page_header', pagina: @pagina %>

  <div class="space-y-6">
    <!-- Tabella MAPPA IMPARARE TUTTI -->
    <div class="p-4 bg-custom-blue rounded-lg">
      <div class="overflow-x-auto">
        <table class="w-full border-collapse bg-white">
          <thead>
            <tr>
              <th class="p-3 bg-yellow-400 text-gray-800 border border-gray-300">SOLIDO</th>
              <th class="p-3 bg-yellow-400 text-gray-800 border border-gray-300">SVILUPPO</th>
              <th class="p-3 bg-yellow-400 text-gray-800 border border-gray-300">SUPERFICIE</th>
            </tr>
          </thead>
          <tbody>
            <!-- Parallelepipedo rettangolo -->
            <tr>
              <td class="p-3 border border-gray-300 bg-white">
                <p class="font-bold text-<%= @pagina.base_color %>-600 mb-2">Parallelepipedo rettangolo</p>
                <%= image_tag "nvi5_mat/p143/p143_01.jpg", class: "max-w-[80px] mx-auto", alt: "Parallelepipedo" %>
              </td>
              <td class="p-3 border border-gray-300 bg-white text-center">
                <%= image_tag "nvi5_mat/p143/p143_04.jpg", class: "max-w-[200px] mx-auto", alt: "Sviluppo parallelepipedo" %>
              </td>
              <td class="p-3 border border-gray-300 bg-white">
                <p class="mb-1"><span class="font-bold">Sℓ</span> = perimetro di base × h</p>
                <p><span class="font-bold">St</span> = Sℓ + (area di base × 2)</p>
              </td>
            </tr>
            <!-- Cubo -->
            <tr>
              <td class="p-3 border border-gray-300 bg-white">
                <p class="font-bold text-<%= @pagina.base_color %>-600 mb-2">Cubo</p>
                <%= image_tag "nvi5_mat/p143/p143_02.jpg", class: "max-w-[80px] mx-auto", alt: "Cubo" %>
              </td>
              <td class="p-3 border border-gray-300 bg-white text-center">
                <%= image_tag "nvi5_mat/p143/p143_05.jpg", class: "max-w-[200px] mx-auto", alt: "Sviluppo cubo" %>
              </td>
              <td class="p-3 border border-gray-300 bg-white">
                <p class="mb-1"><span class="font-bold">Sℓ</span> = (ℓ × ℓ) × 4</p>
                <p><span class="font-bold">St</span> = (ℓ × ℓ) × 6</p>
              </td>
            </tr>
            <!-- Prisma regolare -->
            <tr>
              <td class="p-3 border border-gray-300 bg-white">
                <p class="font-bold text-<%= @pagina.base_color %>-600 mb-2">Prisma regolare</p>
                <%= image_tag "nvi5_mat/p143/p143_03.jpg", class: "max-w-[80px] mx-auto", alt: "Prisma regolare" %>
              </td>
              <td class="p-3 border border-gray-300 bg-white text-center">
                <%= image_tag "nvi5_mat/p143/p143_06.jpg", class: "max-w-[200px] mx-auto", alt: "Sviluppo prisma" %>
              </td>
              <td class="p-3 border border-gray-300 bg-white">
                <p class="mb-1"><span class="font-bold">Sℓ</span> = perimetro di base × h</p>
                <p><span class="font-bold">St</span> = Sℓ + (area di base × 2)</p>
              </td>
            </tr>
            <!-- Piramide regolare -->
            <tr>
              <td class="p-3 border border-gray-300 bg-white">
                <p class="font-bold text-<%= @pagina.base_color %>-600 mb-2">Piramide regolare</p>
                <%= image_tag "nvi5_mat/p143/output-1715938802143_164_831_111_107.png", class: "max-w-[70px] mx-auto", alt: "Piramide regolare" %>
              </td>
              <td class="p-3 border border-gray-300 bg-white text-center">
                <%= image_tag "nvi5_mat/p143/p143_07.jpg", class: "max-w-[200px] mx-auto", alt: "Sviluppo piramide" %>
              </td>
              <td class="p-3 border border-gray-300 bg-white">
                <p class="mb-1"><span class="font-bold">Sℓ</span> = [(ℓ × a) : 2] × numero dei lati di base</p>
                <p><span class="font-bold">St</span> = Sℓ + area di base</p>
              </td>
            </tr>
            <!-- Cilindro -->
            <tr>
              <td class="p-3 border border-gray-300 bg-white">
                <p class="font-bold text-<%= @pagina.base_color %>-600 mb-2">Cilindro</p>
                <%= image_tag "nvi5_mat/p143/output-1715938802143_178_1014_80_136.png", class: "max-w-[60px] mx-auto", alt: "Cilindro" %>
              </td>
              <td class="p-3 border border-gray-300 bg-white text-center">
                <%= image_tag "nvi5_mat/p143/p143_08.jpg", class: "max-w-[200px] mx-auto", alt: "Sviluppo cilindro" %>
              </td>
              <td class="p-3 border border-gray-300 bg-white">
                <p class="mb-1"><span class="font-bold">Sℓ</span> = circonferenza di base × h</p>
                <p><span class="font-bold">St</span> = Sℓ + (area di base × 2)</p>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <%= render 'shared/exercise_controls' %>
  </div>
</div>
