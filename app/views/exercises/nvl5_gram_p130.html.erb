<div class="max-w-6xl mx-auto bg-white dark:bg-gray-900 text-black dark:text-white p-3 md:p-6 transition-colors duration-300"
     data-controller="exercise-checker text-toggle font-controls"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <%= render 'shared/page_header', pagina: @pagina %>

  <!-- ANDARE - 1ª coniugazione -->
  <div class="bg-<%= @pagina.base_color %>-50 dark:bg-<%= @pagina.base_color %>-900/30 p-4 md:p-6 pb-8 rounded-lg mb-6">
    <h2 class="font-bold text-center text-orange-700 dark:text-orange-400 mb-6 pb-2 border-b-2 border-orange-300 dark:border-orange-600">
      ANDARE - 1ª coniugazione
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- INDICATIVO -->
      <div class="bg-white dark:bg-gray-800 rounded-lg p-4">
        <h3 class="font-bold text-orange-600 dark:text-orange-400 mb-4">INDICATIVO</h3>
        <div class="mb-4">
          <h4 class="font-bold text-gray-700 dark:text-gray-200 mb-2">Presente</h4>
          <p class="text-gray-600 dark:text-gray-400">io vado - tu vai - lui/lei va - noi andiamo - voi andate - loro vanno</p>
        </div>
        <div>
          <h4 class="font-bold text-gray-700 dark:text-gray-200 mb-2">Futuro semplice</h4>
          <p class="text-gray-600 dark:text-gray-400">io andro - tu andrai - lui/lei andra - noi andremo - voi andrete - loro andranno</p>
        </div>
      </div>

      <!-- CONGIUNTIVO, CONDIZIONALE, IMPERATIVO -->
      <div class="space-y-4">
        <div class="bg-white dark:bg-gray-800 rounded-lg p-4">
          <h3 class="font-bold text-orange-600 dark:text-orange-400 mb-3">CONGIUNTIVO</h3>
          <h4 class="font-bold text-gray-700 dark:text-gray-200 mb-2">Presente</h4>
          <p class="text-gray-600 dark:text-gray-400">(che) io vada - tu vada - lui/lei vada - noi andiamo - voi andiate - loro vadano</p>
        </div>
        <div class="bg-white dark:bg-gray-800 rounded-lg p-4">
          <h3 class="font-bold text-orange-600 dark:text-orange-400 mb-3">CONDIZIONALE</h3>
          <h4 class="font-bold text-gray-700 dark:text-gray-200 mb-2">Presente</h4>
          <p class="text-gray-600 dark:text-gray-400">io andrei - tu andresti - lui/lei andrebbe - noi andremmo - voi andreste - loro andrebbero</p>
        </div>
        <div class="bg-white dark:bg-gray-800 rounded-lg p-4">
          <h3 class="font-bold text-orange-600 dark:text-orange-400 mb-3">IMPERATIVO</h3>
          <p class="text-gray-600 dark:text-gray-400 text-center font-semibold">va' (tu) - andate (voi)</p>
        </div>
      </div>
    </div>
  </div>

  <!-- DARE - 1ª coniugazione -->
  <div class="bg-<%= @pagina.base_color %>-100 dark:bg-<%= @pagina.base_color %>-900/40 p-4 md:p-6 pb-8 rounded-lg mb-6">
    <h2 class="font-bold text-center text-blue-700 dark:text-blue-400 mb-6 pb-2 border-b-2 border-blue-300 dark:border-blue-600">
      DARE - 1ª coniugazione
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- INDICATIVO -->
      <div class="bg-white dark:bg-gray-800 rounded-lg p-4">
        <h3 class="font-bold text-blue-600 dark:text-blue-400 mb-4">INDICATIVO</h3>
        <div class="mb-4">
          <h4 class="font-bold text-gray-700 dark:text-gray-200 mb-2">Presente</h4>
          <p class="text-gray-600 dark:text-gray-400">io do - tu dai - lui/lei da - noi diamo - voi date - loro danno</p>
        </div>
        <div class="mb-4">
          <h4 class="font-bold text-gray-700 dark:text-gray-200 mb-2">Passato remoto</h4>
          <p class="text-gray-600 dark:text-gray-400">io diedi (detti) - tu desti - lui/lei diede (dette) - noi demmo - voi deste - loro diedero (dettero)</p>
        </div>
        <div>
          <h4 class="font-bold text-gray-700 dark:text-gray-200 mb-2">Futuro semplice</h4>
          <p class="text-gray-600 dark:text-gray-400">io daro - tu darai - lui/lei dara - noi daremo - voi darete - loro daranno</p>
        </div>
      </div>

      <!-- CONGIUNTIVO, IMPERATIVO -->
      <div class="space-y-4">
        <div class="bg-white dark:bg-gray-800 rounded-lg p-4">
          <h3 class="font-bold text-blue-600 dark:text-blue-400 mb-3">CONGIUNTIVO</h3>
          <div class="mb-3">
            <h4 class="font-bold text-gray-700 dark:text-gray-200 mb-2">Presente</h4>
            <p class="text-gray-600 dark:text-gray-400">(che) io dia - tu dia - lui/lei dia - noi diamo - voi diate - loro diano</p>
          </div>
          <div>
            <h4 class="font-bold text-gray-700 dark:text-gray-200 mb-2">Imperfetto</h4>
            <p class="text-gray-600 dark:text-gray-400">(che) io dessi - tu dessi - lui/lei desse - noi dessimo - voi deste - loro dessero</p>
          </div>
        </div>
        <div class="bg-white dark:bg-gray-800 rounded-lg p-4">
          <h3 class="font-bold text-blue-600 dark:text-blue-400 mb-3">IMPERATIVO</h3>
          <p class="text-gray-600 dark:text-gray-400 text-center font-semibold">da' (tu) - date (voi)</p>
        </div>
      </div>
    </div>
  </div>

  <!-- STARE - 1ª coniugazione -->
  <div class="bg-<%= @pagina.base_color %>-50 dark:bg-<%= @pagina.base_color %>-900/30 p-4 md:p-6 pb-8 rounded-lg mb-6">
    <h2 class="font-bold text-center text-green-700 dark:text-green-400 mb-6 pb-2 border-b-2 border-green-300 dark:border-green-600">
      STARE - 1ª coniugazione
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- INDICATIVO -->
      <div class="bg-white dark:bg-gray-800 rounded-lg p-4">
        <h3 class="font-bold text-green-600 dark:text-green-400 mb-4">INDICATIVO</h3>
        <div class="mb-4">
          <h4 class="font-bold text-gray-700 dark:text-gray-200 mb-2">Presente</h4>
          <p class="text-gray-600 dark:text-gray-400">io sto - tu stai - lui/lei sta - noi stiamo - voi state - loro stanno</p>
        </div>
        <div class="mb-4">
          <h4 class="font-bold text-gray-700 dark:text-gray-200 mb-2">Passato remoto</h4>
          <p class="text-gray-600 dark:text-gray-400">io stetti - tu stesti - lui/lei stette - noi stemmo - voi steste - loro stettero</p>
        </div>
        <div>
          <h4 class="font-bold text-gray-700 dark:text-gray-200 mb-2">Futuro semplice</h4>
          <p class="text-gray-600 dark:text-gray-400">io staro - tu starai - lui/lei stara - noi staremo - voi starete - loro staranno</p>
        </div>
      </div>

      <!-- CONGIUNTIVO, IMPERATIVO -->
      <div class="space-y-4">
        <div class="bg-white dark:bg-gray-800 rounded-lg p-4">
          <h3 class="font-bold text-green-600 dark:text-green-400 mb-3">CONGIUNTIVO</h3>
          <div class="mb-3">
            <h4 class="font-bold text-gray-700 dark:text-gray-200 mb-2">Presente</h4>
            <p class="text-gray-600 dark:text-gray-400">(che) io stia - tu stia - lui/lei stia - noi stiamo - voi stiate - loro stiano</p>
          </div>
          <div>
            <h4 class="font-bold text-gray-700 dark:text-gray-200 mb-2">Imperfetto</h4>
            <p class="text-gray-600 dark:text-gray-400">(che) io stessi - tu stessi - lui/lei stesse - noi stessimo - voi steste - loro stessero</p>
          </div>
        </div>
        <div class="bg-white dark:bg-gray-800 rounded-lg p-4">
          <h3 class="font-bold text-green-600 dark:text-green-400 mb-3">IMPERATIVO</h3>
          <p class="text-gray-600 dark:text-gray-400 text-center font-semibold">sta' (tu) - state (voi)</p>
        </div>
      </div>
    </div>
  </div>

  <%= render 'shared/exercise_controls' %>
</div>
