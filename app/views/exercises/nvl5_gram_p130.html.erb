<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">

  <!-- Header -->
  <%= render 'shared/page_header', pagina: @pagina %>

  <!-- ANDARE - 1ª coniugazione -->
  <div class="bg-gradient-to-br from-orange-50 to-white rounded-2xl shadow-lg p-6 mb-6">
    <h2 class="text-2xl font-bold text-center text-orange-700 mb-6 pb-2 border-b-2 border-orange-300">
      ANDARE - 1ª coniugazione
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- INDICATIVO -->
      <div class="bg-white rounded-xl p-5 shadow-md">
        <h3 class="text-xl font-bold text-orange-600 mb-4">INDICATIVO</h3>

        <div class="mb-4">
          <h4 class="font-bold text-gray-700 mb-2">Presente</h4>
          <p class="text-gray-600 text-sm">io vado - tu vai - lui/lei va - noi andiamo - voi andate - loro vanno</p>
        </div>

        <div>
          <h4 class="font-bold text-gray-700 mb-2">Futuro semplice</h4>
          <p class="text-gray-600 text-sm">io andrò - tu andrai - lui/lei andrà - noi andremo - voi andrete - loro andranno</p>
        </div>
      </div>

      <!-- CONGIUNTIVO, CONDIZIONALE, IMPERATIVO -->
      <div class="space-y-4">
        <div class="bg-white rounded-xl p-5 shadow-md">
          <h3 class="text-xl font-bold text-orange-600 mb-3">CONGIUNTIVO</h3>
          <h4 class="font-bold text-gray-700 mb-2">Presente</h4>
          <p class="text-gray-600 text-sm">(che) io vada - tu vada - lui/lei vada - noi andiamo - voi andiate - loro vadano</p>
        </div>

        <div class="bg-white rounded-xl p-5 shadow-md">
          <h3 class="text-xl font-bold text-orange-600 mb-3">CONDIZIONALE</h3>
          <h4 class="font-bold text-gray-700 mb-2">Presente</h4>
          <p class="text-gray-600 text-sm">io andrei - tu andresti - lui/lei andrebbe - noi andremmo - voi andreste - loro andrebbero</p>
        </div>

        <div class="bg-white rounded-xl p-5 shadow-md">
          <h3 class="text-xl font-bold text-orange-600 mb-3">IMPERATIVO</h3>
          <p class="text-gray-600 text-sm text-center font-semibold">va' (tu) - andate (voi)</p>
        </div>
      </div>
    </div>
  </div>

  <!-- DARE - 1ª coniugazione -->
  <div class="bg-gradient-to-br from-blue-50 to-white rounded-2xl shadow-lg p-6 mb-6">
    <h2 class="text-2xl font-bold text-center text-blue-700 mb-6 pb-2 border-b-2 border-blue-300">
      DARE - 1ª coniugazione
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- INDICATIVO -->
      <div class="bg-white rounded-xl p-5 shadow-md">
        <h3 class="text-xl font-bold text-blue-600 mb-4">INDICATIVO</h3>

        <div class="mb-4">
          <h4 class="font-bold text-gray-700 mb-2">Presente</h4>
          <p class="text-gray-600 text-sm">io do - tu dai - lui/lei dà - noi diamo - voi date - loro danno</p>
        </div>

        <div class="mb-4">
          <h4 class="font-bold text-gray-700 mb-2">Passato remoto</h4>
          <p class="text-gray-600 text-sm">io diedi (detti) - tu desti - lui/lei diede (dette) - noi demmo - voi deste - loro diedero (dettero)</p>
        </div>

        <div>
          <h4 class="font-bold text-gray-700 mb-2">Futuro semplice</h4>
          <p class="text-gray-600 text-sm">io darò - tu darai - lui/lei darà - noi daremo - voi darete - loro daranno</p>
        </div>
      </div>

      <!-- CONGIUNTIVO, IMPERATIVO -->
      <div class="space-y-4">
        <div class="bg-white rounded-xl p-5 shadow-md">
          <h3 class="text-xl font-bold text-blue-600 mb-3">CONGIUNTIVO</h3>

          <div class="mb-3">
            <h4 class="font-bold text-gray-700 mb-2">Presente</h4>
            <p class="text-gray-600 text-sm">(che) io dia - tu dia - lui/lei dia - noi diamo - voi diate - loro diano</p>
          </div>

          <div>
            <h4 class="font-bold text-gray-700 mb-2">Imperfetto</h4>
            <p class="text-gray-600 text-sm">(che) io dessi - tu dessi - lui/lei desse - noi dessimo - voi deste - loro dessero</p>
          </div>
        </div>

        <div class="bg-white rounded-xl p-5 shadow-md">
          <h3 class="text-xl font-bold text-blue-600 mb-3">IMPERATIVO</h3>
          <p class="text-gray-600 text-sm text-center font-semibold">da' (tu) - date (voi)</p>
        </div>
      </div>
    </div>
  </div>

  <!-- STARE - 1ª coniugazione -->
  <div class="bg-gradient-to-br from-green-50 to-white rounded-2xl shadow-lg p-6 mb-6">
    <h2 class="text-2xl font-bold text-center text-green-700 mb-6 pb-2 border-b-2 border-green-300">
      STARE - 1ª coniugazione
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- INDICATIVO -->
      <div class="bg-white rounded-xl p-5 shadow-md">
        <h3 class="text-xl font-bold text-green-600 mb-4">INDICATIVO</h3>

        <div class="mb-4">
          <h4 class="font-bold text-gray-700 mb-2">Presente</h4>
          <p class="text-gray-600 text-sm">io sto - tu stai - lui/lei sta - noi stiamo - voi state - loro stanno</p>
        </div>

        <div class="mb-4">
          <h4 class="font-bold text-gray-700 mb-2">Passato remoto</h4>
          <p class="text-gray-600 text-sm">io stetti - tu stesti - lui/lei stette - noi stemmo - voi steste - loro stettero</p>
        </div>

        <div>
          <h4 class="font-bold text-gray-700 mb-2">Futuro semplice</h4>
          <p class="text-gray-600 text-sm">io starò - tu starai - lui/lei starà - noi staremo - voi starete - loro staranno</p>
        </div>
      </div>

      <!-- CONGIUNTIVO, IMPERATIVO -->
      <div class="space-y-4">
        <div class="bg-white rounded-xl p-5 shadow-md">
          <h3 class="text-xl font-bold text-green-600 mb-3">CONGIUNTIVO</h3>

          <div class="mb-3">
            <h4 class="font-bold text-gray-700 mb-2">Presente</h4>
            <p class="text-gray-600 text-sm">(che) io stia - tu stia - lui/lei stia - noi stiamo - voi stiate - loro stiano</p>
          </div>

          <div>
            <h4 class="font-bold text-gray-700 mb-2">Imperfetto</h4>
            <p class="text-gray-600 text-sm">(che) io stessi - tu stessi - lui/lei stesse - noi stessimo - voi steste - loro stessero</p>
          </div>
        </div>

        <div class="bg-white rounded-xl p-5 shadow-md">
          <h3 class="text-xl font-bold text-green-600 mb-3">IMPERATIVO</h3>
          <p class="text-gray-600 text-sm text-center font-semibold">sta' (tu) - state (voi)</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Exercise controls -->
  <%= render 'shared/exercise_controls', color: 'cyan', show_exercise_buttons: false %>
</div>
