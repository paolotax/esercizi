<div class="max-w-6xl mx-auto bg-white dark:bg-gray-900 p-3 md:p-6 transition-colors duration-300"
     data-controller="exercise-checker text-toggle font-controls"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <%= render 'shared/page_header', pagina: @pagina %>

  <div class="space-y-6">

    <!-- Titolo -->
    <h1 class="text-2xl md:text-3xl font-bold text-center text-cyan-500 dark:text-cyan-400">
      POLIGONI
    </h1>

    <!-- Box definizione con immagine -->
    <div class="p-4 bg-custom-blue dark:bg-cyan-900 rounded-2xl">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <p class="text-gray-700 dark:text-gray-200">
            Il <span class="text-cyan-600 dark:text-cyan-400 font-bold">poligono</span> è la parte di piano delimitata da una linea spezzata semplice chiusa.
          </p>
        </div>
        <div class="flex justify-center">
          <%= image_tag "nvi4_mat/p241/p241_01.jpg", class: "max-w-full h-auto dark:bg-white dark:rounded-lg dark:p-1", alt: "Poligono con elementi" %>
        </div>
      </div>
    </div>

    <!-- Esercizio 1 IMPARARE TUTTI -->
    <div class="p-5 bg-white dark:bg-gray-800 rounded-2xl border-3 border-yellow-400 dark:border-yellow-500 space-y-4">
      <p class="font-bold text-gray-700 dark:text-gray-200">
        <%= imparare_tutti_badge(1) %>
        Colora di rosso i poligoni.
      </p>

      <div class="flex justify-center">
        <%= image_tag "nvi4_mat/p241/p241_02.jpg", class: "max-w-full h-auto dark:bg-white dark:rounded-lg dark:p-2", alt: "Figure da colorare" %>
      </div>
    </div>

    <!-- Esercizio 2 -->
    <div class="space-y-4">
      <p class="font-bold text-gray-700 dark:text-gray-200">
        <%= numero_esercizio_badge(2) %> In ogni poligono segna in rosso un vertice, in blu un lato e in giallo un angolo. Poi completa.
      </p>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <!-- Triangolo -->
        <div class="border-2 border-cyan-400 dark:border-cyan-600 rounded-lg p-4 bg-white dark:bg-gray-700">
          <div class="flex items-start gap-4">
            <svg viewBox="0 0 100 100" class="w-24 h-24 shrink-0">
              <polygon points="50,10 10,90 90,90" fill="none" stroke="currentColor" stroke-width="2" class="text-gray-700 dark:text-gray-300"/>
            </svg>
            <div class="space-y-2 flex-1">
              <div class="flex items-center gap-2 text-gray-700 dark:text-gray-200">
                <span>n° lati</span>
                <input type="text" class="w-12 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white" data-correct-answer="3">
              </div>
              <div class="flex items-center gap-2 text-gray-700 dark:text-gray-200">
                <span>n° angoli</span>
                <input type="text" class="w-12 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white" data-correct-answer="3">
              </div>
              <div class="flex items-center gap-2 text-gray-700 dark:text-gray-200">
                <span>n° vertici</span>
                <input type="text" class="w-12 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white" data-correct-answer="3">
              </div>
              <div class="flex items-center gap-2 text-gray-700 dark:text-gray-200">
                <span>nome</span>
                <input type="text" class="flex-1 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white" data-correct-answer="triangolo">
              </div>
            </div>
          </div>
        </div>

        <!-- Pentagono -->
        <div class="border-2 border-cyan-400 dark:border-cyan-600 rounded-lg p-4 bg-white dark:bg-gray-700">
          <div class="flex items-start gap-4">
            <svg viewBox="0 0 100 100" class="w-24 h-24 shrink-0">
              <polygon points="50,5 95,38 77,95 23,95 5,38" fill="none" stroke="currentColor" stroke-width="2" class="text-gray-700 dark:text-gray-300"/>
            </svg>
            <div class="space-y-2 flex-1">
              <div class="flex items-center gap-2 text-gray-700 dark:text-gray-200">
                <span>n° lati</span>
                <input type="text" class="w-12 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white" data-correct-answer="5">
              </div>
              <div class="flex items-center gap-2 text-gray-700 dark:text-gray-200">
                <span>n° angoli</span>
                <input type="text" class="w-12 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white" data-correct-answer="5">
              </div>
              <div class="flex items-center gap-2 text-gray-700 dark:text-gray-200">
                <span>n° vertici</span>
                <input type="text" class="w-12 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white" data-correct-answer="5">
              </div>
              <div class="flex items-center gap-2 text-gray-700 dark:text-gray-200">
                <span>nome</span>
                <input type="text" class="flex-1 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white" data-correct-answer="pentagono">
              </div>
            </div>
          </div>
        </div>

        <!-- Quadrato -->
        <div class="border-2 border-cyan-400 dark:border-cyan-600 rounded-lg p-4 bg-white dark:bg-gray-700">
          <div class="flex items-start gap-4">
            <svg viewBox="0 0 100 100" class="w-24 h-24 shrink-0">
              <rect x="10" y="10" width="80" height="80" fill="none" stroke="currentColor" stroke-width="2" class="text-gray-700 dark:text-gray-300"/>
            </svg>
            <div class="space-y-2 flex-1">
              <div class="flex items-center gap-2 text-gray-700 dark:text-gray-200">
                <span>n° lati</span>
                <input type="text" class="w-12 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white" data-correct-answer="4">
              </div>
              <div class="flex items-center gap-2 text-gray-700 dark:text-gray-200">
                <span>n° angoli</span>
                <input type="text" class="w-12 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white" data-correct-answer="4">
              </div>
              <div class="flex items-center gap-2 text-gray-700 dark:text-gray-200">
                <span>n° vertici</span>
                <input type="text" class="w-12 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white" data-correct-answer="4">
              </div>
              <div class="flex items-center gap-2 text-gray-700 dark:text-gray-200">
                <span>nome</span>
                <input type="text" class="flex-1 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white" data-correct-answer="quadrato">
              </div>
            </div>
          </div>
        </div>

        <!-- Esagono -->
        <div class="border-2 border-cyan-400 dark:border-cyan-600 rounded-lg p-4 bg-white dark:bg-gray-700">
          <div class="flex items-start gap-4">
            <svg viewBox="0 0 100 100" class="w-24 h-24 shrink-0">
              <polygon points="50,5 93,27 93,73 50,95 7,73 7,27" fill="none" stroke="currentColor" stroke-width="2" class="text-gray-700 dark:text-gray-300"/>
            </svg>
            <div class="space-y-2 flex-1">
              <div class="flex items-center gap-2 text-gray-700 dark:text-gray-200">
                <span>n° lati</span>
                <input type="text" class="w-12 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white" data-correct-answer="6">
              </div>
              <div class="flex items-center gap-2 text-gray-700 dark:text-gray-200">
                <span>n° angoli</span>
                <input type="text" class="w-12 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white" data-correct-answer="6">
              </div>
              <div class="flex items-center gap-2 text-gray-700 dark:text-gray-200">
                <span>n° vertici</span>
                <input type="text" class="w-12 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white" data-correct-answer="6">
              </div>
              <div class="flex items-center gap-2 text-gray-700 dark:text-gray-200">
                <span>nome</span>
                <input type="text" class="flex-1 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white" data-correct-answer="esagono">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Esercizio 3 -->
    <div class="space-y-4">
      <p class="font-bold text-gray-700 dark:text-gray-200">
        <%= numero_esercizio_badge(3) %> Osserva i lati e gli angoli dei poligoni, poi completa la tabella con le lettere.
      </p>

      <div class="flex justify-center mb-4">
        <%= image_tag "nvi4_mat/p241/p241_03.jpg", class: "max-w-full h-auto dark:bg-white dark:rounded-lg dark:p-2", alt: "Poligoni A-E" %>
      </div>

      <div class="overflow-x-auto">
        <table class="w-full border-collapse border-2 border-cyan-400 dark:border-cyan-600">
          <thead>
            <tr>
              <th class="p-3 border-2 border-cyan-400 dark:border-cyan-600 bg-cyan-100 dark:bg-cyan-900 text-gray-800 dark:text-gray-200 text-center">
                <span class="font-bold">Poligoni equilateri</span><br>
                <span class="font-normal">(hanno i lati congruenti)</span>
              </th>
              <th class="p-3 border-2 border-cyan-400 dark:border-cyan-600 bg-cyan-100 dark:bg-cyan-900 text-gray-800 dark:text-gray-200 text-center">
                <span class="font-bold">Poligoni equiangoli</span><br>
                <span class="font-normal">(hanno gli angoli congruenti)</span>
              </th>
              <th class="p-3 border-2 border-cyan-400 dark:border-cyan-600 bg-cyan-100 dark:bg-cyan-900 text-gray-800 dark:text-gray-200 text-center">
                <span class="font-bold">Poligoni regolari</span><br>
                <span class="font-normal">(hanno lati e angoli congruenti)</span>
              </th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td class="p-3 border-2 border-cyan-400 dark:border-cyan-600 bg-white dark:bg-gray-700 text-center">
                <input type="text" class="w-full border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white" data-correct-answer="A, E">
              </td>
              <td class="p-3 border-2 border-cyan-400 dark:border-cyan-600 bg-white dark:bg-gray-700 text-center">
                <input type="text" class="w-full border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white" data-correct-answer="D, E">
              </td>
              <td class="p-3 border-2 border-cyan-400 dark:border-cyan-600 bg-white dark:bg-gray-700 text-center">
                <input type="text" class="w-full border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white" data-correct-answer="E">
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <%= render 'shared/exercise_controls' %>
  </div>
</div>
