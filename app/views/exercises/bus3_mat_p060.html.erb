        <div class="flex gap-6">
          <label class="flex items-center gap-2 cursor-pointer">
            <input type="radio" name="prob_a" value="mol" data-correct-answer="false" class="w-5 h-5">
            <span>Moltiplicazione</span>
          </label>
          <label class="flex items-center gap-2 cursor-pointer">
            <input type="radio" name="prob_a" value="div" data-correct-answer="true" class="w-5 h-5">
            <span>Divisione</span>
          </label>
        </div>
      </div>

