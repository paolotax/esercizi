<div class="max-w-7xl mx-auto p-3 md:p-6" 
     data-controller="exercise-checker" >

  <!-- Header -->
  <%= render 'shared/page_header', pagina: @pagina %>

  <div class="space-y-8">
    <!-- Exercise 1: Osserva come si calcola -->
    <div class="bg-[#C7EAFB] -ml-3 md:-ml-0 -mr-3 md:mr-0 p-6 mb-6">
      <div class="flex items-center gap-3 mb-6">
        <div class="bg-red-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0">
          1
        </div>
        <h2>Osserva come si calcola <span class="whitespace-nowrap font-bold">487 - 258</span>.</h2>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 items-start">

        <!-- Passo 1: Sottrai le unità -->
        <div class="flex flex-col justify-between">
          <div class="p-4">
            <p class="text-sm mb-2">
              Sottrai le <span class="text-blue-600 font-bold">unità</span>: 7 - 8 non si può fare!
            </p>
            <p class="text-sm mb-2">
              Prendi in prestito <span class="text-red-600 font-bold">1 da</span>: ora le
              <span class="text-blue-600 font-bold">unità</span> sono 17 e puoi sottrarre.
            </p>
          </div>
          <%= render partial: "shared/column_subtraction", locals: {
               operation: "487 - 258",
               show_exercise: false,
               show_minuend_subtrahend: true,
               show_solution: false,
               show_toolbar: false,
               show_borrow: true
          } %>
        </div>

        <!-- Passo 2: Sottrai le decine -->
        <div class="flex flex-col justify-between">
          <div class="p-4">
            <p class="text-sm mb-2">
              Sottrai le <span class="text-red-600 font-bold">decine</span>.
            </p>
            <p class="text-sm mb-2">
              Attenzione: le decine non sono 8, ma 7.
            </p>
          </div>
          <%= render partial: "shared/column_subtraction", locals: {
               operation: "487 - 258",
               show_exercise: false,
               show_minuend_subtrahend: true,
               show_solution: false,
               show_toolbar: false,
               show_borrow: true
          } %>
        </div>

        <!-- Passo 3: Sottrai le centinaia -->
        <div class="space-y-4">
          <div class="p-4">
            <p class="text-sm mb-2">
              Sottrai le <span class="text-green-600 font-bold">centinaia</span>.
            </p>
          </div>
          <%= render partial: "shared/column_subtraction", locals: {
               operation: "487 - 258",
               show_exercise: false,
               show_minuend_subtrahend: true,
               show_solution: true,
               show_toolbar: false,
               show_borrow: true
          } %>
        </div>

      </div>
    </div>

    <!-- Exercise 2: Metti in colonna e calcola -->
    <div class="p-6 mb-6">
      <div class="flex items-center gap-3 mb-6">
        <div class="bg-red-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0">
          2
        </div>
        <h2>Metti in colonna e calcola.</h2>
      </div>

      <div class="flex flex-wrap gap-8 justify-center items-start">

        <%= render partial: "shared/column_subtraction", locals: {
             operation: "526 - 364",
             title: "526 - 364 =",
             show_minuend_subtrahend: true,
             show_toolbar: false,
             show_borrow: true
        } %>

        <%= render partial: "shared/column_subtraction", locals: {
             operation: "618 - 240",
             title: "618 - 240 =",
             show_exercise: true,
             show_toolbar: false,
             show_borrow: true
        } %>

        <%= render partial: "shared/column_subtraction", locals: {
             operation: "448 - 369",
             title: "448 - 369 =",
             show_exercise: false,
             show_toolbar: false,
             show_borrow: true
        } %>

      </div>
    </div>

    <!-- Exercise 3: Calcola in colonna sul quaderno (con modal) -->
    <div class="p-6 mb-6" data-controller="column-modal" data-action="keydown@window->column-modal#handleEscape">
      <div class="flex items-center gap-3 mb-6">
        <div class="bg-red-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0">
          3
        </div>
        <h2>Calcola in colonna sul quaderno.</h2>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        <!-- Column a -->
        <div class="p-4">
          <div class="font-bold text-red-500 mb-3">a.</div>
          <div class="space-y-2">
            <div class="text-lg">61 - 35 =</div>
            <div class="text-lg">54 - 28 =</div>
            <div class="text-lg">96 - 47 =</div>
            <div class="text-lg">87 - 39 =</div>
          </div>
        </div>

        <!-- Column b -->
        <div class="p-4">
          <div class="font-bold text-red-500 mb-3">b.</div>
          <div class="space-y-2">
            <div class="text-lg">237 - 156 =</div>
            <div class="text-lg">324 - 205 =</div>
            <div class="text-lg">475 - 308 =</div>
            <div class="text-lg">618 - 240 =</div>
          </div>
        </div>

        <!-- Column c -->
        <div class="p-4">
          <div class="font-bold text-red-500 mb-3">c.</div>
          <div class="space-y-2">
            <div class="text-lg">327 - 250 =</div>
            <div class="text-lg">283 - 165 =</div>
            <div class="text-lg">729 - 547 =</div>
            <div class="text-lg">743 - 275 =</div>
          </div>
        </div>

        <!-- Column d -->
        <div class="p-4">
          <div class="font-bold text-red-500 mb-3">d.</div>
          <div class="space-y-2">
            <div class="text-lg">334 - 287 =</div>
            <div class="text-lg">686 - 148 =</div>
            <div class="text-lg">227 - 169 =</div>
            <div class="text-lg">542 - 386 =</div>
          </div>
        </div>
      </div>
    </div>

    <!-- Exercise Controls -->
    <%= render 'shared/exercise_controls' %>
  </div>

</div>
