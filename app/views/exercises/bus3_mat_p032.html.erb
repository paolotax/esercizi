<div class="max-w-7xl mx-auto p-3 md:p-6"
     data-controller="exercise-checker text-toggle font-controls"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <!-- Header -->
  <%= render 'shared/page_header', pagina: @pagina %>

  <div class="space-y-8">
    <!-- Exercise 1: Osserva come si calcola -->
    <div class="bg-[#C7EAFB] -ml-3 md:-ml-0 -mr-3 md:mr-0 p-6 mb-6">
      <div class="flex items-center gap-3 mb-6">
        <div class="bg-red-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0">
          1
        </div>
        <h2>Osserva come si calcola <span class="whitespace-nowrap font-bold">487 - 258</span>.</h2>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 items-start">

        <!-- Passo 1: Sottrai le unità -->
        <div class="flex flex-col justify-between">
          <div class="p-4">
            <p  class=" mb-2">
              Sottrai le <span class="text-blue-600 font-bold">unità</span>: 7 - 8 non si può fare!
            </p>
            <p  class=" mb-2">
              Prendi in prestito <span class="text-red-600 font-bold">1 da</span>: ora le
              <span class="text-blue-600 font-bold">unità</span> sono 17 e puoi sottrarre.
            </p>
          </div>
          <%= render partial: "strumenti/sottrazioni/column_subtraction",
                     locals: Sottrazione.new(minuend: 487, subtrahend: 258,
                                             show_exercise: false,
                                             show_minuend_subtrahend: true,
                                             show_solution: false,
                                             show_toolbar: false,
                                             show_borrow: true).to_partial_params %>
        </div>

        <!-- Passo 2: Sottrai le decine -->
        <div class="flex flex-col justify-between">
          <div class="p-4">
            <p  class=" mb-2">
              Sottrai le <span class="text-red-600 font-bold">decine</span>.
            </p>
            <p  class=" mb-2">
              Attenzione: le decine non sono 8, ma 7.
            </p>
          </div>
          <%= render partial: "strumenti/sottrazioni/column_subtraction",
                     locals: Sottrazione.new(minuend: 487, subtrahend: 258,
                                             show_exercise: false,
                                             show_minuend_subtrahend: true,
                                             show_solution: false,
                                             show_toolbar: false,
                                             show_borrow: true).to_partial_params %>
        </div>

        <!-- Passo 3: Sottrai le centinaia -->
        <div class="space-y-4">
          <div class="p-4">
            <p  class=" mb-2">
              Sottrai le <span class="text-green-600 font-bold">centinaia</span>.
            </p>
          </div>
          <%= render partial: "strumenti/sottrazioni/column_subtraction",
                     locals: Sottrazione.new(minuend: 487, subtrahend: 258,
                                             show_exercise: false,
                                             show_minuend_subtrahend: true,
                                             show_solution: true,
                                             show_toolbar: false,
                                             show_borrow: true).to_partial_params %>
        </div>

      </div>
    </div>

    <!-- Exercise 2: Metti in colonna e calcola -->
    <div class="p-6 mb-6">
      <div class="flex items-center gap-3 mb-6">
        <div class="bg-red-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0">
          2
        </div>
        <h2>Metti in colonna e calcola.</h2>
      </div>

      <div class="flex flex-wrap gap-8 justify-center items-start">

        <%= render partial: "strumenti/sottrazioni/column_subtraction",
                   locals: Sottrazione.new(minuend: 526, subtrahend: 364,
                                           title: "526 - 364 =",
                                           show_minuend_subtrahend: true,
                                           show_toolbar: false,
                                           show_borrow: true).to_partial_params %>

        <%= render partial: "strumenti/sottrazioni/column_subtraction",
                   locals: Sottrazione.new(minuend: 618, subtrahend: 240,
                                           title: "618 - 240 =",
                                           show_exercise: true,
                                           show_toolbar: false,
                                           show_borrow: true).to_partial_params %>

        <%= render partial: "strumenti/sottrazioni/column_subtraction",
                   locals: Sottrazione.new(minuend: 448, subtrahend: 369,
                                           title: "448 - 369 =",
                                           show_exercise: false,
                                           show_toolbar: false,
                                           show_borrow: true).to_partial_params %>

      </div>
    </div>

    <!-- Exercise 3: Calcola in colonna sul quaderno (con modal) -->
    <div class="p-6 mb-6" data-controller="column-modal" data-action="keydown@window->column-modal#handleEscape">
      <div class="flex items-center gap-3 mb-6">
        <div class="bg-red-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0">
          3
        </div>
        <h2>Calcola in colonna sul quaderno.</h2>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        <!-- Column a -->
        <button class="bg-orange-50 p-4 rounded-lg hover:bg-orange-100 transition cursor-pointer text-left border-2 border-transparent hover:border-orange-400"
                data-action="click->column-modal#openGroup"
                data-group="a"
                data-operations="61-35,54-28,96-47,87-39"
                data-show-borrow="true"
                data-column-modal-target="groupButton">
          <div class="font-bold text-red-500 mb-3">a.</div>
          <div class="space-y-2" data-column-modal-target="operationsList" data-group="a">
            <div class="operation-item" data-index="0">61 - 35 =</div>
            <div class="operation-item" data-index="1">54 - 28 =</div>
            <div class="operation-item" data-index="2">96 - 47 =</div>
            <div class="operation-item" data-index="3">87 - 39 =</div>
          </div>
        </button>

        <!-- Column b -->
        <button class="bg-blue-50 p-4 rounded-lg hover:bg-blue-100 transition cursor-pointer text-left border-2 border-transparent hover:border-blue-400"
                data-action="click->column-modal#openGroup"
                data-group="b"
                data-operations="237-156,324-205,475-308,618-240"
                data-show-borrow="true"
                data-column-modal-target="groupButton">
          <div class="font-bold text-red-500 mb-3">b.</div>
          <div class="space-y-2" data-column-modal-target="operationsList" data-group="b">
            <div class="operation-item" data-index="0">237 - 156 =</div>
            <div class="operation-item" data-index="1">324 - 205 =</div>
            <div class="operation-item" data-index="2">475 - 308 =</div>
            <div class="operation-item" data-index="3">618 - 240 =</div>
          </div>
        </button>

        <!-- Column c -->
        <button class="bg-green-50 p-4 rounded-lg hover:bg-green-100 transition cursor-pointer text-left border-2 border-transparent hover:border-green-400"
                data-action="click->column-modal#openGroup"
                data-group="c"
                data-operations="327-250,283-165,729-547,743-275"
                data-show-borrow="true"
                data-column-modal-target="groupButton">
          <div class="font-bold text-red-500 mb-3">c.</div>
          <div class="space-y-2" data-column-modal-target="operationsList" data-group="c">
            <div class="operation-item" data-index="0">327 - 250 =</div>
            <div class="operation-item" data-index="1">283 - 165 =</div>
            <div class="operation-item" data-index="2">729 - 547 =</div>
            <div class="operation-item" data-index="3">743 - 275 =</div>
          </div>
        </button>

        <!-- Column d -->
        <button class="bg-purple-50 p-4 rounded-lg hover:bg-purple-100 transition cursor-pointer text-left border-2 border-transparent hover:border-purple-400"
                data-action="click->column-modal#openGroup"
                data-group="d"
                data-operations="334-287,686-148,227-169,542-386"
                data-show-borrow="true"
                data-column-modal-target="groupButton">
          <div class="font-bold text-red-500 mb-3">d.</div>
          <div class="space-y-2" data-column-modal-target="operationsList" data-group="d">
            <div class="operation-item" data-index="0">334 - 287 =</div>
            <div class="operation-item" data-index="1">686 - 148 =</div>
            <div class="operation-item" data-index="2">227 - 169 =</div>
            <div class="operation-item" data-index="3">542 - 386 =</div>
          </div>
        </button>
      </div>

      <!-- Modal -->
      <%= render 'shared/column_modal', title: "Gruppo di operazioni", color: "red", show_save: true %>
    </div>

    <!-- Exercise Controls -->
    <%= render 'shared/exercise_controls' %>
  </div>

</div>
