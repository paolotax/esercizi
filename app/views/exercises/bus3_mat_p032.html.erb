<div class="max-w-7xl mx-auto p-3 md:p-6 bg-white dark:bg-gray-900 text-black dark:text-white transition-colors duration-300"
     data-controller="exercise-checker text-toggle font-controls"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <!-- Header -->
  <%= render 'shared/page_header', pagina: @pagina %>

  <div class="space-y-8">
    <!-- Exercise 1: Osserva come si calcola -->
    <div class="bg-[#C7EAFB] dark:bg-cyan-900/40 -ml-3 md:-ml-0 -mr-3 md:mr-0 p-6 mb-6">
      <div class="flex items-center gap-3 mb-6">
        <div class="bg-red-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0">
          1
        </div>
        <h2 class="dark:text-white">Osserva come si calcola <span class="whitespace-nowrap font-bold">487 - 258</span>.</h2>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 items-start">

        <!-- Passo 1: Sottrai le unità -->
        <div class="flex flex-col justify-between">
          <div class="p-4">
            <p class="mb-2 dark:text-gray-200">
              Sottrai le <span class="text-blue-600 dark:text-blue-400 font-bold">unità</span>: 7 - 8 non si può fare!
            </p>
            <p class="mb-2 dark:text-gray-200">
              Prendi in prestito <span class="text-red-600 font-bold">1 da</span>: ora le
              <span class="text-blue-600 dark:text-blue-400 font-bold">unità</span> sono 17 e puoi sottrarre.
            </p>
          </div>
          <%= sottrazione_grid 487, 258, show_operands: true, show_borrow: true, style: :column %>
        </div>

        <!-- Passo 2: Sottrai le decine -->
        <div class="flex flex-col justify-between">
          <div class="p-4">
            <p class="mb-2 dark:text-gray-200">
              Sottrai le <span class="text-red-600 font-bold">decine</span>.
            </p>
            <p class="mb-2 dark:text-gray-200">
              Attenzione: le decine non sono 8, ma 7.
            </p>
          </div>
          <%= sottrazione_grid 487, 258, show_operands: true, show_borrow: true, style: :column %>
        </div>

        <!-- Passo 3: Sottrai le centinaia -->
        <div class="space-y-4">
          <div class="p-4">
            <p class="mb-2 dark:text-gray-200">
              Sottrai le <span class="text-green-600 dark:text-green-400 font-bold">centinaia</span>.
            </p>
          </div>
          <%= sottrazione_grid 487, 258, show_operands: true, show_solution: true, show_borrow: true, style: :column %>
        </div>

      </div>
    </div>

    <!-- Exercise 2: Metti in colonna e calcola -->
    <div class="p-6 mb-6">
      <div class="flex items-center gap-3 mb-6">
        <div class="bg-red-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0">
          2
        </div>
        <h2 class="dark:text-white">Metti in colonna e calcola.</h2>
      </div>

      <div class="flex flex-wrap gap-8 justify-center items-start">
        <%= sottrazione_grid 526, 364, title: "526 - 364 =", show_operands: true, show_borrow: true, style: :column %>
        <%= sottrazione_grid 618, 240, title: "618 - 240 =", show_borrow: true, style: :column %>
        <%= sottrazione_grid 448, 369, title: "448 - 369 =", show_borrow: true, style: :column %>
      </div>
    </div>

    <!-- Exercise 3: Calcola in colonna sul quaderno (con modal) -->
    <div class="p-6 mb-6" data-controller="operation-viewer">
      <div class="flex items-center gap-3 mb-6">
        <div class="bg-red-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0">
          3
        </div>
        <h2 class="dark:text-white">Calcola in colonna sul quaderno.</h2>
      </div>

      <%
        es3_gruppi = [
          { lettera: "a", colore: "orange", operazioni: [
            { op: "61-35", answer: "26" },
            { op: "54-28", answer: "26" },
            { op: "96-47", answer: "49" },
            { op: "87-39", answer: "48" }
          ]},
          { lettera: "b", colore: "blue", operazioni: [
            { op: "237-156", answer: "81" },
            { op: "324-205", answer: "119" },
            { op: "475-308", answer: "167" },
            { op: "618-240", answer: "378" }
          ]},
          { lettera: "c", colore: "green", operazioni: [
            { op: "327-250", answer: "77" },
            { op: "283-165", answer: "118" },
            { op: "729-547", answer: "182" },
            { op: "743-275", answer: "468" }
          ]},
          { lettera: "d", colore: "purple", operazioni: [
            { op: "334-287", answer: "47" },
            { op: "686-148", answer: "538" },
            { op: "227-169", answer: "58" },
            { op: "542-386", answer: "156" }
          ]}
        ]
      %>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        <% es3_gruppi.each do |gruppo| %>
          <%
            operations_data = gruppo[:operazioni].each_with_index.map { |item, idx|
              { operation: item[:op], targetId: "es3-#{gruppo[:lettera]}-#{idx}" }
            }
          %>
          <div class="bg-<%= gruppo[:colore] %>-50 dark:bg-<%= gruppo[:colore] %>-900/30 p-4 rounded-lg border-2 border-transparent hover:border-<%= gruppo[:colore] %>-400 transition">
            <p class="font-bold text-<%= gruppo[:colore] %>-600 dark:text-<%= gruppo[:colore] %>-400 mb-3 flex items-center gap-2">
              <%= gruppo[:lettera] %>.
              <button type="button"
                      data-action="click->operation-viewer#openGroup"
                      data-operations='<%= operations_data.to_json %>'
                      data-type="sottrazione"
                      data-layout="column"
                      data-display="modal"
                      data-group="<%= gruppo[:lettera] %>"
                      class="p-1 text-gray-400 hover:text-<%= gruppo[:colore] %>-600 dark:hover:text-<%= gruppo[:colore] %>-400 transition print-hidden"
                      title="Apri gruppo <%= gruppo[:lettera] %> nella calcolatrice">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
                </svg>
              </button>
            </p>
            <ul class="space-y-2">
              <% gruppo[:operazioni].each_with_index do |item, idx| %>
                <li class="flex items-center gap-2 flex-wrap dark:text-white">
                  <span><%= item[:op].gsub('-', ' - ') %> =</span>
                  <input type="text"
                         data-operation-id="es3-<%= gruppo[:lettera] %>-<%= idx %>"
                         data-correct-answer="<%= item[:answer] %>"
                         class="w-16 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent">
                </li>
              <% end %>
            </ul>
          </div>
        <% end %>
      </div>

      <!-- Modal -->
      <%= render 'shared/operation_viewer', display: :modal, title: "Sottrazioni in colonna", color: "cyan" %>
    </div>

    <!-- Exercise Controls -->
    <%= render 'shared/exercise_controls' %>
  </div>

</div>
