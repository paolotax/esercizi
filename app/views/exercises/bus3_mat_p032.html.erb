<div class="max-w-7xl mx-auto p-6" data-controller="exercise-checker">
  <div class="mb-8">
    <div class="flex items-start sm:items-center justify-between gap-4 mb-4">
      <div class="flex flex-col-reverse sm:flex-row items-start sm:items-center gap-4">
        <div class="bg-cyan-500 text-white text-lg sm:text-xl px-4 py-2 rounded-lg font-bold">
        SOTTRAZIONE
        </div>
        <h1 class="text-3xl font-bold text-cyan-600">SOTTRAZIONI CON IL CAMBIO</h1>
      </div>
      <div class="flex-shrink-0 bg-red-600 text-white rounded-full w-12 h-12 flex items-center justify-center font-bold text-xl">
        32
      </div>
    </div>
  </div>

  <div class="space-y-8">

    <!-- Exercise 1: Osserva come si calcola -->
    <div class="bg-white rounded-lg shadow-lg p-6 mb-6">
      <div class="flex items-start gap-3 mb-6">
        <div class="bg-red-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0">
          1
        </div>
        <h2 class="text-xl font-bold text-gray-800">Osserva come si calcola 487 - 258.</h2>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 items-start">

        <!-- Passo 1: Sottrai le unità -->
        <div class="space-y-4">
          <div class="bg-cyan-50 p-4 rounded-lg">
            <p class="text-sm mb-2">
              Sottrai le <span class="text-blue-600 font-bold">unità</span>: 7 - 8 non si può fare!
            </p>
            <p class="text-sm mb-2">
              Prendi in prestito <span class="text-red-600 font-bold">1 da</span>: ora le
              <span class="text-blue-600 font-bold">unità</span> sono 17 e puoi sottrarre.
            </p>
          </div>
          <%= render partial: "shared/column_subtraction", locals: {
               operation: "487 - 258",
               show_exercise: false,
               show_minuend_subtrahend: true,
               show_solution: false,
               show_toolbar: true,
               show_borrow: true
          } %>
        </div>

        <!-- Passo 2: Sottrai le decine -->
        <div class="space-y-4">
          <div class="bg-cyan-50 p-4 rounded-lg">
            <p class="text-sm mb-2">
              Sottrai le <span class="text-red-600 font-bold">decine</span>.
            </p>
            <p class="text-sm mb-2">
              Attenzione: le decine non sono 8, ma 7.
            </p>
          </div>
          <%= render partial: "shared/column_subtraction", locals: {
               operation: "487 - 258",
               show_exercise: false,
               show_minuend_subtrahend: true,
               show_solution: false,
               show_toolbar: true,
               show_borrow: true
          } %>
        </div>

        <!-- Passo 3: Sottrai le centinaia -->
        <div class="space-y-4">
          <div class="bg-cyan-50 p-4 rounded-lg">
            <p class="text-sm mb-2">
              Sottrai le <span class="text-green-600 font-bold">centinaia</span>.
            </p>
          </div>
          <%= render partial: "shared/column_subtraction", locals: {
               operation: "487 - 258",
               show_exercise: false,
               show_minuend_subtrahend: true,
               show_solution: true,
               show_toolbar: true,
               show_borrow: true
          } %>
        </div>

      </div>
    </div>

    <!-- Exercise 2: Metti in colonna e calcola -->
    <div class="bg-white rounded-lg shadow-lg p-6 mb-6">
      <div class="flex items-start gap-3 mb-6">
        <div class="bg-red-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0">
          2
        </div>
        <h2 class="text-xl font-bold text-gray-800">Metti in colonna e calcola.</h2>
      </div>

      <div class="flex flex-wrap gap-8 justify-center items-start">

        <%= render partial: "shared/column_subtraction", locals: {
             operation: "526 - 364",
             title: "526 - 364 =",
             show_minuend_subtrahend: true,
             show_toolbar: false,
             show_borrow: true
        } %>

        <%= render partial: "shared/column_subtraction", locals: {
             operation: "618 - 240",
             title: "618 - 240 =",
             show_exercise: true,
             show_toolbar: false,
             show_borrow: true
        } %>

        <%= render partial: "shared/column_subtraction", locals: {
             operation: "448 - 369",
             title: "448 - 369 =",
             show_exercise: false,
             show_toolbar: false,
             show_borrow: true
        } %>

      </div>
    </div>

    <!-- Exercise 3: Calcola in colonna sul quaderno (con modal) -->
