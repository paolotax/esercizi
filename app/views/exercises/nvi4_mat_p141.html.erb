<div class="max-w-6xl mx-auto bg-white dark:bg-gray-900 p-3 md:p-6 transition-colors duration-300"
     data-controller="exercise-checker text-toggle font-controls"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <%= render 'shared/page_header', pagina: @pagina %>

  <div class="space-y-6">

    <!-- Tabella formule perimetro e area -->
    <div class="overflow-x-auto">
      <table class="w-full border-collapse border-2 border-cyan-400 dark:border-cyan-600">
        <thead>
          <tr>
            <th colspan="2" class="p-3 bg-cyan-100 dark:bg-cyan-900 border-2 border-cyan-400 dark:border-cyan-600 text-center font-bold text-gray-700 dark:text-gray-200">POLIGONO</th>
          </tr>
        </thead>
        <tbody>
          <!-- Riga 1: Rettangolo e Trapezio rettangolo -->
          <tr>
            <td class="p-3 border-2 border-cyan-400 dark:border-cyan-600 bg-white dark:bg-gray-800">
              <div class="flex flex-col md:flex-row items-center gap-4">
                <div class="text-center">
                  <p class="font-bold text-gray-700 dark:text-gray-200 mb-2">Rettangolo</p>
                  <%= image_tag "nvi4_mat/p141/p141_01.jpg", class: "max-w-full h-auto dark:bg-white dark:rounded-lg dark:p-1" %>
                </div>
                <div class="text-left">
                  <p class="font-bold text-<%= @pagina.base_color %>-600 dark:text-<%= @pagina.base_color %>-400 mb-1">FORMULE</p>
                  <p class="text-gray-700 dark:text-gray-200">P = (ℓ₁ + ℓ₂) × 2</p>
                  <p class="text-gray-700 dark:text-gray-200">A = b × h</p>
                </div>
              </div>
            </td>
            <td class="p-3 border-2 border-cyan-400 dark:border-cyan-600 bg-white dark:bg-gray-800">
              <div class="flex flex-col md:flex-row items-center gap-4">
                <div class="text-center">
                  <p class="font-bold text-gray-700 dark:text-gray-200 mb-2">Trapezio rettangolo</p>
                  <%= image_tag "nvi4_mat/p141/p141_02.jpg", class: "max-w-full h-auto dark:bg-white dark:rounded-lg dark:p-1" %>
                </div>
                <div class="text-left">
                  <p class="font-bold text-<%= @pagina.base_color %>-600 dark:text-<%= @pagina.base_color %>-400 mb-1">FORMULE</p>
                  <p class="text-gray-700 dark:text-gray-200">P = B + b + ℓ₁ + ℓ₂</p>
                  <p class="text-gray-700 dark:text-gray-200">A = [(B + b) × h] : 2</p>
                </div>
              </div>
            </td>
          </tr>

          <!-- Riga 2: Quadrato e Trapezio isoscele -->
          <tr>
            <td class="p-3 border-2 border-cyan-400 dark:border-cyan-600 bg-white dark:bg-gray-800">
              <div class="flex flex-col md:flex-row items-center gap-4">
                <div class="text-center">
                  <p class="font-bold text-gray-700 dark:text-gray-200 mb-2">Quadrato</p>
                  <%= image_tag "nvi4_mat/p141/p141_03.jpg", class: "max-w-full h-auto dark:bg-white dark:rounded-lg dark:p-1" %>
                </div>
                <div class="text-left">
                  <p class="font-bold text-<%= @pagina.base_color %>-600 dark:text-<%= @pagina.base_color %>-400 mb-1">FORMULE</p>
                  <p class="text-gray-700 dark:text-gray-200">P = ℓ × 4</p>
                  <p class="text-gray-700 dark:text-gray-200">A = ℓ × ℓ</p>
                </div>
              </div>
            </td>
            <td class="p-3 border-2 border-cyan-400 dark:border-cyan-600 bg-white dark:bg-gray-800">
              <div class="flex flex-col md:flex-row items-center gap-4">
                <div class="text-center">
                  <p class="font-bold text-gray-700 dark:text-gray-200 mb-2">Trapezio isoscele</p>
                  <%= image_tag "nvi4_mat/p141/p141_04.jpg", class: "max-w-full h-auto dark:bg-white dark:rounded-lg dark:p-1" %>
                </div>
                <div class="text-left">
                  <p class="font-bold text-<%= @pagina.base_color %>-600 dark:text-<%= @pagina.base_color %>-400 mb-1">FORMULE</p>
                  <p class="text-gray-700 dark:text-gray-200">P = B + b + (ℓ × 2)</p>
                  <p class="text-gray-700 dark:text-gray-200">A = [(B + b) × h] : 2</p>
                </div>
              </div>
            </td>
          </tr>

          <!-- Riga 3: Parallelogramma e Trapezio scaleno -->
          <tr>
            <td class="p-3 border-2 border-cyan-400 dark:border-cyan-600 bg-white dark:bg-gray-800">
              <div class="flex flex-col md:flex-row items-center gap-4">
                <div class="text-center">
                  <p class="font-bold text-gray-700 dark:text-gray-200 mb-2">Parallelogramma</p>
                  <%= image_tag "nvi4_mat/p141/p141_05.jpg", class: "max-w-full h-auto dark:bg-white dark:rounded-lg dark:p-1" %>
                </div>
                <div class="text-left">
                  <p class="font-bold text-<%= @pagina.base_color %>-600 dark:text-<%= @pagina.base_color %>-400 mb-1">FORMULE</p>
                  <p class="text-gray-700 dark:text-gray-200">P = (ℓ₁ + ℓ₂) × 2</p>
                  <p class="text-gray-700 dark:text-gray-200">A = b × h</p>
                </div>
              </div>
            </td>
            <td class="p-3 border-2 border-cyan-400 dark:border-cyan-600 bg-white dark:bg-gray-800">
              <div class="flex flex-col md:flex-row items-center gap-4">
                <div class="text-center">
                  <p class="font-bold text-gray-700 dark:text-gray-200 mb-2">Triangolo scaleno</p>
                  <%= image_tag "nvi4_mat/p141/p141_06.jpg", class: "max-w-full h-auto dark:bg-white dark:rounded-lg dark:p-1" %>
                </div>
                <div class="text-left">
                  <p class="font-bold text-<%= @pagina.base_color %>-600 dark:text-<%= @pagina.base_color %>-400 mb-1">FORMULE</p>
                  <p class="text-gray-700 dark:text-gray-200">P = ℓ₁ + ℓ₂ + ℓ₃</p>
                  <p class="text-gray-700 dark:text-gray-200">A = (b × h) : 2</p>
                </div>
              </div>
            </td>
          </tr>

          <!-- Riga 4: Rombo e Triangolo isoscele -->
          <tr>
            <td class="p-3 border-2 border-cyan-400 dark:border-cyan-600 bg-white dark:bg-gray-800">
              <div class="flex flex-col md:flex-row items-center gap-4">
                <div class="text-center">
                  <p class="font-bold text-gray-700 dark:text-gray-200 mb-2">Rombo</p>
                  <%= image_tag "nvi4_mat/p141/p141_07.jpg", class: "max-w-full h-auto dark:bg-white dark:rounded-lg dark:p-1" %>
                </div>
                <div class="text-left">
                  <p class="font-bold text-<%= @pagina.base_color %>-600 dark:text-<%= @pagina.base_color %>-400 mb-1">FORMULE</p>
                  <p class="text-gray-700 dark:text-gray-200">P = ℓ × 4</p>
                  <p class="text-gray-700 dark:text-gray-200">A = (D × d) : 2</p>
                </div>
              </div>
            </td>
            <td class="p-3 border-2 border-cyan-400 dark:border-cyan-600 bg-white dark:bg-gray-800">
              <div class="flex flex-col md:flex-row items-center gap-4">
                <div class="text-center">
                  <p class="font-bold text-gray-700 dark:text-gray-200 mb-2">Triangolo isoscele</p>
                  <%= image_tag "nvi4_mat/p141/p141_08.jpg", class: "max-w-full h-auto dark:bg-white dark:rounded-lg dark:p-1" %>
                </div>
                <div class="text-left">
                  <p class="font-bold text-<%= @pagina.base_color %>-600 dark:text-<%= @pagina.base_color %>-400 mb-1">FORMULE</p>
                  <p class="text-gray-700 dark:text-gray-200">P = ℓ₁ + (ℓ₂ × 2)</p>
                  <p class="text-gray-700 dark:text-gray-200">A = (b × h) : 2</p>
                </div>
              </div>
            </td>
          </tr>

          <!-- Riga 5: Trapezio e Triangolo equilatero -->
          <tr>
            <td class="p-3 border-2 border-cyan-400 dark:border-cyan-600 bg-white dark:bg-gray-800">
              <div class="flex flex-col md:flex-row items-center gap-4">
                <div class="text-center">
                  <p class="font-bold text-gray-700 dark:text-gray-200 mb-2">Trapezio scaleno</p>
                  <%= image_tag "nvi4_mat/p141/p141_09.jpg", class: "max-w-full h-auto dark:bg-white dark:rounded-lg dark:p-1" %>
                </div>
                <div class="text-left">
                  <p class="font-bold text-<%= @pagina.base_color %>-600 dark:text-<%= @pagina.base_color %>-400 mb-1">FORMULE</p>
                  <p class="text-gray-700 dark:text-gray-200">P = B + b + ℓ₁ + ℓ₂</p>
                  <p class="text-gray-700 dark:text-gray-200">A = [(B + b) × h] : 2</p>
                </div>
              </div>
            </td>
            <td class="p-3 border-2 border-cyan-400 dark:border-cyan-600 bg-white dark:bg-gray-800">
              <div class="flex flex-col md:flex-row items-center gap-4">
                <div class="text-center">
                  <p class="font-bold text-gray-700 dark:text-gray-200 mb-2">Triangolo equilatero</p>
                  <%= image_tag "nvi4_mat/p141/p141_10.jpg", class: "max-w-full h-auto dark:bg-white dark:rounded-lg dark:p-1" %>
                </div>
                <div class="text-left">
                  <p class="font-bold text-<%= @pagina.base_color %>-600 dark:text-<%= @pagina.base_color %>-400 mb-1">FORMULE</p>
                  <p class="text-gray-700 dark:text-gray-200">P = ℓ × 3</p>
                  <p class="text-gray-700 dark:text-gray-200">A = (b × h) : 2</p>
                </div>
              </div>
            </td>
          </tr>
        </tbody>
      </table>
    </div>

    <%= render 'shared/exercise_controls' %>
  </div>
</div>
