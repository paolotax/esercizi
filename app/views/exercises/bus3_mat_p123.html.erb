<% content_for :titolo, "#{@pagina.titolo} - #{@pagina.numero}" %>

<div class="max-w-7xl mx-auto p-3 md:p-6 bg-white font-mono text-base lg:text-lg xl:text-xl"
     data-controller="exercise-checker page-viewer text-toggle font-controls"
     data-page-viewer-image-url-value="<%= asset_path('bus3_mat/p123/page.png') %>"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <!-- Header -->
  <%= render 'shared/page_header', pagina: @pagina %>

  <!-- Esercizio 3 -->
  <div class="mb-12" data-controller="fill-blanks auto-advance">
    <div class="flex items-start gap-3 mb-4">
      <div class="bg-red-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0">
        3
      </div>
      <p class="text-gray-700">
        <strong>Classifica di nuovo bambine e bambini con il <span class="text-cyan-600 font-bold">diagramma ad albero</span>.</strong>
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 items-start">
      <!-- Diagramma ad albero -->
      <div class="md:col-span-2">
        <div class="flex justify-center">
          <%= image_tag "bus3_mat/p123/p123_01.jpg", alt: "Diagramma ad albero bambini", class: "max-w-lg w-full" %>
        </div>
      </div>

      <!-- Box definizione -->
      <div class="bg-pink-100 border-3 border-pink-300 rounded-lg p-4">
        <p><span class="text-cyan-600 font-bold">Classificare</span> significa raggruppare elementi che hanno una o pi√π caratteristiche comuni. Per rappresentare le classificazioni si possono usare <span class="text-cyan-600 font-bold">diagrammi</span> diversi.</p>
      </div>
    </div>
  </div>

  <!-- Esercizio 4 -->
  <div class="mb-12" data-controller="fill-blanks auto-advance">
    <div class="flex items-start gap-3 mb-4">
      <div class="bg-red-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0">
        4
      </div>
      <p class="text-gray-700">
        <strong>Classifica le scarpe con i diagrammi.</strong>
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <!-- Immagini scarpe -->
      <div class="grid grid-cols-2 gap-4">
        <div class="text-center">
          <span class="text-red-500 font-bold">a.</span>
          <%= image_tag "bus3_mat/p123/output-1743504902123_150_579_111_104.png", alt: "Scarpa a - tacchi blu", class: "max-h-20 mx-auto" %>
        </div>
        <div class="text-center">
          <span class="text-red-500 font-bold">b.</span>
          <%= image_tag "bus3_mat/p123/output-1743504902123_262_610_123_91.png", alt: "Scarpa b - mocassino", class: "max-h-20 mx-auto" %>
        </div>
        <div class="text-center">
          <span class="text-red-500 font-bold">c.</span>
          <%= image_tag "bus3_mat/p123/output-1743504902123_157_701_133_103.png", alt: "Scarpa c - sandalo", class: "max-h-20 mx-auto" %>
        </div>
        <div class="text-center">
          <span class="text-red-500 font-bold">d.</span>
          <%= image_tag "bus3_mat/p123/output-1743504902123_294_713_119_104.png", alt: "Scarpa d - scarpa verde", class: "max-h-20 mx-auto" %>
        </div>
        <div class="text-center">
          <span class="text-red-500 font-bold">e.</span>
          <%= image_tag "bus3_mat/p123/output-1743504902123_150_813_142_107.png", alt: "Scarpa e - ballerina rossa", class: "max-h-20 mx-auto" %>
        </div>
        <div class="text-center">
          <span class="text-red-500 font-bold">f.</span>
          <%= image_tag "bus3_mat/p123/output-1743504902123_295_824_128_100.png", alt: "Scarpa f - sneaker", class: "max-h-20 mx-auto" %>
        </div>
      </div>

      <!-- Diagrammi -->
      <div class="space-y-6">
        <!-- Diagramma ad albero scarpe -->
        <div class="flex justify-center">
          <%= image_tag "bus3_mat/p123/p123_02.jpg", alt: "Diagramma ad albero scarpe", class: "max-w-md w-full" %>
        </div>

        <!-- Diagramma di Eulero-Venn scarpe -->
        <div class="flex justify-center">
          <%= image_tag "bus3_mat/p123/p123_03.jpg", alt: "Diagramma di Eulero-Venn scarpe", class: "max-w-md w-full" %>
        </div>
      </div>
    </div>

    <!-- Tabella di Carroll per scarpe -->
    <div class="overflow-x-auto mt-6">
      <table class="w-full max-w-lg border-collapse border-2 border-cyan-400">
        <thead>
          <tr class="bg-cyan-50">
            <th class="border-2 border-cyan-400 px-4 py-2">Scarpe...</th>
            <th class="border-2 border-cyan-400 px-4 py-2">con lacci</th>
            <th class="border-2 border-cyan-400 px-4 py-2"><strong>NON</strong> con lacci</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td class="border-2 border-cyan-400 px-4 py-3 bg-pink-50">con tacco</td>
            <td class="border-2 border-cyan-400 px-4 py-3 text-center">
              <input type="text" data-fill-blanks-target="input" data-correct-answer="b"
                     class="w-12 px-1 py-0.5 border-b-2 border-dotted border-gray-400 text-center" placeholder="...">
            </td>
            <td class="border-2 border-cyan-400 px-4 py-3 text-center">
              <input type="text" data-fill-blanks-target="input" data-correct-answer="a"
                     class="w-12 px-1 py-0.5 border-b-2 border-dotted border-gray-400 text-center" placeholder="...">
              ,
              <input type="text" data-fill-blanks-target="input" data-correct-answer="d"
                     class="w-12 px-1 py-0.5 border-b-2 border-dotted border-gray-400 text-center" placeholder="...">
            </td>
          </tr>
          <tr>
            <td class="border-2 border-cyan-400 px-4 py-3 bg-pink-50"><strong>NON</strong> con tacco</td>
            <td class="border-2 border-cyan-400 px-4 py-3 text-center">
              <input type="text" data-fill-blanks-target="input" data-correct-answer="f"
                     class="w-12 px-1 py-0.5 border-b-2 border-dotted border-gray-400 text-center" placeholder="...">
            </td>
            <td class="border-2 border-cyan-400 px-4 py-3 text-center">
              <input type="text" data-fill-blanks-target="input" data-correct-answer="c"
                     class="w-12 px-1 py-0.5 border-b-2 border-dotted border-gray-400 text-center" placeholder="...">
              ,
              <input type="text" data-fill-blanks-target="input" data-correct-answer="e"
                     class="w-12 px-1 py-0.5 border-b-2 border-dotted border-gray-400 text-center" placeholder="...">
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Footer con controlli -->
  <%= render 'shared/exercise_controls' %>
</div>
