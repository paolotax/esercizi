<div class="max-w-6xl mx-auto bg-white p-3 md:p-6"
     data-controller="exercise-checker text-toggle font-controls"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <%= render 'shared/page_header', pagina: @pagina %>

  <div class="space-y-6">
    <!-- Esercizio 1: IMPARARE TUTTI -->
    <div class="p-4 bg-white rounded-2xl border-3 border-yellow-400">
      <p class="font-bold text-gray-700 mb-4">
        <%= imparare_tutti_badge(1) %>
        Completa le frasi con i termini dati.
      </p>

      <div class="p-3 bg-cyan-50 rounded-lg mb-4 text-center">
        <span class="font-bold text-cyan-600">equilateri</span>
        <span class="text-cyan-500 mx-2">•</span>
        <span class="font-bold text-cyan-600">regolari</span>
        <span class="text-cyan-500 mx-2">•</span>
        <span class="font-bold text-cyan-600">poligoni</span>
        <span class="text-cyan-500 mx-2">•</span>
        <span class="font-bold text-cyan-600">congruenti</span>
        <span class="text-cyan-500 mx-2">•</span>
        <span class="font-bold text-cyan-600">lati</span>
      </div>

      <div class="space-y-4">
        <p class="text-gray-700">
          I quadrilateri sono
          <input type="text" data-correct-answer="poligoni" class="w-24 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
          con quattro
          <input type="text" data-correct-answer="lati" class="w-20 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
          .
        </p>
        <p class="text-gray-700">
          I quadrati sono poligoni equiangoli perché hanno tutti gli angoli
          <input type="text" data-correct-answer="congruenti" class="w-28 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
          e
          <input type="text" data-correct-answer="equilateri" class="w-24 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
          perché hanno tutti i lati congruenti, quindi sono poligoni
          <input type="text" data-correct-answer="regolari" class="w-24 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
          .
        </p>
      </div>
    </div>

    <!-- Esercizio 2 -->
    <div>
      <p class="font-bold text-gray-700 mb-4">
        <%= numero_esercizio_badge(2) %>
        Osserva le figure e completa la tabella come nell'esempio.
      </p>

      <div class="overflow-x-auto">
        <table class="w-full border-collapse border border-cyan-400">
          <thead>
            <tr>
              <th class="p-2 border border-cyan-400 bg-white text-center text-gray-800"></th>
              <th class="p-2 border border-cyan-400 bg-cyan-100 text-center">
                <%= image_tag "nvi5_mat/p237/output-1715938802237_413_501_58_59.png", alt: "Quadrato", class: "h-12 mx-auto" %>
              </th>
              <th class="p-2 border border-cyan-400 bg-cyan-100 text-center">
                <%= image_tag "nvi5_mat/p237/output-1715938802237_514_506_88_50.png", alt: "Rettangolo", class: "h-12 mx-auto" %>
              </th>
              <th class="p-2 border border-cyan-400 bg-cyan-100 text-center">
                <%= image_tag "nvi5_mat/p237/output-1715938802237_621_507_106_46.png", alt: "Rombo", class: "h-12 mx-auto" %>
              </th>
              <th class="p-2 border border-cyan-400 bg-cyan-100 text-center">
                <%= image_tag "nvi5_mat/p237/output-1715938802237_745_507_91_46.png", alt: "Trapezio", class: "h-12 mx-auto" %>
              </th>
              <th class="p-2 border border-cyan-400 bg-cyan-100 text-center">
                <%= image_tag "nvi5_mat/p237/output-1715938802237_863_507_92_45.png", alt: "Parallelogramma", class: "h-12 mx-auto" %>
              </th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td class="p-2 border border-cyan-400 bg-white font-bold">Tutti i lati congruenti.</td>
              <td class="p-2 border border-cyan-400 bg-white text-center font-bold text-cyan-600">X</td>
              <td class="p-2 border border-cyan-400 bg-white text-center">
                <input type="checkbox" class="w-5 h-5" data-correct-answer="false">
              </td>
              <td class="p-2 border border-cyan-400 bg-white text-center font-bold text-cyan-600">X</td>
