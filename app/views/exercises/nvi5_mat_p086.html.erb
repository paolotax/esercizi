          <!-- Tabella ore-minuti-secondi -->
          <div class="overflow-x-auto">
            <table class="w-full border-collapse">
              <thead>
                <tr>
                  <th class="p-2 bg-cyan-500 text-white font-bold border border-gray-300">ore</th>
