<div class="max-w-6xl mx-auto bg-white dark:bg-gray-900 p-3 md:p-6 transition-colors duration-300"
     data-controller="exercise-checker text-toggle font-controls"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <%= render 'shared/page_header', pagina: @pagina %>

  <div class="space-y-6">

    <!-- Sezione Teoria -->
    <div class="p-4 bg-cyan-50 dark:bg-cyan-900/30 rounded-2xl">
      <p class="text-gray-700 dark:text-gray-200 mb-2">
        Per eseguire <span class="font-bold">addizioni</span> e <span class="font-bold">sottrazioni con i numeri decimali</span>:
      </p>
      <ul class="list-disc pl-6 space-y-1 text-gray-700 dark:text-gray-200 marker:text-cyan-500">
        <li>incolonna i numeri rispettando il valore posizionale delle cifre;</li>
        <li>se necessario aggiungi gli zeri per pareggiare il numero delle cifre nella parte decimale;</li>
        <li>trascrivi la virgola nel risultato.</li>
      </ul>
    </div>

    <!-- Esercizio 1 IMPARARE TUTTI -->
    <div class="p-5 bg-white dark:bg-gray-800 rounded-2xl border-3 border-yellow-400 dark:border-yellow-500">
      <p class="font-bold text-gray-700 dark:text-gray-200 mb-4">
        <%= imparare_tutti_badge(1) %>
        Esegui le operazioni in colonna.
      </p>

      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <!-- Addizioni -->
        <% [
          { op1: "2,905", op2: "78,300", answer: "81,205", type: "+" },
          { op1: "13,600", op2: "44,189", answer: "57,789", type: "+" },
          { op1: "35,78", op2: "9,12", answer: "44,90", type: "+" },
          { op1: "9,60", op2: "46,07", answer: "55,67", type: "+" }
        ].each do |item| %>
          <div class="p-3 bg-cyan-50 dark:bg-cyan-900/30 rounded-lg">
            <div class="font-mono text-right text-gray-700 dark:text-gray-200">
              <div><%= item[:op1] %> +</div>
              <div class="border-b border-gray-400 dark:border-gray-500"><%= item[:op2] %> =</div>
              <div class="mt-1">
                <input type="text" data-correct-answer="<%= item[:answer] %>" class="w-full border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-right font-bold bg-transparent dark:text-white">
              </div>
            </div>
          </div>
        <% end %>

        <!-- Sottrazioni -->
        <% [
          { op1: "75,509", op2: "27,372", answer: "48,137", type: "-" },
          { op1: "84,600", op2: "44,128", answer: "40,472", type: "-" },
          { op1: "49,310", op2: "36,207", answer: "13,103", type: "-" },
          { op1: "78,040", op2: "13,561", answer: "64,479", type: "-" }
        ].each do |item| %>
          <div class="p-3 bg-cyan-50 dark:bg-cyan-900/30 rounded-lg">
            <div class="font-mono text-right text-gray-700 dark:text-gray-200">
              <div><%= item[:op1] %> −</div>
              <div class="border-b border-gray-400 dark:border-gray-500"><%= item[:op2] %> =</div>
              <div class="mt-1">
                <input type="text" data-correct-answer="<%= item[:answer] %>" class="w-full border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-right font-bold bg-transparent dark:text-white">
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Esercizi 2 e 3 -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- Esercizio 2 - Addizioni -->
      <div>
        <p class="font-bold text-gray-700 dark:text-gray-200 mb-4">
          <%= numero_esercizio_badge(2) %>
          Calcola in colonna sul quaderno. Poi fai la prova.
        </p>

        <div class="space-y-4">
          <div class="p-3 bg-cyan-50 dark:bg-cyan-900/30 rounded-lg">
            <p class="text-gray-700 dark:text-gray-200 font-bold mb-2">a.</p>
            <ul class="space-y-1 text-gray-700 dark:text-gray-200">
              <li>58 + 406,7 + 0,821 =</li>
              <li>299,5 + 31,745 =</li>
              <li>61,93 + 158,308 =</li>
              <li>7,442 + 48,099 =</li>
            </ul>
          </div>
          <div class="p-3 bg-cyan-50 dark:bg-cyan-900/30 rounded-lg">
            <p class="text-gray-700 dark:text-gray-200 font-bold mb-2">b.</p>
            <ul class="space-y-1 text-gray-700 dark:text-gray-200">
              <li>28,126 + 3,59 + 172 =</li>
              <li>4,989 + 81,54 + 12,6 =</li>
              <li>602,33 + 25,082 + 44 =</li>
              <li>77 + 145,63 + 2,505 =</li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Esercizio 3 - Sottrazioni -->
      <div>
        <p class="font-bold text-gray-700 dark:text-gray-200 mb-4">
          <%= numero_esercizio_badge(3) %>
          Calcola in colonna sul quaderno. Poi fai la prova.
        </p>

        <div class="space-y-4">
          <div class="p-3 bg-cyan-50 dark:bg-cyan-900/30 rounded-lg">
            <p class="text-gray-700 dark:text-gray-200 font-bold mb-2">a.</p>
            <ul class="space-y-1 text-gray-700 dark:text-gray-200">
              <li>56,34 − 33,617 =</li>
              <li>450,2 − 247,18 =</li>
              <li>90,823 − 66,15 =</li>
              <li>368 − 222,49 =</li>
            </ul>
          </div>
          <div class="p-3 bg-cyan-50 dark:bg-cyan-900/30 rounded-lg">
            <p class="text-gray-700 dark:text-gray-200 font-bold mb-2">b.</p>
            <ul class="space-y-1 text-gray-700 dark:text-gray-200">
              <li>56,048 − 7,44 =</li>
              <li>890,3 − 225,112 =</li>
              <li>564 − 56,331 =</li>
              <li>688,02 − 79 =</li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <!-- Esercizio 4 -->
    <div>
      <p class="font-bold text-gray-700 dark:text-gray-200 mb-4">
        <%= numero_esercizio_badge(4) %>
        Completa le tabelle.
      </p>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Tabella addizioni -->
        <div class="overflow-x-auto">
          <table class="w-full border-collapse border-2 border-cyan-400 dark:border-cyan-600">
            <thead>
              <tr>
                <th class="p-2 border-2 border-cyan-400 dark:border-cyan-600 bg-cyan-100 dark:bg-cyan-800 font-bold text-gray-800 dark:text-gray-200">+</th>
                <th class="p-2 border-2 border-cyan-400 dark:border-cyan-600 bg-cyan-100 dark:bg-cyan-800 font-bold text-gray-800 dark:text-gray-200">2,5</th>
                <th class="p-2 border-2 border-cyan-400 dark:border-cyan-600 bg-cyan-100 dark:bg-cyan-800 font-bold text-gray-800 dark:text-gray-200">0,4</th>
                <th class="p-2 border-2 border-cyan-400 dark:border-cyan-600 bg-cyan-100 dark:bg-cyan-800 font-bold text-gray-800 dark:text-gray-200">5,3</th>
                <th class="p-2 border-2 border-cyan-400 dark:border-cyan-600 bg-cyan-100 dark:bg-cyan-800 font-bold text-gray-800 dark:text-gray-200">1,6</th>
              </tr>
            </thead>
            <tbody>
              <% [
                { row: "3,5", answers: ["6", "3,9", "8,8", "5,1"] },
                { row: "6,2", answers: ["8,7", "6,6", "11,5", "7,8"] },
                { row: "4,1", answers: ["6,6", "4,5", "9,4", "5,7"] },
                { row: "1,8", answers: ["4,3", "2,2", "7,1", "3,4"] }
              ].each do |data| %>
                <tr>
                  <td class="p-2 border-2 border-cyan-400 dark:border-cyan-600 bg-cyan-50 dark:bg-cyan-900 text-center text-gray-700 dark:text-gray-200"><%= data[:row] %></td>
                  <% data[:answers].each do |answer| %>
                    <td class="p-2 border-2 border-cyan-400 dark:border-cyan-600 bg-white dark:bg-gray-700 text-center">
                      <input type="text" data-correct-answer="<%= answer %>" class="w-12 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white">
                    </td>
                  <% end %>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <!-- Tabella sottrazioni -->
        <div class="overflow-x-auto">
          <table class="w-full border-collapse border-2 border-cyan-400 dark:border-cyan-600">
            <thead>
              <tr>
                <th class="p-2 border-2 border-cyan-400 dark:border-cyan-600 bg-cyan-100 dark:bg-cyan-800 font-bold text-gray-800 dark:text-gray-200">−</th>
                <th class="p-2 border-2 border-cyan-400 dark:border-cyan-600 bg-cyan-100 dark:bg-cyan-800 font-bold text-gray-800 dark:text-gray-200">0,5</th>
                <th class="p-2 border-2 border-cyan-400 dark:border-cyan-600 bg-cyan-100 dark:bg-cyan-800 font-bold text-gray-800 dark:text-gray-200">2,6</th>
                <th class="p-2 border-2 border-cyan-400 dark:border-cyan-600 bg-cyan-100 dark:bg-cyan-800 font-bold text-gray-800 dark:text-gray-200">4,3</th>
                <th class="p-2 border-2 border-cyan-400 dark:border-cyan-600 bg-cyan-100 dark:bg-cyan-800 font-bold text-gray-800 dark:text-gray-200">5,8</th>
              </tr>
            </thead>
            <tbody>
              <% [
                { row: "7,8", answers: ["7,3", "5,2", "3,5", "2"] },
                { row: "9,6", answers: ["9,1", "7", "5,3", "3,8"] },
                { row: "6,5", answers: ["6", "3,9", "2,2", "0,7"] },
                { row: "5,9", answers: ["5,4", "3,3", "1,6", "0,1"] }
              ].each do |data| %>
                <tr>
                  <td class="p-2 border-2 border-cyan-400 dark:border-cyan-600 bg-cyan-50 dark:bg-cyan-900 text-center text-gray-700 dark:text-gray-200"><%= data[:row] %></td>
                  <% data[:answers].each do |answer| %>
                    <td class="p-2 border-2 border-cyan-400 dark:border-cyan-600 bg-white dark:bg-gray-700 text-center">
                      <input type="text" data-correct-answer="<%= answer %>" class="w-12 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white">
                    </td>
                  <% end %>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <%= render 'shared/exercise_controls' %>
  </div>
</div>
