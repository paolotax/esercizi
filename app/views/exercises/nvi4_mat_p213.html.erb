<div class="max-w-6xl mx-auto bg-white dark:bg-gray-900 p-3 md:p-6 transition-colors duration-300"
     data-controller="exercise-checker text-toggle font-controls operation-viewer"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <%= render 'shared/page_header', pagina: @pagina %>

  <div class="space-y-6">

    <!-- Sezione Teoria -->
    <div class="p-4 bg-custom-blue dark:bg-cyan-900/30 rounded-2xl md:w-2/3 mx-auto">
      <p class="text-gray-700 dark:text-gray-200 mb-2">
        Per eseguire <span class="font-bold text-cyan-600 dark:text-cyan-400">addizioni</span> e <span class="font-bold text-cyan-600 dark:text-cyan-400">sottrazioni con i numeri decimali</span>:
      </p>
      <ul class="list-disc pl-6 space-y-1 text-gray-700 dark:text-gray-200 marker:text-cyan-500">
        <li>incolonna i numeri rispettando il valore posizionale delle cifre;</li>
        <li>se necessario aggiungi gli zeri per pareggiare il numero delle cifre nella parte decimale;</li>
        <li>trascrivi la virgola nel risultato.</li>
      </ul>
    </div>

    <!-- Esercizio 1 IMPARARE TUTTI -->
    <div class="p-5 bg-white dark:bg-gray-800 rounded-2xl border-3 border-yellow-400 dark:border-yellow-500">
      <p class="font-bold text-gray-700 dark:text-gray-200 mb-4">
        <%= imparare_tutti_badge(1) %>
        Esegui le operazioni in colonna.
      </p>

      <!-- Addizioni - 4 quaderni in riga -->
      <p class="text-gray-700 dark:text-gray-200 font-bold mb-3">Addizioni</p>
      <div class="flex flex-wrap gap-4 justify-center mb-6">
        <%= addizione_grid ["2,905", "78,300"], show_addends: true %>
        <%= addizione_grid ["13,600", "44,189"], show_addends: true %>
        <%= addizione_grid ["35,78", "9,12"], show_addends: true %>
        <%= addizione_grid ["9,60", "46,07"], show_addends: true %>
      </div>

      <!-- Sottrazioni - 4 quaderni in riga -->
      <p class="text-gray-700 dark:text-gray-200 font-bold mb-3">Sottrazioni</p>
      <div class="flex flex-wrap gap-4 justify-center">
        <%= sottrazione_grid "75,509", "27,372", show_minuend_subtrahend: true %>
        <%= sottrazione_grid "84,600", "44,128", show_minuend_subtrahend: true %>
        <%= sottrazione_grid "49,310", "36,207", show_minuend_subtrahend: true %>
        <%= sottrazione_grid "78,040", "13,561", show_minuend_subtrahend: true %>
      </div>
    </div>

    <!-- Esercizi 2 e 3 -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- Esercizio 2 - Addizioni -->
      <div>
        <p class="font-bold text-gray-700 dark:text-gray-200 mb-4">
          <%= numero_esercizio_badge(2) %>
          Calcola in colonna. Poi fai la prova.
        </p>

        <%
          es2_gruppi = [
            { lettera: "a", operazioni: [
              { op: "58+406,7", answer: "464,7" },
              { op: "299,5+31,745", answer: "331,245" },
              { op: "61,93+158,308", answer: "220,238" },
              { op: "7,442+48,099", answer: "55,541" }
            ]},
            { lettera: "b", operazioni: [
              { op: "28,126+3,59", answer: "31,716" },
              { op: "4,989+81,54", answer: "86,529" },
              { op: "602,33+25,082", answer: "627,412" },
              { op: "77+145,63", answer: "222,63" }
            ]}
          ]
        %>

        <div class="space-y-4">
          <% es2_gruppi.each do |gruppo| %>
            <%
              operations_data = gruppo[:operazioni].each_with_index.map { |item, idx|
                { operation: item[:op], targetId: "es2-#{gruppo[:lettera]}-#{idx}" }
              }
            %>
            <div class="p-3 bg-cyan-50 dark:bg-cyan-900/30 rounded-lg">
              <p class="text-gray-700 dark:text-gray-200 font-bold mb-2 flex items-center gap-2">
                <%= gruppo[:lettera] %>.
                <button type="button"
                        data-action="click->operation-viewer#openGroup"
                        data-operations='<%= operations_data.to_json %>'
                        data-type="addizione"
                        data-group="<%= gruppo[:lettera] %>"
                        class="p-1 text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition print-hidden"
                        title="Apri gruppo <%= gruppo[:lettera] %> nella calcolatrice">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
                  </svg>
                </button>
              </p>
              <ul class="space-y-2">
                <% gruppo[:operazioni].each_with_index do |item, idx| %>
                  <li class="flex items-center gap-2 flex-wrap">
                    <span class="text-gray-700 dark:text-gray-200"><%= item[:op].gsub('+', ' + ') %> =</span>
                    <input type="text"
                           data-operation-id="es2-<%= gruppo[:lettera] %>-<%= idx %>"
                           data-correct-answer="<%= item[:answer] %>"
                           class="w-24 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white">
                  </li>
                <% end %>
              </ul>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Esercizio 3 - Sottrazioni -->
      <div>
        <p class="font-bold text-gray-700 dark:text-gray-200 mb-4">
          <%= numero_esercizio_badge(3) %>
          Calcola in colonna. Poi fai la prova.
        </p>

        <%
          es3_gruppi = [
            { lettera: "a", operazioni: [
              { op: "56,34-33,617", answer: "22,723" },
              { op: "450,2-247,18", answer: "203,02" },
              { op: "90,823-66,15", answer: "24,673" },
              { op: "368-222,49", answer: "145,51" }
            ]},
            { lettera: "b", operazioni: [
              { op: "56,048-7,44", answer: "48,608" },
              { op: "890,3-225,112", answer: "665,188" },
              { op: "564-56,331", answer: "507,669" },
              { op: "688,02-79", answer: "609,02" }
            ]}
          ]
        %>

        <div class="space-y-4">
          <% es3_gruppi.each do |gruppo| %>
            <%
              operations_data = gruppo[:operazioni].each_with_index.map { |item, idx|
                { operation: item[:op], targetId: "es3-#{gruppo[:lettera]}-#{idx}" }
              }
            %>
            <div class="p-3 bg-cyan-50 dark:bg-cyan-900/30 rounded-lg">
              <p class="text-gray-700 dark:text-gray-200 font-bold mb-2 flex items-center gap-2">
                <%= gruppo[:lettera] %>.
                <button type="button"
                        data-action="click->operation-viewer#openGroup"
                        data-operations='<%= operations_data.to_json %>'
                        data-type="sottrazione"
                        data-group="<%= gruppo[:lettera] %>"
                        class="p-1 text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition print-hidden"
                        title="Apri gruppo <%= gruppo[:lettera] %> nella calcolatrice">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
                  </svg>
                </button>
              </p>
              <ul class="space-y-2">
                <% gruppo[:operazioni].each_with_index do |item, idx| %>
                  <li class="flex items-center gap-2 flex-wrap">
                    <span class="text-gray-700 dark:text-gray-200"><%= item[:op].gsub('-', ' − ') %> =</span>
                    <input type="text"
                           data-operation-id="es3-<%= gruppo[:lettera] %>-<%= idx %>"
                           data-correct-answer="<%= item[:answer] %>"
                           class="w-24 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white">
                  </li>
                <% end %>
              </ul>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Esercizio 4 -->
    <div>
      <p class="font-bold text-gray-700 dark:text-gray-200 mb-4">
        <%= numero_esercizio_badge(4) %>
        Completa le tabelle.
      </p>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Tabella addizioni -->
        <div class="overflow-x-auto">
          <table class="w-full border-collapse border-2 border-cyan-400 dark:border-cyan-600">
            <thead>
              <tr>
                <th class="p-2 border-2 border-cyan-400 dark:border-cyan-600 bg-cyan-100 dark:bg-cyan-800 font-bold text-gray-800 dark:text-gray-200">+</th>
                <th class="p-2 border-2 border-cyan-400 dark:border-cyan-600 bg-cyan-100 dark:bg-cyan-800 font-bold text-gray-800 dark:text-gray-200">2,5</th>
                <th class="p-2 border-2 border-cyan-400 dark:border-cyan-600 bg-cyan-100 dark:bg-cyan-800 font-bold text-gray-800 dark:text-gray-200">0,4</th>
                <th class="p-2 border-2 border-cyan-400 dark:border-cyan-600 bg-cyan-100 dark:bg-cyan-800 font-bold text-gray-800 dark:text-gray-200">5,3</th>
                <th class="p-2 border-2 border-cyan-400 dark:border-cyan-600 bg-cyan-100 dark:bg-cyan-800 font-bold text-gray-800 dark:text-gray-200">1,6</th>
              </tr>
            </thead>
            <tbody>
              <% [
                { row: "3,5", answers: ["6", "3,9", "8,8", "5,1"] },
                { row: "6,2", answers: ["8,7", "6,6", "11,5", "7,8"] },
                { row: "4,1", answers: ["6,6", "4,5", "9,4", "5,7"] },
                { row: "1,8", answers: ["4,3", "2,2", "7,1", "3,4"] }
              ].each do |data| %>
                <tr>
                  <td class="p-2 border-2 border-cyan-400 dark:border-cyan-600 bg-cyan-50 dark:bg-cyan-900 text-center text-gray-700 dark:text-gray-200"><%= data[:row] %></td>
                  <% data[:answers].each do |answer| %>
                    <td class="p-2 border-2 border-cyan-400 dark:border-cyan-600 bg-white dark:bg-gray-700 text-center">
                      <input type="text" data-correct-answer="<%= answer %>" class="w-12 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white">
                    </td>
                  <% end %>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <!-- Tabella sottrazioni -->
        <div class="overflow-x-auto">
          <table class="w-full border-collapse border-2 border-cyan-400 dark:border-cyan-600">
            <thead>
              <tr>
                <th class="p-2 border-2 border-cyan-400 dark:border-cyan-600 bg-cyan-100 dark:bg-cyan-800 font-bold text-gray-800 dark:text-gray-200">−</th>
                <th class="p-2 border-2 border-cyan-400 dark:border-cyan-600 bg-cyan-100 dark:bg-cyan-800 font-bold text-gray-800 dark:text-gray-200">0,5</th>
                <th class="p-2 border-2 border-cyan-400 dark:border-cyan-600 bg-cyan-100 dark:bg-cyan-800 font-bold text-gray-800 dark:text-gray-200">2,6</th>
                <th class="p-2 border-2 border-cyan-400 dark:border-cyan-600 bg-cyan-100 dark:bg-cyan-800 font-bold text-gray-800 dark:text-gray-200">4,3</th>
                <th class="p-2 border-2 border-cyan-400 dark:border-cyan-600 bg-cyan-100 dark:bg-cyan-800 font-bold text-gray-800 dark:text-gray-200">5,8</th>
              </tr>
            </thead>
            <tbody>
              <% [
                { row: "7,8", answers: ["7,3", "5,2", "3,5", "2"] },
                { row: "9,6", answers: ["9,1", "7", "5,3", "3,8"] },
                { row: "6,5", answers: ["6", "3,9", "2,2", "0,7"] },
                { row: "5,9", answers: ["5,4", "3,3", "1,6", "0,1"] }
              ].each do |data| %>
                <tr>
                  <td class="p-2 border-2 border-cyan-400 dark:border-cyan-600 bg-cyan-50 dark:bg-cyan-900 text-center text-gray-700 dark:text-gray-200"><%= data[:row] %></td>
                  <% data[:answers].each do |answer| %>
                    <td class="p-2 border-2 border-cyan-400 dark:border-cyan-600 bg-white dark:bg-gray-700 text-center">
                      <input type="text" data-correct-answer="<%= answer %>" class="w-12 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white">
                    </td>
                  <% end %>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <%= render 'shared/operation_viewer' %>
    <%= render 'shared/exercise_controls' %>
  </div>
</div>
