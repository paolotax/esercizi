<% content_for :titolo, "Frazioni - Pagina 77" %>

<div class="max-w-7xl mx-auto p-6 bg-gradient-to-b from-blue-50 to-white" data-controller="exercise-checker">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-center gap-4 mb-4">
      <div class="bg-gradient-to-r from-blue-500 to-cyan-600 text-white px-6 py-3 rounded-lg font-bold text-xl shadow-lg">
        FRAZIONI
      </div>
      <h1 class="text-3xl font-bold text-blue-600">ESERCIZI SULLE FRAZIONI</h1>
      <div class="ml-auto bg-red-600 text-white rounded-full w-14 h-14 flex items-center justify-center font-bold text-2xl shadow-lg">
        77
      </div>
    </div>
  </div>

  <!-- Immagine principale della pagina -->
  <div class="bg-white rounded-xl shadow-lg p-8 mb-8">
    <div class="mb-6">
      <%= image_tag "bus3_mat_p077.jpg",
          alt: "Pagina 77 - Esercizi sulle frazioni",
          class: "w-full h-auto rounded-lg" %>
    </div>
  </div>

  <!-- Esercizio 1 -->
  <div class="bg-white rounded-xl shadow-lg p-8 mb-8">
    <div class="flex items-start gap-3 mb-6">
      <div class="bg-red-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0">
        1
      </div>
      <p class="text-lg text-gray-700">
        Completa gli esercizi come indicato.
      </p>
    </div>

    <!-- Immagine esercizio 1 -->
    <div class="mb-6">
      <%= image_tag "bus3_mat_p077_img01.png",
          alt: "Esercizio 1",
          class: "w-full h-auto max-w-4xl mx-auto" %>
    </div>

    <!-- Inputs per l'esercizio 1 (se necessario) -->
    <div class="space-y-4">
      <!-- Esempio di input - da modificare in base al contenuto reale -->
      <div class="bg-blue-50 rounded-lg p-4">
        <p class="text-gray-700 mb-2">Completa le frazioni:</p>
        <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
          <div class="flex flex-col gap-2">
            <input type="text"
                   data-correct-answer=""
                   class="w-full px-3 py-2 border-2 border-blue-300 rounded text-center font-bold"
                   placeholder="..." />
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Esercizio 2 -->
  <div class="bg-white rounded-xl shadow-lg p-8 mb-8">
    <div class="flex items-start gap-3 mb-6">
      <div class="bg-red-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0">
        2
      </div>
      <p class="text-lg text-gray-700">
        Completa gli esercizi come indicato.
      </p>
    </div>

    <!-- Immagine esercizio 2 -->
    <div class="mb-6">
      <%= image_tag "bus3_mat_p077_img02.png",
          alt: "Esercizio 2",
          class: "w-full h-auto max-w-4xl mx-auto" %>
    </div>

    <!-- Inputs per l'esercizio 2 (se necessario) -->
    <div class="space-y-4">
      <!-- Esempio di input - da modificare in base al contenuto reale -->
      <div class="bg-green-50 rounded-lg p-4">
        <p class="text-gray-700 mb-2">Completa le frazioni:</p>
        <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
          <div class="flex flex-col gap-2">
            <input type="text"
                   data-correct-answer=""
                   class="w-full px-3 py-2 border-2 border-green-300 rounded text-center font-bold"
                   placeholder="..." />
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Footer con controlli -->
  <%= render 'shared/exercise_controls', color: 'blue', current_page: 'bus3_mat_p077' %>
</div>

