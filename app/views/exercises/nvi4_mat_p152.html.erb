<div class="max-w-6xl mx-auto bg-white dark:bg-gray-900 p-3 md:p-6 transition-colors duration-300"
     data-controller="exercise-checker text-toggle font-controls"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <%= render 'shared/page_header', pagina: @pagina %>

  <div class="space-y-6">

    <!-- Immagine principale -->
    <div class="flex justify-center">
      <%= image_tag "nvi4_mat/p152/p152_01.jpg", class: "h-auto dark:bg-white dark:rounded-lg dark:p-2 max-w-full", alt: "Relazioni, dati e previsioni" %>
    </div>

    <!-- Container ESERCIZI -->
    <div class="p-4 md:p-6 bg-orange-100 dark:bg-orange-900/30 rounded-2xl space-y-8">

      <!-- Esercizio 1 - Scegli -->
      <div>
        <p class="font-bold text-gray-700 dark:text-gray-200 mb-4">Scegli.</p>

        <div class="space-y-6">
          <!-- Prima domanda -->
          <div class="space-y-3 text-gray-700 dark:text-gray-200">
            <p>L'<span class="font-bold">ISTOGRAMMA</span> e l'<span class="font-bold">IDEOGRAMMA</span></p>
            <div class="space-y-2 pl-4">
              <label class="flex items-center gap-2 cursor-pointer">
                <input type="radio" name="istogramma" value="grafici" class="w-5 h-5" data-correct-answer="true">
                <span>sono grafici che si usano per rappresentare dati.</span>
              </label>
              <label class="flex items-center gap-2 cursor-pointer">
                <input type="radio" name="istogramma" value="numeri" class="w-5 h-5">
                <span>sono numeri scritti con i colori.</span>
              </label>
            </div>
          </div>

          <!-- Seconda domanda -->
          <div class="space-y-3 text-gray-700 dark:text-gray-200">
            <p>Nella <span class="font-bold">LEGENDA</span> ci sono</p>
            <div class="space-y-2 pl-4">
              <label class="flex items-center gap-2 cursor-pointer">
                <input type="radio" name="legenda" value="colori" class="w-5 h-5">
                <span>i colori da usare nei grafici.</span>
              </label>
              <label class="flex items-center gap-2 cursor-pointer">
                <input type="radio" name="legenda" value="indicazioni" class="w-5 h-5" data-correct-answer="true">
                <span>le indicazioni per interpretare i dati.</span>
              </label>
            </div>
          </div>
        </div>
      </div>

      <!-- Esercizio 2 - Collega -->
      <div>
        <p class="font-bold text-gray-700 dark:text-gray-200 mb-4">Osserva e collega.</p>

        <div class="space-y-4 text-gray-700 dark:text-gray-200">
          <div class="flex flex-col md:flex-row md:items-center gap-2 md:gap-4">
            <span class="shrink-0"><span class="text-<%= @pagina.base_color %>-500">•</span> L'<span class="font-bold">ISTOGRAMMA</span> si realizza con</span>
            <select class="p-2 border-2 border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 dark:text-white" data-correct-answer="quadratini">
              <option value="">Scegli...</option>
              <option value="disegni">disegni</option>
              <option value="quadratini">quadratini</option>
            </select>
          </div>
          <div class="flex flex-col md:flex-row md:items-center gap-2 md:gap-4">
            <span class="shrink-0"><span class="text-<%= @pagina.base_color %>-500">•</span> L'<span class="font-bold">IDEOGRAMMA</span> si realizza con</span>
            <select class="p-2 border-2 border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 dark:text-white" data-correct-answer="disegni">
              <option value="">Scegli...</option>
              <option value="disegni">disegni</option>
              <option value="quadratini">quadratini</option>
            </select>
          </div>
        </div>
      </div>

    </div>

    <%= render 'shared/exercise_controls' %>
  </div>
</div>
