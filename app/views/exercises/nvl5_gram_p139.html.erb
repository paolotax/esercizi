        </div>

        <div class="flex items-center gap-3">
          <span class="text-<%= @pagina.base_color %>-600 font-bold">•</span>
          <span class="text-gray-700 w-32">allo improvviso</span>
          <span class="text-gray-400">→</span>
          <input type="text" class="border-b-2 border-dotted border-gray-400 bg-transparent px-2 py-1 focus:outline-none focus:border-<%= @pagina.base_color %>-500 flex-grow" data-fill-blanks-target="input" data-answer="all'improvviso" data-correct-answer="all'improvviso">
