<% content_for :titolo, "#{@pagina.titolo} - #{@pagina.numero}" %>

<div class="max-w-7xl mx-auto p-3 md:p-6 bg-white dark:bg-gray-900 text-black dark:text-white font-mono transition-colors duration-300"
     data-controller="exercise-checker page-viewer text-toggle font-controls"
     data-page-viewer-image-url-value="<%= asset_path('bus3_mat/p135/page.png') %>"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <!-- Header -->
  <%= render 'shared/page_header', pagina: @pagina %>

  <!-- Badge Schemi -->
  <div class="flex items-center gap-2 mb-4">
    <div class="bg-yellow-400 rounded-full w-12 h-12 flex items-center justify-center border-4 border-cyan-500">
      <span class="text-cyan-600 dark:text-cyan-400 font-bold text-center leading-tight">IMPARARE<br>TUTTI</span>
    </div>
    <span class="bg-cyan-500 text-white px-3 py-1 rounded font-bold">SCHEMI</span>
  </div>

  <!-- Immagine mappa concettuale -->
  <div class="flex justify-center mb-6">
    <div class="dark:bg-white rounded-xl p-2 inline-block w-full"><%= image_tag "bus3_mat/p135/p135_01.jpg", alt: "Mappa concettuale Sottrazione", class: "rounded-lg w-full" %></div>
  </div>

  <!-- Footer con controlli -->
  <%= render 'shared/exercise_controls' %>
</div>
