<div class="max-w-6xl mx-auto bg-white p-3 md:p-6"
     data-controller="exercise-checker text-toggle font-controls"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <%= render 'shared/page_header', pagina: @pagina %>

  <div class="space-y-6">
    <!-- Intestazione MAPPA -->
    <div class="flex items-center gap-4 mb-4">
      <div class="flex items-center justify-center w-16 h-16 rounded-full bg-yellow-200 border-4 border-yellow-400">
        <span class="font-bold text-yellow-700">IMPARARE<br>TUTTI</span>
      </div>
      <span class="font-bold text-<%= @pagina.base_color %>-700">MAPPA</span>
    </div>

    <!-- MISURE DI LUNGHEZZA -->
    <div>
      <div class="flex justify-center mb-4">
        <div class="bg-blue-500 rounded-full px-6 py-2">
          <h2 class="font-bold text-white">MISURE DI LUNGHEZZA</h2>
        </div>
      </div>

      <div class="overflow-x-auto">
        <table class="w-full border-collapse border border-gray-300">
          <thead>
            <tr>
              <th class="border border-gray-300 px-3 py-2 bg-cyan-500 text-white font-bold" colspan="3">MULTIPLI</th>
              <th class="border border-gray-300 px-3 py-2 bg-red-500 text-white font-bold">UNITÀ FONDAMENTALE</th>
              <th class="border border-gray-300 px-3 py-2 bg-green-500 text-white font-bold" colspan="3">SOTTOMULTIPLI</th>
            </tr>
            <tr>
              <th class="border border-gray-300 px-3 py-2 text-red-600 font-bold">km</th>
              <th class="border border-gray-300 px-3 py-2 text-red-600 font-bold">hm</th>
              <th class="border border-gray-300 px-3 py-2 text-red-600 font-bold">dam</th>
              <th class="border border-gray-300 px-3 py-2 text-red-600 font-bold">m</th>
              <th class="border border-gray-300 px-3 py-2 text-red-600 font-bold">dm</th>
              <th class="border border-gray-300 px-3 py-2 text-red-600 font-bold">cm</th>
              <th class="border border-gray-300 px-3 py-2 text-red-600 font-bold">mm</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td class="border border-gray-300 px-3 py-2 text-center">chilometro</td>
              <td class="border border-gray-300 px-3 py-2 text-center">ettometro</td>
              <td class="border border-gray-300 px-3 py-2 text-center">decametro</td>
              <td class="border border-gray-300 px-3 py-2 text-center">metro</td>
              <td class="border border-gray-300 px-3 py-2 text-center">decimetro</td>
              <td class="border border-gray-300 px-3 py-2 text-center">centimetro</td>
              <td class="border border-gray-300 px-3 py-2 text-center">millimetro</td>
            </tr>
            <tr>
              <td class="border border-gray-300 px-3 py-2 text-center whitespace-nowrap">1 000 m</td>
              <td class="border border-gray-300 px-3 py-2 text-center">100 m</td>
              <td class="border border-gray-300 px-3 py-2 text-center">10 m</td>
              <td class="border border-gray-300 px-3 py-2 text-center">1 m</td>
              <td class="border border-gray-300 px-3 py-2 text-center">0,1 m</td>
              <td class="border border-gray-300 px-3 py-2 text-center">0,01 m</td>
              <td class="border border-gray-300 px-3 py-2 text-center">0,001 m</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <!-- MISURE DI CAPACITÀ -->
    <div>
      <div class="flex justify-center mb-4">
        <div class="bg-blue-500 rounded-full px-6 py-2">
          <h2 class="font-bold text-white">MISURE DI CAPACITÀ</h2>
        </div>
      </div>

      <div class="overflow-x-auto">
        <table class="w-full border-collapse border border-gray-300">
          <thead>
            <tr>
              <th class="border border-gray-300 px-3 py-2 bg-cyan-500 text-white font-bold" colspan="2">MULTIPLI</th>
              <th class="border border-gray-300 px-3 py-2 bg-red-500 text-white font-bold">UNITÀ FONDAMENTALE</th>
              <th class="border border-gray-300 px-3 py-2 bg-green-500 text-white font-bold" colspan="3">SOTTOMULTIPLI</th>
            </tr>
            <tr>
              <th class="border border-gray-300 px-3 py-2 text-red-600 font-bold">hℓ</th>
              <th class="border border-gray-300 px-3 py-2 text-red-600 font-bold">daℓ</th>
              <th class="border border-gray-300 px-3 py-2 text-red-600 font-bold">ℓ</th>
              <th class="border border-gray-300 px-3 py-2 text-red-600 font-bold">dℓ</th>
              <th class="border border-gray-300 px-3 py-2 text-red-600 font-bold">cℓ</th>
              <th class="border border-gray-300 px-3 py-2 text-red-600 font-bold">mℓ</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td class="border border-gray-300 px-3 py-2 text-center">ettolitro</td>
              <td class="border border-gray-300 px-3 py-2 text-center">decalitro</td>
              <td class="border border-gray-300 px-3 py-2 text-center">litro</td>
              <td class="border border-gray-300 px-3 py-2 text-center">decilitro</td>
              <td class="border border-gray-300 px-3 py-2 text-center">centilitro</td>
              <td class="border border-gray-300 px-3 py-2 text-center">millilitro</td>
            </tr>
            <tr>
              <td class="border border-gray-300 px-3 py-2 text-center">100 ℓ</td>
              <td class="border border-gray-300 px-3 py-2 text-center">10 ℓ</td>
              <td class="border border-gray-300 px-3 py-2 text-center">1 ℓ</td>
              <td class="border border-gray-300 px-3 py-2 text-center">0,1 ℓ</td>
              <td class="border border-gray-300 px-3 py-2 text-center">0,01 ℓ</td>
              <td class="border border-gray-300 px-3 py-2 text-center">0,001 ℓ</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <!-- MISURE DI MASSA -->
    <div>
      <div class="flex justify-center mb-4">
        <div class="bg-blue-500 rounded-full px-6 py-2">
          <h2 class="font-bold text-white">MISURE DI MASSA</h2>
        </div>
      </div>

      <div class="overflow-x-auto">
        <table class="w-full border-collapse border border-gray-300">
          <thead>
            <tr>
              <th class="border border-gray-300 px-3 py-2 bg-cyan-500 text-white font-bold" colspan="3">MULTIPLI</th>
              <th class="border border-gray-300 px-3 py-2 bg-red-500 text-white font-bold">UNITÀ FONDAMENTALE</th>
              <th class="border border-gray-300 px-3 py-2 bg-green-500 text-white font-bold" colspan="3">SOTTOMULTIPLI</th>
            </tr>
            <tr>
              <th class="border border-gray-300 px-3 py-2 text-red-600 font-bold">Mg</th>
              <th class="border border-gray-300 px-3 py-2 text-red-600 font-bold"></th>
              <th class="border border-gray-300 px-3 py-2 text-red-600 font-bold"></th>
              <th class="border border-gray-300 px-3 py-2 text-red-600 font-bold">kg</th>
              <th class="border border-gray-300 px-3 py-2 text-red-600 font-bold">hg</th>
              <th class="border border-gray-300 px-3 py-2 text-red-600 font-bold">dag</th>
              <th class="border border-gray-300 px-3 py-2 text-red-600 font-bold">g</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td class="border border-gray-300 px-3 py-2 text-center">megagrammo</td>
              <td class="border border-gray-300 px-3 py-2 text-center">centinaio di kg</td>
              <td class="border border-gray-300 px-3 py-2 text-center">decina di kg</td>
              <td class="border border-gray-300 px-3 py-2 text-center">chilogrammo</td>
              <td class="border border-gray-300 px-3 py-2 text-center">ettogrammo</td>
              <td class="border border-gray-300 px-3 py-2 text-center">decagrammo</td>
              <td class="border border-gray-300 px-3 py-2 text-center">grammo</td>
            </tr>
            <tr>
              <td class="border border-gray-300 px-3 py-2 text-center whitespace-nowrap">1 000 kg</td>
              <td class="border border-gray-300 px-3 py-2 text-center">100 kg</td>
              <td class="border border-gray-300 px-3 py-2 text-center">10 kg</td>
              <td class="border border-gray-300 px-3 py-2 text-center">1 kg</td>
              <td class="border border-gray-300 px-3 py-2 text-center">0,1 kg</td>
              <td class="border border-gray-300 px-3 py-2 text-center">0,01 kg</td>
              <td class="border border-gray-300 px-3 py-2 text-center">0,001 kg</td>
            </tr>
          </tbody>
        </table>
      </div>

      <!-- Sottomultipli del grammo -->
      <div class="mt-4">
        <div class="flex justify-end">
          <table class="border-collapse border border-gray-300 w-auto">
            <thead>
              <tr>
                <th class="border border-gray-300 px-3 py-2 bg-green-500 text-white font-bold" colspan="4">SOTTOMULTIPLI DEL GRAMMO</th>
              </tr>
              <tr>
                <th class="border border-gray-300 px-3 py-2 text-red-600 font-bold">g</th>
                <th class="border border-gray-300 px-3 py-2 text-red-600 font-bold">dg</th>
                <th class="border border-gray-300 px-3 py-2 text-red-600 font-bold">cg</th>
                <th class="border border-gray-300 px-3 py-2 text-red-600 font-bold">mg</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td class="border border-gray-300 px-3 py-2 text-center">grammo</td>
                <td class="border border-gray-300 px-3 py-2 text-center">decigrammo</td>
                <td class="border border-gray-300 px-3 py-2 text-center">centigrammo</td>
                <td class="border border-gray-300 px-3 py-2 text-center">milligrammo</td>
              </tr>
              <tr>
                <td class="border border-gray-300 px-3 py-2 text-center">1 g</td>
                <td class="border border-gray-300 px-3 py-2 text-center">0,1 g</td>
                <td class="border border-gray-300 px-3 py-2 text-center">0,01 g</td>
                <td class="border border-gray-300 px-3 py-2 text-center">0,001 g</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <%= render 'shared/exercise_controls' %>
  </div>
</div>
