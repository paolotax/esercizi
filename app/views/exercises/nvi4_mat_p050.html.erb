        <!-- Esercizio 4 -->
        <div class="md:pl-4">
          <p class="font-bold text-gray-700 mb-4">
            <%= numero_esercizio_badge(4) %>
            Calcola in colonna sul quaderno.
          </p>
          <div class="space-y-2">
            <p class="font-bold text-gray-700">a)</p>
            <div class="grid grid-cols-2 md:grid-cols-3 gap-2">
              <span class="text-gray-700">84 : 7 =</span>
              <span class="text-gray-700">73 : 5 =</span>
              <span class="text-gray-700">268 : 4 =</span>
              <span class="text-gray-700">284 : 23 =</span>
              <span class="text-gray-700">496 : 21 =</span>
              <span class="text-gray-700">684 : 31 =</span>
