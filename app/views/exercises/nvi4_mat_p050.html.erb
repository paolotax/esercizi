              <span class="text-gray-700"><span class="whitespace-nowrap">4 529</span> : 22 =</span>
              <span class="text-gray-700"><span class="whitespace-nowrap">8 743</span> : 42 =</span>
              <span class="text-gray-700"><span class="whitespace-nowrap">1 548</span> : 48 =</span>
              <span class="text-gray-700"><span class="whitespace-nowrap">2 356</span> : 61 =</span>
              <span class="text-gray-700"><span class="whitespace-nowrap">2 562</span> : 29 =</span>
