          <div class="flex items-center gap-1">
            <input type="text" data-correct-answer="3" class="w-12 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
            <span class="text-gray-700">× 15 = 45</span>
          </div>
          <div class="flex items-center gap-1">
            <span class="text-gray-700">7 ×</span>
            <input type="text" data-correct-answer="34" class="w-12 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
            <span class="text-gray-700">= 238</span>
          </div>
          <div class="flex items-center gap-1">
            <input type="text" data-correct-answer="5" class="w-12 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
            <span class="text-gray-700">× 22 = 110</span>
