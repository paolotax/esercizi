        <!-- Esercizio 3 -->
        <div class="md:pr-4">
          <p class="font-bold text-gray-700 mb-4">
            <%= numero_esercizio_badge(3) %>
            Calcola in colonna sul quaderno.
          </p>
          <div class="space-y-2">
            <p class="font-bold text-gray-700">a)</p>
            <div class="grid grid-cols-2 md:grid-cols-3 gap-2">
              <span class="text-gray-700">39 × 28 =</span>
              <span class="text-gray-700">86 × 18 =</span>
              <span class="text-gray-700">25 × 12 =</span>
              <span class="text-gray-700">35 × 27 =</span>
              <span class="text-gray-700">458 × 32 =</span>
              <span class="text-gray-700">560 × 23 =</span>
            </div>
            <p class="font-bold text-gray-700 mt-3">b)</p>
            <div class="grid grid-cols-2 md:grid-cols-3 gap-2">
              <span class="text-gray-700">501 × 28 =</span>
              <span class="text-gray-700">265 × 23 =</span>
              <span class="text-gray-700">236 × 14 =</span>
              <span class="text-gray-700">472 × 45 =</span>
              <span class="text-gray-700">369 × 37 =</span>
              <span class="text-gray-700">157 × 64 =</span>
