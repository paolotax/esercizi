<div class="max-w-6xl mx-auto bg-white dark:bg-gray-900 p-3 md:p-6 transition-colors duration-300"
     data-controller="exercise-checker text-toggle font-controls"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <%= render 'shared/page_header', pagina: @pagina %>

  <div class="space-y-6">

    <!-- Box formule -->
    <div class="p-4 bg-custom-blue dark:bg-cyan-900 rounded-2xl">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <!-- Perimetro -->
        <div class="flex items-center justify-center gap-4">
          <div class="text-center">
            <div class="border-2 border-gray-400 dark:border-gray-500 p-4 inline-block">
              <span class="italic text-gray-700 dark:text-gray-200">ℓ</span><sub class="text-gray-700 dark:text-gray-200">2</sub>
              <div class="h-8"></div>
              <span class="italic text-gray-700 dark:text-gray-200">ℓ</span><sub class="text-gray-700 dark:text-gray-200">1</sub>
            </div>
          </div>
          <div class="p-3 bg-white dark:bg-gray-800 rounded-lg">
            <p class="text-gray-700 dark:text-gray-200 font-bold">P = (<span class="italic">ℓ</span><sub>1</sub> + <span class="italic">ℓ</span><sub>2</sub>) × 2</p>
          </div>
        </div>

        <!-- Area -->
        <div class="flex items-center justify-center gap-4">
          <div class="text-center">
            <div class="border-2 border-gray-400 dark:border-gray-500 p-4 inline-block relative">
              <span class="absolute right-1 top-1/2 -translate-y-1/2 text-gray-700 dark:text-gray-200">h</span>
              <div class="h-8 w-16"></div>
              <span class="text-gray-700 dark:text-gray-200">b</span>
            </div>
          </div>
          <div class="p-3 bg-white dark:bg-gray-800 rounded-lg">
            <p class="text-gray-700 dark:text-gray-200 font-bold">A = b × h</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Grid due colonne -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 md:divide-x-2 md:divide-cyan-300 dark:md:divide-cyan-600">

      <!-- Colonna sinistra -->
      <div class="md:pr-4 space-y-6">
        <!-- Esercizio 1 IMPARARE TUTTI -->
        <div class="p-5 bg-white dark:bg-gray-800 rounded-2xl border-3 border-yellow-400 dark:border-yellow-500 space-y-4">
          <p class="font-bold text-gray-700 dark:text-gray-200">
            <%= imparare_tutti_badge(1) %>
            Misura con la riga i lati di ogni rettangolo e calcola il perimetro.
          </p>

          <!-- Rettangolo 1 -->
          <div class="space-y-2">
            <div class="flex justify-center">
              <%= image_tag "nvi4_mat/p248/output-1715932804248_174_472_263_98.png", class: "max-w-full h-auto dark:bg-white dark:rounded-lg dark:p-1", alt: "Rettangolo 1" %>
            </div>
            <div class="flex flex-wrap items-center gap-4 justify-center">
              <div class="flex items-center gap-1">
                <span class="italic text-gray-700 dark:text-gray-200">ℓ</span><sub class="text-gray-700 dark:text-gray-200">1</sub>
                <span class="text-gray-700 dark:text-gray-200">=</span>
                <input type="text" class="w-16 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white" placeholder="...">
              </div>
              <div class="flex items-center gap-1">
                <span class="italic text-gray-700 dark:text-gray-200">ℓ</span><sub class="text-gray-700 dark:text-gray-200">2</sub>
                <span class="text-gray-700 dark:text-gray-200">=</span>
                <input type="text" class="w-16 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white" placeholder="...">
              </div>
            </div>
            <div class="flex items-center gap-2 justify-center">
              <span class="text-gray-700 dark:text-gray-200">P =</span>
              <input type="text" class="w-32 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white" placeholder="...">
            </div>
          </div>

          <!-- Rettangolo 2 -->
          <div class="space-y-2">
            <div class="flex justify-center">
              <%= image_tag "nvi4_mat/p248/output-1715932804248_276_652_73_137.png", class: "max-w-full h-auto dark:bg-white dark:rounded-lg dark:p-1", alt: "Rettangolo 2" %>
            </div>
            <div class="flex flex-wrap items-center gap-4 justify-center">
              <div class="flex items-center gap-1">
                <span class="italic text-gray-700 dark:text-gray-200">ℓ</span><sub class="text-gray-700 dark:text-gray-200">1</sub>
                <span class="text-gray-700 dark:text-gray-200">=</span>
                <input type="text" class="w-16 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white" placeholder="...">
              </div>
              <div class="flex items-center gap-1">
                <span class="italic text-gray-700 dark:text-gray-200">ℓ</span><sub class="text-gray-700 dark:text-gray-200">2</sub>
                <span class="text-gray-700 dark:text-gray-200">=</span>
                <input type="text" class="w-16 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white" placeholder="...">
              </div>
            </div>
            <div class="flex items-center gap-2 justify-center">
              <span class="text-gray-700 dark:text-gray-200">P =</span>
              <input type="text" class="w-32 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white" placeholder="...">
            </div>
          </div>
        </div>

        <!-- Esercizio 2 -->
        <div class="space-y-3">
          <p class="font-bold text-gray-700 dark:text-gray-200">
            <%= numero_esercizio_badge(2) %>
            Calcola il perimetro del campo.
          </p>

          <div class="flex justify-center">
            <%= image_tag "nvi4_mat/p248/p248_02.jpg", class: "max-w-full h-auto dark:bg-white dark:rounded-lg dark:p-1", alt: "Campo rettangolare" %>
          </div>

          <div class="space-y-2 text-gray-700 dark:text-gray-200">
            <p>AB = 20 m</p>
            <p>BC = 30 m</p>
            <div class="flex items-center gap-2">
              <span>P =</span>
              <input type="text" data-correct-answer="100 m" class="w-32 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white">
            </div>
          </div>
        </div>

        <!-- Esercizio 3 -->
        <div class="space-y-2">
          <p class="font-bold text-gray-700 dark:text-gray-200">
            <%= numero_esercizio_badge(3) %>
            Misura i lati del piano del tuo banco e calcolane il perimetro sul quaderno.
          </p>
        </div>
      </div>

      <!-- Colonna destra -->
      <div class="md:pl-4 space-y-6">
        <!-- Esercizio 4 -->
        <div class="space-y-3">
          <p class="font-bold text-gray-700 dark:text-gray-200">
            <%= numero_esercizio_badge(4) %>
            Disegna e conta i centimetri quadrati contenuti in ogni rettangolo, poi calcola l'area.
          </p>

          <div class="flex justify-center">
            <%= image_tag "nvi4_mat/p248/p248_03.jpg", class: "max-w-full h-auto dark:bg-white dark:rounded-lg dark:p-1", alt: "Rettangoli su griglia" %>
          </div>
        </div>

        <!-- Esercizio 5 -->
        <div class="space-y-3">
          <p class="font-bold text-gray-700 dark:text-gray-200">
            <%= numero_esercizio_badge(5) %>
            Misura i lati dei rettangoli e calcola l'area in cm². Esegui le operazioni sul quaderno.
          </p>

          <div class="flex justify-center">
            <%= image_tag "nvi4_mat/p248/p248_04.jpg", class: "max-w-full h-auto dark:bg-white dark:rounded-lg dark:p-1", alt: "Rettangoli da misurare" %>
          </div>
        </div>
      </div>
    </div>

    <%= render 'shared/exercise_controls' %>
  </div>
</div>
