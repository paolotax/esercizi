<div class="max-w-6xl mx-auto bg-white p-3 md:p-6"
     data-controller="exercise-checker text-toggle font-controls"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <%= render 'shared/page_header', pagina: @pagina %>

  <div class="space-y-6">
    <!-- Tabella formule Perimetro e Area -->
    <div class="overflow-x-auto">
      <table class="w-full border-collapse">
        <thead>
          <tr>
            <th class="p-3 bg-<%= @pagina.base_color %>-500 text-white text-left">POLIGONO</th>
            <th class="p-3 bg-<%= @pagina.base_color %>-500 text-white text-center">PERIMETRO</th>
            <th class="p-3 bg-<%= @pagina.base_color %>-500 text-white text-center">AREA</th>
          </tr>
        </thead>
        <tbody>
          <!-- Quadrato -->
          <tr class="border-b border-gray-200">
            <td class="p-3 bg-white">
              <p class="font-bold text-<%= @pagina.base_color %>-600 mb-2">Quadrato</p>
              <%= image_tag "nvi5_mat/p132/p132_01.jpg", class: "max-w-[100px]", alt: "Quadrato" %>
            </td>
            <td class="p-3 bg-white text-left">
              <p class="font-bold">P = <span class="italic">l</span> × 4</p>
            </td>
            <td class="p-3 bg-white text-center">
              <p class="font-bold">A = <span class="italic">l</span> × <span class="italic">l</span></p>
            </td>
          </tr>

          <!-- Rettangolo e Parallelogramma -->
          <tr class="border-b border-gray-200">
            <td class="p-3 bg-white">
              <p class="font-bold text-<%= @pagina.base_color %>-600 mb-2">Rettangolo e Parallelogramma</p>
              <%= image_tag "nvi5_mat/p132/p132_02.jpg", class: "max-w-[150px]", alt: "Rettangolo e Parallelogramma" %>
            </td>
            <td class="p-3 bg-white text-left">
              <p class="font-bold mb-1">Rettangolo</p>
              <p>P = (b + h) × 2</p>
              <p class="font-bold mt-2 mb-1">Parallelogramma</p>
              <p>P = (b + <span class="italic">l</span>) × 2</p>
            </td>
            <td class="p-3 bg-white text-center">
              <p class="font-bold">A = b × h</p>
            </td>
          </tr>

          <!-- Rombo -->
          <tr class="border-b border-gray-200">
            <td class="p-3 bg-white">
              <p class="font-bold text-<%= @pagina.base_color %>-600 mb-2">Rombo</p>
              <%= image_tag "nvi5_mat/p132/p132_03.jpg", class: "max-w-[100px]", alt: "Rombo" %>
            </td>
            <td class="p-3 bg-white text-left">
              <p class="font-bold">P = <span class="italic">l</span> × 4</p>
            </td>
            <td class="p-3 bg-white text-center">
              <p class="font-bold">A = (D × d) : 2</p>
            </td>
          </tr>

          <!-- Trapezio -->
          <tr class="border-b border-gray-200">
            <td class="p-3 bg-white">
              <p class="font-bold text-<%= @pagina.base_color %>-600 mb-2">Trapezio</p>
              <%= image_tag "nvi5_mat/p132/p132_04.jpg", class: "max-w-[120px]", alt: "Trapezio" %>
            </td>
            <td class="p-3 bg-white text-left">
              <p class="font-bold">P = somma delle<br>lunghezze dei lati</p>
            </td>
            <td class="p-3 bg-white text-center">
              <p class="font-bold">A = [(B + b) × h] : 2</p>
            </td>
          </tr>

          <!-- Triangoli -->
          <tr class="border-b border-gray-200">
            <td class="p-3 bg-white">
              <p class="font-bold text-<%= @pagina.base_color %>-600 mb-2">Triangoli</p>
              <div class="flex flex-wrap gap-2">
                <%= image_tag "nvi5_mat/p132/p132_05.jpg", class: "max-w-[180px]", alt: "Triangoli" %>
              </div>
            </td>
            <td class="p-3 bg-white text-left">
              <p class="font-bold mb-1">Triangolo equilatero</p>
              <p>P = <span class="italic">l</span> × 3</p>
              <p class="font-bold mt-2 mb-1">Triangolo isoscele</p>
              <p>P = <span class="italic">l</span><sub>1</sub> + (<span class="italic">l</span><sub>2</sub> × 2)</p>
              <p class="font-bold mt-2 mb-1">Triangolo scaleno</p>
              <p>P = <span class="italic">l</span><sub>1</sub> + <span class="italic">l</span><sub>2</sub> + <span class="italic">l</span><sub>3</sub></p>
            </td>
            <td class="p-3 bg-white text-center">
              <p class="font-bold mb-2">Tutti i triangoli</p>
              <p class="font-bold">A = (b × h) : 2</p>
            </td>
          </tr>

          <!-- Poligoni regolari -->
          <tr>
            <td class="p-3 bg-white">
              <p class="font-bold text-<%= @pagina.base_color %>-600 mb-2">Poligoni regolari</p>
              <%= image_tag "nvi5_mat/p132/p132_06.jpg", class: "max-w-[150px]", alt: "Poligoni regolari" %>
            </td>
            <td class="p-3 bg-white text-left">
              <p class="font-bold">P = <span class="italic">l</span> × numero dei lati</p>
            </td>
            <td class="p-3 bg-white text-center">
              <p class="font-bold">A = (P × a) : 2</p>
            </td>
          </tr>
        </tbody>
      </table>
    </div>

    <%= render 'shared/exercise_controls' %>
  </div>
</div>
