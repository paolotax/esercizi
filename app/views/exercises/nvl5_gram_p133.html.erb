<div class="max-w-6xl mx-auto p-3 md:p-8 bg-white" data-controller="exercise-checker">

  <%= render 'shared/page_header', pagina: @pagina %>

  <!-- DIRE -->
  <div class="bg-<%= @pagina.base_color %>-50 p-4 md:p-6 pb-8 rounded-lg mb-6">
    <h2 class="font-bold text-center text-green-700 mb-6 pb-2 border-b-2 border-green-300">DIRE - 3ª coniugazione</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="bg-white rounded-lg p-4">
        <h3 class="font-bold text-green-600 mb-4">INDICATIVO</h3>
        <div class="mb-3">
          <h4 class="font-bold text-gray-700 mb-2">Presente</h4>
          <p class="text-gray-600">io dico - tu dici - lui/lei dice - noi diciamo - voi dite - loro dicono</p>
        </div>
        <div class="mb-3">
          <h4 class="font-bold text-gray-700 mb-2">Imperfetto</h4>
          <p class="text-gray-600">io dicevo - tu dicevi - lui/lei diceva - noi dicevamo - voi dicevate - loro dicevano</p>
        </div>
        <div>
          <h4 class="font-bold text-gray-700 mb-2">Passato remoto</h4>
          <p class="text-gray-600">io dissi - tu dicesti - lui/lei disse - noi dicemmo - voi diceste - loro dissero</p>
        </div>
      </div>
      <div class="space-y-4">
        <div class="bg-white rounded-lg p-4">
          <h3 class="font-bold text-green-600 mb-3">CONGIUNTIVO</h3>
          <h4 class="font-bold text-gray-700 mb-2">Presente</h4>
          <p class="text-gray-600">(che) io dica - tu dica - lui/lei dica - noi diciamo - voi diciate - loro dicano</p>
        </div>
        <div class="bg-white rounded-lg p-4">
          <h3 class="font-bold text-green-600 mb-3">IMPERATIVO</h3>
          <p class="text-gray-600 text-center font-semibold">di' (tu) - dite (voi)</p>
        </div>
        <div class="bg-white rounded-lg p-4 flex justify-between items-center">
          <div>
            <h3 class="font-bold text-green-600 mb-1">PARTICIPIO</h3>
            <p class="text-gray-600">Passato: <strong>detto</strong></p>
          </div>
          <div>
            <h3 class="font-bold text-green-600 mb-1">GERUNDIO</h3>
            <p class="text-gray-600">Presente: <strong>dicendo</strong></p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- SALIRE -->
  <div class="bg-<%= @pagina.base_color %>-100 p-4 md:p-6 pb-8 rounded-lg mb-6">
    <h2 class="font-bold text-center text-blue-700 mb-6 pb-2 border-b-2 border-blue-300">SALIRE - 3ª coniugazione</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="bg-white rounded-lg p-4">
        <h3 class="font-bold text-blue-600 mb-3">INDICATIVO</h3>
        <h4 class="font-bold text-gray-700 mb-2">Presente</h4>
        <p class="text-gray-600">io salgo - tu sali - lui/lei sale - noi saliamo - voi salite - loro salgono</p>
      </div>
      <div class="bg-white rounded-lg p-4">
        <h3 class="font-bold text-blue-600 mb-3">CONGIUNTIVO</h3>
        <h4 class="font-bold text-gray-700 mb-2">Presente</h4>
        <p class="text-gray-600">(che) io salga - tu salga - lui/lei salga - noi saliamo - voi saliate - loro salgano</p>
      </div>
    </div>
  </div>

  <!-- VENIRE -->
  <div class="bg-<%= @pagina.base_color %>-50 p-4 md:p-6 pb-8 rounded-lg mb-6">
    <h2 class="font-bold text-center text-orange-700 mb-6 pb-2 border-b-2 border-orange-300">VENIRE - 3ª coniugazione</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="bg-white rounded-lg p-4">
        <h3 class="font-bold text-orange-600 mb-4">INDICATIVO</h3>
        <div class="mb-3">
          <h4 class="font-bold text-gray-700 mb-2">Presente</h4>
          <p class="text-gray-600">io vengo - tu vieni - lui/lei viene - noi veniamo - voi venite - loro vengono</p>
        </div>
        <div class="mb-3">
          <h4 class="font-bold text-gray-700 mb-2">Passato remoto</h4>
          <p class="text-gray-600">io venni - tu venisti - lui/lei venne - noi venimmo - voi veniste - loro vennero</p>
        </div>
        <div>
          <h4 class="font-bold text-gray-700 mb-2">Futuro semplice</h4>
          <p class="text-gray-600">io verrò - tu verrai - lui/lei verrà - noi verremo - voi verrete - loro verranno</p>
        </div>
      </div>
      <div class="space-y-4">
        <div class="bg-white rounded-lg p-4">
          <h3 class="font-bold text-orange-600 mb-3">CONGIUNTIVO</h3>
          <h4 class="font-bold text-gray-700 mb-2">Presente</h4>
          <p class="text-gray-600">(che) io venga - tu venga - lui/lei venga - noi veniamo - voi veniate - loro vengano</p>
        </div>
        <div class="bg-white rounded-lg p-4">
          <h3 class="font-bold text-orange-600 mb-3">CONDIZIONALE</h3>
          <h4 class="font-bold text-gray-700 mb-2">Presente</h4>
          <p class="text-gray-600">io verrei - tu verresti - lui/lei verrebbe - noi verremmo - voi verreste - loro verrebbero</p>
        </div>
        <div class="bg-white rounded-lg p-4">
          <h3 class="font-bold text-orange-600 mb-3">IMPERATIVO</h3>
          <p class="text-gray-600 text-center font-semibold">vieni (tu) - venga (lei) - veniamo (noi) - venite (voi) - vengano (loro)</p>
        </div>
        <div class="bg-white rounded-lg p-4 text-center">
          <h3 class="font-bold text-orange-600 mb-2">PARTICIPIO - Passato</h3>
          <p class="text-gray-700 font-semibold">venuto</p>
        </div>
      </div>
    </div>
  </div>

  <%= render 'shared/exercise_controls' %>
</div>
