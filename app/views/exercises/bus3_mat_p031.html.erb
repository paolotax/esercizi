<div class="max-w-7xl mx-auto p-3 md:p-6 bg-white dark:bg-gray-900 text-black dark:text-white transition-colors duration-300"
     data-controller="exercise-checker fill-blanks auto-advance text-toggle font-controls"
     data-page-viewer-image-url-value="<%= asset_path('bus3_mat/p031/page.png') %>"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <!-- Header -->
  <%= render 'shared/page_header', pagina: @pagina %>

  <!-- Esercizio 1: Box azzurro spiegazione -->
  <div class="bg-[#C7EAFB] dark:bg-cyan-900/40 p-4 md:p-6 -ml-3 md:-ml-0 -mr-3 md:mr-0 mb-8">
    <div class="flex items-start gap-3 mb-6">
      <div class="bg-red-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0">
        1
      </div>
      <p class="text-gray-700 dark:text-gray-200">
        <strong>Osserva come si calcola 293 - 162.</strong>
      </p>
    </div>

    <div class="flex flex-col md:flex-row gap-4 items-center justify-center">
      <!-- Passo 1 -->
      <div class="text-center">
        <p class="text-gray-700 dark:text-gray-200 mb-4">
          Prima sottrai le <span class="font-bold text-cyan-600 dark:text-cyan-400">unità</span>.
        </p>
        <div class="bg-transparent dark:bg-white rounded-xl p-2">
          <%= image_tag "bus3_mat/p031/p31_1.jpg",
              alt: "Sottrai unità",
              class: "max-w-full" %>
        </div>
      </div>

      <!-- Freccia -->
      <div class="hidden md:block text-cyan-600 dark:text-cyan-400 font-bold">→</div>

      <!-- Passo 2 -->
      <div class="text-center">
        <p class="text-gray-700 dark:text-gray-200 mb-4">
          Dopo sottrai le <span class="font-bold text-red-500">decine</span>.
        </p>
        <div class="bg-transparent dark:bg-white rounded-xl p-2">
          <%= image_tag "bus3_mat/p031/p31_2.jpg",
              alt: "Sottrai decine",
              class: "max-w-full" %>
        </div>
      </div>

      <!-- Freccia -->
      <div class="hidden md:block text-cyan-600 dark:text-cyan-400 font-bold">→</div>

      <!-- Passo 3 -->
      <div class="text-center">
        <p class="text-gray-700 dark:text-gray-200 mb-4">
          Infine sottrai le <span class="font-bold text-green-600 dark:text-green-400">centinaia</span>.
        </p>
        <div class="bg-transparent dark:bg-white rounded-xl p-2">
          <%= image_tag "bus3_mat/p031/p31_3.jpg",
              alt: "Sottrai centinaia",
              class: "max-w-full" %>
        </div>
      </div>
    </div>
  </div>

  <!-- Esercizio 2: Metti in colonna -->
  <div class="bg-transparent p-4 md:p-8 mb-8">
    <div class="flex items-start gap-3 mb-6">
      <div class="bg-red-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0">
        2
      </div>
      <p class="text-gray-700 dark:text-gray-200">
        <strong>Metti in colonna e calcola.</strong>
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <%= sottrazione_grid 169, 54, title: "169 - 54 =", show_operands: true, show_borrow: true, style: :column %>
      <%= sottrazione_grid 587, 570, title: "587 - 570 =", show_borrow: true, style: :column %>
      <%= sottrazione_grid 489, 387, title: "489 - 387 =", show_borrow: true, style: :column %>
    </div>
  </div>

  <!-- Esercizio 3: Sul quaderno -->
  <div class="bg-transparent p-4 md:p-8 mb-8" data-controller="operation-viewer">
    <div class="flex items-start gap-3 mb-6">
      <div class="bg-red-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0">
        3
      </div>
      <p class="text-gray-700 dark:text-gray-200">
        <strong>Calcola in colonna sul quaderno.</strong>
      </p>
    </div>

    <%
      es3_gruppi = [
        { lettera: "a", colore: "orange", operazioni: [
          { op: "386-162", answer: "224" },
          { op: "295-133", answer: "162" },
          { op: "248-136", answer: "112" },
          { op: "427-215", answer: "212" },
          { op: "469-348", answer: "121" }
        ]},
        { lettera: "b", colore: "blue", operazioni: [
          { op: "582-340", answer: "242" },
          { op: "748-526", answer: "222" },
          { op: "144-23", answer: "121" },
          { op: "489-251", answer: "238" },
          { op: "785-425", answer: "360" }
        ]},
        { lettera: "c", colore: "green", operazioni: [
          { op: "864-753", answer: "111" },
          { op: "624-502", answer: "122" },
          { op: "767-245", answer: "522" },
          { op: "673-153", answer: "520" },
          { op: "931-621", answer: "310" }
        ]},
        { lettera: "d", colore: "purple", operazioni: [
          { op: "1788-427", answer: "1361" },
          { op: "2363-1052", answer: "1311" },
          { op: "1957-626", answer: "1331" },
          { op: "2438-1121", answer: "1317" },
          { op: "3518-1413", answer: "2105" }
        ]}
      ]
    %>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-x-8 gap-y-6">
      <% es3_gruppi.each do |gruppo| %>
        <%
          operations_data = gruppo[:operazioni].each_with_index.map { |item, idx|
            { operation: item[:op], targetId: "es3-#{gruppo[:lettera]}-#{idx}" }
          }
        %>
        <div class="bg-<%= gruppo[:colore] %>-50 dark:bg-<%= gruppo[:colore] %>-900/30 p-4 rounded-lg border-2 border-transparent hover:border-<%= gruppo[:colore] %>-400 transition">
          <p class="font-bold text-<%= gruppo[:colore] %>-600 dark:text-<%= gruppo[:colore] %>-400 mb-3 flex items-center gap-2">
            <%= gruppo[:lettera] %>.
            <button type="button"
                    data-action="click->operation-viewer#openGroup"
                    data-operations='<%= operations_data.to_json %>'
                    data-type="sottrazione"
                    data-layout="column"
                    data-display="modal"
                    data-group="<%= gruppo[:lettera] %>"
                    class="p-1 text-gray-400 hover:text-<%= gruppo[:colore] %>-600 dark:hover:text-<%= gruppo[:colore] %>-400 transition print-hidden"
                    title="Apri gruppo <%= gruppo[:lettera] %> nella calcolatrice">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
              </svg>
            </button>
          </p>
          <ul class="space-y-2">
            <% gruppo[:operazioni].each_with_index do |item, idx| %>
              <li class="flex items-center gap-2 flex-wrap dark:text-white">
                <span><%= item[:op].gsub('-', ' - ') %> =</span>
                <input type="text"
                       data-operation-id="es3-<%= gruppo[:lettera] %>-<%= idx %>"
                       data-correct-answer="<%= item[:answer] %>"
                       class="w-16 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent">
              </li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>

    <!-- Modal -->
    <%= render 'shared/operation_viewer', display: :modal, title: "Sottrazioni in colonna", color: "cyan" %>
  </div>

  <!-- Quaderno link allineato a destra -->
  <div class="p-4 mb-8 text-right">
    <span class="text-gray-600 dark:text-gray-400">Quaderno →</span> <%= link_to "p. 146", pagina_path("bus3_mat_p146"), class: "text-cyan-600 dark:text-cyan-400 font-bold hover:underline" %>
  </div>

  <!-- Footer con controlli -->
  <%= render 'shared/exercise_controls', color: 'cyan' %>
</div>
