<div class="max-w-7xl mx-auto p-3 md:p-6 bg-white"
     data-controller="exercise-checker fill-blanks auto-advance text-toggle font-controls"
     data-page-viewer-image-url-value="<%= asset_path('bus3_mat/p031/page.png') %>"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <!-- Header -->
  <%= render 'shared/page_header', pagina: @pagina %>

  <!-- Esercizio 1: Box azzurro spiegazione -->
  <div class="bg-[#C7EAFB] p-4 md:p-6 -ml-3 md:-ml-0 -mr-3 md:mr-0 mb-8">
    <div class="flex items-start gap-3 mb-6">
      <div class="bg-red-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0">
        1
      </div>
      <p class="text-base md:text-lg text-gray-700">
        <strong>Osserva come si calcola 293 - 162.</strong>
      </p>
    </div>

    <div class="flex flex-col md:flex-row gap-4 items-center justify-center">
      <!-- Passo 1 -->
      <div class="text-center">
        <p class="text-base text-gray-700 mb-4">
          Prima sottrai le <span class="font-bold text-cyan-600">unità</span>.
        </p>
        <%= image_tag "bus3_mat/p031/p31_1.jpg",
            alt: "Sottrai unità",
            class: "max-w-full" %>
      </div>

      <!-- Freccia -->
      <div class="hidden md:block text-3xl text-cyan-600 font-bold">→</div>

      <!-- Passo 2 -->
      <div class="text-center">
        <p class="text-base text-gray-700 mb-4">
          Dopo sottrai le <span class="font-bold text-red-500">decine</span>.
        </p>
        <%= image_tag "bus3_mat/p031/p31_2.jpg",
            alt: "Sottrai decine",
            class: "max-w-full" %>
      </div>

      <!-- Freccia -->
      <div class="hidden md:block text-3xl text-cyan-600 font-bold">→</div>

      <!-- Passo 3 -->
      <div class="text-center">
        <p class="text-base text-gray-700 mb-4">
          Infine sottrai le <span class="font-bold text-green-600">centinaia</span>.
        </p>
        <%= image_tag "bus3_mat/p031/p31_3.jpg",
            alt: "Sottrai centinaia",
            class: "max-w-full" %>
      </div>
    </div>
  </div>

  <!-- Esercizio 2: Metti in colonna -->
  <div class="bg-transparent p-4 md:p-8 mb-8">
    <div class="flex items-start gap-3 mb-6">
      <div class="bg-red-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0">
        2
      </div>
      <p class="text-base md:text-lg text-gray-700">
        <strong>Metti in colonna e calcola.</strong>
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- 169 - 54 -->
      <%= render partial: "strumenti/sottrazioni/column_subtraction",
                 locals: Sottrazione.new(minuend: 169, subtrahend: 54,
                                         title: "169 - 54 =",
                                         show_minuend_subtrahend: true,
                                         show_toolbar: false,
                                         show_borrow: true).to_partial_params %>

      <!-- 587 - 570 -->
      <%= render partial: "strumenti/sottrazioni/column_subtraction",
                 locals: Sottrazione.new(minuend: 587, subtrahend: 570,
                                         title: "587 - 570 =",
                                         show_exercise: true,
                                         show_toolbar: false,
                                         show_borrow: true).to_partial_params %>

      <!-- 489 - 387 -->
      <%= render partial: "strumenti/sottrazioni/column_subtraction",
                 locals: Sottrazione.new(minuend: 489, subtrahend: 387,
                                         title: "489 - 387 =",
                                         show_exercise: true,
                                         show_toolbar: false,
                                         show_borrow: true).to_partial_params %>
    </div>
  </div>

  <!-- Esercizio 3: Sul quaderno -->
  <div class="bg-transparent p-4 md:p-8 mb-8" data-controller="column-modal" data-action="keydown@window->column-modal#handleEscape">
    <div class="flex items-start gap-3 mb-6">
      <div class="bg-red-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0">
        3
      </div>
      <p class="text-base md:text-lg text-gray-700">
        <strong>Calcola in colonna sul quaderno.</strong>
      </p>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-x-8 gap-y-6">
      <!-- Colonna a -->
      <button class="bg-orange-50 p-4 rounded-lg hover:bg-orange-100 transition cursor-pointer text-left border-2 border-transparent hover:border-orange-400"
              data-action="click->column-modal#openGroup"
              data-group="a"
              data-operations="386-162,295-133,248-136,427-215,469-348"
              data-show-borrow="true"
              data-column-modal-target="groupButton">
        <div class="font-bold text-orange-600 text-lg mb-3">a.</div>
        <div class="space-y-2 text-base text-gray-700" data-column-modal-target="operationsList" data-group="a">
          <div class="operation-item" data-index="0">386 - 162 =</div>
          <div class="operation-item" data-index="1">295 - 133 =</div>
          <div class="operation-item" data-index="2">248 - 136 =</div>
          <div class="operation-item" data-index="3">427 - 215 =</div>
          <div class="operation-item" data-index="4">469 - 348 =</div>
        </div>
      </button>

      <!-- Colonna b -->
      <button class="bg-blue-50 p-4 rounded-lg hover:bg-blue-100 transition cursor-pointer text-left border-2 border-transparent hover:border-blue-400"
              data-action="click->column-modal#openGroup"
              data-group="b"
              data-operations="582-340,748-526,144-23,489-251,785-425"
              data-show-borrow="true"
              data-column-modal-target="groupButton">
        <div class="font-bold text-orange-600 text-lg mb-3">b.</div>
        <div class="space-y-2 text-base text-gray-700" data-column-modal-target="operationsList" data-group="b">
          <div class="operation-item" data-index="0">582 - 340 =</div>
          <div class="operation-item" data-index="1">748 - 526 =</div>
          <div class="operation-item" data-index="2">144 - 23 =</div>
          <div class="operation-item" data-index="3">489 - 251 =</div>
          <div class="operation-item" data-index="4">785 - 425 =</div>
        </div>
      </button>

      <!-- Colonna c -->
      <button class="bg-green-50 p-4 rounded-lg hover:bg-green-100 transition cursor-pointer text-left border-2 border-transparent hover:border-green-400"
              data-action="click->column-modal#openGroup"
              data-group="c"
              data-operations="864-753,624-502,767-245,673-153,931-621"
              data-show-borrow="true"
              data-column-modal-target="groupButton">
        <div class="font-bold text-orange-600 text-lg mb-3">c.</div>
        <div class="space-y-2 text-base text-gray-700" data-column-modal-target="operationsList" data-group="c">
          <div class="operation-item" data-index="0">864 - 753 =</div>
          <div class="operation-item" data-index="1">624 - 502 =</div>
          <div class="operation-item" data-index="2">767 - 245 =</div>
          <div class="operation-item" data-index="3">673 - 153 =</div>
          <div class="operation-item" data-index="4">931 - 621 =</div>
        </div>
      </button>

      <!-- Colonna d -->
      <button class="bg-purple-50 p-4 rounded-lg hover:bg-purple-100 transition cursor-pointer text-left border-2 border-transparent hover:border-purple-400"
              data-action="click->column-modal#openGroup"
              data-group="d"
              data-operations="1788-427,2363-1052,1957-626,2438-1121,3518-1413"
              data-show-borrow="true"
              data-column-modal-target="groupButton">
        <div class="font-bold text-orange-600 text-lg mb-3">d.</div>
        <div class="space-y-2 text-base text-gray-700" data-column-modal-target="operationsList" data-group="d">
          <div class="operation-item" data-index="0">1788 - 427 =</div>
          <div class="operation-item" data-index="1">2363 - 1052 =</div>
          <div class="operation-item" data-index="2">1957 - 626 =</div>
          <div class="operation-item" data-index="3">2438 - 1121 =</div>
          <div class="operation-item" data-index="4">3518 - 1413 =</div>
        </div>
      </button>
    </div>

    <!-- Modal -->
    <%= render 'shared/column_modal', title: "Gruppo di operazioni", color: "red", show_save: true %>
  </div>

  <!-- Quaderno link allineato a destra -->
  <div class="p-4 mb-8 text-right">
    <span class="text-gray-600">Quaderno →</span> <%= link_to "p. 146", pagina_path("bus3_mat_p146"), class: "text-cyan-600 font-bold hover:underline" %>
  </div>

  <!-- Footer con controlli -->
  <%= render 'shared/exercise_controls', color: 'cyan' %>
</div>
