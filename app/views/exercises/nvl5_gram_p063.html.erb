<div class="max-w-6xl mx-auto bg-white dark:bg-gray-900 text-black dark:text-white p-3 md:p-6 transition-colors duration-300"
     data-controller="exercise-checker text-toggle font-controls"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <%= render 'shared/page_header', pagina: @pagina %>

  <!-- Info Box -->
  <div class="bg-<%= @pagina.base_color %>-50 dark:bg-<%= @pagina.base_color %>-900/30 p-4 md:p-6 pb-8 rounded-lg">
    <div class="overflow-x-auto">
      <table class="w-full border-collapse">
        <thead>
          <tr class="bg-<%= @pagina.base_color %>-100 dark:bg-<%= @pagina.base_color %>-900/50">
            <th class="border border-<%= @pagina.base_color %>-300 dark:border-<%= @pagina.base_color %>-700 px-4 py-2 font-bold dark:text-<%= @pagina.base_color %>-300">Pronome</th>
            <th class="border border-<%= @pagina.base_color %>-300 dark:border-<%= @pagina.base_color %>-700 px-4 py-2 font-bold dark:text-<%= @pagina.base_color %>-300">Funzione</th>
          </tr>
        </thead>
        <tbody>
          <tr class="bg-white dark:bg-gray-800">
            <td class="border border-<%= @pagina.base_color %>-200 dark:border-<%= @pagina.base_color %>-700 px-4 py-2 font-semibold text-center dark:text-white">che</td>
            <td class="border border-<%= @pagina.base_color %>-200 dark:border-<%= @pagina.base_color %>-700 px-4 py-2 dark:text-white">soggetto o complemento oggetto</td>
          </tr>
          <tr class="bg-<%= @pagina.base_color %>-50 dark:bg-<%= @pagina.base_color %>-900/20">
            <td class="border border-<%= @pagina.base_color %>-200 dark:border-<%= @pagina.base_color %>-700 px-4 py-2 font-semibold text-center dark:text-white">cui</td>
            <td class="border border-<%= @pagina.base_color %>-200 dark:border-<%= @pagina.base_color %>-700 px-4 py-2 dark:text-white">complemento indiretto (con preposizione)</td>
          </tr>
          <tr class="bg-white dark:bg-gray-800">
            <td class="border border-<%= @pagina.base_color %>-200 dark:border-<%= @pagina.base_color %>-700 px-4 py-2 font-semibold text-center dark:text-white">il quale, la quale<br>i quali, le quali</td>
            <td class="border border-<%= @pagina.base_color %>-200 dark:border-<%= @pagina.base_color %>-700 px-4 py-2 dark:text-white">soggetto o complemento indiretto</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Exercise 1: Circle relative pronouns -->
  <div class="p-4 md:p-6 pb-8" data-controller="word-highlighter" data-word-highlighter-multi-color-value="false">
    <h2 class="font-bold mb-4 flex items-center gap-2">
      <span class="flex-shrink-0 bg-<%= @pagina.base_color %>-500 text-white rounded-full w-8 h-8 md:w-10 md:h-10 inline-flex items-center justify-center">1</span>
      Sottolinea i pronomi relativi<span class="inline-block w-5 h-5 bg-blue-300 rounded ml-1"></span>
    </h2>

    <!-- Color Selector (hidden for mono-color) -->
    <div class="hidden">
      <div class="w-6 h-6 bg-blue-300" data-word-highlighter-target="colorBox" data-color="blue"></div>
    </div>

    <div class="space-y-3 cursor-pointer">
      <div class="bg-<%= @pagina.base_color %>-50 dark:bg-<%= @pagina.base_color %>-900/30 rounded-lg p-4">
        <p class="text-gray-700 dark:text-gray-200"><span class="text-<%= @pagina.base_color %>-500">•</span> La città <span class="transition" data-word-highlighter-target="word" data-action="click->word-highlighter#toggleHighlight" data-correct="blue">in cui</span> vivo è molto grande.</p>
      </div>
      <div class="bg-<%= @pagina.base_color %>-50 dark:bg-<%= @pagina.base_color %>-900/30 rounded-lg p-4">
        <p class="text-gray-700 dark:text-gray-200"><span class="text-<%= @pagina.base_color %>-500">•</span> I compagni <span class="transition" data-word-highlighter-target="word" data-action="click->word-highlighter#toggleHighlight" data-correct="blue">con cui</span> studio sono simpatici.</p>
      </div>
      <div class="bg-<%= @pagina.base_color %>-50 dark:bg-<%= @pagina.base_color %>-900/30 rounded-lg p-4">
        <p class="text-gray-700 dark:text-gray-200"><span class="text-<%= @pagina.base_color %>-500">•</span> Il motivo <span class="transition" data-word-highlighter-target="word" data-action="click->word-highlighter#toggleHighlight" data-correct="blue">per cui</span> ti ho chiamato è importante.</p>
      </div>
      <div class="bg-<%= @pagina.base_color %>-50 dark:bg-<%= @pagina.base_color %>-900/30 rounded-lg p-4">
        <p class="text-gray-700 dark:text-gray-200"><span class="text-<%= @pagina.base_color %>-500">•</span> La signora <span class="transition" data-word-highlighter-target="word" data-action="click->word-highlighter#toggleHighlight" data-correct="blue">la quale</span> abita al piano di sopra è molto gentile.</p>
      </div>
    </div>
  </div>

  <!-- Exercise 2: Complete with relative pronouns -->
  <div class="p-4 md:p-6 pb-8" data-controller="fill-blanks">
    <h2 class="font-bold mb-4 flex items-center gap-2">
      <span class="flex-shrink-0 bg-<%= @pagina.base_color %>-500 text-white rounded-full w-8 h-8 md:w-10 md:h-10 inline-flex items-center justify-center">2</span>
      Completa le frasi con: <span class="text-red-600 dark:text-red-400 font-bold">su cui • nella quale • in cui • con i quali • con cui • per cui • alla quale</span>
    </h2>

    <% sentences = [
      { text: "La scuola", answer: "alla quale", continuation: "sono iscritto organizza molte gite." },
      { text: "Il tavolo", answer: "su cui", continuation: "ho appoggiato i libri è molto grande." },
      { text: "Il parco", answer: "in cui", continuation: "gioco è vicino a casa mia." },
      { text: "Gli amici", answer: "con i quali", continuation: "esco sono molto divertenti." },
      { text: "La ragione", answer: "per cui", continuation: "sono arrivato in ritardo è il traffico." }
    ] %>

    <div class="space-y-3">
      <% sentences.each do |item| %>
        <div class="rounded-lg p-3 flex flex-wrap items-center gap-2">
          <span class="text-<%= @pagina.base_color %>-500">•</span>
          <span class="text-gray-700 dark:text-gray-200"><%= item[:text] %></span>
          <input type="text"
                 class="w-32 border-b-2 border-dotted border-<%= @pagina.base_color %>-500 bg-transparent dark:text-white text-right px-2 focus:outline-none focus:border-<%= @pagina.base_color %>-700"
                 data-fill-blanks-target="input"
                 data-answer="<%= item[:answer] %>"
                 data-correct-answer="<%= item[:answer] %>">
          <span class="text-gray-700 dark:text-gray-200"><%= item[:continuation] %></span>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Exercise 3: Transform sentences -->
  <div class="p-4 md:p-6 pb-8">
    <h2 class="font-bold mb-4 flex items-center gap-2">
      <span class="flex-shrink-0 bg-<%= @pagina.base_color %>-500 text-white rounded-full w-8 h-8 md:w-10 md:h-10 inline-flex items-center justify-center">3</span>
      Trasforma frasi sostituendo che/cui con forme di quale.
    </h2>

    <div class="space-y-4">
      <div class="rounded-lg p-3">
        <p class="text-gray-700 dark:text-gray-200 mb-2"><span class="text-<%= @pagina.base_color %>-500">•</span> Il libro che ho letto è interessante.</p>
        <textarea class="w-full border-2 border-<%= @pagina.base_color %>-200 dark:border-<%= @pagina.base_color %>-700 bg-transparent dark:text-white rounded-lg px-3 py-2 focus:outline-none focus:border-<%= @pagina.base_color %>-500"
                  rows="2"
                  placeholder="Trasforma la frase qui..."></textarea>
      </div>

      <div class="rounded-lg p-3">
        <p class="text-gray-700 dark:text-gray-200 mb-2"><span class="text-<%= @pagina.base_color %>-500">•</span> La ragazza di cui ti ho parlato è mia cugina.</p>
        <textarea class="w-full border-2 border-<%= @pagina.base_color %>-200 dark:border-<%= @pagina.base_color %>-700 bg-transparent dark:text-white rounded-lg px-3 py-2 focus:outline-none focus:border-<%= @pagina.base_color %>-500"
                  rows="2"
                  placeholder="Trasforma la frase qui..."></textarea>
      </div>
    </div>
  </div>

  <!-- Exercise 4: Join sentences -->
  <div class="p-4 md:p-6 pb-8">
    <h2 class="font-bold mb-4 flex items-center gap-2">
      <span class="flex-shrink-0 bg-<%= @pagina.base_color %>-500 text-white rounded-full w-8 h-8 md:w-10 md:h-10 inline-flex items-center justify-center">4</span>
      Unisci frasi eliminando ripetizioni tramite pronome relativo.
    </h2>

    <div class="space-y-4">
      <div class="rounded-lg p-3">
        <p class="text-gray-700 dark:text-gray-200 mb-2"><span class="text-<%= @pagina.base_color %>-500">•</span> Ho incontrato Maria. Maria è la mia compagna di classe.</p>
        <textarea class="w-full border-2 border-<%= @pagina.base_color %>-200 dark:border-<%= @pagina.base_color %>-700 bg-transparent dark:text-white rounded-lg px-3 py-2 focus:outline-none focus:border-<%= @pagina.base_color %>-500"
                  rows="2"
                  placeholder="Scrivi qui la frase unita..."></textarea>
      </div>

      <div class="rounded-lg p-3">
        <p class="text-gray-700 dark:text-gray-200 mb-2"><span class="text-<%= @pagina.base_color %>-500">•</span> Questo è il parco. Nel parco gioco a calcio.</p>
        <textarea class="w-full border-2 border-<%= @pagina.base_color %>-200 dark:border-<%= @pagina.base_color %>-700 bg-transparent dark:text-white rounded-lg px-3 py-2 focus:outline-none focus:border-<%= @pagina.base_color %>-500"
                  rows="2"
                  placeholder="Scrivi qui la frase unita..."></textarea>
      </div>
    </div>
  </div>

  <!-- Exercise 5: Write sentences with cui -->
  <div class="p-4 md:p-6 pb-8">
    <h2 class="font-bold mb-4 flex items-center gap-2">
      <span class="flex-shrink-0 bg-<%= @pagina.base_color %>-500 text-white rounded-full w-8 h-8 md:w-10 md:h-10 inline-flex items-center justify-center">5</span>
      Scrivi sei frasi con cui usando le combinazioni proposte.
    </h2>

    <div class="space-y-3">
      <% ['per cui', 'di cui', 'con cui', 'a cui', 'in cui', 'su cui'].each do |pronoun| %>
        <div class="rounded-lg p-3">
          <p class="font-semibold text-gray-700 dark:text-gray-200 mb-2"><%= pronoun %>:</p>
          <textarea class="w-full border-2 border-<%= @pagina.base_color %>-200 dark:border-<%= @pagina.base_color %>-700 bg-transparent dark:text-white rounded-lg px-3 py-2 focus:outline-none focus:border-<%= @pagina.base_color %>-500"
                    rows="2"
                    placeholder="Scrivi qui la tua frase..."></textarea>
        </div>
      <% end %>
    </div>
  </div>

  <div class="text-right text-gray-500 dark:text-gray-400 mb-6">
    Esercizi pp. <%= link_to "161", pagina_path("nvl5_gram_p161"), class: "text-gray-600 dark:text-gray-400 hover:text-gray-800 dark:hover:text-gray-200 underline" %>, <%= link_to "162", pagina_path("nvl5_gram_p162"), class: "text-gray-600 dark:text-gray-400 hover:text-gray-800 dark:hover:text-gray-200 underline" %>, <%= link_to "163", pagina_path("nvl5_gram_p163"), class: "text-gray-600 dark:text-gray-400 hover:text-gray-800 dark:hover:text-gray-200 underline" %>
  </div>

  <%= render 'shared/exercise_controls' %>
</div>
