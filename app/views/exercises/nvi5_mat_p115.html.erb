<div class="max-w-6xl mx-auto bg-white p-3 md:p-6"
     data-controller="exercise-checker text-toggle font-controls"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <%= render 'shared/page_header', pagina: @pagina %>

  <div class="space-y-6">
    <!-- Introduzione -->
    <div class="p-4">
      <p class="text-gray-700">
        Osserva le immagini e impara i nomi degli elementi della circonferenza e del cerchio.
      </p>
    </div>

    <!-- Elementi in 2 colonne -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- Colonna sinistra -->
      <div class="space-y-6">
        <!-- CORDA -->
        <div class="flex items-start gap-4">
          <div class="flex-1">
            <h3 class="font-bold text-<%= @pagina.base_color %>-600">CORDA</h3>
            <p class="text-gray-700">Segmento che unisce 2 punti della circonferenza.</p>
          </div>
          <%= image_tag "nvi5_mat/p115/p115_01.jpg", class: "w-24", alt: "Corda" %>
        </div>

        <!-- ARCO -->
        <div class="flex items-start gap-4">
          <div class="flex-1">
            <h3 class="font-bold text-<%= @pagina.base_color %>-600">ARCO</h3>
            <p class="text-gray-700">Tratto di circonferenza.</p>
          </div>
          <%= image_tag "nvi5_mat/p115/p115_02.jpg", class: "w-24", alt: "Arco" %>
        </div>

        <!-- SEMICIRCONFERENZA -->
        <div class="flex items-start gap-4">
          <div class="flex-1">
            <h3 class="font-bold text-<%= @pagina.base_color %>-600">SEMICIRCONFERENZA</h3>
            <p class="text-gray-700"><%= render 'shared/frazione', num: 1, den: 2 %> circonferenza.</p>
          </div>
          <%= image_tag "nvi5_mat/p115/p115_03.jpg", class: "w-24", alt: "Semicirconferenza" %>
        </div>

        <!-- DIAMETRO -->
        <div class="flex items-start gap-4">
          <div class="flex-1">
            <h3 class="font-bold text-<%= @pagina.base_color %>-600">DIAMETRO (d)</h3>
            <p class="text-gray-700">Corda che passa per il centro.<br>È 2 volte il raggio.</p>
            <p class="text-gray-700 font-bold">AB = 2 × OB</p>
          </div>
          <%= image_tag "nvi5_mat/p115/p115_04.jpg", class: "w-24", alt: "Diametro" %>
        </div>
      </div>

      <!-- Colonna destra -->
      <div class="space-y-6">
        <!-- CORONA CIRCOLARE -->
        <div class="flex items-start gap-4">
          <div class="flex-1">
            <h3 class="font-bold text-<%= @pagina.base_color %>-600">CORONA CIRCOLARE</h3>
            <p class="text-gray-700">Parte di piano racchiusa tra 2 circonferenze concentriche, cioè che hanno lo stesso centro e raggi diversi.</p>
          </div>
          <%= image_tag "nvi5_mat/p115/p115_05.jpg", class: "w-24", alt: "Corona circolare" %>
        </div>

        <!-- SEGMENTO CIRCOLARE -->
        <div class="flex items-start gap-4">
          <div class="flex-1">
            <h3 class="font-bold text-<%= @pagina.base_color %>-600">SEGMENTO CIRCOLARE</h3>
            <p class="text-gray-700">Parte di cerchio racchiusa tra una corda e un arco.</p>
          </div>
          <%= image_tag "nvi5_mat/p115/p115_06.jpg", class: "w-24", alt: "Segmento circolare" %>
        </div>

        <!-- SETTORE CIRCOLARE -->
        <div class="flex items-start gap-4">
          <div class="flex-1">
            <h3 class="font-bold text-<%= @pagina.base_color %>-600">SETTORE CIRCOLARE</h3>
            <p class="text-gray-700">Parte di cerchio racchiusa tra 2 raggi e un arco.</p>
          </div>
          <%= image_tag "nvi5_mat/p115/p115_07.jpg", class: "w-24", alt: "Settore circolare" %>
        </div>

        <!-- SEMICERCHIO -->
        <div class="flex items-start gap-4">
          <div class="flex-1">
            <h3 class="font-bold text-<%= @pagina.base_color %>-600">SEMICERCHIO</h3>
            <p class="text-gray-700">Segmento circolare la cui corda è un diametro.</p>
          </div>
          <%= image_tag "nvi5_mat/p115/p115_08.jpg", class: "w-24", alt: "Semicerchio" %>
        </div>
      </div>
    </div>

    <!-- Sezione ESERCIZI -->
    <div class="p-4 md:p-6 bg-orange-100 rounded-lg">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Esercizio 1 -->
        <div>
          <p class="text-gray-700 mb-4">
            <%= numero_esercizio_badge(1) %>
            Osserva l'immagine e scrivi i nomi degli elementi al posto giusto.
          </p>
          <%= image_tag "nvi5_mat/p115/p115_09.jpg", class: "max-w-full", alt: "Esercizio elementi circonferenza" %>
        </div>

        <!-- Esercizio 2 -->
        <div>
          <p class="text-gray-700 mb-4">
            <%= numero_esercizio_badge(2) %>
            Disegna sul quaderno una circonferenza con il compasso. Poi:
          </p>
          <ul class="list-disc pl-6 space-y-1 text-gray-700 marker:text-<%= @pagina.base_color %>-500">
            <li>individua e segna il centro O;</li>
            <li>traccia un diametro in rosso;</li>
            <li>traccia un raggio in verde;</li>
            <li>traccia una corda in viola;</li>
            <li>traccia un arco in arancione.</li>
          </ul>
        </div>
      </div>
    </div>

    <%= render 'shared/exercise_controls' %>
  </div>
</div>
