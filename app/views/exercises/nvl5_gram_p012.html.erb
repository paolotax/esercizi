                   data-correct-answer="a/ma/ca">
          </div>
          <div class="flex items-center gap-2">
            <span class="w-32">• umido</span>
            <input type="text"
                   class="border-b-2 border-pink-500 bg-white w-28 md:w-36 px-2 text-right focus:outline-none focus:border-pink-700"
                   data-fill-blanks-target="input"
                   data-answer="u/mi/do"
                   data-correct-answer="u/mi/do">
