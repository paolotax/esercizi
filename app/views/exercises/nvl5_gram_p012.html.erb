                   data-fill-blanks-target="input"
                   data-answer="me/tri/co"
                   data-correct-answer="me/tri/co">
          </div>
          <div class="flex items-center gap-2">
            <span class="w-32">• bruchi</span>
            <input type="text"
                   class="border-b-2 border-pink-500 bg-white w-28 md:w-36 px-2 text-right focus:outline-none focus:border-pink-700"
                   data-fill-blanks-target="input"
                   data-answer="bru/chi"
                   data-correct-answer="bru/chi">
          </div>
        </div>
      </div>

      <!-- Group 5 -->
      <div class="bg-cyan-50 border-2 border-cyan-300 rounded-lg p-4">
        <div class="space-y-3 text-base md:text-lg">
          <div class="flex items-center gap-2">
            <span class="w-32">• cognome</span>
            <span class="text-gray-500">co/gno/me</span>
          </div>
          <div class="flex items-center gap-2">
            <span class="w-32">• famiglia</span>
            <input type="text"
                   class="border-b-2 border-pink-500 bg-white w-32 md:w-40 px-2 text-right focus:outline-none focus:border-pink-700"
                   data-fill-blanks-target="input"
                   data-answer="fa/mi/glia"
                   data-correct-answer="fa/mi/glia">
          </div>
          <div class="flex items-center gap-2">
            <span class="w-32">• miscelare</span>
            <input type="text"
                   class="border-b-2 border-pink-500 bg-white w-36 md:w-44 px-2 text-right focus:outline-none focus:border-pink-700"
                   data-fill-blanks-target="input"
                   data-answer="mi/sce/la/re"
                   data-correct-answer="mi/sce/la/re">
          </div>
        </div>
      </div>

      <!-- Group 6 -->
      <div class="bg-pink-50 border-2 border-pink-300 rounded-lg p-4">
        <div class="space-y-3 text-base md:text-lg">
          <div class="flex items-center gap-2">
            <span class="w-32">• elica</span>
            <span class="text-gray-500">e/li/ca</span>
          </div>
          <div class="flex items-center gap-2">
