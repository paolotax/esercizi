<div class="max-w-6xl mx-auto bg-white p-3 md:p-6"
     data-controller="exercise-checker text-toggle font-controls"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <%= render 'shared/page_header', pagina: @pagina %>

  <div class="space-y-6">

    <!-- Box CLASSE DELLE UNITÀ SEMPLICI -->
    <div class="p-4 md:p-6 bg-gradient-to-b from-blue-100 to-purple-50 rounded-2xl">
      <div class="text-center mb-6">
        <span class="bg-<%= @pagina.base_color %>-500 text-white px-6 py-2 rounded-full font-bold">
          CLASSE DELLE UNITÀ SEMPLICI
        </span>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <!-- Centinaio -->
        <div class="bg-white rounded-2xl p-4 border-2 border-<%= @pagina.base_color %>-300 text-center">
          <div class="bg-<%= @pagina.base_color %>-500 text-white px-3 py-1 rounded-full font-bold mb-3 inline-block">
            CENTINAIO
          </div>
          <%= image_tag "nvi4_mat/p011/output-1715932804011_129_457_232_288.png", alt: "Cinema", class: "w-full h-40 object-contain mb-3" %>
          <p class="font-bold text-gray-800">100</p>
          <p class="font-bold text-<%= @pagina.base_color %>-600">CENTO</p>
        </div>

        <!-- Decina -->
        <div class="bg-white rounded-2xl p-4 border-2 border-<%= @pagina.base_color %>-300 text-center">
          <div class="bg-<%= @pagina.base_color %>-500 text-white px-3 py-1 rounded-full font-bold mb-3 inline-block">
            DECINA
          </div>
          <%= image_tag "nvi4_mat/p011/output-1715932804011_425_451_235_289.png", alt: "Persone", class: "w-full h-40 object-contain mb-3" %>
          <p class="font-bold text-gray-800">10</p>
          <p class="font-bold text-<%= @pagina.base_color %>-600">DIECI</p>
        </div>

        <!-- Unità -->
        <div class="bg-white rounded-2xl p-4 border-2 border-<%= @pagina.base_color %>-300 text-center">
          <div class="bg-<%= @pagina.base_color %>-500 text-white px-3 py-1 rounded-full font-bold mb-3 inline-block">
            UNITÀ
          </div>
          <%= image_tag "nvi4_mat/p011/output-1715932804011_724_456_226_290.png", alt: "Bambina", class: "w-full h-40 object-contain mb-3" %>
          <p class="font-bold text-gray-800">1</p>
          <p class="font-bold text-<%= @pagina.base_color %>-600">UNO</p>
        </div>
      </div>
    </div>

    <!-- Container ESERCIZI -->
    <div class="p-4 md:p-6 bg-orange-100 rounded-lg">

      <!-- Esercizio: Completa -->
      <div>
        <p class="font-bold text-gray-700 mb-4">
          <span class="text-<%= @pagina.base_color %>-500">♦</span> Completa.
        </p>

        <div class="space-y-4">
          <!-- Domanda 1 -->
          <div class="bg-white p-4 rounded-lg border border-gray-200 flex flex-col md:flex-row md:items-center gap-4">
            <div class="flex-1">
              <p class="text-gray-700">
                <span class="text-<%= @pagina.base_color %>-500">•</span>
                La
                <select class="px-3 py-1 border-b-2 border-dotted border-gray-400 bg-white focus:border-<%= @pagina.base_color %>-500 focus:outline-none font-bold cursor-pointer"
                        data-correct-answer="DECINA">
                  <option value="">Scegli...</option>
                  <option value="UNITÀ">UNITÀ</option>
                  <option value="DECINA">DECINA</option>
                  <option value="CENTINAIO">CENTINAIO</option>
                </select>
                è 10 volte più grande dell'<span class="font-bold">UNITÀ</span>.
              </p>
            </div>
            <div class="shrink-0">
              <%= image_tag "nvi4_mat/p011/output-1715932804011_737_884_88_108.png", alt: "Persone", class: "h-16 object-contain" %>
            </div>
          </div>

          <!-- Domanda 2 -->
          <div class="bg-white p-4 rounded-lg border border-gray-200 flex flex-col md:flex-row md:items-center gap-4">
            <div class="flex-1">
              <p class="text-gray-700">
                <span class="text-<%= @pagina.base_color %>-500">•</span>
                L'
                <select class="px-3 py-1 border-b-2 border-dotted border-gray-400 bg-white focus:border-<%= @pagina.base_color %>-500 focus:outline-none font-bold cursor-pointer"
                        data-correct-answer="UNITÀ">
                  <option value="">Scegli...</option>
                  <option value="UNITÀ">UNITÀ</option>
                  <option value="DECINA">DECINA</option>
                  <option value="CENTINAIO">CENTINAIO</option>
                </select>
                è 10 volte più piccola della <span class="font-bold">DECINA</span>.
              </p>
            </div>
            <div class="shrink-0">
              <%= image_tag "nvi4_mat/p011/output-1715932804011_739_999_83_96.png", alt: "Bambina", class: "h-16 object-contain" %>
            </div>
          </div>

          <!-- Domanda 3 -->
          <div class="bg-white p-4 rounded-lg border border-gray-200 flex flex-col md:flex-row md:items-center gap-4">
            <div class="flex-1">
              <p class="text-gray-700">
                <span class="text-<%= @pagina.base_color %>-500">•</span>
                Il
                <select class="px-3 py-1 border-b-2 border-dotted border-gray-400 bg-white focus:border-<%= @pagina.base_color %>-500 focus:outline-none font-bold cursor-pointer"
                        data-correct-answer="CENTINAIO">
                  <option value="">Scegli...</option>
                  <option value="UNITÀ">UNITÀ</option>
                  <option value="DECINA">DECINA</option>
                  <option value="CENTINAIO">CENTINAIO</option>
                </select>
                è 10 volte più grande della <span class="font-bold">DECINA</span>.
              </p>
            </div>
            <div class="shrink-0">
              <%= image_tag "nvi4_mat/p011/output-1715932804011_740_1107_82_97.png", alt: "Cinema", class: "h-16 object-contain" %>
            </div>
          </div>
        </div>
      </div>

    </div>

    <%= render 'shared/exercise_controls' %>
  </div>
</div>
