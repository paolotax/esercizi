<div class="max-w-6xl mx-auto bg-white p-3 md:p-6"
     data-controller="exercise-checker text-toggle font-controls"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <%= render 'shared/page_header', pagina: @pagina %>

  <div class="space-y-6">

    <!-- Box CLASSE DELLE MIGLIAIA -->
    <div class="p-4 md:p-6 bg-gradient-to-b from-blue-100 to-purple-50 rounded-2xl">
      <div class="text-center mb-6">
        <span class="bg-<%= @pagina.base_color %>-500 text-white px-6 py-2 rounded-full font-bold">
          CLASSE DELLE MIGLIAIA
        </span>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <!-- Centinaio di migliaia -->
        <div class="bg-white rounded-2xl p-4 border-3 border-<%= @pagina.base_color %>-300 text-center flex flex-col">
          <div class="bg-white text-<%= @pagina.base_color %>-600 px-3 py-1 rounded-2xl border-3 border-<%= @pagina.base_color %>-500 font-bold mb-3 w-fit mx-auto">
            CENTINAIO DI MIGLIAIA
          </div>
          <div class="flex-1 flex flex-col items-center justify-end">
            <%= image_tag "nvi4_mat/p010/output-1715932804010_149_455_235_290.png", alt: "Città", class: "w-full max-w-xs object-contain mb-2" %>
            <p class="font-bold text-gray-800">
              <span class="whitespace-nowrap">100 000</span>
            </p>
            <p class="font-bold text-<%= @pagina.base_color %>-600">CENTOMILA</p>
          </div>
        </div>

        <!-- Decina di migliaia -->
        <div class="bg-white rounded-2xl p-4 border-3 border-<%= @pagina.base_color %>-300 text-center flex flex-col">
          <div class="bg-white text-<%= @pagina.base_color %>-600 px-3 py-1 rounded-2xl border-3 border-<%= @pagina.base_color %>-500 font-bold mb-3 w-fit mx-auto">
            DECINA DI MIGLIAIA
          </div>
          <div class="flex-1 flex flex-col items-center justify-end">
            <%= image_tag "nvi4_mat/p010/output-1715932804010_443_456_234_288.png", alt: "Stadio", class: "w-full max-w-xs object-contain mb-2" %>
            <p class="font-bold text-gray-800">
              <span class="whitespace-nowrap">10 000</span>
            </p>
            <p class="font-bold text-<%= @pagina.base_color %>-600">DIECIMILA</p>
          </div>
        </div>

        <!-- Unità di migliaia -->
        <div class="bg-white rounded-2xl p-4 border-3 border-<%= @pagina.base_color %>-300 text-center flex flex-col">
          <div class="bg-white text-<%= @pagina.base_color %>-600 px-3 py-1 rounded-2xl border-3 border-<%= @pagina.base_color %>-500 font-bold mb-3 w-fit mx-auto">
            UNITÀ DI MIGLIAIA
          </div>
          <div class="flex-1 flex flex-col items-center justify-end">
            <%= image_tag "nvi4_mat/p010/output-1715932804010_736_454_235_291.png", alt: "Nave", class: "w-full max-w-xs object-contain mb-2" %>
            <p class="font-bold text-gray-800">
              <span class="whitespace-nowrap">1 000</span>
            </p>
            <p class="font-bold text-<%= @pagina.base_color %>-600">MILLE</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Container ESERCIZI -->
    <div class="p-4 md:p-6">

      <!-- Esercizio: Collega -->
      <div class="mb-8" data-controller="flower-matcher">
        <p class="font-bold text-gray-700 mb-4">
          <span class="text-<%= @pagina.base_color %>-500">♦</span> Collega.
        </p>

        <div class="relative">
          <svg data-flower-matcher-target="canvas" class="absolute inset-0 w-full h-full pointer-events-none z-10"></svg>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <!-- Sinistra: definizioni -->
            <div class="space-y-3">
              <div class="p-3 rounded-lg flex items-center gap-2 cursor-pointer hover:bg-<%= @pagina.base_color %>-50 transition-colors"
                   data-flower-matcher-target="flower"
                   data-action="click->flower-matcher#selectFlower"
                   data-flower-id="def-centinaia"
                   data-pair="citta">
                <span class="text-<%= @pagina.base_color %>-500">•</span>
                <span><span class="font-bold text-<%= @pagina.base_color %>-600">CENTINAIA DI MIGLIAIA</span> di persone</span>
              </div>
              <div class="p-3 rounded-lg flex items-center gap-2 cursor-pointer hover:bg-<%= @pagina.base_color %>-50 transition-colors"
                   data-flower-matcher-target="flower"
                   data-action="click->flower-matcher#selectFlower"
                   data-flower-id="def-unita"
                   data-pair="nave">
                <span class="text-<%= @pagina.base_color %>-500">•</span>
                <span><span class="font-bold text-<%= @pagina.base_color %>-600">UNITÀ DI MIGLIAIA</span> di persone</span>
              </div>
              <div class="p-3 rounded-lg flex items-center gap-2 cursor-pointer hover:bg-<%= @pagina.base_color %>-50 transition-colors"
                   data-flower-matcher-target="flower"
                   data-action="click->flower-matcher#selectFlower"
                   data-flower-id="def-decine"
                   data-pair="stadio">
                <span class="text-<%= @pagina.base_color %>-500">•</span>
                <span><span class="font-bold text-<%= @pagina.base_color %>-600">DECINE DI MIGLIAIA</span> di persone</span>
              </div>
            </div>

            <!-- Destra: completamenti -->
            <div class="space-y-3">
              <div class="px-4 py-2 bg-orange-100 text-gray-700 rounded-full cursor-pointer hover:bg-orange-200 transition-colors inline-block"
                   data-flower-matcher-target="flower"
                   data-action="click->flower-matcher#selectFlower"
                   data-flower-id="comp-citta"
                   data-pair="citta">
                riempiono una piccola città.
              </div>
              <div class="px-4 py-2 bg-orange-100 text-gray-700 rounded-full cursor-pointer hover:bg-orange-200 transition-colors inline-block"
                   data-flower-matcher-target="flower"
                   data-action="click->flower-matcher#selectFlower"
                   data-flower-id="comp-stadio"
                   data-pair="stadio">
                riempiono uno stadio.
              </div>
              <div class="px-4 py-2 bg-orange-100 text-gray-700 rounded-full cursor-pointer hover:bg-orange-200 transition-colors inline-block"
                   data-flower-matcher-target="flower"
                   data-action="click->flower-matcher#selectFlower"
                   data-flower-id="comp-nave"
                   data-pair="nave">
                riempiono una nave.
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Esercizio: Scegli -->
      <div>
        <p class="font-bold text-gray-700 mb-4">
          <span class="text-<%= @pagina.base_color %>-500">♦</span> Scegli.
        </p>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Prima domanda -->
          <div class="p-4 rounded-lg">
            <p class="text-gray-700 mb-3">
              <span class="text-<%= @pagina.base_color %>-500">•</span>
              I numeri <span class="font-bold text-<%= @pagina.base_color %>-600">UNO</span>, <span class="font-bold text-<%= @pagina.base_color %>-600">DIECI</span> e <span class="font-bold text-<%= @pagina.base_color %>-600">CENTO</span> appartengono alla:
            </p>
            <div class="space-y-2">
              <label class="flex items-center gap-2 cursor-pointer hover:bg-gray-50 p-2 rounded">
                <input type="radio" name="classe1" class="w-5 h-5" data-correct-answer="true">
                <span class="font-bold text-<%= @pagina.base_color %>-600">CLASSE DELLE UNITÀ SEMPLICI</span>.
              </label>
              <label class="flex items-center gap-2 cursor-pointer hover:bg-gray-50 p-2 rounded">
                <input type="radio" name="classe1" class="w-5 h-5" data-correct-answer="false">
                <span class="font-bold text-<%= @pagina.base_color %>-600">CLASSE DELLE MIGLIAIA</span>.
              </label>
            </div>
          </div>

          <!-- Seconda domanda -->
          <div class="p-4 rounded-lg">
            <p class="text-gray-700 mb-3">
              <span class="text-<%= @pagina.base_color %>-500">•</span>
              I numeri <span class="font-bold text-<%= @pagina.base_color %>-600">MILLE</span>, <span class="font-bold text-<%= @pagina.base_color %>-600">DIECIMILA</span> e <span class="font-bold text-<%= @pagina.base_color %>-600">CENTOMILA</span> appartengono alla:
            </p>
            <div class="space-y-2">
              <label class="flex items-center gap-2 cursor-pointer hover:bg-gray-50 p-2 rounded">
                <input type="radio" name="classe2" class="w-5 h-5" data-correct-answer="false">
                <span class="font-bold text-<%= @pagina.base_color %>-600">CLASSE DELLE UNITÀ SEMPLICI</span>.
              </label>
              <label class="flex items-center gap-2 cursor-pointer hover:bg-gray-50 p-2 rounded">
                <input type="radio" name="classe2" class="w-5 h-5" data-correct-answer="true">
                <span class="font-bold text-<%= @pagina.base_color %>-600">CLASSE DELLE MIGLIAIA</span>.
              </label>
            </div>
          </div>
        </div>
      </div>

    </div>

    <%= render 'shared/exercise_controls' %>
  </div>
</div>
