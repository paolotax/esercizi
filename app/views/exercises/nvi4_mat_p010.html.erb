<div class="max-w-6xl mx-auto bg-white p-3 md:p-6"
     data-controller="exercise-checker text-toggle font-controls"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <%= render 'shared/page_header', pagina: @pagina %>

  <div class="space-y-6">

    <!-- Titolo sezione grande -->
    <div class="text-center">
      <h2 class="font-bold text-3xl text-gray-800 mb-2">NUMERI</h2>
    </div>

    <!-- Box CLASSE DELLE MIGLIAIA -->
    <div class="p-4 md:p-6 bg-gradient-to-b from-blue-100 to-purple-50 rounded-2xl">
      <div class="text-center mb-6">
        <span class="bg-<%= @pagina.base_color %>-500 text-white px-6 py-2 rounded-full font-bold">
          CLASSE DELLE MIGLIAIA
        </span>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <!-- Centinaio di migliaia -->
        <div class="bg-white rounded-2xl p-4 border-2 border-<%= @pagina.base_color %>-300 text-center">
          <div class="bg-<%= @pagina.base_color %>-500 text-white px-3 py-1 rounded-full font-bold mb-3 inline-block">
            CENTINAIO DI MIGLIAIA
          </div>
          <%= image_tag "nvi4_mat/p010/output-1715932804010_149_455_235_290.png", alt: "Città", class: "w-full h-40 object-contain mb-3" %>
          <p class="font-bold text-gray-800">
            <span class="whitespace-nowrap">100 000</span>
          </p>
          <p class="font-bold text-<%= @pagina.base_color %>-600">CENTOMILA</p>
        </div>

        <!-- Decina di migliaia -->
        <div class="bg-white rounded-2xl p-4 border-2 border-<%= @pagina.base_color %>-300 text-center">
          <div class="bg-<%= @pagina.base_color %>-500 text-white px-3 py-1 rounded-full font-bold mb-3 inline-block">
            DECINA DI MIGLIAIA
          </div>
          <%= image_tag "nvi4_mat/p010/output-1715932804010_443_456_234_288.png", alt: "Stadio", class: "w-full h-40 object-contain mb-3" %>
          <p class="font-bold text-gray-800">
            <span class="whitespace-nowrap">10 000</span>
          </p>
          <p class="font-bold text-<%= @pagina.base_color %>-600">DIECIMILA</p>
        </div>

        <!-- Unità di migliaia -->
        <div class="bg-white rounded-2xl p-4 border-2 border-<%= @pagina.base_color %>-300 text-center">
          <div class="bg-<%= @pagina.base_color %>-500 text-white px-3 py-1 rounded-full font-bold mb-3 inline-block">
            UNITÀ DI MIGLIAIA
          </div>
          <%= image_tag "nvi4_mat/p010/output-1715932804010_736_454_235_291.png", alt: "Nave", class: "w-full h-40 object-contain mb-3" %>
          <p class="font-bold text-gray-800">
            <span class="whitespace-nowrap">1 000</span>
          </p>
          <p class="font-bold text-<%= @pagina.base_color %>-600">MILLE</p>
        </div>
      </div>
    </div>

    <!-- Container ESERCIZI -->
    <div class="p-4 md:p-6 bg-orange-100 rounded-lg">

      <!-- Esercizio: Collega -->
      <div class="mb-8">
        <p class="font-bold text-gray-700 mb-4">
          <span class="text-<%= @pagina.base_color %>-500">♦</span> Collega.
        </p>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <!-- Sinistra: definizioni -->
          <div class="space-y-3">
            <div class="bg-white p-3 rounded-lg border border-gray-200 flex items-center gap-2">
              <span class="text-<%= @pagina.base_color %>-500">•</span>
              <span><span class="font-bold">CENTINAIA DI MIGLIAIA</span> di persone</span>
            </div>
            <div class="bg-white p-3 rounded-lg border border-gray-200 flex items-center gap-2">
              <span class="text-<%= @pagina.base_color %>-500">•</span>
              <span><span class="font-bold">UNITÀ DI MIGLIAIA</span> di persone</span>
            </div>
            <div class="bg-white p-3 rounded-lg border border-gray-200 flex items-center gap-2">
              <span class="text-<%= @pagina.base_color %>-500">•</span>
              <span><span class="font-bold">DECINE DI MIGLIAIA</span> di persone</span>
            </div>
          </div>

          <!-- Destra: completamenti con select -->
          <div class="space-y-3">
            <div class="bg-yellow-50 p-3 rounded-lg border border-yellow-200">
              <select class="w-full px-4 py-2 border-b-2 border-dotted border-gray-400 bg-white focus:border-<%= @pagina.base_color %>-500 focus:outline-none font-bold cursor-pointer"
                      data-correct-answer="riempiono una piccola città.">
                <option value="">Scegli...</option>
                <option value="riempiono una piccola città.">riempiono una piccola città.</option>
                <option value="riempiono uno stadio.">riempiono uno stadio.</option>
                <option value="riempiono una nave.">riempiono una nave.</option>
              </select>
            </div>
            <div class="bg-yellow-50 p-3 rounded-lg border border-yellow-200">
              <select class="w-full px-4 py-2 border-b-2 border-dotted border-gray-400 bg-white focus:border-<%= @pagina.base_color %>-500 focus:outline-none font-bold cursor-pointer"
                      data-correct-answer="riempiono una nave.">
                <option value="">Scegli...</option>
                <option value="riempiono una piccola città.">riempiono una piccola città.</option>
                <option value="riempiono uno stadio.">riempiono uno stadio.</option>
                <option value="riempiono una nave.">riempiono una nave.</option>
              </select>
            </div>
            <div class="bg-yellow-50 p-3 rounded-lg border border-yellow-200">
              <select class="w-full px-4 py-2 border-b-2 border-dotted border-gray-400 bg-white focus:border-<%= @pagina.base_color %>-500 focus:outline-none font-bold cursor-pointer"
                      data-correct-answer="riempiono uno stadio.">
                <option value="">Scegli...</option>
                <option value="riempiono una piccola città.">riempiono una piccola città.</option>
                <option value="riempiono uno stadio.">riempiono uno stadio.</option>
                <option value="riempiono una nave.">riempiono una nave.</option>
              </select>
            </div>
          </div>
        </div>
      </div>

      <!-- Esercizio: Scegli -->
      <div>
        <p class="font-bold text-gray-700 mb-4">
          <span class="text-<%= @pagina.base_color %>-500">♦</span> Scegli.
        </p>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Prima domanda -->
          <div class="bg-white p-4 rounded-lg border border-gray-200">
            <p class="text-gray-700 mb-3">
              <span class="text-<%= @pagina.base_color %>-500">•</span>
              I numeri <span class="font-bold">UNO</span>, <span class="font-bold">DIECI</span> e <span class="font-bold">CENTO</span> appartengono alla:
            </p>
            <div class="space-y-2">
              <label class="flex items-center gap-2 cursor-pointer hover:bg-gray-50 p-2 rounded border border-gray-200">
                <input type="radio" name="classe1" class="w-5 h-5" data-correct-answer="true">
                <span class="font-bold">CLASSE DELLE UNITÀ SEMPLICI</span>.
              </label>
              <label class="flex items-center gap-2 cursor-pointer hover:bg-gray-50 p-2 rounded border border-gray-200">
                <input type="radio" name="classe1" class="w-5 h-5" data-correct-answer="false">
                <span class="font-bold">CLASSE DELLE MIGLIAIA</span>.
              </label>
            </div>
          </div>

          <!-- Seconda domanda -->
          <div class="bg-white p-4 rounded-lg border border-gray-200">
            <p class="text-gray-700 mb-3">
              <span class="text-<%= @pagina.base_color %>-500">•</span>
              I numeri <span class="font-bold">MILLE</span>, <span class="font-bold">DIECIMILA</span> e <span class="font-bold">CENTOMILA</span> appartengono alla:
            </p>
            <div class="space-y-2">
              <label class="flex items-center gap-2 cursor-pointer hover:bg-gray-50 p-2 rounded border border-gray-200">
                <input type="radio" name="classe2" class="w-5 h-5" data-correct-answer="false">
                <span class="font-bold">CLASSE DELLE UNITÀ SEMPLICI</span>.
              </label>
              <label class="flex items-center gap-2 cursor-pointer hover:bg-gray-50 p-2 rounded border border-gray-200">
                <input type="radio" name="classe2" class="w-5 h-5" data-correct-answer="true">
                <span class="font-bold">CLASSE DELLE MIGLIAIA</span>.
              </label>
            </div>
          </div>
        </div>
      </div>

    </div>

    <%= render 'shared/exercise_controls' %>
  </div>
</div>
