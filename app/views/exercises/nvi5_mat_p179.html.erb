<div class="max-w-6xl mx-auto bg-white p-3 md:p-6"
     data-controller="exercise-checker text-toggle font-controls"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <%= render 'shared/page_header', pagina: @pagina %>

  <div class="space-y-6">
    <!-- Esercizio 1: IMPARARE TUTTI -->
    <div class="p-4 bg-white rounded-2xl border-3 border-yellow-400">
        <p class="font-bold text-gray-700 mb-4">
          <%= imparare_tutti_badge(1) %>
          Completa facendo attenzione al valore posizionale di ogni cifra.
        </p>

        <div class="overflow-x-auto">
          <table class="w-full border-collapse border border-cyan-400">
            <thead>
              <tr>
                <th rowspan="2" class="p-2 border border-cyan-400 bg-custom-blue-light text-gray-800"></th>
                <th colspan="6" class="p-2 border border-cyan-400 bg-custom-blue-light text-center text-gray-800 font-bold">PARTE INTERA</th>
                <th rowspan="2" class="p-2 border border-cyan-400 bg-custom-blue-light text-center text-gray-800 font-bold">,</th>
                <th colspan="3" class="p-2 border border-cyan-400 bg-green-100 text-center text-gray-800 font-bold">PARTE DECIMALE</th>
              </tr>
              <tr>
                <th class="p-2 border border-cyan-400 bg-custom-blue-light text-center text-gray-800">hk</th>
                <th class="p-2 border border-cyan-400 bg-custom-blue-light text-center text-gray-800">dak</th>
                <th class="p-2 border border-cyan-400 bg-custom-blue-light text-center text-gray-800">uk</th>
                <th class="p-2 border border-cyan-400 bg-custom-blue-light text-center text-gray-800">h</th>
                <th class="p-2 border border-cyan-400 bg-custom-blue-light text-center text-gray-800">da</th>
                <th class="p-2 border border-cyan-400 bg-custom-blue-light text-center text-gray-800">u</th>
                <th class="p-2 border border-cyan-400 bg-green-100 text-center text-gray-800">d</th>
                <th class="p-2 border border-cyan-400 bg-green-100 text-center text-gray-800">c</th>
                <th class="p-2 border border-cyan-400 bg-green-100 text-center text-gray-800">m</th>
              </tr>
            </thead>
            <tbody>
              <!-- Esempio: 10,103 -->
              <tr>
                <td class="p-2 border border-cyan-400 bg-custom-blue-light font-bold">10,103</td>
                <td class="p-2 border border-cyan-400 text-center bg-custom-blue-light"></td>
                <td class="p-2 border border-cyan-400 text-center bg-custom-blue-light"></td>
                <td class="p-2 border border-cyan-400 text-center bg-custom-blue-light"></td>
                <td class="p-2 border border-cyan-400 text-center bg-custom-blue-light"></td>
                <td class="p-2 border border-cyan-400 text-center bg-custom-blue-light font-bold text-cyan-600">1</td>
                <td class="p-2 border border-cyan-400 text-center bg-custom-blue-light font-bold text-cyan-600">0</td>
                <td class="p-2 border border-cyan-400 text-center bg-custom-blue-light">,</td>
                <td class="p-2 border border-cyan-400 text-center bg-custom-blue-light font-bold text-cyan-600">1</td>
                <td class="p-2 border border-cyan-400 text-center bg-custom-blue-light font-bold text-cyan-600">0</td>
                <td class="p-2 border border-cyan-400 text-center bg-custom-blue-light font-bold text-cyan-600">3</td>
              </tr>
              <!-- Da completare -->
              <% ["1 457,08", "28 480,127", "184,02", "165 489,435", "4 562,103", "1 089,2"].each do |num| %>
                <tr>
                  <td class="p-2 border border-cyan-400 bg-white"><%= num %></td>
                  <% 6.times do %>
                    <td class="p-2 border border-cyan-400 text-center bg-white">
                      <input type="text" class="w-6 text-center border-b border-dotted border-gray-400 bg-transparent">
                    </td>
                  <% end %>
                  <td class="p-2 border border-cyan-400 text-center bg-white">,</td>
                  <% 3.times do %>
                    <td class="p-2 border border-cyan-400 text-center bg-white">
                      <input type="text" class="w-6 text-center border-b border-dotted border-gray-400 bg-transparent">
                    </td>
                  <% end %>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
    </div>

    <!-- Layout 2 colonne -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- Colonna sinistra -->
      <div class="space-y-6">
        <!-- Esercizio 2 -->
        <div>
          <p class="font-bold text-gray-700 mb-4">
            <%= numero_esercizio_badge(2) %>
            Componi i numeri decimali e inserisci gli zeri se necessario. Segui l'esempio.
          </p>

          <div class="space-y-3">
            <div class="flex items-center gap-2 flex-wrap p-2 bg-custom-blue-light rounded">
              <span class="font-bold">4 u 1 d 9 m</span>
              <span class="text-cyan-500">→</span>
              <span class="font-bold text-cyan-600">4,109</span>
            </div>
            <% [
              ["8 da 3 u 7 d 2 c", "83,72"],
              ["5 da 6 d 1 c", "50,61"],
              ["2 u 1 c 7 m", "2,017"],
              ["5 h 8 d 4 c", "500,84"],
              ["6 h 6 u 8 m", "606,008"]
            ].each do |expr, answer| %>
              <div class="flex items-center gap-2 flex-wrap">
                <span class="text-gray-700"><%= expr %></span>
                <span class="text-cyan-500">→</span>
                <input type="text" data-correct-answer="<%= answer %>" class="w-24 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
              </div>
            <% end %>
          </div>
        </div>

        <!-- Esercizio 3 -->
        <div>
          <p class="font-bold text-gray-700 mb-4">
            <%= numero_esercizio_badge(3) %>
            Scrivi in cifre i numeri decimali.
          </p>

          <div class="space-y-3">
            <% [
              ["sedici centesimi", "0,16"],
              ["sette decimi", "0,7"],
              ["ottocentoventi millesimi", "0,820"],
              ["ventuno unità e nove centesimi", "21,09"],
              ["centodue unità e quattro millesimi", "102,004"],
              ["undici unità e sei decimi", "11,6"]
            ].each do |word, answer| %>
              <div class="flex items-center gap-2 flex-wrap">
                <span class="text-gray-700"><%= word %></span>
                <span class="text-cyan-500">→</span>
                <input type="text" data-correct-answer="<%= answer %>" class="w-24 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Colonna destra -->
      <div class="space-y-6">
        <!-- Esercizio 4 -->
        <div>
          <p class="font-bold text-gray-700 mb-4">
            <%= numero_esercizio_badge(4) %>
            Controlla le uguaglianze, individua gli eventuali errori e correggi.
          </p>

          <div class="space-y-4">
            <% [
              ["85/10", "8,5", "8,5"],
              ["41/1000", "0,41", "0,041"],
              ["26/100", "2,6", "0,26"]
            ].each do |fraz, sbagliato, corretto| %>
              <div class="flex items-center gap-2 flex-wrap p-3 bg-white rounded-lg">
                <%= render 'shared/frazione', num: fraz.split('/')[0].to_i, den: fraz.split('/')[1].to_i %>
                <span class="mx-2">=</span>
                <span class="text-gray-700"><%= sbagliato %></span>
                <span class="text-cyan-500 mx-2">→</span>
                <input type="text" data-correct-answer="<%= corretto %>" class="w-20 border-b-2 border-dotted border-gray-400 text-center font-bold bg-transparent">
              </div>
            <% end %>
          </div>
        </div>

        <!-- Esercizio 5 -->
        <div>
          <p class="font-bold text-gray-700 mb-4">
            <%= numero_esercizio_badge(5) %>
            Completa la tabella come nell'esempio.
          </p>

            <div class="overflow-x-auto">
              <table class="w-full border-collapse border border-cyan-400">
                <thead>
                  <tr>
                    <th class="p-2 border border-cyan-400 bg-custom-blue-light text-center text-gray-800">Frazione</th>
                    <th class="p-2 border border-cyan-400 bg-custom-blue-light text-center text-gray-800">Numero</th>
                    <th class="p-2 border border-cyan-400 bg-custom-blue-light text-center text-gray-800">da</th>
                    <th class="p-2 border border-cyan-400 bg-custom-blue-light text-center text-gray-800">u</th>
                    <th class="p-2 border border-cyan-400 bg-custom-blue-light text-center text-gray-800">,</th>
                    <th class="p-2 border border-cyan-400 bg-custom-blue-light text-center text-gray-800">d</th>
                    <th class="p-2 border border-cyan-400 bg-custom-blue-light text-center text-gray-800">c</th>
                    <th class="p-2 border border-cyan-400 bg-custom-blue-light text-center text-gray-800">m</th>
                    <th class="p-2 border border-cyan-400 bg-custom-blue-light text-center text-gray-800">Numero in lettere</th>
                  </tr>
                </thead>
                <tbody>
                  <!-- Esempio: 24/100 -->
                  <tr>
                    <td class="p-2 border border-cyan-400 text-center bg-custom-blue-light">
                      <%= render 'shared/frazione', num: 24, den: 100 %>
                    </td>
                    <td class="p-2 border border-cyan-400 text-center bg-custom-blue-light font-bold">0,24</td>
                    <td class="p-2 border border-cyan-400 text-center bg-custom-blue-light"></td>
                    <td class="p-2 border border-cyan-400 text-center bg-custom-blue-light font-bold">0</td>
                    <td class="p-2 border border-cyan-400 text-center bg-custom-blue-light">,</td>
                    <td class="p-2 border border-cyan-400 text-center bg-custom-blue-light font-bold">2</td>
                    <td class="p-2 border border-cyan-400 text-center bg-custom-blue-light font-bold">4</td>
                    <td class="p-2 border border-cyan-400 text-center bg-custom-blue-light"></td>
                    <td class="p-2 border border-cyan-400 text-center bg-custom-blue-light font-bold">ventiquattro centesimi</td>
                  </tr>
                  <!-- 9/10 -->
                  <tr>
                    <td class="p-2 border border-cyan-400 text-center bg-white">
                      <%= render 'shared/frazione', num: 9, den: 10 %>
                    </td>
                    <td class="p-2 border border-cyan-400 text-center bg-white">
                      <input type="text" data-correct-answer="0,9" class="w-12 text-center border-b border-dotted border-gray-400 bg-transparent">
                    </td>
                    <td class="p-2 border border-cyan-400 text-center bg-white">
                      <input type="text" class="w-6 text-center border-b border-dotted border-gray-400 bg-transparent">
                    </td>
                    <td class="p-2 border border-cyan-400 text-center bg-white">
                      <input type="text" class="w-6 text-center border-b border-dotted border-gray-400 bg-transparent">
                    </td>
                    <td class="p-2 border border-cyan-400 text-center bg-white">,</td>
                    <td class="p-2 border border-cyan-400 text-center bg-white">
                      <input type="text" class="w-6 text-center border-b border-dotted border-gray-400 bg-transparent">
                    </td>
                    <td class="p-2 border border-cyan-400 text-center bg-white">
                      <input type="text" class="w-6 text-center border-b border-dotted border-gray-400 bg-transparent">
                    </td>
                    <td class="p-2 border border-cyan-400 text-center bg-white">
                      <input type="text" class="w-6 text-center border-b border-dotted border-gray-400 bg-transparent">
                    </td>
                    <td class="p-2 border border-cyan-400 text-center bg-white">
                      <input type="text" class="w-28 text-center border-b border-dotted border-gray-400 bg-transparent">
                    </td>
                  </tr>
                  <!-- 56/1000 -->
                  <tr>
                    <td class="p-2 border border-cyan-400 text-center bg-white">
                      <%= render 'shared/frazione', num: 56, den: 1000 %>
                    </td>
                    <td class="p-2 border border-cyan-400 text-center bg-white">
                      <input type="text" data-correct-answer="0,056" class="w-12 text-center border-b border-dotted border-gray-400 bg-transparent">
                    </td>
                    <td class="p-2 border border-cyan-400 text-center bg-white">
                      <input type="text" class="w-6 text-center border-b border-dotted border-gray-400 bg-transparent">
                    </td>
                    <td class="p-2 border border-cyan-400 text-center bg-white">
                      <input type="text" class="w-6 text-center border-b border-dotted border-gray-400 bg-transparent">
                    </td>
                    <td class="p-2 border border-cyan-400 text-center bg-white">,</td>
                    <td class="p-2 border border-cyan-400 text-center bg-white">
                      <input type="text" class="w-6 text-center border-b border-dotted border-gray-400 bg-transparent">
                    </td>
                    <td class="p-2 border border-cyan-400 text-center bg-white">
                      <input type="text" class="w-6 text-center border-b border-dotted border-gray-400 bg-transparent">
                    </td>
                    <td class="p-2 border border-cyan-400 text-center bg-white">
                      <input type="text" class="w-6 text-center border-b border-dotted border-gray-400 bg-transparent">
                    </td>
                    <td class="p-2 border border-cyan-400 text-center bg-white">
                      <input type="text" class="w-28 text-center border-b border-dotted border-gray-400 bg-transparent">
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
        </div>
      </div>
    </div>

    <%= render 'shared/exercise_controls' %>
  </div>
</div>
