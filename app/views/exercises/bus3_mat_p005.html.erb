<div class="max-w-7xl mx-auto p-3 md:p-6 bg-white dark:bg-gray-900 text-black dark:text-white transition-colors duration-300"
     data-controller="exercise-checker text-toggle font-controls"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <!-- Header -->
  <%= render 'shared/page_header', pagina: @pagina %>

  <!-- Esercizio 2: Scrivi la decina successiva -->
  <div class="bg-transparent p-2 md:p-6 mb-8" data-controller="fill-blanks auto-advance">
      <div class="flex items-start gap-3 mb-6">
        <div class="bg-red-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0">
          2
        </div>
        <p class="text-gray-700 dark:text-gray-200">
          Scrivi la <strong class="text-cyan-600 dark:text-cyan-400">decina successiva</strong>. Segui l'esempio.
        </p>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
        <!-- Esempio -->
        <div class="bg-yellow-100 dark:bg-yellow-900/30 p-4 rounded-lg">
          <span class="font-bold">43 <span class="text-red-600 dark:text-red-400">→</span> 50</span>
        </div>

        <div class="bg-green-100 dark:bg-green-900/30 p-4 rounded-lg flex items-center gap-2">
          <span class="font-bold">37 <span class="text-red-600 dark:text-red-400">→</span></span>
          <input type="text" data-fill-blanks-target="input" data-correct-answer="40"
                 class="w-16 px-2 py-1 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white"
                 maxlength="2" inputmode="numeric">
        </div>

        <div class="bg-blue-100 dark:bg-blue-900/30 p-4 rounded-lg flex items-center gap-2">
          <span class="font-bold">76 <span class="text-red-600 dark:text-red-400">→</span></span>
          <input type="text" data-fill-blanks-target="input" data-correct-answer="80"
                 class="w-16 px-2 py-1 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white"
                 maxlength="2" inputmode="numeric">
        </div>

        <div class="bg-pink-100 dark:bg-pink-900/30 p-4 rounded-lg flex items-center gap-2">
          <span class="font-bold">28 <span class="text-red-600 dark:text-red-400">→</span></span>
          <input type="text" data-fill-blanks-target="input" data-correct-answer="30"
                 class="w-16 px-2 py-1 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white"
                 maxlength="2" inputmode="numeric">
        </div>

        <div class="bg-cyan-100 dark:bg-cyan-900/30 p-4 rounded-lg flex items-center gap-2">
          <span class="font-bold">21 <span class="text-red-600 dark:text-red-400">→</span></span>
          <input type="text" data-fill-blanks-target="input" data-correct-answer="30"
                 class="w-16 px-2 py-1 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white"
                 maxlength="2" inputmode="numeric">
        </div>

        <div class="bg-orange-100 dark:bg-orange-900/30 p-4 rounded-lg flex items-center gap-2">
          <span class="font-bold">19 <span class="text-red-600 dark:text-red-400">→</span></span>
          <input type="text" data-fill-blanks-target="input" data-correct-answer="20"
                 class="w-16 px-2 py-1 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white"
                 maxlength="2" inputmode="numeric">
        </div>

        <div class="bg-blue-100 dark:bg-blue-900/30 p-4 rounded-lg flex items-center gap-2">
          <span class="font-bold">55 <span class="text-red-600 dark:text-red-400">→</span></span>
          <input type="text" data-fill-blanks-target="input" data-correct-answer="60"
                 class="w-16 px-2 py-1 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white"
                 maxlength="2" inputmode="numeric">
        </div>

        <div class="bg-purple-100 dark:bg-purple-900/30 p-4 rounded-lg flex items-center gap-2">
          <span class="font-bold">62 <span class="text-red-600 dark:text-red-400">→</span></span>
          <input type="text" data-fill-blanks-target="input" data-correct-answer="70"
                 class="w-16 px-2 py-1 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white"
                 maxlength="2" inputmode="numeric">
        </div>

        <div class="bg-yellow-100 dark:bg-yellow-900/30 p-4 rounded-lg flex items-center gap-2">
          <span class="font-bold">86 <span class="text-red-600 dark:text-red-400">→</span></span>
          <input type="text" data-fill-blanks-target="input" data-correct-answer="90"
                 class="w-16 px-2 py-1 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white"
                 maxlength="2" inputmode="numeric">
        </div>
      </div>
  </div>

  <!-- Grid 2 colonne per esercizi 3 e 4 -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">

    <!-- Esercizio 3: Completa la tabella -->
    <div class="bg-transparent p-4 md:p-8" data-controller="fill-blanks auto-advance">
    <div class="flex items-start gap-3 mb-6">
      <div class="bg-red-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0">
        3
      </div>
      <p class="text-gray-700 dark:text-gray-200">
        Completa la tabella.
      </p>
    </div>

    <div class="overflow-x-auto">
      <div class="border-3 border-pink-400 dark:border-pink-500 rounded-2xl overflow-hidden">
        <table class="w-full">
          <thead>
            <tr class="bg-pink-100 dark:bg-pink-900/40">
              <th class="border-2 border-pink-400 dark:border-pink-500 p-3 text-center font-bold text-blue-600 dark:text-blue-400">precedente</th>
              <th class="border-2 border-pink-400 dark:border-pink-500 p-3 text-center font-bold">numero</th>
              <th class="border-2 border-pink-400 dark:border-pink-500 p-3 text-center font-bold text-red-600 dark:text-red-400">successivo</th>
            </tr>
          </thead>
          <tbody>
            <% [68, 20, 13, 47, 81, 39].each do |num| %>
              <tr>
                <td class="border-2 border-pink-400 dark:border-pink-500 p-3 text-center bg-white dark:bg-gray-800">
                  <input type="text" data-fill-blanks-target="input" data-correct-answer="<%= num - 1 %>"
                         class="w-16 px-2 py-1 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white"
                         maxlength="2" inputmode="numeric">
                </td>
                <td class="border-2 border-pink-400 dark:border-pink-500 p-3 text-center font-bold bg-white dark:bg-gray-800"><%= num %></td>
                <td class="border-2 border-pink-400 dark:border-pink-500 p-3 text-center bg-white dark:bg-gray-800">
                  <input type="text" data-fill-blanks-target="input" data-correct-answer="<%= num + 1 %>"
                         class="w-16 px-2 py-1 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white"
                         maxlength="2" inputmode="numeric">
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    </div>

    <!-- Esercizio 4: Confronta numeri -->
    <div class="bg-transparent p-4 md:p-8" data-controller="word-choice">
    <div class="flex items-start gap-3 mb-6">
      <div class="bg-red-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0">
        4
      </div>
      <p class="text-gray-700 dark:text-gray-200">
        Confronta ogni coppia di numeri: scrivi il simbolo <strong class="text-cyan-600 dark:text-cyan-400">&gt;</strong>, <strong class="text-cyan-600 dark:text-cyan-400">&lt;</strong> oppure <strong class="text-cyan-600 dark:text-cyan-400">=</strong>.
      </p>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      <%
        comparisons = [
          [57, 75, '<'], [72, 70, '>'],
          [63, 63, '='], [31, 53, '<'],
          [78, 93, '<'], [84, 84, '='],
          [96, 69, '>'], [66, 49, '>']
        ]

        comparisons.each do |num1, num2, correct|
      %>
        <div class="p-4 rounded-lg border-3 border-cyan-400 dark:border-cyan-500 flex items-center justify-center gap-2">
          <span class="font-bold"><%= num1 %></span>
          <select data-word-choice-target="select" data-correct-answer="<%= correct %>"
                  class="border-b-2 border-dotted border-gray-400 dark:border-gray-500 bg-transparent dark:text-white px-2 py-1 font-bold">
            <option value="">?</option>
            <option value="<">&lt;</option>
            <option value="=">=</option>
            <option value=">">&gt;</option>
          </select>
          <span class="font-bold"><%= num2 %></span>
        </div>
      <% end %>
    </div>
    </div>

  </div>

  <!-- Esercizio 5: Numera in avanti per 3 -->
  <div class="bg-transparent p-4 md:p-8 mb-8" data-controller="fill-blanks auto-advance">
    <div class="flex items-start gap-3 mb-6">
      <div class="bg-red-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0">
        5
      </div>
      <p class="text-gray-700 dark:text-gray-200">
        Numera <strong class="text-cyan-600 dark:text-cyan-400">in avanti per 3</strong>.
      </p>
    </div>

    <div class="flex flex-wrap items-center justify-center gap-2">
      <% [70, 73, 76, 79, 82, 85, 88, 91].each_with_index do |num, idx| %>
        <% if [70, 73, 79, 91].include?(num) %>
          <!-- Numero fisso -->
          <div class="w-12 h-12 sm:w-16 sm:h-16 bg-<%= ['pink', 'yellow', 'pink', 'cyan'][idx % 4] %>-200 dark:bg-<%= ['pink', 'yellow', 'pink', 'cyan'][idx % 4] %>-900/40 border-4 border-<%= ['pink', 'yellow', 'pink', 'cyan'][idx % 4] %>-400 dark:border-<%= ['pink', 'yellow', 'pink', 'cyan'][idx % 4] %>-500 rounded-full flex items-center justify-center">
            <span class="font-bold"><%= num %></span>
          </div>
        <% else %>
          <!-- Input -->
          <div class="w-12 h-12 sm:w-16 sm:h-16 bg-purple-100 dark:bg-purple-900/40 border-4 border-purple-400 dark:border-purple-500 rounded-full flex items-center justify-center">
            <input type="text" data-fill-blanks-target="input" data-correct-answer="<%= num %>"
                   class="w-10 h-10 sm:w-12 sm:h-12 bg-transparent text-center font-bold border-none focus:outline-none dark:text-white"
                   maxlength="2" inputmode="numeric">
          </div>
        <% end %>
        <% if idx < 7 %>
          <span class="font-bold text-red-600 dark:text-red-400">→</span>
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- Esercizio 6: Numera all'indietro per 2 -->
  <div class="bg-transparent p-4 md:p-8 mb-8" data-controller="fill-blanks auto-advance">
    <div class="flex items-start gap-3 mb-6">
      <div class="bg-red-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0">
        6
      </div>
      <p class="text-gray-700 dark:text-gray-200">
        Numera <strong class="text-cyan-600 dark:text-cyan-400">all'indietro per 2</strong>.
      </p>
    </div>

    <div class="flex flex-wrap items-center justify-center gap-2">
      <% [83, 85, 87, 89, 91, 93, 95, 97, 99].reverse.each_with_index do |num, idx| %>
        <% if [99, 97, 89].include?(num) %>
          <!-- Numero fisso -->
          <div class="w-12 h-12 sm:w-16 sm:h-16 bg-<%= ['yellow', 'cyan', 'cyan'][idx % 3] %>-200 dark:bg-<%= ['yellow', 'cyan', 'cyan'][idx % 3] %>-900/40 border-4 border-<%= ['yellow', 'cyan', 'cyan'][idx % 3] %>-400 dark:border-<%= ['yellow', 'cyan', 'cyan'][idx % 3] %>-500 rounded-full flex items-center justify-center">
            <span class="font-bold"><%= num %></span>
          </div>
        <% else %>
          <!-- Input -->
          <div class="w-12 h-12 sm:w-16 sm:h-16 bg-purple-100 dark:bg-purple-900/40 border-4 border-purple-400 dark:border-purple-500 rounded-full flex items-center justify-center">
            <input type="text" data-fill-blanks-target="input" data-correct-answer="<%= num %>"
                   class="w-10 h-10 sm:w-12 sm:h-12 bg-transparent text-center font-bold border-none focus:outline-none dark:text-white"
                   maxlength="2" inputmode="numeric">
          </div>
        <% end %>
        <% if idx < 8 %>
          <span class="font-bold text-red-600 dark:text-red-400">←</span>
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- Footer con controlli -->
  <%= render 'shared/exercise_controls', color: 'cyan' %>
</div>
