<div class="max-w-6xl mx-auto p-3 md:p-8 bg-white" data-controller="exercise-checker">

  <%= render 'shared/page_header', pagina: @pagina %>

  <!-- Exercise 3: Match figurative meanings -->
  <div class="bg-white p-4 md:p-6 pb-8">
    <h2 class="text-lg md:text-xl font-bold mb-4 flex items-center gap-2">
      <span class="flex-shrink-0 bg-<%= @pagina.base_color %>-500 text-white rounded-full w-8 h-8 md:w-10 md:h-10 inline-flex items-center justify-center">3</span>
      Collega ogni significato figurato al corrispondente significato proprio.
    </h2>

    <% figurative_expressions = [
      { expression: "Prendere per la gola.", meaning: "conquistare offrendo cibo buono" },
      { expression: "Restare di stucco.", meaning: "rimanere immobile e senza parole" },
      { expression: "Fare una lavata di capo.", meaning: "rimproverare con forza" },
      { expression: "Sentirsi un pesce fuor d'acqua.", meaning: "sentirsi a disagio" }
    ] %>

    <div class="space-y-3 text-base md:text-lg">
      <% figurative_expressions.each do |item| %>
        <div class="rounded-lg p-3 flex items-center justify-between gap-4">
          <div class="flex items-center gap-4">
            <span class="text-<%= @pagina.base_color %>-500">•</span>
            <span class="text-gray-700 font-semibold"><%= item[:expression] %></span>
            <span class="text-<%= @pagina.base_color %>-500">→</span>
          </div>
          <input type="text"
                 class="flex-1 max-w-xs border-b-2 border-dotted border-<%= @pagina.base_color %>-500 bg-white px-2 focus:outline-none focus:border-<%= @pagina.base_color %>-700"
                 maxlength="60">
        </div>
      <% end %>
    </div>
  </div>

  <!-- Exercise 4: Write sentences -->
  <div class="bg-white p-4 md:p-6 pb-8">
    <h2 class="text-lg md:text-xl font-bold mb-4 flex items-center gap-2">
      <span class="flex-shrink-0 bg-<%= @pagina.base_color %>-500 text-white rounded-full w-8 h-8 md:w-10 md:h-10 inline-flex items-center justify-center">4</span>
      Scrivi sul quaderno una frase per ciascuna espressione figurata dell'esercizio 3.
    </h2>

    <div class="bg-<%= @pagina.base_color %>-50 rounded-lg p-3">
      <p class="text-base md:text-lg text-gray-700 italic">
        <span class="text-<%= @pagina.base_color %>-500">•</span> Esempio: Marco voleva il mio pallone e mi ha preso per la gola offrendo un cioccolatino.
      </p>
    </div>
  </div>

  <!-- Exercise 5: Write comparisons and metaphors -->
  <div class="bg-white p-4 md:p-6 pb-8" data-controller="fill-blanks">
    <h2 class="text-lg md:text-xl font-bold mb-4 flex items-center gap-2">
      <span class="flex-shrink-0 bg-<%= @pagina.base_color %>-500 text-white rounded-full w-8 h-8 md:w-10 md:h-10 inline-flex items-center justify-center">5</span>
      Scrivi una frase per ogni gruppo di parole: prima un paragone, poi la metafora.
    </h2>

    <% word_groups = [
      {
        words: "Mirko • alto • gigante",
        comparison_example: "Mirko è alto come un gigante.",
        metaphor_example: "Mirko è un gigante.",
        is_example: true
      },
      {
        words: "Lara • gira • trottola",
        comparison_answer: "Lara gira come una trottola",
        metaphor_answer: "Lara è una trottola"
      },
      {
        words: "nonno • lento • lumaca",
        comparison_answer: "Il nonno è lento come una lumaca",
        metaphor_answer: "Il nonno è una lumaca"
      },
      {
        words: "mani • forti • tenaglie",
        comparison_answer: "Le mani sono forti come tenaglie",
        metaphor_answer: "Le mani sono tenaglie"
      }
    ] %>

    <div class="space-y-5">
      <% word_groups.each_with_index do |group, index| %>
        <div class="rounded-lg p-3">
          <p class="text-base md:text-lg text-gray-700 font-semibold mb-3"><span class="text-<%= @pagina.base_color %>-500">•</span> <%= group[:words] %></p>
          <div class="space-y-3 ml-6">
            <div class="flex flex-wrap items-center gap-2">
              <span class="text-gray-700">Paragone:</span>
              <% if group[:is_example] %>
                <span class="text-gray-700 italic"><%= group[:comparison_example] %></span>
              <% else %>
                <input type="text"
                       class="flex-1 min-w-[250px] border-b-2 border-dotted border-<%= @pagina.base_color %>-500 bg-white px-2 focus:outline-none focus:border-<%= @pagina.base_color %>-700"
                       data-fill-blanks-target="input"
                       data-answer="<%= group[:comparison_answer] %>"
                       data-correct-answer="<%= group[:comparison_answer] %>"
                       maxlength="80">
              <% end %>
            </div>
            <div class="flex flex-wrap items-center gap-2">
              <span class="text-gray-700">Metafora:</span>
              <% if group[:is_example] %>
                <span class="text-gray-700 italic"><%= group[:metaphor_example] %></span>
              <% else %>
                <input type="text"
                       class="flex-1 min-w-[250px] border-b-2 border-dotted border-<%= @pagina.base_color %>-500 bg-white px-2 focus:outline-none focus:border-<%= @pagina.base_color %>-700"
                       data-fill-blanks-target="input"
                       data-answer="<%= group[:metaphor_answer] %>"
                       data-correct-answer="<%= group[:metaphor_answer] %>"
                       maxlength="80">
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Exercise 6: Transform metaphors into comparisons -->
  <div class="bg-white p-4 md:p-6 pb-8" data-controller="fill-blanks">
    <h2 class="text-lg md:text-xl font-bold mb-4 flex items-center gap-2">
      <span class="flex-shrink-0 bg-<%= @pagina.base_color %>-500 text-white rounded-full w-8 h-8 md:w-10 md:h-10 inline-flex items-center justify-center">6</span>
      Trasforma le metafore in paragoni.
    </h2>

    <% transformations = [
      {
        metaphor: "Aveva la barba lunga e gli occhi di ghiaccio.",
        comparison: "Aveva la barba lunga e gli occhi freddi come il ghiaccio.",
        is_example: true
      },
      {
        metaphor: "In piscina Vanessa è un pesce.",
        comparison: "In piscina Vanessa nuota come un pesce"
      },
      {
        metaphor: "Mio fratello è un fulmine: vince tutte le gare.",
        comparison: "Mio fratello è veloce come un fulmine: vince tutte le gare"
      },
      {
        metaphor: "Ho preso troppo sole: sono un pomodoro!",
        comparison: "Ho preso troppo sole: sono rosso come un pomodoro"
      }
    ] %>

    <div class="space-y-4 text-base md:text-lg">
      <% transformations.each_with_index do |item, index| %>
        <div class="rounded-lg p-3">
          <p class="text-gray-700 mb-2"><span class="text-<%= @pagina.base_color %>-500">•</span> <%= item[:metaphor] %></p>
          <div class="flex flex-wrap items-center gap-2 ml-6">
            <span class="text-<%= @pagina.base_color %>-500">→</span>
            <% if item[:is_example] %>
              <span class="text-gray-700 italic"><%= item[:comparison] %></span>
            <% else %>
              <input type="text"
                     class="flex-1 min-w-[250px] border-b-2 border-dotted border-<%= @pagina.base_color %>-500 bg-white px-2 focus:outline-none focus:border-<%= @pagina.base_color %>-700"
                     data-fill-blanks-target="input"
                     data-answer="<%= item[:comparison] %>"
                     data-correct-answer="<%= item[:comparison] %>"
                     maxlength="100">
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="text-right text-sm text-gray-500 mb-6">
    Esercizi p. <%= link_to "143", pagina_path("nvl5_gram_p143"), class: "text-gray-600 hover:text-gray-800 underline" %>
  </div>

  <!-- Exercise Controls -->
  <%= render 'shared/exercise_controls' %>
</div>
