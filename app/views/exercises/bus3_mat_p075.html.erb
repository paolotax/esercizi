<% content_for :titolo, "#{@pagina.titolo} - #{@pagina.numero}" %>

<div class="max-w-7xl mx-auto p-3 md:p-6 bg-white dark:bg-gray-900 text-black dark:text-white transition-colors duration-300 font-mono"
     data-controller="exercise-checker fill-blanks auto-advance page-viewer fraction-circles text-toggle font-controls"
     data-page-viewer-image-url-value="<%= asset_path('bus3_mat/p075/page.png') %>"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <!-- Header -->
  <%= render 'shared/page_header', pagina: @pagina %>

  <!-- Esercizio 1 - Conta e completa -->
  <div class="bg-[#C7EAFB] dark:bg-cyan-900/40 p-4 md:p-6 -ml-3 md:-ml-0 -mr-3 md:mr-0 mb-8">
    <div class="flex items-start gap-3 mb-6">
      <div class="bg-red-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0">
        1
      </div>
      <p class="text-gray-700 dark:text-gray-200">
        Conta in quante parti uguali √® stato diviso l'intero e quante sono le parti colorate. Poi completa come nell'esempio.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-6">
      <!-- Figura 1 - Esempio (2/3) -->
      <div class="bg-white dark:bg-gray-700 rounded-xl p-6 shadow-md">
        <div class="flex justify-center mb-4">
          <div class="dark:bg-white rounded-xl p-1">
            <%= image_tag "bus3_mat_p075_img01.png",
                alt: "Rettangolo diviso in 3 parti",
                class: "w-32 h-auto" %>
          </div>
        </div>
        <div class="space-y-3 text-gray-700 dark:text-gray-200">
          <p class="leading-relaxed">
            ‚Ä¢ L'intero √® diviso in <span class="text-blue-600 dark:text-blue-400 font-bold">3</span> parti uguali. Sono colorate <span class="text-blue-600 dark:text-blue-400 font-bold">2</span> parti su <span class="text-blue-600 dark:text-blue-400 font-bold">3</span>, cio√® <span class="text-blue-600 dark:text-blue-400 font-bold">2/3</span> (due terzi).
          </p>
        </div>
      </div>

      <!-- Figura 2 - Quadrato con triangoli (5 ottavi) -->
      <div class="bg-white dark:bg-gray-700 rounded-xl p-6 shadow-md">
        <div class="flex justify-center mb-4">
          <div class="dark:bg-white rounded-xl p-1">
            <%= image_tag "bus3_mat_p075_img02.png",
                alt: "Quadrato diviso in triangoli",
                class: "w-32 h-auto" %>
          </div>
        </div>
        <div class="space-y-3">
          <p class="text-gray-700 dark:text-gray-200 leading-relaxed">
            ‚Ä¢ L'intero √® diviso in
            <input type="text"
                   data-correct-answer="8"
                   class="inline-block w-12 px-2 py-1 border-2 border-blue-300 dark:border-blue-500 rounded text-center font-bold mx-1 bg-white dark:bg-gray-600 dark:text-white"
                   placeholder="..." />
            parti uguali. Sono colorate
            <input type="text"
                   data-correct-answer="5"
                   class="inline-block w-12 px-2 py-1 border-2 border-blue-300 dark:border-blue-500 rounded text-center font-bold mx-1 bg-white dark:bg-gray-600 dark:text-white"
                   placeholder="..." />
            parti su
            <input type="text"
                   data-correct-answer="8"
                   class="inline-block w-12 px-2 py-1 border-2 border-blue-300 dark:border-blue-500 rounded text-center font-bold mx-1 bg-white dark:bg-gray-600 dark:text-white"
                   placeholder="..." />
            , cio√®
            <input type="text"
                   data-correct-answer="5/8"
                   class="inline-block w-16 px-2 py-1 border-2 border-blue-300 dark:border-blue-500 rounded text-center font-bold mx-1 bg-white dark:bg-gray-600 dark:text-white"
                   placeholder="..." />
            (<input type="text"
                   data-correct-answer="cinque ottavi"
                   class="inline-block w-32 px-2 py-1 border-2 border-blue-300 dark:border-blue-500 rounded text-center mx-1 bg-white dark:bg-gray-600 dark:text-white"
                   placeholder="..." />).
          </p>
        </div>
      </div>

      <!-- Figura 3 - Griglia (6/9) -->
      <div class="bg-white dark:bg-gray-700 rounded-xl p-6 shadow-md">
        <div class="flex justify-center mb-4">
          <div class="dark:bg-white rounded-xl p-1">
            <%= image_tag "bus3_mat_p075_img03.png",
                alt: "Griglia 3x3",
                class: "w-32 h-auto" %>
          </div>
        </div>
        <div class="space-y-3">
          <p class="text-gray-700 dark:text-gray-200 leading-relaxed">
            ‚Ä¢ L'intero √® diviso in
            <input type="text"
                   data-correct-answer="9"
                   class="inline-block w-12 px-2 py-1 border-2 border-blue-300 dark:border-blue-500 rounded text-center font-bold mx-1 bg-white dark:bg-gray-600 dark:text-white"
                   placeholder="..." />
            parti uguali. Sono colorate
            <input type="text"
                   data-correct-answer="6"
                   class="inline-block w-12 px-2 py-1 border-2 border-blue-300 dark:border-blue-500 rounded text-center font-bold mx-1 bg-white dark:bg-gray-600 dark:text-white"
                   placeholder="..." />
            parti su
            <input type="text"
                   data-correct-answer="9"
                   class="inline-block w-12 px-2 py-1 border-2 border-blue-300 dark:border-blue-500 rounded text-center font-bold mx-1 bg-white dark:bg-gray-600 dark:text-white"
                   placeholder="..." />
            , cio√®
            <input type="text"
                   data-correct-answer="6/9"
                   class="inline-block w-16 px-2 py-1 border-2 border-blue-300 dark:border-blue-500 rounded text-center font-bold mx-1 bg-white dark:bg-gray-600 dark:text-white"
                   placeholder="..." />
            (<input type="text"
                   data-correct-answer="sei noni"
                   class="inline-block w-32 px-2 py-1 border-2 border-blue-300 dark:border-blue-500 rounded text-center mx-1 bg-white dark:bg-gray-600 dark:text-white"
                   placeholder="..." />).
          </p>
        </div>
      </div>
    </div>

    <!-- Box informativo -->
    <div class="p-4 bg-[#FFF9E6] dark:bg-yellow-900/30 border-l-4 border-yellow-400 dark:border-yellow-500">
      <div class="flex items-start gap-4">
        <div class="hidden md:block flex-shrink-0">üîç</div>
        <div class="flex-1">
          <p class="font-semibold text-gray-800 dark:text-gray-100 mb-4">Una frazione √® composta da:</p>

          <!-- Grid Desktop (nascosta su mobile) -->
          <div class="hidden md:grid grid-cols-[auto_auto_auto_1fr] gap-x-4 gap-y-3 items-center">
            <!-- Numeratore -->
            <span class="text-blue-600 dark:text-blue-400 font-bold">numeratore</span>
            <span class="font-bold text-blue-600 dark:text-blue-400 text-center">2</span>
            <span class="">‚Üí</span>
            <span class="text-gray-700 dark:text-gray-200">indica quante parti consideri</span>

            <!-- Linea di frazione -->
            <span class="text-gray-600 dark:text-gray-400 font-bold">linea di frazione</span>
            <div class="w-8 h-1 bg-gray-600 dark:bg-gray-400 mx-auto"></div>
            <span class="">‚Üí</span>
            <span class="text-gray-700 dark:text-gray-200">vuol dire che si divide l'intero in parti uguali</span>

            <!-- Denominatore -->
            <span class="text-pink-600 dark:text-pink-400 font-bold">denominatore</span>
            <span class="font-bold text-pink-600 dark:text-pink-400 text-center">5</span>
            <span class="">‚Üí</span>
            <span class="text-gray-700 dark:text-gray-200">indica in quante parti √® stato diviso l'intero</span>
          </div>

          <!-- Layout Mobile (nascosto su desktop) -->
          <div class="md:hidden">
            <!-- Frazione allineata -->
            <div class="grid grid-cols-[auto_auto] gap-x-4 gap-y-3 items-center mb-4">
              <!-- Numeratore -->
              <span class="text-blue-600 dark:text-blue-400 font-bold">numeratore</span>
              <span class="font-bold text-blue-600 dark:text-blue-400 text-center">2</span>

              <!-- Linea di frazione -->
              <span class="text-gray-600 dark:text-gray-400 font-bold">linea di frazione</span>
              <div class="w-8 h-1 bg-gray-600 dark:bg-gray-400 mx-auto"></div>

              <!-- Denominatore -->
              <span class="text-pink-600 dark:text-pink-400 font-bold">denominatore</span>
              <span class="font-bold text-pink-600 dark:text-pink-400 text-center">5</span>
            </div>

            <!-- Spiegazioni sotto -->
            <div class="space-y-2">
              <p class="text-gray-700 dark:text-gray-200">‚Üí <strong>numeratore:</strong> indica quante parti consideri</p>
              <p class="text-gray-700 dark:text-gray-200">‚Üí <strong>linea:</strong> divide l'intero in parti uguali</p>
              <p class="text-gray-700 dark:text-gray-200">‚Üí <strong>denominatore:</strong> indica in quante parti √® diviso l'intero</p>
            </div>
          </div>
        </div>
        <div class="hidden md:block flex-shrink-0">
          <div class="dark:bg-white rounded-xl p-1">
            <%= image_tag "bus3_mat_p075_img04.png",
                alt: "Esempio 2/5",
                class: "w-24 h-auto" %>
          </div>
          <p class="text-center mt-2 text-pink-600 dark:text-pink-400 font-bold">due quinti</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Esercizio 2 - Colora la parte indicata -->
  <div class="p-4 md:p-6 mb-8">
    <div class="flex items-start gap-3 mb-6">
      <div class="bg-red-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0">
        2
      </div>
      <p class="text-gray-700 dark:text-gray-200">
        Colora la parte indicata dalla frazione. <span class="text-blue-600 dark:text-blue-400 font-semibold">Clicca sugli spicchi per colorarli!</span>
      </p>
    </div>

    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 mb-6">
      <!-- Cerchio 1: 4/7 -->
      <div class="flex flex-col items-center">
        <svg viewBox="0 0 120 120" class="w-40 h-40" data-fraction-circles-target="circle" data-target="4">
          <% 7.times do |i| %>
            <% angle = 360.0 / 7 %>
            <% start_angle = i * angle - 90 %>
            <% end_angle = (i + 1) * angle - 90 %>
            <% start_x = 60 + 55 * Math.cos(start_angle * Math::PI / 180) %>
            <% start_y = 60 + 55 * Math.sin(start_angle * Math::PI / 180) %>
            <% end_x = 60 + 55 * Math.cos(end_angle * Math::PI / 180) %>
            <% end_y = 60 + 55 * Math.sin(end_angle * Math::PI / 180) %>
            <path d="M 60,60 L <%= start_x %>,<%= start_y %> A 55,55 0 0,1 <%= end_x %>,<%= end_y %> Z"
                  fill="white"
                  stroke="#06B6D4"
                  stroke-width="2"
                  class="cursor-pointer hover:opacity-80 transition-opacity"
                  data-fraction-circles-target="slice"
                  data-action="click->fraction-circles#toggleSlice" />
          <% end %>
        </svg>
        <div class="flex flex-col items-center mt-2">
          <span class="font-bold text-cyan-600 dark:text-cyan-400">4</span>
          <div class="w-8 h-0.5 bg-gray-600 dark:bg-gray-400 my-1"></div>
          <span class="font-bold text-cyan-600 dark:text-cyan-400">7</span>
        </div>
      </div>

      <!-- Cerchio 2: 5/6 -->
      <div class="flex flex-col items-center">
        <svg viewBox="0 0 120 120" class="w-40 h-40" data-fraction-circles-target="circle" data-target="5">
          <% 6.times do |i| %>
            <% angle = 360.0 / 6 %>
            <% start_angle = i * angle - 90 %>
            <% end_angle = (i + 1) * angle - 90 %>
            <% start_x = 60 + 55 * Math.cos(start_angle * Math::PI / 180) %>
            <% start_y = 60 + 55 * Math.sin(start_angle * Math::PI / 180) %>
            <% end_x = 60 + 55 * Math.cos(end_angle * Math::PI / 180) %>
            <% end_y = 60 + 55 * Math.sin(end_angle * Math::PI / 180) %>
            <path d="M 60,60 L <%= start_x %>,<%= start_y %> A 55,55 0 0,1 <%= end_x %>,<%= end_y %> Z"
                  fill="white"
                  stroke="#06B6D4"
                  stroke-width="2"
                  class="cursor-pointer hover:opacity-80 transition-opacity"
                  data-fraction-circles-target="slice"
                  data-action="click->fraction-circles#toggleSlice" />
          <% end %>
        </svg>
        <div class="flex flex-col items-center mt-2">
          <span class="font-bold text-cyan-600 dark:text-cyan-400">5</span>
          <div class="w-8 h-0.5 bg-gray-600 dark:bg-gray-400 my-1"></div>
          <span class="font-bold text-cyan-600 dark:text-cyan-400">6</span>
        </div>
      </div>

      <!-- Cerchio 3: 3/8 -->
      <div class="flex flex-col items-center">
        <svg viewBox="0 0 120 120" class="w-40 h-40" data-fraction-circles-target="circle" data-target="3">
          <% 8.times do |i| %>
            <% angle = 360.0 / 8 %>
            <% start_angle = i * angle - 90 %>
            <% end_angle = (i + 1) * angle - 90 %>
            <% start_x = 60 + 55 * Math.cos(start_angle * Math::PI / 180) %>
            <% start_y = 60 + 55 * Math.sin(start_angle * Math::PI / 180) %>
            <% end_x = 60 + 55 * Math.cos(end_angle * Math::PI / 180) %>
            <% end_y = 60 + 55 * Math.sin(end_angle * Math::PI / 180) %>
            <path d="M 60,60 L <%= start_x %>,<%= start_y %> A 55,55 0 0,1 <%= end_x %>,<%= end_y %> Z"
                  fill="white"
                  stroke="#06B6D4"
                  stroke-width="2"
                  class="cursor-pointer hover:opacity-80 transition-opacity"
                  data-fraction-circles-target="slice"
                  data-action="click->fraction-circles#toggleSlice" />
          <% end %>
        </svg>
        <div class="flex flex-col items-center mt-2">
          <span class="font-bold text-cyan-600 dark:text-cyan-400">3</span>
          <div class="w-8 h-0.5 bg-gray-600 dark:bg-gray-400 my-1"></div>
          <span class="font-bold text-cyan-600 dark:text-cyan-400">8</span>
        </div>
      </div>

      <!-- Cerchio 4: 3/5 -->
      <div class="flex flex-col items-center">
        <svg viewBox="0 0 120 120" class="w-40 h-40" data-fraction-circles-target="circle" data-target="3">
          <% 5.times do |i| %>
            <% angle = 360.0 / 5 %>
            <% start_angle = i * angle - 90 %>
            <% end_angle = (i + 1) * angle - 90 %>
            <% start_x = 60 + 55 * Math.cos(start_angle * Math::PI / 180) %>
            <% start_y = 60 + 55 * Math.sin(start_angle * Math::PI / 180) %>
            <% end_x = 60 + 55 * Math.cos(end_angle * Math::PI / 180) %>
            <% end_y = 60 + 55 * Math.sin(end_angle * Math::PI / 180) %>
            <path d="M 60,60 L <%= start_x %>,<%= start_y %> A 55,55 0 0,1 <%= end_x %>,<%= end_y %> Z"
                  fill="white"
                  stroke="#06B6D4"
                  stroke-width="2"
                  class="cursor-pointer hover:opacity-80 transition-opacity"
                  data-fraction-circles-target="slice"
                  data-action="click->fraction-circles#toggleSlice" />
          <% end %>
        </svg>
        <div class="flex flex-col items-center mt-2">
          <span class="font-bold text-cyan-600 dark:text-cyan-400">3</span>
          <div class="w-8 h-0.5 bg-gray-600 dark:bg-gray-400 my-1"></div>
          <span class="font-bold text-cyan-600 dark:text-cyan-400">5</span>
        </div>
      </div>
    </div>

    <!-- Feedback -->
    <div data-fraction-circles-target="feedback"></div>

    <!-- Pulsanti controllo -->
    <div class="flex flex-wrap gap-4 justify-center mt-6">
      <button data-action="click->fraction-circles#checkAnswers"
              class="bg-cyan-500 hover:bg-cyan-600 text-white font-bold py-3 px-8 rounded-full shadow-lg transition-colors">
        Controlla Esercizio 2
      </button>
      <button data-action="click->fraction-circles#showSolutions"
              class="bg-cyan-400 hover:bg-cyan-500 text-white font-bold py-3 px-8 rounded-full shadow-lg transition-colors">
        Mostra Soluzioni
      </button>
      <button data-action="click->fraction-circles#reset"
              class="border-2 border-cyan-500 text-cyan-600 dark:text-cyan-400 hover:bg-cyan-50 dark:hover:bg-cyan-900/30 bg-white dark:bg-gray-700 font-bold py-3 px-8 rounded-full shadow-lg transition-colors">
        Ricomincia
      </button>
    </div>

    <div class="bg-cyan-50 dark:bg-cyan-900/30 rounded-lg p-4 border-l-4 border-cyan-400 dark:border-cyan-500 mt-6">
      <p class="text-gray-700 dark:text-gray-200">
        üí° <span class="font-semibold">Suggerimento:</span> Clicca sugli spicchi per colorarli. Per colorare <span class="font-bold">4/7</span>, clicca su 4 spicchi dei 7 disponibili.
      </p>
    </div>
  </div>

  <!-- Esercizio 3 - Scrivi la frazione in cifre -->
  <div class="p-4 md:p-6 mb-8">
    <div class="flex items-start gap-3 mb-6">
      <div class="bg-red-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0">
        3
      </div>
      <p class="text-gray-700 dark:text-gray-200">
        Scrivi la frazione in cifre.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-4xl mx-auto">
      <!-- Sette decimi -->
      <div class="bg-gray-50 dark:bg-gray-800 rounded p-4">
        <p class="text-center text-gray-700 dark:text-gray-200 mb-4">sette decimi</p>
        <div class="flex flex-col items-center justify-center">
          <input type="text"
                 data-correct-answer="7"
                 class="w-16 px-3 py-3 border-2 border-blue-300 dark:border-blue-500 rounded text-center font-bold bg-white dark:bg-gray-700 dark:text-white"
                 placeholder="" />
          <div class="w-16 h-0.5 bg-gray-600 dark:bg-gray-400 my-2"></div>
          <input type="text"
                 data-correct-answer="10"
                 class="w-16 px-3 py-3 border-2 border-blue-300 dark:border-blue-500 rounded text-center font-bold bg-white dark:bg-gray-700 dark:text-white"
                 placeholder="" />
        </div>
      </div>

      <!-- Tre sesti -->
      <div class="bg-gray-50 dark:bg-gray-800 rounded p-4">
        <p class="text-center text-gray-700 dark:text-gray-200 mb-4">tre sesti</p>
        <div class="flex flex-col items-center justify-center">
          <input type="text"
                 data-correct-answer="3"
                 class="w-16 px-3 py-3 border-2 border-green-300 dark:border-green-500 rounded text-center font-bold bg-white dark:bg-gray-700 dark:text-white"
                 placeholder="" />
          <div class="w-16 h-0.5 bg-gray-600 dark:bg-gray-400 my-2"></div>
          <input type="text"
                 data-correct-answer="6"
                 class="w-16 px-3 py-3 border-2 border-green-300 dark:border-green-500 rounded text-center font-bold bg-white dark:bg-gray-700 dark:text-white"
                 placeholder="" />
        </div>
      </div>

      <!-- Cinque settimi -->
      <div class="bg-gray-50 dark:bg-gray-800 rounded p-4">
        <p class="text-center text-gray-700 dark:text-gray-200 mb-4">cinque settimi</p>
        <div class="flex flex-col items-center justify-center">
          <input type="text"
                 data-correct-answer="5"
                 class="w-16 px-3 py-3 border-2 border-purple-300 dark:border-purple-500 rounded text-center font-bold bg-white dark:bg-gray-700 dark:text-white"
                 placeholder="" />
          <div class="w-16 h-0.5 bg-gray-600 dark:bg-gray-400 my-2"></div>
          <input type="text"
                 data-correct-answer="7"
                 class="w-16 px-3 py-3 border-2 border-purple-300 dark:border-purple-500 rounded text-center font-bold bg-white dark:bg-gray-700 dark:text-white"
                 placeholder="" />
        </div>
      </div>
    </div>
  </div>

  <!-- Esercizio 4 - Scrivi la frazione in lettere -->
  <div class="p-4 md:p-6 mb-8">
    <div class="flex items-start gap-3 mb-6">
      <div class="bg-red-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0">
        4
      </div>
      <p class="text-gray-700 dark:text-gray-200">
        Scrivi la frazione in lettere.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-3xl mx-auto">
      <!-- 6/9 -->
      <div class="bg-gray-50 dark:bg-gray-800 rounded p-4">
        <div class="flex flex-col items-center justify-center mb-4">
          <span class="font-bold text-gray-800 dark:text-gray-100">6</span>
          <div class="w-12 h-1 bg-gray-600 dark:bg-gray-400 my-2"></div>
          <span class="font-bold text-gray-800 dark:text-gray-100">9</span>
        </div>
        <input type="text"
               data-correct-answer="sei noni"
               class="w-full px-4 py-3 border-2 border-orange-300 dark:border-orange-500 rounded text-center font-semibold bg-white dark:bg-gray-700 dark:text-white"
               placeholder="Scrivi in lettere..." />
      </div>

      <!-- 1/4 -->
      <div class="bg-gray-50 dark:bg-gray-800 rounded p-4">
        <div class="flex flex-col items-center justify-center mb-4">
          <span class="font-bold text-gray-800 dark:text-gray-100">1</span>
          <div class="w-12 h-1 bg-gray-600 dark:bg-gray-400 my-2"></div>
          <span class="font-bold text-gray-800 dark:text-gray-100">4</span>
        </div>
        <input type="text"
               data-correct-answer="un quarto"
               class="w-full px-4 py-3 border-2 border-cyan-300 dark:border-cyan-500 rounded text-center font-semibold bg-white dark:bg-gray-700 dark:text-white"
               placeholder="Scrivi in lettere..." />
      </div>
    </div>
  </div>

  <!-- Footer con controlli -->
  <%= render 'shared/exercise_controls', color: 'blue' %>
</div>
