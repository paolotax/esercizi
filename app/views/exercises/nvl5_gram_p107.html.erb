          <div class="flex gap-4">
            <label class="flex items-center gap-2 cursor-pointer">
              <input type="radio" name="ex2_5" value="O" class="w-4 h-4">
              <span class="font-semibold">O</span>
            </label>
            <label class="flex items-center gap-2 cursor-pointer">
              <input type="radio" name="ex2_5" value="T" data-correct-answer="T" class="w-4 h-4">
              <span class="font-semibold">T</span>
            </label>
          </div>
        </div>
