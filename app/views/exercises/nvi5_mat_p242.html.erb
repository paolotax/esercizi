    <!-- Box teoria: Formule del rettangolo -->
    <div class="p-4 bg-custom-blue rounded-lg">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 items-center">
        <!-- Immagine rettangolo -->
        <div class="flex justify-center">
          <%= image_tag "nvi5_mat/p242/p242_01.jpg", alt: "Rettangolo", class: "max-w-[150px]" %>
        </div>

        <!-- Formule -->
        <div class="md:col-span-2">
          <div class="grid grid-cols-2 gap-4">
            <div>
              <p class="font-bold text-cyan-600 mb-1">Perimetro</p>
              <p class="text-gray-700">P = (b + h) × 2</p>
              <p class="text-gray-700 mt-2">Formule inverse:</p>
              <p class="text-gray-700">b = (P : 2) – h</p>
              <p class="text-gray-700">h = (P : 2) – b</p>
            </div>
            <div>
              <p class="font-bold text-cyan-600 mb-1">Area</p>
              <p class="text-gray-700">A = b × h</p>
              <p class="text-gray-700 mt-2">Formule inverse:</p>
              <p class="text-gray-700">b = A : h</p>
              <p class="text-gray-700">h = A : b</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Esercizio 1: IMPARARE TUTTI -->
