    <div class="overflow-x-auto">
      <table class="w-full rounded-lg overflow-hidden">
        <thead>
          <tr class="bg-<%= @pagina.base_color %>-100">
            <th class="px-3 py-2 text-left text-sm md:text-base font-bold text-gray-800">Termine tecnico</th>
            <th class="px-3 py-2 text-left text-sm md:text-base font-bold text-gray-800">Linguaggio...</th>
            <th class="px-3 py-2 text-left text-sm md:text-base font-bold text-gray-800">Significato</th>
          </tr>
        </thead>
        <tbody class="bg-white">
          <% technical_terms.each do |item| %>
            <tr>
              <td class="border-b border-<%= @pagina.base_color %>-200 px-3 py-3 font-semibold text-<%= @pagina.base_color %>-700"><%= item[:term] %></td>
              <td class="border-b border-<%= @pagina.base_color %>-200 px-3 py-3 text-gray-700"><%= item[:sector] %></td>
              <td class="border-b border-<%= @pagina.base_color %>-200 px-3 py-3 text-gray-500">.......................................</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Exercise 5: Write geography terms -->
