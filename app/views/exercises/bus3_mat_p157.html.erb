<% content_for :titolo, "#{@pagina.titolo} - #{@pagina.numero}" %>

<div class="max-w-7xl mx-auto p-3 md:p-6 bg-white font-mono text-base lg:text-lg xl:text-xl"
     data-controller="exercise-checker page-viewer text-toggle font-controls"
     data-page-viewer-image-url-value="<%= asset_path('bus3_mat/p157/page.png') %>"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <!-- Header -->
  <%= render 'shared/page_header', pagina: @pagina %>

  <!-- Esercizio 1 -->
  <div class="mb-12" data-controller="fill-blanks auto-advance">
    <div class="flex items-start gap-3 mb-6">
      <div class="bg-red-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0">
        1
      </div>
      <p class="text-gray-700">
        <strong>Osserva i disegni, completa il testo dei problemi e risolvi.</strong>
      </p>
    </div>

    <!-- Problema A - Supermercato -->
    <div class="bg-gray-50 border border-gray-300 rounded p-4 mb-8">
      <div class="flex items-center gap-2 mb-4">
        <span class="bg-cyan-500 text-white font-bold px-3 py-1 rounded">A</span>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Immagine bottiglie -->
        <div class="flex justify-center">
          <%= image_tag "bus3_mat/p157/p157_01.jpg", alt: "Scaffali con bottiglie di aranciata e acqua", class: "max-w-full rounded" %>
        </div>

        <!-- Problemi -->
        <div class="space-y-6">
          <!-- Primo problema -->
          <div class="bg-white p-4 rounded border border-gray-200">
            <p class="mb-3">
              <span class="text-red-500">•</span> Il commesso di un supermercato ieri ha messo sugli scaffali
              <input type="text" data-fill-blanks-target="input" data-correct-answer="16"
                     class="w-10 px-1 py-1 border-b-2 border-dotted border-gray-400 text-center bg-white" inputmode="numeric">
              bottiglie di aranciata e
              <input type="text" data-fill-blanks-target="input" data-correct-answer="16"
                     class="w-10 px-1 py-1 border-b-2 border-dotted border-gray-400 text-center bg-white" inputmode="numeric">
              bottiglie d'acqua.
            </p>
            <p class="mb-2">
              <strong class="text-cyan-600">Domanda:</strong>
              <span class="text-gray-500 italic">Quante bottiglie in tutto?</span>
            </p>
            <div class="flex items-center gap-2 mb-2 flex-wrap">
              <strong class="text-cyan-600">Operazione →</strong>
              <input type="text" data-fill-blanks-target="input" data-correct-answer="16"
                     class="w-10 px-1 py-1 border-b-2 border-dotted border-gray-400 text-center bg-white" inputmode="numeric">
              <span class="border border-gray-400 px-2">+</span>
              <input type="text" data-fill-blanks-target="input" data-correct-answer="16"
                     class="w-10 px-1 py-1 border-b-2 border-dotted border-gray-400 text-center bg-white" inputmode="numeric">
              <span>=</span>
              <input type="text" data-fill-blanks-target="input" data-correct-answer="32"
                     class="w-10 px-1 py-1 border-b-2 border-dotted border-gray-400 text-center bg-white" inputmode="numeric">
            </div>
            <p>
              <strong class="text-cyan-600">Risposta:</strong>
              <input type="text" data-fill-blanks-target="input" data-correct-answer="32"
                     class="w-10 px-1 py-1 border-b-2 border-dotted border-gray-400 text-center bg-white" inputmode="numeric">
              bottiglie.
            </p>
          </div>

          <!-- Secondo problema -->
          <div class="bg-white p-4 rounded border border-gray-200">
            <p class="mb-3">
              <span class="text-red-500">•</span> La sera sugli scaffali sono rimaste solo 7 bottiglie.
            </p>
            <p class="mb-2">
              <strong class="text-cyan-600">Domanda:</strong>
              <span class="text-gray-500 italic">Quante bottiglie sono state vendute?</span>
            </p>
            <div class="flex items-center gap-2 mb-2 flex-wrap">
              <strong class="text-cyan-600">Operazione →</strong>
              <input type="text" data-fill-blanks-target="input" data-correct-answer="32"
                     class="w-10 px-1 py-1 border-b-2 border-dotted border-gray-400 text-center bg-white" inputmode="numeric">
              <span class="border border-gray-400 px-2">−</span>
              <input type="text" data-fill-blanks-target="input" data-correct-answer="7"
                     class="w-10 px-1 py-1 border-b-2 border-dotted border-gray-400 text-center bg-white" inputmode="numeric">
              <span>=</span>
              <input type="text" data-fill-blanks-target="input" data-correct-answer="25"
                     class="w-10 px-1 py-1 border-b-2 border-dotted border-gray-400 text-center bg-white" inputmode="numeric">
            </div>
            <p>
              <strong class="text-cyan-600">Risposta:</strong>
              <input type="text" data-fill-blanks-target="input" data-correct-answer="25"
                     class="w-10 px-1 py-1 border-b-2 border-dotted border-gray-400 text-center bg-white" inputmode="numeric">
              bottiglie.
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Problema B - Negozio stoffe -->
    <div class="bg-gray-50 border border-gray-300 rounded p-4">
      <div class="flex items-center gap-2 mb-4">
        <span class="bg-cyan-500 text-white font-bold px-3 py-1 rounded">B</span>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Problemi -->
        <div class="space-y-6">
          <!-- Primo problema -->
          <div class="bg-white p-4 rounded border border-gray-200">
            <p class="mb-3">
              <span class="text-red-500">•</span> In un negozio Roberta spende €
              <input type="text" data-fill-blanks-target="input" data-correct-answer="57"
                     class="w-10 px-1 py-1 border-b-2 border-dotted border-gray-400 text-center bg-white" inputmode="numeric">
              per della stoffa gialla e €
              <input type="text" data-fill-blanks-target="input" data-correct-answer="38"
                     class="w-10 px-1 py-1 border-b-2 border-dotted border-gray-400 text-center bg-white" inputmode="numeric">
              per della stoffa viola.
            </p>
            <p class="mb-2">
              <strong class="text-cyan-600">Domanda:</strong>
              <span class="text-gray-500 italic">Quanto spende in tutto?</span>
            </p>
            <div class="flex items-center gap-2 mb-2 flex-wrap">
              <strong class="text-cyan-600">Operazione →</strong>
              <input type="text" data-fill-blanks-target="input" data-correct-answer="57"
                     class="w-10 px-1 py-1 border-b-2 border-dotted border-gray-400 text-center bg-white" inputmode="numeric">
              <span class="border border-gray-400 px-2">+</span>
              <input type="text" data-fill-blanks-target="input" data-correct-answer="38"
                     class="w-10 px-1 py-1 border-b-2 border-dotted border-gray-400 text-center bg-white" inputmode="numeric">
              <span>=</span>
              <input type="text" data-fill-blanks-target="input" data-correct-answer="95"
                     class="w-10 px-1 py-1 border-b-2 border-dotted border-gray-400 text-center bg-white" inputmode="numeric">
            </div>
            <p>
              <strong class="text-cyan-600">Risposta:</strong>
              €
              <input type="text" data-fill-blanks-target="input" data-correct-answer="95"
                     class="w-10 px-1 py-1 border-b-2 border-dotted border-gray-400 text-center bg-white" inputmode="numeric">
            </p>
          </div>

          <!-- Secondo problema -->
          <div class="bg-white p-4 rounded border border-gray-200">
            <p class="mb-3">
              <span class="text-red-500">•</span> Roberta dà al negoziante €
              <input type="text" data-fill-blanks-target="input" data-correct-answer="100"
                     class="w-12 px-1 py-1 border-b-2 border-dotted border-gray-400 text-center bg-white" inputmode="numeric">.
            </p>
            <p class="mb-2">
              <strong class="text-cyan-600">Domanda:</strong>
              <span class="text-gray-500 italic">Quanto riceve di resto?</span>
            </p>
            <div class="flex items-center gap-2 mb-2 flex-wrap">
              <strong class="text-cyan-600">Operazione →</strong>
              <input type="text" data-fill-blanks-target="input" data-correct-answer="100"
                     class="w-12 px-1 py-1 border-b-2 border-dotted border-gray-400 text-center bg-white" inputmode="numeric">
              <span class="border border-gray-400 px-2">−</span>
              <input type="text" data-fill-blanks-target="input" data-correct-answer="95"
                     class="w-10 px-1 py-1 border-b-2 border-dotted border-gray-400 text-center bg-white" inputmode="numeric">
              <span>=</span>
              <input type="text" data-fill-blanks-target="input" data-correct-answer="5"
                     class="w-10 px-1 py-1 border-b-2 border-dotted border-gray-400 text-center bg-white" inputmode="numeric">
            </div>
            <p>
              <strong class="text-cyan-600">Risposta:</strong>
              €
              <input type="text" data-fill-blanks-target="input" data-correct-answer="5"
                     class="w-10 px-1 py-1 border-b-2 border-dotted border-gray-400 text-center bg-white" inputmode="numeric">
            </p>
          </div>
        </div>

        <!-- Immagine negozio -->
        <div class="flex justify-center items-center">
          <%= image_tag "bus3_mat/p157/p157_02.jpg", alt: "Roberta al negozio di stoffe", class: "max-w-full rounded" %>
        </div>
      </div>
    </div>

  </div>

  <!-- Footer con controlli -->
  <%= render 'shared/exercise_controls' %>
</div>
