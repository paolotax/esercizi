<% content_for :titolo, "#{@pagina.titolo} - #{@pagina.numero}" %>

<div class="max-w-7xl mx-auto p-3 md:p-6 bg-white font-mono"
     data-controller="exercise-checker page-viewer text-toggle font-controls"
     data-page-viewer-image-url-value="<%= asset_path('bus3_mat/p182/page.png') %>"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <!-- Header -->
  <%= render 'shared/page_header', pagina: @pagina %>

  <!-- Esercizio 5 -->
  <div class="mb-10">
    <div class="flex items-start gap-3 mb-4">
      <div class="bg-cyan-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0">
        5
      </div>
      <p class="text-gray-700">
        <strong>Cerchia e colora gli angoli retti in questi poligoni.</strong>
      </p>
    </div>

    <div class="flex justify-center">
      <%= image_tag "bus3_mat/p182/p182_01.jpg", alt: "Poligoni con angoli retti", class: "max-w-full rounded" %>
    </div>
  </div>

  <!-- Esercizio 6 -->
  <div class="mb-10">
    <div class="flex items-start gap-3 mb-4">
      <div class="bg-cyan-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0">
        6
      </div>
      <p class="text-gray-700">
        <strong>Completa con i nomi corrispondenti.</strong>
      </p>
    </div>

    <div class="flex justify-center">
      <%= image_tag "bus3_mat/p182/p182_01.jpg", alt: "Triangolo con elementi", class: "max-w-full rounded" %>
    </div>
  </div>

  <!-- Esercizio 7 -->
  <div class="mb-10" data-controller="fill-blanks auto-advance">
    <div class="flex items-start gap-3 mb-4">
      <div class="bg-cyan-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0">
        7
      </div>
      <p class="text-gray-700">
        <strong>Osserva e completa.</strong>
      </p>
    </div>

    <div class="flex justify-center mb-4">
      <%= image_tag "bus3_mat/p182/p182_02.jpg", alt: "Figure geometriche", class: "max-w-md rounded" %>
    </div>

    <div class="space-y-3">
      <p>• Un triangolo ha <input type="text" data-fill-blanks-target="input" data-correct-answer="3"
             class="w-12 px-2 py-1 border-b-2 border-dotted border-gray-400 text-center bg-white" inputmode="numeric"> lati, <input type="text" data-fill-blanks-target="input" data-correct-answer="3"
             class="w-12 px-2 py-1 border-b-2 border-dotted border-gray-400 text-center bg-white" inputmode="numeric"> angoli e <input type="text" data-fill-blanks-target="input" data-correct-answer="3"
             class="w-12 px-2 py-1 border-b-2 border-dotted border-gray-400 text-center bg-white" inputmode="numeric"> vertici.</p>
      <p>• Un quadrato ha <input type="text" data-fill-blanks-target="input" data-correct-answer="4 lati, 4 angoli e 4 vertici"
             class="w-64 px-2 py-1 border-b-2 border-dotted border-gray-400 text-center bg-white">.</p>
      <p>• Un rettangolo ha <input type="text" data-fill-blanks-target="input" data-correct-answer="4 lati, 4 angoli e 4 vertici"
             class="w-64 px-2 py-1 border-b-2 border-dotted border-gray-400 text-center bg-white">.</p>
      <p>• Un pentagono ha <input type="text" data-fill-blanks-target="input" data-correct-answer="5 lati, 5 angoli e 5 vertici"
             class="w-64 px-2 py-1 border-b-2 border-dotted border-gray-400 text-center bg-white">.</p>
    </div>
  </div>

  <!-- Esercizio 8 -->
  <div class="mb-10">
    <div class="flex items-start gap-3 mb-4">
      <div class="bg-cyan-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0">
        8
      </div>
      <p class="text-gray-700">
        <strong>Calcola perimetro e area di questi poligoni.</strong>
      </p>
    </div>

    <div class="flex justify-center">
      <%= image_tag "bus3_mat/p182/p182_02.jpg", alt: "Poligoni su quadrettatura", class: "max-w-full rounded" %>
    </div>
  </div>

  <!-- Footer con controlli -->
  <%= render 'shared/exercise_controls' %>
</div>
