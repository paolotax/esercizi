<div class="max-w-6xl mx-auto p-3 md:p-8 bg-white" data-controller="exercise-checker">

  <%= render 'shared/page_header', pagina: @pagina %>

  <!-- Exercise 5: Defective nouns in sentences -->
  <div class="bg-white p-4 md:p-6 pb-8" data-controller="fill-blanks">
    <h2 class="text-lg md:text-xl font-bold mb-4 flex items-center gap-2">
      <span class="flex-shrink-0 bg-<%= @pagina.base_color %>-500 text-white rounded-full w-8 h-8 md:w-10 md:h-10 inline-flex items-center justify-center">5</span>
      Scegli tra i nomi difettivi (paraggi - burro - stoviglie - riso - forbici - morbillo) quello adatto a ciascuna frase; indica se è solo singolare (SS) o solo plurale (SP).
    </h2>

    <% defective_sentences = [
      { text: "Trovi sul banco", answer: "le forbici", type: "SP", suffix: "per tagliare la carta." },
      { text: "Per fare la crostata aggiungi", answer: "il burro", type: "SS", suffix: "allo zucchero con delicatezza." },
      { text: "È tornato dalle vacanze pieno di pallini rossi: ha", answer: "il morbillo", type: "SS" },
      { text: "Per un buon risotto serve anzitutto del", answer: "riso", type: "SS", suffix: "di qualità." },
      { text: "Togli", answer: "le stoviglie", type: "SP", suffix: "pulite dal ripiano e mettile a posto." },
      { text: "Controlla se ci sono cani nei", answer: "paraggi", type: "SP" }
    ] %>

    <div class="space-y-3 text-base md:text-lg">
      <% defective_sentences.each_with_index do |sentence, index| %>
        <div class="rounded-lg p-3">
          <div class="flex flex-wrap items-center gap-2 mb-2">
            <span class="text-<%= @pagina.base_color %>-500">•</span>
            <span class="text-gray-700"><%= sentence[:text] %></span>
            <input type="text"
                   class="w-32 border-b-2 border-dotted border-<%= @pagina.base_color %>-500 bg-white text-right px-2 focus:outline-none focus:border-<%= @pagina.base_color %>-700"
                   data-fill-blanks-target="input"
                   data-answer="<%= sentence[:answer] %>"
                   data-correct-answer="<%= sentence[:answer] %>"
                   maxlength="30">
            <% if sentence[:suffix] %>
              <span class="text-gray-600 text-sm"><%= sentence[:suffix] %></span>
            <% end %>
          </div>
          <div class="flex gap-4 ml-6">
            <label class="flex items-center gap-2 cursor-pointer">
              <input type="checkbox" name="type<%= index %>_ss" value="SS" data-correct-answer="<%= sentence[:type] == 'SS' ? 'checked' : 'unchecked' %>" class="w-4 h-4">
              <span class="text-sm">SS</span>
            </label>
            <label class="flex items-center gap-2 cursor-pointer">
              <input type="checkbox" name="type<%= index %>_sp" value="SP" data-correct-answer="<%= sentence[:type] == 'SP' ? 'checked' : 'unchecked' %>" class="w-4 h-4">
              <span class="text-sm">SP</span>
            </label>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Exercise 6: Sovrabbondanti -->
  <div class="bg-white p-4 md:p-6 pb-8" data-controller="exercise-group">
    <h2 class="text-lg md:text-xl font-bold mb-4 flex items-center gap-2">
      <span class="flex-shrink-0 bg-<%= @pagina.base_color %>-500 text-white rounded-full w-8 h-8 md:w-10 md:h-10 inline-flex items-center justify-center">6</span>
      Collega ciascun plurale dei nomi sovrabbondanti al suo uso corretto.
    </h2>

    <% sovrabbondanti = [
      { singular: "il braccio", plural1: "i bracci", meaning1: "di una gru", plural2: "le braccia", meaning2: "del corpo umano" },
      { singular: "il gesto", plural1: "i gesti", meaning1: "con le mani", plural2: "le gesta", meaning2: "di un eroe" },
      { singular: "l'osso", plural1: "gli ossi", meaning1: "da dare ai cani", plural2: "le ossa", meaning2: "del corpo umano" },
      { singular: "il ciglio", plural1: "i cigli", meaning1: "delle strade", plural2: "le ciglia", meaning2: "degli occhi" },
      { singular: "il muro", plural1: "i muri", meaning1: "di una casa", plural2: "le mura", meaning2: "di una città" },
      { singular: "il labbro", plural1: "i labbri", meaning1: "di una ferita", plural2: "le labbra", meaning2: "della bocca" }
    ] %>

    <div class="space-y-4 text-base md:text-lg">
      <% sovrabbondanti.each do |noun| %>
        <div class="rounded-lg p-3">
          <div class="font-bold text-<%= @pagina.base_color %>-700 mb-2"><span class="text-<%= @pagina.base_color %>-500">•</span> <%= noun[:singular] %></div>
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-3 ml-6">
            <div class="bg-<%= @pagina.base_color %>-50 rounded-lg p-2">
              <span class="font-semibold"><%= noun[:plural1] %></span>
              <span class="text-gray-600"> (<%= noun[:meaning1] %>)</span>
            </div>
            <div class="bg-<%= @pagina.base_color %>-50 rounded-lg p-2">
              <span class="font-semibold"><%= noun[:plural2] %></span>
              <span class="text-gray-600"> (<%= noun[:meaning2] %>)</span>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Exercise 7: Complete sentences with correct plural -->
  <div class="bg-white p-4 md:p-6 pb-8" data-controller="exercise-group">
    <h2 class="text-lg md:text-xl font-bold mb-4 flex items-center gap-2">
      <span class="flex-shrink-0 bg-<%= @pagina.base_color %>-500 text-white rounded-full w-8 h-8 md:w-10 md:h-10 inline-flex items-center justify-center">7</span>
      Completa ogni frase con il plurale corretto.
    </h2>

    <% plural_sentences = [
      { text: "Dopo il pranzo non restavano che", answer: "gli ossi", options: ["gli ossi", "le ossa"], continuation: "da dare ai cani." },
      { text: "Quel nuotatore non ha gambe molto potenti, ma ha", answer: "le braccia", options: ["i bracci", "le braccia"], continuation: "forti." },
      { text: "", answer: "le mura", options: ["i muri", "le mura"], continuation: "della città di Ferrara avevano scopo difensivo." },
      { text: "Alcune gocce gli erano rimaste tra", answer: "le ciglia", options: ["i cigli", "le ciglia"], continuation: ": forse erano lacrime." }
    ] %>

    <div class="space-y-3 text-base md:text-lg">
      <% plural_sentences.each_with_index do |sentence, index| %>
        <div class="rounded-lg p-3 flex flex-wrap items-center gap-2">
          <span class="text-<%= @pagina.base_color %>-500">•</span>
          <% if sentence[:text].present? %>
            <span class="text-gray-700"><%= sentence[:text] %></span>
          <% end %>
          <select class="border-2 border-<%= @pagina.base_color %>-300 rounded-lg px-3 py-1 focus:outline-none focus:border-<%= @pagina.base_color %>-500"
                  data-correct-answer="<%= sentence[:answer] %>">
            <option value="">Scegli...</option>
            <% sentence[:options].each do |option| %>
              <option value="<%= option %>"><%= option %></option>
            <% end %>
          </select>
          <span class="text-gray-700"><%= sentence[:continuation] %></span>
        </div>
      <% end %>
    </div>
  </div>

  <div class="text-right text-sm text-gray-500 mb-6">
    Esercizi pp. <%= link_to "146", pagina_path("nvl5_gram_p146"), class: "text-gray-600 hover:text-gray-800 underline" %>, <%= link_to "147", pagina_path("nvl5_gram_p147"), class: "text-gray-600 hover:text-gray-800 underline" %>, <%= link_to "148", pagina_path("nvl5_gram_p148"), class: "text-gray-600 hover:text-gray-800 underline" %>, <%= link_to "153", pagina_path("nvl5_gram_p153"), class: "text-gray-600 hover:text-gray-800 underline" %>
  </div>

  <%= render 'shared/exercise_controls' %>
</div>
