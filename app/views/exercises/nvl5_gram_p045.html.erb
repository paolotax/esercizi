<div class="max-w-6xl mx-auto p-3 md:p-8 bg-gradient-to-br from-teal-50 via-white to-cyan-50 rounded-3xl shadow-xl" data-controller="exercise-checker">

  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-start sm:items-center justify-between gap-4 mb-4">
      <div class="flex flex-col-reverse sm:flex-row items-start sm:items-center gap-2 sm:gap-4">
        <div class="bg-teal-500 text-white text-md sm:text-xl px-2 sm:px-4 py-1.5 sm:py-2 rounded-lg font-bold">
          MORFOLOGIA
        </div>
        <h1 class="text-2xl sm:text-3xl font-bold text-teal-600">Il numero dei nomi (Parte 2)</h1>
      </div>
      <div class="flex-shrink-0 bg-teal-600 text-white rounded-full w-10 h-10 sm:w-12 sm:h-12 flex items-center justify-center font-bold text-lg sm:text-xl">
        45
      </div>
    </div>
  </div>

  <!-- Exercise 5: Defective nouns in sentences -->
  <div class="mb-6 bg-white rounded-2xl border-4 border-blue-200 shadow-2xl p-4 md:p-6" data-controller="fill-blanks">
    <h2 class="text-lg md:text-xl font-bold text-blue-700 mb-4">
      <span class="font-bold">5</span> Scegli tra i nomi difettivi (paraggi • burro • stoviglie • riso • forbici • morbillo) quello adatto a ciascuna frase; se serve, aggiungi l'articolo e indica se è solo singolare (SS) o solo plurale (SP).
    </h2>

    <% defective_sentences = [
      { text: "Trovi sul banco", answer: "le forbici", type: "SP" },
      { text: "Per fare la crostata aggiungi", answer: "il burro", type: "SS" },
      { text: "È tornato dalle vacanze pieno di pallini rossi: ha", answer: "il morbillo", type: "SS" },
      { text: "Per un buon risotto serve anzitutto del", answer: "riso", type: "SS" },
      { text: "Togli", answer: "le stoviglie", type: "SP" },
      { text: "Controlla se ci sono cani nei", answer: "paraggi", type: "SP" }
    ] %>

    <div class="space-y-3 text-base md:text-lg">
      <% defective_sentences.each_with_index do |sentence, index| %>
        <div class="bg-blue-50 border-2 border-blue-200 rounded-xl px-3 py-3">
          <div class="flex flex-wrap items-center gap-2 mb-2">
            <span class="text-gray-700">- <%= sentence[:text] %></span>
            <input type="text"
                   class="border-b-2 border-blue-500 bg-transparent px-2 py-1 focus:outline-none focus:border-blue-700 min-w-[150px]"
                   data-fill-blanks-target="input"
                   data-answer="<%= sentence[:answer] %>"
                   data-correct-answer="<%= sentence[:answer] %>"
                   placeholder="........................"
                   maxlength="30">
            <% if index == 0 %>
              <span class="text-gray-600 text-sm">per tagliare la carta.</span>
            <% elsif index == 1 %>
              <span class="text-gray-600 text-sm">allo zucchero con delicatezza.</span>
            <% elsif index == 3 %>
              <span class="text-gray-600 text-sm">di qualità.</span>
            <% elsif index == 4 %>
              <span class="text-gray-600 text-sm">pulite dal ripiano e mettile a posto.</span>
            <% end %>
          </div>
          <div class="flex gap-4 mt-2">
            <label class="flex items-center gap-2 cursor-pointer">
              <input type="checkbox" name="type<%= index %>_ss" value="SS" data-correct-answer="<%= sentence[:type] == 'SS' ? 'checked' : 'unchecked' %>" class="w-4 h-4">
              <span class="text-sm">SS</span>
            </label>
            <label class="flex items-center gap-2 cursor-pointer">
              <input type="checkbox" name="type<%= index %>_sp" value="SP" data-correct-answer="<%= sentence[:type] == 'SP' ? 'checked' : 'unchecked' %>" class="w-4 h-4">
              <span class="text-sm">SP</span>
            </label>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Exercise 6: Sovrabbondanti - match plurals to meanings -->
  <div class="mb-6 bg-white rounded-2xl border-4 border-purple-200 shadow-2xl p-4 md:p-6" data-controller="exercise-group">
    <h2 class="text-lg md:text-xl font-bold text-purple-700 mb-3">
      <span class="font-bold">6</span> Collega ciascun plurale dei nomi sovrabbondanti al suo uso corretto.
    </h2>

    <% sovrabbondanti = [
      { singular: "il braccio", plural1: "i bracci", meaning1: "di una gru", plural2: "le braccia", meaning2: "del corpo umano" },
      { singular: "il gesto", plural1: "i gesti", meaning1: "con le mani", plural2: "le gesta", meaning2: "di un eroe" },
      { singular: "l'osso", plural1: "gli ossi", meaning1: "da dare ai cani", plural2: "le ossa", meaning2: "del corpo umano" },
      { singular: "il ciglio", plural1: "i cigli", meaning1: "delle strade", plural2: "le ciglia", meaning2: "degli occhi" },
      { singular: "il muro", plural1: "i muri", meaning1: "di una casa", plural2: "le mura", meaning2: "di una città" },
      { singular: "il labbro", plural1: "i labbri", meaning1: "di una ferita", plural2: "le labbra", meaning2: "della bocca" }
    ] %>

    <div class="space-y-4 text-base md:text-lg">
      <% sovrabbondanti.each do |noun| %>
        <div class="bg-purple-50 border-2 border-purple-200 rounded-xl px-3 py-4">
          <div class="font-bold text-purple-700 mb-3"><%= noun[:singular] %></div>
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
            <div class="bg-white rounded-lg p-3 border-2 border-purple-300">
              <span class="font-semibold text-purple-800"><%= noun[:plural1] %></span>
              <span class="text-gray-600"> (<%= noun[:meaning1] %>)</span>
            </div>
            <div class="bg-white rounded-lg p-3 border-2 border-purple-300">
              <span class="font-semibold text-purple-800"><%= noun[:plural2] %></span>
              <span class="text-gray-600"> (<%= noun[:meaning2] %>)</span>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Exercise 7: Complete sentences with correct plural -->
  <div class="mb-6 bg-white rounded-2xl border-4 border-green-200 shadow-2xl p-4 md:p-6" data-controller="exercise-group">
    <h2 class="text-lg md:text-xl font-bold text-green-700 mb-3">
      <span class="font-bold">7</span> Completa ogni frase con il plurale corretto.
    </h2>

    <% plural_sentences = [
      { text: "Dopo il pranzo non restavano che", answer: "gli ossi", options: ["gli ossi", "le ossa"], continuation: "da dare ai cani." },
      { text: "Quel nuotatore non ha gambe molto potenti, ma ha", answer: "le braccia", options: ["i bracci", "le braccia"], continuation: "forti." },
      { text: "", answer: "le mura", options: ["i muri", "le mura"], continuation: "della città di Ferrara avevano scopo difensivo.", prefix: true },
      { text: "Alcune gocce gli erano rimaste tra", answer: "le ciglia", options: ["i cigli", "le ciglia"], continuation: ": forse erano lacrime." }
    ] %>

    <div class="space-y-3 text-base md:text-lg">
      <% plural_sentences.each_with_index do |sentence, index| %>
        <div class="bg-green-50 border-2 border-green-200 rounded-xl px-3 py-3">
          <div class="flex flex-wrap items-center gap-2">
            <span class="text-gray-700">- <%= sentence[:text] %></span>
            <select class="border-2 border-green-300 rounded-lg px-3 py-1 focus:outline-none focus:border-green-500"
                    data-correct-answer="<%= sentence[:answer] %>">
              <option value="">Scegli...</option>
              <% sentence[:options].each do |option| %>
                <option value="<%= option %>"><%= option %></option>
              <% end %>
            </select>
            <span class="text-gray-700"><%= sentence[:continuation] %></span>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="text-right text-sm text-gray-500 mb-6">
    Esercizi pp. <%= link_to "146", pagina_path("nvl5_gram_p146"), class: "text-gray-600 hover:text-gray-800 underline" %>, <%= link_to "147", pagina_path("nvl5_gram_p147"), class: "text-gray-600 hover:text-gray-800 underline" %>, <%= link_to "148", pagina_path("nvl5_gram_p148"), class: "text-gray-600 hover:text-gray-800 underline" %>, <%= link_to "153", pagina_path("nvl5_gram_p153"), class: "text-gray-600 hover:text-gray-800 underline" %>
  </div>

  <!-- Exercise Controls -->
  <div class="mt-6">
    <%= render 'shared/exercise_controls', color: 'teal', current_page: 'nvl5_gram_p045' %>
  </div>
</div>
