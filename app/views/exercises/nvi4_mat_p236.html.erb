<div class="max-w-6xl mx-auto bg-white dark:bg-gray-900 p-3 md:p-6 transition-colors duration-300"
     data-controller="exercise-checker text-toggle font-controls"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <%= render 'shared/page_header', pagina: @pagina %>

  <div class="space-y-6">

    <!-- Box tipi di angoli -->
    <div class="p-4 bg-custom-blue dark:bg-cyan-900 rounded-2xl">
      <div class="grid grid-cols-2 md:grid-cols-5 gap-4 text-center">
        <!-- Angolo acuto -->
        <div>
          <div class="h-20 flex items-end justify-center mb-2">
            <svg width="80" height="60" viewBox="0 0 80 60" class="text-gray-700 dark:text-gray-300">
              <line x1="10" y1="50" x2="70" y2="50" stroke="currentColor" stroke-width="2"/>
              <line x1="10" y1="50" x2="50" y2="15" stroke="currentColor" stroke-width="2"/>
              <path d="M 25 50 A 15 15 0 0 1 22 40" fill="none" stroke="currentColor" stroke-width="1.5"/>
              <circle cx="10" cy="50" r="3" fill="currentColor"/>
            </svg>
          </div>
          <p class="font-bold text-cyan-600 dark:text-cyan-400">angolo acuto</p>
          <p class="text-gray-700 dark:text-gray-200">&lt; 90°</p>
        </div>

        <!-- Angolo retto -->
        <div>
          <div class="h-20 flex items-end justify-center mb-2">
            <svg width="80" height="60" viewBox="0 0 80 60" class="text-gray-700 dark:text-gray-300">
              <line x1="20" y1="50" x2="70" y2="50" stroke="currentColor" stroke-width="2"/>
              <line x1="20" y1="50" x2="20" y2="10" stroke="currentColor" stroke-width="2"/>
              <rect x="20" y="40" width="10" height="10" fill="none" stroke="currentColor" stroke-width="1.5"/>
              <circle cx="20" cy="50" r="3" fill="currentColor"/>
            </svg>
          </div>
          <p class="font-bold text-cyan-600 dark:text-cyan-400">angolo retto</p>
          <p class="text-gray-700 dark:text-gray-200">90°</p>
        </div>

        <!-- Angolo ottuso -->
        <div>
          <div class="h-20 flex items-end justify-center mb-2">
            <svg width="80" height="60" viewBox="0 0 80 60" class="text-gray-700 dark:text-gray-300">
              <line x1="10" y1="40" x2="70" y2="40" stroke="currentColor" stroke-width="2"/>
              <line x1="30" y1="40" x2="60" y2="10" stroke="currentColor" stroke-width="2"/>
              <path d="M 45 40 A 15 15 0 0 1 48 28" fill="none" stroke="currentColor" stroke-width="1.5"/>
              <circle cx="30" cy="40" r="3" fill="currentColor"/>
            </svg>
          </div>
          <p class="font-bold text-cyan-600 dark:text-cyan-400">angolo ottuso</p>
          <p class="text-gray-700 dark:text-gray-200">&gt; 90° e &lt; 180°</p>
        </div>

        <!-- Angolo piatto -->
        <div>
          <div class="h-20 flex items-end justify-center mb-2">
            <svg width="80" height="60" viewBox="0 0 80 60" class="text-gray-700 dark:text-gray-300">
              <line x1="5" y1="40" x2="75" y2="40" stroke="currentColor" stroke-width="2"/>
              <path d="M 55 40 A 15 15 0 0 1 25 40" fill="none" stroke="currentColor" stroke-width="1.5"/>
              <circle cx="40" cy="40" r="3" fill="currentColor"/>
            </svg>
          </div>
          <p class="font-bold text-cyan-600 dark:text-cyan-400">angolo piatto</p>
          <p class="text-gray-700 dark:text-gray-200">180°</p>
        </div>

        <!-- Angolo giro -->
        <div>
          <div class="h-20 flex items-end justify-center mb-2">
            <svg width="80" height="60" viewBox="0 0 80 60" class="text-gray-700 dark:text-gray-300">
              <line x1="40" y1="35" x2="75" y2="35" stroke="currentColor" stroke-width="2"/>
              <circle cx="40" cy="35" r="20" fill="none" stroke="currentColor" stroke-width="1.5"/>
              <circle cx="40" cy="35" r="3" fill="currentColor"/>
            </svg>
          </div>
          <p class="font-bold text-cyan-600 dark:text-cyan-400">angolo giro</p>
          <p class="text-gray-700 dark:text-gray-200">360°</p>
        </div>
      </div>
    </div>

    <!-- Esercizi IMPARARE TUTTI -->
    <div class="p-5 bg-white dark:bg-gray-800 rounded-2xl border-3 border-yellow-400 dark:border-yellow-500 space-y-6">

      <!-- Esercizio 1 -->
      <div class="space-y-3">
        <p class="font-bold text-gray-700 dark:text-gray-200">
          <%= imparare_tutti_badge(1) %>
          Completa.
        </p>

        <div class="space-y-2">
          <div class="flex items-center gap-2 flex-wrap">
            <span class="text-cyan-500">•</span>
            <span class="text-gray-700 dark:text-gray-200">Un angolo piatto corrisponde a</span>
            <input type="text" data-correct-answer="2" class="w-12 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white">
            <span class="text-gray-700 dark:text-gray-200">angoli retti.</span>
          </div>
          <div class="flex items-center gap-2 flex-wrap">
            <span class="text-cyan-500">•</span>
            <span class="text-gray-700 dark:text-gray-200">Un angolo giro corrisponde a</span>
            <input type="text" data-correct-answer="2" class="w-12 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white">
            <span class="text-gray-700 dark:text-gray-200">angoli piatti o a</span>
            <input type="text" data-correct-answer="4" class="w-12 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white">
            <span class="text-gray-700 dark:text-gray-200">angoli retti.</span>
          </div>
        </div>
      </div>

      <!-- Esercizio 2 -->
      <div class="space-y-3">
        <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-4">
          <div>
            <p class="font-bold text-gray-700 dark:text-gray-200">
              <%= imparare_tutti_badge(2) %>
              Colora di verde gli angoli acuti, di giallo gli angoli retti, di blu gli angoli ottusi.
            </p>
          </div>
          <div class="p-3 bg-white dark:bg-gray-800 border-3 border-dashed border-<%= @pagina.base_color %>-400 dark:border-<%= @pagina.base_color %>-500 md:w-1/3 shrink-0">
            <p class="text-gray-700 dark:text-gray-200">
              Usa l'angolo retto della <span class="font-bold text-cyan-600 dark:text-cyan-400">squadra</span> come modello.
            </p>
          </div>
        </div>

        <div class="flex justify-center">
          <%= image_tag "nvi4_mat/p236/p236_01.jpg", class: "max-w-full dark:bg-white dark:rounded-lg dark:p-2", alt: "Angoli da colorare" %>
        </div>
      </div>
    </div>

    <!-- Esercizio 3 -->
    <div class="space-y-4">
      <p class="font-bold text-gray-700 dark:text-gray-200">
        <%= numero_esercizio_badge(3) %> Misura con il goniometro e scrivi il nome e l'ampiezza di questi angoli.
      </p>

      <div class="grid grid-cols-2 md:grid-cols-5 gap-4">
        <div class="text-center space-y-2">
          <div class="h-24 flex items-center justify-center">
            <svg width="100" height="70" viewBox="0 0 100 70" class="text-gray-700 dark:text-gray-300">
              <line x1="10" y1="60" x2="90" y2="60" stroke="currentColor" stroke-width="2"/>
              <line x1="10" y1="60" x2="60" y2="20" stroke="currentColor" stroke-width="2"/>
              <path d="M 30 60 A 20 20 0 0 1 28 48" fill="none" stroke="#0891b2" stroke-width="2" stroke-dasharray="4"/>
              <circle cx="10" cy="60" r="3" fill="currentColor"/>
            </svg>
          </div>
          <input type="text" placeholder="nome" data-correct-answer="acuto" class="w-full border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white">
          <input type="text" placeholder="gradi" data-correct-answer="45°" class="w-16 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white">
        </div>

        <div class="text-center space-y-2">
          <div class="h-24 flex items-center justify-center">
            <svg width="100" height="70" viewBox="0 0 100 70" class="text-gray-700 dark:text-gray-300">
              <line x1="50" y1="60" x2="50" y2="10" stroke="currentColor" stroke-width="2"/>
              <line x1="50" y1="60" x2="20" y2="20" stroke="currentColor" stroke-width="2"/>
              <path d="M 50 45 A 15 15 0 0 0 40 50" fill="none" stroke="#0891b2" stroke-width="2" stroke-dasharray="4"/>
              <circle cx="50" cy="60" r="3" fill="currentColor"/>
            </svg>
          </div>
          <input type="text" placeholder="nome" data-correct-answer="acuto" class="w-full border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white">
          <input type="text" placeholder="gradi" data-correct-answer="60°" class="w-16 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white">
        </div>

        <div class="text-center space-y-2">
          <div class="h-24 flex items-center justify-center">
            <svg width="100" height="70" viewBox="0 0 100 70" class="text-gray-700 dark:text-gray-300">
              <line x1="20" y1="50" x2="80" y2="50" stroke="currentColor" stroke-width="2"/>
              <line x1="20" y1="50" x2="20" y2="10" stroke="currentColor" stroke-width="2"/>
              <rect x="20" y="38" width="12" height="12" fill="none" stroke="#0891b2" stroke-width="2" stroke-dasharray="4"/>
              <circle cx="20" cy="50" r="3" fill="currentColor"/>
            </svg>
          </div>
          <input type="text" placeholder="nome" data-correct-answer="retto" class="w-full border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white">
          <input type="text" placeholder="gradi" data-correct-answer="90°" class="w-16 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white">
        </div>

        <div class="text-center space-y-2">
          <div class="h-24 flex items-center justify-center">
            <svg width="100" height="70" viewBox="0 0 100 70" class="text-gray-700 dark:text-gray-300">
              <line x1="10" y1="50" x2="90" y2="50" stroke="currentColor" stroke-width="2"/>
              <path d="M 70 50 A 30 30 0 0 1 10 50" fill="none" stroke="#0891b2" stroke-width="2" stroke-dasharray="4"/>
              <circle cx="40" cy="50" r="3" fill="currentColor"/>
            </svg>
          </div>
          <input type="text" placeholder="nome" data-correct-answer="piatto" class="w-full border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white">
          <input type="text" placeholder="gradi" data-correct-answer="180°" class="w-16 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white">
        </div>

        <div class="text-center space-y-2">
          <div class="h-24 flex items-center justify-center">
            <svg width="100" height="70" viewBox="0 0 100 70" class="text-gray-700 dark:text-gray-300">
              <line x1="50" y1="50" x2="90" y2="50" stroke="currentColor" stroke-width="2"/>
              <ellipse cx="50" cy="45" rx="25" ry="15" fill="none" stroke="#0891b2" stroke-width="2" stroke-dasharray="4"/>
              <circle cx="50" cy="50" r="3" fill="currentColor"/>
            </svg>
          </div>
          <input type="text" placeholder="nome" data-correct-answer="giro" class="w-full border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white">
          <input type="text" placeholder="gradi" data-correct-answer="360°" class="w-16 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white">
        </div>
      </div>
    </div>

    <!-- Esercizio 4 -->
    <div class="space-y-4">
      <p class="font-bold text-gray-700 dark:text-gray-200">
        <%= numero_esercizio_badge(4) %> Misura con il goniometro e scrivi l'ampiezza di questi angoli. Poi indica se si tratta di un angolo acuto <span class="px-1 border border-gray-400 dark:border-gray-500">A</span>, ottuso <span class="px-1 border border-gray-400 dark:border-gray-500">O</span> o retto <span class="px-1 border border-gray-400 dark:border-gray-500">R</span>. Segui l'esempio.
      </p>

      <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        <!-- Esempio -->
        <div class="text-center space-y-2">
          <div class="h-32 flex items-center justify-center">
            <svg width="100" height="100" viewBox="0 0 100 100" class="text-gray-700 dark:text-gray-300">
              <line x1="20" y1="80" x2="80" y2="80" stroke="currentColor" stroke-width="2"/>
              <line x1="20" y1="80" x2="60" y2="30" stroke="currentColor" stroke-width="2"/>
              <path d="M 35 80 A 15 15 0 0 1 35 68" fill="none" stroke="#0891b2" stroke-width="2" stroke-dasharray="4"/>
              <circle cx="20" cy="80" r="3" fill="currentColor"/>
            </svg>
          </div>
          <div class="flex items-center justify-center gap-2">
            <span class="text-gray-700 dark:text-gray-200">misura</span>
            <span class="font-bold text-cyan-600 dark:text-cyan-400">70°</span>
            <span class="px-2 py-1 border-2 border-cyan-500 font-bold text-cyan-600 dark:text-cyan-400">A</span>
          </div>
        </div>

        <!-- Angolo 2 -->
        <div class="text-center space-y-2">
          <div class="h-32 flex items-center justify-center">
            <svg width="100" height="100" viewBox="0 0 100 100" class="text-gray-700 dark:text-gray-300">
              <line x1="50" y1="90" x2="50" y2="20" stroke="currentColor" stroke-width="2"/>
              <line x1="50" y1="90" x2="20" y2="30" stroke="currentColor" stroke-width="2"/>
              <path d="M 50 70 A 20 20 0 0 0 38 78" fill="none" stroke="#0891b2" stroke-width="2" stroke-dasharray="4"/>
              <circle cx="50" cy="90" r="3" fill="currentColor"/>
            </svg>
          </div>
          <div class="flex items-center justify-center gap-2">
            <span class="text-gray-700 dark:text-gray-200">misura</span>
            <input type="text" data-correct-answer="120°" class="w-14 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white">
            <input type="text" data-correct-answer="O" class="w-8 border-2 border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white">
          </div>
        </div>

        <!-- Angolo 3 -->
        <div class="text-center space-y-2">
          <div class="h-32 flex items-center justify-center">
            <svg width="100" height="100" viewBox="0 0 100 100" class="text-gray-700 dark:text-gray-300">
              <line x1="20" y1="60" x2="80" y2="60" stroke="currentColor" stroke-width="2"/>
              <line x1="20" y1="60" x2="70" y2="30" stroke="currentColor" stroke-width="2"/>
              <path d="M 40 60 A 20 20 0 0 1 38 48" fill="none" stroke="#0891b2" stroke-width="2" stroke-dasharray="4"/>
              <circle cx="20" cy="60" r="3" fill="currentColor"/>
            </svg>
          </div>
          <div class="flex items-center justify-center gap-2">
            <span class="text-gray-700 dark:text-gray-200">misura</span>
            <input type="text" data-correct-answer="30°" class="w-14 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white">
            <input type="text" data-correct-answer="A" class="w-8 border-2 border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white">
          </div>
        </div>

        <!-- Angolo 4 -->
        <div class="text-center space-y-2">
          <div class="h-32 flex items-center justify-center">
            <svg width="100" height="100" viewBox="0 0 100 100" class="text-gray-700 dark:text-gray-300">
              <line x1="50" y1="80" x2="50" y2="20" stroke="currentColor" stroke-width="2"/>
              <line x1="50" y1="80" x2="80" y2="30" stroke="currentColor" stroke-width="2"/>
              <path d="M 50 60 A 20 20 0 0 1 62 65" fill="none" stroke="#0891b2" stroke-width="2" stroke-dasharray="4"/>
              <circle cx="50" cy="80" r="3" fill="currentColor"/>
            </svg>
          </div>
          <div class="flex items-center justify-center gap-2">
            <span class="text-gray-700 dark:text-gray-200">misura</span>
            <input type="text" data-correct-answer="55°" class="w-14 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white">
            <input type="text" data-correct-answer="A" class="w-8 border-2 border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white">
          </div>
        </div>
      </div>
    </div>

    <%= render 'shared/exercise_controls' %>
  </div>
</div>
