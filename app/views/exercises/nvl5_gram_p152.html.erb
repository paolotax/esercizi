  <!-- Exercise 2: Partitive articles -->
  <div class="mb-6 bg-white rounded-2xl border-4 border-purple-200 shadow-2xl p-4 md:p-6" data-controller="fill-blanks">
    <h2 class="text-lg md:text-xl font-bold text-purple-700 mb-3 flex items-start gap-2">
      <span class="bg-purple-600 text-white rounded-full w-8 h-8 md:w-10 md:h-10 inline-flex items-center justify-center flex-shrink-0">2</span>
      <span>Completa con gli <span class="text-purple-600 font-bold underline">articoli partitivi</span> adatti.</span>
    </h2>

    <% sentences = [
      { text: "Al mercato il papà ha comprato", blanks: ["delle", "dei"], after: "arance e", after2: "pompelmi." },
      { text: "Stasera Gianni esce con", blanks: ["degli"], after: "amici." },
      { text: "Per pranzo porto", blanks: ["dei"], after: "panini." },
      { text: "A pranzo ho mangiato", blanks: ["del"], after: "tonno." },
      { text: "Vuoi", blanks: ["del"], after: "formaggio?" },
      { text: "Nella cassetta c'era", blanks: ["della"], after: "frutta esotica." },
      { text: "A scuola abbiamo fatto", blanks: ["delle"], after: "maschere." }
    ] %>

    <div class="space-y-3 text-base md:text-lg">
      <% sentences.each do |s| %>
        <div class="bg-purple-50 border-2 border-purple-200 rounded-xl px-4 py-3">
          <p class="text-gray-700">
            • <%= s[:text] %>
            <% s[:blanks].each_with_index do |blank, idx| %>
              <input type="text" class="border-b-2 border-purple-500 bg-transparent px-2 py-1 w-16 focus:outline-none focus:border-purple-700 mx-1" data-fill-blanks-target="input" data-answer="<%= blank %>" placeholder="....">
              <%= idx == 0 && s[:after] ? s[:after] : '' %>
            <% end %>
            <%= s[:after2] || (s[:blanks].length == 1 ? s[:after] : '') %>
          </p>
        </div>
      <% end %>
    </div>
  </div>

