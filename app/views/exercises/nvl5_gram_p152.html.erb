          <input type="text" class="border-b-2 border-dotted border-gray-400 bg-transparent px-2 py-1 focus:outline-none focus:border-<%= @pagina.base_color %>-500 flex-1" data-fill-blanks-target="input" data-answer="libro">
        </div>
        <div class="flex items-center gap-2">
          <span class="bg-<%= @pagina.base_color %>-500 text-white font-bold px-3 py-1 rounded">un</span>
          <span class="text-gray-400">→</span>
          <span class="text-gray-400">stesso nome sopra</span>
        </div>
      </div>

      <!-- l'/un' -->
      <div class="bg-white rounded-lg p-4">
        <div class="flex items-center gap-2 mb-2">
          <span class="bg-<%= @pagina.base_color %>-500 text-white font-bold px-3 py-1 rounded">l'</span>
          <span class="text-gray-400">→</span>
          <input type="text" class="border-b-2 border-dotted border-gray-400 bg-transparent px-2 py-1 focus:outline-none focus:border-<%= @pagina.base_color %>-500 flex-1" data-fill-blanks-target="input" data-answer="amica">
        </div>
        <div class="flex items-center gap-2">
          <span class="bg-<%= @pagina.base_color %>-500 text-white font-bold px-3 py-1 rounded">un'</span>
          <span class="text-gray-400">→</span>
          <span class="text-gray-400">stesso nome sopra</span>
        </div>
      </div>

      <!-- l'/un -->
      <div class="bg-white rounded-lg p-4">
        <div class="flex items-center gap-2 mb-2">
          <span class="bg-<%= @pagina.base_color %>-500 text-white font-bold px-3 py-1 rounded">l'</span>
          <span class="text-gray-400">→</span>
          <input type="text" class="border-b-2 border-dotted border-gray-400 bg-transparent px-2 py-1 focus:outline-none focus:border-<%= @pagina.base_color %>-500 flex-1" data-fill-blanks-target="input" data-answer="amico">
        </div>
        <div class="flex items-center gap-2">
          <span class="bg-<%= @pagina.base_color %>-500 text-white font-bold px-3 py-1 rounded">un</span>
          <span class="text-gray-400">→</span>
          <span class="text-gray-400">stesso nome sopra</span>
        </div>
      </div>

      <!-- lo/uno -->
      <div class="bg-white rounded-lg p-4">
        <div class="flex items-center gap-2 mb-2">
          <span class="bg-<%= @pagina.base_color %>-500 text-white font-bold px-3 py-1 rounded">lo</span>
          <span class="text-gray-400">→</span>
          <input type="text" class="border-b-2 border-dotted border-gray-400 bg-transparent px-2 py-1 focus:outline-none focus:border-<%= @pagina.base_color %>-500 flex-1" data-fill-blanks-target="input" data-answer="zaino">
        </div>
        <div class="flex items-center gap-2">
          <span class="bg-<%= @pagina.base_color %>-500 text-white font-bold px-3 py-1 rounded">uno</span>
          <span class="text-gray-400">→</span>
          <span class="text-gray-400">stesso nome sopra</span>
        </div>
      </div>

      <!-- i/dei -->
      <div class="bg-white rounded-lg p-4">
        <div class="flex items-center gap-2 mb-2">
          <span class="bg-<%= @pagina.base_color %>-500 text-white font-bold px-3 py-1 rounded">i</span>
          <span class="text-gray-400">→</span>
          <input type="text" class="border-b-2 border-dotted border-gray-400 bg-transparent px-2 py-1 focus:outline-none focus:border-<%= @pagina.base_color %>-500 flex-1" data-fill-blanks-target="input" data-answer="libri">
        </div>
        <div class="flex items-center gap-2">
          <span class="bg-<%= @pagina.base_color %>-500 text-white font-bold px-3 py-1 rounded">dei</span>
          <span class="text-gray-400">→</span>
          <span class="text-gray-400">stesso nome sopra</span>
        </div>
      </div>

      <!-- le/delle -->
      <div class="bg-white rounded-lg p-4">
        <div class="flex items-center gap-2 mb-2">
          <span class="bg-<%= @pagina.base_color %>-500 text-white font-bold px-3 py-1 rounded">le</span>
          <span class="text-gray-400">→</span>
          <input type="text" class="border-b-2 border-dotted border-gray-400 bg-transparent px-2 py-1 focus:outline-none focus:border-<%= @pagina.base_color %>-500 flex-1" data-fill-blanks-target="input" data-answer="amiche">
