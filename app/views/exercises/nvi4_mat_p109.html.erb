<div class="max-w-6xl mx-auto bg-gradient-to-b from-cyan-100 to-cyan-200 dark:from-gray-800 dark:to-gray-900 p-3 md:p-6 transition-colors duration-300"
     data-controller="exercise-checker text-toggle font-controls"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <%= render 'shared/page_header', pagina: @pagina %>

  <div class="space-y-6">

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

      <!-- Colonna sinistra - Forme geometriche -->
      <div class="space-y-6">

        <!-- PENTAGONO -->
        <div class="bg-white dark:bg-gray-700 rounded-3xl p-6 shadow-lg border-4 border-pink-400">
          <div class="bg-pink-500 text-white px-4 py-2 rounded-full font-bold text-center mb-4 inline-block">
            PENTAGONO
          </div>
          <div class="flex justify-center items-center h-40">
            <!-- Pentagono verde usando clip-path -->
            <div class="w-32 h-32 bg-green-500" style="clip-path: polygon(50% 0%, 100% 38%, 82% 100%, 18% 100%, 0% 38%);"></div>
          </div>
        </div>

        <!-- ESAGONO -->
        <div class="bg-white dark:bg-gray-700 rounded-3xl p-6 shadow-lg border-4 border-pink-400">
          <div class="bg-pink-500 text-white px-4 py-2 rounded-full font-bold text-center mb-4 inline-block">
            ESAGONO
          </div>
          <div class="flex justify-center items-center h-40">
            <!-- Esagono arancione usando clip-path -->
            <div class="w-32 h-28 bg-orange-400" style="clip-path: polygon(25% 0%, 75% 0%, 100% 50%, 75% 100%, 25% 100%, 0% 50%);"></div>
          </div>
        </div>

        <!-- OTTAGONO -->
        <div class="bg-white dark:bg-gray-700 rounded-3xl p-6 shadow-lg border-4 border-pink-400">
          <div class="bg-pink-500 text-white px-4 py-2 rounded-full font-bold text-center mb-4 inline-block">
            OTTAGONO
          </div>
          <div class="flex justify-center items-center h-40">
            <!-- Ottagono viola usando clip-path -->
            <div class="w-32 h-32 bg-purple-400" style="clip-path: polygon(30% 0%, 70% 0%, 100% 30%, 100% 70%, 70% 100%, 30% 100%, 0% 70%, 0% 30%);"></div>
          </div>
        </div>

      </div>

      <!-- Colonna destra - Esercizi -->
      <div class="space-y-6">

        <!-- Esercizio Scegli -->
        <div class="p-4 bg-white dark:bg-gray-800 rounded-2xl">
          <p class="font-bold text-pink-600 dark:text-pink-400 mb-3">
            <span class="text-pink-500">◆</span> Scegli.
          </p>
          <p class="text-gray-700 dark:text-gray-200 mb-4">
            • Quali forme hanno 4 lati?
          </p>
          <div class="space-y-2">
            <label class="flex items-center gap-2 p-2 bg-gray-50 dark:bg-gray-700 rounded-lg cursor-pointer hover:bg-gray-100 dark:hover:bg-gray-600">
              <input type="checkbox" class="w-5 h-5 accent-pink-500" data-correct-answer="true">
              <span class="text-gray-700 dark:text-gray-200 font-bold text-pink-600 dark:text-pink-400">QUADRATO</span>
            </label>
            <label class="flex items-center gap-2 p-2 bg-gray-50 dark:bg-gray-700 rounded-lg cursor-pointer hover:bg-gray-100 dark:hover:bg-gray-600">
              <input type="checkbox" class="w-5 h-5 accent-pink-500" data-correct-answer="false">
              <span class="text-gray-700 dark:text-gray-200 font-bold text-pink-600 dark:text-pink-400">TRIANGOLO</span>
            </label>
            <label class="flex items-center gap-2 p-2 bg-gray-50 dark:bg-gray-700 rounded-lg cursor-pointer hover:bg-gray-100 dark:hover:bg-gray-600">
              <input type="checkbox" class="w-5 h-5 accent-pink-500" data-correct-answer="false">
              <span class="text-gray-700 dark:text-gray-200 font-bold text-pink-600 dark:text-pink-400">PENTAGONO</span>
            </label>
            <label class="flex items-center gap-2 p-2 bg-gray-50 dark:bg-gray-700 rounded-lg cursor-pointer hover:bg-gray-100 dark:hover:bg-gray-600">
              <input type="checkbox" class="w-5 h-5 accent-pink-500" data-correct-answer="true">
              <span class="text-gray-700 dark:text-gray-200 font-bold text-pink-600 dark:text-pink-400">RETTANGOLO</span>
            </label>
            <label class="flex items-center gap-2 p-2 bg-gray-50 dark:bg-gray-700 rounded-lg cursor-pointer hover:bg-gray-100 dark:hover:bg-gray-600">
              <input type="checkbox" class="w-5 h-5 accent-pink-500" data-correct-answer="true">
              <span class="text-gray-700 dark:text-gray-200 font-bold text-pink-600 dark:text-pink-400">ROMBO</span>
            </label>
            <label class="flex items-center gap-2 p-2 bg-gray-50 dark:bg-gray-700 rounded-lg cursor-pointer hover:bg-gray-100 dark:hover:bg-gray-600">
              <input type="checkbox" class="w-5 h-5 accent-pink-500" data-correct-answer="false">
              <span class="text-gray-700 dark:text-gray-200 font-bold text-pink-600 dark:text-pink-400">ESAGONO</span>
            </label>
            <label class="flex items-center gap-2 p-2 bg-gray-50 dark:bg-gray-700 rounded-lg cursor-pointer hover:bg-gray-100 dark:hover:bg-gray-600">
              <input type="checkbox" class="w-5 h-5 accent-pink-500" data-correct-answer="true">
              <span class="text-gray-700 dark:text-gray-200 font-bold text-pink-600 dark:text-pink-400">PARALLELOGRAMMA</span>
            </label>
            <label class="flex items-center gap-2 p-2 bg-gray-50 dark:bg-gray-700 rounded-lg cursor-pointer hover:bg-gray-100 dark:hover:bg-gray-600">
              <input type="checkbox" class="w-5 h-5 accent-pink-500" data-correct-answer="true">
              <span class="text-gray-700 dark:text-gray-200 font-bold text-pink-600 dark:text-pink-400">TRAPEZIO</span>
            </label>
            <label class="flex items-center gap-2 p-2 bg-gray-50 dark:bg-gray-700 rounded-lg cursor-pointer hover:bg-gray-100 dark:hover:bg-gray-600">
              <input type="checkbox" class="w-5 h-5 accent-pink-500" data-correct-answer="false">
              <span class="text-gray-700 dark:text-gray-200 font-bold text-pink-600 dark:text-pink-400">OTTAGONO</span>
            </label>
          </div>
        </div>

        <!-- Esercizio Collega -->
        <div class="p-4 bg-white dark:bg-gray-800 rounded-2xl">
          <p class="font-bold text-pink-600 dark:text-pink-400 mb-3">
            <span class="text-pink-500">◆</span> Collega.
          </p>
          <div class="space-y-3">
            <div class="flex items-center justify-between">
              <span class="text-pink-600 dark:text-pink-400 font-bold">• Il TRIANGOLO</span>
              <select data-correct-answer="3" class="border-2 border-gray-300 dark:border-gray-500 rounded px-3 py-1 bg-white dark:bg-gray-600 text-gray-700 dark:text-gray-200">
                <option value="">...</option>
                <option value="3">ha 3 lati.</option>
                <option value="5">ha 5 lati.</option>
                <option value="6">ha 6 lati.</option>
                <option value="8">ha 8 lati.</option>
              </select>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-pink-600 dark:text-pink-400 font-bold">• Il PENTAGONO</span>
              <select data-correct-answer="5" class="border-2 border-gray-300 dark:border-gray-500 rounded px-3 py-1 bg-white dark:bg-gray-600 text-gray-700 dark:text-gray-200">
                <option value="">...</option>
                <option value="3">ha 3 lati.</option>
                <option value="5">ha 5 lati.</option>
                <option value="6">ha 6 lati.</option>
                <option value="8">ha 8 lati.</option>
              </select>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-pink-600 dark:text-pink-400 font-bold">• L'ESAGONO</span>
              <select data-correct-answer="6" class="border-2 border-gray-300 dark:border-gray-500 rounded px-3 py-1 bg-white dark:bg-gray-600 text-gray-700 dark:text-gray-200">
                <option value="">...</option>
                <option value="3">ha 3 lati.</option>
                <option value="5">ha 5 lati.</option>
                <option value="6">ha 6 lati.</option>
                <option value="8">ha 8 lati.</option>
              </select>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-pink-600 dark:text-pink-400 font-bold">• L'OTTAGONO</span>
              <select data-correct-answer="8" class="border-2 border-gray-300 dark:border-gray-500 rounded px-3 py-1 bg-white dark:bg-gray-600 text-gray-700 dark:text-gray-200">
                <option value="">...</option>
                <option value="3">ha 3 lati.</option>
                <option value="5">ha 5 lati.</option>
                <option value="6">ha 6 lati.</option>
                <option value="8">ha 8 lati.</option>
              </select>
            </div>
          </div>
        </div>

        <!-- Esercizio Completa -->
        <div class="p-4 bg-white dark:bg-gray-800 rounded-2xl">
          <p class="font-bold text-pink-600 dark:text-pink-400 mb-3">
            <span class="text-pink-500">◆</span> Completa.
          </p>

          <div class="space-y-4">
            <!-- Prima domanda -->
            <div class="flex items-start gap-4">
              <div class="flex-1">
                <p class="text-gray-700 dark:text-gray-200">
                  • Il <input type="text" data-correct-answer="lato" class="w-24 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white"> è ciascuno dei segmenti che formano il contorno di un poligono. Tutte le forme di queste due pagine sono poligoni.
                </p>
              </div>
              <div class="w-16 h-16 bg-yellow-400 flex-shrink-0"></div>
            </div>

            <!-- Seconda domanda -->
            <div class="flex items-start gap-4">
              <div class="flex-1">
                <p class="text-gray-700 dark:text-gray-200">
                  • Il <span class="text-pink-600 dark:text-pink-400 font-bold">QUADRATO</span>, il <span class="text-pink-600 dark:text-pink-400 font-bold">RETTANGOLO</span>, il <span class="text-pink-600 dark:text-pink-400 font-bold">PARALLELOGRAMMA</span>, il <span class="text-pink-600 dark:text-pink-400 font-bold">TRAPEZIO</span> e il
                  <input type="text" data-correct-answer="rombo" class="w-24 border-b-2 border-dotted border-gray-400 dark:border-gray-500 text-center font-bold bg-transparent dark:text-white">
                  sono quadrilateri.
                </p>
              </div>
              <div class="w-16 h-16 bg-cyan-400 transform rotate-45 flex-shrink-0"></div>
            </div>
          </div>
        </div>

      </div>

    </div>

    <%= render 'shared/exercise_controls' %>
  </div>
</div>
