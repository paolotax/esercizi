<div class="max-w-6xl mx-auto p-3 md:p-8 bg-gradient-to-br from-purple-50 via-white to-pink-50 rounded-3xl shadow-xl" data-controller="exercise-checker">

  <%= render 'shared/page_header', pagina: @pagina %>

  <!-- Le mie competenze section -->
  <div class="mb-8 bg-gradient-to-r from-indigo-100 to-purple-100 rounded-2xl border-4 border-indigo-300 shadow-xl p-4 md:p-6">
    <h2 class="text-xl md:text-2xl font-bold text-indigo-700 mb-4">Le mie competenze</h2>
  </div>

  <!-- Exercise 8 -->
  <div class="mb-6 bg-white rounded-2xl border-4 border-blue-200 shadow-2xl p-4 md:p-6" data-controller="multiple-choice">
    <h2 class="text-lg md:text-xl font-bold text-blue-700 mb-4">
      <span class="bg-blue-600 text-white rounded-full w-8 h-8 md:w-10 md:h-10 inline-flex items-center justify-center mr-2">8</span>
      Individua la frase senza particella pronominale.
    </h2>

    <div class="space-y-3 text-base md:text-lg">
      <% options = [
        { text: "Mi ha chiamato poco fa.", has_particle: true },
        { text: "Ti aspetto domani.", has_particle: true },
        { text: "Gli amici sono venuti a trovarmi.", has_particle: false, correct: true },
        { text: "Le ho dato il libro.", has_particle: true }
      ] %>

      <% options.each_with_index do |option, index| %>
        <label class="flex items-start gap-3 bg-blue-50 border-2 border-blue-200 rounded-xl px-4 py-3 cursor-pointer hover:bg-blue-100 transition">
          <input type="radio"
                 name="exercise8"
                 value="<%= index %>"
                 class="w-5 h-5 mt-1"
                 data-multiple-choice-target="input"
                 data-answer="<%= option[:correct] ? 'correct' : 'incorrect' %>">
          <span class="text-gray-700 flex-1"><%= option[:text] %></span>
        </label>
      <% end %>
    </div>
  </div>

  <!-- Exercise 9 -->
  <div class="mb-6 bg-white rounded-2xl border-4 border-green-200 shadow-2xl p-4 md:p-6" data-controller="multiple-choice">
    <h2 class="text-lg md:text-xl font-bold text-green-700 mb-4">
      <span class="bg-green-600 text-white rounded-full w-8 h-8 md:w-10 md:h-10 inline-flex items-center justify-center mr-2">9</span>
      Individua la frase dove "che" è pronome relativo soggetto.
    </h2>

    <div class="space-y-3 text-base md:text-lg">
      <% options = [
        { text: "Che bel vestito!", is_relative: false },
        { text: "Il libro che ho letto è bello.", is_relative: false },
        { text: "La ragazza che ha vinto è mia sorella.", is_relative: true, correct: true },
        { text: "Che cosa stai facendo?", is_relative: false }
      ] %>

      <% options.each_with_index do |option, index| %>
        <label class="flex items-start gap-3 bg-green-50 border-2 border-green-200 rounded-xl px-4 py-3 cursor-pointer hover:bg-green-100 transition">
          <input type="radio"
                 name="exercise9"
                 value="<%= index %>"
                 class="w-5 h-5 mt-1"
                 data-multiple-choice-target="input"
                 data-answer="<%= option[:correct] ? 'correct' : 'incorrect' %>">
          <span class="text-gray-700 flex-1"><%= option[:text] %></span>
        </label>
      <% end %>
    </div>
  </div>

  <!-- Completion message -->
  <div class="mb-6 bg-gradient-to-r from-green-100 to-emerald-100 rounded-2xl border-4 border-green-300 shadow-xl p-6 text-center">
    <h3 class="text-xl md:text-2xl font-bold text-green-700 mb-2">Verifica completata!</h3>
    <p class="text-base md:text-lg text-gray-700">
      Hai terminato la verifica su aggettivi e pronomi. Ottimo lavoro!
    </p>
  </div>

  <%= render partial: "shared/exercise_controls" %>

</div>
