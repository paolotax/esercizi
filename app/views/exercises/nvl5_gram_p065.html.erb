<div class="max-w-6xl mx-auto p-3 md:p-8 bg-white" data-controller="exercise-checker">

  <%= render 'shared/page_header', pagina: @pagina %>

  <!-- Le mie competenze section -->
  <div class="bg-<%= @pagina.base_color %>-50 p-4 md:p-6 pb-8 rounded-lg">
    <h2 class="text-xl md:text-2xl font-bold text-<%= @pagina.base_color %>-700">Le mie competenze</h2>
  </div>

  <!-- Exercise 8 -->
  <div class="bg-white p-4 md:p-6 pb-8" data-controller="multiple-choice">
    <h2 class="text-lg md:text-xl font-bold mb-4 flex items-center gap-2">
      <span class="flex-shrink-0 bg-<%= @pagina.base_color %>-500 text-white rounded-full w-8 h-8 md:w-10 md:h-10 inline-flex items-center justify-center">8</span>
      Individua la frase senza particella pronominale.
    </h2>

    <% options = [
      { text: "Mi ha chiamato poco fa.", has_particle: true },
      { text: "Ti aspetto domani.", has_particle: true },
      { text: "Gli amici sono venuti a trovarmi.", has_particle: false, correct: true },
      { text: "Le ho dato il libro.", has_particle: true }
    ] %>

    <div class="space-y-3 text-base md:text-lg">
      <% options.each_with_index do |option, index| %>
        <label class="flex items-start gap-3 bg-<%= @pagina.base_color %>-50 rounded-lg px-4 py-3 cursor-pointer hover:bg-<%= @pagina.base_color %>-100 transition">
          <input type="radio" name="exercise8" value="<%= index %>" class="w-5 h-5 mt-1" data-multiple-choice-target="input" data-answer="<%= option[:correct] ? 'correct' : 'incorrect' %>">
          <span class="text-gray-700 flex-1"><%= option[:text] %></span>
        </label>
      <% end %>
    </div>
  </div>

  <!-- Exercise 9 -->
  <div class="bg-white p-4 md:p-6 pb-8" data-controller="multiple-choice">
    <h2 class="text-lg md:text-xl font-bold mb-4 flex items-center gap-2">
      <span class="flex-shrink-0 bg-<%= @pagina.base_color %>-500 text-white rounded-full w-8 h-8 md:w-10 md:h-10 inline-flex items-center justify-center">9</span>
      Individua la frase dove "che" è pronome relativo soggetto.
    </h2>

    <% options = [
      { text: "Che bel vestito!", is_relative: false },
      { text: "Il libro che ho letto è bello.", is_relative: false },
      { text: "La ragazza che ha vinto è mia sorella.", is_relative: true, correct: true },
      { text: "Che cosa stai facendo?", is_relative: false }
    ] %>

    <div class="space-y-3 text-base md:text-lg">
      <% options.each_with_index do |option, index| %>
        <label class="flex items-start gap-3 bg-<%= @pagina.base_color %>-50 rounded-lg px-4 py-3 cursor-pointer hover:bg-<%= @pagina.base_color %>-100 transition">
          <input type="radio" name="exercise9" value="<%= index %>" class="w-5 h-5 mt-1" data-multiple-choice-target="input" data-answer="<%= option[:correct] ? 'correct' : 'incorrect' %>">
          <span class="text-gray-700 flex-1"><%= option[:text] %></span>
        </label>
      <% end %>
    </div>
  </div>

  <!-- Completion message -->
  <div class="bg-<%= @pagina.base_color %>-50 p-6 rounded-lg text-center">
    <h3 class="text-xl md:text-2xl font-bold text-<%= @pagina.base_color %>-700 mb-2">Verifica completata!</h3>
    <p class="text-base md:text-lg text-gray-700">
      Hai terminato la verifica su aggettivi e pronomi. Ottimo lavoro!
    </p>
  </div>

  <%= render 'shared/exercise_controls' %>
</div>
