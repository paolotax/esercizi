<% content_for :left_page_content do %>
  <%= render 'exercises/nvi5_mat_index_page_2' %>
<% end %>

<% content_for :right_page_content do %>
  <%= render 'exercises/nvi5_mat_index_page_3' %>
<% end %>

<div class="max-w-[1800px] mx-auto p-2 lg:p-8 bg-gradient-to-b from-pink-50 via-white to-pink-50">

  <!-- Two-page horizontal layout like an open book -->
  <div class="grid lg:grid-cols-2 gap-3 lg:gap-8">

    <!-- LEFT PAGE - Page 2 -->
    <div class="bg-white rounded-xl shadow-2xl p-3 lg:p-8 relative border-4 border-pink-200">
      <!-- Page number top right -->
      <div class="absolute top-2 right-2 lg:top-4 lg:right-4 bg-pink-600 text-white rounded-full w-8 h-8 lg:w-10 lg:h-10 flex items-center justify-center font-bold text-base lg:text-xl shadow-lg">
        2
      </div>

      <%= content_for(:left_page_content) %>
    </div>

    <!-- RIGHT PAGE - Page 3 -->
    <div class="bg-white rounded-xl shadow-2xl p-3 lg:p-8 relative border-4 border-pink-200">
      <!-- Page number top right -->
      <div class="absolute top-2 right-2 lg:top-4 lg:right-4 bg-pink-600 text-white rounded-full w-8 h-8 lg:w-10 lg:h-10 flex items-center justify-center font-bold text-base lg:text-xl shadow-lg">
        3
      </div>

      <%= content_for(:right_page_content) %>
    </div>

  </div>

  <%= render 'shared/exercise_controls', color: 'pink', show_exercise_buttons: false %>
</div>
