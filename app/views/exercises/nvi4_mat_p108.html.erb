<div class="max-w-6xl mx-auto bg-gradient-to-b from-cyan-100 to-cyan-200 dark:from-gray-800 dark:to-gray-900 p-3 md:p-6 transition-colors duration-300"
     data-controller="exercise-checker text-toggle font-controls"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <%= render 'shared/page_header', pagina: @pagina %>

  <div class="space-y-6">

    <!-- Intestazione PAROLE AL CENTRO -->
    <div class="flex items-start gap-4 mb-6">
      <div class="flex flex-col">
        <span class="text-yellow-500 font-bold">PAR<span class="text-pink-500">O</span>LE</span>
        <span class="text-cyan-500 font-bold italic">al centro</span>
      </div>
      <h2 class="font-bold text-pink-600 dark:text-pink-400 ml-8">GEOMETRIA</h2>
    </div>

    <!-- Griglia delle forme geometriche -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

      <!-- QUADRATO -->
      <div class="bg-white dark:bg-gray-700 rounded-3xl p-6 shadow-lg border-4 border-pink-400">
        <div class="bg-pink-500 text-white px-4 py-2 rounded-full font-bold text-center mb-4 inline-block">
          QUADRATO
        </div>
        <div class="flex justify-center items-center h-48 relative">
          <!-- Quadrato giallo -->
          <div class="w-36 h-36 bg-yellow-400 border-r-4 border-cyan-400 relative">
            <!-- Indicatore LATO -->
            <div class="absolute -right-16 top-1/2 -translate-y-1/2 flex items-center">
              <svg class="w-6 h-6 text-gray-600 dark:text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
              </svg>
              <span class="bg-gray-200 dark:bg-gray-600 px-2 py-1 rounded text-gray-700 dark:text-gray-200 font-bold ml-1">LATO</span>
            </div>
          </div>
        </div>
      </div>

      <!-- TRIANGOLO -->
      <div class="bg-white dark:bg-gray-700 rounded-3xl p-6 shadow-lg border-4 border-pink-400">
        <div class="bg-pink-500 text-white px-4 py-2 rounded-full font-bold text-center mb-4 inline-block">
          TRIANGOLO
        </div>
        <div class="flex justify-center items-center h-48">
          <!-- Triangolo rosso -->
          <div class="w-0 h-0 border-l-[80px] border-r-[80px] border-b-[140px] border-l-transparent border-r-transparent border-b-red-500"></div>
        </div>
      </div>

      <!-- RETTANGOLO -->
      <div class="bg-white dark:bg-gray-700 rounded-3xl p-6 shadow-lg border-4 border-pink-400">
        <div class="bg-pink-500 text-white px-4 py-2 rounded-full font-bold text-center mb-4 inline-block">
          RETTANGOLO
        </div>
        <div class="flex justify-center items-center h-48">
          <!-- Rettangolo teal -->
          <div class="w-48 h-28 bg-teal-500"></div>
        </div>
      </div>

      <!-- ROMBO -->
      <div class="bg-white dark:bg-gray-700 rounded-3xl p-6 shadow-lg border-4 border-pink-400">
        <div class="bg-pink-500 text-white px-4 py-2 rounded-full font-bold text-center mb-4 inline-block">
          ROMBO
        </div>
        <div class="flex justify-center items-center h-48">
          <!-- Rombo azzurro -->
          <div class="w-24 h-24 bg-cyan-400 transform rotate-45"></div>
        </div>
      </div>

      <!-- PARALLELOGRAMMA -->
      <div class="bg-white dark:bg-gray-700 rounded-3xl p-6 shadow-lg border-4 border-pink-400">
        <div class="bg-pink-500 text-white px-4 py-2 rounded-full font-bold text-center mb-4 inline-block">
          PARALLELOGRAMMA
        </div>
        <div class="flex justify-center items-center h-48">
          <!-- Parallelogramma verde -->
          <div class="w-48 h-28 bg-green-500 transform -skew-x-12"></div>
        </div>
      </div>

      <!-- TRAPEZIO -->
      <div class="bg-white dark:bg-gray-700 rounded-3xl p-6 shadow-lg border-4 border-pink-400">
        <div class="bg-pink-500 text-white px-4 py-2 rounded-full font-bold text-center mb-4 inline-block">
          TRAPEZIO
        </div>
        <div class="flex justify-center items-center h-48">
          <!-- Trapezio arancione usando clip-path -->
          <div class="w-48 h-28 bg-orange-500" style="clip-path: polygon(20% 0%, 80% 0%, 100% 100%, 0% 100%);"></div>
        </div>
      </div>

    </div>

  </div>
</div>
