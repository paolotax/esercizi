<% content_for :titolo, "#{@pagina.titolo} - #{@pagina.numero}" %>

<div class="max-w-4xl mx-auto p-3 md:p-6 bg-white font-mono"
     data-controller="exercise-checker page-viewer fill-blanks auto-advance text-toggle font-controls"
     data-page-viewer-image-url-value="<%= asset_path('bus3_mat/p108/page.png') %>"
     data-text-toggle-target="content"
     data-font-controls-target="content">

  <!-- Header -->
  <%= render 'shared/page_header', pagina: @pagina %>

  <!-- Esercizio 1 -->
  <div class="bg-blue-50 p-4 rounded-lg mb-8">
    <div class="flex items-start gap-3 mb-4">
      <div class="bg-red-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0">1</div>
      <p class="text-gray-700"><strong>Osserva il righello e leggi quanto è lunga la graffetta con due unità di misura diverse. Poi completa.</strong></p>
    </div>

    <div class="flex justify-center mb-4">
      <%= image_tag "bus3_mat/p108/p108_01.jpg", alt: "Righello con graffetta", class: "max-w-md w-full" %>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
      <div class="text-center">
        <input type="text" data-fill-blanks-target="input" data-correct-answer="3" class="w-16 px-2 py-1 border-b-2 border-dotted border-gray-400 bg-transparent text-center"> cm
      </div>
      <div class="text-center">
        <input type="text" data-fill-blanks-target="input" data-correct-answer="30" class="w-16 px-2 py-1 border-b-2 border-dotted border-gray-400 bg-transparent text-center"> mm
      </div>
    </div>
    <p class="text-center">Equivalenza: 3 cm = <input type="text" data-fill-blanks-target="input" data-correct-answer="30" class="w-16 px-2 py-1 border-b-2 border-dotted border-gray-400 bg-transparent text-center"> mm</p>

    <!-- Box teoria -->
    <div class="bg-pink-50 border-2 border-pink-200 rounded-lg p-3 mt-4">
      <p class="mb-2">Fare un'<strong class="text-pink-600">equivalenza</strong> vuol dire esprimere la <strong class="text-pink-600">stessa misura con unità di misura diverse</strong>.</p>
      <p class="mb-2">Quando esegui un'equivalenza:</p>
      <ul class="list-disc ml-6">
        <li>per passare da un'unità di misura più grande a una più piccola <strong class="text-pink-600">moltiplichi</strong> per 10, 100, 1000.</li>
        <li>per passare da un'unità di misura più piccola a una più grande <strong class="text-pink-600">dividi</strong> per 10, 100, 1000.</li>
      </ul>
    </div>
  </div>

  <!-- Esercizio 2 -->
  <div class="mb-16">
    <div class="flex items-start gap-3 mb-4">
      <div class="bg-red-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold flex-shrink-0">2</div>
      <p class="text-gray-700"><strong>Completa le tabelle.</strong></p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <!-- x10 m→dm -->
      <div class="text-center">
        <p class="text-pink-600 font-bold mb-2">× 10</p>
        <table class="w-full border-collapse">
          <thead><tr><th class="bg-pink-200 p-2 border text-blue-600">m</th><th class="bg-pink-100 p-2 border text-blue-600">dm</th></tr></thead>
          <tbody>
            <tr><td class="p-2 border">3</td><td class="p-2 border"><input type="text" data-fill-blanks-target="input" data-correct-answer="30" class="w-16 border-b-2 border-dotted border-gray-400 bg-transparent text-center"></td></tr>
            <tr><td class="p-2 border"><input type="text" data-fill-blanks-target="input" data-correct-answer="16" class="w-16 border-b-2 border-dotted border-gray-400 bg-transparent text-center"></td><td class="p-2 border">160</td></tr>
          </tbody>
        </table>
        <p class="text-green-600 font-bold mt-2">: 10</p>
      </div>
      <!-- x100 m→cm -->
      <div class="text-center">
        <p class="text-pink-600 font-bold mb-2">× 100</p>
        <table class="w-full border-collapse">
          <thead><tr><th class="bg-pink-200 p-2 border text-blue-600">m</th><th class="bg-pink-100 p-2 border text-blue-600">cm</th></tr></thead>
          <tbody>
            <tr><td class="p-2 border">9</td><td class="p-2 border"><input type="text" data-fill-blanks-target="input" data-correct-answer="900" class="w-16 border-b-2 border-dotted border-gray-400 bg-transparent text-center"></td></tr>
            <tr><td class="p-2 border"><input type="text" data-fill-blanks-target="input" data-correct-answer="4" class="w-16 border-b-2 border-dotted border-gray-400 bg-transparent text-center"></td><td class="p-2 border">400</td></tr>
          </tbody>
        </table>
        <p class="text-green-600 font-bold mt-2">: 100</p>
      </div>
      <!-- x1000 m→mm -->
      <div class="text-center">
        <p class="text-pink-600 font-bold mb-2">× 1000</p>
        <table class="w-full border-collapse">
          <thead><tr><th class="bg-purple-200 p-2 border text-blue-600">m</th><th class="bg-purple-100 p-2 border text-blue-600">mm</th></tr></thead>
          <tbody>
            <tr><td class="p-2 border">5</td><td class="p-2 border"><input type="text" data-fill-blanks-target="input" data-correct-answer="5000" class="w-16 border-b-2 border-dotted border-gray-400 bg-transparent text-center"></td></tr>
            <tr><td class="p-2 border"><input type="text" data-fill-blanks-target="input" data-correct-answer="8" class="w-16 border-b-2 border-dotted border-gray-400 bg-transparent text-center"></td><td class="p-2 border">8000</td></tr>
          </tbody>
        </table>
        <p class="text-green-600 font-bold mt-2">: 1000</p>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-6">
      <!-- x10 hm→dam -->
      <div class="text-center">
        <p class="text-pink-600 font-bold mb-2">× 10</p>
        <table class="w-full border-collapse">
          <thead><tr><th class="bg-pink-200 p-2 border text-blue-600">hm</th><th class="bg-pink-100 p-2 border text-blue-600">dam</th></tr></thead>
          <tbody>
            <tr><td class="p-2 border">5</td><td class="p-2 border"><input type="text" data-fill-blanks-target="input" data-correct-answer="50" class="w-16 border-b-2 border-dotted border-gray-400 bg-transparent text-center"></td></tr>
            <tr><td class="p-2 border">10</td><td class="p-2 border"><input type="text" data-fill-blanks-target="input" data-correct-answer="100" class="w-16 border-b-2 border-dotted border-gray-400 bg-transparent text-center"></td></tr>
            <tr><td class="p-2 border"><input type="text" data-fill-blanks-target="input" data-correct-answer="50" class="w-16 border-b-2 border-dotted border-gray-400 bg-transparent text-center"></td><td class="p-2 border">500</td></tr>
          </tbody>
        </table>
        <p class="text-green-600 font-bold mt-2">: 10</p>
      </div>
      <!-- x100 km→dam -->
      <div class="text-center">
        <p class="text-pink-600 font-bold mb-2">× 100</p>
        <table class="w-full border-collapse">
          <thead><tr><th class="bg-green-200 p-2 border text-blue-600">km</th><th class="bg-green-100 p-2 border text-blue-600">dam</th></tr></thead>
          <tbody>
            <tr><td class="p-2 border">1</td><td class="p-2 border"><input type="text" data-fill-blanks-target="input" data-correct-answer="100" class="w-16 border-b-2 border-dotted border-gray-400 bg-transparent text-center"></td></tr>
            <tr><td class="p-2 border"><input type="text" data-fill-blanks-target="input" data-correct-answer="50" class="w-16 border-b-2 border-dotted border-gray-400 bg-transparent text-center"></td><td class="p-2 border">5000</td></tr>
            <tr><td class="p-2 border">12</td><td class="p-2 border"><input type="text" data-fill-blanks-target="input" data-correct-answer="1200" class="w-16 border-b-2 border-dotted border-gray-400 bg-transparent text-center"></td></tr>
          </tbody>
        </table>
        <p class="text-green-600 font-bold mt-2">: 100</p>
      </div>
      <!-- x1000 km→m -->
      <div class="text-center">
        <p class="text-pink-600 font-bold mb-2">× 1000</p>
        <table class="w-full border-collapse">
          <thead><tr><th class="bg-purple-200 p-2 border text-blue-600">km</th><th class="bg-purple-100 p-2 border text-blue-600">m</th></tr></thead>
          <tbody>
            <tr><td class="p-2 border">1</td><td class="p-2 border"><input type="text" data-fill-blanks-target="input" data-correct-answer="1000" class="w-16 border-b-2 border-dotted border-gray-400 bg-transparent text-center"></td></tr>
            <tr><td class="p-2 border"><input type="text" data-fill-blanks-target="input" data-correct-answer="6" class="w-16 border-b-2 border-dotted border-gray-400 bg-transparent text-center"></td><td class="p-2 border">6000</td></tr>
            <tr><td class="p-2 border"><input type="text" data-fill-blanks-target="input" data-correct-answer="9" class="w-16 border-b-2 border-dotted border-gray-400 bg-transparent text-center"></td><td class="p-2 border">9000</td></tr>
          </tbody>
        </table>
        <p class="text-green-600 font-bold mt-2">: 1000</p>
      </div>
    </div>
  </div>

  <!-- Quaderno -->
  <div class="p-4 mb-8 text-right">
    <span class="text-gray-600">Quaderno →</span> <span class="text-blue-600 font-bold">p. 167</span>
  </div>

  <%= render 'shared/exercise_controls' %>
</div>
