<!DOCTYPE html>
<html>
  <%= render "layouts/shared/head" %>

  <body class="print text-gray-800 dark:text-white bg-playful dark:bg-playful-dark min-h-screen flex flex-col transition-colors duration-300">

    <div id="flash"></div>

    <%= render "layouts/shared/background_pattern" %>

    <%= render "shared/header" %>

    <!-- Main Content (no sidebar) -->
    <main class="flex-1 overflow-y-auto pb-16">
      <%= turbo_frame_tag "main-content", class: "block turbo-frame-fade", data: { turbo_action: "advance" } do %>
        <%= yield %>
      <% end %>
    </main>

    <!-- Bottom Bar (stile Fizzy) -->
    <footer class="print-hidden">
      <%= render "shared/bar" %>
    </footer>
  </body>
</html>
