<!DOCTYPE html>
<html>
  <%= render "layouts/shared/head" %>

  <body class="print text-gray-800 dark:text-white bg-playful dark:bg-playful-dark min-h-screen flex flex-col transition-colors duration-300">
    <!-- Header -->
    <header class="relative sticky top-0 z-50 w-full px-4 py-2 <%= @header_class %>" id="header">
      <%= render "layouts/shared/background_header" %>
      <a href="#main" class="sr-only focus:not-sr-only focus:absolute focus:top-16 focus:left-4 focus:z-50 focus:px-4 focus:py-2 focus:bg-white focus:rounded" data-turbo="false">Skip to main content</a>
      <div class="relative flex flex-col items-center">
        <%= render "shared/nav_menu" if Current.user %>
        <%= yield :header %>
      </div>
    </header>
    
    <%= render "layouts/shared/background_pattern" %>

    <%#= render "shared/header" %>

    <!-- Main Content (no sidebar) -->
    <main class="flex-1 overflow-y-auto pb-16">
      <%= turbo_frame_tag "main-content", class: "block turbo-frame-fade", data: { turbo_action: "advance" } do %>
        <%= yield %>
      <% end %>
    </main>

    <!-- Bottom Bar (stile Fizzy) -->
    <footer class="print-hidden">
      <%= render "shared/bar" %>
    </footer>
  </body>
</html>
