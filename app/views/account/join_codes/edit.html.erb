<% @page_title = "Modifica limite inviti" %>

<% content_for :header do %>
  <%= link_to account_join_code_path,
        data: { controller: "hotkey", action: "keydown.left@document->hotkey#click keydown.esc@document->hotkey#click" },
        class: "absolute top-1 left-2 sm:left-4 p-2 rounded-full bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-600 transition-colors" do %>
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
    </svg>
    <span class="sr-only">Torna agli inviti</span>
  <% end %>
<% end %>

<div class="h-full flex items-start justify-center dark:bg-gray-900 pt-16 pb-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-6 bg-white/80 dark:bg-gray-800/80 backdrop-blur-xl rounded-3xl shadow-2xl shadow-gray-900/10 p-8 md:p-10 fade-in-up card-lift">
    <header class="text-center">
      <h1 class="text-2xl font-extrabold text-gray-900 dark:text-white"><%= @page_title %></h1>
      <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">Imposta il numero massimo di persone che possono usare questo codice</p>
    </header>

    <%= form_with model: @join_code, url: account_join_code_path, method: :patch, class: "space-y-6", data: { controller: "form" } do |form| %>
      <div>
        <label for="account_join_code_usage_limit" class="block text-sm font-medium text-gray-700 dark:text-gray-300 text-left mb-1">Limite utilizzi</label>
        <%= form.number_field :usage_limit,
              class: "w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-700 text-gray-900 dark:text-white placeholder-gray-400 focus:ring-2 focus:ring-coral focus:border-transparent transition-all",
              min: @join_code.usage_count,
              max: 10000,
              autofocus: true,
              required: true,
              data: { "1p-ignore": true, action: "keydown.esc->form#cancel" } %>
        <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">
          Attualmente usato <%= @join_code.usage_count %> volte. Il limite minimo Ã¨ <%= @join_code.usage_count %>.
        </p>
      </div>

      <% if @join_code.errors.any? %>
        <div class="p-4 bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-xl text-left">
          <p class="text-sm font-medium text-red-800 dark:text-red-200">Le modifiche non possono essere salvate:</p>
          <ul class="mt-2 text-sm text-red-700 dark:text-red-300 list-disc list-inside">
            <% @join_code.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="flex flex-col gap-3 pt-4">
        <button type="submit" class="w-full px-6 py-3 bg-coral hover:bg-coral-dark text-white font-semibold rounded-xl transition-colors btn-press" data-form-target="submit">
          Salva limite
        </button>

        <%= link_to "Annulla", account_join_code_path,
              class: "text-center text-sm text-gray-600 dark:text-gray-400 hover:text-gray-800 dark:hover:text-gray-200 transition-colors" %>
      </div>
    <% end %>
  </div>
</div>
